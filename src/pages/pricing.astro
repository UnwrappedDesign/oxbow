---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { AstroSeo } from "@astrolib/seo";
import Crosses from "@/components/designAssets/Crosses.astro";
import Included from "@/components/global/Included.astro";
import Cta from "@/components/global/Cta.astro";
const pricingData = [
  {
    img: "/images/windstatic/windLogoDark.png",
    type: "Teams",
    price: "$199",
    audience: "For startup teams and agencies",
    features: [
      "Same as individual — plus get access to your team. This tier gives you access to up to 5 people.",
    ],
    cardStyles:
      "lg:border-r border-b lg:border-b-0 border-dashed order-first lg:order-none",
    purchaseButton: {
      text: "Buy for $299",
      class:
        "inline-flex items-center justify-between w-full gap-4 px-4 py-3 h-10 text-sm font-medium text-white transition rounded-lg bg-blue-950 group active:text-blue-200 active:transition-none outline-offset-2 hover:bg-blue-900 hover:text-white  ring-4 ring-blue-50 not-prose duration-300",
      link: "/api/buy/team",
    },
  },
  {
    img: "/images/windstatic/windLogo.png",
    type: "Individual",
    price: "$499",
    audience: "For individuals working on their projects or freelancers.",
    features: [
      "All components ",
      "Lifetime access ",
      "Unlimited projects ",
      "Free updates ",
      "Use in SaaS",
    ],
    cardStyles: " ",
    purchaseButton: {
      text: "Buy for $149",
      class:
        "inline-flex items-center justify-between w-full gap-4 px-4 py-3 h-10 text-sm font-medium text-white duration-300 transition rounded-lg bg-accent-500 group active:transition-none outline-offset-2 hover:bg-accent-600   ring-4 ring-blue-50 not-prose",
      link: "/api/buy/individual",
    },
  },
];
---

<AstroSeo
  title="Windstatic UI - Pricing "
  description="Unlock permanent access to all components, elements and layouts and future additions for a one-time payment."
  canonical="https://www.windstatic.com/pricing"
  openGraph={{
    url: "https://www.windstatic.com/images/OpenGraph/twitter.png",
    title: "Windstatic UI - Pricing",
    description:
      "Unlock permanent access to all components, elements and layouts and future additions for a one-time payment.",
    images: [
      {
        url: "https://www.windstatic.com/images/OpenGraph/facebook.png",
        width: 1200,
        height: 630,
        alt: "Windstatic",
        type: "image/png",
      },
      {
        url: "https://www.windstatic.com/images/OpenGraph/twitter.png",
        width: 4096,
        height: 4096,
        alt: "Windstatic",
        type: "image/png",
      },
      { url: "https://www.windstatic.com/images/OpenGraph/facebook.ong" },
      { url: "https://www.windstatic.com/images/OpenGraph/twitter.png" },
    ],
    site_name: "Windstatic",
  }}
  twitter={{
    handle: "@Mike_Andreuzza",
    site: "https://www.windstatic.com",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <section class="relative overflow-hidden">
    <div class="max-w-5xl 2xl:max-w-screen-xl px-8 mx-auto pt-12 relative">
      <div class="p-8 lg:p-10 border border-dashed relative lg:text-center">
        <Crosses />
        <div class="flex items-center lg:justify-center gap-4">
          <div class="inline-flex gap-2 items-center">
            <svg
              class="flex-none inline size-6"
              viewBox="0 0 64 64"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <g clip-path="url(#clip0_459_2)">
                <path
                  d="M32 12.75C23.4668 12.75 18.1332 17.0168 16 25.55C19.2 21.2833 22.9333 19.6832 27.2 20.75C29.6343 21.3585 31.3743 23.2498 33.3003 25.0795C36.4378 28.2643 40.0687 31.95 48 31.95C56.5332 31.95 61.8668 27.6832 64 19.15C60.8 23.4167 57.0667 25.0167 52.8 23.95C50.3657 23.3415 48.6257 21.4503 46.6997 19.6205C43.5622 16.4358 39.9313 12.75 32 12.75ZM16 31.95C7.46675 31.95 2.13325 36.2168 0 44.75C3.2 40.4833 6.93325 38.8833 11.2 39.95C13.6342 40.5585 15.3742 42.4497 17.3002 44.2795C20.4377 47.4642 24.0687 51.15 32 51.15C40.5332 51.15 45.8668 46.8833 48 38.35C44.8 42.6168 41.0667 44.2167 36.8 43.15C34.3657 42.5415 32.6258 40.6502 30.6998 38.8205C27.5623 35.6357 23.9313 31.95 16 31.95Z"
                  fill="#38BDF9"
                  stroke="#38BDF9"
                  stroke-width="0.25"
                ></path>
              </g>
              <defs>
                <clipPath id="clip0_459_2">
                  <rect
                    width="64"
                    height="64"
                    fill="white"
                  ></rect>
                </clipPath>
              </defs>
            </svg> Tailwind CSS
          </div>
          ·
          <div class="inline-flex gap-2 items-center">
            <svg
              class="flex-none inline size-6"
              viewBox="0 0 64 64"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <g clip-path="url(#clip0_460_7)">
                <path
                  d="M49.7769 17L63.9992 31.16L49.7769 45.3197L35.5547 31.1597L49.7769 17Z"
                  fill="#77C1D2"
                ></path>
                <path
                  d="M14.2222 17L43.7067 46.355H15.2622L0 31.16L14.2222 17Z"
                  fill="#2D3441"
                ></path>
              </g>
              <defs>
                <clipPath id="clip0_460_7">
                  <rect
                    width="64"
                    height="29.5"
                    fill="white"
                    transform="translate(0 17)"
                  ></rect>
                </clipPath>
              </defs>
            </svg>
            Alpine JS
          </div>
        </div>
        <div class="max-w-3xl 2xl:max-w-5xl lg:mx-auto pt-8">
          <div>
            <h1
              class="text-2xl font-semibold 2xl:leading-[3.5rem] tracking-tight lg:text-balance sm:text-4xl text-balance [@media(max-width:480px)]:text-[2rem] 2xl:text-[3.5rem] text-black not-prose">
              Unlock permanent access to all components, elements and layouts
              and future additions for a one-time payment
            </h1>
            <p
              class="mt-3 inline-flex items-center rounded-md bg-zinc-50 px-2 py-1 text-xs 2xl:text-base font-medium text-accent-600 ring-1 ring-inset ring-zinc-500/10">
              No subscription required
            </p>
          </div>
        </div>
      </div>

      <div class="mx-auto pb-5 text-center">
        <div class="max-w-3xl 2xl:max-w-4xl mx-auto hidden">
          <p
            class="text-black font-medium text-4xl tracking-tight 2xl:text-5xl text-balance">
            Unlock permanent access to all components, elements and layouts and
            future additions for a one-time payment
          </p>
          <p
            class="mt-3 inline-flex items-center rounded-md bg-zinc-50 px-2 py-1 text-xs 2xl:text-base font-medium text-accent-600 ring-1 ring-inset ring-zinc-500/10">
            No subscription required
          </p>
          <div class="flex flex-wrap mt-6 text-center justify-center">
            <div class="flex items-center text-sm font-medium text-black">
              <svg
                viewBox="0 0 256 118"
                class="flex-none stroke-current size-5 inline"
                astro-icon="logos:alpinejs-icon"
                aria-label="Alpine">
                <path
                  d="M199.111 0 256 56.64l-56.889 56.639-56.889-56.64z"
                  fill="#77C1D2"
                ></path><path
                  d="m56.889 0 117.938 117.42H61.049L0 56.64z"
                  fill="#2D3441"
                ></path></svg
              >
              <span class="ml-2.5"> Alpine JS</span>
            </div>
            <div class="flex items-center ml-6 text-sm font-medium text-black">
              <svg
                class="flex-none size-5 stroke-current inline"
                viewBox="0 0 256 154"
                aria-label="Tailwind CSS"
                astro-icon="logos:tailwindcss-icon"
                height="64"
                width="64"
                ><path
                  d="M128 0C93.867 0 72.533 17.067 64 51.2 76.8 34.133 91.733 27.733 108.8 32c9.737 2.434 16.697 9.999 24.401 17.318C145.751 62.057 160.275 76.8 192 76.8c34.133 0 55.467-17.067 64-51.2-12.8 17.067-27.733 23.467-44.8 19.2-9.737-2.434-16.697-9.999-24.401-17.318C174.249 14.743 159.725 0 128 0zM64 76.8C29.867 76.8 8.533 93.867 0 128c12.8-17.067 27.733-23.467 44.8-19.2 9.737 2.434 16.697 9.999 24.401 17.318C81.751 138.857 96.275 153.6 128 153.6c34.133 0 55.467-17.067 64-51.2-12.8 17.067-27.733 23.467-44.8 19.2-9.737-2.434-16.697-9.999-24.401-17.318C110.249 91.543 95.725 76.8 64 76.8z"
                  fill="#38bdf9"
                  stroke="#38bdf9"
                ></path></svg
              >
              <span class="ml-2.5"> Tailwind CSS</span>
            </div>
          </div>
        </div>
        <div
          class="!mt-10 grid grid-cols-1 mx-auto gap-1 md:grid-cols-2 text-left border border-dashed relative">
          <Crosses />
          {
            pricingData.map((tier) => (
              <div
                class={`relative flex flex-col h-full justify-between p-8 2xl:p-16 gap-8   ${tier.cardStyles}`}>
                <ul
                  class="flex flex-col list-disc list-inside"
                  role="list">
                  <li class="block font-medium text-black text-xl 2xl:text-2xl">
                    {tier.type} — <strong>{tier.price}</strong>
                  </li>
                  <li class="block text-sm 2xl:text-lg text-gray-500 mt-1 pb-3">
                    {tier.audience}
                  </li>

                  {tier.features.map((feature, i) => {
                    const [startText, ...rest] = feature.split(" — ");
                    const restText = rest.join(" — ");
                    return (
                      <li class="text-sm mt-3 2xl:text-lg font-medium text-gray-500">
                        {startText}
                        {restText && ` — ${restText}`}
                      </li>
                    );
                  })}
                </ul>

                <div>
                  {tier.purchaseButton && (
                    <a
                      id={`purchase-${tier.type.toLowerCase().replace(/\s/g, "-")}-bundle`}
                      data-umami-event={`purchase-${tier.type.toLowerCase().replace(/\s/g, "-")}-bundle`}
                      class={tier.purchaseButton.class}
                      href={tier.purchaseButton.link}>
                      {tier.purchaseButton.text}
                    </a>
                  )}
                </div>
              </div>
            ))
          }
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 items-center w-full">
        <div class="inline-flex items-center gap-3">
          <h1 class="text-netral-500">Secure Payment via</h1>
          <img
            class="h-5"
            src="/images/windstatic/lemon.svg"
            alt=""
          />
        </div>
        <div class="mt-3 md:mt-0 lg:ml-auto">
          <ul
            class="flex flex-wrap list-none"
            role="list">
            <li>
              <img
                height="50"
                src="/images/windstatic/paypal.svg"
                alt=""
              />
            </li>
            <li>
              <img
                height="50"
                src="/images/windstatic/applepay.svg"
                alt=""
              />
            </li>
            <li>
              <img
                height="50"
                src="/images/windstatic/googlepay.svg"
                alt=""
              />
            </li>
            <li>
              <img
                height="50"
                src="/images/windstatic/mastercard.svg"
                alt=""
              />
            </li>
            <li>
              <img
                height="50"
                src="/images/windstatic/visa.svg"
                alt=""
              />
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <Included />
  <Cta />
</BaseLayout>
