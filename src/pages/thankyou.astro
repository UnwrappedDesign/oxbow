---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
import LoginForm from "@/components/forms/LoginForm.astro";

const todo = [
  {
    link: "/getting-started",
    title: "Getting Started",
    subtitle:
      "Take a look at the breif getting started guide to get started with Oxbow UI if you want to use the Oxbow's styles and typography",
  },
  {
    link: "/",
    title: "Explore all blocks",
    subtitle:
      "Explore all blocks in different categories to get a better understanding of all the blocks available.",
  },
  {
    link: "https://discord.gg/9WH6G2XJRa",
    title: "Join the discord ",
    subtitle: "Questions, help, support, etc.",
  },
];
const resources = [
  {
    link: "https://lexingtonthemes.com/",
    title: "Lexington Themes",
    subtitle:
      "Free and premium multipage themes crafted with Astro JS and Tailwind CSS",
  },
  {
    link: "https://colorsandfonts.com/",
    title: "Colors & Fonts",
    subtitle:
      "Color & typography tools for web developers & digital designers.",
  },
  {
    link: "https://mossaik.app/",
    title: "Mossaik",
    subtitle:
      "Explore all blocks in different categories to get a better understanding of all the blocks available.",
  },
];
const accounts = [
  {
    link: "https://billing.stripe.com/p/login/fZefZe38O7mhbhC8ww",
    title: "Stripe",
    subtitle: "Manage your account here, invoices, payments, etc.",
  },
];
---

<BaseLayout>
  <MainHero
    textCentered={true}
    showAlpineTailwind={false}
    title="Thank you for choosing Oxbow UI!"
    subtitle="Log in with the form below to get your magic link and start building!"
  />
  <LoginForm />

  <section>
    <Wrapper variant="standard" class="border-t">
      <div
        class="bg-black shadow-2xl outline rounded-xl outline-base-900 shadow-black divide-y divide-base-900"
      >
        <div class="p-8 lg:p-12">
          <Text
            tag="h3"
            variant="textBase"
            class="font-mono font-thin uppercase text-base-400"
            >What to do next?</Text
          >
          <ul role="list" class="flex flex-col mt-2">
            {
              todo.map((option) => (
                <li class="relative w-full py-4">
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="font-medium text-white"
                  >
                    <Text
                      tag="a"
                      href={option.link}
                      class="flex items-center justify-between focus:outline-none"
                    >
                      <Text
                        tag="span"
                        class="absolute inset-0"
                        aria-hidden="true"
                      />
                      <span>{option.title}</span>
                      <span aria-hidden="true"> &rarr;</span>
                    </Text>
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="mt-1 text-base-500 text-balance"
                  >
                    {option.subtitle}
                  </Text>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="p-8 lg:p-12">
          <Text
            tag="h3"
            variant="textBase"
            class="font-mono font-thin uppercase text-base-400"
            >Other resources</Text
          >
          <ul role="list" class="flex flex-col mt-2">
            {
              resources.map((option) => (
                <li class="relative w-full py-4">
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="font-medium text-white"
                  >
                    <Text
                      tag="a"
                      href={option.link}
                      class="flex items-center justify-between focus:outline-none"
                    >
                      <Text
                        tag="span"
                        class="absolute inset-0"
                        aria-hidden="true"
                      />
                      <span>{option.title}</span>
                      <span aria-hidden="true"> &rarr;</span>
                    </Text>
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="mt-1 text-base-500 text-balance"
                  >
                    {option.subtitle}
                  </Text>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="p-8 lg:p-12">
          <Text
            tag="h3"
            variant="textBase"
            class="font-mono font-thin uppercase text-base-400"
          >
            Manage your account
          </Text>
          <ul role="list" class="flex flex-col mt-2">
            {
              accounts.map((option) => (
                <li class="relative w-full py-4">
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="font-medium text-white"
                  >
                    <Text
                      tag="a"
                      href={option.link}
                      class="flex items-center justify-between focus:outline-none"
                    >
                      <Text
                        tag="span"
                        class="absolute inset-0"
                        aria-hidden="true"
                      />
                      <span>{option.title}</span>
                      <span aria-hidden="true"> &rarr;</span>
                    </Text>
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="mt-1 text-base-500 text-balance"
                  >
                    {option.subtitle}
                  </Text>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
