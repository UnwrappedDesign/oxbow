---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
import LoginForm from "@/components/forms/LoginForm.astro";

const todo = [
  {
    link: "/getting-started",
    title: "Getting Started",
    subtitle:
      "Take a look at the breif getting started guide to get started with Oxbow UI if you want to use the Oxbow's styles and typography",
  },
  {
    link: "/",
    title: "Explore all blocks",
    subtitle:
      "Explore all blocks in different categories to get a better understanding of all the blocks available.",
  },
  {
    link: "https://discord.gg/9WH6G2XJRa",
    title: "Join the discord ",
    subtitle:
      "Join the discord channel for, quesrtions, help, support, etc.",
  },
];
const resources = [
  {
    link: "https://lexingtonthemes.com/",
    title: "Lexington Themes",
    subtitle:
      "Free and premium multipage themes crafted with Astro JS and Tailwind CSS",
  },
  {
    link: "https://colorsandfonts.com/",
    title: "Colors & Fonts",
    subtitle:
      "Color & typography tools for web developers & digital designers.",
  },
  {
    link: "https://mossaik.app/",
    title: "Mossaik",
    subtitle:
      "Explore all blocks in different categories to get a better understanding of all the blocks available.",
  },
];
const accounts = [
  {
    link: "https://billing.stripe.com/p/login/fZefZe38O7mhbhC8ww",
    title: "Stripe",
    subtitle: "Manage your account here, invoices, payments, etc.",
  },
];
---

<BaseLayout>
  <MainHero
    textCentered={true}
    showAlpineTailwind={false}
    title="Thank you for choosing Oxbow UI!"
    subtitle="Click on the button below to get your magic link and start building!"
  />
  <LoginForm />

  <section>
    <Wrapper variant="standard" class="py-8 space-y-12 border-t">
      <div class="max-w-xl mx-auto">
        <h2 class="text-base font-semibold text-base-900">What to do next?</h2>
        <ul role="list" class="mt-2 flex flex-col">
          {
            todo.map((option) => (
              <li class="w-full py-4 relative">
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-medium text-base-900"
                >
                  <Text
                    tag="a"
                    href={option.link}
                    class="focus:outline-none flex items-center justify-between"
                  >
                    <Text
                      tag="span"
                      class="absolute inset-0"
                      aria-hidden="true"
                    />
                    <span>{option.title}</span>
                    <span aria-hidden="true"> &rarr;</span>
                  </Text>
                </Text>
                <Text
                  tag="p"
                  variant="textSM"
                  class="mt-1 text-base-500 text-balance"
                >
                  {option.subtitle}
                </Text>
              </li>
            ))
          }
        </ul>
      </div>
      <hr class="max-w-xl mx-auto" />
      <div class="max-w-xl mx-auto">
        <h2 class="text-base font-semibold text-base-900">Other resources</h2>
        <ul role="list" class="mt-2 flex flex-col">
          {
            resources.map((option) => (
              <li class="w-full py-4 relative">
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-medium text-base-900"
                >
                  <Text
                    tag="a"
                    href={option.link}
                    class="focus:outline-none flex items-center justify-between"
                  >
                    <Text
                      tag="span"
                      class="absolute inset-0"
                      aria-hidden="true"
                    />
                    <span>{option.title}</span>
                    <span aria-hidden="true"> &rarr;</span>
                  </Text>
                </Text>
                <Text
                  tag="p"
                  variant="textSM"
                  class="mt-1 text-base-500 text-balance"
                >
                  {option.subtitle}
                </Text>
              </li>
            ))
          }
        </ul>
      </div>
      <hr class="max-w-xl mx-auto" />
      <div class="max-w-xl mx-auto">
        <h2 class="text-base font-semibold text-base-900">
          Manage your account
        </h2>
        <ul role="list" class="mt-2 flex flex-col">
          {
            accounts.map((option) => (
              <li class="w-full py-4 relative">
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-medium text-base-900"
                >
                  <Text
                    tag="a"
                    href={option.link}
                    class="focus:outline-none flex items-center justify-between"
                  >
                    <Text
                      tag="span"
                      class="absolute inset-0"
                      aria-hidden="true"
                    />
                    <span>{option.title}</span>
                    <span aria-hidden="true"> &rarr;</span>
                  </Text>
                </Text>
                <Text
                  tag="p"
                  variant="textSM"
                  class="mt-1 text-base-500 text-balance"
                >
                  {option.subtitle}
                </Text>
              </li>
            ))
          }
        </ul>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
