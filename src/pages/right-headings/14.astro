---
import ScreenLayout from "@/layouts/ScreenLayout.astro";
---

<ScreenLayout>
  <section class="relative overflow-hidden">
    <div
      class="absolute inset-x-0 top-0 h-96 rotate-180 text-gray-400/30 opacity-60 [mask-image:linear-gradient(to_bottom,transparent,white)]">
      <svg
        class="absolute inset-0 h-full w-full"
        xmlns="http://www.w3.org/2000/svg"
        ><defs
          ><pattern
            id="grid-pattern"
            width="32"
            height="32"
            patternUnits="userSpaceOnUse"
            x="50%"
            y="100%"
            patternTransform="translate(0 -1)"
            ><path
              d="M0 32V.5H32"
              fill="none"
              stroke="currentColor"
            ></path></pattern
          ></defs
        ><rect
          width="100%"
          height="100%"
          fill="url(#grid-pattern)"
        ></rect></svg
      >
    </div>
    <div
      class="px-8 py-32 sm:py-48 lg:py-56 mx-auto md:px-12 lg:px-32 max-w-7xl relative">
      <div class="grid items-center grid-cols-1 gap-6 lg:grid-cols-2 lg:gap-24">
        <div class="block w-full mt-12 aspect-square lg:mt-0">
          <div
            class="h-full p-2 overflow-hidden border shadow-lg bg-gray-50 rounded-3xl">
            <img
              alt="#_"
              class="relative w-full rounded-2xl drop-shadow-2xl h-full object-cover"
              src="/images/blob2.jpeg"
            />
          </div>
        </div>
        <div>
          <h1
            class="text-3xl font-semibold tracking-tight text-blue-950 lg:text-balance">
            Just a medium title here
          </h1>
          <p class="text-base mt-6 font-medium text-gray-500">
            The fastest and most efficient method for working together on
            staging and temporary environments.
          </p>
          <ul
            role="list"
            class="mt-12 font-mono uppercase space-y-2 tracking-tighter list-disc list-inside text-sm font-medium">
            <li>Seamless Collaboration</li>
            <li>Real-time Updates</li>
            <li>Easy Rollbacks</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</ScreenLayout>
