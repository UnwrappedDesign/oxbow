---

<ScreenLayout>
  <section>
    <div class="px-8 py-32 mx-auto md:px-12 lg:px-32 max-w-7xl relative">
      <div class="text-center">
        <span
          class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
          >Your tagline</span
        >
        <h1
          class="text-4xl mt-4 font-semibold tracking-tight text-blue-950 lg:text-5xl lg:text-balance">
          Meet Our Team

          <span class="text-gray-600 block">Diverse. Skilled. United. </span>
        </h1>
        <p class="mt-6 text-base font-medium text-gray-500 lg:text-balance">
          A group of passionate individuals working together to innovate and
          excel in our industry.
        </p>
      </div>
      <ul
        role="list"
        class="mt-12 grid grid-cols-1 sm:grid-cols-2 gap-12 lg:mt-24 lg:gap-y-24">
        {
          teamMembers.map((member) => (
            <li>
              <div class="flex flex-col gap-10  lg:flex-row">
                <img
                  class="aspect-[4/5] w-full lg:w-52 flex-none rounded-2xl object-cover"
                  src={member.imgSrc}
                  alt=""
                />
                <div>
                  <div class="flex items-center justify-between">
                    <h3 class="font-mono uppercase tracking-tighter text-sm font-medium text-blue-950">
                      {member.name}
                    </h3>
                    <div class=" flex items-center gap-2 ">
                      <a href="#_">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="18"
                          height="18"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="icon icon-tabler text-blue-600 hover:text-blue-950 icons-tabler-outline icon-tabler-brand-x">
                          <>
                            <path
                              stroke="none"
                              d="M0 0h24v24H0z"
                              fill="none"
                            />
                            <path d="M4 4l11.733 16h4.267l-11.733 -16z" />
                            <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" />
                          </>
                        </svg>
                      </a>
                      <a href="#_">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="18"
                          height="18"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="icon icon-tabler text-blue-600 hover:text-blue-950 icons-tabler-outline icon-tabler-brand-linkedin">
                          <>
                            <path
                              stroke="none"
                              d="M0 0h24v24H0z"
                              fill="none"
                            />
                            <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" />
                            <path d="M8 11l0 5" />
                            <path d="M8 8l0 .01" />
                            <path d="M12 16l0 -5" />
                            <path d="M16 16v-3a2 2 0 0 0 -4 0" />
                          </>
                        </svg>
                      </a>
                    </div>
                  </div>
                  <p class="mt-2 text-sm text-gray-500 text-balance">
                    {member.title}
                  </p>
                  <p class="mt-8 text-sm text-gray-500 text-pretty">
                    {member.description}
                  </p>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</ScreenLayout>
