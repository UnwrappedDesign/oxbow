            </div>
          </div>
        </div>
      </div>
      <div
        class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:m-8">
        <div
          x-data="{ activeSlide: 0, slides: ['/images/blob2.jpeg', '/images/blob1.jpeg', '/images/blob4.jpeg'] }"
          class="h-full p-2 overflow-hidden shadow-lg bg-gray-50 border rounded-3xl relative"
          role="region"
          aria-label="Image Slider">
          <!-- Template for each slide image -->
          <template
            x-for="(slide, index) in slides"
            :key="index">
            <div
              x-show="activeSlide === index"
              x-transition:enter="transition ease-out duration-500"
              x-transition:enter-start="opacity-0 transform scale-95"
              x-transition:enter-end="opacity-100 transform scale-100"
              x-transition:leave="transition ease-in duration-500"
              x-transition:leave-start="opacity-100 transform scale-100"
              x-transition:leave-end="opacity-0 transform scale-95"
              class="h-full w-full absolute inset-0"
              :aria-hidden="activeSlide !== index">
              <!-- Slide image -->
              <img
                :src="slide"
                alt="#"
                class="w-full h-full object-cover rounded-2xl drop-shadow-2xl"
              />
            </div>
          </template>
          <!-- Previous slide button -->
          <button
            @click="activeSlide = activeSlide === 0 ? slides.length - 1 : activeSlide - 1"
            class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white border text-blue-950 rounded-full h-10 w-10 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            aria-label="Previous Slide">
            &larr;
          </button>
          <!-- Next slide button -->
          <button
            @click="activeSlide = activeSlide === slides.length - 1 ? 0 : activeSlide + 1"
            class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white border text-blue-950 rounded-full h-10 w-10 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            aria-label="Next Slide">
            &rarr;
          </button>
          <!-- Pagination indicators -->
          <div
            class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
            <template
              x-for="(slide, index) in slides"
              :key="index">
              <button
                @click="activeSlide = index"
                :class="{'bg-gray-800': activeSlide === index, 'bg-gray-400': activeSlide !== index}"
                class="h-3 w-3 rounded-full focus:outline-none"
                :aria-label="'Slide ' + (index + 1)"
                :aria-current="activeSlide === index ? 'true' : 'false'"
              ></button>
            </template>
          </div>
        </div>
      </div>
    </div>
  </div>
