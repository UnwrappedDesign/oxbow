---
import ScreenLayout from "@/layouts/ScreenLayout.astro";
---

<ScreenLayout>
  <section class="relative overflow-hidden">
    <div
      class="absolute inset-x-0 top-0 h-96 rotate-180 text-gray-400/30 opacity-60 [mask-image:linear-gradient(to_bottom,transparent,white)]">
      <svg
        class="absolute inset-0 h-full w-full"
        xmlns="http://www.w3.org/2000/svg"
        ><defs
          ><pattern
            id="grid-pattern"
            width="32"
            height="32"
            patternUnits="userSpaceOnUse"
            x="50%"
            y="100%"
            patternTransform="translate(0 -1)"
            ><path
              d="M0 32V.5H32"
              fill="none"
              stroke="currentColor"
            ></path></pattern
          ></defs
        ><rect
          width="100%"
          height="100%"
          fill="url(#grid-pattern)"
        ></rect></svg
      >
    </div>
    <div
      class="px-8 py-24  mx-auto md:px-12 lg:px-32 max-w-7xl relative">
      <div class="grid items-center grid-cols-1 gap-6 lg:grid-cols-2 lg:gap-24">
        <div class="md:order-first">
          <span
            class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
            >Your tagline</span
          >
          <h1
            class="text-4xl mt-4 font-semibold tracking-tight text-blue-950 lg:text-5xl lg:text-balance">
            Transform your visitors into

            <span class="text-gray-600">users with an engaging headline</span>
          </h1>
          <div class="grid grid-cols-3 mt-8 items-center">
            <img
              class="max-h-8"
              src="/brands/1.svg"
              alt="#_"
            />
            <img
              class="max-h-8"
              src="/brands/2.svg"
              alt="#_"
            />
            <img
              class="max-h-8"
              src="/brands/3.svg"
              alt="#_"
            />
          </div>

          <div class="mt-12 flex">
            <a
              href="#_"
              aria-label="Action"
              class="text-blue-500 hover:text-blue-950 text-sm font-medium duration-300 flex items-center gap-2"
              >Get started
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"
                ><path
                  stroke="none"
                  d="M0 0h24v24H0z"
                  fill="none"
                ></path><path d="M9 6l6 6l-6 6"></path></svg
              >
            </a>
          </div>
        </div>
        <div class="order-first block w-full mt-12 aspect-square lg:mt-0">
          <div
            class="h-full p-2 overflow-hidden border shadow-lg bg-gray-50 rounded-3xl">
            <img
              alt="#_"
              class="relative w-full rounded-2xl drop-shadow-2xl h-full object-cover"
              src="/images/blob2.jpeg"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</ScreenLayout>
