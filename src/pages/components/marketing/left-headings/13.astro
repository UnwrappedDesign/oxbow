---
import ScreenLayout from "@/layouts/ScreenLayout.astro";
---

<ScreenLayout>
  <section class="relative overflow-hidden">
    <div
      class="absolute inset-x-0 top-0 h-96 rotate-180 text-gray-400/30 opacity-60 [mask-image:linear-gradient(to_bottom,transparent,white)]">
      <svg
        class="absolute inset-0 h-full w-full"
        xmlns="http://www.w3.org/2000/svg"
        ><defs
          ><pattern
            id="grid-pattern"
            width="32"
            height="32"
            patternUnits="userSpaceOnUse"
            x="50%"
            y="100%"
            patternTransform="translate(0 -1)"
            ><path
              d="M0 32V.5H32"
              fill="none"
              stroke="currentColor"
            ></path></pattern
          ></defs
        ><rect
          width="100%"
          height="100%"
          fill="url(#grid-pattern)"
        ></rect></svg
      >
    </div>
    <div
      class="px-8 py-32 sm:py-48 lg:py-56 mx-auto md:px-12 lg:px-32 max-w-7xl relative">
      <div class="grid items-center grid-cols-1 gap-6 lg:grid-cols-2 lg:gap-24">
        <div class="md:order-first">
          <span
            class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
            >Your tagline</span
          >
          <h1 class="text-3xl mt-4 font-semibold tracking-tight text-blue-950">
            Transform your visitors into

            <span class="text-gray-600">users with an engaging headline</span>
          </h1>
          <p class="mt-6 text-base font-medium text-gray-500">
            The fastest and most efficient method for working together on
            staging and temporary environments.
          </p>
          <div class="grid grid-cols-3 mt-12 items-center">
            <img
              class="max-h-8"
              src="/brands/1.svg"
              alt="#_"
            />
            <img
              class="max-h-8"
              src="/brands/2.svg"
              alt="#_"
            />
            <img
              class="max-h-8"
              src="/brands/3.svg"
              alt="#_"
            />
          </div>
        </div>
        <div class="order-first block w-full mt-12 aspect-square lg:mt-0">
          <img
            alt="#_"
            class="rotate-12 drop-shadow hover:rotate-0 duration-300 ease-out"
            src="/images/darkCard.svg"
          />
          <img
            alt="#_"
            class="-mt-32 -rotate-12 drop-shadow hover:rotate-0 duration-300 ease-out"
            src="/images/whiteCard.svg"
          />
        </div>
      </div>
    </div>
  </section>
</ScreenLayout>
