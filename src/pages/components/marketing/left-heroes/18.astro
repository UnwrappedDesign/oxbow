---
import ScreenLayout from "@/layouts/ScreenLayout.astro";
const features = [
  {
    title: "Real-time financial analytics",
    description:
      "This feature can include customizable charts, graphs, and financial dashboards that help users monitor their investments and expenses.",
  },
  {
    title: "Secure digital wallet",
    description:
      "Offer a secure and user-friendly digital wallet where users can manage their digital assets, cryptocurrencies, and traditional currencies.",
  },
  {
    title: "Personalized financial advice",
    description:
      "Implement a feature that offers personalized financial advice and investment recommendations based on the user's goals.",
  },
];
---

<ScreenLayout>
  <section class="relative overflow-hidden">
    <div
      class="absolute inset-x-0 top-0 h-96 rotate-180 text-gray-400/30 opacity-60 [mask-image:linear-gradient(to_bottom,transparent,white)]">
      <svg
        class="absolute inset-0 h-full w-full"
        xmlns="http://www.w3.org/2000/svg"
        ><defs
          ><pattern
            id="grid-pattern"
            width="32"
            height="32"
            patternUnits="userSpaceOnUse"
            x="50%"
            y="100%"
            patternTransform="translate(0 -1)"
            ><path
              d="M0 32V.5H32"
              fill="none"
              stroke="currentColor"
            ></path></pattern
          ></defs
        ><rect
          width="100%"
          height="100%"
          fill="url(#grid-pattern)"
        ></rect></svg
      >
    </div>

    <div
      class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl relative">
      <div class="mx-auto max-w-2xl lg:mx-0 lg:flex-auto">
        <div>
          <span
            class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
            >Your tagline</span
          >
          <h1
            class="text-4xl mt-4 font-semibold tracking-tight text-blue-950 lg:text-5xl lg:text-balance">
            Transform your visitors into

            <span class="text-gray-600">users with an engaging headline</span>
          </h1>
          <p class="text-base font-medium mt-4 text-gray-500">
            The fastest and most efficient method for working together on
            staging and temporary environments. This approach streamlines
            collaboration among team members, ensuring that development and
            testing processes are seamless and effective.
          </p>

          <div class="flex flex-wrap gap-4 mt-12">
            <button
              class="flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold text-white transition-all duration-200 rounded-lg bg-gradient-to-b from-blue-500 to-blue-600 hover:to-blue-800 shadow focus:ring-2 focus:ring-blue-950 focus:ring-offset-2 ring-offset-gray-200 hover:shadow-none"
              aria-label="Action">
              Get started
            </button>
            <div class="text-sm text-gray-500">
              <span class="block">This is some support text</span>
              <span class="block">and this is also.</span>
            </div>
          </div>
        </div>
      </div>
      <dl
        class="grid grid-cols-1 gap-12 sm:grid-cols-2 md:grid-cols-3 mt-12 lg:mt-24">
        {
          features.map((feature, index) => (
            <div>
              <dt class="text-blue-950 font-medium text-sm font-mono uppercase">
                {feature.title}
              </dt>
              <dd class="mt-2 text-sm text-gray-500">{feature.description}</dd>
            </div>
          ))
        }
      </dl>
    </div>
  </section>
</ScreenLayout>
