---
import ScreenLayout from "@/layouts/ScreenLayout.astro";
---

<ScreenLayout>
  <section class="relative overflow-hidden">
    <div
      class="absolute inset-x-0 top-0 h-96 rotate-180 text-gray-400/30 opacity-60 [mask-image:linear-gradient(to_bottom,transparent,white)]">
      <svg
        class="absolute inset-0 h-full w-full"
        xmlns="http://www.w3.org/2000/svg"
        ><defs
          ><pattern
            id="grid-pattern"
            width="32"
            height="32"
            patternUnits="userSpaceOnUse"
            x="50%"
            y="100%"
            patternTransform="translate(0 -1)"
            ><path
              d="M0 32V.5H32"
              fill="none"
              stroke="currentColor"
            ></path></pattern
          ></defs
        ><rect
          width="100%"
          height="100%"
          fill="url(#grid-pattern)"
        ></rect></svg
      >
    </div>
    <div
      class="px-8 pt-32 sm:pt-48 lg:pt-56 mx-auto md:px-12 lg:px-32 max-w-7xl relative">
      <div>
        <div class="flex text-center items-center gap-2 text-gray-500 text-sm">
          Anouncing out next move:
          <a
            href="#_"
            aria-label="Action"
            class="text-blue-500 hover:text-blue-950 text-sm font-medium duration-300 flex items-center gap-2">
            Read more
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"
              ><path
                stroke="none"
                d="M0 0h24v24H0z"
                fill="none"
              ></path><path d="M9 6l6 6l-6 6"></path></svg
            >
          </a>
        </div>
        <h1
          class="text-4xl mt-4 font-semibold tracking-tight text-blue-950 lg:text-5xl lg:text-balance">
          Transform your visitors into

          <span class="text-gray-600">users with an engaging headline</span>
        </h1>
        <p class="mt-6 text-base font-medium text-gray-500 lg:text-balance">
          The fastest and most efficient method for working together on staging
          and temporary environments.
        </p>

        <div
          class="grid items-center max-w-lg grid-cols-3 mx-auto mt-10 gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-5 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5 opacity-40">
          <img
            class="max-h-8"
            src="/brands/1.svg"
            alt="/brands/1.svg"
          />
          <img
            class="max-h-8"
            src="/brands/2.svg"
            alt="/brands/2.svg"
          />
          <img
            class="max-h-8"
            src="/brands/3.svg"
            alt="/brands/3.svg"
          />
          <img
            class="max-h-8"
            src="/brands/4.svg"
            alt="/brands/4.svg"
          />
          <img
            class="max-h-8"
            src="/brands/5.svg"
            alt="/brands/5.svg"
          />
        </div>
      </div>
    </div>
    <div
      class="max-w-screen-xl px-8 mt-12 ml-auto lg:px-0 -mr-16 2xl:mx-auto 2xl:px-8 pb-12">
      <img
        class="object-cover h-full border shadow rounded-2xl"
        src="/images/dashboardLight.svg"
        alt="#_"
      />

    </div>
  </section>
</ScreenLayout>
