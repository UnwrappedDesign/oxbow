---
import ScreenLayout from "@/layouts/ScreenLayout.astro";
---

<ScreenLayout>
  <section class="relative overflow-hidden">
    <div
      class="absolute inset-x-0 top-0 h-96 rotate-180 text-gray-400/30 opacity-60 [mask-image:linear-gradient(to_bottom,transparent,white)]">
      <svg
        class="absolute inset-0 h-full w-full"
        xmlns="http://www.w3.org/2000/svg"
        ><defs
          ><pattern
            id="grid-pattern"
            width="32"
            height="32"
            patternUnits="userSpaceOnUse"
            x="50%"
            y="100%"
            patternTransform="translate(0 -1)"
            ><path
              d="M0 32V.5H32"
              fill="none"
              stroke="currentColor"
            ></path></pattern
          ></defs
        ><rect
          width="100%"
          height="100%"
          fill="url(#grid-pattern)"
        ></rect></svg
      >
    </div>
    <div
      class="px-8 py-32  mx-auto md:px-12 lg:px-32 max-w-7xl relative space-y-24">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
        <div>
          <span
            class="text-blue-600 uppercase font-mono font-medium tracking-tight text-xs">
            Your next FinTech startup
          </span>
          <h1
            class="text-4xl mt-8 tracking-tighter font-semibold text-blue-950">
            Transform your visitors into <span class="text-gray-600"
              >users with an engaging headline</span
            >
          </h1>
          <p class="mt-6 text-base font-medium text-gray-500">
            The fastest method for working together on staging and temporary
            environments.
          </p>
        </div>
        <div class="lg:col-span-2">
          <div>
            <img
              class="object-cover h-full border shadow rounded-2xl"
              src="/images/dashboardLight.svg"
              alt="#_"
            />
          </div>
        </div>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
        <div class="md:order-last">
          <span
            class="text-blue-600 uppercase font-mono font-medium tracking-tight text-xs">
