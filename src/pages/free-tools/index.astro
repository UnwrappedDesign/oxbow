---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";

const site = (Astro.site && Astro.site.toString()) || "https://oxbowui.com";
const list = [
  {
    name: "Tailwind CSS grid generator",
    path: "/free-tools/tailwind-css-grid-generator",
    description:
      "Generate responsive Tailwind CSS grid layouts and copy classes.",
  },
  {
    name: "Tailwind CSS gradient generator",
    path: "/free-tools/tailwind-css-gradient-generator",
    description:
      "Build smooth gradients and get the Tailwind classes instantly.",
  },
  {
    name: "Tailwind CSS color palette",
    path: "/free-tools/tailwind-css-color-palette",
    description: "Browse all Tailwind colors and copy utility classes quickly.",
  },
  {
    name: "Tailwind CSS cheat sheet",
    path: "/free-tools/tailwind-css-cheat-sheet",
    description:
      "Search and copy Tailwind classes across colors, spacing, layout, and more.",
  },
];
const itemListStructured = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  itemListElement: list.map((item, index) => ({
    "@type": "ListItem",
    position: index + 1,
    url: new URL(item.path, site).toString(),
    name: item.name,
    description: item.description,
  })),
};
const title = "Free Tailwind CSS Tools — Oxbow UI";
const description =
  "Handy Tailwind CSS tools: grid generator, gradient generator, and full color palette browser. Fast, simple, and free.";
---

<BaseLayout
  title={title}
  description={description}
  structuredData={itemListStructured}
>
  <MainHero
    showAlpineTailwind={false}
    title="Practical tools built with Tailwind CSS"
    subtitle="Just two for now—carefully made to be useful, not just fill space."
  />
  <section>
    <Wrapper variant="standard" class="py-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-2">
        {
          list.map((item) => (
            <div class="flex flex-col h-full p-4 bg-white rounded-xl  outline-transparent ">
              <a class="absolute inset-0 z-10" href={item.path} />
              <div>
                <Text
                  tag="h3"
                  variant="textSM"
                  class=" font-medium text-zinc-900"
                >
                  {item.name}
                </Text>
                <Text tag="p" variant="textSM" class="mt-2 text-zinc-500">
                  {item.description}
                </Text>
              </div>
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
