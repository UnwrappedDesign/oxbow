---
import { AstroSeo } from "@astrolib/seo";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
// Components
import CtaTools from "@/components/global/CtaTools.astro";
import Cta from "@/components/global/Cta.astro";
// Tools
import GridGenerator from "@/components/tools/GridGenerator.tsx";
---

<AstroSeo
  title="Oxbow UI - Tailwind CSS Grid Generator "
  description="Easily create responsive, customizable grid layouts with Tailwind CSS. Our intuitive Grid Generator allows you to define the number of columns, gaps, and screen size breakpoints for your design, and automatically generates the required Tailwind utility classes. Save time and streamline your development process with a flexible, reusable grid system that works across all device sizes."
  canonical="https://www.oxbowui.com/free-tools/tailwind-grid-generator"
  openGraph={{
    url: "https://www.oxbowui.com/images/OpenGraph/twitter.png",
    title: "Oxbow UI - Tailwind CSS Grid Generator",
    description:
      "Easily create responsive, customizable grid layouts with Tailwind CSS. Our intuitive Grid Generator allows you to define the number of columns, gaps, and screen size breakpoints for your design, and automatically generates the required Tailwind utility classes. Save time and streamline your development process with a flexible, reusable grid system that works across all device sizes.",
    images: [
      {
        url: "https://www.oxbowui.com/images/OpenGraph/facebook.png",
        width: 1200,
        height: 630,
        alt: "oxbow",
        type: "image/png",
      },
      {
        url: "https://www.oxbowui.com/images/OpenGraph/twitter.png",
        width: 4096,
        height: 4096,
        alt: "oxbow",
        type: "image/png",
      },
      { url: "https://www.oxbowui.com/images/OpenGraph/facebook.ong" },
      { url: "https://www.oxbowui.com/images/OpenGraph/twitter.png" },
    ],
    site_name: "oxbow",
  }}
  twitter={{
    handle: "@Mike_Andreuzza",
    site: "https://www.oxbowui.com",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <MainHero
    showAlpineTailwind={false}
    title="Tailwind Grid Generator"
    subtitle="Generate Tailwind CSS grids"
  />
  <CtaTools />
  <section class="border-t border-base-200">
    <Wrapper variant="standard" class="lg:border-x lg:border-base-200">
      <GridGenerator client:only="react" /></Wrapper
    >
  </section>
  <Cta />
</BaseLayout>
