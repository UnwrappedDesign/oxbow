---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
// Components
import CtaTools from "@/components/global/CtaTools.astro";
import Cta from "@/components/global/Cta.astro";
// Tools
import GridGenerator from "@/components/tools/GridGenerator.tsx";

const site = (Astro.site && Astro.site.toString()) || "https://oxbowui.com";
const url = new URL(Astro.url.pathname, site).toString();
const title = "Tailwind CSS Grid Generator â€” Free Tool";
const description =
  "Generate responsive Tailwind CSS grid layouts. Pick columns, spans, gaps and copy utility classes instantly.";
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  name: "Tailwind CSS Grid Generator",
  applicationCategory: "DeveloperApplication",
  operatingSystem: "Web",
  url,
  description,
  offers: { "@type": "Offer", price: "0", priceCurrency: "USD" },
};
---

<BaseLayout
  title={title}
  description={description}
  structuredData={structuredData}
>
  <MainHero
    showAlpineTailwind={false}
    title="Tailwind Grid Generator"
    subtitle="Generate Tailwind CSS grids"
  />
 
 <section>
    <Wrapper variant="standard" class="py-6 ">
      <GridGenerator client:only="react" /></Wrapper
    >
  </section>
</BaseLayout>
