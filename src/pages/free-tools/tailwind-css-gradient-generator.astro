---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
// Components
import CtaTools from "@/components/global/CtaTools.astro";
import Cta from "@/components/global/Cta.astro";
// Tool
import GradientGenerator from "@/components/tools/GradientGenerator.tsx";

const site = (Astro.site && Astro.site.toString()) || "https://oxbowui.com";
const url = new URL(Astro.url.pathname, site).toString();
const title = "Tailwind CSS Gradient Generator â€” Free Tool";
const description =
  "Create Tailwind CSS gradients fast. Choose colors and direction, preview live and copy utility classes in one click.";
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  name: "Tailwind CSS Gradient Generator",
  applicationCategory: "DeveloperApplication",
  operatingSystem: "Web",
  url,
  description,
  offers: { "@type": "Offer", price: "0", priceCurrency: "USD" },
};
---

<BaseLayout
  title={title}
  description={description}
  structuredData={structuredData}
>
  <MainHero
    showAlpineTailwind={false}
    title="Tailwind Gradient Generator"
    subtitle="Generate Tailwind CSS gradients"
  />
  <CtaTools />
  <section class="border-t border-zinc-200">
    <Wrapper variant="standard" class="lg:border-x lg:border-zinc-200">
      <GradientGenerator client:only="react" />
    </Wrapper>
  </section>
</BaseLayout>
