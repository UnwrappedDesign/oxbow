---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
// Components
import CtaTools from "@/components/global/CtaTools.astro";
import Cta from "@/components/global/Cta.astro";
import ColorPalette from "@/components/tools/ColorPalette";

const site = (Astro.site && Astro.site.toString()) || "https://oxbowui.com";
const url = new URL(Astro.url.pathname, site).toString();
const title = "Tailwind CSS Color Palette â€” Free Tool";
const description =
  "Browse the full Tailwind CSS v4 color palette and copy utility classes instantly (bg-*, text-*, border-*).";
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  name: "Tailwind CSS Color Palette",
  applicationCategory: "DeveloperApplication",
  operatingSystem: "Web",
  url,
  description,
  offers: { "@type": "Offer", price: "0", priceCurrency: "USD" },
};
---

<BaseLayout
  title={title}
  description={description}
  structuredData={structuredData}
>
  <MainHero
    showAlpineTailwind={false}
    title="Tailwind CSS Color Palette"
    subtitle="Browse all Tailwind colors and copy utility classes with one click."
  />
  <CtaTools />
  <section class="border-t border-gray-200">
    <Wrapper variant="standard" class="lg:border-x lg:border-gray-200 py-6">
      <ColorPalette client:load />
    </Wrapper>
  </section>
</BaseLayout>
