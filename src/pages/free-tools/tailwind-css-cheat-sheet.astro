---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
// Components
import CtaTools from "@/components/global/CtaTools.astro";
import TwCheatSheet from "@/components/tools/TwCheatSheet";

const site = (Astro.site && Astro.site.toString()) || "https://oxbowui.com";
const url = new URL(Astro.url.pathname, site).toString();
const title = "Tailwind CSS Cheat Sheet — Free Tool";
const description = "Search and copy Tailwind CSS classes by category: colors, gradients, spacing, layout, typography, borders, and effects.";
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebApplication',
  name: 'Tailwind CSS Cheat Sheet',
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Web',
  url,
  description,
  offers: { '@type': 'Offer', price: '0', priceCurrency: 'USD' }
};
---

<BaseLayout title={title} description={description} structuredData={structuredData}>
  <MainHero
    showAlpineTailwind={false}
    title="Tailwind CSS Cheat Sheet"
    subtitle="Search and copy classes — grouped by colors, gradients, spacing, layout, and more."
  />
  <CtaTools />
  <section class="border-t border-base-200">
    <Wrapper variant="standard" class="lg:border-x lg:border-base-200 py-6">
      <TwCheatSheet client:only="react" />
    </Wrapper>
  </section>
</BaseLayout>
