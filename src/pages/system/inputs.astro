---
import BaseLayout from "@/layouts/BaseLayout.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <MainHero
    title="TextInput overview"
    showButton={false}
    showAlpineTailwind={false}
  />

  <section class="overflow-hidden border-t border-base-200">
    
    <div class="flex flex-col w-full divide-y divide-base-200">
      <!-- Basic TextInput Types -->
      <Wrapper variant="standard" class="py-12 lg:border-x lg:border-base-200">
        <h2 class="mb-4 text-2xl font-semibold">Basic TextInput Types</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Text TextInput -->
          <TextInput
            id="text-Textinput"
            name="text-Textinput"
            label="Text TextInput"
            placeholder="Enter text"
          />

          <!-- Email TextInput -->
          <TextInput
            id="email-Textinput"
            name="email-Textinput"
            type="email"
            label="Email TextInput"
            placeholder="Enter email"
          />

          <!-- Password TextInput -->
          <TextInput
            id="password"
            name="password"
            type="password"
            label="Password"
            placeholder="************"
            variant="alternative"
            size="base"
            passwordToggle={true}
          />

          <!-- Number TextInput -->
          <TextInput
            id="number-Textinput"
            name="number-Textinput"
            type="number"
            label="Number TextInput"
            placeholder="Enter number"
            min="0"
            max="100"
          />

          <!-- Search TextInput -->
          <TextInput
            id="search-Textinput"
            name="search-Textinput"
            type="search"
            label="Search TextInput"
            placeholder="Search..."
          />

          <!-- URL TextInput -->
          <TextInput
            id="url-Textinput"
            name="url-Textinput"
            type="url"
            label="URL TextInput"
            placeholder="Enter website URL"
          />

          <!-- Tel TextInput -->
          <TextInput
            id="tel-Textinput"
            name="tel-Textinput"
            type="tel"
            label="Telephone TextInput"
            placeholder="Enter phone number"
          />

          <!-- Date TextInput -->
          <TextInput
            id="date-Textinput"
            name="date-Textinput"
            type="date"
            label="Date TextInput"
          />

          <!-- Time TextInput -->
          <TextInput
            id="time-Textinput"
            name="time-Textinput"
            type="time"
            label="Time TextInput"
          />

          <!-- Datetime-local TextInput -->
          <TextInput
            id="datetime-Textinput"
            name="datetime-Textinput"
            type="datetime-local"
            label="Date & Time TextInput"
          />

          <!-- Month TextInput -->
          <TextInput
            id="month-Textinput"
            name="month-Textinput"
            type="month"
            label="Month TextInput"
          />

          <!-- Week TextInput -->
          <TextInput
            id="week-Textinput"
            name="week-Textinput"
            type="week"
            label="Week TextInput"
          />

          <!-- Color TextInput -->
          <TextInput
            id="color-Textinput"
            name="color-Textinput"
            type="color"
            label="Color TextInput"
            class="h-10"
          />

          <!-- Range TextInput -->
          <TextInput
            id="range-Textinput"
            name="range-Textinput"
            type="range"
            label="Range TextInput"
            min="0"
            max="100"
            step="10"
          />

          <!-- File TextInput -->
          <TextInput
            id="file-Textinput"
            name="file-Textinput"
            type="file"
            label="File TextInput"
          />

          <!-- Hidden TextInput (shown for demonstration) -->
          <div>
            <p class="block mb-1 text-sm font-medium text-base-700">
              Hidden TextInput (shown for demo)
            </p>
            <TextInput
              id="hidden-Textinput"
              name="hidden-Textinput"
              type="hidden"
              value="hidden-value"
            />
            <p class="mt-1 text-xs text-base-500">Value: "hidden-value"</p>
          </div>
        </div>
        <div class="mt-12">
          <h2 class="mb-4 text-lg">URL TextInput Examples</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Default URL Textinput with select -->
            <div>
              <TextInput
                as="url-with-select"
                id="website-url"
                name="website-url"
                label="Website URL"
                placeholder="example.com"
                urlOptions={["https://", "http://", "ftp://", "mailto:"]}
                defaultUrlOption="https://"
              />
            </div>

            <!-- With error -->
            <div>
              <TextInput
                as="url-with-select"
                id="error-url"
                name="error-url"
                label="Website URL with Error"
                placeholder="example.com"
                error="Please enter a valid URL"
              />
            </div>

            <!-- Different variant -->
            <div>
              <TextInput
                as="url-with-select"
                id="transparent-url"
                name="transparent-url"
                label="Transparent URL TextInput"
                variant="transparent-light"
                placeholder="example.com"
                urlOptions={["https://", "http://"]}
              />
            </div>
          </div>
        </div>

        <div class="mt-12">
          <h2 class="mb-4 text-lg">Tag TextInput Example</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Default tag Textinput -->
            <div>
              <TextInput
                as="tags"
                id="tags-Textinput"
                name="tags-Textinput"
                label="Tags"
                placeholder="Add a tag"
                initialTags={["React", "Astro", "Alpine.js"]}
              />
            </div>

            <!-- With error -->
            <div>
              <TextInput
                as="tags"
                id="error-tags"
                name="error-tags"
                label="Tags with Error"
                placeholder="Add a tag"
                error="Please add at least one tag"
                initialTags={[]}
                
              />
            </div>

            <!-- Different variant -->
            <div>
              <TextInput
                as="tags"
                id="transparent-tags"
                name="transparent-tags"
                label="Transparent Tags"
                variant="transparent-light"
                placeholder="Add a tag"
                initialTags={["UI", "UX", "Design"]}
              />
            </div>
          </div>
        </div>

        <div class="mt-12">
          <h2 class="mb-4 text-lg">Mention TextInput Example</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Default mention Textinput -->
            <div>
              <TextInput
                as="mention"
                id="username-mention"
                name="username-mention"
                label="Username Mention"
                placeholder="Type to mention someone"
                suggestions={[
                  "Mike_Andreuzza",
                  "GPerales",
                  "JohnDoe",
                  "JaneSmith",
                ]}
              />
            </div>

            <!-- Dark variant -->
            <div class="p-4 mb-6 rounded-lg bg-base-900">
              <TextInput
                as="mention"
                id="dark-mention"
                name="dark-mention"
                label="Dark Mention"
                variant="dark"
                placeholder="Type to mention someone"
                suggestions={[
                  "Mike_Andreuzza",
                  "GPerales",
                  "JohnDoe",
                  "JaneSmith",
                ]}
              />
            </div>

            <!-- With error -->
            <div>
              <TextInput
                as="mention"
                id="error-mention"
                name="error-mention"
                label="With Error"
                placeholder="Type to mention someone"
                error="Please select a valid username"
                suggestions={[
                  "Mike_Andreuzza",
                  "GPerales",
                  "JohnDoe",
                  "JaneSmith",
                ]}
              />
            </div>
          </div>
        </div>
      </Wrapper>

      <!-- Special TextInput Types -->
      <Wrapper variant="standard" class="py-12 lg:border-x lg:border-base-200">
        <h2 class="mb-4 text-2xl font-semibold">Special TextInput Types</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Textarea -->
          <TextInput
            as="textarea"
            id="textarea-Textinput"
            name="textarea-Textinput"
            label="Textarea TextInput"
            placeholder="Enter multiple lines of text"
            rows="4"
          />

          <!-- Select -->
          <TextInput
            as="select"
            id="select-Textinput"
            name="select-Textinput"
            label="Select TextInput"
            options={[
              { value: "", label: "Select an option" },
              { value: "option1", label: "Option 1" },
              { value: "option2", label: "Option 2" },
              { value: "option3", label: "Option 3" },
            ]}
          />

          <!-- Checkbox -->
          <TextInput
            as="checkbox"
            id="checkbox-Textinput"
            name="checkbox-Textinput"
            label="Checkbox TextInput"
            description="This is a description for the checkbox"
          />

          <!-- Radio Group -->
          <TextInput
            as="radio"
            id="radio-Textinput"
            name="radio-Textinput"
            label="Radio TextInput Group"
            options={[
              { value: "option1", label: "Option 1" },
              { value: "option2", label: "Option 2" },
              { value: "option3", label: "Option 3" },
            ]}
          />
        </div>
      </Wrapper>

      <!-- Variants -->
      <Wrapper variant="standard" class="py-12 lg:border-x lg:border-base-200">
        <h2 class="mb-4 text-2xl font-semibold">Variants</h2>

        <!-- Default Variant -->
        <div class="mb-8">
          <h3 class="mb-4 text-xl font-medium">Default Variant</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <TextInput
              id="default-text"
              name="default-text"
              label="Text TextInput"
              placeholder="Default variant"
              variant="default"
            />

            <TextInput
              as="textarea"
              id="default-textarea"
              name="default-textarea"
              label="Textarea"
              placeholder="Default variant"
              variant="default"
            />

            <TextInput
              as="select"
              id="default-select"
              name="default-select"
              label="Select"
              variant="default"
              options={[
                { value: "", label: "Default variant" },
                { value: "option1", label: "Option 1" },
                { value: "option2", label: "Option 2" },
              ]}
            />

            <TextInput
              as="checkbox"
              id="default-checkbox"
              name="default-checkbox"
              label="Default variant checkbox"
              variant="default"
            />

            <TextInput
              as="radio"
              id="default-radio"
              name="default-radio"
              label="Default variant radio"
              variant="default"
              options={[
                { value: "option1", label: "Option 1" },
                { value: "option2", label: "Option 2" },
              ]}
            />
          </div>
        </div>

        <!-- Dark Variant -->
        <div class="p-6 mb-8 rounded-lg bg-base-800">
          <h3 class="mb-4 text-xl font-medium text-white">Dark Variant</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <TextInput
              id="dark-text"
              name="dark-text"
              label="Text TextInput"
              placeholder="Dark variant"
              variant="dark"
            />

            <TextInput
              as="textarea"
              id="dark-textarea"
              name="dark-textarea"
              label="Textarea"
              placeholder="Dark variant"
              variant="dark"
            />

            <TextInput
              as="select"
              id="dark-select"
              name="dark-select"
              label="Select"
              variant="dark"
              options={[
                { value: "", label: "Dark variant" },
                { value: "option1", label: "Option 1" },
                { value: "option2", label: "Option 2" },
              ]}
            />

            <TextInput
              as="checkbox"
              id="dark-checkbox"
              name="dark-checkbox"
              label="Dark variant checkbox"
              variant="dark"
            />

            <TextInput
              as="radio"
              id="dark-radio"
              name="dark-radio"
              label="Dark variant radio"
              variant="dark"
              options={[
                { value: "option1", label: "Option 1" },
                { value: "option2", label: "Option 2" },
              ]}
            />
          </div>
        </div>

        <!-- Transparent Light Variant -->
        <div class="p-6 mb-8 border rounded-lg bg-base-100 border-base-200">
          <h3 class="mb-4 text-xl font-medium">Transparent Light Variant</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <TextInput
              id="transparent-light-text"
              name="transparent-light-text"
              label="Text TextInput"
              placeholder="Transparent light variant"
              variant="transparent-light"
            />

            <TextInput
              as="textarea"
              id="transparent-light-textarea"
              name="transparent-light-textarea"
              label="Textarea"
              placeholder="Transparent light variant"
              variant="transparent-light"
            />

            <TextInput
              as="select"
              id="transparent-light-select"
              name="transparent-light-select"
              label="Select"
              variant="transparent-light"
              options={[
                { value: "", label: "Transparent light variant" },
                { value: "option1", label: "Option 1" },
                { value: "option2", label: "Option 2" },
              ]}
            />

            <TextInput
              as="checkbox"
              id="transparent-light-checkbox"
              name="transparent-light-checkbox"
              label="Transparent light variant checkbox"
              variant="transparent-light"
            />

            <TextInput
              as="radio"
              id="transparent-light-radio"
              name="transparent-light-radio"
              label="Transparent light variant radio"
              variant="transparent-light"
              options={[
                { value: "option1", label: "Option 1" },
                { value: "option2", label: "Option 2" },
              ]}
            />
          </div>
        </div>

        <!-- Transparent Dark Variant -->
        <div class="p-6 mb-8 rounded-lg bg-base-800">
          <h3 class="mb-4 text-xl font-medium text-white">
            Transparent Dark Variant
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <TextInput
              id="transparent-dark-text"
              name="transparent-dark-text"
              label="Text TextInput"
              placeholder="Transparent dark variant"
              variant="transparent-dark"
            />

            <TextInput
              as="textarea"
              id="transparent-dark-textarea"
              name="transparent-dark-textarea"
              label="Textarea"
              placeholder="Transparent dark variant"
              variant="transparent-dark"
            />

            <TextInput
              as="select"
              id="transparent-dark-select"
              name="transparent-dark-select"
              label="Select"
              variant="transparent-dark"
              options={[
                { value: "", label: "Transparent dark variant" },
                { value: "option1", label: "Option 1" },
                { value: "option2", label: "Option 2" },
              ]}
            />

            <TextInput
              as="checkbox"
              id="transparent-dark-checkbox"
              name="transparent-dark-checkbox"
              label="Transparent dark variant checkbox"
              variant="transparent-dark"
            />

            <TextInput
              as="radio"
              id="transparent-dark-radio"
              name="transparent-dark-radio"
              label="Transparent dark variant radio"
              variant="transparent-dark"
              options={[
                { value: "option1", label: "Option 1" },
                { value: "option2", label: "Option 2" },
              ]}
            />
          </div>
        </div>
      </Wrapper>
      <!-- Checkbox & Radio Sizes -->
      <Wrapper variant="standard" class="py-12 lg:border-x lg:border-base-200">
        <h2 class="mb-4 text-2xl font-semibold">Checkbox & Radio Sizes new</h2>
        <div class="space-y-6">
          <!-- Extra Small -->
          <TextInput
            as="checkbox"
            id="checkbox-xs"
            name="checkbox-xs"
            label="Extra Small Checkbox"
            size="xs"
          />
          <TextInput
            as="radio"
            id="radio-xs"
            name="radio-size"
            label="Extra Small Radio"
            size="xs"
            options={[
              { value: "1", label: "Option 1" },
              { value: "2", label: "Option 2" },
            ]}
          />

          <!-- Small -->
          <TextInput
            as="checkbox"
            id="checkbox-sm"
            name="checkbox-sm"
            label="Small Checkbox"
            size="sm"
          />
          <TextInput
            as="radio"
            id="radio-sm"
            name="radio-size"
            label="Small Radio"
            size="sm"
            options={[
              { value: "1", label: "Option 1" },
              { value: "2", label: "Option 2" },
            ]}
          />

          <!-- Base -->
          <TextInput
            as="checkbox"
            id="checkbox-base"
            name="checkbox-base"
            label="Base Checkbox"
            size="base"
          />
          <TextInput
            as="radio"
            id="radio-base"
            name="radio-size"
            label="Base Radio"
            size="base"
            options={[
              { value: "1", label: "Option 1" },
              { value: "2", label: "Option 2" },
            ]}
          />

          <!-- Medium -->
          <TextInput
            as="checkbox"
            id="checkbox-md"
            name="checkbox-md"
            label="Medium Checkbox"
            size="md"
          />
          <TextInput
            as="radio"
            id="radio-md"
            name="radio-size"
            label="Medium Radio"
            size="md"
            options={[
              { value: "1", label: "Option 1" },
              { value: "2", label: "Option 2" },
            ]}
          />

          <!-- Large -->
          <TextInput
            as="checkbox"
            id="checkbox-lg"
            name="checkbox-lg"
            label="Large Checkbox"
            size="lg"
          />
          <TextInput
            as="radio"
            id="radio-lg"
            name="radio-size"
            label="Large Radio"
            size="lg"
            options={[
              { value: "1", label: "Option 1" },
              { value: "2", label: "Option 2" },
            ]}
          />
        </div>
      </Wrapper>

      <!-- Sizes -->
      <Wrapper variant="standard" class="py-12 lg:border-x lg:border-base-200">
        <h2 class="mb-4 text-2xl font-semibold">Sizes</h2>
        <div class="space-y-6">
          <!-- Extra Small -->
          <div>
            <h3 class="mb-2 text-lg font-medium">Extra Small (xs)</h3>
            <TextInput
              id="xs-size"
              name="xs-size"
              placeholder="Extra small Textinput"
              size="xs"
            />
          </div>

          <!-- Small -->
          <div>
            <h3 class="mb-2 text-lg font-medium">Small (sm)</h3>
            <TextInput
              id="sm-size"
              name="sm-size"
              placeholder="Small Textinput"
              size="sm"
            />
          </div>

          <!-- Base (Default) -->
          <div>
            <h3 class="mb-2 text-lg font-medium">Base (Default)</h3>
            <TextInput
              id="base-size"
              name="base-size"
              placeholder="Base Textinput (default)"
              size="base"
            />
          </div>

          <!-- Medium -->
          <div>
            <h3 class="mb-2 text-lg font-medium">Medium (md)</h3>
            <TextInput
              id="md-size"
              name="md-size"
              placeholder="Medium Textinput"
              size="md"
            />
          </div>

          <!-- Large -->
          <div>
            <h3 class="mb-2 text-lg font-medium">Large (lg)</h3>
            <TextInput
              id="lg-size"
              name="lg-size"
              placeholder="Large Textinput"
              size="lg"
            />
          </div>
        </div>
      </Wrapper>

      <!-- States -->
      <Wrapper variant="standard" class="py-12 lg:border-x lg:border-base-200">
        <h2 class="mb-4 text-2xl font-semibold">States</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Default State -->
          <TextInput
            id="default-state"
            name="default-state"
            label="Default State"
            placeholder="Normal Textinput"
          />

          <!-- Disabled State -->
          <TextInput
            id="disabled-state"
            name="disabled-state"
            label="Disabled State"
            placeholder="Disabled Textinput"
            disabled
          />

          <!-- Required State -->
          <TextInput
            id="required-state"
            name="required-state"
            label="Required State"
            placeholder="Required Textinput"
            required
          />

          <!-- Error State -->
          <TextInput
            id="error-state"
            name="error-state"
            label="Error State"
            placeholder="TextInput with error"
            error="This field has an error message"
          />

          <!-- With Value -->
          <TextInput
            id="with-value"
            name="with-value"
            label="With Value"
            value="This Textinput has a value"
          />

          <!-- Read Only -->
          <TextInput
            id="readonly-state"
            name="readonly-state"
            label="Read Only State"
            value="This Textinput is read-only"
            readonly
          />
        </div>
      </Wrapper>

      <!-- Form Examples -->
      <Wrapper variant="standard" class="py-12 lg:border-x lg:border-base-200">
        <h2 class="mb-4 text-2xl font-semibold">Form Examples</h2>

        <!-- Contact Form -->
        <div class="max-w-md p-6 mb-8 border rounded-lg border-base-200">
          <h3 class="mb-4 text-xl font-medium">Contact Form</h3>
          <form class="space-y-4">
            <TextInput
              id="contact-name"
              name="contact-name"
              label="Name"
              placeholder="Your name"
              required
            />

            <TextInput
              id="contact-email"
              name="contact-email"
              type="email"
              label="Email"
              placeholder="Your email"
              required
            />

            <TextInput
              as="select"
              id="contact-subject"
              name="contact-subject"
              label="Subject"
              options={[
                { value: "", label: "Select a subject" },
                { value: "general", label: "General Inquiry" },
                { value: "support", label: "Technical Support" },
                { value: "billing", label: "Billing Question" },
              ]}
              required
            />

            <TextInput
              as="textarea"
              id="contact-message"
              name="contact-message"
              label="Message"
              placeholder="Your message"
              required
            />

            <TextInput
              as="checkbox"
              id="contact-terms"
              name="contact-terms"
              label="I agree to the terms and conditions"
              required
            />

            <button
              type="submit"
              class="w-full px-4 py-2 text-white rounded-lg bg-accent-600 hover:bg-accent-700 transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Login Form -->
        <div class="max-w-md p-6 mb-8 border rounded-lg border-base-200">
          <h3 class="mb-4 text-xl font-medium">Login Form</h3>
          <form class="space-y-4">
            <TextInput
              id="login-email"
              name="login-email"
              type="email"
              label="Email"
              placeholder="Your email"
              required
            />

            <TextInput
              id="login-password"
              name="login-password"
              type="password"
              label="Password"
              placeholder="Your password"
              required
            />

            <TextInput
              as="checkbox"
              id="login-remember"
              name="login-remember"
              label="Remember me"
              size="sm"
            />

            <button
              type="submit"
              class="w-full px-4 py-2 text-white rounded-lg bg-accent-600 hover:bg-accent-700 transition-colors"
            >
              Log In
            </button>
          </form>
        </div>

        <!-- Search Form -->
        <div class="max-w-md p-6 border rounded-lg border-base-200">
          <h3 class="mb-4 text-xl font-medium">Search Form</h3>
          <form class="space-y-4">
            <TextInput
              id="search-form"
              name="search-form"
              type="search"
              placeholder="Search for anything..."
            />

            <div class="grid grid-cols-2 gap-4">
              <TextInput
                as="select"
                id="search-category"
                name="search-category"
                label="Category"
                options={[
                  { value: "", label: "All Categories" },
                  { value: "products", label: "Products" },
                  { value: "services", label: "Services" },
                  { value: "articles", label: "Articles" },
                ]}
              />

              <TextInput
                as="select"
                id="search-sort"
                name="search-sort"
                label="Sort By"
                options={[
                  { value: "relevance", label: "Relevance" },
                  { value: "newest", label: "Newest" },
                  { value: "oldest", label: "Oldest" },
                  { value: "price-asc", label: "Price: Low to High" },
                  { value: "price-desc", label: "Price: High to Low" },
                ]}
              />
            </div>

            <TextInput
              as="checkbox"
