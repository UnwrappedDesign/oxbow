---
import { reviews } from "@/data/reviews.json";
import Cta from "@/components/global/Cta.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
---

<BaseLayout>
  <MainHero
    showAlpineTailwind={false}
    title="Meet Oxbow's customers and supporters"
  />
  <section>
    <Wrapper variant="standard" class="border-t border-base-900 ">
      <ul
        class="w-full relative md:grod-cols-2 lg:grid-cols-2 grid gap-2"
        role="list"
      >
        {
          reviews.map((template) => (
            <>
              <li class=" h-full flex outline rounded-xl outline-base-900 shadow-2xl shadow-black bg-black p-8 ">
                <div class="flex flex-col h-full justify-between gap-6  ">
                  <Text
                    tag="p"
                    variant="textSM"
                    class="text-sm mt-2 text-base-400"
                  >
                    "{template.text}"
                  </Text>
                  <div class="inline-flex items-center gap-3">
                    <div class="flex-shrink-0">
                      <img
                        alt={template.name}
                        src={template.image}
                        class="size-10 rounded-full  grayscale"
                      />
                    </div>
                    <div class="flex-1 min-w-0  font-medium text-white">
                      <Text tag="p" variant="textSM">
                        {template.name}
                      </Text>
                      <Text tag="p" variant="textSM">
                        {template.work}
                      </Text>
                    </div>
                  </div>
                </div>
              </li>
            </>
          ))
        }
      </ul>
    </Wrapper>
  </section>
  <Cta />
</BaseLayout>
