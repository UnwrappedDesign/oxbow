---
// Images
import { Image } from "astro:assets";
// Fuindations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import MainHero from "@/components/fundations/containers/MainHero.astro";
// Sections
import Cta from "@/components/global/Cta.astro";
// Dasta
import { reviews } from "@/data/reviews.json";
---

<BaseLayout>
  <MainHero
    showAlpineTailwind={false}
    title="Meet Oxbow's customers and supporters"
  />
  <section>
    <Wrapper variant="standard" class="border-t">
      <ul
        class="w-full relative md:grod-cols-2 lg:grid-cols-2 grid gap-2"
        role="list"
      >
        {
          reviews.map((template) => (
            <>
              <li class=" h-full flex outline rounded-xl outline-base-100  dark:outline-base-900 shadow dark:shadow-2xl dark:shadow-black bg-white dark:bg-black p-8 ">
                <div class="flex flex-col h-full justify-between gap-6  ">
                  <Text
                    tag="p"
                    variant="textSM"
                    class="text-sm mt-2 text-base-500 dark:text-base-300"
                  >
                    "{template.text}"
                  </Text>
                  <div class="inline-flex items-center gap-3">
                    <div class="flex-shrink-0">
                      <Image
                        alt={template.name}
                        src={template.image}
                        width={200}
                        height={200}
                        class="size-10 rounded-full  grayscale"
                      />
                    </div>
                    <div class="flex-1 min-w-0  ">
                      <Text
                        tag="p"
                        variant="textSM"
                        class="text-black dark:text-white capitalize"
                      >
                        {template.name}
                      </Text>
                      <Text
                        tag="p"
                        variant="textXS"
                        class="capitalize text-base-400 dark:text-base-600"
                      >
                        {template.work}
                      </Text>
                    </div>
                  </div>
                </div>
              </li>
            </>
          ))
        }
      </ul>
    </Wrapper>
  </section>
  <Cta />
</BaseLayout>
