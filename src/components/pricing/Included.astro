---
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Widgets
import Marketing from "@/components/pricing/widgets/Marketing.astro";
import Application from "@/components/pricing/widgets/Application.astro";
import Ecommerce from "@/components/pricing/widgets/Ecommerce.astro";

const sections = [
