---
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const features = [
  {
    title: "400+ Components",
    description:
      "Enough building blocks to stop copy-pasting from random blogs. Responsive, accessible, and actually usable.",
  },
  {
    title: "Built with Tailwind & Alpine",
    description:
      "Modern tools that don’t suck, lightweight, and won’t bury you in dependencies.",
  },
  {
    title: "One-Time Payment",
    description:
      "Pay once, own it forever. No subscriptions, no dark patterns, no surprise invoices.",
  },
  {
    title: "Free Updates",
    description:
      "New stuff gets added over time, you don’t pay extra. Revolutionary, we know.",
  },
  {
    title: "Support, Sort Of",
    description:
      "We’ll help with real problems, not your CSS homework. Email us, we’ll be blunt.",
  },
  {
    title: "Easy to Customize",
    description:
      "Tweak it however you want. Tailwind makes it simple, unless you’re allergic to utility classes.",
  },
  {
    title: "Keyboard Friendly",
    description:
      "Yes, you can tab through everything. Accessibility isn’t optional here.",
  },
  {
    title: "Production Ready",
    description:
      "Tested, reliable, and not going to implode on modern browsers. Just drop it in and ship.",
  },
];
---

<section id="features" data-fast-goal="scrolled-to-features">
  <Wrapper variant="standard">
    <Wrapper variant="narrow">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-12">
        {
          features.map((feature) => (
            <div class="flex flex-col">
              <Text
                tag="h3"
                variant="textSM"
                class=" font-medium text-zinc-900"
              >
                {feature.title}
              </Text>
              <Text tag="p" variant="textSM" class="mt-2 text-zinc-500">
                {feature.description}
              </Text>
            </div>
          ))
        }
      </div>
    </Wrapper>
  </Wrapper>
</section>
