---
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import OxbowLink from "@/components/fundations/buttons/OxbowLink.astro";
// Data
const teamLicenseUrl = import.meta.env.PRODUCT_TEAM_LICENSE_URL;
const features = [
  {
    text: "5 Users",
  },
  {
    text: "Lifetime access",
  },
  {
    text: "Unlimited projects",
  },
  {
    text: "Over 400+ components and blocks",
  },
  {
    text: "Marketing, application  & eCommerce ",
  },
  {
    text: "Discord Support",
  },
];
---

<section
  class="relative flex flex-col justify-between h-full p-8 overflow-hidden rounded-xl bg-base-50 dark:bg-white/5"
>
  <div class="flex flex-col justify-start h-full">
    <div class="flex flex-col gap-2">
      <div class="flex flex-col gap-2">
        <Text
          tag="h3"
          variant="textBase"
          class="font-mono text-black uppercase dark:text-white"
        >
          Teams
        </Text>
        <Text tag="p" variant="textXL" class="mt-2 text-black dark:text-white">
          $399
          <span class="text-xs text-base-500 dark:text-base-300">
            One time
          </span>
          <span class="block pt-1 text-xs italic text-base-400">
            USD + Applicable local taxes
          </span>
        </Text>
      </div>
      <Text
        tag="p"
        variant="textSM"
        class="mt-4 tracking-wide text-black dark:text-white"
      >
        For product teams and agencies.
      </Text>
    </div>
    <div class="mt-8">
      <Text
        tag="p"
        variant="textSM"
        class="font-mono font-medium text-black uppercase dark:text-white"
      >
        What you get:
      </Text>
      <ul
        class="flex flex-col pl-3 mt-4 text-sm font-medium list-disc text-base-500 dark:text-base-300 gap-y-3"
        role="list"
      >
        {features.map((feature) => <li class="">{feature.text}</li>)}
      </ul>
    </div>
  </div>
  <div class="w-full mt-8">
    <OxbowLink
      id="purchase-team-license"
      data-umami-event="purchase team license"
      href={teamLicenseUrl}
      size="base"
      variant="default"
      class="w-full"
    >
      Buy for $399
    </OxbowLink>
  </div>
</section>
