---
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import OxbowLink from "@/components/fundations/buttons/OxbowLink.astro";
// Data
const teamLicenseUrl = import.meta.env.PRODUCT_TEAM_LICENSE_URL;
const features = [
  {
    text: "5 Users",
  },
  {
    text: "Lifetime access",
  },
  {
    text: "Unlimited projects",
  },
  {
    text: "Over 400+ components and blocks",
  },
  {
    text: "Marketing, application  & eCommerce ",
  },
  {
    text: "Discord Support",
  },
];
---

<section
  class="bg-linear-45 from-base-900 p-8 overflow-hidden relative rounded-xl outline outline-base-900 shadow-2xl shadow-base-950 bg-base-950 flex flex-col justify-between h-full"
>
  <div class="flex flex-col h-full justify-start">
    <div class="flex flex-col gap-2">
      <div class="flex flex-col gap-2">
        <Text tag="h3" variant="textLg" class="text-white font-mono uppercase">
          Teams
        </Text>
        <Text tag="p" variant="textXL" class="text-white mt-2">
          $399
          <span class="text-xs text-base-500"> One time </span>
          <span class="text-base-400 italic pt-1 block text-xs">
            USD + Applicable local taxes
          </span>
        </Text>
      </div>
      <Text tag="p" variant="textSM" class="text-white tracking-wide mt-4">
        For product teams and agencies. 
      </Text>
    </div>
    <div class="mt-8">
      <Text
        tag="p"
        variant="textSM"
        class="uppercase font-mono text-white font-medium"
      >
        What you get:
      </Text>
      <ul
        class="flex flex-col mt-4 text-sm text-base-500 font-medium gap-y-3 list-disc pl-3"
        role="list"
      >
        {features.map((feature) => <li class="">{feature.text}</li>)}
      </ul>
    </div>
  </div>
  <div class="w-full mt-8">
    <OxbowLink
      id="purchase-team-license"
      data-umami-event="purchase team license"
      href={teamLicenseUrl}
      size="sm"
      variant="default"
      class="w-full"
    >
      Buy for $399
    </OxbowLink>
  </div>
</section>
