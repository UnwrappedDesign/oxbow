---
import Text from "@/components/fundations/typography/Text.astro";
const features = [
  {
    text: "1 User",
  },
  {
    text: "All components and blocks",
  },
  {
    text: "Lifetime access",
  },
  {
    text: "Unlimited projects",
  },
  {
    text: "Discord Support",
  },
];
---

<div class="flex px-8 py-12 bg-base-50 h-full border border-base-200 relative">
  <div class="flex flex-col h-full justify-between size-full">
    <div>
      <Text
        tag="p"
        variant="textLG"
        class="text-black font-medium flex items-center gap-1">
        <Text tag="span">Individual</Text> â€”
        <Text tag="span"> $149 </Text>
      </Text>
      <Text
        tag="p"
        variant="textMD"
        class="text-neutral-600 font-medium mt-1">
        Perfect for personal and clients.
      </Text>
      <div class="mt-8">
        <Text
          tag="p"
          variant="textSM"
          class="text-black uppercase font-bold mt-1"
          >Includes</Text
        >
        <ul
          class="flex flex-col text-base-600 font-medium mt-2 space-y-2"
          role="list">
          {
            features.map((feature) => (
              <li class="flex items-center gap-2">
                <svg
                  class="size-2"
                  viewBox="0 0 100 100"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <circle
                    cx="50"
                    cy="50"
                    r="50"
                    fill="currentColor"
                  />
                </svg>
                <div class="flex items-center gap-1 w-full">
                  <Text
                    tag="span"
                    variant="textBase">
                    {feature.text}
                  </Text>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <div class="mt-8 w-full flex">
      <Text
        tag="a"
        href="/api/buy/individual"
        class="rounded-full flex items-center transition-all duration-200 focus:ring-2 focus:ring-offset-2 focus:outline-none text-white bg-accent-500 hover:bg-accent-600 focus:ring-accent-600 h-9 px-4 py-2 text-sm font-medium w-full justify-center">
        Buy for $149
      </Text>
    </div>
  </div>
</div>
