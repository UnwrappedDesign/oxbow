---
import Text from "@/components/fundations/typography/Text.astro";
const individualLicenseUrl = import.meta.env.PRODUCT_INDIVIDUAL_LICENSE_URL;
const features = [
  {
    text: "1 User",
  },
  {
    text: "Lifetime access",
  },
  {
    text: "Unlimited projects",
  },
  {
    text: "Over 400+ components and blocks",
  },
  {
    text: "Marketing, application  & eCommerce ",
  },

  {
    text: "Discord Support",
  },
];
---

<div
  class="flex flex-col justify-between order-first h-full p-8 gap-8 border-t lg:order-none border-base-200 lg:border-t-0 lg:border-x"
>
  <div>
    <Text
      tag="p"
      variant="textXL"
      class="tracking-tight font-semibold text-black"
      >Individual â€” <del class="opacity-45">$149</del> $67</Text
    >
    <Text tag="p" variant="textBase" class="mt-2 font-medium text-neutral-600">
      Perfect for personal and clients.
    </Text>
    <div class="mt-4">
      <Text tag="p" variant="textSM" class="font-bold text-black uppercase"
        >Includes</Text
      >
      <ul
        class="flex flex-col mt-2 space-y-2 font-medium text-base-600"
        role="list"
      >
        {
          features.map((feature) => (
            <li class="flex items-center gap-2">
              <div class=" ring-1 ring-zinc-200 dark:ring-zinc-700 p-[0.110rem] bg-white/5 shadow  rounded-sm ">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="3"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="icon icon-tabler icons-tabler-outline icon-tabler-check size-2.5"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M5 12l5 5l10 -10" />
                </svg>
              </div>

              <Text tag="span" variant="textBase">
                {feature.text}
              </Text>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div>
    <Text
      tag="a"
      href={individualLicenseUrl}
      id="purchase-individual-license"
      data-umami-event="purchase individual license"
      class="flex items-center justify-center w-full h-12 px-6 py-2 font-medium text-white transition-all duration-200 border rounded-full border-accent-500 ring-4 ring-base-50 gap-x-2 focus:ring-2 focus:ring-offset-2 focus:outline-none bg-accent-700 hover:bg-accent-950 focus:ring-accent-600"
    >
      Buy for <del class="opacity-45">$149</del> $67
    </Text>
  </div>
</div>
