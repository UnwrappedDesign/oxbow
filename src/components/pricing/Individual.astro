---
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import OxbowLink from "@/components/fundations/buttons/OxbowLink.astro";
// Data
const individualLicenseUrl = import.meta.env.PRODUCT_INDIVIDUAL_LICENSE_URL;
const features = [
  {
    text: "1 User",
  },
  {
    text: "Lifetime access",
  },
  {
    text: "Unlimited projects",
  },
  {
    text: "Over 400+ components and blocks",
  },
  {
    text: "Marketing, application  & eCommerce ",
  },
  {
    text: "Discord Support",
  },
];
---

<section
  class="bg-linear-45 from-base-50 dark:from-base-900 p-8 overflow-hidden relative rounded-xl outline outline-base-100 dark:outline-base-900 shadow dark:shadow-2xl dark:shadow-base-950 bg-white dark:bg-base-950 flex flex-col justify-between h-full"
>
  <div class="flex flex-col h-full justify-start">
    <div class="flex flex-col gap-2">
      <div class="flex flex-col gap-2">
        <Text
          tag="h3"
          variant="textBase"
          class="text-black dark:text-white font-mono uppercase"
        >
          Personal
        </Text>
        <Text tag="p" variant="textXL" class="text-black dark:text-white mt-2">
          <del class="opacity-45">$149</del> $67
          <span class="text-xs text-base-500 dark:text-base-300">
            One time
          </span>
          <span class="text-base-400 italic pt-1 block text-xs">
            USD + Applicable local taxes
          </span>
        </Text>
      </div>
      <Text
        tag="p"
        variant="textSM"
        class="text-black dark:text-white tracking-wide mt-4"
      >
        For individual and client work
      </Text>
    </div>
    <div class="mt-8">
      <Text
        tag="p"
        variant="textSM"
        class="uppercase font-mono text-black dark:text-white font-medium"
      >
        What you get:
      </Text>
      <ul
        class="flex flex-col mt-4 text-sm text-base-500 dark:text-base-300 font-medium gap-y-3 list-disc pl-3"
        role="list"
      >
        {features.map((feature) => <li class="">{feature.text}</li>)}
      </ul>
    </div>
  </div>
  <div class="w-full mt-8">
    <OxbowLink
      id="purchase-team-license"
      data-umami-event="purchase team license"
      href={individualLicenseUrl}
      size="base"
      variant="accent"
      class="w-full"
    >
      Buy for <span><del class="opacity-50 ml-1">$149</del> $67</span>
    </OxbowLink>
  </div>
</section>
