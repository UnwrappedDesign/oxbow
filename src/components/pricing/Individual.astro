---
import Text from "@/components/fundations/typography/Text.astro";
const features = [
  {
    text: "1 User",
  },
  {
    text: "Lifetime access",
  },
  {
    text: "Unlimited projects",
  },
  {
    text: "Over 400+ components",
  },

  {
    text: "Discord Support",
  },
];
---

<div
  class="flex flex-col justify-between divide-y divide-base-200 order-first h-full gap-8 border-t lg:order-none border-base-200 lg:border-t-0 lg:border-x"
>
  <div class="p-8 xl:px-12">
    <Text tag="p" class="flex flex-col gap-4 font-medium text-black">
      <Text tag="span" variant="textLG">
        <del class="opacity-45">$149</del> $67</Text
      >
      <Text tag="span" variant="displaySM" class="font-semibold tracking-tight"
        >Individual</Text
      >
    </Text>
    <Text tag="p" variant="textBase" class="mt-2 font-medium text-neutral-600">
      Perfect for personal and clients.
    </Text>
    <div class="mt-4">
    
      <ul
        class="flex flex-col space-y-2 font-medium text-base-600"
        role="list"
      >
        {
          features.map((feature) => (
            <li class="flex items-center gap-2">
              <svg
                class="size-1.5"
                viewBox="0 0 100 100"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <circle cx="50" cy="50" r="50" fill="currentColor" />
              </svg>
              <div class="flex items-center w-full gap-1">
                <Text tag="span" variant="textBase">
                  {feature.text}
                </Text>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class="px-8 py-4">
    <Text
      tag="a"
      href="/api/buy/individual"
      id="purchase-individual-license"
      data-umami-event="purchase individual license"
      class="flex items-center justify-center w-full h-12 px-6 py-2 font-medium text-white transition-all duration-200 border rounded-full border-accent-950 ring-4 ring-base-100 gap-x-2 focus:ring-2 focus:ring-offset-2 focus:outline-none bg-accent-950 hover:bg-accent-900 focus:ring-accent-900"
    >
      Buy for <del class="opacity-45">$149</del> $67
    </Text>
  </div>
</div>
