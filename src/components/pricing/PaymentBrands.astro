---
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const paymentImages = [
  { src: "/paypal.svg", alt: "PayPal logo" },
  { src: "/applepay.svg", alt: "Apple Pay logo" },
  { src: "/googlepay.svg", alt: "Google Pay logo" },
  { src: "/mastercard.svg", alt: "MasterCard logo" },
  { src: "/visa.svg", alt: "Visa logo" },
];
---

<section>
  <Wrapper variant="standard" class="py-2">
    <div class="flex flex-col gap-4 md:flex-row">
      <div class="inline-flex items-center gap-3">
        <Text tag="p" variant="textSM" class="font-medium text-black"
          >Secure Payments via
        </Text>
        <div class="flex items-center font-medium gap-2">
          <img class="h-5" src="/images/forms/polar.svg" alt="" />
          <Text tag="p" variant="textSM" class="font-medium text-black"
          >Polar
        </Text>
        </div>
      </div>
      <!-- <ul class="flex flex-wrap list-none gap-4" role="list">
        {
          paymentImages.map((image) => (
            <li>
              <img class="h-5" src={image.src} alt={image.alt} />
            </li>
          ))
        }
      </ul> -->
    </div>
  </Wrapper>
</section>
