---
import Text from "@/components/fundations/typography/Text.astro";
const features = [
  {
    text: "1 component in every category",
  },
  {
    text: "No registration needed",
  },
];
---

<div
  class="flex flex-col justify-between h-full gap-8 border-t border-base-200 lg:border-none divide-y divide-base-200"
>
  <div class="p-8 xl:px-12">
    <Text tag="p" class="flex flex-col gap-4 font-medium text-black">
      <Text tag="span" variant="textLG">$0</Text>
      <Text tag="span" variant="displaySM" class="font-semibold tracking-tight">
        Free blocks
      </Text>
    </Text>
    <Text tag="p" variant="textBase" class="mt-1 font-medium text-neutral-600">
      Testing and personal.
    </Text>
    <div class="mt-4">
      
      <ul
        class="flex flex-col  space-y-2 font-medium text-base-600"
        role="list"
      >
        {
          features.map((feature) => (
            <li class="flex items-center gap-2">
              <svg
                class="size-1.5"
                viewBox="0 0 100 100"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <circle cx="50" cy="50" r="50" fill="currentColor" />
              </svg>
              <Text tag="span" variant="textBase">
                {feature.text}
              </Text>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class="px-8 py-4 xl:px-12">
    <Text
      tag="a"
      href="/components"
      class="flex items-center justify-center w-full h-12 px-6 py-2 font-medium transition-all duration-200 bg-white border rounded-full ring-4 ring-base-50 text-accent-600 focus:ring-2 focus:ring-offset-2 focus:outline-none border-base-200 hover:text-accent-950 focus:ring-accent-600"
    >
      Browser all components
    </Text>
  </div>
</div>
