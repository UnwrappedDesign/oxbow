---
import Text from "@/components/fundations/typography/Text.astro";
const features = [
  {
    text: "21 component in every category",
  },
  {
    text: "No registration needed",
  },
];
---

<div class="flex px-8 py-12 bg-white h-full border border-base-200">
  <div class="flex flex-col h-full justify-between size-full">
    <div>
      <Text
        tag="p"
        variant="textLG"
        class="text-black font-medium flex items-center gap-1">
        <Text tag="span"> Free blocks </Text>
        â€”
        <Text tag="span">$0</Text>
      </Text>
      <Text
        tag="p"
        variant="textMD"
        class="text-neutral-600 font-medium mt-1">
        Explore free demos for every category.
      </Text>
      <div class="mt-8">
        <Text
          tag="p"
          variant="textMD"
          class="text-neutral-600 font-medium mt-1"
          >Includes</Text
        >
        <ul
          class="flex flex-col text-base-600 font-medium mt-2 space-y-2"
          role="list">
          {
            features.map((feature) => (
              <li class="flex items-center gap-2">
                <svg
                  class="size-2"
                  viewBox="0 0 100 100"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <circle
                    cx="50"
                    cy="50"
                    r="50"
                    fill="currentColor"
                  />
                </svg>
                <Text
                  tag="span"
                  variant="textBase">
                  {feature.text}
                </Text>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <div class="mt-8 w-full flex">
      <Text
        tag="a"
        href="/"
        class="rounded-full flex items-center transition-all duration-200 focus:ring-2 focus:ring-offset-2 focus:outline-none text-base-700 bg-white ring-offset-2 ring-offset-base-50 hover:text-accent-600 focus:ring-accent-500 h-9 px-4 py-2 text-sm font-medium justify-center w-full ring-1 ring-base-200">
        Browser all components
      </Text>
    </div>
  </div>
</div>
