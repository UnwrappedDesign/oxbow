---
// src/components/ColorCircles.astro
const bg500Shades = [
  "bg-red-500",
  "bg-orange-500",
  "bg-amber-500",
  "bg-yellow-500",
  "bg-lime-500",
  "bg-green-500",
  "bg-emerald-500",
  "bg-teal-500",
  "bg-cyan-500",
  "bg-sky-500",
  "bg-stone-500",
  "bg-indigo-500",
  "bg-violet-500",
  "bg-purple-500",
  "bg-pink-500",
  "bg-rose-500",
  "bg-slate-500",
  "bg-zinc-500",
  "bg-zinc-500",
  "bg-neutral-500",
  "bg-stone-500",
];
---

<div aria-hidden="true" class="flex gap-2 shrink-0">
  {
    bg500Shades.map((shade) => (
      <div class="p-1 rounded-lg outline outline-zinc-200 hover:-translate-y-12 duration-600 ">
        <div
          class={`${shade}  h-20 w-10  shrink-0  rounded-md`}
          title={shade}
        />
      </div>
    ))
  }
</div>
