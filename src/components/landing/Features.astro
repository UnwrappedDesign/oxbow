---
import { Image } from "astro:assets";
import showcase from "@/images/assets/showcase.png";
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const inside = [
  {
    img: "/images/oxbow/marketing.png",
    title: "Marketing",
    description:
      "Offers hero sections, feature segments, newsletter sign-up forms, and more to boost your marketing efforts.",
  },
  {
    img: "/images/oxbow/application.png",
    title: "Application",
    description:
      " Includes buttons, form controls, application layouts, dialogs, and more to enhance your application’s user interface.",
  },
  {
    img: "/images/oxbow/ecommerce.png",
    title: "eCommerce",
    description:
      "Provides checkout forms, shopping carts, product views, and more tailored for ecommerce functionalities.",
  },
];
---

<section>
  <Wrapper variant="standardPaddingless">
    <div class="relative overflow-hidden">
      <Image
        src={showcase}
        alt="showcase"
        class="mb-[-11%] mt-[-6%] drop-shadow-xl"
      />
      <div
        class="absolute -inset-x-20 bottom-0 bg-gradient-to-t from-base-50 via-base-50 pt-[12%]"
        aria-hidden="true"
      >
      </div>
    </div>
  </Wrapper>
