---
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Widgets
import Stack from "@/components/landing/widgets/Stack.astro";
import Colors from "@/components/landing/widgets/Colors.astro";
import Devices from "@/components/landing/widgets/Devices.astro";
import Components from "@/components/landing/widgets/Components.astro";
// Widgets
import Marketing from "@/components/landing/widgets/Marketing.astro";
import Application from "@/components/landing/widgets/Application.astro";
import Ecommerce from "@/components/landing/widgets/Ecommerce.astro";
---

<section class="border-t border-base-200">
  <Wrapper variant="standard" class="lg:border-x lg:border-base-200">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <div
        class="relative flex flex-col justify-start h-full p-6 overflow-hidden bg-white gap-4 rounded-xl shadow-oxbow sm:p-4 sm:pb-5 lg:p-6 group lg:col-span-2"
      >
        <div>
          <Text tag="h3" variant="textLG" class="font-medium text-base-900">
            Components
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 text-balance lg:text-base"
          >
            400+ components you won’t need to fight with. Accessible, flexible,
            and won’t make you cry when customizing.
          </Text>
        </div>
        <div class="relative mt-auto">
          <Components />
        </div>
      </div>
      <div
        class="relative flex flex-col justify-start h-full p-6 overflow-hidden bg-white gap-4 rounded-xl shadow-oxbow sm:p-4 sm:pb-5 lg:p-6 group"
      >
        <div>
          <Text tag="h3" variant="textLG" class="font-medium text-base-900">
            Stack
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 text-balance lg:text-base"
          >
            Prebuilt blocks so good, you might forget you're using Tailwind and
            Alpine. Build fast, brag faster.
          </Text>
        </div>
        <div class="relative mt-12">
          <Stack />
        </div>
      </div>
      <div
        class="relative flex flex-col justify-start h-full p-6 overflow-hidden bg-white gap-4 rounded-xl shadow-oxbow sm:p-4 sm:pb-5 lg:p-6 group"
      >
        <div>
          <Text tag="h3" variant="textLG" class="font-medium text-base-900">
            Responsive Design
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 text-balance lg:text-base"
          >
            Looks good everywhere—yes, even on that ancient phone or your boss’s
            oversized monitor.
          </Text>
        </div>
        <div class="relative mt-12">
          <Devices />
        </div>
      </div>
      <div
        class="relative flex flex-col justify-start h-full p-6 overflow-hidden bg-white gap-4 rounded-xl shadow-oxbow sm:p-4 sm:pb-5 lg:p-6 group lg:col-span-2"
      >
        <div>
          <Text tag="h3" variant="textLG" class="font-medium text-base-900">
            Pick your color
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 text-balance lg:text-base"
          >
            Slap your brand color on anything. Instant consistency, fake effort
            level: expert.
          </Text>
        </div>
        <div class="relative">
          <Colors />
        </div>
      </div>
      <div
        class="relative flex flex-col justify-start h-full p-6 overflow-hidden bg-white gap-4 rounded-xl shadow-oxbow sm:p-4 sm:pb-5 lg:p-6 group"
      >
        <div>
          <span class="text-sm text-base-500 text-balance"> Marketing </span>
          <Text
            tag="h3"
            variant="textBase"
            class="mt-4 font-medium text-base-900"
          >
            Landing pages
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 text-balance lg:text-base"
          >
            Heroes, features, pricing—basically everything you need to make a
            landing page that doesn’t suck.
          </Text>
        </div>
        <div class="relative mt-auto">
          <Marketing />
        </div>
      </div>
      <div
        class="relative flex flex-col justify-start h-full p-6 overflow-hidden bg-white gap-4 rounded-xl shadow-oxbow sm:p-4 sm:pb-5 lg:p-6 group"
      >
        <div>
          <span class="text-sm text-base-500 text-balance"> Application </span>
          <Text
            tag="h3"
            variant="textBase"
            class="mt-4 font-medium text-base-900"
          >
            Building a webapp?
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 text-balance lg:text-base"
          >
            Navs, buttons, forms, layouts—everything you need to make your UI
            not look like it was built in a panic.
          </Text>
        </div>
        <div class="relative mt-auto">
          <Application />
        </div>
      </div>
      <div
        class="relative flex flex-col justify-start h-full p-6 overflow-hidden bg-white gap-4 rounded-xl shadow-oxbow sm:p-4 sm:pb-5 lg:p-6 group"
      >
        <div>
          <span class="text-sm text-base-500 text-balance"> Ecommerce </span>
          <Text
            tag="h3"
            variant="textBase"
            class="mt-4 font-medium text-base-900"
          >
            Got a store?
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 text-balance lg:text-base"
          >
            Carts, checkouts, promos—basically everything but your product. We
            trust you’ve got that part covered.
          </Text>
        </div>
        <div class="relative mt-auto -mr-22">
          <Ecommerce />
        </div>
      </div>
    </div>
  </Wrapper>
</section>
