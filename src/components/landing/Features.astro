---
// Assets
import { Image } from "astro:assets";
import showcase from "@/images/assets/showcase.png";
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const data = [
  {
    icon: "Component",
    category: "Components",
    text: "More than 400 easy-to-use components that are accessible and simple to customize.",
  },
  {
    icon: "Code",
    category: "Tailwind, Alpine, and More",
    text: "Ready-to-use blocks built with HTML, Tailwind CSS and Alpine JS.",
  },
  {
    icon: "Devices",
    category: "Responsive Design",
    text: "Every example works on any screen size, so your design always looks good.",
  },
  {
    icon: "ColorPicker",
    category: "Pick your color",
    text: "Customize each block with your brandâ€™s accent color for a perfect match.",
  },
];
---

<section class="relative">
  <Wrapper variant="standard" class="relative border-t">
    <dl
      class="grid grid-cols-1 sm:grid-cols-2 gap-y-12 lg:grid-cols-4 lg:gap-y-16 gap-8"
    >
      {
        data.map((section) => (
          <div>
            <Text
              tag="h3"
              variant="textBase"
              class=" text-black dark:text-white font-medium"
            >
              {section.category}
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class=" mt-2 text-base-500 dark:text-base-300 text-pretty"
            >
              {section.text}
            </Text>
          </div>
        ))
      }
    </dl>
  </Wrapper>
  <section>
    <Wrapper variant="standard" class="relative border-t">
      <div
        class="overflow-hidden outline rounded-xl outline-base-100 shadow dark:outline-base-900 dark:shadow-2xl dark:shadow-black p-8 dark:bg-base-950 order-first lg:order-none"
      >
        <Image
          class="object-cover h-full max-h-96 lg:-mt-4 bg-stripes-light dark:bg-stripes-dark w-full object-top drop-shadow-2xl scale-110 shadow mask-b-from-10% mask-b-to-95%"
          src={showcase}
          alt="showcase"
        />
      </div>
    </Wrapper>
  </section>
</section>
