---
import { reviews } from "../../data/reviews.json";
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import OxbowLink from "@/components/fundations/buttons/OxbowLink.astro";
---

<section>
  <Wrapper
    variant="standard"
    class="py-12 lg:py-24 grid grid-cols-1 gap-y-12 sm:grid-cols-2 lg:grid-cols-4"
  >
    <Text
      tag="h3"
      variant="displaySM"
      class="text-black font-medium tracking-tighter"
    >
      We have customers....
    </Text>
    <ul
      class="w-full relative md:grid-cols-2 lg:grid-cols-3 grid gap-y-12 gap-x-8 lg:col-span-3"
      lg:col-span-3
      role="list"
    >
      {
        reviews.slice(0, 3).map((template) => (
          <>
            <li class=" h-full flex  ">
              <div class="flex flex-col h-full justify-between gap-6  ">
                <Text
                  tag="p"
                  variant="textSM"
                  class="text-base-500 text-balance font-medium  "
                >
                  "{template.text}"
                </Text>
                <div class="inline-flex items-center gap-3">
                  <div class="flex-shrink-0">
                    <img
                      alt={template.name}
                      src={template.image}
                      class="size-10 rounded-full  grayscale"
                    />
                  </div>
                  <div class="flex-1 min-w-0  font-medium text-black">
                    <Text tag="p" variant="textSM">
                      {template.name}
                    </Text>
                    <Text tag="p" variant="textSM">
                      {template.work}
                    </Text>
                  </div>
                </div>
              </div>
            </li>
          </>
        ))
      }
    </ul>
    <div class="flex mt-12">
      <OxbowLink
        size="base"
        variant="muted"
        href="/customers"
        id="access-footer-cta"
        data-umami-event="access-footer-cta"
        class="w-auto"
      >
        Read them all
      </OxbowLink>
    </div>
  </Wrapper>
</section>
