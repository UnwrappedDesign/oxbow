---
export const freeComponent = true;
export const excludeFromObfuscation = [
  "bg-zinc-50",
  "border-zinc-200",
  "text-zinc-700",
  "tabular-nums",
];
const rows = [
  {
    name: "Alex Thompson",
    email: "alex.t@company.com",
    location: "San Francisco, US",
    status: "Active",
    balance: 1250,
  },
  {
    name: "Sarah Chen",
    email: "sarah.c@company.com",
    location: "Singapore",
    status: "Active",
    balance: 600,
  },
  {
    name: "James Wilson",
    email: "j.wilson@company.com",
    location: "London, UK",
    status: "Inactive",
    balance: 650,
  },
  {
    name: "Maria Garcia",
    email: "m.garcia@company.com",
    location: "Madrid, Spain",
    status: "Active",
    balance: 0,
  },
  {
    name: "David Kim",
    email: "d.kim@company.com",
    location: "Seoul, KR",
    status: "Active",
    balance: -1000,
  },
];
---

<div class="flex flex-col justify-center p-8 mx-auto bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div class="mx-auto flow-root max-w-7xl">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="flex justify-center">
          <table class="min-w-[900px] text-sm">
            <thead class="bg-zinc-100 dark:bg-zinc-950">
              <tr>
                <th
                  class="px-3 py-2 font-medium text-left text-zinc-900 dark:text-white"
                  >Name</th
                >
                <th
                  class="px-3 py-2 font-medium text-left text-zinc-900 dark:text-white"
                  >Email</th
                >
                <th
                  class="px-3 py-2 font-medium text-left text-zinc-900 dark:text-white"
                  >Location</th
                >
                <th
                  class="px-3 py-2 font-medium text-left text-zinc-900 dark:text-white"
                  >Status</th
                >
                <th
                  class="px-3 py-2 font-medium text-right text-zinc-900 dark:text-white"
                  >Balance</th
                >
              </tr>
            </thead>
            <tbody>
              {
                rows.map((r) => (
                  <tr class="text-sm even:bg-zinc-50 even:dark:bg-zinc-800">
                    <td class="px-3 py-2 font-medium text-zinc-700 dark:text-zinc-100">
                      {r.name}
                    </td>
                    <td class="px-3 py-2 text-zinc-500 dark:text-zinc-300">
                      {r.email}
                    </td>
                    <td class="px-3 py-2 text-zinc-500 dark:text-zinc-300">
                      {r.location}
                    </td>
                    <td class="px-3 py-2 text-zinc-600 dark:text-zinc-200">
                      <span
                        class={
                          r.status === "Active"
                            ? "text-emerald-600 dark:text-emerald-400"
                            : r.status === "Inactive"
                              ? "text-red-600 dark:text-red-400"
                              : ""
                        }
                      >
                        {r.status}
                      </span>
                    </td>
                    <td class="px-3 py-2 font-mono text-right tabular-nums text-zinc-700 dark:text-zinc-100">
                      {Intl.NumberFormat("en-US", {
                        style: "currency",
                        currency: "USD",
                      }).format(r.balance)}
                    </td>
                  </tr>
                ))
              }
              <tr class="font-medium">
                <td class="px-3 py-2 dark:text-zinc-200" colspan="4">Total</td>
                <td class="px-3 py-2 text-right tabular-nums dark:text-zinc-100"
                  >{
                    Intl.NumberFormat("en-US", {
                      style: "currency",
                      currency: "USD",
                    }).format(rows.reduce((s, r) => s + r.balance, 0))
                  }</td
                >
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
