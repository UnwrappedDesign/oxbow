---
export const excludeFromObfuscation = [
  "bg-zinc-50",
  "border-zinc-200",
  "text-zinc-700",
  "sticky",
  "top-0",
];
---

<div class="flex flex-col justify-center p-8 mx-auto bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div
    class="w-full max-w-5xl mx-auto overflow-hidden bg-white border rounded-lg border-zinc-200 dark:border-zinc-700 dark:bg-zinc-900"
  >
    <div class="overflow-auto max-h-80">
      <table class="min-w-full text-xs bg-white dark:bg-zinc-900">
        <thead
          class="sticky top-0 z-10 bg-zinc-50 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-200"
        >
          <tr>
            <th class="px-3 py-2 font-medium text-left">ID</th>
            <th class="px-3 py-2 font-medium text-left">Title</th>
            <th class="px-3 py-2 font-medium text-left">Owner</th>
            <th class="px-3 py-2 font-medium text-left">Updated</th>
            <th class="px-3 py-2 font-medium text-right">Items</th>
          </tr>
        </thead>
        <tbody>
          {
            Array.from({ length: 40 }).map((_, i) => (
              <tr class="even:bg-zinc-50 dark:even:bg-zinc-800">
                <td class="px-3 py-2 text-zinc-500 dark:text-zinc-300">
                  #{i + 1001}
                </td>
                <td class="px-3 py-2 text-zinc-700 dark:text-zinc-100">
                  Collection {i + 1}
                </td>
                <td class="px-3 py-2 text-zinc-500 dark:text-zinc-300">
                  owner{i % 7}@example.com
                </td>
                <td class="px-3 py-2 text-zinc-500 dark:text-zinc-300">
                  2025-09-{String((i % 28) + 1).padStart(2, "0")}
                </td>
                <td class="px-3 py-2 font-mono text-right text-zinc-700 dark:text-zinc-100 tabular-nums">
                  {(i * 3) % 50}
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </div>
  <!-- copy:end -->
</div>
