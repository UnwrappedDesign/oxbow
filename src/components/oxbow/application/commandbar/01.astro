---
export const freeComponent = true;
import CommandbarButton from "@/components/fundations/buttons/CommandBarButton.astro";
import Component from "@/components/fundations/icons/Component.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import Search from "@/components/fundations/icons/Search.astro";
---

<div
  class="flex items-center justify-center p-8 py-48 lg:py-62 bg-white dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    class="max-w-xl p-2.5 mx-auto w-full overflow-hidden bg-white dark:bg-zinc-800 shadow-lg transition-all transform rounded-xl outline-1 outline-zinc-200 dark:outline-white/10"
  >
    <!-- Input section with label and accessible search -->
    <div
      class="relative bg-zinc-50 dark:bg-zinc-900 focus-within:bg-white dark:focus-within:bg-zinc-900 rounded-md"
    >
      <label for="search" class="sr-only">Search</label>
      <Search
        class="pointer-events-none absolute top-3.5 left-4 text-zinc-400"
        size="base"
        slot="icon"
      />
      <input
        id="search"
        type="text"
        class="w-full h-12 pr-4 bg-transparent border-0 text-zinc-800 dark:text-zinc-100 placeholder-zinc-400 dark:placeholder-zinc-500 pl-11 focus:ring-0 sm:text-sm"
        placeholder="Search for anything"
        role="combobox"
        aria-expanded="false"
        aria-controls="options"
        aria-autocomplete="list"
      />
    </div>
    <!-- Options list with roles and keyboard focusability -->
    <ul
      class="pt-3 overflow-y-auto space-y-3 max-h-96 scroll-py-3"
      id="options"
      role="listbox"
      tabindex="0"
    >
      <li id="option-1" role="option" tabindex="0" aria-selected="false">
        <CommandbarButton
          text="Search projects..."
          hasKbd={true}
          kbdKey="S"
          iconSlot={true}
          class="hover:bg-zinc-50 dark:hover:bg-zinc-700"
        >
          <Component size="sm" slot="icon" />
        </CommandbarButton>
      </li>
      <li id="option-2" role="option" tabindex="0" aria-selected="false">
        <CommandbarButton
          text="Create another project"
          hasKbd={true}
          kbdKey="C"
          iconSlot={true}
          class="hover:bg-zinc-50 dark:hover:bg-zinc-700"
        >
          <Plus size="sm" slot="icon" />
        </CommandbarButton>
      </li>
      <!-- Add more items similarly with roles and attributes... -->
    </ul>
  </div>
  <!-- copy:end -->
</div>
