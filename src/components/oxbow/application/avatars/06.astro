---
import Text from "@/components/fundations/typography/Text.astro";
import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
import YoutubeBrand from "@/components/fundations/icons/YoutubeBrand.astro";
import GithubBrand from "@/components/fundations/icons/GithubBrand.astro";
---

<div class="flex items-center justify-center p-8">
  <!-- copy:start -->
  <div class="flex-shrink-0 block group">
    <div class="flex flex-col items-center text-center gap-2">
      <div>
        <img
          class="inline-block rounded-full size-9"
          src="/avatars/1.jpg"
          alt=""
        />
      </div>
      <Text
        tag="a"
        href="#_"
        variant="textBase"
        class="font-medium hover:text-stone-500 text-zinc-500"
      >
        <Text tag="h3" variant="textBase" class="font-medium text-zinc-900">
          Michael Andreuzza
        </Text>
        <Text tag="p" variant="textXS" class="font-medium text-zinc-400">
          example@example.com
        </Text>
      </Text>
      <nav
        aria-labelledby="social-icons-heading"
        role="navigation"
        class="flex items-center gap-4 text-zinc-500"
      >
        <Text id="social-icons-heading" class="sr-only">
          Follow us on social media
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <XBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <LinkedinBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <GithubBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <YoutubeBrand size="sm" />
        </Text>
      </nav>
    </div>
  </div>
  <!-- copy:end -->
</div>
