---
export const freeComponent = true;
---

<div class="flex items-center justify-center p-14 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div x-data="{ error:false, showInitials:false }" class="relative">
    <template x-if="!error">
      <img
        class="inline-block rounded-full size-16 object-cover ring-2 ring-white dark:ring-zinc-800"
        src="/avatars/1.jpg"
        alt="User avatar"
        @error="error=true"
      />
    </template>
    <template x-if="error">
      <div
        class="inline-flex items-center justify-center rounded-full size-16 bg-zinc-200 dark:bg-zinc-700 ring-2 ring-white dark:ring-zinc-800"
      >
        <span
          x-show="showInitials"
          class="text-zinc-600 dark:text-zinc-200"
          aria-label="Avatar initials">MA</span
        >
        <button
          x-show="!showInitials"
          @click="showInitials = true"
          class="text-xs rounded bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-200 border border-zinc-200 dark:border-zinc-700 px-2 py-1"
          type="button"
        >
          Show initials
        </button>
      </div>
    </template>
  </div>
  <!-- copy:end -->
</div>
