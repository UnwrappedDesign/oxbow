---
export const freeComponent = true;
---
<div class="flex items-center justify-center p-12 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div x-data="{ error:false }" class="relative">
    <img
      x-show="!error"
      class="inline-block rounded-full size-16 object-cover ring-2 ring-white dark:ring-zinc-800"
      src="/avatars/1.jpg"
      alt="User avatar"
      @error="error=true"
    />
    <div
      x-show="error"
      class="inline-flex items-center justify-center rounded-full size-16 bg-zinc-200 dark:bg-zinc-700 text-zinc-600 dark:text-zinc-200 ring-2 ring-white dark:ring-zinc-800"
      aria-label="Avatar initials"
    >
      MA
    </div>
  </div>
  <!-- copy:end -->
</div>
