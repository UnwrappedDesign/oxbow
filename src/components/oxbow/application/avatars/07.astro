---
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex items-center justify-center p-12 bg-white dark:bg-black">
  <!-- copy:start -->
  <div class="flex-shrink-0 block group">
    <div class="flex flex-col gap-4 max-w-52">
      <div class="flex items-center justify-between">
        <img
          class="inline-block rounded-full size-10"
          src="/avatars/1.jpg"
          alt=""
        />
        <IconButton variant="alternative" size="sm">
          <Plus size="sm" slot="icon" />
        </IconButton>
      </div>
      <div>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-blue-500 text-zinc-500"
        >
          <Text tag="h3" variant="textBase" class="font-medium text-zinc-900 dark:text-white">
            Michael Andreuzza
          </Text>
          <Text tag="p" variant="textXS" class="font-medium text-zinc-400">
            example@example.com
          </Text>
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-zinc-500 dark:text-zinc-300">
          Freelance design engineer with a passion for clean and minimalistic
          interfaces.
        </Text>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
