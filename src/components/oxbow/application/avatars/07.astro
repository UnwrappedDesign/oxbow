---
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import Check from "@/components/fundations/icons/Check.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex items-center justify-center p-24 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div
    class="flex-shrink-0 block group"
    x-data="{ invited:false, flash:false, invite(){ if(this.invited) return; this.invited=true; this.flash=true; setTimeout(()=>this.flash=false,1500)} }"
  >
    <div class="flex flex-col gap-4 max-w-52">
      <div class="flex items-center justify-between">
        <img
          class="inline-block rounded-full size-10"
          src="/avatars/1.jpg"
          alt=""
        />
        <IconButton
          variant="muted"
          size="sm"
          @click="invite()"
          :aria-label="invited ? 'Invited' : 'Invite'"
          :disabled="invited"
        >
          <template x-if="!invited">
            <Plus size="sm" slot="icon" />
          </template>
          <template x-if="invited">
            <Check size="sm" slot="icon" />
          </template>
        </IconButton>
      </div>
      <div>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-indigo-600 text-zinc-500"
        >
          <Text
            tag="h3"
            variant="textBase"
            class="font-medium text-zinc-900 dark:text-white"
          >
            Michael Andreuzza
          </Text>
          <Text tag="p" variant="textXS" class="font-medium text-zinc-400">
            example@example.com
          </Text>
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 font-medium text-zinc-500 dark:text-zinc-300"
        >
          Freelance design engineer with a passion for clean and minimalistic
          interfaces.
        </Text>
        <div
          x-show="flash"
          x-transition.opacity
          class="mt-2 text-xs text-emerald-600 dark:text-emerald-400"
          role="status"
        >
          Invite sent
        </div>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
