---
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
---

<section>
  <div
    class="flex justify-center px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl items-center">
    <div class="group block flex-shrink-0">
      <div class="flex flex-col gap-4 max-w-52">
        <div class="flex items-center justify-between">
          <img
            class="inline-block size-10 rounded-full"
            src="/avatars/1.avif"
            alt=""
          />
          <IconButton
            variant="alternative"
            size="sm">
            <Plus
              size="sm"
              slot="icon"
            />
          </IconButton>
        </div>
        <div>
          <p class="text-sm font-medium text-base-700">Michael Andreuzza</p>
          <p class="text-xs font-medium text-base-400">@Mike_Andreuzza</p>
          <p class="text-base font-medium text-base-500 mt-4">
            Freelance design engineer with a passion for clean and minimalistic
            interfaces.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
