---
const avatars = [
  { src: "/avatars/1.jpg", alt: "#_" },
  { src: "/avatars/2.jpg", alt: "#_" },
  { src: "/avatars/3.jpg", alt: "#_" },
  { src: "/avatars/4.jpg", alt: "#_" },
];
---

<div class="flex items-center justify-center p-8">
  <!-- copy:start -->
  <div class="flex -space-x-4">
    {
      avatars.map((avatar, index) => (
        <img
          class="inline-block object-cover object-center size-12 rounded-xl -rotate-12 ring-2 ring-white hover:-translate-y-2 duration-300"
          src={avatar.src}
          alt={avatar.alt}
        />
      ))
    }
    <a
      class="z-10 flex items-center justify-center text-xs font-medium bg-white size-12 text-zinc-500 rounded-xl -rotate-12 ring-2 ring-zinc-200"
      href="#">+99</a
    >
  </div>
  <!-- copy:end -->
</div>
