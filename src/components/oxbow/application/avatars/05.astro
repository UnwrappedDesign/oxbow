---
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div
    class="flex items-center justify-center px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl"
  >
    <div class="flex-shrink-0 block group">
      <div class="flex items-center gap-2">
        <div>
          <img
            class="inline-block rounded-full size-9"
            src="/avatars/1.jpg"
            alt=""
          />
        </div>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-accent-500 text-base-500"
        >
          <Text tag="h3" variant="textBase" class="font-medium text-base-900">
            Michael Andreuzza
          </Text>
          <Text tag="p" variant="textXS" class="font-medium text-base-400">
            example@example.com
          </Text>
        </Text>
      </div>
    </div>
  </div>
</section>
