---
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex items-center justify-center p-14 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div class="flex-shrink-0 block group">
    <div class="flex items-center gap-2">
      <div>
        <img class="inline-block rounded-full size-10 object-cover ring-2 ring-white dark:ring-zinc-800" src="/avatars/1.jpg" alt="User" />
      </div>
      <Text
        tag="a"
        href="#_"
        variant="textBase"
        class="font-medium hover:text-blue-600 text-zinc-500"
      >
        <Text
          tag="h3"
          variant="textBase"
          class="font-medium text-zinc-900 dark:text-white"
        >
          Michael Andreuzza
        </Text>
        <Text
          tag="p"
          variant="textXS"
          class="font-medium text-zinc-400 dark:text-zinc-300"
        >
          example@example.com
        </Text>
      </Text>
    </div>
  </div>
  <!-- copy:end -->
</div>
