---
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex items-center justify-center p-8">
  <!-- copy:start -->
  <div class="flex-shrink-0 block group">
    <div class="flex items-center gap-2">
      <div>
        <img
          class="inline-block rounded-full size-9"
          src="/avatars/1.jpg"
          alt=""
        />
      </div>
      <Text
        tag="a"
        href="#_"
        variant="textBase"
        class="font-medium hover:text-blue-500 text-zinc-500"
      >
        <Text tag="h3" variant="textBase" class="font-medium text-zinc-900">
          Michael Andreuzza
        </Text>
        <Text tag="p" variant="textXS" class="font-medium text-zinc-400">
          example@example.com
        </Text>
      </Text>
    </div>
  </div>
  <!-- copy:end -->
</div>
