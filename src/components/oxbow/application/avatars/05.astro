---
import Text from "@/components/fundations/typography/Text.astro";
---
<section>
  <div
    class="flex justify-center px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl items-center">
    <div class="group block flex-shrink-0">
      <div class="flex items-center gap-2">
        <div>
          <img
            class="inline-block size-9 rounded-full"
            src="/avatars/1.avif"
            alt=""
          />
        </div>
        <Text
          tag="a"
          href="#_"
          variant="textMD"
          class="hover:text-accent-500 font-medium text-base-500">
          <Text
            tag="h3"
            variant="textMD"
            class="text-base-900 font-medium">
            Michael Andreuzza
          </Text>
          <Text
            tag="p"
            variant="textXS"
            class="text-base-400 font-medium">
            example@example.com
          </Text>
        </Text>
      </div>
    </div>
  </div>
</section>
