---
import Badge from "@/components/fundations/badges/Badge.astro";
---
<section>
  <div class="px-8 py-12 mx-auto md:px-12 space-y-12 lg:px-24 max-w-7xl">
    <div class="flex flex-wrap gap-2 justify-center">
      <!-- XS Size -->
      <Badge
        variant="default"
        size="xs">
        Default
      </Badge>
      <Badge
        variant="accent"
        size="xs">
        Accent
      </Badge>
      <Badge
        variant="alternative"
        size="xs">
        Alternative
      </Badge>
      <Badge
        variant="muted"
        size="xs">
        Muted
      </Badge>
      <Badge
        variant="text"
        size="xs">
        Text
      </Badge>
    </div>
    <!-- SM Size -->
    <div class="flex flex-wrap gap-2 justify-center">
      <Badge
        variant="default"
        size="sm">
        Default
      </Badge>
      <Badge
        variant="accent"
        size="sm">
        Accent
      </Badge>
      <Badge
        variant="alternative"
        size="sm">
        Alternative
      </Badge>
      <Badge
        variant="muted"
        size="sm">
        Muted
      </Badge>
        <Badge
        variant="text"
        size="sm">
        Text
      </Badge>
    </div>
  </div>
</section>
