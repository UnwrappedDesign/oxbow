---
export const description = "With left badge ";
import Badge from "@/components/fundations/badges/Badge.astro";
import PlaceHolderIcon from "@/components/fundations/icons/PlaceHolderIcon.astro";
---

<section
  class="flex flex-col items-center justify-center h-full p-20 bg-white gap-12 dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div class="flex flex-wrap justify-center gap-2">
    <!-- XS Size -->
    <Badge variant="default" gap="xs" size="xs" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Default
    </Badge>
    <Badge variant="accent" gap="xs" size="xs" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Accent
    </Badge>

    <Badge variant="muted" gap="xs" size="xs" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Muted
    </Badge>
    <Badge variant="text" gap="xs" size="xs" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Text
    </Badge>
    <Badge variant="info" gap="xs" size="xs" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Info
    </Badge>
    <Badge variant="success" gap="xs" size="xs" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Success
    </Badge>
    <Badge variant="warning" gap="xs" size="xs" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Warning
    </Badge>
    <Badge variant="danger" gap="xs" size="xs" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Danger
    </Badge>
  </div>
  <!-- SM Size -->
  <div class="flex flex-wrap justify-center gap-2">
    <Badge variant="default" gap="xs" size="sm" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Default
    </Badge>
    <Badge variant="accent" gap="xs" size="sm" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Accent
    </Badge>

    <Badge variant="muted" gap="xs" size="sm" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Muted
    </Badge>
    <Badge variant="text" gap="xs" size="sm" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Text
    </Badge>
    <Badge variant="info" gap="xs" size="sm" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Info
    </Badge>
    <Badge variant="success" gap="xs" size="sm" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Success
    </Badge>
    <Badge variant="warning" gap="xs" size="sm" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Warning
    </Badge>
    <Badge variant="danger" gap="xs" size="sm" slot="left-icon">
      <PlaceHolderIcon gap="xs" size="sm" />
      Danger
    </Badge>
  </div>
  <!-- copy:end -->
</section>
