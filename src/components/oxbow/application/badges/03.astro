---
export const description = "Default right badge ";
import Badge from "@/components/fundations/badges/Badge.astro";
import PlaceHolderIcon from "@/components/fundations/icons/PlaceHolderIcon.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-12 bg-white dark:bg-zinc-900 h-full"
>
  <!-- copy:start -->
  <div class="flex flex-wrap justify-center gap-2">
    <!-- XS Size -->
    <Badge variant="default" gap="xs" size="xs" slot="right-icon">
      Default
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="accent" gap="xs" size="xs" slot="right-icon">
      Accent
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="outline" gap="xs" size="xs" slot="right-icon">
      Alternative
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="muted" gap="xs" size="xs" slot="right-icon">
      Muted
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="text" gap="xs" size="xs" slot="right-icon">
      Text
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="info" gap="xs" size="xs" slot="right-icon">
      Info
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="success" gap="xs" size="xs" slot="right-icon">
      Success
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="warning" gap="xs" size="xs" slot="right-icon">
      Warning
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="danger" gap="xs" size="xs" slot="right-icon">
      Danger
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
  </div>
  <!-- SM Size -->
  <div class="flex flex-wrap justify-center gap-2">
    <Badge variant="default" gap="xs" size="sm" slot="right-icon">
      Default
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="accent" gap="xs" size="sm" slot="right-icon">
      Accent
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="outline" gap="xs" size="sm" slot="right-icon">
      Alternative
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="muted" gap="xs" size="sm" slot="right-icon">
      Muted
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="text" gap="xs" size="sm" slot="right-icon">
      Text
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="info" gap="xs" size="sm" slot="right-icon">
      Info
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="success" gap="xs" size="sm" slot="right-icon">
      Success
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="warning" gap="xs" size="sm" slot="right-icon">
      Warning
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
    <Badge variant="danger" gap="xs" size="sm" slot="right-icon">
      Danger
      <PlaceHolderIcon gap="xs" size="sm" />
    </Badge>
  </div>
  <!-- copy:end -->
</section>
