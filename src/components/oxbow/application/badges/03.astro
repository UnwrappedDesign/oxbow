---
import Badge from "@/components/fundations/badges/Badge.astro";
import PlaceHolderIcon from "@/components/fundations/icons/PlaceHolderIcon.astro";
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 space-y-12 lg:px-24 max-w-7xl">
    <div class="flex flex-wrap gap-2 justify-center">
      <!-- XS Size -->
      <Badge
        variant="default"
        gap="xs"
        size="xs"
        slot="right-icon">
        Default
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
      <Badge
        variant="accent"
        gap="xs"
        size="xs"
        slot="right-icon">
        Accent
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
      <Badge
        variant="alternative"
        gap="xs"
        size="xs"
        slot="right-icon">
        Alternative
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
      <Badge
        variant="muted"
        gap="xs"
        size="xs"
        slot="right-icon">
        Muted
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
      <Badge
        variant="Text"
        gap="xs"
        size="xs"
        slot="right-icon">
        Text
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
    </div>
    <!-- SM Size -->
    <div class="flex flex-wrap gap-2 justify-center">
      <Badge
        variant="default"
        gap="xs"
        size="sm"
        slot="right-icon">
        Default
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
      <Badge
        variant="accent"
        gap="xs"
        size="sm"
        slot="right-icon">
        Accent
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
      <Badge
        variant="alternative"
        gap="xs"
        size="sm"
        slot="right-icon">
        Alternative
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
      <Badge
        variant="muted"
        gap="xs"
        size="sm"
        slot="right-icon">
        Muted
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
      <Badge
        variant="Text"
        gap="xs"
        size="sm"
        slot="right-icon">
        Text
        <PlaceHolderIcon
          gap="xs"
          size="sm"
        />
      </Badge>
    </div>
  </div>
</section>
