---
export const freeComponent = true;
export const description = "Basic Radio Button";
import Text from "@/components/fundations/typography/Text.astro";
---
<div class="flex items-center max-w-md p-12 mx-auto">
  <div class="flex items-center gap-2">
    <input
      id="basic-radio"
      name="example-radio"
      type="radio"
      class="rounded-full shadow size-4 border-base-300 text-accent-600 focus:ring-accent-600"
    />
    <Text
      for="basic-radio"
      tag="label"
      class="block text-sm text-base-500"
    >
      Basic radio button
    </Text>
  </div>
  

</div>
