---
export const freeComponent = true;
export const description = "Basic Radio Button";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex justify-center p-8 mx-auto">
  <!-- copy:start -->
  <div class="flex items-center gap-2">
    <input
      id="basic-radio"
      name="example-radio"
      type="radio"
      class="rounded-full shadow size-4 border-zinc-300 text-stone-600 focus:ring-stone-600"
    />
    <Text for="basic-radio" tag="label" class="block text-sm text-zinc-500">
      Basic radio button
    </Text>
  </div>
  <!-- copy:end -->
</div>
