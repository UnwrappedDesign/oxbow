---
export const freeComponent = true;
export const description = "Basic Radio Button";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex justify-center mx-auto bg-white p-17 dark:bg-zinc-900">
  <!-- copy:start -->
  <div class="flex items-center gap-2">
    <input
      id="basic-radio"
      name="example-radio"
      type="radio"
      class="text-blue-600 bg-white rounded-full shadow size-4 border-zinc-300 dark:border-zinc-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 dark:bg-zinc-900"
    />
    <Text
      for="basic-radio"
      tag="label"
      class="block text-sm text-zinc-500 dark:text-zinc-400"
    >
      Basic radio button
    </Text>
  </div>
  <!-- copy:end -->
</div>
