---
export const description = "Radio Button Group with Descriptions";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex justify-center p-16 bg-white dark:bg-black mx-auto">
  <!-- copy:start -->
  <div class="flex flex-col gap-2" x-data="{ selected: 'option1' }">
    <div class="flex items-start gap-3">
      <input
        id="radio-option1"
        name="radio-group"
        type="radio"
        value="option1"
        x-model="selected"
        class="rounded-full shadow size-4 border-zinc-300 dark:border-zinc-600 text-blue-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 bg-white dark:bg-zinc-900"
      />
      <div>
        <Text
          for="radio-option1"
          tag="label"
          class="block text-sm font-medium text-zinc-500 dark:text-zinc-400"
        >
          Option 1
        </Text>
        <p class="text-sm text-zinc-400 dark:text-zinc-500">
          This is the description for option 1.
        </p>
      </div>
    </div>

    <div class="flex items-start gap-3">
      <input
        id="radio-option2"
        name="radio-group"
        type="radio"
        value="option2"
        x-model="selected"
        class="rounded-full shadow size-4 border-zinc-300 dark:border-zinc-600 text-blue-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 bg-white dark:bg-zinc-900"
      />
      <div>
        <Text
          for="radio-option2"
          tag="label"
          class="block text-sm font-medium text-zinc-500 dark:text-zinc-400"
        >
          Option 2
        </Text>
        <p class="text-sm text-zinc-400 dark:text-zinc-500">
          This is the description for option 2.
        </p>
      </div>
    </div>

    <div class="mt-2 text-sm text-zinc-500 dark:text-zinc-400">
      Selected: <span x-text="selected"></span>
    </div>
  </div>
  <!-- copy:end -->
</div>
