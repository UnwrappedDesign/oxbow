---
export const description = "Radio Button Group with Descriptions";
import Text from "@/components/fundations/typography/Text.astro";
---
<div class="flex max-w-md mx-auto items-center p-12">
 
  <div class="flex flex-col gap-2" x-data="{ selected: 'option1' }">
    <div class="flex items-start gap-3">
      <input
        id="radio-option1"
        name="radio-group"
        type="radio"
        value="option1"
        x-model="selected"
        class="size-4 rounded-full border-base-300 text-accent-600 focus:ring-accent-600 shadow"
      />
      <div>
        <Text
          for="radio-option1"
          tag="label"
          class="block text-sm font-medium text-base-500"
        >
          Option 1
        </Text>
        <p class="text-sm text-base-400">This is the description for option 1.</p>
      </div>
    </div>
  
    <div class="flex items-start gap-3">
      <input
        id="radio-option2"
        name="radio-group"
        type="radio"
        value="option2"
        x-model="selected"
        class="size-4 rounded-full border-base-300 text-accent-600 focus:ring-accent-600 shadow"
      />
      <div>
        <Text
          for="radio-option2"
          tag="label"
          class="block text-sm font-medium text-base-500"
        >
          Option 2
        </Text>
        <p class="text-sm text-base-400">This is the description for option 2.</p>
      </div>
    </div>
  
    <div class="mt-2 text-sm text-base-500">
      Selected: <span x-text="selected"></span>
    </div>
  </div>
  
</div>
