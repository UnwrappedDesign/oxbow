---
export const description = "Radio Group for Server Location";
import Text from "@/components/fundations/typography/Text.astro";
import Badge from "@/components/fundations/badges/Badge.astro";
---

<div class="flex justify-center p-17 bg-white dark:bg-black mx-auto">
  <!-- copy:start -->
  <div class="flex gap-6" x-data="{ location: 'usa' }">
    <div class="flex items-center gap-3">
      <input
        id="radio-usa"
        name="server-location"
        type="radio"
        value="usa"
        x-model="location"
        class="rounded-full shadow size-4 border-zinc-300 dark:border-zinc-600 text-blue-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 bg-white dark:bg-zinc-900"
      />
      <label for="radio-usa" class="block text-sm text-zinc-500">USA</label>
    </div>
    <div class="flex items-center gap-3">
      <input
        id="radio-europe"
        name="server-location"
        type="radio"
        value="europe"
        x-model="location"
        class="rounded-full shadow size-4 border-zinc-300 dark:border-zinc-600 text-blue-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 bg-white dark:bg-zinc-900"
      />
      <label for="radio-europe" class="block text-sm text-zinc-500"
        >Europe</label
      >
    </div>
    <div class="flex items-center gap-3">
      <input
        id="radio-asia"
        name="server-location"
        type="radio"
        value="asia"
        x-model="location"
        class="rounded-full shadow size-4 border-zinc-300 dark:border-zinc-600 text-blue-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 bg-white dark:bg-zinc-900"
      />
      <label for="radio-asia" class="block text-sm text-zinc-500">Asia</label>
    </div>
  </div>
  <!-- copy:end -->
</div>
