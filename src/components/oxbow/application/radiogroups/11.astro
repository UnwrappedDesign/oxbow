---
export const excludeFromObfuscation = ["text-blue-600", "text-zinc-500"];

export const description = "Radio Group for Theme Selection";
---

<div class="flex justify-center p-16 bg-white dark:bg-zinc-900 mx-auto">
  <div class="mx-w-sm mx-auto">
    <!-- copy:start -->
    <div class="flex flex-col gap-2" x-data="{ theme: 'light' }">
      <p class="text-sm font-medium text-zinc-500 dark:text-zinc-400">
        Choose a theme
      </p>
      <div class="flex gap-6">
        <!-- Light Theme -->
        <label class="flex flex-col cursor-pointer gap-2">
          <div
            class="flex items-center justify-center rounded ring-1 ring-zinc-100 dark:ring-zinc-700 bg-zinc-50 dark:bg-zinc-900"
          >
            <img
              src="/images/forms/light.png"
              alt="Light theme placeholder"
              class="rounded"
            />
          </div>
          <div class="flex items-center gap-2">
            <input
              type="radio"
              name="theme"
              value="light"
              x-model="theme"
              class="size-4 accent-blue-600 border-zinc-300 dark:border-zinc-600 bg-white dark:bg-zinc-900"
            />
            <span
              class="text-sm font-medium"
              :class="{ 'text-blue-600 dark:text-blue-400': theme === 'light', 'text-zinc-500 dark:text-zinc-400': theme !== 'light' }"
            >
              Light
            </span>
          </div>
        </label>

        <!-- Dark Theme -->
        <label class="flex flex-col cursor-pointer gap-2">
          <div
            class="flex items-center justify-center rounded ring-1 ring-zinc-100 dark:ring-zinc-700 bg-zinc-50 dark:bg-zinc-900"
          >
            <img
              src="/images/forms/dark.png"
              alt="Dark theme placeholder"
              class="rounded"
            />
          </div>
          <div class="flex items-center gap-2">
            <input
              type="radio"
              name="theme"
              value="dark"
              x-model="theme"
              class="size-4 accent-blue-600 border-zinc-300 dark:border-zinc-600 bg-white dark:bg-zinc-900"
            />
            <span
              class="text-sm font-medium"
              :class="{ 'text-blue-600 dark:text-blue-400': theme === 'dark', 'text-zinc-500 dark:text-zinc-400': theme !== 'dark' }"
            >
              Dark
            </span>
          </div>
        </label>

        <!-- System Theme -->
        <label class="flex flex-col cursor-pointer gap-2">
          <div
            class="flex items-center justify-center rounded ring-1 ring-zinc-100 dark:ring-zinc-700 bg-zinc-50 dark:bg-zinc-900"
          >
            <img
              src="/images/forms/system.png"
              alt="System theme placeholder"
              class="rounded"
            />
          </div>
          <div class="flex items-center gap-2">
            <input
              type="radio"
              name="theme"
              value="system"
              x-model="theme"
              class="size-4 accent-blue-600 border-zinc-300 dark:border-zinc-600 bg-white dark:bg-zinc-900"
            />
            <span
              class="text-sm font-medium"
              :class="{ 'text-blue-600 dark:text-blue-400': theme === 'system', 'text-zinc-500 dark:text-zinc-400': theme !== 'system' }"
            >
              System
            </span>
          </div>
        </label>
      </div>
    </div>
    <!-- copy:end -->
  </div>
</div>
