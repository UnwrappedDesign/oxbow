---
export const description = "Radio Group for Theme Selection";
---

<div class="flex items-center max-w-md p-12 mx-auto">
  <div class="flex flex-col gap-2" x-data="{ theme: 'light' }">
    <p class="text-sm font-medium text-base-500">Choose a theme</p>
    <div class="flex gap-6">
      <!-- Light Theme -->
      <label class="flex flex-col cursor-pointer gap-2">
        <div
          class="flex items-center justify-center rounded ring-1 ring-base-100 bg-base-50"
        >
          <img
            src="/images/forms/light.png"
            alt="Light theme placeholder"
            class="rounded"
          />
        </div>
        <div class="flex items-center gap-2">
          <input
            type="radio"
            name="theme"
            value="light"
            x-model="theme"
            class="size-4 accent-accent-600 border-base-300"
          />
          <span
            class="text-sm font-medium"
            :class="{ 'text-accent-600': theme === 'light', 'text-base-500': theme !== 'light' }"
          >
            Light
          </span>
        </div>
      </label>

      <!-- Dark Theme -->
      <label class="flex flex-col cursor-pointer gap-2">
        <div
          class="flex items-center justify-center rounded ring-1 ring-base-100 bg-base-50"
        >
          <img
            src="/images/forms/dark.png"
            alt="Dark theme placeholder"
            class="rounded"
          />
        </div>
        <div class="flex items-center gap-2">
          <input
            type="radio"
            name="theme"
            value="dark"
            x-model="theme"
            class="size-4 accent-accent-600 border-base-300"
          />
          <span
            class="text-sm font-medium"
            :class="{ 'text-accent-600': theme === 'dark', 'text-base-500': theme !== 'dark' }"
          >
            Dark
          </span>
        </div>
      </label>

      <!-- System Theme -->
      <label class="flex flex-col cursor-pointer gap-2">
        <div
          class="flex items-center justify-center rounded ring-1 ring-base-100 bg-base-50"
        >
          <img
            src="/images/forms/system.png"
            alt="System theme placeholder"
            class="rounded"
          />
        </div>
        <div class="flex items-center gap-2">
          <input
            type="radio"
            name="theme"
            value="system"
            x-model="theme"
            class="size-4 accent-accent-600 border-base-300"
          />
          <span
            class="text-sm font-medium"
            :class="{ 'text-accent-600': theme === 'system', 'text-base-500': theme !== 'system' }"
          >
            System
          </span>
        </div>
      </label>
    </div>
  </div>
</div>
