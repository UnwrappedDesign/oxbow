---
export const description = "Radio Button Group for Mood Rating";
---

<div class="flex justify-center p-16 bg-white dark:bg-black mx-auto">
  <!-- copy:start -->
  <div class="flex flex-col gap-2" x-data="{ mood: '' }">
    <div class="flex items-center gap-2">
      <label class="flex items-center">
        <input
          type="radio"
          name="mood"
          value="happy"
          x-model="mood"
          class="hidden"
        />
        <span class="text-2xl cursor-pointer dark:text-zinc-100">😊</span>
      </label>
      <label class="flex items-center">
        <input
          type="radio"
          name="mood"
          value="neutral"
          x-model="mood"
          class="hidden"
        />
        <span class="text-2xl cursor-pointer dark:text-zinc-100">😐</span>
      </label>
      <label class="flex items-center">
        <input
          type="radio"
          name="mood"
          value="sad"
          x-model="mood"
          class="hidden"
        />
        <span class="text-2xl cursor-pointer dark:text-zinc-100">😢</span>
      </label>
    </div>
    <p class="mt-2 text-sm text-zinc-500 dark:text-zinc-400">
      Selected mood: <span x-text="mood"></span>
    </p>
  </div>
  <!-- copy:end -->
</div>
