---
export const description = "Radio Button Group for Payment Methods";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex justify-center p-16 bg-white dark:bg-zinc-900 mx-auto">
  <!-- copy:start -->
  <div class="max-w-sm w-full mx-auto">
    <div
      class="flex flex-col w-full gap-2"
      x-data="{ paymentMethod: 'credit-card' }"
    >
      <div
        class="flex items-center p-4 border rounded-lg gap-3 border-zinc-200 dark:border-zinc-700"
      >
        <input
          id="radio-credit-card"
          name="payment-method"
          type="radio"
          value="credit-card"
          x-model="paymentMethod"
          class="rounded-full shadow size-4 border-zinc-300 dark:border-zinc-600 text-blue-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 bg-white dark:bg-zinc-900"
        />
        <label
          for="radio-credit-card"
          class="block text-sm font-medium text-zinc-500"
        >
          Credit Card
        </label>
      </div>
      <div
        class="flex items-center p-4 border rounded-lg gap-3 border-zinc-200 dark:border-zinc-700"
      >
        <input
          id="radio-debit-card"
          name="payment-method"
          type="radio"
          value="debit-card"
          x-model="paymentMethod"
          class="rounded-full shadow size-4 border-zinc-300 dark:border-zinc-600 text-blue-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 bg-white dark:bg-zinc-900"
        />
        <label
          for="radio-debit-card"
          class="block text-sm font-medium text-zinc-500"
        >
          Debit Card
        </label>
      </div>
      <div
        class="flex items-center p-4 border rounded-lg gap-3 border-zinc-200 dark:border-zinc-700"
      >
        <input
          id="radio-wallet"
          name="payment-method"
          type="radio"
          value="wallet"
          x-model="paymentMethod"
          class="rounded-full shadow size-4 border-zinc-300 dark:border-zinc-600 text-blue-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 bg-white dark:bg-zinc-900"
        />
        <label
          for="radio-wallet"
          class="block text-sm font-medium text-zinc-500"
        >
          Wallet
        </label>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
