---
export const description = "Primary/secondary pair";
import Button from "@/components/fundations/buttons/Button.astro";
---

<section
  class="flex items-center justify-center bg-white p-18 dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    class="inline-flex overflow-hidden rounded-lg border border-zinc-200 bg-white text-sm dark:border-zinc-700 dark:bg-zinc-800"
    role="group"
    aria-label="Primary and secondary actions"
  >
    <Button
      variant="accent"
      size="sm"
      type="button"
      noRounded
      class="px-5 transition-none"
    >
      Deploy
    </Button>
    <Button
      variant="outline"
      size="sm"
      type="button"
      noRounded
      class="border-l border-zinc-200 transition-none dark:border-zinc-700"
    >
      Cancel
    </Button>
  </div>
  <!-- copy:end -->
</section>
