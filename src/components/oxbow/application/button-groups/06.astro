---

export const description = "Pagination controls";
import Button from "@/components/fundations/buttons/Button.astro";
import ChevronLeft from "@/components/fundations/icons/ChevronLeft.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<section class="flex items-center justify-center bg-white p-18 dark:bg-zinc-900">
  <!-- copy:start -->
  <nav
    class="inline-flex items-center gap-px rounded-md bg-zinc-100 p-1 dark:bg-zinc-800"
    role="navigation"
    aria-label="Pagination"
  >
    <Button
      variant="icon"
      size="sm"
      iconOnly
      type="button"
      noRounded
      class="rounded-l-md transition-none"
      aria-label="Previous page"
    >
      <ChevronLeft slot="left-icon" size="sm" />
    </Button>
    <Button variant="accent" size="sm" type="button" noRounded class="transition-none">
      12
    </Button>
    <Button variant="muted" size="sm" type="button" noRounded class="transition-none">
      13
    </Button>
    <Button variant="muted" size="sm" type="button" noRounded class="transition-none">
      14
    </Button>
    <Button
      variant="icon"
      size="sm"
      iconOnly
      type="button"
      noRounded
      class="rounded-r-md transition-none"
      aria-label="Next page"
    >
      <ChevronRight slot="left-icon" size="sm" />
    </Button>
  </nav>
  <!-- copy:end -->
</section>
