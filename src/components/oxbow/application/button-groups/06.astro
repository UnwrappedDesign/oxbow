---
export const description = "Pinned Action with Select";
import HorizontalButtonGroup from "@/components/fundations/buttonGroups/HorizontalButtonGroup.astro";
import Start from "@/components/fundations/icons/Start.astro";
import Select from "@/components/fundations/inputs/Select.astro";
---

<section
  class="flex items-center justify-center p-18 bg-white dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    class="inline-flex items-stretch isolate"
    x-data="{ pinned:false, action:'Pin to top' }"
    aria-label="Pin options"
  >
    <div role="group" aria-label="Pin toggle" class="inline-flex isolate">
      <HorizontalButtonGroup
        variant="default"
        position="right"
        size="xs"
        @click="pinned=!pinned"
        :aria-pressed="pinned"
        class="items-center gap-2"
        :class="pinned ? 'bg-blue-600 text-white ring-blue-700 hover:bg-blue-600' : ''"
      >
        <Start size="sm" slot="left-icon" />Pinned
      </HorizontalButtonGroup>
    </div>
    <div class="w-40 -ml-px">
      <Select
        id="pin-action"
        name="pin-action"
        size="xs"
        noRoundedLeft={true}
        compact={true}
        hideLabel={true}
        noMarginTop={true}
        xModel="action"
        xOn={{ change: "pinned = ($event.target.value === 'Pin to top')" }}
      >
        <option>Pin to top</option>
        <option>Unpin</option>
      </Select>
    </div>
    <span class="sr-only" aria-live="polite"
      >Pinned: <span x-text="pinned ? 'yes' : 'no'"></span></span
    >
  </div>
  <!-- copy:end -->
</section>
