---
import VerticalButtonGroup from "@/components/fundations/buttonGroups/VerticalButtonGroup.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-18 bg-white dark:bg-zinc-900 h-full"
>
  <!-- copy:start -->
  <span class="flex flex-col isolate">
    <VerticalButtonGroup variant="default" position="top" size="base">
      Top
    </VerticalButtonGroup>
    <VerticalButtonGroup variant="default" position="middle" size="base">
      Center
    </VerticalButtonGroup>
    <VerticalButtonGroup position="bottom" variant="default" size="base">
      Middle
    </VerticalButtonGroup>
  </span>
  <!-- copy:end -->
</section>
