---

export const description = "Split button";
import Button from "@/components/fundations/buttons/Button.astro";
import ChevronDown from "@/components/fundations/icons/ChevronDown.astro";
---

<section class="flex items-center justify-center bg-white p-18 dark:bg-zinc-900">
  <!-- copy:start -->
  <div
    class="inline-flex overflow-hidden rounded-md border border-zinc-200 bg-white text-sm shadow-sm dark:border-zinc-700 dark:bg-zinc-800"
    role="group"
    aria-label="Run or schedule action"
  >
    <Button
      variant="accent"
      size="sm"
      type="button"
      noRounded
      class="px-5 transition-none"
    >
      Run report
    </Button>
    <Button
      variant="muted"
      size="sm"
      iconOnly
      type="button"
      noRounded
      class="border-l border-zinc-200 transition-none dark:border-zinc-700"
      aria-label="More options"
    >
      <ChevronDown slot="left-icon" size="sm" />
    </Button>
  </div>
  <!-- copy:end -->
</section>
