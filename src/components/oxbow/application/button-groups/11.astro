---
export const description = "Dark Alignment Toolbar";
import HorizontalButtonGroup from "@/components/fundations/buttonGroups/HorizontalButtonGroup.astro";
---

<section class="flex items-center justify-center bg-white p-18 dark:bg-zinc-900">
  <!-- copy:start -->
  <div class="inline-flex isolate" x-data="{ align:'left' }" role="group" aria-label="Text alignment">
    <HorizontalButtonGroup variant="default" position="right" size="xs" class="dark:bg-zinc-900 dark:text-white dark:ring-zinc-900 dark:hover:bg-zinc-800" @click="align='left'" :aria-pressed="align==='left'" :class="align==='left' ? 'opacity-100' : 'opacity-70'">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M4 6h12"/><path d="M4 10h8"/><path d="M4 14h12"/><path d="M4 18h10"/></svg>
    </HorizontalButtonGroup>
    <HorizontalButtonGroup variant="default" position="middle" size="xs" class="dark:bg-zinc-900 dark:text-white dark:ring-zinc-900 dark:hover:bg-zinc-800" @click="align='center'" :aria-pressed="align==='center'" :class="align==='center' ? 'opacity-100' : 'opacity-70'">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M6 6h12"/><path d="M8 10h8"/><path d="M6 14h12"/><path d="M7 18h10"/></svg>
    </HorizontalButtonGroup>
    <HorizontalButtonGroup variant="default" position="middle" size="xs" class="dark:bg-zinc-900 dark:text-white dark:ring-zinc-900 dark:hover:bg-zinc-800" @click="align='right'" :aria-pressed="align==='right'" :class="align==='right' ? 'opacity-100' : 'opacity-70'">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M8 6h12"/><path d="M12 10h8"/><path d="M6 14h14"/><path d="M10 18h10"/></svg>
    </HorizontalButtonGroup>
    <HorizontalButtonGroup variant="default" position="left" size="xs" class="dark:bg-zinc-900 dark:text-white dark:ring-zinc-900 dark:hover:bg-zinc-800" @click="align='justify'" :aria-pressed="align==='justify'" :class="align==='justify' ? 'opacity-100' : 'opacity-70'">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M4 6h16"/><path d="M4 10h16"/><path d="M4 14h16"/><path d="M4 18h16"/></svg>
    </HorizontalButtonGroup>
  </div>
  <!-- copy:end -->
</section>
