---

export const description = "Action footer";
import Button from "@/components/fundations/buttons/Button.astro";
import Lock from "@/components/fundations/icons/Lock.astro";
---

<section class="flex items-center justify-center bg-white p-18 dark:bg-zinc-900">
  <!-- copy:start -->
  <div class="flex w-full max-w-xl items-center justify-between rounded-xl border border-zinc-200 bg-white p-4 shadow-sm dark:border-zinc-700 dark:bg-zinc-800">
    <div class="flex flex-col gap-0.5 text-sm">
      <span class="font-medium text-zinc-800 dark:text-zinc-100">Lock sprint</span>
      <span class="text-zinc-500 dark:text-zinc-400">Freeze scope until next planning session.</span>
    </div>
    <div class="flex items-center gap-2">
      <Button variant="ghost" size="sm" class="gap-2 transition-none">
        Cancel
      </Button>
      <Button variant="accent" size="sm" class="gap-2 transition-none">
        <Lock slot="left-icon" size="sm" />
        Confirm
      </Button>
    </div>
  </div>
  <!-- copy:end -->
</section>
