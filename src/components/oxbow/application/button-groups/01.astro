---
export const description = "Counter Group (âˆ’ value +)";
import HorizontalButtonGroup from "@/components/fundations/buttonGroups/HorizontalButtonGroup.astro";
import Minus from "@/components/fundations/icons/Minus.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
---

<section class="flex items-center justify-center p-18 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div class="inline-flex isolate" x-data="{ n: 235 }" role="group" aria-label="Counter">
    <HorizontalButtonGroup variant="default" position="right" size="sm" @click="n=Math.max(0,n-1)" aria-label="Decrease">
      <Minus size="base" slot="centered-icon" />
    </HorizontalButtonGroup>
    <HorizontalButtonGroup variant="default" position="middle" size="sm" aria-live="polite" aria-label="Current value">
      <span x-text="n"></span>
    </HorizontalButtonGroup>
    <HorizontalButtonGroup position="left" variant="default" size="sm" @click="n=n+1" aria-label="Increase">
      <Plus size="base" slot="centered-icon" />
    </HorizontalButtonGroup>
  </div>
  <!-- copy:end -->
</section>
