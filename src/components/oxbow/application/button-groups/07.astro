---

export const description = "View toggle";
import Button from "@/components/fundations/buttons/Button.astro";
import Grid from "@/components/fundations/icons/Grid.astro";
import List from "@/components/fundations/icons/List.astro";
import Chart from "@/components/fundations/icons/Analytics.astro";
---

<section class="flex items-center justify-center bg-white p-18 dark:bg-zinc-900">
  <!-- copy:start -->
  <div
    class="inline-flex overflow-hidden rounded-full border border-zinc-200 bg-white text-sm shadow-sm dark:border-zinc-700 dark:bg-zinc-800"
    role="group"
    aria-label="Change view mode"
  >
    <Button variant="accent" size="sm" type="button" noRounded aria-pressed="true">
      <Grid slot="left-icon" size="sm" />
      Grid
    </Button>
    <Button
      variant="muted"
      size="sm"
      type="button"
      noRounded
      aria-pressed="false"
    >
      <List slot="left-icon" size="sm" />
      List
    </Button>
    <Button
      variant="muted"
      size="sm"
      type="button"
      noRounded
      aria-pressed="false"
    >
      <Chart slot="left-icon" size="sm" />
      Insights
    </Button>
  </div>
  <!-- copy:end -->
</section>
