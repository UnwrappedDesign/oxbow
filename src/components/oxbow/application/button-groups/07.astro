---
export const description = "Files / Media / More";
import HorizontalButtonGroup from "@/components/fundations/buttonGroups/HorizontalButtonGroup.astro";
import FileDots from "@/components/fundations/icons/FileDots.astro";
import LibraryPhoto from "@/components/fundations/icons/LibraryPhoto.astro";
import ThreeDots from "@/components/fundations/icons/ThreeDots.astro";
---

<section
  class="flex items-center justify-center p-18 pb-34 bg-white dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    role="group"
    aria-label="Attachments"
    class="relative inline-flex isolate"
    x-data="{ active:'Files', open:false }"
  >
    <HorizontalButtonGroup
      variant="default"
      position="right"
      size="xs"
      @click="active='Files'"
      :aria-pressed="active==='Files'"
      :class="active==='Files' ? '' : ''"
    >
      <FileDots size="base" slot="left-icon" /> Files
    </HorizontalButtonGroup>
    <HorizontalButtonGroup
      variant="default"
      position="middle"
      size="xs"
      @click="active='Media'"
      :aria-pressed="active==='Media'"
      :class="active==='Media' ? '' : ''"
    >
      <LibraryPhoto size="base" slot="left-icon" /> Media
    </HorizontalButtonGroup>
    <HorizontalButtonGroup
      variant="default"
      position="left"
      size="xs"
      aria-label="More options"
      @click="open=!open"
      :aria-expanded="open"
      aria-controls="attach-menu"
    >
      <ThreeDots size="base" slot="centered-icon" />
    </HorizontalButtonGroup>
    <div
      x-show="open"
      id="attach-menu"
      class="absolute top-full mt-2 w-44 rounded-md ring-1 ring-zinc-200 dark:ring-zinc-700 bg-white dark:bg-zinc-900 shadow-md p-2 z-20"
      style="display:none"
      @click.outside="open=false"
    >
      <button
        class="w-full text-left px-2 py-1.5 rounded hover:bg-zinc-50 dark:hover:bg-zinc-800 text-sm text-zinc-700 dark:text-zinc-200"
        >Create folder</button
      >
      <button
        class="w-full text-left px-2 py-1.5 rounded hover:bg-zinc-50 dark:hover:bg-zinc-800 text-sm text-zinc-700 dark:text-zinc-200"
        >Upload from URL</button
      >
    </div>
    <span class="sr-only" aria-live="polite"
      >Selected: <span x-text="active"></span></span
    >
  </div>
  <!-- copy:end -->
</section>
