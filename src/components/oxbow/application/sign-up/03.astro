---
export const description =
  "Split-screen signup: hype on the left, email + password slog on the right.";

// Assets
import { Image } from "astro:assets";
import A1 from "@/images/avatars/avatar1.jpeg";
import Placeholder from "@/images/gradients/3.jpeg";

// Fundations
import Logo from "@/components/assets/Logo.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Input from "@/components/fundations/inputs/Input.astro";
import Button from "@/components/fundations/buttons/Button.astro";
// Icons
import Check from "@/components/fundations/icons/Check.astro";
---

<div class="flex h-screen">
  <div class="flex items-center justify-center w-full p-8 bg-white lg:w-2/3">
    <div class="w-full max-w-md py-24 lg:py-32">
      <div>
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-base-900"
        >
          Create your account
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 text-balance"
        >
          Join the party. Set up your account the old-fashioned way—email,
          password, done.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <div
          x-data="{
radioGroupSelectedValue: null,
radioGroupOptions: [
  {
    title: 'Projects',
    value: 'projects'
  },
  {
    title: 'Designs',
    value: 'design'
  },
]
}"
          class="flex flex-wrap pb-4 border-b gap-y-2 gap-x-8 border-base-200"
          role="radiogroup"
          aria-labelledby="radio-group-label"
        >
          <span id="radio-group-label" class="sr-only"
            >Choose your work status</span
          >
          <template x-for="(option, index) in radioGroupOptions" :key="index">
            <div>
              <input
                type="radio"
                :id="'radio-' + option.value"
                name="radio-group"
                :value="option.value"
                x-model="radioGroupSelectedValue"
                class="sr-only"
                :aria-describedby="'ttile-' + option.value"
              />
              <label
                :for="'radio-' + option.value"
                class="block cursor-pointer"
                :class="{ 'ring-accent-500': radioGroupSelectedValue === option.value }"
              >
                <div class="rounded-lg" tabindex="-1">
                  <div class="flex items-center gap-2">
                    <div
                      class="flex items-center justify-center rounded shadow size-4 outline oultine-base-300 text-accent-600"
                      :class="{ 'outline-base-200': radioGroupSelectedValue === option.value, 'outline-base-300': radioGroupSelectedValue !== option.value }"
                      aria-hidden="true"
                    >
                      <Check
                        x-show="radioGroupSelectedValue === option.value"
                        size="xs"
                        class="text-accent-500"
                      />
                    </div>
                    <Text
                      tag="span"
                      variant="textSM"
                      x-text="option.title"
                      class="font-medium text-base-900"
                    />
                  </div>
                </div>
              </label>
            </div>
          </template>
        </div>
        <Input
          id="email"
          name="email"
          type="email"
          label="Email address"
          placeholder="email@example.com"
          variant="default"
          size="base"
        />
        <Input
          id="password"
          name="password"
          type="password"
          label="Password"
          placeholder="************"
          variant="alternative"
          size="base"
        />
        <Input
          id="confirm-password"
          name="confirm-password"
          type="password"
          label="Confirm password"
          placeholder="************"
          variant="alternative"
          size="base"
        />
        <Text tag="p" variant="textXS" class="font-medium text-base-500">
          By creating an account, you agree to our
          <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
            Terms of service
          </a>
          and
          <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
            Privacy Policy
          </a>
        </Text>
        <Button fullWidth variant="accent" size="base"> Create account </Button>
      </form>
      <Text tag="p" variant="textXS" class="mt-4 font-medium text-base-500">
        Already have an account?
        <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
          Sign in
        </a>
      </Text>
    </div>
  </div>
  <div
    class="relative hidden overflow-hidden border-8 border-white lg:block lg:w-1/3 lg:order-first rounded-2xl"
  >
    <Image
      width={1200}
      height={1200}
      src={Placeholder}
      alt="Background"
      aria-hidden="true"
      class="object-cover object-center w-full h-full bg-base-50"
    />
    <div
      aria-hidden="true"
      class="absolute inset-0 pointer-events-none bg-accent-700/50"
    >
    </div>
    <div class="absolute inset-0 flex flex-col items-start justify-between p-8">
      <div>
        <a href="#_">
          <span class="sr-only">Back to home</span>
          <Logo class="h-12 mx-auto text-white md:mx-0" aria-hidden="true" /></a
        >
        <Text
          tag="h1"
          variant="textXL"
          class="mt-12 font-medium text-white text-shadow-sm text-balance"
        >
          Go ahead, start your "journey."
        </Text>
        <Text tag="p" variant="textSM" class="mt-2 text-white text-shadow-sm">
          Join the internet’s favorite club of freelancers and business owners—
          because what could possibly go wrong?
        </Text>
      </div>
      <div>
        <div
          class="w-full p-6 shadow bg-accent-900/10 backdrop-blur rounded-xl"
        >
          <div class="relative flex flex-col gap-2">
            <Text tag="h3" variant="textBase" class="text-white">
              "I’ve seen enough UI kits to last a lifetime. Oxbow’s the first
              one that didn’t make me roll my eyes."
            </Text>
            <div class="flex items-center mt-2 gap-4">
              <Image
                src={A1}
                alt="#_"
                width={1000}
                height={1000}
                aria-hidden="true"
                class="object-cover object-top rounded-full size-10"
              />
              <div>
                <Text
                  tag="p"
                  variant="textBase"
                  class="font-semibold text-white"
                >
                  Johan Snällström
                </Text>
                <Text tag="p" variant="textXS" class="text-base-200">
                  Software Engineer
                </Text>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
