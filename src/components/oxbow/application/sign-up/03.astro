---
export const excludeFromObfuscation = [
  "ring-blue-500",
  "outline-zinc-200",
  "outline-zinc-300",
];

export const description = "Split screen signup with testimonial";
// Assets
import { Image } from "astro:assets";
import A1 from "@/images/avatars/avatar1.jpeg";
import Placeholder from "@/images/gradients/3.jpeg";
// Fundations
import Logo from "@/components/assets/Logo.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
// Icons
import Check from "@/components/fundations/icons/Check.astro";
---

<div class="flex h-screen bg-white dark:bg-zinc-900">
  <div
    class="flex items-center justify-center w-full  lg:w-2/3"
  >
    <div
      class="w-full max-w-md py-24 lg:py-32 "
    >
      <div>
        <Text
          tag="h1"
          variant="displaySM"
          class="font-semibold tracking-tight text-zinc-900 dark:text-white"
        >
          Create your account
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-2 text-zinc-500 dark:text-zinc-400 text-balance"
        >
          Join the party. Set up your account the old-fashioned way—email,
          password, done.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <div
          x-data="{
radioGroupSelectedValue: null,
radioGroupOptions: [
  {
    title: 'Projects',
    value: 'projects'
  },
  {
    title: 'Designs',
    value: 'design'
  },
]
}"
          class="flex flex-wrap pb-4 border-b gap-y-2 gap-x-8 border-zinc-200 dark:border-zinc-700"
          role="radiogroup"
          aria-labelledby="radio-group-label"
        >
          <span id="radio-group-label" class="sr-only"
            >Choose your work status</span
          >
          <template x-for="(option, index) in radioGroupOptions" :key="index">
            <div>
              <input
                type="radio"
                :id="'radio-' + option.value"
                name="radio-group"
                :value="option.value"
                x-model="radioGroupSelectedValue"
                class="sr-only"
                :aria-describedby="'ttile-' + option.value"
              />
              <label
                :for="'radio-' + option.value"
                class="block cursor-pointer"
                :class="{ 'ring-blue-500': radioGroupSelectedValue === option.value }"
              >
                <div class="rounded-lg" tabindex="-1">
                  <div class="flex items-center gap-2">
                    <div
                      class="flex items-center justify-center text-blue-600 bg-white rounded shadow size-4 outline outline-zinc-300 dark:outline-zinc-700 dark:text-blue-400 dark:bg-zinc-800"
                      :class="{ 'outline-zinc-200 dark:outline-zinc-500': radioGroupSelectedValue === option.value, 'outline-zinc-300 dark:outline-zinc-700': radioGroupSelectedValue !== option.value }"
                      aria-hidden="true"
                    >
                      <Check
                        x-show="radioGroupSelectedValue === option.value"
                        size="xs"
                        class="text-blue-500 dark:text-blue-400"
                      />
                    </div>
                    <Text
                      tag="span"
                      variant="textSM"
                      x-text="option.title"
                      class="font-medium text-zinc-900 dark:text-white"
                    />
                  </div>
                </div>
              </label>
            </div>
          </template>
        </div>
        <TextInput
          id="email"
          name="email"
          label="Email Address"
          type="email"
          variant="default"
          size="base"
          placeholder="you@example.com"
        />
        <TextInput
          id="password"
          name="password"
          label="Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />
        <TextInput
          id="confirm-password"
          name="confirmPassword"
          label="Confirm Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />
        <Text
          tag="p"
          variant="textXS"
          class="font-medium text-zinc-500 dark:text-zinc-400"
        >
          By creating an account, you agree to our
          <a
            href="#_"
            class="font-medium text-blue-500 dark:text-blue-400 hover:text-zinc-500 dark:hover:text-zinc-300"
          >
            Terms of service
          </a>
          and
          <a href="#_" class="font-medium text-blue-500 hover:text-zinc-500">
            Privacy Policy
          </a>
        </Text>
        <Button fullWidth variant="default" size="base"> Create account </Button>
      </form>
      <Text
        tag="p"
        variant="textXS"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Already have an account?
        <a
          href="#_"
          class="font-medium text-blue-500 dark:text-blue-400 hover:text-zinc-500 dark:hover:text-zinc-300"
        >
          Sign in
        </a>
      </Text>
    </div>
  </div>
  <div
    class="relative hidden overflow-hidden bg-white border-8 border-white dark:border-zinc-900 lg:block dark:bg-zinc-900 lg:w-1/3 lg:order-first"
  >
    <Image
      width={1200}
      height={1200}
      src={Placeholder}
      alt="Background"
      aria-hidden="true"
      class="object-cover object-center w-full h-full rounded-2xl grayscale"
    />
    <div
      aria-hidden="true"
      class="absolute inset-0 pointer-events-none bg-zinc-800/80 rounded-2xl"
    >
    </div>
    <div class="absolute inset-0 flex flex-col items-start justify-between p-8">
      <div>
        <a href="#_">
          <span class="sr-only">Back to home</span>
          <Logo class="h-12 mx-auto text-white md:mx-0" aria-hidden="true" /></a
        >
        <Text
          tag="h1"
          variant="textXL"
          class="mt-12 font-semibold text-white text-shadow-sm text-balance"
        >
          Go ahead, start your "journey."
        </Text>
        <Text tag="p" variant="textSM" class="mt-2 text-white text-shadow-sm">
          Join the internet's favorite club of freelancers and business owners—
          because what could possibly go wrong?
        </Text>
      </div>
      <div>
        <div class="w-full p-6 shadow bg-zinc-900/20 backdrop-blur rounded-xl">
          <div class="relative flex flex-col gap-2">
            <Text tag="h3" variant="textBase" class="text-white">
              "I've seen enough UI kits to last a lifetime. Oxbow's the first
              one that didn't make me roll my eyes."
            </Text>
            <div class="flex items-center mt-2 gap-4">
              <Image
                src={A1}
                alt="#_"
                width={1000}
                height={1000}
                aria-hidden="true"
                class="object-cover object-top rounded-full size-10"
              />
              <div>
                <Text
                  tag="p"
                  variant="textBase"
                  class="font-semibold text-white"
                >
                  Johan Snällström
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class="text-zinc-200 dark:text-zinc-400"
                >
                  Software Engineer
                </Text>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
