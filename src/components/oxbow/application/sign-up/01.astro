---
export const freeComponent = true;
export const description = "simple Sign up block ";

// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---

<section>
  <div
    class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl bg-white dark:bg-zinc-900"
  >
    <div
      class="max-w-md mx-auto bg-white dark:bg-zinc-900 rounded-xl shadow-lg p-8"
    >
      <div class="text-center">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-zinc-900 dark:text-zinc-100"
        >
          Sign up, no nonsense
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-zinc-500 dark:text-zinc-400 text-balance"
        >
          Just your email and a password. That’s it. You’re in.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <TextInput
          id="email"
          name="email"
          label="Email Address"
          type="email"
          variant="default"
          size="base"
          placeholder="you@example.com"
        />
        <TextInput
          id="password"
          name="password"
          label="Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />
        <Text
          tag="p"
          variant="textXS"
          class="font-medium text-zinc-500 dark:text-zinc-400"
        >
          By creating an account, you agree to our
          <a
            href="#_"
            class="font-medium text-blue-500 dark:text-blue-400 hover:text-zinc-500 dark:hover:text-zinc-300"
          >
            Terms of service
          </a>
          and
          <a href="#_" class="font-medium text-blue-500 hover:text-zinc-500">
            Privacy Policy
          </a>
        </Text>
        <Button fullWidth variant="accent" size="base"> Create account </Button>
      </form>
      <Text
        tag="p"
        variant="textXS"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Already have an account?
        <a
          href="#_"
          class="font-medium text-blue-500 dark:text-blue-400 hover:text-zinc-500 dark:hover:text-zinc-300"
        >
          Sign in
        </a>
      </Text>
    </div>
  </div>
</section>
