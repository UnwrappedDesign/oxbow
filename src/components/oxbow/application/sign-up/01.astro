---
export const description = "simple Sign up block ";

// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---

<section>
  <div class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="max-w-md mx-auto">
      <div class="text-center">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-base-900"
        >
          Sign up, no nonsense
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 text-balance"
        >
          Just your email and a password. That’s it. You’re in.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <TextInput
          id="email"
          name="email"
          label="Email Address"
          type="email"
          variant="default"
          size="base"
          placeholder="you@example.com"
        />
        <TextInput
          id="password"
          name="password"
          label="Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />
        <Text tag="p" variant="textXS" class="font-medium text-base-500">
          By creating an account, you agree to our
          <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
            Terms of service
          </a>
          and
          <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
            Privacy Policy
          </a>
        </Text>
        <Button fullWidth variant="accent" size="base"> Create account </Button>
      </form>
      <Text tag="p" variant="textXS" class="mt-4 font-medium text-base-500">
        Already have an account?
        <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
          Sign in
        </a>
      </Text>
    </div>
  </div>
</section>
