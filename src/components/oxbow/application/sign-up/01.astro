---
export const description =
  "Sign-up block: drop your email and set a password. No frills, just get started.";

// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Input from "@/components/fundations/inputs/Input.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<section>
  <div class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="max-w-md mx-auto">
      <div class="text-center">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-base-900"
        >
          Sign up, no nonsense
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 text-balance"
        >
          Just your email and a password. That’s it. You’re in.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <Input
          id="email"
          name="email"
          type="email"
          label="Email address"
          placeholder="email@example.com"
          variant="default"
          size="base"
        />
        <Input
          id="password"
          name="password"
          type="password"
          label="Password"
          placeholder="••••••••"
          variant="default"
          size="base"
          passwordToggle={true}
        />
        <Text tag="p" variant="textXS" class="font-medium text-base-500">
          By creating an account, you agree to our
          <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
            Terms of service
          </a>
          and
          <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
            Privacy Policy
          </a>
        </Text>
        <Button fullWidth variant="accent" size="base"> Create account </Button>
      </form>
      <Text tag="p" variant="textXS" class="mt-4 font-medium text-base-500">
        Already have an account?
        <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
          Sign in
        </a>
      </Text>
    </div>
  </div>
</section>
