---
import Button from "@/components/fundations/buttons/Button.astro";
import Apple from "@/components/fundations/icons/Apple.astro";
import Chrome from "@/components/fundations/icons/Chrome.astro";
import Meta from "@/components/fundations/icons/Meta.astro";
---

<div class="relative">
  <div
    class="m-4 overflow-hidden lg:absolute lg:inset-0 lg:right-1/2 ring-8 ring-white rounded-2xl">
    <img
      class="object-cover w-full h-64 bg-base-50 sm:h-80 lg:absolute lg:h-full"
      src="/people/1w.jpg"
      alt=""
    />
  </div>
  <div
    class="pt-16 pb-24 sm:pb-32 sm:pt-24 lg:mx-auto lg:grid lg:max-w-7xl lg:grid-cols-2 lg:pt-32">
    <div class="px-6 lg:col-start-2 lg:px-8 lg:pl-24">
      <div class="max-w-lg mx-auto lg:mx-0">
        <div class="lg:text-balance">
          <img
            class="h-20 mb-12"
            src="/images/oxbow/blueLineLogo.png"
            alt="#_"
          />
          <span
            class="font-mono text-xs font-medium tracking-tight text-accent-600 uppercase"
            >Sign up</span
          >
          <h1
            class="mt-4 text-3xl font-semibold tracking-tight text-base-900 sm:text-balance">
            Join our community
          </h1>
          <p class="mt-6 text-base font-medium text-base-500 sm:text-balance">
            Sign up to join our community and start building your brand.
          </p>
        </div>
        <form
          action="#"
          method="POST"
          class="max-w-lg mx-auto mt-12">
          <div class="flex flex-col gap-y-6">
            <div>
              <label
                for="first-name"
                class="block text-sm font-medium text-base-500">
                First name
              </label>
              <div class="mt-2.5">
                <input
                  type="text"
                  name="first-name"
                  id="first-name"
                  autocomplete="given-name"
                  required
                  aria-required="true"
                  aria-describedby="first-name-error"
                  placeholder="Your first name"
                  class="block w-full h-10 px-4 py-2 text-sm text-accent-700 placeholder-base-400 duration-300 bg-white border border-transparent rounded-lg shadow appearance-none ring-1 ring-base-200 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
                />
                <span
                  id="first-name-error"
                  class="hidden text-sm text-red-600">
                  Please enter your first name.
                </span>
              </div>
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-base-500">
                Email
              </label>
              <div class="mt-2.5">
                <input
                  type="email"
                  name="email"
                  id="email"
                  autocomplete="email"
                  required
                  aria-required="true"
                  aria-describedby="email-error"
                  placeholder="Your email"
                  class="block w-full h-10 px-4 py-2 text-sm text-accent-700 placeholder-base-400 duration-300 bg-white border border-transparent rounded-lg shadow appearance-none ring-1 ring-base-200 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
                />
                <span
                  id="email-error"
                  class="hidden text-sm text-red-600">
                  Please enter a valid email address.
                </span>
              </div>
            </div>
            <div>
              <label
                for="password"
                class="block text-sm font-medium text-base-500">
                Password
              </label>
              <div class="mt-2.5">
                <input
                  type="password"
                  name="password"
                  id="password"
                  autocomplete="current-password"
                  required
                  aria-required="true"
                  aria-describedby="password-error"
                  placeholder="Your password"
                  class="block w-full h-10 px-4 py-2 text-sm text-accent-700 placeholder-base-400 duration-300 bg-white border border-transparent rounded-lg shadow appearance-none ring-1 ring-base-200 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
                />
                <span
                  id="password-error"
                  class="hidden text-sm text-red-600">
                  Please enter a valid password.
                </span>
              </div>
            </div>
            <div>
              <label
                for="confirm-password"
                class="text-sm font-medium text-base-500">
                Confirm Password
              </label>
              <div class="mt-2.5">
                <input
                  type="password"
                  name="confirm-password"
                  id="confirm-password"
                  autocomplete="new-password"
                  required
                  aria-required="true"
                  aria-describedby="confirm-password-error"
                  placeholder="Confirm your password"
                  class="block w-full h-10 px-4 py-2 text-sm text-accent-700 placeholder-base-400 duration-300 bg-white border border-transparent rounded-lg shadow appearance-none ring-1 ring-base-200 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
                />
                <span
                  id="confirm-password-error"
                  class="hidden text-sm text-red-600">
                  Passwords do not match.
                </span>
              </div>
            </div>
            <div>
              <div class="flex items-center">
                <input
                  id="remember-me"
                  name="remember-me"
                  type="checkbox"
                  class="text-accent-600 border-base-300 rounded size-4 focus:ring-accent-600"
                />
                <label
                  for="remember-me"
                  class="block ml-3 text-sm leading-6 text-base-900"
                  >Remember me</label
                >
              </div>
              <div class="flex items-center mt-2">
                <input
                  id="agreement"
                  name="agreement"
                  type="checkbox"
                  class="text-accent-600 border-base-300 rounded size-4 focus:ring-accent-600"
                />
                <label
                  for="agreement"
                  class="block ml-3 text-sm text-base-500"
                  >You agree to our <a
                    class="text-accent-600 hover:text-base-900"
                    href="#_"
                    >Terms of Service</a
                  > and <a
                    class="text-accent-600 hover:text-base-900"
                    href="#_"
                    >Privacy Policy</a
                  >.</label
                >
              </div>
            </div>
          </div>

          <div class="mt-10">
            <Button
              class="w-full"
              variant="accent"
              size="base">
              Sign up
            </Button>
          </div>
        </form>
        <div class="relative mt-12">
          <div
            class="absolute inset-0 flex items-center"
            aria-hidden="true">
            <div class="w-full border-t"></div>
          </div>
          <div
            class="relative flex justify-center text-sm font-medium leading-6">
            <span class="px-6 text-base-900 bg-white">Or Sign up with</span>
          </div>
        </div>
        <div class="flex gap-4 mt-4">
          <Button
            class="w-full  justify-center"
            variant="apple-brand"
            size="base"
            gap="gapXS">

            <Apple
              size="sm"
              slot="right-icon"
            />
          </Button>
          <Button
            class="w-full justify-center"
            variant="meta-brand"
            size="base"
            gap="gapXS">

            <Meta
              size="sm"
              slot="right-icon"
            />
          </Button>
          <Button
            class="w-full justify-center"
            variant="muted"
            size="base"
            gap="gapXS">

            <Chrome
              size="sm"
              slot="right-icon"
            />
          </Button>
        </div>
        <div class="flex justify-center mt-4">
          <p class="text-sm text-base-500">
            Already have an account?
            <a
              class="text-accent-600 hover:text-base-900"
              href="#_"
              >Sign in</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
