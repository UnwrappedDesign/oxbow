---
export const description =
  "Split-screen signup: form & social buttons on the right, saccharine “journey” hype on the left.";

// Assets
import { Image } from "astro:assets";
import Placeholder from "@/images/gradients/4.jpeg";

// Fundations
import Logo from "@/components/assets/Logo.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Input from "@/components/fundations/inputs/Input.astro";
import Button from "@/components/fundations/buttons/Button.astro";
// Icons
import AppleColor from "@/components/fundations/icons/AppleColor.astro";
import GoogleColor from "@/components/fundations/icons/GoogleColor.astro";
---

<div class="relative flex h-screen">
  <Image
    width={1200}
    height={1200}
    src={Placeholder}
    alt="Background"
    aria-hidden="true"
    class="absolute inset-0 object-cover object-center w-full h-full"
  />
  <div
    aria-hidden="true"
    class="absolute inset-0 pointer-events-none bg-accent-700/50"
  >
  </div>
  <div class="flex w-full ml-auto lg:p-4 lg:w-1/2">
    <div
      class="relative flex items-center justify-center w-full p-8 ml-auto bg-white rounded-lg"
    >
      <div class="w-full max-w-md py-24 lg:py-32">
        <div>
          <Text
            tag="h1"
            variant="displayMD"
            class="font-medium tracking-tight text-base-900"
          >
            Create your account
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 text-base-500 text-balance"
          >
            Join the party. Set up your account the old-fashioned way—email,
            password, done.
          </Text>
        </div>
        <form class="mt-10 space-y-4">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
            <Button
              variant="alternative"
              size="base"
              gap="sm"
              fullWidth
              class="flex items-center"
            >
              <GoogleColor slot="left-icon" class="size-4" />
              Google
            </Button>
            <Button
              variant="alternative"
              size="base"
              gap="sm"
              fullWidth
              class="flex items-center"
            >
              <AppleColor slot="left-icon" class="size-4" />
              Apple
            </Button>
          </div>
          <div class="relative">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="w-full border-t border-base-200"></div>
            </div>
            <div class="relative flex justify-center">
              <span class="px-2 text-sm bg-white text-base-500"
                >Or sign in with</span
              >
            </div>
          </div>
          <Input
            id="email"
            name="email"
            type="email"
            label="Email address"
            placeholder="email@example.com"
            variant="default"
            size="base"
          />
          <Input
            id="password"
            name="password"
            type="password"
            label="Password"
            placeholder="************"
            variant="alternative"
            size="base"
          />
          <Input
            id="confirm-password"
            name="confirm-password"
            type="password"
            label="Confirm password"
            placeholder="************"
            variant="alternative"
            size="base"
          />
          <Text tag="p" variant="textXS" class="font-medium text-base-500">
            By creating an account, you agree to our
            <a
              href="#_"
              class="font-medium text-accent-500 hover:text-base-500"
            >
              Terms of service
            </a>
            and
            <a
              href="#_"
              class="font-medium text-accent-500 hover:text-base-500"
            >
              Privacy Policy
            </a>
          </Text>
          <Button fullWidth variant="accent" size="base">
            Create account
          </Button>
        </form>
        <Text tag="p" variant="textXS" class="mt-4 font-medium text-base-500">
          Already have an account?
          <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
            Sign in
          </a>
        </Text>
      </div>
    </div>
  </div>
  <div
    class="relative hidden mr-auto overflow-hidden lg:block lg:w-1/2 lg:order-first"
  >
    <div class="absolute inset-0 flex flex-col items-start justify-between p-4">
      <a href="#_">
        <span class="sr-only">Back to home</span>
        <Logo class="h-12 mx-auto text-white md:mx-0" aria-hidden="true" /></a
      >
      <div class="mt-12 max-lg">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium text-white text-shadow-sm text-balance"
        >
          Go ahead, start your "journey."
        </Text>
        <Text tag="p" variant="textMD" class="mt-2 text-white text-shadow-sm">
          Join the internet’s favorite club of freelancers and business owners—
          because what could possibly go wrong?
        </Text>
      </div>
    </div>
  </div>
</div>
