---
export const description = "Centered sign up block";

// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
// Icons
import AppleColor from "@/components/fundations/icons/AppleColor.astro";
import GoogleColor from "@/components/fundations/icons/GoogleColor.astro";
---

<section>
  <div
    class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl bg-white dark:bg-black"
  >
    <div
      class="max-w-md mx-auto bg-white dark:bg-zinc-900 rounded-xl shadow-lg p-8"
    >
      <div class="text-center lg:text-balance">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-zinc-900 dark:text-zinc-100"
        >
          Create your account
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-zinc-500 dark:text-zinc-400 text-balance"
        >
          Join the party. Set up your account the old-fashioned way—email,
          password, done.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
          <Button
            variant="alternative"
            size="base"
            gap="sm"
            fullWidth
            class="flex items-center"
          >
            <GoogleColor slot="left-icon" class="size-4" />
            Google
          </Button>
          <Button
            variant="alternative"
            size="base"
            gap="sm"
            fullWidth
            class="flex items-center"
          >
            <AppleColor slot="left-icon" class="size-4" />
            Apple
          </Button>
        </div>
        <div class="relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-zinc-200 dark:border-zinc-700">
            </div>
          </div>
          <div class="relative flex justify-center">
            <span
              class="px-2 text-sm bg-white dark:bg-zinc-900 text-zinc-500 dark:text-zinc-400"
              >Or sign up with email</span
            >
          </div>
        </div>
        <TextInput
          id="name"
          name="name"
          label="Full Name"
          type="text"
          variant="default"
          size="base"
          placeholder="John Doe"
        />

        <TextInput
          id="email"
          name="email"
          label="Email Address"
          type="email"
          variant="default"
          size="base"
          placeholder="you@example.com"
        />
        <TextInput
          id="password"
          name="password"
          label="Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />
        <TextInput
          id="confirm-password"
          name="confirmPassword"
          label="Confirm Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />

        <Text
          tag="p"
          variant="textXS"
          class="font-medium text-zinc-500 dark:text-zinc-400"
        >
          By creating an account, you agree to our
          <a
            href="#_"
            class="font-medium text-blue-500 dark:text-blue-400 hover:text-zinc-500 dark:hover:text-zinc-300"
          >
            Terms of service
          </a>
          and
          <a href="#_" class="font-medium text-blue-500 hover:text-zinc-500">
            Privacy Policy
          </a>
        </Text>
        <Button fullWidth variant="accent" size="base"> Create account </Button>
      </form>
      <Text
        tag="p"
        variant="textXS"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Already have an account?
        <a
          href="#_"
          class="font-medium text-blue-500 dark:text-blue-400 hover:text-zinc-500 dark:hover:text-zinc-300"
        >
          Sign in
        </a>
      </Text>
    </div>
  </div>
</section>
