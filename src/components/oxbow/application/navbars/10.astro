---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];

import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<!-- copy:start -->
<header
  class="w-full mx-auto bg-white dark:bg-zinc-900 border-b border-zinc-200 dark:border-zinc-800"
>
  <div
    x-data="{ open:false, proj:false }"
    class="max-w-screen-xl mx-auto px-6 md:px-10 lg:px-16 py-2"
  >
    <div class="flex items-center gap-3">
      <!-- Project switcher -->
      <div class="relative">
        <button
          @click="proj=!proj"
          :aria-expanded="proj"
          aria-haspopup="listbox"
          class="inline-flex items-center gap-2 h-8 px-2 rounded-md outline outline-1 outline-zinc-200 dark:outline-zinc-700 text-sm text-zinc-700 dark:text-zinc-200"
        >
          <span class="size-2 rounded-full bg-emerald-500"></span>
         Tailwind CSS v4
          <svg class="size-4 text-zinc-400" viewBox="0 0 24 24" fill="none"
            ><path
              d="M6 9l6 6 6-6"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path></svg
          >
        </button>
        <div
          x-show="proj"
          @click.outside="proj=false"
          class="absolute z-10 mt-2 w-56 rounded-xl bg-white dark:bg-zinc-900 shadow-oxbow outline outline-1 outline-zinc-100 dark:outline-zinc-800 p-1"
        >
          {
            ["Tailwind CSS v4", "Tailwind CSS v3.5", "Tailwind CSS v3"].map((n) => (
              <a
                href="#_"
                class="block px-3 py-1.5 rounded-md text-sm text-zinc-700 dark:text-zinc-200 hover:bg-zinc-100 dark:hover:bg-zinc-800"
              >
                {n}
              </a>
            ))
          }
        </div>
      </div>

      <!-- Center tabs -->
      <nav
        aria-label="Primary"
        class="mx-auto hidden md:flex items-center gap-5 text-xs"
      >
        <a
          href="#_"
          class="py-2 text-blue-600 dark:text-blue-400 font-medium"
          >Overview</a
        >
        <a
          href="#_"
          class="py-2 text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Graphs</a
        >
        <a
          href="#_"
          class="py-2 text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Backups</a
        >
      </nav>

      <!-- Actions -->
      <div class="ml-auto flex items-center gap-2">
        <div
          class="hidden md:flex items-center gap-2 text-xs text-zinc-500 dark:text-zinc-400"
        >
          <span class="inline-flex items-center gap-1"
            ><span class="size-1.5 rounded-full bg-emerald-500"></span> Online</span
          >
          <span>99.9%</span>
          <span>45ms</span>
        </div>
        <Button variant="accent" size="xs">New</Button>
        <IconButton
          class="md:hidden"
          @click="open=!open"
          :aria-expanded="open"
          aria-controls="nav-10"
          variant="alternative"
          size="xs"><Burger size="xs" slot="icon" /></IconButton
        >
      </div>
    </div>

    <!-- Mobile menu -->
    <nav
      id="nav-10"
      :class="{ 'block': open, 'hidden': !open }"
      class="md:hidden hidden mt-2 space-y-2"
      aria-label="Mobile"
    >
      <a
        href="#_"
        class="block px-2 py-1 rounded-md text-zinc-600 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800"
        >Overview</a
      >
      <a
        href="#_"
        class="block px-2 py-1 rounded-md text-zinc-600 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800"
        >Graphs</a
      >
      <a
        href="#_"
        class="block px-2 py-1 rounded-md text-zinc-600 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800"
        >Backups</a
      >
    </nav>
  </div>
</header>
<!-- copy:end -->
