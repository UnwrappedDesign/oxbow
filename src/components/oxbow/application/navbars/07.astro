---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Logo from "@/components/assets/Logo.astro";
import Text from "@/components/fundations/typography/Text.astro";
import ChevronDown from "@/components/fundations/icons/ChevronDown.astro";
import FlyoutLinkBox from "@/components/fundations/wrappers/FlyoutLinkBox.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
---

<div class="bg-white dark:bg-zinc-900 pb-100">
  <!-- copy:start -->
  <header
    class="w-full bg-white border-b border-zinc-200 dark:border-zinc-800 dark:bg-zinc-900"
  >
    <div
      x-data="{ open:false, cats:false }"
      class="px-6 mx-auto max-w-screen-xl md:px-10 lg:px-16"
    >
      <div class="flex items-center justify-between h-16 gap-3">
        <a href="#_" class="inline-flex items-center gap-2"
          ><Logo class="text-black h-7 dark:text-white" /><span class="sr-only"
            >Home</span
          ></a
        >
        <div class="items-center hidden md:flex gap-2">
          <div x-data="{open:false}" class="relative">
            <Button
              size="xs"
              variant="ghost"
              @click="open=!open"
              @keydown.escape.window="open=false"
              :aria-expanded="open"
              class="flex items-center justify-between gap-2"
              >Categories
              <ChevronDown
                size="sm"
                slot="right-icon"
                :class="open ? '-rotate-180' : ''"
                class="duration-300 ease-out transform"
              />
            </Button>
            <div
              x-show="open"
              x-transition
              @click.outside="open=false"
              class="absolute left-0 top-full z-30 mt-2 w-[680px] rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900 shadow-subtle p-4 grid grid-cols-3 gap-3"
            >
              <FlyoutLinkBox
                href="#_"
                title="Men"
                description="Clothing & accessories"
              />
              <FlyoutLinkBox
                href="#_"
                title="Women"
                description="Latest arrivals"
              />
              <FlyoutLinkBox href="#_" title="Kids" description="New season" />
              <FlyoutLinkBox
                href="#_"
                title="Home"
                description="Decor & furniture"
              />
              <FlyoutLinkBox
                href="#_"
                title="Electronics"
                description="Gadgets & audio"
              />
              <FlyoutLinkBox
                href="#_"
                title="Sports"
                description="Outdoor & fitness"
              />
            </div>
          </div>
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
            >Deals</Text
          >
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
            >New</Text
          >
        </div>
        <div class="items-center hidden md:flex gap-2">
          <Button variant="muted" size="xs">Cart (2)</Button>
          <Button variant="accent" size="xs">Checkout</Button>
        </div>
        <IconButton
          class="md:hidden"
          @click="open=!open"
          :aria-expanded="open"
          aria-controls="nav-07"
          variant="muted"
          size="xs"
        >
          <Burger size="xs" slot="icon" />
        </IconButton>
      </div>
      <div
        id="nav-07"
        :class="{ 'grid': open, 'hidden': !open }"
        class="hidden pb-4 grid-cols-1 gap-2 md:hidden"
      >
        <details>
          <summary
            class="items-start justify-between w-full text-sm font-medium text-left select-none grid grid-cols-4 text-zinc-900 dark:text-white hover:text-zinc-500 dark:hover:text-zinc-400 focus:text-zinc-500 gap-4dark:focus:text-zinc-400"
            ><span class="col-span-3">Categories</span>
            <Plus
              class="ml-auto duration-300 ease-out transform group-open:-rotate-45 group-open:text-blue-600 dark:text-zinc-400"
              size="sm"
            />
          </summary>
          <div
            class="py-2 pt-2 text-sm text-zinc-500 dark:text-zinc-400 space-y-2"
          >
            <Text
              tag="p"
              variant="textSM"
              class="font-medium text-zinc-500 dark:text-zinc-400">Men</Text
            >
            <Text
              tag="p"
              variant="textSM"
              class="font-medium text-zinc-500 dark:text-zinc-400">Women</Text
            >
            <Text
              tag="p"
              variant="textSM"
              class="font-medium text-zinc-500 dark:text-zinc-400">Kids</Text
            >
            <Text
              tag="p"
              variant="textSM"
              class="font-medium text-zinc-500 dark:text-zinc-400">Home</Text
            >
            <Text
              tag="p"
              variant="textSM"
              class="font-medium text-zinc-500 dark:text-zinc-400"
              >Electronics</Text
            >
            <Text
              tag="p"
              variant="textSM"
              class="font-medium text-zinc-500 dark:text-zinc-400">Sports</Text
            >
          </div>
        </details>

        <Button variant="muted" size="xs">Deals</Button>
        <Button variant="muted" size="xs">NEw</Button>
        <Button variant="muted" size="xs">Cart (2)</Button>
        <Button variant="accent" size="xs">Checkout</Button>
      </div>
    </div>
  </header>
  <!-- copy:end -->
</div>
