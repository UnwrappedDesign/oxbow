---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Logo from "@/components/assets/Logo.astro";
---

<!-- copy:start -->
<header
  class="w-full border-b border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900"
>
  <div
    x-data="{ open:false, cats:false }"
    class="mx-auto max-w-screen-xl px-6 md:px-10 lg:px-16"
  >
    <div class="flex h-16 items-center justify-between gap-3">
      <a href="#_" class="inline-flex items-center gap-2"
        ><Logo class="h-7 text-black dark:text-white" /><span class="sr-only"
          >Home</span
        ></a
      >
      <div class="hidden md:flex items-center gap-2">
        <div x-data="{open:false}" class="relative">
          <button
            @click="open=!open"
            @keydown.escape.window="open=false"
            :aria-expanded="open"
            class="px-2 py-2 text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300"
            >Categories</button
          >
          <div
            x-show="open"
            x-transition
            @click.outside="open=false"
            class="absolute left-0 top-full z-30 mt-2 w-[680px] rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900 shadow-subtle p-4 grid grid-cols-3 gap-3"
          >
            <a
              href="#_"
              class="rounded-md p-3 hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >
              <div class="text-sm font-medium text-zinc-900 dark:text-white">
                Men
              </div>
              <div class="text-xs text-zinc-500">Clothing & accessories</div>
            </a>
            <a
              href="#_"
              class="rounded-md p-3 hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >
              <div class="text-sm font-medium text-zinc-900 dark:text-white">
                Women
              </div>
              <div class="text-xs text-zinc-500">Latest arrivals</div>
            </a>
            <a
              href="#_"
              class="rounded-md p-3 hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >
              <div class="text-sm font-medium text-zinc-900 dark:text-white">
                Kids
              </div>
              <div class="text-xs text-zinc-500">New season</div>
            </a>
            <a
              href="#_"
              class="rounded-md p-3 hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >
              <div class="text-sm font-medium text-zinc-900 dark:text-white">
                Home
              </div>
              <div class="text-xs text-zinc-500">Decor & furniture</div>
            </a>
            <a
              href="#_"
              class="rounded-md p-3 hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >
              <div class="text-sm font-medium text-zinc-900 dark:text-white">
                Electronics
              </div>
              <div class="text-xs text-zinc-500">Gadgets & audio</div>
            </a>
            <a
              href="#_"
              class="rounded-md p-3 hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >
              <div class="text-sm font-medium text-zinc-900 dark:text-white">
                Sports
              </div>
              <div class="text-xs text-zinc-500">Outdoor & fitness</div>
            </a>
          </div>
        </div>
        <a
          href="#_"
          class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300"
          >Deals</a
        >
        <a
          href="#_"
          class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300"
          >New</a
        >
      </div>
      <div class="hidden md:flex items-center gap-2">
        <a
          href="#_"
          class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300"
          >Cart (2)</a
        >
        <Button variant="accent" size="xs">Checkout</Button>
      </div>
      <IconButton
        class="md:hidden"
        @click="open=!open"
        :aria-expanded="open"
        aria-controls="nav-07"
        variant="outline"
        size="xs"
      >
        <Burger size="xs" slot="icon" />
      </IconButton>
    </div>
    <div
      id="nav-07"
      :class="{ 'grid': open, 'hidden': !open }"
      class="hidden grid-cols-1 gap-2 pb-4 md:hidden"
    >
      <details
        class="rounded-lg border border-zinc-200 dark:border-zinc-800 p-2"
      >
        <summary
          class="cursor-pointer px-2 py-1.5 text-sm font-medium text-zinc-700 dark:text-zinc-200"
          >Categories</summary
        >
        <div class="mt-1 grid grid-cols-2 gap-1">
          <a
            href="#_"
            class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >Men</a
          >
          <a
            href="#_"
            class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >Women</a
          >
          <a
            href="#_"
            class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >Kids</a
          >
          <a
            href="#_"
            class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >Home</a
          >
          <a
            href="#_"
            class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >Electronics</a
          >
          <a
            href="#_"
            class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
            >Sports</a
          >
        </div>
      </details>
      <a
        href="#_"
        class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
        >Deals</a
      >
      <a
        href="#_"
        class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
        >New</a
      >
      <div class="flex items-center gap-2">
        <a
          href="#_"
          class="flex-1 rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
          >Cart (2)</a
        >
        <Button variant="accent" size="xs">Checkout</Button>
      </div>
    </div>
  </div>
</header>
<!-- copy:end -->
