---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];
import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Logo from "@/components/assets/Logo.astro";
---
<!-- copy:start -->
<header
  class="w-full mx-auto bg-zinc-50 dark:bg-zinc-900 border-b border-zinc-200 dark:border-zinc-800"
>
  <div
    x-data="{ open:false }"
    class="max-w-screen-xl mx-auto px-6 md:px-10 lg:px-16 pt-2"
  >
    <div class="flex items-center justify-between gap-4">
      <!-- Brand -->
      <Logo class="h-7 text-black dark:text-white" />
      <IconButton
        class="md:hidden"
        @click="open=!open"
        :aria-expanded="open"
        aria-controls="nav-3"
        variant="alternative"
        size="xs"
      >
        <Burger size="xs" slot="icon" />
      </IconButton>
      <nav
        id="nav-3"
        aria-label="Primary"
        :class="{ 'flex': open, 'hidden': !open }"
        class="items-center hidden md:flex gap-4"
      >
        <a
          href="#_"
          class="relative py-2 text-sm text-blue-600 dark:text-blue-400 font-medium after:absolute after:left-0 after:right-0 after:-bottom-px after:h-[2px] after:bg-current"
          >Home</a
        >
        <a
          href="#_"
          class="py-2 text-sm text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Features</a
        >
        <a
          href="#_"
          class="py-2 text-sm text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Pricing</a
        >
        <a
          href="#_"
          class="py-2 text-sm text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Docs</a
        >
        <span aria-hidden class="mx-1 h-4 w-px bg-zinc-200 dark:bg-zinc-800"
        ></span>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="py-1 px-2 rounded text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Sign in</Text
        >
        <Button class="md:ml-1" variant="accent" size="xs">Sign up</Button>
      </nav>
    </div>
  </div>
</header>
<!-- copy:end -->
