---
import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Text from "@/components/fundations/typography/Text.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<div class="justify-center w-full mx-auto bg-base-50">
  <!-- Banner Section -->
  <div
    class="flex items-center justify-center py-2 lg:h-12 text-white bg-gradient-to-b from-accent-500 px-8 to-accent-600"
  >
    <div class="flex flex-col lg:flex-row lg:items-center justify-center gap-4">
      <div class="text-xs font-medium">
        <Text tag="span" variant="textSM" class="font-medium text-white">
          We have launched a new version of Oxbow UI
        </Text>
      </div>
      <div class="hidden w-px h-6 lg:block bg-white/20"></div>
      <div>
        <Text
          tag="a"
          href="#_"
          variant="textSM"
          class="hover:text-accent-200 font-medium flex items-center gap-2 text-white"
        >
          Talk to sales
          <ChevronRight size="sm" />
        </Text>
      </div>
    </div>
  </div>
  <!-- Navigation Section with Alpine.js State Management -->
  <div
    x-data="{ open: false }"
    class="flex flex-col w-full mx-auto md:px-12 md:items-center md:justify-between md:flex-row px-8 py-2 lg:px-24 max-w-screen-xl relative"
  >
    <div class="flex flex-row items-center justify-between text-black">
      <!-- Logo Section -->
      <Text
        tag="a"
        href="#_"
        variant="textBase"
        class="hover:text-accent-500 font-medium flex items-center gap-2 text-base-900"
      >
        <img
          class="h-7 2xl:h-12"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        /> Oxbow UI
      </Text>
      <IconButton
        class="md:hidden"
        @click="open = !open"
        variant="alternative"
        size="sm"
      >
        <Burger size="xs" slot="icon" />
      </IconButton>
    </div>
    <!-- Navigation Menu -->
    <nav
      :class="{ 'flex': open, 'hidden': !open }"
      class="flex-col items-center flex-grow hidden gap-3 p-4 px-5 md:px-0 md:pb-0 md:flex md:justify-start md:flex-row lg:p-0"
    >
      <Button class="md:ml-auto" variant="accent" size="sm">Button</Button>
    </nav>
  </div>
</div>
<div class="w-full mx-auto bg-base-50">
  <div
    x-data="{ open: false }"
    class="flex flex-col w-full mx-auto md:items-center md:justify-between md:flex-row px-8 py-4 max-w-screen-xl relative"
  >
    <div class="flex flex-row items-center justify-between text-black">
      <a
        class="text-xl font-bold hover:text-accent-500 flex items-center gap-2 text-base-900"
        href="#_"
      >
        <img
          class="h-8"
          src="/images/oxbow/blueLineLogo.png"
          alt="Oxbow UI Logo"
        />
        Oxbow UI
      </a>
      <button class="md:hidden" @click="open = !open">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    <nav
      :class="{'flex': open, 'hidden': !open}"
      class="flex-col items-center hidden md:flex md:flex-row md:w-auto w-full mt-4 md:mt-0"
    >
      <a
        class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-accent-500 focus:outline-none focus:shadow-outline"
        href="#_">Features</a
      >
      <a
        class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-accent-500 focus:outline-none focus:shadow-outline"
        href="#_">About</a
      >
      <a
        class="px-4 py-2 mt-2 text-sm font-semibold text-white bg-accent-600 rounded-lg md:mt-0 md:ml-4 hover:bg-accent-700"
        href="#_">Button</a
      >
    </nav>
  </div>
</div>
