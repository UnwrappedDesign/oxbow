---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];

import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Logo from "@/components/assets/Logo.astro";
---

<!-- copy:start -->
<a href="#content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 bg-zinc-900 text-white px-3 py-1 rounded-md">Skip to content</a>
<header class="w-full border-b border-zinc-200 dark:border-zinc-800 bg-white/80 dark:bg-zinc-900/80 backdrop-blur supports-[backdrop-filter]:bg-white/60 supports-[backdrop-filter]:dark:bg-zinc-900/60">
  <div x-data="{ open:false }" class="mx-auto max-w-screen-xl px-6 md:px-10 lg:px-16">
    <div class="flex h-14 items-center justify-between gap-3">
      <a href="#_" class="inline-flex items-center gap-2">
        <Logo class="h-7 text-black dark:text-white" />
        <span class="sr-only">Home</span>
      </a>
      <IconButton class="md:hidden" @click="open=!open" :aria-expanded="open" aria-controls="nav-01m" variant="alternative" size="xs">
        <Burger size="xs" slot="icon" />
      </IconButton>
      <!-- Desktop navigation (always hidden on mobile) -->
      <nav id="nav-01" aria-label="Primary" class="hidden md:flex items-center gap-4">
        <Text tag="a" href="#_" variant="textBase" class="text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600">Features</Text>
        <Text tag="a" href="#_" variant="textBase" class="text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600">Pricing</Text>
        <Text tag="a" href="#_" variant="textBase" class="text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600">Docs</Text>
        <span aria-hidden class="mx-1 hidden h-4 w-px bg-zinc-200 dark:bg-zinc-700 md:block" />
        <Text tag="a" href="#_" variant="textBase" class="text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600">Sign in</Text>
        <Button variant="accent" size="xs">Get started</Button>
      </nav>
    </div>
    <!-- Mobile menu -->
    <nav id="nav-01m" x-cloak x-show="open" aria-label="Mobile" class="md:hidden grid grid-cols-1 gap-2 pb-3">
      <a href="#_" class="block rounded-md px-3 py-2 text-sm font-medium text-zinc-700 hover:bg-zinc-100 dark:text-zinc-200 dark:hover:bg-zinc-800">Features</a>
      <a href="#_" class="block rounded-md px-3 py-2 text-sm font-medium text-zinc-700 hover:bg-zinc-100 dark:text-zinc-200 dark:hover:bg-zinc-800">Pricing</a>
      <a href="#_" class="block rounded-md px-3 py-2 text-sm font-medium text-zinc-700 hover:bg-zinc-100 dark:text-zinc-200 dark:hover:bg-zinc-800">Docs</a>
      <div class="mt-1 flex items-center gap-2">
        <a href="#_" class="flex-1 rounded-md px-3 py-2 text-sm font-medium text-zinc-700 hover:bg-zinc-100 dark:text-zinc-200 dark:hover:bg-zinc-800">Sign in</a>
        <Button variant="accent" size="xs">Get started</Button>
      </div>
    </nav>
  </div>
  <div id="content" class="sr-only" />
</header>
<!-- copy:end -->
