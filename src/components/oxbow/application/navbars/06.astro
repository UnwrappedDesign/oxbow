---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Logo from "@/components/assets/Logo.astro";
---
<!-- copy:start -->
<header class="w-full border-b border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900">
  <div x-data="{ open:false, user:false, dark: document.documentElement.classList.contains('dark') }" class="mx-auto max-w-screen-xl px-6 md:px-10 lg:px-16">
    <div class="flex h-16 items-center justify-between gap-3">
      <a href="#_" class="inline-flex items-center gap-2"><Logo class="h-7 text-black dark:text-white" /><span class="sr-only">Home</span></a>
      <nav aria-label="Primary" class="hidden md:flex items-center gap-4">
        <a href="#_" class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300">Dashboard</a>
        <a href="#_" class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300">Projects</a>
        <a href="#_" class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300">Teams</a>
      </nav>
      <div class="hidden md:flex items-center gap-2">
        <button @click="dark=!dark; document.documentElement.classList.toggle('dark', dark)" class="h-8 rounded-md border border-zinc-300 dark:border-zinc-700 px-2 text-xs text-zinc-700 dark:text-zinc-200">Toggle theme</button>
        <div x-data="{open:false}" class="relative">
          <button @click="open=!open" @keydown.escape.window="open=false" :aria-expanded="open" class="h-8 w-8 rounded-full bg-zinc-200 dark:bg-zinc-700"></button>
          <div x-show="open" x-transition @click.outside="open=false" class="absolute right-0 top-full z-30 mt-2 w-40 rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900 shadow-subtle p-2 text-sm">
            <a href="#_" class="block rounded-md px-3 py-2 hover:bg-zinc-100 dark:hover:bg-zinc-800">Profile</a>
            <a href="#_" class="block rounded-md px-3 py-2 hover:bg-zinc-100 dark:hover:bg-zinc-800">Settings</a>
            <a href="#_" class="block rounded-md px-3 py-2 hover:bg-zinc-100 dark:hover:bg-zinc-800">Sign out</a>
          </div>
        </div>
      </div>
      <IconButton class="md:hidden" @click="open=!open" :aria-expanded="open" aria-controls="nav-06" variant="alternative" size="xs">
        <Burger size="xs" slot="icon" />
      </IconButton>
    </div>
    <div id="nav-06" :class="{ 'grid': open, 'hidden': !open }" class="hidden grid-cols-1 gap-2 pb-4 md:hidden">
      <a href="#_" class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800">Dashboard</a>
      <a href="#_" class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800">Projects</a>
      <a href="#_" class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800">Teams</a>
      <div class="flex items-center gap-2">
        <button @click="dark=!dark; document.documentElement.classList.toggle('dark', dark)" class="flex-1 rounded-md border border-zinc-300 dark:border-zinc-700 px-3 py-2 text-sm">Toggle theme</button>
        <Button size="xs" variant="accent">Sign out</Button>
      </div>
    </div>
  </div>
</header>
<!-- copy:end -->
