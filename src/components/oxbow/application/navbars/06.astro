---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Logo from "@/components/assets/Logo.astro";
import Text from "@/components/fundations/typography/Text.astro";
import FlyoutLinkBox from "@/components/fundations/wrappers/FlyoutLinkBox.astro";
import Refresh from "@/components/fundations/icons/Refresh.astro";
import User from "@/components/fundations/icons/User.astro";
---
<div class="bg-white dark:bg-zinc-900 pb-100">
  <!-- copy:start -->
  <header
    class="w-full border-b border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900"
  >
    <div
      x-data="{ open:false, user:false, dark: document.documentElement.classList.contains('dark') }"
      class="mx-auto max-w-screen-xl px-6 md:px-10 lg:px-16"
    >
      <div class="flex h-16 items-center justify-between gap-3">
        <a href="#_" class="inline-flex items-center gap-2"
          ><Logo class="h-7 text-black dark:text-white" /><span class="sr-only"
            >Home</span
          ></a
        >
        <nav aria-label="Primary" class="hidden md:flex items-center gap-4">
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
            >Dashboard</Text
          >
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
            >Projects</Text
          >
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
            >Teams</Text
          >
        </nav>
        <div class="hidden md:flex items-center gap-2">
          <Button
            variant="muted"
            size="xs"
            @click="dark=!dark; document.documentElement.classList.toggle('dark', dark)"
            >Toggle theme</Button
          >
          <div x-data="{open:false}" class="relative">
            <IconButton
              variant="muted"
              size="xs"
              @click="open=!open"
              @keydown.escape.window="open=false"
              :aria-expanded="open"
            >
              <User size="sm" slot="icon" />
            </IconButton>
            <div
              x-show="open"
              x-transition
              @click.outside="open=false"
              class="absolute right-0 top-full z-30 mt-2 w-70 p-4 bg-white dark:bg-zinc-800 shadow-lg rounded-xl outline outline-zinc-900/5 dark:outline-white/10 flex flex-col gap-4"
            >
              <FlyoutLinkBox
                href="#_"
                icon={Refresh}
                title="Profile"
                description="Update your profile"
              />
              <FlyoutLinkBox
                href="#_"
                icon={Refresh}
                title="Settings"
                description="Update your settings"
              />
              <FlyoutLinkBox
                href="#_"
                icon={Refresh}
                title="Sign out"
                description="Sign out from your accoiunt"
              />
            </div>
          </div>
        </div>
        <IconButton
          class="md:hidden"
          @click="open=!open"
          :aria-expanded="open"
          aria-controls="nav-06"
          variant="muted"
          size="xs"
        >
          <Burger size="xs" slot="icon" />
        </IconButton>
      </div>
      <div
        id="nav-06"
        :class="{ 'grid': open, 'hidden': !open }"
        class="hidden grid-cols-1 gap-2 pb-4 md:hidden"
      >
        <Button variant="muted" size="xs">Dashboard</Button>
        <Button variant="muted" size="xs">Projects</Button>
        <Button variant="muted" size="xs">Teams</Button>
        <Button
          variant="muted"
          size="xs"
          @click="dark=!dark; document.documentElement.classList.toggle('dark', dark)"
          >Toggle theme</Button
        >
        <Button size="xs" variant="default">Sign out</Button>
      </div>
    </div>
  </header>
  <!-- copy:end -->
</div>
