---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];
import Logo from "@/components/assets/Logo.astro";

import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<!-- copy:start -->
<header
  class="w-full mx-auto bg-zinc-50 dark:bg-zinc-900 border-b border-zinc-200 dark:border-zinc-800"
>
  <div
    x-data="{ open:false }"
    class="max-w-screen-xl mx-auto px-6 md:px-10 lg:px-16 pt-2"
  >
    <div class="flex items-center justify-between">
      <Logo class="h-7 text-black dark:text-white" />
      <nav aria-label="Primary" class="hidden md:flex items-center gap-4">
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Home</Text
        >
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Features</Text
        >
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Pricing</Text
        >
        <Button variant="accent" size="xs">Get Started</Button>
      </nav>
      <IconButton
        class="md:hidden"
        @click="open=!open"
        :aria-expanded="open"
        aria-controls="nav-5"
        variant="alternative"
        size="xs"><Burger size="xs" slot="icon" /></IconButton
      >
    </div>

    <!-- Secondary section nav (horizontal scroll only) -->
    <nav
      aria-label="Section"
      class="mt-2 w-full overflow-x-auto overflow-y-hidden"
    >
      <div
        class="flex items-center gap-6 text-sm px-1 whitespace-nowrap scrollbar-hide text-zinc-600 dark:text-zinc-300"
      >
        <a
          href="#_"
          class="relative py-2 text-blue-600 dark:text-blue-400 font-medium after:absolute after:left-0 after:right-0 after:-bottom-px after:h-[2px] after:bg-current"
          >Overview</a
        >
        <a href="#_" class="py-2 hover:text-blue-600">Integrations</a>
        <a href="#_" class="py-2 hover:text-blue-600">Docs</a>
        <a href="#_" class="py-2 hover:text-blue-600">Changelog</a>
      </div>
    </nav>

    <!-- Mobile menu -->
    <nav
      id="nav-5"
      :class="{ 'block': open, 'hidden': !open }"
      class="md:hidden hidden mt-2 space-y-2"
      aria-label="Mobile"
    >
      <a
        href="#_"
        class="block px-2 py-1 rounded-md text-zinc-600 dark:text-zinc-300 hover:bg-sand-100 dark:hover:bg-zinc-800"
        >Home</a
      >
      <a
        href="#_"
        class="block px-2 py-1 rounded-md text-zinc-600 dark:text-zinc-300 hover:bg-sand-100 dark:hover:bg-zinc-800"
        >Features</a
      >
      <a
        href="#_"
        class="block px-2 py-1 rounded-md text-zinc-600 dark:text-zinc-300 hover:bg-sand-100 dark:hover:bg-zinc-800"
        >Pricing</a
      >
    </nav>
  </div>
</header>
<!-- copy:end -->
