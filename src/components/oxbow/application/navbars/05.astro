---
import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Text from "@/components/fundations/typography/Text.astro";

export const excludeFromObfuscation = ["flex", "hidden"];

const navLinks = [
  { label: "Overview", href: "#_" },
  { label: "Integrations", href: "#_" },
  { label: "Activity", href: "#_" },
  { label: "Domains", href: "#_" },
  { label: "Usage", href: "#_" },
  { label: "Settings", href: "#_" },
  { label: "Feedback", href: "#_" },
  { label: "Changelog", href: "#_" },
  { label: "Docs", href: "#_" },
];
---
<!-- copy:start -->
<header class="w-full mx-auto bg-zinc-50">
  <div
    x-data="{ open: false }"
    class="relative flex flex-col w-full px-8 py-2 mx-auto md:px-12 md:items-center md:justify-between md:flex-row lg:px-24 max-w-screen-xl"
  >
    <!-- Brand + mobile toggle -->
    <div class="flex flex-row items-center justify-between text-black">
      <Text
        tag="a"
        href="#_"
        variant="textBase"
        class="flex items-center font-medium hover:text-blue-500 gap-2 text-zinc-900"
      >
        <img
          class="h-7 2xl:h-12"
          src="/images/oxbow/blueLineLogo.png"
          alt="Oxbow UI"
        />
        Oxbow UI
      </Text>

      <IconButton
        class="md:hidden"
        @click="open = !open"
        :aria-expanded="open"
        aria-controls="site-nav"
        aria-label="Toggle navigation"
        variant="alternative"
        size="sm"
      >
        <Burger size="xs" slot="icon" />
      </IconButton>
    </div>

    <!-- Primary navigation -->
    <nav
      id="site-nav"
      :class="{ 'flex': open, 'hidden': !open }"
      class="flex-col items-center flex-grow hidden p-4 px-5 gap-3 md:px-0 md:pb-0 md:flex md:justify-start md:flex-row lg:p-0"
    >
      <Text
        href="#_"
        tag="a"
        variant="textBase"
        class="font-medium hover:text-blue-500 text-zinc-500 md:ml-auto"
      >
        Features
      </Text>
      <Text
        href="#_"
        tag="a"
        variant="textBase"
        class="font-medium hover:text-blue-500 text-zinc-500 md:mr-auto"
      >
        About
      </Text>
      <Text
        href="#_"
        tag="a"
        variant="textBase"
        class="font-medium hover:text-blue-500 text-zinc-500"
      >
        Sign in
      </Text>
      <Button variant="accent" size="sm">Get Started</Button>
    </nav>
  </div>

  <!-- Secondary (section) navigation -->
  <nav
    aria-label="Secondary"
    class="w-full border-t border-zinc-200 bg-white"
  >
    <div
      class="flex items-center justify-start w-full px-8 py-3 overflow-x-auto text-xs text-zinc-500 gap-4 whitespace-nowrap scroll-hidden md:px-6 max-w-screen-xl mx-auto"
    >
      {
        navLinks.map((link, i) => (
          <Text
            href={link.href}
            tag="a"
            variant="textBase"
            class="font-medium hover:text-blue-500 text-zinc-500"
            aria-current={i === 0 ? "page" : undefined}
          >
            {link.label}
          </Text>
        ))
      }
    </div>
  </nav>
</header>
<!-- copy:end -->
