---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Logo from "@/components/assets/Logo.astro";
---

<!-- copy:start -->
<header
  class="w-full bg-white border-b dark:bg-zinc-900 border-zinc-200 dark:border-zinc-800"
>
  <!-- Utility bar -->
  <div
    class="hidden border-b md:block border-zinc-200 dark:border-zinc-800 bg-sand-50/60 dark:bg-zinc-800/60"
  >
    <div
      class="flex items-center justify-between px-6 mx-auto text-xs max-w-screen-xl md:px-10 lg:px-16 h-9 text-zinc-600 dark:text-zinc-300"
    >
      <div class="flex items-center gap-2">
        <span
          >Contact:
          <Text
            tag="a"
            href="#_"
            variant="textXS"
            class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
            >hello@acme.com</Text
          ></span
        >
        <span aria-hidden class="w-px h-3 bg-zinc-300 dark:bg-zinc-700"></span>
        <Text
          tag="a"
          href="#_"
          variant="textXs"
          class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
          >Support</Text
        >
      </div>
      <div class="flex items-center gap-3">
        <Text
          tag="a"
          href="#_"
          variant="textXs"
          class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
          >Status</Text
        >
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
          >Docs</Text
        >
      </div>
    </div>
  </div>
  <!-- Main bar -->
  <div
    x-data="{ open:false }"
    class="px-6 mx-auto max-w-screen-xl md:px-10 lg:px-16"
  >
    <div class="flex items-center justify-between h-14 gap-3">
      <a href="#_" class="inline-flex items-center gap-2"
        ><Logo class="text-black h-7 dark:text-white" /><span class="sr-only"
          >Home</span
        ></a
      >
      <nav
        id="nav-05"
        aria-label="Primary"
        class="items-center hidden ml-auto md:flex gap-4"
      >
        <Text
          tag="a"
          href="#_"
          variant="textSM"
          class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
          >Overview</Text
        >
        <Text
          tag="a"
          href="#_"
          variant="textSM"
          class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
          >Products</Text
        >
        <Text
          tag="a"
          href="#_"
          variant="textSM"
          class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
          >Pricing</Text
        >
      </nav>
      <div class="items-center hidden md:flex gap-4">
        <Text
          tag="a"
          href="#_"
          variant="textSM"
          class="font-medium text-zinc-600 dark:text-zinc-300 dark:hover:text-white hover:text-zinc-900"
          >Sign in</Text
        >
        <Button variant="muted" size="xs">Create account</Button>
        <Button variant="default" size="xs">Create account</Button>
      </div>
      <IconButton
        class="md:hidden"
        @click="open=!open"
        :aria-expanded="open"
        aria-controls="nav-05m"
        variant="muted"
        size="xs"
      >
        <Burger size="xs" slot="icon" />
      </IconButton>
    </div>
    <div
      id="nav-05m"
      :class="{ 'grid': open, 'hidden': !open }"
      class="hidden pb-4 grid-cols-1 gap-2 md:hidden"
    >
      <Button variant="muted" size="xs">Overview</Button>
      <Button variant="muted" size="xs">Products</Button>
      <Button variant="muted" size="xs">Pricing</Button>
      <Button variant="muted" size="xs">Sign in</Button>
      <Button variant="default" size="xs">Create</Button>
    </div>
  </div>
</header>
<!-- copy:end -->
