---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"];
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Logo from "@/components/assets/Logo.astro";
---
<!-- copy:start -->
<header class="w-full border-b border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900">
  <div x-data="{ open:false }" class="mx-auto max-w-screen-xl px-6 md:px-10 lg:px-16">
    <div class="flex items-center justify-between h-16 md:grid md:grid-cols-3">
      <div class="hidden md:flex items-center gap-4">
        <a href="#_" class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300">Products</a>
        <a href="#_" class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300">Solutions</a>
      </div>
      <div class="flex items-center justify-center">
        <a href="#_" class="inline-flex items-center gap-2"><Logo class="h-7 text-black dark:text-white" /><span class="sr-only">Home</span></a>
      </div>
      <div class="flex items-center justify-end gap-3">
        <div class="hidden md:flex items-center gap-3">
          <a href="#_" class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300">Pricing</a>
          <a href="#_" class="text-sm font-medium text-zinc-600 hover:text-blue-600 dark:text-zinc-300">Docs</a>
          <Button variant="accent" size="xs">Get started</Button>
        </div>
        <IconButton class="md:hidden" @click="open=!open" :aria-expanded="open" aria-controls="nav-04m" variant="alternative" size="xs">
          <Burger size="xs" slot="icon" />
        </IconButton>
      </div>
    </div>
    <div id="nav-04m" x-cloak x-show="open" class="md:hidden grid grid-cols-1 gap-2 pb-4">
      <a href="#_" class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800">Products</a>
      <a href="#_" class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800">Solutions</a>
      <a href="#_" class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800">Pricing</a>
      <a href="#_" class="rounded-md px-3 py-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800">Docs</a>
      <Button variant="accent" size="xs">Get started</Button>
    </div>
  </div>
</header>
<!-- copy:end -->
