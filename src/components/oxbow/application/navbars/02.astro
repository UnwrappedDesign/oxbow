---
export const freeComponent = true;
export const excludeFromObfuscation = ["flex", "hidden"]; // allow responsive classes when obfuscating

import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Logo from "@/components/assets/Logo.astro";
---

<!-- copy:start -->
<a
  href="#content"
  class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 bg-zinc-900 text-white px-3 py-1 rounded-md"
  >Skip to content</a
>
<header
  role="banner"
  class="w-full mx-auto bg-zinc-50 dark:bg-zinc-900 border-b border-zinc-200 dark:border-zinc-800"
>
  <div
    x-data="{ open: false }"
    class="relative flex flex-col w-full px-6 py-2 mx-auto md:px-10 lg:px-16 max-w-screen-xl"
  >
    <div class="flex items-center justify-between">
      <!-- Brand -->

      <Logo class="h-7 text-black dark:text-white" />

      <!-- Mobile trigger -->
      <IconButton
        class="md:hidden"
        @click="open = !open"
        :aria-expanded="open"
        aria-controls="primary-nav"
        variant="alternative"
        size="xs"
      >
        <Burger size="xs" slot="icon" />
      </IconButton>

      <!-- Desktop links -->
      <nav
        id="primary-nav"
        aria-label="Primary"
        :class="{ 'flex': open, 'hidden': !open }"
        class="flex-col items-center hidden gap-3 md:flex md:flex-row"
      >
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="navbar-link text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Features</Text
        >
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="navbar-link text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >Pricing</Text
        >
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="navbar-link text-sm font-medium text-zinc-600 dark:text-zinc-300 hover:text-blue-600"
          >About</Text
        >
        <Button class="md:ml-4" variant="accent" size="xs">Get Started</Button>
      </nav>
    </div>
  </div>
</header>
<!-- copy:end -->

<style>
  :global(.navbar-link:focus-visible) {
    outline: none;
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.6);
    border-radius: 0.25rem;
  }
</style>
