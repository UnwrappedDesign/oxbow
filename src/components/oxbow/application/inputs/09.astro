---
export const description = "Input with right select";
import Text from "@/components/fundations/typography/Text.astro";
---

<div
  class="flex flex-wrap max-w-md items-end justify-center gap-4 py-12 mx-auto"
>
  <div class="space-y-1">
    <Text
      for="input-end-inline"
      tag="label"
      variant="textSM"
      class="text-base-500 font-medium"
    >
      Domain
    </Text>
    <div class="flex">
      <input
        type="text"
        id="input-end-inline"
        name="input-end-inline"
        placeholder="example"
        class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-l-lg appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
      />
      <span
        class="inline-flex items-center px-3 text-sm text-base-500 bg-base-100 border border-l-0 h-10 border-base-200 rounded-r-lg"
      >
        .com
      </span>
    </div>
  </div>
</div>
