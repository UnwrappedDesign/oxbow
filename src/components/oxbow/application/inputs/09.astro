---
export const description = "Search input";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---

<div class="justify-center h-full bg-white gap-2 p-15 dark:bg-zinc-900">
  <div class="w-full max-w-sm mx-auto">
    <!-- copy:start -->
    <TextInput
      id="search-right"
      name="search-right"
      label="Search (No Icon)"
      type="search"
      showLeftIcon={false}
      variant="default"
      size="base"
      placeholder="Search with no icon"
    />
    <!-- copy:end -->
  </div>
</div>
