---
export const description = "Read only input";
import Text from "@/components/fundations/typography/Text.astro";
---

<div
  class="flex flex-wrap max-w-md items-end justify-center gap-4 py-12 mx-auto"
>
  <div class="space-y-1">
    <Text
      for="readonly-input"
      tag="label"
      variant="textSM"
      class="text-base-500 font-medium"
    >
      Read-only Input
    </Text>
    <input
      type="text"
      id="readonly-input"
      name="readonly-input"
      value="Read-only value"
      class="block w-full h-10 px-4 py-2 text-sm text-accent-700 bg-base-50 border border-transparent rounded-lg appearance-none ring-1 ring-base-200 focus:outline-none sm:text-sm"
      readonly
    />
  </div>
</div>
