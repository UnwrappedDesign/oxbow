---
export const description = "Read only input";
import Text from "@/components/fundations/typography/Text.astro";
---

<div
  class="flex flex-wrap items-end justify-center max-w-md py-12 mx-auto gap-4"
>
  <div class="space-y-1">
    <Text
      for="readonly-input"
      tag="label"
      variant="textSM"
      class="font-medium text-base-500"
    >
      Read-only Input
    </Text>
    <input
      type="text"
      id="readonly-input"
      name="readonly-input"
      value="Read-only value"
      class="block w-full h-10 px-4 py-2 text-sm border border-transparent rounded-lg appearance-none text-accent-700 bg-base-50 ring-1 ring-base-200 focus:outline-none sm:text-sm"
      readonly
    />
  </div>
</div>
