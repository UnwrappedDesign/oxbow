---
export const description = "Email input";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---
<section class="gap-2 justify-center p-15 bg-white dark:bg-black h-full">
  <div class="w-full max-w-sm mx-auto">
    <!-- copy:start -->
    <TextInput
      id="email"
      name="email"
      label="Email address input hint"
      type="email"
      hint="Optional"
      variant="default"
      size="base"
      placeholder="you@example.com"
      required
      showLeftIcon={false}
    />
    <!-- copy:end -->
  </div>
</div>
