---
export const description = "TLD input field with select to right";
import Text from "@/components/fundations/typography/Text.astro";
---

<div
  class="flex flex-wrap max-w-md items-end justify-center gap-4 py-12 mx-auto"
>
  <div class="space-y-1">
    <Text
      for="input-end-select"
      tag="label"
      variant="textSM"
      class="text-base-500 font-medium"
    >
      Domain
    </Text>
    <div class="flex">
      <input
        type="text"
        id="input-end-select"
        name="input-end-select"
        placeholder="example"
        class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-l-lg appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
      />
      <select
        class="h-10 px-3 text-sm text-base-500 bg-base-100 border border-l-0 border-base-200 rounded-r-lg focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2 pr-8"
      >
        <option>.com</option>
        <option>.org</option>
        <option>.net</option>
      </select>
    </div>
  </div>
</div>
