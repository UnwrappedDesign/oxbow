---
export const description = "TLD input field with select to right";
import Text from "@/components/fundations/typography/Text.astro";
---

<div
  class="flex flex-wrap items-end justify-center max-w-md py-12 mx-auto gap-4"
>
  <div class="space-y-1">
    <Text
      for="input-end-select"
      tag="label"
      variant="textSM"
      class="font-medium text-base-500"
    >
      Domain
    </Text>
    <div class="flex">
      <input
        type="text"
        id="input-end-select"
        name="input-end-select"
        placeholder="example"
        class="block w-full h-10 px-4 py-2 text-sm bg-white border border-transparent rounded-l-lg appearance-none text-accent-700 duration-300 ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
      />
      <select
        class="h-10 px-3 pr-8 text-sm border border-l-0 rounded-r-lg text-base-500 bg-base-100 border-base-200 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2"
      >
        <option>.com</option>
        <option>.org</option>
        <option>.net</option>
      </select>
    </div>
  </div>
</div>
