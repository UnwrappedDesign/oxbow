---
export const description = "Input with range";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="max-w-xs mx-auto py-60">
  <div class="space-y-1">
    <Text
      for="range-from"
      tag="label"
      variant="textSM"
      class="font-medium text-base-500"
    >
      Range
    </Text>
    <div class="flex items-center">
      <input
        type="number"
        id="range-from"
        name="range-from"
        placeholder="From"
        class="block w-full h-10 px-4 py-2 text-sm bg-white border border-transparent rounded-lg rounded-r-none appearance-none text-accent-700 duration-300 ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
      />

      <input
        type="number"
        id="range-to"
        name="range-to"
        placeholder="To"
        class="block w-full h-10 px-4 py-2 text-sm bg-white border border-l-0 border-transparent rounded-lg rounded-l-none appearance-none text-accent-700 duration-300 ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
      />
    </div>
  </div>
</div>
