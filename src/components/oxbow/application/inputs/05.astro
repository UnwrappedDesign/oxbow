---
export const description = "Password input";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---

<section class="justify-center h-full bg-white gap-2 p-15 dark:bg-zinc-900">
  <div class="w-full max-w-sm mx-auto">
    <!-- copy:start -->
    <TextInput
      id="password"
      name="password"
      label="Password"
      type="password"
      passwordToggle={true}
      size="base"
      placeholder="••••••••"
      required
    />

    <!-- copy:end -->
  </div>
</section>
