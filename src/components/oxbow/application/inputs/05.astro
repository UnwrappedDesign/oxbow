---
export const description = "Password input";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---

<section class="gap-2 justify-center p-15 bg-white dark:bg-zinc-900 h-full">
  <div class="w-full max-w-sm mx-auto">
    <!-- copy:start -->
    <TextInput
      id="password"
      name="password"
      label="Password"
      type="password"
      passwordToggle={true}
      size="base"
      placeholder="••••••••"
      required
    />

    <!-- copy:end -->
  </div>
</section>
