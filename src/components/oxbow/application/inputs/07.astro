---
export const description = "Search input";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---

<div class="gap-2 justify-center p-15 bg-white dark:bg-zinc-900 h-full">
  <div class="w-full max-w-sm mx-auto">
    <!-- copy:start -->
    <TextInput
      id="search-left"
      name="search-left"
      label="Search (Left Icon)"
      type="search"
      iconPosition="left"
      variant="default"
      size="base"
      placeholder="Search with left icon"
    />
    <!-- copy:end -->
  </div>
</div>
