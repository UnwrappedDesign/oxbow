---
export const description = "Right-Aligned Checkbox";
import Text from "@/components/fundations/typography/Text.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-8 bg-white dark:bg-black h-full"
>
  <!-- copy:start -->
  <div class="flex items-center justify-between w-full gap-2">
    <Text
      for="right-aligned-checkbox"
      tag="label"
      class="block text-sm text-zinc-500 dark:text-zinc-300"
    >
      Right aligned checkbox
    </Text>
    <input
      id="right-aligned-checkbox"
      name="right-aligned-checkbox"
      type="checkbox"
      class="rounded shadow size-4 border-zinc-300 dark:border-zinc-700 text-blue-600 focus:ring-blue-600 dark:bg-zinc-900 dark:checked:bg-blue-600"
    />
  </div>
  <!-- copy:end -->
</section>
