---
export const description = "Weekday Pills Selector";
---

<section
  class="flex flex-wrap items-center justify-center h-full bg-white gap-2 p-14 dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    class="flex flex-col w-full max-w-md gap-3"
    x-data="{ days: ['Monday','Tuesday','Wednesday','Thursday','Friday','Saturday','Sunday'], selected: [] }"
  >
    <div class="flex flex-wrap items-center gap-2">
      <template x-for="d in days" :key="d">
        <div>
          <input
            type="checkbox"
            class="sr-only peer"
            :id="`day-`+d"
            :value="d"
            x-model="selected"
          />
          <label
            :for="`day-`+d"
            :title="d"
            class="inline-flex items-center justify-center w-10 h-10 text-sm bg-white border rounded-full select-none border-zinc-300 text-zinc-600 dark:text-zinc-300 dark:border-zinc-700 dark:bg-zinc-900 transition-all cursor-pointer
  peer-checked:ring-2 peer-checked:ring-blue-600 peer-checked:ring-offset-2 ring-offset-white dark:ring-offset-zinc-900
 peer-focus-visible:ring-2 peer-focus-visible:ring-blue-600 peer-focus-visible:ring-offset-2"
          >
            <span x-text="d[0]"></span>
          </label>
        </div>
      </template>
    </div>
  </div>
  <!-- copy:end -->
</section>
