---
export const description = "Weekday Pills Selector";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-14 bg-white dark:bg-zinc-900 h-full"
>
  <!-- copy:start -->
  <div
    class="flex flex-col gap-3 w-full max-w-md"
    x-data="{ days: ['Monday','Tuesday','Wednesday','Thursday','Friday','Saturday','Sunday'], selected: [] }"
  >
    <div class="flex items-center gap-2 flex-wrap">
      <template x-for="d in days" :key="d">
        <div>
          <input
            type="checkbox"
            class="sr-only peer"
            :id="`day-`+d"
            :value="d"
            x-model="selected"
          />
          <label
            :for="`day-`+d"
            :title="d"
            class="inline-flex select-none items-center justify-center w-10 h-10 rounded-full border border-zinc-300 text-sm text-zinc-600 dark:text-zinc-300 dark:border-zinc-700 bg-white dark:bg-zinc-900 transition-all cursor-pointer
                   peer-checked:ring-2 peer-checked:ring-indigo-600 peer-checked:ring-offset-2 ring-offset-white dark:ring-offset-zinc-900
                   peer-focus-visible:ring-2 peer-focus-visible:ring-indigo-600 peer-focus-visible:ring-offset-2"
          >
            <span x-text="d[0]"></span>
          </label>
        </div>
      </template>
    </div>
  </div>
  <!-- copy:end -->
</section>
