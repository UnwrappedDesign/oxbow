---
export const description = "Checkbox with Label and Description";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex max-w-md mx-auto items-center p-12">
  <div class="flex flex-col gap-1">
    <div class="flex items-start gap-3">
      <input
        id="checkbox-with-description"
        name="checkbox-with-description"
        type="checkbox"
        class="size-4 rounded border-base-300 text-accent-600 focus:ring-accent-600 shadow"
      />
      <div>
        <Text
          for="checkbox-with-description"
          tag="label"
          class="block text-sm font-medium text-base-500"
        >
          Subscribe to newsletter <span class="text-base-400">(Optional)</span>
        </Text>
        <Text tag="p" variant="textSM" class=" text-base-400">
          Stay updated with our latest news, articles, and offers by subscribing
          to our newsletter.
        </Text>
      </div>
    </div>
  </div>
</div>
