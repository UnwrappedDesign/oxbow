---
export const description = "Checkbox with Confirm Button";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<div class="flex items-center max-w-md p-12 py-48 mx-auto">
  <!-- copy:start -->
  <div
    class="flex flex-col w-full gap-2"
    x-data="{ checked: false, confirmed: false }"
  >
    <div class="flex items-center justify-between w-full gap-3">
      <div class="flex items-center gap-3">
        <input
          id="confirm-checkbox"
          name="confirm-checkbox"
          type="checkbox"
          x-model="checked"
          class="rounded shadow size-4 border-zinc-300 text-blue-600 focus:ring-blue-600"
        />
        <Text
          for="confirm-checkbox"
          tag="label"
          class="block text-sm text-zinc-500"
        >
          Confirm this
        </Text>
      </div>
      <div>
        <Button
          type="button"
          size="xs"
          variant="accent"
          :disabled="!checked"
          @click="confirmed = true"
          class="w-auto"
        >
          Confirm
        </Button>
      </div>
    </div>

    <span x-show="confirmed" class="text-sm text-blue-500">Confirmed!</span>
  </div>
  <!-- copy:end -->
</div>
