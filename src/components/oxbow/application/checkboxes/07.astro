---
export const description = "Checkbox with Indication Badge";
import Text from "@/components/fundations/typography/Text.astro";
import Badge from "@/components/fundations/badges/Badge.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-8 bg-white dark:bg-black h-full"
>
  <!-- copy:start -->
  <div class="flex flex-col gap-2" x-data="{ checked: false }">
    <div class="flex items-center w-full gap-3">
      <div class="flex items-center h-full gap-3">
        <input
          id="badge-checkbox"
          name="badge-checkbox"
          type="checkbox"
          x-model="checked"
          class="rounded shadow size-4 border-zinc-300 dark:border-zinc-700 text-blue-600 focus:ring-blue-600 dark:bg-zinc-900 dark:checked:bg-blue-600"
        />
        <Text
          for="badge-checkbox"
          tag="label"
          class="block text-sm text-zinc-500 dark:text-zinc-300"
        >
          With badge
        </Text>
      </div>
      <Badge x-show="checked" variant="muted" size="xs"> Checked </Badge>
    </div>
  </div>
  <!-- copy:end -->
</section>
