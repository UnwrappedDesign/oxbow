---
export const description = "Dependent Checkbox (Prerequisite)";
import Text from "@/components/fundations/typography/Text.astro";
---

<section
  class="flex flex-wrap items-center justify-center h-full p-24 bg-white gap-2 dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    class="flex flex-col w-full max-w-md gap-2"
    x-data="{ agreed: false, marketing: false }"
  >
    <div class="flex items-start gap-3">
      <input
        id="dep-agree"
        name="dep-agree"
        type="checkbox"
        x-model="agreed"
        class="text-blue-600 rounded shadow size-4 border-zinc-300 dark:border-zinc-700 focus:ring-blue-600 dark:bg-zinc-900 dark:checked:bg-blue-600"
      />
      <Text
        for="dep-agree"
        tag="label"
        class="block text-sm text-zinc-600 dark:text-zinc-300"
      >
        I agree to data processing
      </Text>
    </div>
    <div class="flex items-start pl-6 gap-3">
      <input
        id="dep-marketing"
        name="dep-marketing"
        type="checkbox"
        x-model="marketing"
        :disabled="!agreed"
        class="text-blue-600 rounded shadow size-4 border-zinc-300 dark:border-zinc-700 focus:ring-blue-600 disabled:opacity-50 disabled:cursor-not-allowed dark:bg-zinc-900 dark:checked:bg-blue-600"
      />
      <div>
        <Text
          for="dep-marketing"
          tag="label"
          class="block text-sm text-zinc-600 dark:text-zinc-300"
        >
          Receive marketing emails <span
            class="text-zinc-400 dark:text-zinc-500">(Optional)</span
          >
        </Text>
        <p class="text-xs text-zinc-400 dark:text-zinc-500">
          Requires consent above.
        </p>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</section>
