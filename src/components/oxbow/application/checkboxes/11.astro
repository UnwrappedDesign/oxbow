---
export const description = "Checkbox with Label and Description";
import Text from "@/components/fundations/typography/Text.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-8 bg-white dark:bg-zinc-900 h-full"
>
  <!-- copy:start -->
  <div class="flex flex-col gap-1">
    <div class="flex items-start gap-3">
      <input
        id="checkbox-with-description"
        name="checkbox-with-description"
        type="checkbox"
        class="rounded shadow size-4 border-zinc-300 dark:border-zinc-700 text-blue-600 focus:ring-blue-600 dark:bg-zinc-900 dark:checked:bg-blue-600"
      />
      <div>
        <Text
          for="checkbox-with-description"
          tag="label"
          class="block text-sm font-medium text-zinc-500 dark:text-zinc-300"
        >
          Subscribe to newsletter <span class="text-zinc-400 dark:text-zinc-500"
            >(Optional)</span
          >
        </Text>
        <Text tag="p" variant="textSM" class="text-zinc-400 dark:text-zinc-500">
          Stay updated with our latest news, articles, and offers by subscribing
          to our newsletter.
        </Text>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</section>
