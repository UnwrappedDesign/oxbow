---
export const description = "Checkbox with Label and Description";
import Text from "@/components/fundations/typography/Text.astro";
---

<section
  class="flex flex-wrap items-center justify-center h-full p-24 bg-white gap-2 dark:bg-zinc-900"
  x-data="{ checked: false }"
>
  <!-- copy:start -->
  <div class="flex flex-col gap-1">
    <div class="flex items-start gap-3">
      <div class="relative">
        <input
          id="checkbox-with-description"
          name="checkbox-with-description"
          type="checkbox"
          x-model="checked"
          class="bg-white border-2 rounded appearance-none size-4 border-zinc-300 checked:bg-blue-600 checked:border-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-white"
        />
        <svg
          class="absolute inset-0 w-4 h-4 pointer-events-none transition-opacity"
          :class="{ 'opacity-100 text-white': checked, 'opacity-0': !checked }"
          viewBox="0 0 16 16"
          fill="currentColor"
        >
          <path
            d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 0 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"
          ></path>
        </svg>
      </div>
      <div>
        <Text
          for="checkbox-with-description"
          tag="label"
          class="block text-sm font-medium text-zinc-500 dark:text-zinc-300"
        >
          Subscribe to newsletter <span class="text-zinc-400 dark:text-zinc-500"
            >(Optional)</span
          >
        </Text>
        <Text tag="p" variant="textSM" class="text-zinc-400 dark:text-zinc-500">
          Stay updated with our latest news, articles, and offers by subscribing
          to our newsletter.
        </Text>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</section>
