---
export const description = "Right-Aligned Checkbox";
import Text from "@/components/fundations/typography/Text.astro";
---
<div
  class="flex items-center max-w-sm p-12 py-48 mx-auto "
>
<div class="flex items-center justify-between w-full  gap-2">
  <Text
    for="right-aligned-checkbox"
    tag="label"
    class="block text-sm text-base-500"
  >
    Right aligned checkbox
  </Text>
  <input
    id="right-aligned-checkbox"
    name="right-aligned-checkbox"
    type="checkbox"
    class="rounded shadow size-4 border-base-300 text-accent-600 focus:ring-accent-600"
  />
</div>

</div>
