---
export const description = "Checkbox Group with Max Selection";
import Text from "@/components/fundations/typography/Text.astro";
---

<section
  class="flex flex-wrap items-center justify-center h-full p-24 bg-white gap-2 dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    class="flex flex-col w-full max-w-md gap-2"
    x-data="{
      options: ['UI', 'API', 'Docs', 'Analytics', 'Billing'],
      selected: [],
      limit: 2,
      isDisabled(opt){ return !this.selected.includes(opt) && this.selected.length >= this.limit }
    }"
  >
    <div class="text-xs text-zinc-500 dark:text-zinc-400">Select up to 2</div>
    <template x-for="option in options" :key="option">
      <div class="flex items-center gap-3">
        <input
          type="checkbox"
          :id="`limit-` + option"
          :value="option"
          x-model="selected"
          :disabled="isDisabled(option)"
          class="text-blue-600 rounded shadow size-4 border-zinc-300 dark:border-zinc-700 focus:ring-blue-600 disabled:opacity-50 disabled:cursor-not-allowed dark:bg-zinc-900 dark:checked:bg-blue-600"
        />
        <Text
          :for="`limit-` + option"
          tag="label"
          class="block text-sm text-zinc-600 dark:text-zinc-300"
          x-text="option"
        />
      </div>
    </template>
    <div class="mt-2 text-sm text-zinc-600 dark:text-zinc-300">
      Selected: <span
        class="text-zinc-500 dark:text-zinc-400"
        x-text="selected.join(', ')"></span>
    </div>
  </div>
  <!-- copy:end -->
</section>
