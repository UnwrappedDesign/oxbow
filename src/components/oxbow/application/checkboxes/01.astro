---
export const freeComponent = true;
export const description = "Basic Checkbox with State Tracking";
import Text from "@/components/fundations/typography/Text.astro";
---

<section
  class="flex flex-wrap items-center justify-center h-full p-24 bg-white gap-2 dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div class="flex items-center gap-2" x-data="{ checked: false }">
    <input
      id="basic-checkbox"
      name="basic-checkbox"
      type="checkbox"
      x-model="checked"
      class="text-blue-600 rounded shadow size-4 border-zinc-300 dark:border-zinc-700 focus:ring-blue-600 dark:bg-zinc-900 dark:checked:bg-blue-600"
    />
    <Text
      for="basic-checkbox"
      tag="label"
      class="block text-sm text-zinc-500 dark:text-zinc-300"
    >
      Basic checkbox (<span x-text="checked ? 'Checked' : 'Unchecked'"></span>)
    </Text>
  </div>
  <!-- copy:end -->
</section>
