---
export const freeComponent = true;
export const description = "Basic Checkbox with State Tracking";
import Text from "@/components/fundations/typography/Text.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-24 bg-white dark:bg-zinc-900 h-full"
>
  <!-- copy:start -->
  <div class="flex items-center gap-2" x-data="{ checked: false }">
    <input
      id="basic-checkbox"
      name="basic-checkbox"
      type="checkbox"
      x-model="checked"
      class="rounded shadow size-4 border-zinc-300 dark:border-zinc-700 text-indigo-600 focus:ring-indigo-600 dark:bg-zinc-900 dark:checked:bg-indigo-600"
    />
    <Text
      for="basic-checkbox"
      tag="label"
      class="block text-sm text-zinc-500 dark:text-zinc-300"
    >
      Basic checkbox (<span x-text="checked ? 'Checked' : 'Unchecked'"></span>)
    </Text>
  </div>
  <!-- copy:end -->
</section>
