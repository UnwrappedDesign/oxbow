---
export const description = "Checkbox with Toggle Al";
import Text from "@/components/fundations/typography/Text.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-8 bg-white dark:bg-black h-full"
>
  <!-- copy:start -->
  <div
    class="flex flex-col gap-2"
    x-data="{ options: ['Option 1', 'Option 2', 'Option 3'], selected: [], selectAll: false }"
    x-init="$watch('selectAll', value => selected = value ? [...options] : [])"
  >
    <div class="flex items-center gap-3">
      <input
        id="toggle-all-checkbox"
        name="toggle-all-checkbox"
        type="checkbox"
        x-model="selectAll"
        class="rounded shadow size-4 border-zinc-300 dark:border-zinc-700 text-blue-600 focus:ring-blue-600 dark:bg-zinc-900 dark:checked:bg-blue-600"
      />
      <Text
        for="toggle-all-checkbox"
        tag="label"
        class="block text-sm text-zinc-500 dark:text-zinc-300">Select All</Text
      >
    </div>
    <template x-for="option in options" :key="option">
      <div class="flex items-center gap-3">
        <input
          type="checkbox"
          :id="option"
          :value="option"
          x-model="selected"
          class="rounded shadow size-4 border-zinc-300 dark:border-zinc-700 text-blue-600 focus:ring-blue-600 dark:bg-zinc-900 dark:checked:bg-blue-600"
        />
        <Text
          :for="option"
          tag="label"
          class="block text-sm text-zinc-500 dark:text-zinc-300"
          x-text="option"
        />
      </div>
    </template>
    <div class="mt-2 text-sm text-zinc-500 dark:text-zinc-300">
      Selected: <span x-text="selected.join(', ')"></span>
    </div>
  </div>
  <!-- copy:end -->
</section>
