---
export const description = "Checkbox with Counter";
import Text from "@/components/fundations/typography/Text.astro";
---
<div
  class="flex items-center max-w-md p-12 mx-auto "
>
<div class="flex items-center w-full gap-2" x-data="{ count: 0 }">
    <input
      id="counter-checkbox"
      name="counter-checkbox"
      type="checkbox"
      @change="count += $event.target.checked ? 1 : -1"
      class="rounded shadow size-4 border-base-300 text-accent-600 focus:ring-accent-600"
    />
    <Text
      for="counter-checkbox"
      tag="label"
      class="block text-sm text-base-500"
    >
      Checkbox clicked <span x-text="count"></span> times
    </Text>
  </div>
  

  
</div>
