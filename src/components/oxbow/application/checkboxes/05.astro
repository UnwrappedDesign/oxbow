---
export const description = "Checkbox with Counter";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex items-center max-w-md p-12 mx-auto">
  <!-- copy:start -->
  <div class="flex items-center w-full gap-2" x-data="{ count: 0 }">
    <input
      id="counter-checkbox"
      name="counter-checkbox"
      type="checkbox"
      @change="count += $event.target.checked ? 1 : -1"
      class="rounded shadow size-4 border-zinc-300 text-blue-600 focus:ring-blue-600"
    />
    <Text
      for="counter-checkbox"
      tag="label"
      class="block text-sm text-zinc-500"
    >
      Checkbox clicked <span x-text="count"></span> times
    </Text>
  </div>
  <!-- copy:end -->
</div>
