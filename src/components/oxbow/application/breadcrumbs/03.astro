---
export const description = "Breadcrumb with buttons";
import Button from "@/components/fundations/buttons/Button.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import Home from "@/components/fundations/icons/Home.astro";
---

<div class="flex items-center justify-center p-6.5">
  <!-- copy:start -->
  <nav aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-2">
      <li>
        <Button variant="alternative" gap="xs" size="xs">
          <Home size="base" size="sm" slot="left-icon" />
          Home
          <ChevronRight size="base" size="sm" slot="right-icon" />
        </Button>
      </li>
      <li>
        <Button variant="alternative" gap="xs" size="xs">
          Work
          <ChevronRight size="base" size="sm" slot="right-icon" />
        </Button>
      </li>
      <li>
        <Button variant="default" gap="xs" size="xs"> Details </Button>
      </li>
    </ol>
  </nav>
  <!-- copy:end -->
</div>
