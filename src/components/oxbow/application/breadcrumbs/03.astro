---
import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import Link from "@/components/fundations/typography/Link.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import Lifebuoy from "@/components/fundations/icons/Lifebuoy.astro";
import InfoCircle from "@/components/fundations/icons/InfoCircle.astro";
import ThreeDots from "@/components/fundations/icons/ThreeDots.astro";
import Settings from "@/components/fundations/icons/Settings.astro";
import User from "@/components/fundations/icons/User.astro";
---

<section>
  <div class="items-center px-8 py-32 mx-auto max-w-7xl lg:px-16 md:px-12">
    <div class="justify-center w-full mx-auto">
      <nav
        aria-label="Breadcrumb"
        class="flex-1 pb-5">
        <ol
          role="list"
          class="flex items-center space-x-4 text-sm">
          <li>
            <Link
              tag="a"
              href="#_"
              variant="linkMuted"
              class="flex items-center gap-2">
              <span>Home</span>
              <ChevronRight size="base" />
            </Link>
          </li>
          <li
            class="relative flex items-center"
            @click.away="open = false"
            x-data="{ open: false }">
            <IconButton
              @click="open = !open"
              aria-haspopup="true"
              aria-expanded="false"
              variant="text"
              size="sm">
              <ThreeDots
                size="base"
                slot="icon"
              />
            </IconButton>
            <ChevronRight size="base" />
            <div
              x-show="open"
              @click.away="open = false"
              x-transition:enter="transition ease-out duration-200"
              x-transition:enter-start="opacity-0 translate-y-1"
              x-transition:enter-end="opacity-100 translate-y-0"
              x-transition:leave="transition ease-in duration-150"
              x-transition:leave-start="opacity-100 translate-y-0"
              x-transition:leave-end="opacity-0 translate-y-1"
              class="origin-top-center absolute divide-y overflow-hidden divide-base-200 left-1/2 transform -translate-x-1/2 mt-2 w-56 rounded-xl shadow bg-white ring-1 ring-black/5 focus:outline-none"
              role="menu"
              aria-orientation="vertical"
              aria-labelledby="menu-button">
              <div
                class="p-1.5"
                role="none">
                <Link
                  tag="a"
                  href="#_"
                  variant="dropDownLink"
                  class="flex items-center gap-2">
                  <InfoCircle
                    class="left-icon"
                    size="sm"
                  />
                  FAQ
                </Link>
                <Link
                  tag="a"
                  href="#_"
                  variant="dropDownLink"
                  class="flex items-center gap-2">
                  <Lifebuoy
                    class="left-icon"
                    size="sm"
                  />
                  Support
                </Link>
                <Link
                  tag="a"
                  href="#_"
                  variant="dropDownLink"
                  class="flex items-center gap-2">
                  <Settings
                    class="left-icon"
                    size="sm"
                  />
                  Account
                </Link>
                <Link
                  tag="a"
                  href="#_"
                  variant="dropDownLink"
                  class="flex items-center gap-2">
                  <User
                    class="left-icon"
                    size="sm"
                  />
                  Profile
                </Link>
              </div>
              <div
                class="p-1.5 bg-base-50"
                role="none">
                <Button
                  class="w-full"
                  variant="alternative"
                  gap="xs"
                  size="xs">
                  <span> Sign out</span>
                </Button>
              </div>
            </div>
          </li>
          <li>
            <Link
              tag="a"
              href="#_"
              variant="link"
              class="flex items-center gap-2">
              <span>Help Center Overview</span>
            </Link>
          </li>
        </ol>
      </nav>
    </div>
  </div>
</section>
