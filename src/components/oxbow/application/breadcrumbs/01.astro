---
export const freeComponent = true;
export const description = "Basic  breadcrumbs";
import Text from "@/components/fundations/typography/Text.astro";
import Home from "@/components/fundations/icons/Home.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<div class="flex items-center justify-center p-8">
  <!-- copy:start -->
  <nav aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-2">
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 hover:text-stone-500"
        >
          <Home size="sm" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 hover:text-stone-500"
        >
          Home
          <ChevronRight size="base" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 hover:text-stone-500"
        >
          Work
          <ChevronRight size="base" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 hover:text-stone-500"
        >
          Details
        </Text>
      </li>
    </ol>
  </nav>
  <!-- copy:end -->
</div>
