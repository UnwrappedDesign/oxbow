---
export const freeComponent = true;
export const description = "Basic  breadcrumbs";
import Text from "@/components/fundations/typography/Text.astro";
import Home from "@/components/fundations/icons/Home.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-8 bg-white dark:bg-black h-full"
>
  <!-- copy:start -->
  <nav aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-2">
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-blue-500 dark:hover:text-blue-400"
        >
          <Home size="sm" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-blue-500 dark:hover:text-blue-400"
        >
          Home
          <ChevronRight size="base" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-blue-500 dark:hover:text-blue-400"
        >
          Work
          <ChevronRight size="base" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-blue-500 dark:hover:text-blue-400"
        >
          Details
        </Text>
      </li>
    </ol>
  </nav>
  <!-- copy:end -->
</section>
