---
export const freeComponent = true;
import Text from "@/components/fundations/typography/Text.astro";
import Home from "@/components/fundations/icons/Home.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<section>
  <div
    class="items-center px-8 py-6 mx-auto max-w-7xl lg:px-16 md:px-12 "
  >
    <div class="justify-center w-full mx-auto">
      <nav aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-2">
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center font-medium gap-2 text-base-500 hover:text-accent-500"
            >
              <Home size="base" />
            </Text>
          </li>
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center font-medium gap-2 text-base-500 hover:text-accent-500"
            >
              Home
              <ChevronRight size="base" />
            </Text>
          </li>
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center font-medium gap-2 text-base-500 hover:text-accent-500"
            >
              Work
              <ChevronRight size="base" />
            </Text>
          </li>
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center font-medium gap-2 text-base-500 hover:text-accent-500"
            >
              Details
            </Text>
          </li>
        </ol>
      </nav>
    </div>
  </div>
</section>
