---
export const freeComponent = true;
export const description = "Basic  breadcrumbs";
import Text from "@/components/fundations/typography/Text.astro";
import Home from "@/components/fundations/icons/Home.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-18 bg-white dark:bg-zinc-900 h-full"
>
  <!-- copy:start -->
  <nav aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-2">
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-indigo-600 dark:hover:text-indigo-400"
          aria-label="Home"
        >
          <Home size="sm" aria-hidden="true" />
          <span class="sr-only">Home</span>
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-indigo-600 dark:hover:text-indigo-400"
        >
          Home
          <ChevronRight size="base" aria-hidden="true" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-indigo-600 dark:hover:text-indigo-400"
        >
          Work
          <ChevronRight size="base" aria-hidden="true" />
        </Text>
      </li>
      <li>
        <Text
          tag="span"
          variant="textXS"
          aria-current="page"
          class="flex items-center font-medium gap-2 text-zinc-900 dark:text-white"
        >
          Details
        </Text>
      </li>
    </ol>
  </nav>
  <!-- copy:end -->
</section>
