---
import Text from "@/components/fundations/typography/Text.astro";
import Home from "@/components/fundations/icons/Home.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<section>
  <div
    class="items-center px-8 py-12 mx-auto max-w-7xl lg:px-16 md:px-12 lg:py-24">
    <div class="justify-center w-full mx-auto">
      <nav aria-label="Breadcrumb">
        <ol
          role="list"
          class="flex items-center space-x-2">
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textMD"
              class="flex items-center gap-2 text-base-500 hover:text-accent-500 font-medium">
              <Home size="base" />
            </Text>
          </li>
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textMD"
              class="flex items-center gap-2 text-base-500 hover:text-accent-500 font-medium">
              Home
              <ChevronRight size="base" />
            </Text>
          </li>
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textMD"
              class="flex items-center gap-2 text-base-500 hover:text-accent-500 font-medium">
              Work
              <ChevronRight size="base" />
            </Text>
          </li>
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textMD"
              class="flex items-center gap-2 text-base-500 hover:text-accent-500 font-medium">
              Details
            </Text>
          </li>
        </ol>
      </nav>
    </div>
  </div>
</section>
