---
export const description = "Breadcrumb with outline";
import Text from "@/components/fundations/typography/Text.astro";
import Home from "@/components/fundations/icons/Home.astro";
import Slash from "@/components/fundations/icons/Slash.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-18 bg-white dark:bg-black h-full"
>
  <!-- copy:start -->
  <nav
    aria-label="Breadcrumb"
    class="border inline-flex py-1.5 px-3.5 rounded-lg border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-900"
  >
    <ol role="list" class="flex items-center space-x-2">
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-blue-500 dark:hover:text-blue-400"
        >
          <Home size="sm" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-blue-500 dark:hover:text-blue-400"
        >
          <span>Home</span>
          <Slash size="base" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-blue-500 dark:hover:text-blue-400"
        >
          <span>Work</span>
          <Slash size="base" />
        </Text>
      </li>
      <li>
        <Text
          tag="a"
          href="#_"
          variant="textXS"
          class="flex items-center font-medium gap-2 text-zinc-500 dark:text-zinc-300 hover:text-blue-500 dark:hover:text-blue-400"
        >
          <span>Details</span>
        </Text>
      </li>
    </ol>
  </nav>
  <!-- copy:end -->
</section>
