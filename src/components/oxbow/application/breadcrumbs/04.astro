---
import Text from "@/components/fundations/typography/Text.astro";
import Home from "@/components/fundations/icons/Home.astro";
import Slash from "@/components/fundations/icons/Slash.astro";
---

<section>
  <div
    class="items-center px-8 py-12 mx-auto max-w-7xl lg:px-16 md:px-12 lg:py-24"
  >
    <div class="justify-center w-full mx-auto">
      <nav
        aria-label="Breadcrumb"
        class="border border-base-200 inline-flex py-1.5 px-3.5 rounded-full"
      >
        <ol role="list" class="flex items-center space-x-2">
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center gap-2 text-base-500 hover:text-accent-500 font-medium"
            >
              <Home size="base" />
            </Text>
          </li>
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center gap-2 text-base-500 hover:text-accent-500 font-medium"
            >
              <span>Home</span>
              <Slash size="base" />
            </Text>
          </li>
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center gap-2 text-base-500 hover:text-accent-500 font-medium"
            >
              <span>Work</span>
              <Slash size="base" />
            </Text>
          </li>
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center gap-2 text-base-500 hover:text-accent-500 font-medium"
            >
              <span>Details</span>
            </Text>
          </li>
        </ol>
      </nav>
    </div>
  </div>
</section>
