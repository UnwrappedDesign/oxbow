---
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import Lifebuoy from "@/components/fundations/icons/Lifebuoy.astro";
import InfoCircle from "@/components/fundations/icons/InfoCircle.astro";
import ThreeDots from "@/components/fundations/icons/ThreeDots.astro";
import Settings from "@/components/fundations/icons/Settings.astro";
import User from "@/components/fundations/icons/User.astro";
---

<section>
  <div class="px-8 py-32 mx-auto max-w-7xl lg:px-16 md:px-12">
    <div
      class="flex items-center justify-between w-full pb-4 mx-auto border-b border-base-200"
    >
      <nav aria-label="Breadcrumb" class="flex-1 pb-5">
        <ol role="list" class="flex items-center space-x-2">
          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center p-2 font-medium rounded-lg hover:bg-base-50 hover:text-accent-500 gap-2 text-base-500"
            >
              Home
              <ChevronRight size="base" />
            </Text>
          </li>

          <li>
            <Text
              tag="a"
              href="#_"
              variant="textBase"
              class="flex items-center p-2 font-medium rounded-lg hover:bg-base-50 hover:text-accent-500 gap-2 text-base-500"
            >
              Help Center
            </Text>
          </li>
        </ol>
      </nav>
      <div class="relative">
        <div
          class="relative flex items-center"
          @click.away="open = false"
          x-data="{ open: false }"
        >
          <IconButton
            @click="open = !open"
            aria-haspopup="true"
            aria-expanded="false"
            variant="text"
            size="sm"
          >
            <ThreeDots size="base" slot="icon" />
          </IconButton>
          <div
            x-show="open"
            @click.away="open = false"
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 translate-y-1"
            x-transition:enter-end="opacity-100 translate-y-0"
            x-transition:leave="transition ease-in duration-150"
            x-transition:leave-start="opacity-100 translate-y-0"
            x-transition:leave-end="opacity-0 translate-y-1"
            class="absolute left-auto w-56 mt-2 overflow-hidden bg-white shadow-lg origin-top-center divide-y divide-base-200 right-8 transform rounded-xl ring-1 ring-base-200 focus:outline-none"
            role="menu"
            aria-orientation="vertical"
            aria-labelledby="menu-button"
          >
            <div class="p-1.5" role="none">
              <Text
                tag="a"
                href="#_"
                variant="textSM"
                class="flex items-center p-2 rounded-lg hover:bg-base-50 hover:text-accent-500 gap-2 text-base-500"
              >
                <InfoCircle class="left-icon" size="sm" />
                FAQ
              </Text>
              <Text
                tag="a"
                href="#_"
                variant="textSM"
                class="flex items-center p-2 rounded-lg hover:bg-base-50 hover:text-accent-500 gap-2 text-base-500"
              >
                <Lifebuoy class="left-icon" size="sm" />
                Support
              </Text>
              <Text
                tag="a"
                href="#_"
                variant="textSM"
                class="flex items-center p-2 rounded-lg hover:bg-base-50 hover:text-accent-500 gap-2 text-base-500"
              >
                <Settings class="left-icon" size="sm" />
                Account
              </Text>
              <Text
                tag="a"
                href="#_"
                variant="textSM"
                class="flex items-center p-2 rounded-lg hover:bg-base-50 hover:text-accent-500 gap-2 text-base-500"
              >
                <User class="left-icon" size="sm" />
                Profile
              </Text>
            </div>
            <div class="p-1.5 bg-base-50" role="none">
              <Button class="w-full" variant="alternative" gap="xs" size="xs">
                <span> Sign out</span>
              </Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
