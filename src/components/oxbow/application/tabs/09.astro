---
export const excludeFromObfuscation = [
  "bg-zinc-600",
  "text-zinc-600",
  "ring-1",
  "ring-zinc-200",
  "bg-zinc-50",
];
---

<div class="flex flex-col justify-center p-8 mx-auto bg-white dark:bg-zinc-900">
  <!-- Accessible Tabs • Justified filled tabs -->
  <div
    x-data="{
      keys: ['overview','projects','packages'],
      selected: 'overview',
      focus: 0,
      init(){ this.focus = 0 },
      select(id){ this.selected = id; this.focus = this.keys.indexOf(id) },
      onKeydown(e){ const last=this.keys.length-1; let i=this.focus;
        if(e.key==='ArrowRight'||e.key==='ArrowDown') i=i===last?0:i+1;
        else if(e.key==='ArrowLeft'||e.key==='ArrowUp') i=i===0?last:i-1;
        else if(e.key==='Home') i=0; else if(e.key==='End') i=last; else return;
        e.preventDefault(); const id=this.keys[i]; this.focus=i; this.$nextTick(()=>this.$refs['tab-'+id]?.focus()); }
    }"
    class="w-full max-w-3xl mx-auto"
  >
    <div
      role="tablist"
      aria-orientation="horizontal"
      class="grid grid-cols-3 gap-2"
    >
      <template x-for="(id, idx) in keys" :key="id">
        <button
          class="h-10 px-3 text-sm font-medium rounded-md focus:outline-none focus-visible:ring-2 focus-visible:ring-zinc-500/50"
          :id="'tab-'+id"
          role="tab"
          :aria-selected="selected===id"
          :tabindex="focus===idx?0:-1"
          :aria-controls="'panel-'+id"
          x-ref="tab-[[id]]"
          @click="select(id)"
          @keydown="onKeydown($event)"
          :class="selected===id ? 'bg-zinc-600 dark:bg-zinc-500 text-white dark:text-zinc-900' : 'bg-zinc-50 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-100 hover:text-zinc-900 dark:hover:text-zinc-100 ring-1 ring-zinc-200 dark:ring-zinc-700'"
        >
          <span
            x-text="id==='overview' ? 'Overview' : id==='projects' ? 'Projects' : 'Packages'"
          ></span>
        </button>
      </template>
    </div>
    <div class="pt-4 text-sm text-zinc-500 dark:text-zinc-300">
      <section
        x-show="selected==='overview'"
        x-cloak
        role="tabpanel"
        :id="'panel-overview'"
        aria-labelledby="tab-overview"
        class="p-4 border rounded-lg border-zinc-200 dark:border-zinc-700"
      >
        <p>Overview content — full-width tab buttons with solid fill.</p>
      </section>
      <section
        x-show="selected==='projects'"
        x-cloak
        role="tabpanel"
        :id="'panel-projects'"
        aria-labelledby="tab-projects"
        class="p-4 border rounded-lg border-zinc-200 dark:border-zinc-700"
      >
        <p>Projects content — team boards and workflows.</p>
      </section>
      <section
        x-show="selected==='packages'"
        x-cloak
        role="tabpanel"
        :id="'panel-packages'"
        aria-labelledby="tab-packages"
        class="p-4 border rounded-lg border-zinc-200 dark:border-zinc-700"
      >
        <p>Packages content — publishing and releases.</p>
      </section>
    </div>
  </div>
</div>
