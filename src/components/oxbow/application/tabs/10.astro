---
export const excludeFromObfuscation = [
  "text-zinc-600",
  "bg-zinc-600",
  "ring-1",
  "ring-zinc-200",
  "bg-zinc-50",
  "border-zinc-200",
];
---

<div class="flex flex-col justify-center p-8 mx-auto bg-white dark:bg-zinc-900">
  <!-- Accessible Tabs • Tabs header with search -->
  <div
    x-data="{
      keys: ['overview','projects','packages','team'],
      selected: 'overview',
      focus: 0,
      query: '',
      init(){ this.focus = 0 },
      select(id){ this.selected = id; this.focus = this.keys.indexOf(id) },
      onKeydown(e){ const last=this.keys.length-1; let i=this.focus;
        if(e.key==='ArrowRight'||e.key==='ArrowDown') i=i===last?0:i+1;
        else if(e.key==='ArrowLeft'||e.key==='ArrowUp') i=i===0?last:i-1;
        else if(e.key==='Home') i=0; else if(e.key==='End') i=last; else return;
        e.preventDefault(); const id=this.keys[i]; this.focus=i; this.$nextTick(()=>this.$refs['tab-'+id]?.focus()); }
    }"
    class="w-full max-w-5xl mx-auto"
  >
    <div class="flex items-center justify-between gap-4">
      <div
        class="border-b border-zinc-200 dark:border-zinc-700"
        role="tablist"
        aria-orientation="horizontal"
      >
        <div class="flex gap-6 text-sm text-zinc-600 dark:text-zinc-200">
          <template x-for="(id, idx) in keys" :key="id">
            <button
              class="relative pb-2 font-medium focus:outline-none focus-visible:ring-2 focus-visible:ring-zinc-500/50"
              :id="'tab-'+id"
              role="tab"
              :aria-selected="selected===id"
              :tabindex="focus===idx?0:-1"
              :aria-controls="'panel-'+id"
              x-ref="tab-[[id]]"
              @click="select(id)"
              @keydown="onKeydown($event)"
              :class="selected===id ? 'text-zinc-600 dark:text-zinc-400' : 'hover:text-zinc-900 dark:hover:text-zinc-100'"
            >
              <span x-text="id.charAt(0).toUpperCase()+id.slice(1)"></span>
              <span
                class="absolute left-0 bottom-0 h-[2px] w-full transition-all"
                :class="selected===id ? 'bg-zinc-600 dark:bg-zinc-400' : 'bg-transparent'"
                aria-hidden="true"></span>
            </button>
          </template>
        </div>
      </div>
      <div class="hidden sm:block">
        <label class="relative block">
          <span class="sr-only">Search</span>
          <input
            type="search"
            x-model="query"
            placeholder="Search..."
            class="h-9 w-56 rounded-md bg-zinc-50 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 px-3 text-sm text-zinc-700 dark:text-zinc-100 placeholder:text-zinc-400 dark:placeholder:text-zinc-500 focus:outline-none focus:ring-2 focus:ring-zinc-500/40 dark:focus:ring-zinc-400/40"
          />
        </label>
      </div>
    </div>

    <div class="pt-4 text-sm text-zinc-500 dark:text-zinc-300">
      <template x-for="id in keys" :key="'panel-'+id">
        <section
          x-show="selected===id"
          x-cloak
          role="tabpanel"
          :id="'panel-'+id"
          :aria-labelledby="'tab-'+id"
          class="rounded-lg border border-zinc-200 dark:border-zinc-700 p-4"
        >
          <p>
            <span x-text="id.charAt(0).toUpperCase()+id.slice(1)"></span> content
            — inline search on the right.
          </p>
          <p x-show="query" class="mt-2">
            <span class="text-zinc-600">Query:</span>
            <span x-text="query"></span>
          </p>
        </section>
      </template>
    </div>
  </div>
</div>
