---
export const freeComponent = true;
export const excludeFromObfuscation = [
  "bg-white",
  "text-blue-500",
  "border-b-2",
  "border-blue-500",
];
---

<div class="flex flex-col justify-center p-8 mx-auto bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div x-data="{ tab: 'tab1' }">
    <ul
      class="flex text-sm border-b gap-4 text-zinc-500 dark:text-zinc-400 border-zinc-200 dark:border-zinc-700"
    >
      <li class="-mb-px">
        <a
          @click.prevent="tab = 'tab1'"
          href="#_"
          class="inline-block py-2 font-medium border-b-2 text-blue-500 dark:text-blue-400 border-blue-500 dark:border-blue-400"
          :class="{ '  text-blue-500 dark:text-blue-400 border-b-2 border-blue-500 dark:border-blue-400' : tab === 'tab1' }"
        >
          Marketing</a
        >
      </li>
      <li class="-mb-px">
        <a
          @click.prevent="tab = 'tab2'"
          href="#_"
          class="inline-block py-2 font-medium text-zinc-500 dark:text-zinc-400"
          :class="{ '  text-blue-500 dark:text-blue-400 border-b-2 border-blue-500 dark:border-blue-400' : tab === 'tab2' }"
        >
          Application</a
        >
      </li>
      <li class="-mb-px">
        <a
          @click.prevent="tab = 'tab3'"
          href="#_"
          class="inline-block py-2 font-medium text-zinc-500 dark:text-zinc-400"
          :class="{ '  text-blue-500 dark:text-blue-400 border-b-2 border-blue-500 dark:border-blue-400' : tab === 'tab3' }"
        >
          ECommerce</a
        >
      </li>
    </ul>
    <div class="py-4 pt-4 text-left bg-white dark:bg-zinc-900 content">
      <div x-show="tab==='tab1'" class="text-zinc-500 dark:text-zinc-400">
        <main class="py-4">
          <p class="text-sm text-zinc-500">Marketing content</p>
        </main>
      </div>
      <div
        x-show="tab==='tab2'"
        class="text-zinc-500 dark:text-zinc-400"
        style="display: none;"
      >
        <main class="py-4">
          <p class="text-sm text-zinc-500">Application content</p>
        </main>
      </div>
      <div
        x-show="tab==='tab3'"
        class="text-zinc-500 dark:text-zinc-400"
        style="display: none;"
      >
        <main class="py-4">
          <p class="text-sm text-zinc-500">ECommerce content</p>
        </main>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
