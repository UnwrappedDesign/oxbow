---
export const excludeFromObfuscation = [
  "bg-white",
  "bg-zinc-50",
  "text-zinc-600",
  "ring-1",
  "ring-zinc-200",
];
---

<div
  class="flex flex-col justify-center p-12 mx-auto bg-white dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    x-data="{
      keys: ['overview','projects','packages'],
      selected: 'overview',
      focus: 0,
      init(){ this.focus = this.keys.indexOf(this.selected); },
      select(id){ this.selected = id; this.focus = this.keys.indexOf(id); },
      onKeydown(e){
        const last = this.keys.length - 1;
        let i = this.focus;
        if (e.key==='ArrowRight' || e.key==='ArrowDown'){ i = i === last ? 0 : i+1; }
        else if (e.key==='ArrowLeft' || e.key==='ArrowUp'){ i = i === 0 ? last : i-1; }
        else if (e.key==='Home'){ i = 0; }
        else if (e.key==='End'){ i = last; }
        else { return; }
        e.preventDefault();
        const id = this.keys[i];
        this.focus = i;
        this.$nextTick(() => this.$refs['tab-'+id]?.focus());
      }
    }"
    class="max-w-xl mx-auto"
  >
    <div
      role="tablist"
      aria-orientation="horizontal"
      class="flex justify-center"
    >
      <div class="flex gap-1 p-1 bg-zinc-50 dark:bg-zinc-800 rounded-lg">
        <template x-for="(id, idx) in keys" :key="id">
          <button
            class="px-4 h-9 text-sm font-medium rounded-md focus:outline-none focus-visible:ring-2 focus-visible:ring-zinc-500/50 transition"
            :id="'tab-'+id"
            role="tab"
            :aria-selected="selected===id"
            :tabindex="focus===idx ? 0 : -1"
            :aria-controls="'panel-'+id"
            x-ref="tab-[[id]]"
            @click="select(id)"
            @keydown="onKeydown($event)"
            :class="selected===id ? 'bg-white dark:bg-zinc-900 text-zinc-600 shadow-sm ring-1 ring-zinc-200 dark:ring-zinc-700' : 'text-zinc-600 dark:text-zinc-200 hover:text-zinc-900 dark:hover:text-zinc-100'"
          >
            <span
              x-text="id==='overview' ? 'Overview' : id==='projects' ? 'Projects' : 'Packages'"
            ></span>
          </button>
        </template>
      </div>
    </div>
    <div class="pt-4 text-sm text-zinc-500 dark:text-zinc-300">
      <section
        x-show="selected==='overview'"
        x-cloak
        role="tabpanel"
        :id="'panel-overview'"
        aria-labelledby="tab-overview"
      >
        <p>Overview content — quick status and highlights.</p>
      </section>
      <section
        x-show="selected==='projects'"
        x-cloak
        role="tabpanel"
        :id="'panel-projects'"
        aria-labelledby="tab-projects"
      >
        <p>Projects content — Kanban, lists, and milestones.</p>
      </section>
      <section
        x-show="selected==='packages'"
        x-cloak
        role="tabpanel"
        :id="'panel-packages'"
        aria-labelledby="tab-packages"
      >
        <p>Packages content — artifacts, sizes, and publish settings.</p>
      </section>
    </div>
  </div>
  <!-- copy:end -->
</div>
