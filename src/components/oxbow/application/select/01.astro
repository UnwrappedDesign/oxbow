---
export const freeComponent = true;
export const description = "Select sizes";
import Select from "@/components/fundations/inputs/Select.astro";
// Add the missing exampleOptions definition
const exampleOptions = [
  { label: "United States", value: "us" },
  { label: "Canada", value: "ca" },
  { label: "United Kingdom", value: "uk" },
];
---

<div class="flex justify-center p-16 mx-auto bg-white dark:bg-zinc-900">
  <div class="max-w-sm mx-auto w-full">
    <!-- copy:start -->
    <Select
      id="country"
      name="country"
      label="Country"
      variant="default"
      options={exampleOptions}
      value="ca"
      size="base"
      class="w-full"
    />
    <!-- copy:end -->
  </div>
</div>
