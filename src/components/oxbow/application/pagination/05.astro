<section>
  <div class="flex justify-center py-12 mx-auto">
    <nav
      class="relative z-0 inline-flex gap-2 border p-1 rounded-full shadow"
      aria-label="Pagination">
      <!-- Previous Page Button -->
      <button
        type="button"
        class="flex items-center justify-center size-8 p-1 text-xs font-semibold text-gray-500 transition-all duration-300 border-gray-300 rounded-full shadow bg-gray-50 hover:text-gray-700 focus:ring-2 shadow-gray-500/5 focus:ring-gray-900 focus:ring-offset-2 ring-offset-gray-200 hover:border-gray-200 hover:shadow-none"
        aria-label="Go to previous page"
        disabled>
        <span class="sr-only">Previous</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler size-4 icons-tabler-outline icon-tabler-chevron-left">
          <path
            stroke="none"
            d="M0 0h24v24H0z"
            fill="none"
          ></path>
          <path d="M15 6l-6 6l6 6"></path>
        </svg>
      </button>

      <!-- Current Page Indicator -->
      <span
        class="relative z-10 p-1 size-8 flex justify-center items-center text-sm font-medium text-blue-500"
        aria-current="page">
        1
      </span>

      <!-- Page Buttons -->
      <button
        type="button"
        class="flex items-center justify-center size-8 p-1 text-xs font-semibold text-gray-500 transition-all duration-300 border-gray-300 rounded-full shadow bg-gray-50 hover:text-gray-700 focus:ring-2 shadow-gray-500/5 focus:ring-gray-900 focus:ring-offset-2 ring-offset-gray-200 hover:border-gray-200 hover:shadow-none border"
        aria-label="Go to page 2">
        2
      </button>

      <span class="text-gray-500 size-8 p-1 justify-center items-center flex"
        >...</span
      >

      <button
        type="button"
        class="flex items-center justify-center size-8 p-1 text-xs font-semibold text-gray-500 transition-all duration-300 border-gray-300 rounded-full shadow bg-gray-50 hover:text-gray-700 focus:ring-2 shadow-gray-500/5 focus:ring-gray-900 focus:ring-offset-2 ring-offset-gray-200 hover:border-gray-200 hover:shadow-none border"
        aria-label="Go to page 9">
        9
      </button>

      <button
        type="button"
        class="flex items-center justify-center size-8 p-1 text-xs font-semibold text-gray-500 transition-all duration-300 border-gray-300 rounded-full shadow bg-gray-50 hover:text-gray-700 focus:ring-2 shadow-gray-500/5 focus:ring-gray-900 focus:ring-offset-2 ring-offset-gray-200 hover:border-gray-200 hover:shadow-none border"
        aria-label="Go to page 10">
        10
      </button>

      <!-- Next Page Button -->
      <button
        type="button"
        class="flex items-center justify-center size-8 p-1 text-xs font-semibold text-gray-500 transition-all duration-300 border-gray-300 rounded-full shadow bg-gray-50 hover:text-gray-700 focus:ring-2 shadow-gray-500/5 focus:ring-gray-900 focus:ring-offset-2 ring-offset-gray-200 hover:border-gray-200 hover:shadow-none border"
        aria-label="Go to next page">
        <span class="sr-only">Next</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon size-4 icon-tabler icons-tabler-outline icon-tabler-chevron-right">
          <path
            stroke="none"
            d="M0 0h24v24H0z"
            fill="none"
          ></path>
          <path d="M9 6l6 6l-6 6"></path>
        </svg>
      </button>
    </nav>
  </div>
</section>
