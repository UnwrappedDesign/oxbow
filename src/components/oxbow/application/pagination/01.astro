---
export const freeComponent = true;
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import ChevronLeft from "@/components/fundations/icons/ChevronLeft.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<div class="flex justify-center p-8 mx-auto">
  <!-- copy:start -->
  <nav class="relative z-0" aria-label="Pagination">
    <ol role="list" class="inline-flex items-center gap-1.5">
      <!-- Previous -->
      <li>
        <IconButton
          disabled
          aria-label="Go to previous page"
          variant="text"
          size="xs"
        >
          <ChevronLeft size="xs" slot="icon" />
          <span class="sr-only">Previous</span>
        </IconButton>
      </li>

      <!-- Page numbers -->
      <li>
        <IconButton
          variant="text"
          size="xs"
          aria-current="page"
          aria-label="Page 1, current page"
        >
          1
        </IconButton>
      </li>
      <li>
        <IconButton variant="text" size="xs" aria-label="Go to page 2">
          2
        </IconButton>
      </li>

      <!-- Ellipsis -->
      <li aria-hidden="true" class="px-1 text-zinc-500">â€¦</li>

      <li>
        <IconButton variant="text" size="xs" aria-label="Go to page 9">
          9
        </IconButton>
      </li>
      <li>
        <IconButton variant="text" size="xs" aria-label="Go to page 10">
          10
        </IconButton>
      </li>

      <!-- Next -->
      <li>
        <IconButton aria-label="Go to next page" variant="text" size="xs">
          <ChevronRight size="xs" slot="icon" />
          <span class="sr-only">Next</span>
        </IconButton>
      </li>
    </ol>
  </nav>
  <!-- copy:end -->
</div>
