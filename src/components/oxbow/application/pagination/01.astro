---
export const freeComponent = true;
import Button from "@/components/fundations/buttons/Button.astro";
import ChevronLeft from "@/components/fundations/icons/ChevronLeft.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---
<div class="flex justify-center p-16 mx-auto bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <nav class="relative z-0" aria-label="Pagination">
    <ol role="list" class="inline-flex items-center gap-1.5">
      <!-- Previous -->
      <li>
        <Button
          disabled
          aria-label="Go to previous page"
          variant="muted"
          size="xs"
          iconOnly
        >
          <ChevronLeft slot="left-icon" size="xs" />
          <span class="sr-only">Previous</span>
        </Button>
      </li>
      <!-- Page numbers -->
      <li>
        <Button
          variant="text"
          size="xs"
          aria-current="page"
          aria-label="Page 1, current page"
        >
          1
        </Button>
      </li>
      <li>
        <Button variant="text" size="xs" aria-label="Go to page 2">
          2
        </Button>
      </li>
      <!-- Ellipsis -->
      <li aria-hidden="true" class="px-1 text-zinc-500 dark:text-zinc-400">
        â€¦
      </li>
      <li>
        <Button variant="text" size="xs" aria-label="Go to page 9">
          9
        </Button>
      </li>
      <li>
        <Button variant="text" size="xs" aria-label="Go to page 10">
          10
        </Button>
      </li>
      <!-- Next -->
      <li>
        <Button aria-label="Go to next page" variant="accent" size="xs" iconOnly>
          <ChevronRight slot="left-icon" size="xs" />
          <span class="sr-only">Next</span>
        </Button>
      </li>
    </ol>
  </nav>
  <!-- copy:end -->
</div>
