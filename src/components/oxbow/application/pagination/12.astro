---
export const description = "Compact Centered Numbers";
import Button from "@/components/fundations/buttons/Button.astro";
import IconButton from "@/components/fundations/buttons/IconButton.astro";
---

<section class="flex justify-center p-16 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <nav
    aria-label="Pagination"
    x-data="{ page: 3, total: 9 }"
    class="flex items-center gap-1 w-full max-w-md mx-auto"
  >
    <Button
      size="xs"
      variant="outline"
      :disabled="page===1"
      @click="page=page-1"
      class="shrink-0">Prev</Button
    >
    <div
      class="overflow-x-auto overflow-y-visible max-w-full py-1 -my-1 hidden md:block"
    >
      <div class="flex items-center gap-1 whitespace-nowrap px-1">
        <template x-for="n in total" :key="n">
          <IconButton
            size="xs"
            variant="outline"
            class="leading-none"
            :class="page===n ? 'bg-blue-600 text-white' : ''"
            x-text="n"
            @click="page=n"
            :aria-current="page===n ? 'page' : null"
          />
        </template>
      </div>
    </div>
    <Button
      size="xs"
      variant="outline"
      :disabled="page===total"
      @click="page=page+1"
      class="shrink-0">Next</Button
    >
  </nav>
  <!-- copy:end -->
</section>
