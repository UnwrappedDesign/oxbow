---
import Button from "@/components/fundations/buttons/Button.astro";
import ChevronLeft from "@/components/fundations/icons/ChevronLeft.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<section>
  <div
    class="flex justify-center w-full px-8 py-48 mx-auto md:px-12 lg:px-24 max-w-7xl"
  >
    <!-- copy:start -->
    <nav class="flex items-center justify-center w-full px-4 sm:px-0 gap-4">
      <Button gap="xs" size="xs" variant="alternative" class="md:hidden">
        <ChevronLeft size="sm" slot="icon" slot="left-icon" />
        Previous
      </Button>
      <div class="hidden md:-mt-px md:flex">
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 hover:border-zinc-300 hover:text-blue-500"
          >1</a
        >
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-blue-500 text-blue-600"
          aria-current="page">2</a
        >
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 hover:border-zinc-300 hover:text-blue-500"
          >3</a
        >
        <span
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500"
          >...</span
        >
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 hover:border-zinc-300 hover:text-blue-500"
          >8</a
        >
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 hover:border-zinc-300 hover:text-blue-500"
          >9</a
        >
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 hover:border-zinc-300 hover:text-blue-500"
          >10</a
        >
      </div>
      <Button gap="xs" size="xs" variant="alternative" class="md:hidden">
        Previous
        <ChevronRight size="sm" slot="icon" slot="right-icon" />
      </Button>
    </nav>
    <!-- copy:end -->
  </div>
</section>
