---
import Button from "@/components/fundations/buttons/Button.astro";
import ChevronLeft from "@/components/fundations/icons/ChevronLeft.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<section>
  <div
    class="flex justify-center py-12 px-8 md:px-12 lg:px-24 max-w-7xl mx-auto w-full">
    <nav class="flex items-center justify-center px-4 sm:px-0 w-full gap-4">
      <Button
        gap="xs"
        size="xs"
        variant="alternative"
        class="md:hidden">
        <ChevronLeft
          size="sm"
          slot="icon"
          slot="left-icon"
        />
        Previous
      </Button>
      <div class="hidden md:-mt-px md:flex">
        <a
          href="#_"
          class="inline-flex items-center border-b-2 border-transparent px-4 pb-4 text-sm font-medium text-base-500 hover:border-base-300 hover:text-accent-500"
          >1</a
        >
        <a
          href="#_"
          class="inline-flex items-center border-b-2 border-accent-500 px-4 pb-4 text-sm font-medium text-accent-600"
          aria-current="page"
          >2</a
        >
        <a
          href="#_"
          class="inline-flex items-center border-b-2 border-transparent px-4 pb-4 text-sm font-medium text-base-500 hover:border-base-300 hover:text-accent-500"
          >3</a
        >
        <span
          class="inline-flex items-center border-b-2 border-transparent px-4 pb-4 text-sm font-medium text-base-500"
          >...</span
        >
        <a
          href="#_"
          class="inline-flex items-center border-b-2 border-transparent px-4 pb-4 text-sm font-medium text-base-500 hover:border-base-300 hover:text-accent-500"
          >8</a
        >
        <a
          href="#_"
          class="inline-flex items-center border-b-2 border-transparent px-4 pb-4 text-sm font-medium text-base-500 hover:border-base-300 hover:text-accent-500"
          >9</a
        >
        <a
          href="#_"
          class="inline-flex items-center border-b-2 border-transparent px-4 pb-4 text-sm font-medium text-base-500 hover:border-base-300 hover:text-accent-500"
          >10</a
        >
      </div>
      <Button
        gap="xs"
        size="xs"
        variant="alternative"
        class="md:hidden">
        Previous
        <ChevronRight
          size="sm"
          slot="icon"
          slot="right-icon"
        />
      </Button>
    </nav>
  </div>
</section>
