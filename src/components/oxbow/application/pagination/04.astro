---
import Button from "@/components/fundations/buttons/Button.astro";
import ChevronLeft from "@/components/fundations/icons/ChevronLeft.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
---

<section>
  <div class="flex justify-center p-16 mx-auto bg-white dark:bg-zinc-900">
    <!-- copy:start -->
    <nav
      class="flex items-center justify-center w-full px-4 sm:px-0 gap-4"
      aria-label="Pagination"
    >
      <!-- Mobile Previous -->
      <Button
        gap="xs"
        size="xs"
        variant="outline"
        class="md:hidden"
        aria-label="Go to previous page"
      >
        <ChevronLeft size="sm" slot="icon" slot="left-icon" />
        Previous
      </Button>

      <!-- Desktop Pagination -->
      <div class="hidden md:-mt-px md:flex">
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 dark:text-zinc-400 hover:border-zinc-300 dark:hover:border-zinc-600 hover:text-zinc-600 dark:hover:text-zinc-300"
          aria-label="Go to page 1"
        >
          1
        </a>
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-zinc-600 dark:border-zinc-400 text-zinc-600 dark:text-zinc-300"
          aria-current="page"
          aria-label="Page 2, current page"
        >
          2
        </a>
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 dark:text-zinc-400 hover:border-zinc-300 dark:hover:border-zinc-600 hover:text-zinc-600 dark:hover:text-zinc-300"
          aria-label="Go to page 3"
        >
          3
        </a>
        <span
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 dark:text-zinc-400"
          aria-hidden="true"
        >
          ...
        </span>
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 dark:text-zinc-400 hover:border-zinc-300 dark:hover:border-zinc-600 hover:text-zinc-600 dark:hover:text-zinc-300"
          aria-label="Go to page 8"
        >
          8
        </a>
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 dark:text-zinc-400 hover:border-zinc-300 dark:hover:border-zinc-600 hover:text-zinc-600 dark:hover:text-zinc-300"
          aria-label="Go to page 9"
        >
          9
        </a>
        <a
          href="#_"
          class="inline-flex items-center px-4 pb-4 text-sm font-medium border-b-2 border-transparent text-zinc-500 dark:text-zinc-400 hover:border-zinc-300 dark:hover:border-zinc-600 hover:text-zinc-500 dark:hover:text-zinc-300"
          aria-label="Go to page 10"
        >
          10
        </a>
      </div>

      <!-- Mobile Next -->
      <Button
        gap="xs"
        size="xs"
        variant="outline"
        class="md:hidden"
        aria-label="Go to next page"
      >
        Next
        <ChevronRight size="sm" slot="icon" slot="right-icon" />
      </Button>
    </nav>
    <!-- copy:end -->
  </div>
</section>
