---
export const description = "Link icon button ";
import Button from "@/components/fundations/buttons/Button.astro";
// Icons
import Plus from "@/components/fundations/icons/Plus.astro";
---

<section
  class="flex items-center flex-wrap gap-2 justify-center p-24 bg-white dark:bg-zinc-900 h-full"
>
  <!-- copy:start -->
  <Button onlyIconSize="xs" aria-label="Add" variant="link">
    <Plus slot="left-icon" size="xs" />
  </Button>
  <Button onlyIconSize="sm" aria-label="Add" variant="link">
    <Plus slot="left-icon" size="sm" />
  </Button>
  <Button onlyIconSize="base" aria-label="Add" variant="link">
    <Plus slot="left-icon" size="base" />
  </Button>
  <Button onlyIconSize="md" aria-label="Add" variant="link">
    <Plus slot="left-icon" size="md" />
  </Button>
  <Button onlyIconSize="lg" aria-label="Add" variant="link">
    <Plus slot="left-icon" size="lg" />
  </Button>
  <Button onlyIconSize="xl" aria-label="Add" variant="link">
    <Plus slot="left-icon" size="xl" />
  </Button>
  <!-- copy:end -->
</section>
