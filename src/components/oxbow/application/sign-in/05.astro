---
export const description = "Split screen login with quote";
// Assets
import { Image } from "astro:assets";
import Placeholder from "@/images/gradients/2.jpeg";
// Fundations
import Logo from "@/components/assets/Logo.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Checkbox from "@/components/fundations/inputs/Checkbox.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
// Icons
import AppleColor from "@/components/fundations/icons/AppleColor.astro";
import GoogleColor from "@/components/fundations/icons/GoogleColor.astro";
---

<div class="flex h-screen bg-white dark:bg-zinc-900">
  <div
    class="flex items-center justify-center w-full  lg:w-1/3"
  >
    <div
      class="w-full max-w-md p-8 py-24 lg:py-32"
    >
      <div>
        <a href="#_">
          <span class="sr-only">Back to home</span>
          <Logo class="h-12 text-zinc-900 dark:text-white" aria-hidden="true" /></a
        >
        <Text
          tag="h1"
          variant="displayMD"
          class="mt-12 font-semibold tracking-tight text-zinc-900 dark:text-white"
        >
          Sign in to Oxbow
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-zinc-500 dark:text-zinc-400 text-balance"
        >
          Welcome back. Enter your email and password like you haven’t forgotten
          them for the 12th time this week.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <TextInput
          id="email"
          name="email"
          label="Email Address"
          type="email"
          variant="default"
          size="base"
          placeholder="you@example.com"
        />
        <TextInput
          id="password"
          name="password"
          label="Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />
        <Checkbox
          id="login-remember"
          name="login-remember"
          label="Remember me for 30 days"
          variant="default"
          size="base"
        />
        <Button fullWidth variant="default" size="base">
          Sign in with email
        </Button>
        <div class="relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-zinc-200 dark:border-zinc-700">
            </div>
          </div>
          <div class="relative flex justify-start">
            <span
              class="pr-2 text-sm bg-white dark:bg-zinc-900 text-zinc-500 dark:text-zinc-400"
              >Or sign in with</span
            >
          </div>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
          <Button
            variant="outline"
            size="base"
            gap="sm"
            fullWidth
            class="flex items-center"
          >
            <GoogleColor slot="left-icon" class="size-4" />
            Google
          </Button>
          <Button
            variant="outline"
            size="base"
            gap="sm"
            fullWidth
            class="flex items-center"
          >
            <AppleColor slot="left-icon" class="size-4" />
            Apple
          </Button>
        </div>
      </form>
      <Text tag="p" variant="textXS" class="mt-4 font-medium text-zinc-500">
        Dont' have an account?
        <a href="#_" class="font-medium text-blue-500 hover:text-zinc-500">
          Sign up
        </a>
      </Text>
    </div>
  </div>
  <div class="relative hidden overflow-hidden lg:block lg:w-2/3">
    <Image
      width={1200}
      height={1200}
      src={Placeholder}
      alt="Background"
      aria-hidden="true"
      class="object-cover object-center w-full h-full bg-zinc-50"
    />
    <div
      aria-hidden="true"
      class="absolute inset-0 pointer-events-none bg-zinc-800/80"
    >
    </div>
    <div class="absolute inset-0 flex flex-col items-start justify-end p-8">
      <div class="max-w-md">
        <Text
          tag="p"
          variant="displaySM"
          class="font-semibold text-white text-shadow text-balance"
        >
          Say goodbye to financial stress with yet another UI promising to fix
          your life.
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-zinc-200 text-shadow text-balance"
        >
          Because "quickest and simplest" totally worked last time, right?
        </Text>
      </div>
    </div>
  </div>
</div>
