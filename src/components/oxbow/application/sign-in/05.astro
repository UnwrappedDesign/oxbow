---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Apple from "@/components/fundations/icons/Apple.astro";
import Chrome from "@/components/fundations/icons/Chrome.astro";
import Meta from "@/components/fundations/icons/Meta.astro";
---

<div class="relative">
  <div
    class="lg:absolute lg:inset-0 lg:right-1/2 ring-8 m-4 ring-white rounded-2xl overflow-hidden"
  >
    <img
      class="h-64 w-full bg-base-50 object-cover sm:h-80 lg:absolute lg:h-full"
      src="/pose/1.jpg"
      alt=""
    />
  </div>
  <div
    class="pb-24 pt-16 sm:pb-32 sm:pt-24 lg:mx-auto lg:grid lg:max-w-7xl lg:grid-cols-2 lg:pt-32"
  >
    <div class="lg:col-start-2 px-6 lg:px-8 lg:pl-24">
      <div class="mx-auto lg:mx-0 max-w-lg">
        <div class="lg:text-balance">
          <img
            class="h-20 mb-12"
            src="/images/oxbow/blueLineLogo.png"
            alt="#_"
          />
          <Text
            tag="p"
            variant="textSM"
            class="font-bold uppercase text-accent-600"
          >
            Tagline
          </Text>
          <Text
            tag="h2"
            variant="displayMD"
            class="mt-4 font-semibold text-base-900 lg:text-balance"
          >
            Sign in to your account
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 text-base-500 font-medium"
          >
            Welcome back! Please enter your email and password to sign in.
          </Text>
        </div>
        <form action="#" method="POST" class="mx-auto mt-12 max-w-lg">
          <div class="flex flex-col gap-y-6">
            <div>
              <Text
                for="email"
                tag="label"
                variant="textBase"
                class="text-base-500 font-medium"
              >
                Email
              </Text>
              <div class="mt-2.5">
                <input
                  type="email"
                  name="email"
                  id="email"
                  autocomplete="email"
                  required
                  aria-required="true"
                  aria-describedby="email-error"
                  placeholder="Your email"
                  class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-lg appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
                />
                <span id="email-error" class="text-red-600 text-sm hidden">
                  Please enter a valid email address.
                </span>
              </div>
            </div>
            <div>
              <Text
                for="email"
                tag="label"
                class="flex items-center justify-between"
                variant="textBase"
                class="text-base-500 font-medium"
              >
                Password
                <Text for="email" tag="a" variant="link">
                  Forgot password?
                </Text>
              </Text>
              <div class="mt-2.5">
                <input
                  type="password"
                  name="password"
                  id="password"
                  autocomplete="current-password"
                  required
                  aria-required="true"
                  aria-describedby="password-error"
                  placeholder="Your password"
                  class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-lg appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
                />
                <span id="password-error" class="text-red-600 text-sm hidden">
                  Please enter a valid password.
                </span>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <input
                id="remember-me"
                name="remember-me"
                type="checkbox"
                class="size-4 rounded border-base-300 text-accent-600 focus:ring-accent-600 shadow"
              />
              <Text
                for="remember-me"
                tag="label"
                variant="textSM"
                class="block text-base-500 font-medium"
                >Remember me
              </Text>
            </div>
          </div>
          <div class="mt-10">
            <Button class="w-full" variant="accent" size="base">
              Sign in
            </Button>
          </div>
        </form>
        <div class="relative my-12">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-base-200"></div>
          </div>
          <div class="relative flex justify-center">
            <Text
              tag="span"
              variant="textSM"
              class="text-base-500 font-semibold bg-white px-4"
            >
              Or Sign in with
            </Text>
          </div>
        </div>
        <div class="flex gap-4">
          <Button
            class="w-full justify-center"
            variant="muted"
            size="base"
            gap="gapXS"
          >
            <Apple size="sm" slot="right-icon" />
          </Button>
          <Button
            class="w-full justify-center"
            variant="muted"
            size="base"
            gap="gapXS"
          >
            <Meta size="sm" slot="right-icon" />
          </Button>
          <Button
            class="w-full justify-center"
            variant="muted"
            size="base"
            gap="gapXS"
          >
            <Chrome size="sm" slot="right-icon" />
          </Button>
        </div>
        <Text
          tag="p"
          variant="textXS"
          class="text-base-500 font-medium text-center mt-4"
        >
          Dont' have an account?
          <a href="#_" class="text-accent-500 font-medium hover:text-base-500">
            Sign up
          </a>
        </Text>
      </div>
    </div>
  </div>
</div>
