---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Apple from "@/components/fundations/icons/Apple.astro";
import Chrome from "@/components/fundations/icons/Chrome.astro";
import Meta from "@/components/fundations/icons/Meta.astro";
---

<section>
  <div class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="max-w-lg mx-auto">
      <div class="text-center lg:text-balance">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 lg:text-balance"
        >
          Sign in to your account
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-base-500">
          Welcome back! Please enter your email and password to sign in.
        </Text>
      </div>
      <form action="#" method="POST" class="max-w-lg mx-auto mt-12">
        <div class="flex flex-col gap-y-6">
          <div>
            <Text
              for="email"
              tag="label"
              variant="textBase"
              class="font-medium text-base-500"
            >
              Email
            </Text>
            <div class="mt-2.5">
              <input
                type="email"
                name="email"
                id="email"
                autocomplete="email"
                required
                aria-required="true"
                aria-describedby="email-error"
                placeholder="Your email"
                class="block w-full h-10 px-4 py-2 text-sm bg-white border border-transparent rounded-lg appearance-none text-accent-700 duration-300 ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
              />
              <span id="email-error" class="hidden text-sm text-red-600">
                Please enter a valid email address.
              </span>
            </div>
          </div>
          <div>
            <Text
              for="email"
              tag="label"
              class="flex items-center justify-between"
              variant="textBase"
              class="font-medium text-base-500"
            >
              Password
              <Text for="email" tag="a" variant="link"> Forgot password? </Text>
            </Text>
            <div class="mt-2.5">
              <input
                type="password"
                name="password"
                id="password"
                autocomplete="current-password"
                required
                aria-required="true"
                aria-describedby="password-error"
                placeholder="Your password"
                class="block w-full h-10 px-4 py-2 text-sm bg-white border border-transparent rounded-lg appearance-none text-accent-700 duration-300 ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
              />
              <span id="password-error" class="hidden text-sm text-red-600">
                Please enter a valid password.
              </span>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <input
              id="remember-me"
              name="remember-me"
              type="checkbox"
              class="rounded shadow size-4 border-base-300 text-accent-600 focus:ring-accent-600"
            />
            <Text
              for="remember-me"
              tag="label"
              class="block text-sm font-medium text-base-500"
              >Remember me
            </Text>
          </div>
        </div>
        <div class="mt-10">
          <Button class="w-full" variant="accent" size="base"> Sign in </Button>
        </div>
      </form>
      <div class="relative my-12">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-base-200"></div>
        </div>
        <div class="relative flex justify-center">
          <Text
            tag="span"
            variant="textSM"
            class="px-4 font-semibold bg-white text-base-500"
          >
            Or Sign in with
          </Text>
        </div>
      </div>
      <div class="flex flex-col gap-y-4">
        <Button
          class="justify-between w-full"
          variant="muted"
          size="base"
          gap="gapXS"
        >
          Sign in with Apple
          <Apple size="sm" slot="right-icon" />
        </Button>
        <Button
          class="justify-between w-full"
          variant="muted"
          size="base"
          gap="gapXS"
        >
          Sign in with Meta
          <Meta size="sm" slot="right-icon" />
        </Button>
        <Button
          class="justify-between w-full"
          variant="muted"
          size="base"
          gap="gapXS"
        >
          Sign in with Chrome
          <Chrome size="sm" slot="right-icon" />
        </Button>
      </div>
      <Text
      tag="p"
      variant="textXS"
      class="mt-4 font-medium text-center text-base-500"
    >
      Dont' have an account? 
      <a href="#_" class="font-medium text-accent-500 hover:text-base-500">
        Sign up
      </a>
    </Text>
    </div>
  </div>
</section>
