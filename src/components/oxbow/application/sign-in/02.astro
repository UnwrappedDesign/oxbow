<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="flex flex-col lg:flex-row gap-12 lg:gap-24 items-center">
      <div class="w-full mx-auto">
        <div class="max-w-lg">
          <div class="lg:text-balance">
            <span
              class="font-mono text-xs font-medium tracking-tight text-accent-600 uppercase"
              >Sign in</span
            >
            <h1
              class="text-3xl mt-4 font-semibold tracking-tight text-base-900 sm:text-balance">
              Sign in to your account
            </h1>
            <p class="mt-6 text-base font-medium text-base-500 sm:text-balance">
              Welcome back! Please enter your email and password to sign in.
            </p>
          </div>
          <form
            action="#"
            method="POST"
            class="mx-auto mt-12 max-w-lg">
            <div class="flex flex-col gap-y-6">
              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-base-500">
                  Email
                </label>
                <div class="mt-2.5">
                  <input
                    type="email"
                    name="email"
                    id="email"
                    autocomplete="email"
                    required
                    aria-required="true"
                    aria-describedby="email-error"
                    placeholder="Your email"
                    class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-lg shadow appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
                  />
                  <span
                    id="email-error"
                    class="text-red-600 text-sm hidden">
                    Please enter a valid email address.
                  </span>
                </div>
              </div>
              <div>
                <label
                  for="password"
                  class="text-sm font-medium text-base-500 flex items-center justify-between">
                  Password
                  <a
                    href="#_"
                    class="text-accent-600 text-sm hover:text-base-900"
                    >Forgot password?</a
                  >
                </label>
                <div class="mt-2.5">
                  <input
                    type="password"
                    name="password"
                    id="password"
                    autocomplete="current-password"
                    required
                    aria-required="true"
                    aria-describedby="password-error"
                    placeholder="Your password"
                    class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-lg shadow appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
                  />
                  <span
                    id="password-error"
                    class="text-red-600 text-sm hidden">
                    Please enter a valid password.
                  </span>
                </div>
              </div>
              <div class="flex items-center">
                <input
                  id="remember-me"
                  name="remember-me"
                  type="checkbox"
                  class="size-4 rounded border-base-300 text-accent-600 focus:ring-accent-600 shadow"
                />
                <label
                  for="remember-me"
                  class="ml-3 block text-sm leading-6 text-base-900"
                  >Remember me</label
                >
              </div>
            </div>

            <div class="mt-10">
              <button
                type="submit"
                class="flex items-center justify-center h-10 px-4 py-2 text-sm font-medium text-white transition-all duration-200 rounded-lg bg-accent-700  hover:to-accent-800 shadow focus:ring-2 focus:ring-accent-950 focus:ring-offset-2 ring-offset-base-200 hover:shadow-none w-full"
                >Sign in</button
              >
            </div>
            <div class="flex items-center mt-4">
              <p class="text-sm text-base-500">
                Don't have an account?
                <a
                  class="text-accent-600 hover:text-base-900"
                  href="#_"
                  >Sign up</a
                >
              </p>
            </div>
          </form>
        </div>
      </div>
      <div
        class="flex flex-col size-full items-center justify-center lg:ml-auto">
        <div class="flex flex-col items-center justify-center size-full">
          <img
            alt="QR Code"
            class="size-full mx-auto"
            src="/assets/qr-lexingtonthemes.svg"
          />
          <div class="mt-4">
            <p class="text-sm text-base-500">Log in with QR Code</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
