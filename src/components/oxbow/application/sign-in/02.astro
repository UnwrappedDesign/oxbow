---
export const description = "Centered sign in block";
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Checkbox from "@/components/fundations/inputs/Checkbox.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
// Icons
import GoogleColor from "@/components/fundations/icons/GoogleColor.astro";
---

<section>
  <div class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="max-w-md mx-auto">
      <div class="text-center lg:text-balance">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-gray-900"
        >
          Sign in
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-gray-500 text-balance"
        >
          Welcome back! Fire up that password muscle memory, just like the good
          old dial-up days.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <TextInput
          id="email"
          name="email"
          label="Email Address"
          type="email"
          variant="default"
          size="base"
          placeholder="you@example.com"
        />
        <TextInput
          id="password"
          name="password"
          label="Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />
        <Checkbox
          id="login-remember"
          name="login-remember"
          label="Remember me for 30 days"
          variant="default"
          size="base"
        />
        <Button fullWidth variant="accent" size="base">
          Sign in with email
        </Button>
        <Button
          variant="alternative"
          size="base"
          gap="sm"
          class="flex items-center w-full"
        >
          <GoogleColor slot="left-icon" class="size-4" />
          Sign in with Google
        </Button>
      </form>
      <Text tag="p" variant="textXS" class="mt-4 font-medium text-gray-500">
        Dont' have an account?
        <a href="#_" class="font-medium text-blue-500 hover:text-gray-500">
          Sign up
        </a>
      </Text>
    </div>
  </div>
</section>
