---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Link from "@/components/fundations/typography/Link.astro";

import Apple from "@/components/fundations/icons/Apple.astro";
import Chrome from "@/components/fundations/icons/Chrome.astro";
import Meta from "@/components/fundations/icons/Meta.astro";
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-lg mx-auto">
      <div class="text-center lg:text-balance">
        <Text
          tag="span"
          variant="eyebrow">
          Tagline
        </Text>
        <Heading
          class="mt-4"
          level={1}
          variant="default">
          Sign in to your account
        </Heading>
        <Text
          class="mt-4 lg:text-balance"
          tag="p"
          variant="body">
          Welcome back! Please enter your email and password to sign in.
        </Text>
      </div>
      <form
        action="#"
        method="POST"
        class="mx-auto mt-12 max-w-lg">
        <div class="flex flex-col gap-y-6">
          <div>
            <Text
              for="email"
              tag="label"
              variant="inputLabel">
              Email
            </Text>
            <div class="mt-2.5">
              <input
                type="email"
                name="email"
                id="email"
                autocomplete="email"
                required
                aria-required="true"
                aria-describedby="email-error"
                placeholder="Your email"
                class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-lg shadow appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
              />
              <span
                id="email-error"
                class="text-red-600 text-sm hidden">
                Please enter a valid email address.
              </span>
            </div>
          </div>
          <div>
            <Text
              for="email"
              tag="label"
              class="flex items-center justify-between"
              variant="inputLabel">
              Password
              <Text
                for="email"
                tag="a"
                variant="link">
                Forgot password?
              </Text>
            </Text>
            <div class="mt-2.5">
              <input
                type="password"
                name="password"
                id="password"
                autocomplete="current-password"
                required
                aria-required="true"
                aria-describedby="password-error"
                placeholder="Your password"
                class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-lg shadow appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
              />
              <span
                id="password-error"
                class="text-red-600 text-sm hidden">
                Please enter a valid password.
              </span>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <input
              id="remember-me"
              name="remember-me"
              type="checkbox"
              class="size-4 rounded border-base-300 text-accent-600 focus:ring-accent-600 shadow"
            />
            <Text
              for="remember-me"
              tag="label"
              variant="inputLabel">
              Remember me
            </Text>
          </div>
        </div>

        <div class="mt-10">
          <Button
            class="w-full"
            variant="accent"
            size="base">
            Sign in
          </Button>
        </div>
      </form>
      <div class="relative mt-12">
        <div
          class="absolute inset-0 flex items-center"
          aria-hidden="true">
          <div class="w-full border-t"></div>
        </div>
        <div class="relative flex justify-center">
          <Text
            class="bg-white px-6 text-base-900"
            tag="span"
            variant="small">
            Or Sign in with
          </Text>
        </div>
      </div>
      <div class="flex flex-col gap-y-4 mt-4">
        <Button
          class="w-full justify-between"
          variant="apple-brand"
          size="base"
          gap="gapXS">
          Sign in with Apple
          <Apple
            size="sm"
            slot="right-icon"
          />
        </Button>
        <Button
          class="w-full justify-between"
          variant="meta-brand"
          size="base"
          gap="gapXS">
          Sign in with Meta
          <Meta
            size="sm"
            slot="right-icon"
          />
        </Button>
        <Button
          class="w-full justify-between"
          variant="muted"
          size="base"
          gap="gapXS">
          Sign in with Chrome
          <Chrome
            size="sm"
            slot="right-icon"
          />
        </Button>
      </div>
      <div class="flex mt-4 justify-center">
        <Text
          tag="p"
          variant="body">
          Don't have an account?
          <Link
            tag="a"
            href="#_"
            variant="link">
            Sign up
          </Link>
        </Text>
      </div>
    </div>
  </div>
</section>
