---
export const description = "Split screen sign in with testimonial";

// Assets
import { Image } from "astro:assets";
import A1 from "@/images/avatars/avatar1.jpeg";
import Placeholder from "@/images/gradients/1.jpeg";
// Fundations
import Logo from "@/components/assets/Logo.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Checkbox from "@/components/fundations/inputs/Checkbox.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
// Icons
import GoogleColor from "@/components/fundations/icons/GoogleColor.astro";
---

<div class="flex h-screen bg-white dark:bg-zinc-900">
  <div
    class="flex items-center justify-center w-full  lg:w-1/2"
  >
    <div
      class="w-full max-w-md py-24 lg:py-32  p-8"
    >
      <div>
        <a href="#_">
          <span class="sr-only">Back to home</span>
          <Logo class="h-12 text-zinc-900 dark:text-white" aria-hidden="true" /></a
        >
        <Text
          tag="h1"
          variant="displayMD"
          class="mt-12 font-semibold tracking-tight text-zinc-900 dark:text-white"
        >
          Sign in
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-zinc-500 dark:text-zinc-400 text-balance"
        >
          Welcome back. You know the drill, email, password, maybe a tear or
          two.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <TextInput
          id="email"
          name="email"
          label="Email Address"
          type="email"
          variant="default"
          size="base"
          placeholder="you@example.com"
        />
        <TextInput
          id="password"
          name="password"
          label="Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />
        <Checkbox
          id="login-remember"
          name="login-remember"
          label="Remember me for 30 days"
          variant="default"
          size="base"
        />
        <Button fullWidth variant="default" size="base">
          Sign in with email
        </Button>
        <Button
          variant="outline"
          size="base"
          gap="sm"
          class="relative flex items-center w-full"
        >
          <GoogleColor slot="left-icon" class="size-4" />
          Sign in with Google
          <!-- Green dot indicator -->
          <span
            class="absolute w-2 h-2 bg-green-500 rounded-full right-3 top-1/2 -translate-y-1/2"
          ></span>
        </Button>
      </form>
      <Text tag="p" variant="textXS" class="mt-4 font-medium text-zinc-500">
        Dont' have an account?
        <a href="#_" class="font-medium text-blue-500 hover:text-zinc-500">
          Sign up
        </a>
      </Text>
    </div>
  </div>
  <div class="relative hidden lg:block lg:w-1/2">
    <Image
      width={1200}
      height={1200}
      src={Placeholder}
      alt="#_"
      aria-hidden="true"
      class="object-cover object-left w-full h-full bg-zinc-50 grayscale"
    />

    <div
      class="absolute bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 shadow from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl p-8 bottom-20 left-10 right-10"
    >
      <div class="relative flex flex-col gap-2">
        <Text tag="h3" variant="textBase" class="font-medium text-zinc-900 dark:text-white">
          "I’ve seen enough UI kits to last a lifetime. Oxbow’s the first one
          that didn’t make me roll my eyes."
        </Text>
        <div class="flex items-center mt-2 gap-4">
          <Image
            src={A1}
            alt="#_"
            width={1000}
            height={1000}
            aria-hidden="true"
            class="object-cover object-top rounded-full size-10"
          />
          <div>
            <Text
              tag="p"
              variant="textBase"
              class="font-semibold text-zinc-900 dark:text-white"
            >
              Johan Snällström
            </Text>
            <Text tag="p" variant="textXS" class="text-zinc-500">
              Software Engineer
            </Text>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
