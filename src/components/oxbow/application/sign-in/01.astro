---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-lg mx-auto">
      <div class="text-center lg:text-balance">
        <img
          class="h-20 mx-auto"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        />
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 lg:text-balance"
        >
          Sign in to your account
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500 font-medium">
          Welcome back! Please enter your email and password to sign in.
        </Text>
      </div>
      <form action="#" method="POST" class="mx-auto mt-12 max-w-lg">
        <div>
          <Text
            for="email"
            tag="label"
            variant="textBase"
            class="text-base-500 font-medium"
          >
            Email
          </Text>
          <div class="mt-2.5">
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              required
              aria-required="true"
              aria-describedby="email-error"
              placeholder="Your email"
              class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-lg appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
            />
            <span id="email-error" class="text-red-600 text-sm hidden">
              Please enter a valid email address.
            </span>
          </div>
        </div>
        <div class="mt-10">
          <Button class="w-full" variant="accent" size="base"> Sign in </Button>
        </div>
        <Text
          tag="p"
          variant="textXS"
          class="text-base-500 font-medium text-center mt-4"
        >
          Dont' have an account? 
          <a href="#_" class="text-accent-500 font-medium hover:text-base-500">
            Sign up
          </a>
        </Text>
      </form>
    </div>
  </div>
</section>
