---
export const freeComponent = true;
export const description = "Sign in with magic link";
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---
<section>
  <div
    class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl bg-white dark:bg-zinc-900"
  >
    <div
      class="max-w-md mx-auto bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 shadow from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl p-8"
    >
      <div class="text-center">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-zinc-900 dark:text-zinc-100"
        >
          Magic, but make it login
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-zinc-500 dark:text-zinc-400 text-balance"
        >
          Drop your email below. We'll zap a link to your inbox, no passwords,
          no drama, just login magic.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <TextInput
          id="email"
          name="email"
          label="Email Address"
          type="email"
          variant="default"
          size="base"
          placeholder="you@example.com"
        />
        <Button fullWidth variant="accent" size="base">
          Send magic link
        </Button>
      </form>
    </div>
  </div>
</section>
