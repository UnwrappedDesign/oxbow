---
export const description = "Split screen sign in with customers.";

// Assets
import { Image } from "astro:assets";
import Placeholder from "@/images/gradients/1.jpeg";
import One from "@/images/brandsLight/1.svg";
import Two from "@/images/brandsLight/2.svg";
import Three from "@/images/brandsLight/3.svg";
import Four from "@/images/brandsLight/4.svg";
// Fundations
import Logo from "@/components/assets/Logo.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Checkbox from "@/components/fundations/inputs/Checkbox.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
// Icons
import GoogleColor from "@/components/fundations/icons/GoogleColor.astro";
const logos = [
  {
    src: One,
    width: 158,
    height: 48,
  },
  {
    src: Two,
    width: 158,
    height: 48,
  },
  {
    src: Three,
    width: 158,
    height: 48,
  },
  {
    src: Four,
    width: 158,
    height: 48,
  },
];
---

<div class="flex h-screen">
  <div
    class="flex items-center justify-center w-full p-8 bg-white dark:bg-zinc-900 lg:w-2/3"
  >
    <div
      class="w-full max-w-md py-24 lg:py-32 bg-white dark:bg-zinc-900 rounded-xl shadow-lg p-8"
    >
      <div>
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-zinc-900 dark:text-zinc-100"
        >
          Sign in
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-zinc-500 dark:text-zinc-400 text-balance"
        >
          Welcome back. Enter your email and password like you haven’t forgotten
          them for the 12th time this week.
        </Text>
      </div>
      <form class="mt-10 space-y-4">
        <TextInput
          id="email"
          name="email"
          label="Email Address"
          type="email"
          variant="default"
          size="base"
          placeholder="you@example.com"
        />
        <TextInput
          id="password"
          name="password"
          label="Password"
          type="password"
          passwordToggle={true}
          size="base"
          placeholder="••••••••"
          required
        />
        <Checkbox
          id="login-remember"
          name="login-remember"
          label="Remember me for 30 days"
          variant="default"
          size="base"
        />
        <Button fullWidth variant="accent" size="base">
          Sign in with email
        </Button>
        <Button
          variant="outline"
          size="base"
          gap="sm"
          class="flex items-center w-full"
        >
          <GoogleColor slot="left-icon" class="size-4" />
          Sign in with Google
        </Button>
      </form>
      <Text tag="p" variant="textXS" class="mt-4 font-medium text-zinc-500">
        Dont' have an account?
        <a href="#_" class="font-medium text-blue-500 hover:text-zinc-500">
          Sign up
        </a>
      </Text>
    </div>
  </div>
  <div class="relative hidden overflow-hidden lg:block lg:w-1/3 lg:order-first">
    <Image
      width={1200}
      height={1200}
      src={Placeholder}
      alt="Background"
      aria-hidden="true"
      class="object-cover object-center w-full h-full bg-zinc-50"
    />
    <div
      aria-hidden="true"
      class="absolute inset-0 pointer-events-none bg-blue-700/50"
    >
    </div>
    <div class="absolute inset-0 flex flex-col items-start justify-between p-8">
      <div>
        <a href="#_">
          <span class="sr-only">Back to home</span>
          <Logo class="h-12 mx-auto text-white md:mx-0" aria-hidden="true" /></a
        >
        <Text
          tag="p"
          variant="textXL"
          class="mt-12 font-medium text-white text-shadow-sm"
        >
          Ready when you are. <br /> Let’s get you logged in.
        </Text>
      </div>
      <div class="flex items-center justify-center w-full gap-8">
        {
          logos.map((logo) => (
            <Image
              class="max-h-3 "
              src={logo.src}
              alt="#_"
              width={logo.width}
              height={logo.height}
            />
          ))
        }
      </div>
    </div>
  </div>
</div>
