---
export const description = "Task Management Empty State";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
  <!-- copy:start -->
  <div>
    <div class="flex items-center justify-between">
      <Text tag="h3" variant="textBase" class="font-medium">My tasks</Text>
      <Button size="xs" variant="accent"> Add Task </Button>
    </div>
    <div class="mt-2 grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div
        class="flex flex-col h-64 p-4 bg-white border border-zinc-100 rounded-2xl"
      >
        <Text tag="h3" variant="textBase" class="font-medium text-red-500"
          >To do</Text
        >
        <div class="flex items-center justify-center flex-grow mt-2">
          <Text tag="p" variant="textSM" class="text-center text-zinc-400"
            >No tasks yet</Text
          >
        </div>
      </div>
      <div
        class="flex flex-col h-64 p-4 bg-white border border-zinc-100 rounded-2xl b"
      >
        <Text tag="h3" variant="textBase" class="font-medium text-yellow-500"
          >In progress</Text
        >
        <div class="flex items-center justify-center flex-grow mt-2">
          <Text tag="p" class="text-center text-zinc-400"
            >No tasks in progress</Text
          >
        </div>
      </div>
      <div
        class="flex flex-col h-64 p-4 bg-white border border-zinc-100 rounded-2xl"
      >
        <Text tag="h3" variant="textBase" class="font-medium text-green-500"
          >Completed</Text
        >
        <div class="flex items-center justify-center flex-grow mt-2">
          <Text tag="p" class="text-center text-zinc-400"
            >No completed tasks</Text
          >
        </div>
      </div>
    </div>
    <div class="mt-8 text-center">
      <Text tag="p" variant="textSM" class="text-zinc-600">
        Need inspiration? Try one of these starter tasks:
      </Text>
      <div class="flex flex-col justify-center mt-4 sm:flex-row gap-2">
        <Button size="xs" variant="alternative"> Plan project </Button>
        <Button size="xs" variant="alternative"> Set up meeting </Button>
        <Button size="xs" variant="alternative"> Create timeline </Button>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
