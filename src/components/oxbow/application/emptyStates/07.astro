---
export const description = "Empty playlist";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
  <div class="max-w-md mx-auto text-center">
    <div>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-music-x size-6 mx-auto text-accent-600"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M3 17a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path><path d="M9 17v-13h10v9"
        ></path><path d="M9 8h10"></path><path d="M22 22l-5 -5"></path><path
          d="M17 22l5 -5"></path></svg
      >
      <Text tag="h3" variant="textBase" class="text-base-900 font-medium mt-8">
        Your playlist is empty
      </Text>
      <Text
        tag="p"
        variant="textSM"
        class="mt-2 text-base-500 font-medium text-balance  mx-auto"
      >
        Start adding some tracks to create your perfect mix!
      </Text>
     
      <div class="flex flex-col gap-2 mt-8 max-w-sm mx-auto">
        <div class="space-y-1">
          <Text
            for="input-right-icon"
            tag="label"
            variant="textSM"
            class="sr-only"
          >
            Search
          </Text>
          <div class="relative">
            <input
              type="text"
              id="input-right-icon"
              name="input-right-icon"
              placeholder="Search for songs..."
              class="block w-full h-10 pl-4 pr-10 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-lg appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
            />
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-search absolute right-3 top-1/2 transform -translate-y-1/2 size-5 text-base-400"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path><path
                d="M21 21l-6 -6"></path></svg
            >
          </div>
        </div>
        <Button class="w-auto" size="base" variant="accent"> Browse popular tracks </Button>
      </div>
    </div>
  </div>
</div>
