---
export const description = "Empty playlist";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---

<div
  class="flex items-center justify-center p-8 py-24 bg-white dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div class="text-center">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="mx-auto icon icon-tabler icons-tabler-outline icon-tabler-music-x size-6 text-zinc-600"
      ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M3 17a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path><path d="M9 17v-13h10v9"
      ></path><path d="M9 8h10"></path><path d="M22 22l-5 -5"></path><path
        d="M17 22l5 -5"></path></svg
    >
    <Text
      tag="h3"
      variant="textBase"
      class="mt-8 font-medium text-zinc-900 dark:text-white"
    >
      Your playlist is empty
    </Text>
    <Text
      tag="p"
      variant="textSM"
      class="mx-auto mt-2 font-medium text-zinc-500 dark:text-zinc-400 text-balance"
    >
      Start adding some tracks to create your perfect mix!
    </Text>

    <div class="flex flex-col max-w-sm mx-auto mt-8 gap-2">
      <TextInput
        id="search-left"
        name="search-left"
       
        type="search"
        iconPosition="left"
        variant="default"
        size="base"
        placeholder="Search with left icon"
      />
      <Button class="w-auto" size="base" variant="default">
        Browse popular tracks
      </Button>
    </div>
  </div>
  <!-- copy:end -->
</div>
