---
export const description = "Enhanced file upload empty state";

import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<div class="flex flex-col items-center justify-center p-8">
  <!-- copy:start -->
  <Text tag="h3" variant="textSM" class="font-medium text-center text-zinc-900"
    >Upload Your Files</Text
  >
  <div
    class="flex flex-col items-center justify-center w-full max-w-lg mx-auto mt-4"
  >
    <label
      for="dropzone-file"
      class="flex flex-col items-center justify-center w-full py-6 bg-white border border-dashed rounded-lg cursor-pointer border-zinc-200 hover:bg-zinc-50 transition-colors duration-200 ease-in-out"
    >
      <div class="flex flex-col items-center justify-center p-8">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-cloud-upload size-8 text-blue-500"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path
            d="M7 18a4.6 4.4 0 0 1 0 -9a5 4.5 0 0 1 11 2h1a3.5 3.5 0 0 1 0 7h-1"
          ></path>
          <path d="M9 15l3 -3l3 3"></path>
          <path d="M12 12l0 9"></path>
        </svg>
        <Text tag="p" variant="textSM" class="mt-2 font-semibold text-zinc-500">
          Click to upload or drag and drop
        </Text>
        <Text tag="p" variant="textXs" class="mt-2 text-zinc-400">
          SVG, PNG, JPG, or GIF (MAX. 800x400px)
        </Text>
      </div>
      <input id="dropzone-file" type="file" class="hidden" multiple />
    </label>

    <div class="w-full bg-zinc-200 rounded-full h-2.5 mt-4">
      <div class="bg-blue-500 h-2.5 rounded-full" style="width: 0%"></div>
    </div>
    <div class="flex items-center justify-between w-full mt-8 gap-4">
      <Text tag="p" variant="textXS" class="w-1/2 text-zinc-400">
        Maximum file size: 5MB | Up to 10 files
      </Text>
      <Button size="xs" variant="accent"> Browse files </Button>
    </div>

    <div class="w-full mt-8">
      <Text tag="h3" variant="textSM" class="mb-2 font-semibold text-zinc-700">
        Recently Uploaded
      </Text>
      <div class="p-4 text-center border-t rounded-lg border-zinc-100">
        <Text tag="p" variant="textSM" class="text-zinc-500"
          >No files uploaded yet</Text
        >
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
