---
export const description = "No Results Found State";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---
<div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
  <div class="max-w-xl mx-auto text-center">
    <div>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-search size-6 mx-auto text-accent-600"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path><path
          d="M21 21l-6 -6"></path></svg
      >
      <Text tag="h3" variant="textBase" class="text-base-900 font-medium mt-8">
        No Matches Found
      </Text>
      <Text
        tag="p"
        variant="textSM"
        class="mt-2 text-base-500 font-medium text-balance w-2/3 mx-auto"
      >
      We couldn't find any results for your search. Try adjusting your
      keywords or filters.
      </Text>
      <div class="flex mt-4 flex-col sm:flex-row gap-3 justify-center">
        <Button class="" size="xs" variant="accent"> Clear Filters </Button>
        <Button class="" size="xs" variant="muted"> Expand Search </Button>
      </div>
    </div>
  </div>
</div>
