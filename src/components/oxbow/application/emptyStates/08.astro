---
export const description = "Insights data not available state";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/Buttons/Button.astro";
---

<div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
  <div class="max-w-xl mx-auto">
    <div class="flex justify-between items-center">
      <Text tag="h3" variant="textBase" class="font-medium">Data Insights</Text>
      <div class="flex gap-2">
        <Button size="xs" variant="muted">Day</Button>
        <Button size="xs" variant="muted">Week</Button>
        <Button size="xs" variant="muted">Month</Button>
      </div>
    </div>
    <div
      class="p-12 py-20 bg-base-50 rounded-lg flex mt-2 items-center justify-center"
    >
      <div class="text-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-chart-column text-accent-600 size-6 mx-auto"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M4 20h3"></path><path d="M17 20h3"></path><path d="M10.5 20h3"
          ></path><path d="M4 16h3"></path><path d="M17 16h3"></path><path
            d="M10.5 16h3"></path><path d="M4 12h3"></path><path d="M17 12h3"
          ></path><path d="M10.5 12h3"></path><path d="M4 8h3"></path><path
            d="M17 8h3"></path><path d="M4 4h3"></path></svg
        >
        <Text tag="p" variant="textSM" class="text-base-600"
          >No data available for the selected period</Text
        >
      </div>
    </div>
    <div class="flex justify-between items-center mt-2">
      <Button size="xs" variant="alternative"> Import data </Button>
      <Button size="xs" variant="accent"> Generate sample data </Button>
    </div>
  </div>
</div>
