---
export const description = "Project creation empty state";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
---

<div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
  <div class="max-w-xl mx-auto">
    <div
      class="flex flex-col items-center justify-center min-h-[400px] text-center"
    >
      <div class="size-24 mb-6 relative">
        <div class="absolute inset-0 bg-base-100 rounded-full opacity-10"></div>
        <div
          class="absolute inset-4 border-2 border-base-300 rounded-lg rotate-6"
        >
        </div>
        <div
          class="absolute right-0 bottom-0 w-8 h-8 bg-black rounded-full flex items-center justify-center"
        >
          <span class="text-white text-xl">+</span>
        </div>
      </div>
      <Text tag="h3" variant="textBase" class="text-base-900 font-medium">
        Project Files
      </Text>
      <Text
        tag="p"
        variant="textSM"
        class="mt-2 text-base-500 font-medium text-balance w-2/3"
      >
        Begin your journey by creating a new workspace for your team's projects
        and files.
      </Text>

      <Button class="mt-8 mx-auto" gap="xs" size="sm" variant="accent">
        <Plus size="sm" slot="icon" slot="left-icon" />
        Create projects
      </Button>
    </div>
  </div>
</div>
