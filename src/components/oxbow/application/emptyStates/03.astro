---
export const description = "No data state";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
const features = [
  {
    title: "Track Progress",
    description: "Monitor team activity and project milestones in real-time",
  },
  {
    title: "Generate Reports",
    description: "Get insights with automated weekly and monthly reports",
  },
];
---

<div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
  <div class="max-w-xl mx-auto text-center">
    <div class="h-full p-8 pb-0 overflow-hidden bg-zinc-50 rounded-2xl">
      <img
        src="/widgets/activity2.svg"
        class="object-center w-full -mb-12 bg-white shadow rounded-t-2xl"
        alt=""
      />
    </div>

    <div>
      <div class="max-w-lg py-12 mx-auto">
        <div>
          <Text tag="h3" variant="textBase" class="font-medium text-zinc-900">
            Your activity feed is empty
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 font-medium text-zinc-500 text-balance"
          >
            Start tracking your team's progress. Your activity data will appear
            here once you begin collaborating.
          </Text>
        </div>

        <div class="flex flex-col justify-center mt-4 sm:flex-row gap-3">
          <Button class="" size="xs" variant="accent">
            Set Up Dashboard
          </Button>
          <Button class="" size="xs" variant="muted"> View Tutorial </Button>
        </div>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        {
          features.map((feature, index) => (
            <div>
              <Text tag="h3" variant="textBase" class="font-medium">
                {feature.title}
              </Text>
              <Text tag="p" variant="textSM" class="mt-1  text-zinc-600">
                {feature.description}
              </Text>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
