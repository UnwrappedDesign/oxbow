---
export const excludeFromObfuscation = [
  'bg-white',
  'text-accent-500',
  'border-b-2',
  'border-accent-500'
];

export const description = "Contextual Empty States";

import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
---

<section>
  <div class="relative px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div x-data="{ tab: 'tab1' }">
      <ul class="flex text-sm border-b gap-4 text-base-500 border-base-200">
        <li class="-mb-px">
          <a
            @click.prevent="tab = 'tab1'"
            href="#_"
            class="inline-block py-2 font-medium bg-white border-b-2 text-accent-500 border-accent-500"
            :class="{ ' bg-white text-accent-500 border-b-2 border-accent-500' : tab === 'tab1' }"
          >
            Marketing</a
          >
        </li>
        <li class="-mb-px">
          <a
            @click.prevent="tab = 'tab2'"
            href="#_"
            class="inline-block py-2 font-medium"
            :class="{ ' bg-white text-accent-500 border-b-2 border-accent-500' : tab === 'tab2' }"
          >
            Application</a
          >
        </li>
        <li class="-mb-px">
          <a
            @click.prevent="tab = 'tab3'"
            href="#_"
            class="inline-block py-2 font-medium"
            :class="{ ' bg-white text-accent-500 border-b-2 border-accent-500' : tab === 'tab3' }"
          >
            ECommerce</a
          >
        </li>
      </ul>
      <div class="max-w-xl p-8 mx-auto text-left content">
        <div x-show="tab==='tab1'" class="text-base-500">
          <main>
            <div class="flex flex-col items-center justify-center text-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-chart-histogram size-6 text-accent-600"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M3 3v18h18"></path><path d="M20 18v3"></path><path
                  d="M16 16v5"></path><path d="M12 13v8"></path><path
                  d="M8 16v5"></path><path d="M3 11c6 0 5 -5 9 -5s3 5 9 5"
                ></path></svg
              >
              <Text
                tag="h3"
                variant="textBase"
                class="mt-8 font-medium text-base-900"
              >
                No Marketing Data
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="w-2/3 mt-2 font-medium text-base-500 text-balance"
              >
                Start creating marketing campaigns to see your performance
                metrics here.
              </Text>

              <Button class="mx-auto mt-8" gap="xs" size="sm" variant="accent">
                <Plus size="sm" slot="icon" slot="left-icon" />
                Create Campaign
              </Button>
            </div>
          </main>
        </div>
        <div x-show="tab==='tab2'" class="text-base-500" style="display: none">
          <main>
            <div class="flex flex-col items-center justify-center text-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-stack-front size-6 text-accent-600"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M12 4l-8 4l8 4l8 -4l-8 -4"
                  fill="currentColor"></path><path d="M8 14l-4 2l8 4l8 -4l-4 -2"
                ></path><path d="M8 10l-4 2l8 4l8 -4l-4 -2"></path></svg
              >
              <Text
                tag="h3"
                variant="textBase"
                class="mt-8 font-medium text-base-900"
              >
                No Application Data
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="w-2/3 mt-4 font-medium text-base-500 text-balance"
              >
                Build and integrate applications to view your usage statistics.
              </Text>

              <Button class="mx-auto mt-8" gap="xs" size="sm" variant="accent">
                <Plus size="sm" slot="icon" slot="left-icon" />
                Create Application
              </Button>
            </div>
          </main>
        </div>
        <div x-show="tab==='tab3'" class="text-base-500" style="display: none">
          <main>
            <div class="flex flex-col items-center justify-center text-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-stack-front size-6 text-accent-600"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M12 4l-8 4l8 4l8 -4l-8 -4"
                  fill="currentColor"></path><path d="M8 14l-4 2l8 4l8 -4l-4 -2"
                ></path><path d="M8 10l-4 2l8 4l8 -4l-4 -2"></path></svg
              >
              <Text
                tag="h3"
                variant="textBase"
                class="mt-8 font-medium text-base-900"
              >
                No ECommerce Data
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="w-2/3 mt-4 font-medium text-base-500 text-balance"
              >
                Start adding products to your store to track sales and
                inventory.
              </Text>

              <Button class="mx-auto mt-8" gap="xs" size="sm" variant="accent">
                <Plus size="sm" slot="icon" slot="left-icon" />
                Add Product
              </Button>
            </div>
          </main>
        </div>
      </div>
    </div>
  </div>
</section>
