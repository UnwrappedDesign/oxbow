---
import Button from "@/components/fundations/buttons/Button.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div class="relative px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="text-center lg:text-balance max-w-2xl mx-auto">
      <Text
        tag="h3"
        variant="textXL"
        class="text-base-900 font-medium">
        Begin by crafting your first survey question
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 text-base-500 font-medium">
        Add a question to your survey that participants will see as they begin.
      </Text>
      <ul
        class="mt-4 text-sm text-base-500 flex flex-col md:flex-row gap-4 justify-center">
        <li class="flex gap-2 items-center">
          <CircleCheck
            size="sm"
            slot="icon"
          />
          <Text
            tag="p"
            variant="textSM"
            class="text-base-500 font-medium">
            Age group
          </Text>
        </li>
        <li class="flex gap-2 items-center">
          <CircleCheck
            size="sm"
            slot="icon"
          />  <Text
            tag="p"
            variant="textSM"
            class="text-base-500 font-medium">
            Primary interests
          </Text>
        </li>
        <li class="flex gap-2 items-center">
          <CircleCheck
            size="sm"
            slot="icon"
          />  <Text
            tag="p"
            variant="textSM"
            class="text-base-500 font-medium">
            Location
          </Text>
        </li>
      </ul>
      <Button
        class="mt-8 mx-auto"
        gap="xs"
        size="sm"
        variant="accent">
        <Plus
          size="sm"
          slot="icon"
          slot="left-icon"
        />
        Add a new question
      </Button>
    </div>
  </div>
</section>
