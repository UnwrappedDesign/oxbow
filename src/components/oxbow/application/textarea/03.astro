---
export const description = "Resizable textarea";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex flex-col justify-center p-8 mx-auto">
  <!-- copy:start -->
  <div class="w-full space-y-1">
    <Text
      for="resizable-textarea"
      tag="label"
      variant="textSM"
      class="font-medium text-zinc-500"
    >
      Resizable textarea
    </Text>
    <textarea
      id="resizable-textarea"
      rows="4"
      placeholder="Resize me"
      class="block w-full px-4 py-2 text-sm bg-white border border-transparent rounded-lg appearance-none resize text-blue-700 duration-300 ring-1 ring-zinc-200 placeholder-zinc-400 focus:border-zinc-300 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
    ></textarea>
  </div>
  <!-- copy:end -->
</div>
