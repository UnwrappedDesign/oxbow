---
export const description = "Textarea with Inline Tags";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<div
  class="flex flex-wrap items-end justify-center max-w-md py-12 mx-auto gap-4"
>
  <div
    class="w-full space-y-2"
    x-data="{ text: '', tags: ['#Important', '#Todo'] }"
  >
    <div>
      <Text
        for="inline-tags-textarea"
        tag="label"
        variant="textSM"
        class="font-medium text-gray-500"
      >
        Inline tags
      </Text>
      <textarea
        id="inline-tags-textarea"
        x-model="text"
        rows="4"
        placeholder="Type and use inline tags"
        class="block w-full px-4 py-2 text-sm bg-white border border-transparent rounded-lg appearance-none text-blue-700 duration-300 ring-1 ring-gray-200 placeholder-gray-400 focus:border-gray-300 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
      ></textarea>
    </div>
    <div class="flex mt-2 gap-2">
      <template x-for="tag in tags" :key="tag">
        <Button
          @click="text += tag + ' '"
          x-text="tag"
          type="button"
          variant="muted"
          size="xs"
        >
          Clear
        </Button>
      </template>
    </div>
  </div>
</div>
