---
export const description = "Disabled textarea";
import Text from "@/components/fundations/typography/Text.astro";
---
<div
  class="flex flex-wrap items-end justify-center max-w-md py-12 mx-auto gap-4"
>
<div class="w-full space-y-1">
    <Text
      for="disabled-textarea"
      tag="label"
      variant="textSM"
      class="font-medium text-base-500"
    >
      Disabled textarea
    </Text>
    <textarea
      id="disabled-textarea"
      rows="4"
      placeholder="This textarea is disabled"
      class="block w-full px-4 py-2 text-sm bg-gray-100 border border-transparent rounded-lg appearance-none text-base-400 ring-1 ring-base-200 placeholder-base-400 focus:outline-none sm:text-sm"
      disabled
    ></textarea>
  </div>
  
</div>

