---
export const description = "Disabled textarea";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex flex-col justify-center p-8 mx-auto bg-white dark:bg-zinc-900">
  <div class="max-w-sm w-full mx-auto">
    <!-- copy:start -->
    <div class="w-full space-y-1">
      <Text
        for="disabled-textarea"
        tag="label"
        variant="textSM"
        class="font-medium text-zinc-500"
      >
        Disabled textarea
      </Text>
      <textarea
        id="disabled-textarea"
        rows="4"
        placeholder="This textarea is disabled"
        class="block w-full px-4 py-2 text-sm bg-zinc-100 dark:bg-zinc-900 border border-transparent rounded-lg appearance-none text-zinc-400 dark:text-blue-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:outline-none sm:text-sm"
        disabled></textarea>
    </div>
    <!-- copy:end -->
  </div>
</div>
