---
export const description = "Readonly textarea";
import Text from "@/components/fundations/typography/Text.astro";
---


<div
  class="flex flex-wrap max-w-md items-end justify-center gap-4 py-12 mx-auto"
>
<div class="space-y-1 w-full">
    <Text
      for="readonly-textarea"
      tag="label"
      variant="textSM"
      class="text-base-500 font-medium"
    >
      Read-only textarea
    </Text>
    <textarea
      id="readonly-textarea"
      rows="4"
      placeholder="You cannot edit this"
      class="block w-full px-4 py-2 text-sm text-accent-700 bg-gray-50 border border-transparent rounded-lg appearance-none ring-1 ring-base-200 placeholder-base-400 focus:outline-none sm:text-sm"
      readonly
    ></textarea>
  </div>
  
</div>

