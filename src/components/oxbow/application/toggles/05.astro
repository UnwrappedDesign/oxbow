---
export const description = "Toggle with Text Indicators";
---

<div
  class="flex flex-col justify-center p-14 mx-auto bg-white dark:bg-zinc-900"
>
  <div class="max-w-sm mx-auto w-full">
    <!-- copy:start -->
    <div
      class="flex items-center justify-between p-4 border rounded-lg border-zinc-300 dark:border-zinc-700"
    >
      <div class="flex items-start gap-3">
        <img
          src="/images/forms/polar.svg"
          alt="Payment Icon"
          class="rounded size-8"
        />
        <div>
          <p class="text-sm font-medium text-zinc-500 dark:text-zinc-300">
            Payment Method <span class="text-zinc-400 dark:text-zinc-500"
              >(Credit Card)</span
            >
          </p>
          <p class="text-sm text-zinc-400 dark:text-zinc-500">
            Use this option for recurring payments.
          </p>
        </div>
      </div>
      <label class="relative inline-flex items-center cursor-pointer">
        <input type="checkbox" class="sr-only peer" />
        <div
          class="h-6 rounded-full w-11 bg-zinc-300 dark:bg-zinc-700 peer peer-checked:bg-blue-600"
        >
        </div>
        <div
          class="w-5 h-5 bg-white dark:bg-zinc-200 rounded-full shadow absolute left-1 top-0.5 transition-transform peer-checked:translate-x-5"
        >
        </div>
      </label>
    </div>
    <!-- copy:end -->
  </div>
</div>
