---
export const description = "Toggle with Labels";
---

<div
  class="flex flex-col justify-center p-14 mx-auto bg-white dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    class="flex items-center gap-2 justify-center flex-col"
    x-data="{ enabled: false }"
  >
    <span class="text-sm font-medium text-zinc-500 dark:text-zinc-300">Off</span
    >
    <label class="relative inline-flex items-center cursor-pointer">
      <input type="checkbox" x-model="enabled" class="sr-only peer" />
      <div
        class="h-6 rounded-full w-11 bg-zinc-300 dark:bg-zinc-700 peer peer-checked:bg-blue-600"
      >
      </div>
      <div
        class="w-5 h-5 bg-white dark:bg-zinc-200 rounded-full shadow absolute left-1 top-0.5 transition-transform peer-checked:translate-x-5"
      >
      </div>
    </label>
    <span class="text-sm font-medium text-zinc-500 dark:text-zinc-300">On</span>
  </div>
  <!-- copy:end -->
</div>
