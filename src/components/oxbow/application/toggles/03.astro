---
export const description = "Outline Toggle";
---

<div
  class="flex flex-col justify-center mx-auto bg-white p-14 dark:bg-zinc-900"
>
  <!-- copy:start -->
  <div
    class="flex flex-col items-center justify-center gap-2"
    x-data="{ enabled: false }"
  >
    <label class="relative inline-flex items-center cursor-pointer">
      <input type="checkbox" x-model="enabled" class="sr-only peer" />
      <div
        class="w-12 h-6 border rounded-full border-zinc-300 dark:border-zinc-600 peer peer-checked:border-blue-600"
      >
      </div>
      <div
        class="w-5 h-5 bg-blue-600 rounded-full shadow absolute left-1 top-0.5 transition-transform peer-checked:bg-blue-600 peer-checked:translate-x-6"
      >
      </div>
    </label>
    <span
      class="text-sm font-medium text-zinc-500 dark:text-zinc-300"
      x-text="enabled ? 'Active' : 'Inactive'"></span>
  </div>
  <!-- copy:end -->
</div>
