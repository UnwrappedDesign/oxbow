---
export const description = "Toggle with Text Indicators";
export const excludeFromObfuscation = [
  "w-1/2",
  "translate-x-0",
  "translate-x-full",
  "text-blue-600",
  "text-zinc-500",
  "hover:text-blue-500",
];
---

<div
  class="flex flex-col justify-center mx-auto bg-white p-14 dark:bg-zinc-900"
>
  <!-- copy:start -->

  <div
    class="flex flex-col items-center justify-center"
    x-data="{duration: 'monthly'}"
  >
    <div
      aria-labelledby="pricing-toggle"
      class="relative z-0 inline-flex justify-center w-full p-1 mx-auto mt-8 overflow-hidden bg-white shadow dark:bg-zinc-800 ring-1 ring-zinc-200 dark:ring-zinc-700 ring-offset-2 dark:ring-offset-black gap-4 lg:mx-0 rounded-md max-w-52"
    >
      <!-- Sliding background -->
      <div
        class="absolute inset-0 bg-zinc-50 dark:bg-zinc-700 rounded-md transition-transform duration-200 ease-in-out"
        :class="duration === 'monthly' ? 'w-1/2 translate-x-0' : 'w-1/2 translate-x-full'"
      >
      </div>

      <!-- Monthly Pricing Button -->
      <button
        id="monthly-pricing-button"
        class="relative z-10 flex items-center justify-center w-full h-6 px-2 text-xs font-medium focus:outline-none transition-colors duration-300"
        :class="duration === 'monthly' ? 'text-blue-600 dark:text-blue-400' : 'text-zinc-500 dark:text-zinc-400 hover:text-blue-500'"
        @click="duration = 'monthly'"
        type="button"
        :aria-pressed="duration === 'monthly'"
      >
        Monthly
      </button>

      <!-- Annual Pricing Button -->
      <button
        id="annual-pricing-button"
        class="relative z-10 flex items-center justify-center w-full h-6 px-2 text-xs font-medium focus:outline-none transition-colors duration-300"
        :class="duration === 'annual' ? 'text-blue-600 dark:text-blue-400' : 'text-zinc-500 dark:text-zinc-400 hover:text-blue-500'"
        @click="duration = 'annual'"
        type="button"
        :aria-pressed="duration === 'annual'"
      >
        Annual
      </button>
    </div>
  </div>
  <!-- copy:end -->
</div>
