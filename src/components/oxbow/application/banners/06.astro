---
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import CircleX from "@/components/fundations/icons/CircleX.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section class="bg-white dark:bg-black h-full">
  <!-- copy:start -->
  <div class="absolute inset-x-0 top-0 w-fit mx-auto lg:px-8 lg:pt-4">
    <div
      class="relative isolate flex items-start lg:items-center gap-x-6 overflow-hidden lg:rounded-lg bg-zinc-950 dark:bg-zinc-800 px-6 py-2.5 sm:px-3.5"
    >
      <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
        <Text
          tag="span"
          variant="textSM"
          class="pr-8 font-medium text-white dark:text-zinc-200 lg:pr-0"
        >
          Free and premium multipage themes and UI Kits crafted with Astro JS,
          and Tailwind CSS.
        </Text>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</section>
