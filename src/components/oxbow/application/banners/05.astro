---
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import CircleX from "@/components/fundations/icons/CircleX.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="pt-36">
  <div class="fixed inset-x-0 bottom-0 max-w-3xl mx-auto lg:px-8 lg:pb-4">
    <div
      class="relative isolate flex items-start lg:items-center gap-x-6 overflow-hidden lg:rounded-lg bg-gray-50 px-6 py-2.5 sm:px-3.5"
    >
      <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
        <Text
          tag="span"
          variant="textSM"
          class="pr-8 font-medium text-gray-500 lg:pr-0"
        >
          Free and premium multipage themes and UI Kits crafted with Astro JS,
          and Tailwind CSS.
        </Text>
      </div>
      <div class="flex justify-end flex-1">
        <IconButton variant="transparentLight" size="sm">
          <CircleX size="base" slot="icon" />
          <span class="sr-only">Close</span>
        </IconButton>
      </div>
    </div>
  </div>
</div>
