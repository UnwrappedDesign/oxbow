---
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import CircleX from "@/components/fundations/icons/CircleX.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section class="h-full bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div class="fixed inset-x-0 bottom-0 mx-auto w-fit lg:px-8 lg:pb-4">
    <div
      class="relative isolate flex items-start lg:items-center gap-x-6 overflow-hidden lg:rounded-lg bg-zinc-50 dark:bg-zinc-900 px-6 py-2.5 sm:px-3.5"
    >
      <Text
        tag="span"
        variant="textSM"
        class="pr-8 font-medium text-zinc-500 dark:text-zinc-200 lg:pr-0"
      >
        Free and premium multipage themes and UI Kits crafted with Astro JS, and
        Tailwind CSS.
      </Text>
    </div>
  </div>
  <!-- copy:end -->
</section>
