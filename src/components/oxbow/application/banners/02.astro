import CircleX from "@/components/fundations/icons/CircleX.astro";
---

<div class="pb-12">
  <!-- copy:start -->
  <div
    class="relative isolate flex lg:items-center justify-between gap-x-6 overflow-hidden bg-stone-700 px-6 py-2.5 sm:px-3.5"
