    <div
      class="flex flex-col w-full lg:flex-row lg:items-center lg:justify-center gap-x-4 gap-y-2 lg:text-center"
    >
      <Text
        tag="span"
        variant="textSM"
        class="pr-8 font-medium text-white lg:pr-0"
      >
        <strong class="font-semibold">Lexington Themes</strong>
