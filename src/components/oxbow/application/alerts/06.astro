---
import Text from "@/components/fundations/typography/Text.astro";
import CircleInfo from "@/components/fundations/icons/CircleInfo.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<div class="flex items-center justify-center p-8">
  <!-- copy:start -->
  <div
    class="relative p-8 text-white bg-zinc-950 rounded-xl ring-1 ring-blue-900 ring-white/5 w-full"
  >
    <div class="flex gap-2">
      <div class="flex-shrink-0">
        <CircleInfo size="base" slot="icon" />
      </div>
      <div>
        <div>
          <Text tag="p" variant="textBase" class="font-medium text-white">
            Neutral alert!
          </Text>
          <Text tag="p" variant="textSM" class="font-medium text-zinc-300">
            A new feature is available. You will be notified when it is ready.
          </Text>
          <div class="flex items-center mt-4 gap-2">
            <Button variant="defaultDark" size="xs"> View Updates </Button>
            <Button variant="alternativeDark" size="xs">
              Remind me later
            </Button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
