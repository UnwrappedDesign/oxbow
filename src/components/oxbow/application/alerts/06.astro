---
import Text from "@/components/fundations/typography/Text.astro";
import CircleInfo from "@/components/fundations/icons/CircleInfo.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<section>
  <div
    class="items-center px-8 py-12 mx-auto max-w-7xl lg:px-16 md:px-12 lg:py-24">
    <div
      class="relative bg-base-950 text-white rounded-xl p-8 ring-1 ring-accent-900 ring-white/5">
      <div class="flex gap-2">
        <div class="flex-shrink-0">
          <CircleInfo
            size="base"
            slot="icon"
          />
        </div>
        <div>
          <Text
            tag="p"
            darkMode={true}
            variant="featureListItemSmall">
            Dark alert!
          </Text>
          <Text
            class="mt-2"
            tag="p"
            darkMode={true}
            variant="body">
            A new feature is available. You will be notified when it is ready.
          </Text>
          <div class="mt-4 flex gap-2 items-center">
            <Button
              variant="accentDark"
              size="xs">
              View Updates
            </Button>
            <Button
              variant="alternativeDark"
              size="xs">
              Remind me later
            </Button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
