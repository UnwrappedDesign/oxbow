---
import Text from "@/components/fundations/typography/Text.astro";
import CircleInfo from "@/components/fundations/icons/CircleInfo.astro";
---

<div class="flex items-center justify-center p-8 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div
    class="relative w-full p-8 text-white bg-zinc-950 dark:bg-zinc-800 dark:text-zinc-200 rounded-xl ring-1 ring-blue-900 ring-white/5 dark:ring-zinc-700"
  >
    <div class="flex gap-2">
      <div class="flex-shrink-0">
        <CircleInfo size="base" slot="icon" />
      </div>
      <div>
        <div>
          <Text tag="p" variant="textBase" class="font-medium text-white">
            Neutral alert!
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="font-medium text-zinc-300 dark:text-zinc-300"
          >
            A new feature is available. You will be notified when it is ready.
          </Text>
        </div>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
