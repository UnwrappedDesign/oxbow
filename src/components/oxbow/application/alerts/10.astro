---
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import CircleX from "@/components/fundations/icons/CircleX.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="flex items-center justify-center p-8 py-24 relative">
  <!-- copy:start -->
  <div
    x-data="{ isVisible: true }"
    x-show="isVisible"
    x-transition
    class="absolute top-0 right-0 w-5/6 max-w-sm m-8 md:w-full"
  >
    <div
      role="alert"
      aria-live="polite"
      aria-atomic="true"
      class="p-4 shadow-lg rounded-xl bg-zinc-950 ring-1 ring-zinc-200"
    >
      <div class="flex flex-row">
        <div class="px-2">
          <CircleCheck class="text-emerald-400" size="base" slot="icon" />
        </div>
        <div class="ml-2 mr-6">
          <Text tag="p" variant="textBase" class="font-medium text-white">
            Successfully Saved!
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 font-medium text-zinc-300">
            Anyone with a link has access.
          </Text>
        </div>
        <IconButton
          aria-label="Dismiss notification"
          class="ml-auto"
          @click="isVisible = false"
          variant="transparentDark"
          size="sm"
        >
          <CircleX size="base" slot="icon" />
          <span class="sr-only">Close</span>
        </IconButton>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
