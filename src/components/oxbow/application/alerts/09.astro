<section>
  <div
    class="items-center px-8 py-12 mx-auto max-w-7xl lg:px-16 md:px-12 lg:py-24">
    <div
      class="fixed bottom-0 right-0 m-8 w-5/6 md:w-full max-w-sm"
      x-data="{ isVisible: true }"
      x-show="isVisible"
      x-transition>
      <div
        role="alert"
        aria-live="polite"
        aria-atomic="true"
        class="rounded-xl bg-white shadow-lg ring-1 ring-black ring-opacity-5 p-4">
        <div class="flex flex-row">
          <div class="px-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="icon icon-tabler icons-tabler-filled icon-tabler-circle-check size-6 text-emerald-500"
              ><path
                stroke="none"
                d="M0 0h24v24H0z"
                fill="none"
              ></path><path
                d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z"
              ></path></svg
            >
          </div>
          <div class="ml-2 mr-6">
            <h3 class="text-base font-medium text-gray-800">
              Successfully Saved!
            </h3>
            <div class="mt-2 text-sm text-gray-700 text-pretty">
              <p>Anyone with a link can now view this file</p>
            </div>
          </div>
          <button
            @click="isVisible = false"
            aria-label="Dismiss notification"
            class="ml-auto text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 rounded">
            <svg
              class="size-5"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true">
              <path
                d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"
              ></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
