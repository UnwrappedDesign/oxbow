---
import IconButton from "@/components/fundations/buttons/IconButton.astro";
import CircleX from "@/components/fundations/icons/CircleX.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
import Text from "@/components/fundations/typography/Text.astro";
---
<section>
  <div
    class="items-center px-8 py-12 mx-auto max-w-7xl lg:px-16 md:px-12 lg:py-24">
    <div
      class="fixed bottom-0 right-0 m-8 w-5/6 md:w-full max-w-sm"
      x-data="{ isVisible: true }"
      x-show="isVisible"
      x-transition>
      <div
        role="alert"
        aria-live="polite"
        aria-atomic="true"
        class="rounded-xl bg-white shadow-lg ring-1 ring-base-200 p-4">
        <div class="flex flex-row">
          <div class="px-2">
            <CircleCheck
              class="text-emerald-500"
              size="base"
              slot="icon"
            />
          </div>
          <div class="ml-2 mr-6">
            <Text
              tag="p"
              variant="textBase"
              class="text-base-900 font-medium">
              Successfully Saved!
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="text-base-500 mt-2 font-medium">
              Anyone with a link has access.
            </Text>
          </div>
          <IconButton
            aria-label="Dismiss notification"
            class="ml-auto"
            @click="isVisible = false"
            variant="transparentLight"
            size="sm">
            <CircleX
              size="base"
              slot="icon"
            />
            <span class="sr-only">Close</span>
          </IconButton>
        </div>
      </div>
    </div>
  </div>
</section>
