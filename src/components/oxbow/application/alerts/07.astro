---
import Text from "@/components/fundations/typography/Text.astro";
import CircleInfo from "@/components/fundations/icons/CircleInfo.astro";
---

<section>
  <div
    class="items-center px-8 py-12 mx-auto max-w-7xl lg:px-16 md:px-12 lg:py-24">
    <div
      class="relative bg-accent-600 text-white rounded-xl p-8 ring-1 ring-white/5">
      <div class="flex gap-2">
        <div class="flex-shrink-0">
          <CircleInfo
            size="base"
            slot="icon"
          />
        </div>
        <div>
          <Text
            tag="p"
            darkMode={true}
            variant="featureListItemSmall">
            Accent alert!
          </Text>
          <Text
            class="mt-2"
            tag="p"
            darkMode={true}
            variant="body">
            A new feature is available. You will be notified when it is ready.
          </Text>
        </div>
      </div>
    </div>
  </div>
</section>
