---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import CircleInfo from "@/components/fundations/icons/CircleInfo.astro";
---

<section>
  <div
    class="items-center px-8 py-12 mx-auto max-w-7xl lg:px-16 md:px-12 lg:py-24"
  >
    <div class="relative p-8 bg-gray-50 text-gray-500 rounded-xl">
      <div class="flex gap-2">
        <div class="flex-shrink-0">
          <CircleInfo size="base" slot="icon" />
        </div>
        <div>
          <Text tag="p" variant="textBase" class="font-medium text-gray-700">
            Neutral alert!
          </Text>
          <Text tag="p" variant="textSM" class="font-medium text-gray-500">
            A new feature is available. You will be notified when it is ready.
          </Text>
          <div class="flex items-center mt-4 gap-2">
            <Button variant="accent" size="xs"> View Updates </Button>
            <Button variant="alternative" size="xs"> Remind me later </Button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
