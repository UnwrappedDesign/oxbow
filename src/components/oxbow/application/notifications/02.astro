---
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="p-8">
  <div
    class="mx-auto flex w-full max-w-md flex-col rounded-xl bg-white shadow-lg ring-1 ring-base-200  divide-y sm:divide-base-200">
    <div class="flex w-full flex-1 items-center p-4">
      <div class="w-full text-balance">
        <Text
          tag="p"
          variant="textLG"
          class="text-base-900 font-medium">
          Join our loyalty program
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="text-base-500 mt-2 font-medium">
          Earn points, unlock exclusive rewards, and enjoy personalized offers
          as a valued member.
        </Text>

        <div class="flex items-center justify-end gap-4 mt-8">
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="hover:text-accent-500 font-medium flex items-center gap-2 text-base-500">
            Join now
          </Text>
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="hover:text-accent-500 font-medium flex items-center gap-2 text-base-500">
            Maybe Later
          </Text>
        </div>
      </div>
    </div>
  </div>
</div>
