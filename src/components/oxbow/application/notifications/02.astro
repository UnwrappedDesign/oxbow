---
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="p-8">
  <!-- copy:start -->
  <div
    class="flex flex-col w-full max-w-md mx-auto bg-white shadow-lg rounded-xl ring-1 ring-zinc-200 divide-y sm:divide-zinc-200"
  >
    <div class="flex items-center flex-1 w-full p-4">
      <div class="w-full text-balance">
        <Text tag="p" variant="textLG" class="font-medium text-zinc-900">
          Join our loyalty program
        </Text>
        <Text tag="p" variant="textSM" class="mt-2 font-medium text-zinc-500">
          Earn points, unlock exclusive rewards, and enjoy personalized offers
          as a valued member.
        </Text>

        <div class="flex items-center justify-end mt-8 gap-4">
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="flex items-center font-medium hover:text-blue-500 gap-2 text-zinc-500"
          >
            Join now
          </Text>
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="flex items-center font-medium hover:text-blue-500 gap-2 text-zinc-500"
          >
            Maybe Later
          </Text>
        </div>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
