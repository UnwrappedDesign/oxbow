---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---
<div class="p-8">
  <div
    class="flex w-full max-w-md mx-auto flex-col rounded-xl bg-white shadow-lg ring-1 ring-base-200  divide-y sm:divide-base-200">
    <div class="flex w-full flex-1 items-center p-4">
      <div class="w-full text-center text-balance">
        <Text
          tag="p"
          variant="textLG"
          class="text-base-900 font-medium">
          We use cookies
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="text-base-500 mt-2 font-medium">
          We use cookies to enhance your browsing experience, serve personalized
          ads or content, and analyze our traffic. By clicking "Accept All", you
          consent to our use of cookies.
        </Text>
      </div>
    </div>
    <div
      class="flex flex-col sm:flex-row justify-center gap-2 items-center p-4 border-t border-base-200">
      <Button
        class="w-full"
        variant="alternative"
        size="sm">
        Customize
      </Button>
      <Button
        class="w-full"
        variant="alternative"
        size="sm">
        Reject
      </Button>
      <Button
        class="w-full"
        variant="accent"
        size="sm">
        Accept
      </Button>
    </div>
  </div>
</div>
