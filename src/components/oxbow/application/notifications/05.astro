---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="p-8 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div
    class="flex flex-col w-full max-w-xl mx-auto bg-white dark:bg-zinc-800 shadow-lg rounded-xl ring-1 ring-zinc-200 dark:ring-zinc-700 divide-y divide-zinc-200 dark:divide-zinc-700"
  >
    <div class="flex items-center flex-1 w-full p-4">
      <div class="w-full text-center text-balance">
        <Text
          tag="p"
          variant="textLG"
          class="font-medium text-zinc-900 dark:text-white"
        >
          We use cookies
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
        >
          We use cookies to enhance your browsing experience, serve personalized
          ads or content, and analyze our traffic. By clicking "Accept All", you
          consent to our use of cookies.
        </Text>
      </div>
    </div>
    <div
      class="flex flex-col items-center justify-center p-4 sm:flex-row gap-2"
    >
      <Button class="w-full" variant="outline" size="sm"> Customize </Button>
      <Button class="w-full" variant="outline" size="sm"> Reject </Button>
      <Button class="w-full" variant="accent" size="sm"> Accept </Button>
    </div>
  </div>
  <!-- copy:end -->
</div>
