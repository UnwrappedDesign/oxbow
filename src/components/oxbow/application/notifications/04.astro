---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="p-8" x-show="showAlert" x-data="{ showAlert: true }" role="alert">
  <!-- copy:start -->
  <div
    class="w-full max-w-xl mx-auto overflow-hidden bg-white shadow-lg rounded-xl ring-1 ring-zinc-200"
  >
    <div>
      <div class="p-4">
        <h2 class="text-lg font-medium tracking-tight text-zinc-900">
          Invite Teammates
        </h2>
        <p class="mt-2 text-sm text-zinc-500">
          Invite your team to review collaborate on this project.
        </p>
        <form class="w-full mt-8 sm:flex sm:max-w-md sm:ml-auto">
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            type="email"
            name="email-address"
            autocomplete="email"
            placeholder="Enter your email"
            aria-placeholder="Enter your email"
            required=""
            class="block w-full h-10 px-4 py-2 text-sm bg-white border border-transparent rounded-lg appearance-none text-stone-700 duration-300 ring-1 ring-zinc-200 placeholder-zinc-400 focus:border-zinc-300 focus:bg-transparent focus:outline-none focus:ring-stone-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
          />
          <div class="mt-2 sm:ml-2 sm:mt-0 sm:flex-shrink-0">
            <Button
              class="w-full sm:w-auto"
              type="submit"
              variant="accent"
              size="base"
            >
              Send invite
            </Button>
          </div>
        </form>
      </div>

      <div
        class="flex items-center justify-end p-4 border-t gap-2 border-zinc-200"
      >
        <Button variant="alternative" size="sm"> Copy link </Button>
        <Button variant="alternative" size="sm"> Embed Code </Button>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
