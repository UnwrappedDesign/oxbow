---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="p-8 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div
    class="w-full max-w-sm mx-auto overflow-hidden bg-white dark:bg-zinc-800 shadow-lg rounded-xl ring-1 ring-zinc-200 dark:ring-zinc-700"
  >
    <div>
      <div class="p-4">
        <h2
          class="text-lg font-medium tracking-tight text-zinc-900 dark:text-white"
        >
          Invite Teammates
        </h2>
        <p class="mt-2 text-sm text-zinc-500 dark:text-zinc-400">
          Invite your team to review collaborate on this project.
        </p>
        <form class="w-full mt-8 sm:flex sm:max-w-md sm:ml-auto">
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            type="email"
            name="email-address"
            autocomplete="email"
            placeholder="Enter your email"
            aria-placeholder="Enter your email"
            required=""
            class="block w-full h-10 px-4 py-2 text-sm bg-white dark:bg-zinc-900 border border-transparent rounded-lg appearance-none text-blue-700 dark:text-blue-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-zinc-600 focus:bg-transparent focus:outline-none focus:ring-blue-500 dark:focus:ring-blue-400 focus:ring-offset-2 focus:ring-2 sm:text-sm"
          />
          <div class="mt-2 sm:ml-2 sm:mt-0 sm:flex-shrink-0">
            <Button
              class="w-full sm:w-auto"
              type="submit"
              variant="accent"
              size="base"
            >
              Send invite
            </Button>
          </div>
        </form>
      </div>
      <div
        class="flex items-center justify-end p-4 border-t gap-2 border-zinc-200 dark:border-zinc-700"
      >
        <Button variant="outline" size="sm"> Copy link </Button>
        <Button variant="outline" size="sm"> Embed Code </Button>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
