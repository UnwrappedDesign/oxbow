---
export const freeComponent = true;
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="p-8 bg-white dark:bg-zinc-900">
  <!-- copy:start -->
  <div
    class="flex flex-col w-full max-w-sm mx-auto bg-white dark:bg-zinc-900 shadow-lg rounded-xl ring-1 ring-zinc-200 dark:ring-zinc-700 divide-y divide-zinc-200 dark:divide-zinc-700"
  >
    <div class="flex items-center flex-1 w-full p-4">
      <div class="w-full text-center text-balance">
        <Text
          tag="p"
          variant="textLG"
          class="font-medium text-zinc-900 dark:text-white"
        >
          Stay Informed with our newsletter
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
        >
          Get the latest updates, exclusive offers, and inspiring content
          delivered to your inbox.
        </Text>
      </div>
    </div>
    <div class="flex w-full">
      <div
        class="flex flex-row w-full divide-zinc-200 divide-x dark:divide-zinc-700"
      >
        <div class="flex flex-1">
          <button
            type="button"
            role="button"
            aria-label="Subscribe to newsletter"
            class="flex items-center justify-center w-full px-4 py-3 text-sm font-medium border border-transparent text-blue-500 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 focus:z-10 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 rounded-bl-xl"
            tabindex="0">Subscribe</button
          >
        </div>
        <div class="flex flex-1">
          <button
            type="button"
            role="button"
            aria-label="Decline newsletter subscription"
            class="flex items-center justify-center w-full px-4 py-3 text-sm font-medium border border-transparent rounded-br-xl text-zinc-500 dark:text-zinc-400 hover:text-zinc-500 dark:hover:text-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400"
            tabindex="0">No, thanks</button
          >
        </div>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
