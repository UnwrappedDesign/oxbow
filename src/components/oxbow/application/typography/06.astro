---
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div
    class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl text-gray-500"
  >
    <div class="flex flex-col gap-8">
      <Text tag="p" variant="textXL">
        This is a paragraph with text XL variant.
      </Text>
      <small class="order-first text-base font-medium text-gray-500">
        Classes: text-lg leading-normal sm:text-xl md:text-2xl
      </small>
    </div>
  </div>
</section>
