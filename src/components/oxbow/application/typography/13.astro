---
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div
    class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl text-gray-500"
  >
    <div class="flex flex-col gap-8">
      <Text tag="h1" variant="display3XL">
        This is an H1 heading with display 3XL variant.
      </Text>
      <small class="order-first text-base font-medium text-gray-500">
        Classes: text-4xl leading-tight tracking-tight sm:text-6xl md:text-7xl
        lg:text-8xl
      </small>
    </div>
  </div>
</section>
