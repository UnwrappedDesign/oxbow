---
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div
    class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl text-base-500">
    <div class="flex flex-col gap-8">
      <Text
        tag="h1"
        variant="display6XL">
        This is an H1 heading with display 6XL variant.
      </Text>
      <small class="order-first text-base font-medium text-base-500">
        Classes: text-4xl leading-tight tracking-tight sm:text-7xl md:text-9xl
        lg:text-[12rem]
      </small>
    </div>
  </div>
</section>
