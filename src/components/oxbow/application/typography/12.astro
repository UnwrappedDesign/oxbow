---
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div
    class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl text-zinc-500"
  >
    <div class="flex flex-col gap-8">
      <Text tag="h1" variant="display2XL">
        This is an H1 heading with display 2XL variant.
      </Text>
      <small class="order-first text-base font-medium text-zinc-500">
        Classes: text-4xl leading-tight tracking-tight sm:text-5xl md:text-6xl
        lg:text-7xl
      </small>
    </div>
  </div>
</section>
