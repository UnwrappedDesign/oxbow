---
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div
    class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl text-zinc-500"
  >
    <div class="flex flex-col gap-8">
      <Text tag="h3" variant="displayLG">
