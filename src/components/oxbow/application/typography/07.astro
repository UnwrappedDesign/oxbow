---
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div
    class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl text-base-500">
    <div class="flex flex-col gap-8">
      <Text
        tag="h6"
        variant="displayXS">
        This is an H6 heading with display XS variant.
      </Text>
      <small class="order-first text-base font-medium text-base-500">
        Classes: text-base leading-tight sm:text-lg md:text-xl lg:text-2xl
      </small>
    </div>
  </div>
</section>
