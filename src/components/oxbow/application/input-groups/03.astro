---
export const description = "Address input group";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
---

<div class="flex items-center justify-center p-8">

  <!-- copy:start -->
  <div class="grid grid-cols-2">
    <TextInput
      id="city"
      name="city"
      label="City"
      placeholder="San Francisco"
      noRoundedRight
      isGrouped
    />
    <TextInput
      id="zip"
      name="zip"
      label="ZIP Code"
      placeholder="94110"
      noRoundedLeft
      isGrouped
    />
  </div>
  <!-- copy:end -->
</div>
