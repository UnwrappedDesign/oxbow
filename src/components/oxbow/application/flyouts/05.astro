---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import ChevronDown from "@/components/fundations/icons/ChevronDown.astro";
import FlyoutLinkBox from "@/components/fundations/wrappers/FlyoutLinkBox.astro";
import ArrowNarrowRight from "@/components/fundations/icons/ArrowNarrowRight.astro";
import Refresh from "@/components/fundations/icons/Refresh.astro";
import FileDots from "@/components/fundations/icons/FileDots.astro";
import LoaderTwo from "@/components/fundations/icons/LoaderTwo.astro";
import Automation from "@/components/fundations/icons/Automation.astro";
---

<div class="h-[60rem]">
  <div class="flex items-center justify-center w-full py-12 mx-auto">
    <!--- When in use set x-data="{ open: false }" -->
    <!-- copy:start -->
    <div class="relative" x-data="{ open: true }">
      <Button
        aria-expanded="false"
        @click="open = !open"
        variant="text"
        size="sm"
        gap="sm"
      >
        <span>Help Center</span>
        <ChevronDown size="sm" slot="right-icon" />
      </Button>
      <div
        x-show="open"
        @click.away="open = false"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 translate-y-1"
        x-transition:enter-end="opacity-100 translate-y-0"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 translate-y-0"
        x-transition:leave-end="opacity-0 translate-y-1"
        class="absolute z-10 flex w-screen px-4 mt-5 -translate-x-1/2 left-1/2 max-w-max"
        style="display: none;"
      >
        <div
          class="flex-auto w-screen max-w-md overflow-hidden bg-white shadow-lg rounded-3xl ring-1 ring-zinc-900/5 lg:max-w-3xl"
        >
          <div class="p-8 grid grid-cols-1 gap-x-0 gap-y-1 lg:grid-cols-2">
            <div>
              <Text
                tag="h3"
                variant="textBase"
                class="font-medium text-zinc-900"
              >
                Benefits
              </Text>
              <div class="mt-2">
                <FlyoutLinkBox
                  href="#_"
                  icon={Refresh}
                  title="Sync across devices"
                  description="Enable syncing across devices"
                />
                <FlyoutLinkBox
                  href="#_"
                  icon={FileDots}
                  title="Create custom documents"
                  description="Stlye your documents with ease"
                />
              </div>
            </div>
            <div>
              <Text
                tag="h3"
                variant="textBase"
                class="font-medium text-zinc-900"
              >
                Enhance Productivity
              </Text>
              <div class="mt-2">
                <FlyoutLinkBox
                  href="#_"
                  badge="New"
                  icon={LoaderTwo}
                  title="  Optimize Processes"
                  description="   Simplify tasks and save time"
                />
                <FlyoutLinkBox
                  href="#_"
                  icon={Automation}
                  title="Automate Efforts"
                  description=" Automate repetitive tasks"
                />
              </div>
            </div>
          </div>
          <dl class="relative p-8 pt-0 grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div
              class="relative flex flex-col justify-between h-full shadow-xl bg-blue-700 rounded-3xl gap-12 group"
            >
              <a class="absolute inset-0" href="#_"> </a>
              <dt
                class="flex items-center justify-between w-full p-8 text-lg font-medium tracking-tight text-white"
              >
                <Text
                  variant="textBase"
                  tag="h3"
                  class="font-medium text-white"
                >
                  Send us an email
                </Text>
                <ArrowNarrowRight
                  class="group-hover:-rotate-45 duration-300"
                  size="base"
                />
              </dt>
              <dd class="p-8 text-base border-t text-zinc-200 border-white/20">
                <Text tag="p" variant="textBase" class="font-medium text-white">
                  Please contact us by sending an email or the contact below.
                </Text>
              </dd>
            </div>
            <div
              class="relative flex flex-col justify-between h-full shadow-xl bg-blue-950 rounded-3xl gap-12 group"
            >
              <a class="absolute inset-0" href="#_"> </a>
              <dt
                class="flex items-center justify-between w-full p-8 text-lg font-medium tracking-tight text-white"
              >
                <Text
                  variant="textBase"
                  tag="h3"
                  class="font-medium text-white"
                >
                  Join our community
                </Text>
                <ArrowNarrowRight
                  class="group-hover:-rotate-45 duration-300"
                  size="base"
                />
              </dt>
              <dd class="p-8 text-base border-t text-zinc-200 border-white/20">
                <Text tag="p" variant="textBase" class="font-medium text-white">
                  Be a part of our welcoming and supportive community on Circle.
                </Text>
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
    <!-- copy:end -->
  </div>
</div>
