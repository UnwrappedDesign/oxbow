---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import ChevronDown from "@/components/fundations/icons/ChevronDown.astro";
import FlyoutLinkBox from "@/components/fundations/wrappers/FlyoutLinkBox.astro";
import ArrowNarrowRight from "@/components/fundations/icons/ArrowNarrowRight.astro";
import Refresh from "@/components/fundations/icons/Refresh.astro";
import FileDots from "@/components/fundations/icons/FileDots.astro";
import LoaderTwo from "@/components/fundations/icons/LoaderTwo.astro";
import Automation from "@/components/fundations/icons/Automation.astro";
---

<div class="h-[60rem]">
  <div class="flex items-center justify-center w-full py-12 mx-auto">
    <!--- When in use set x-data="{ open: false }" -->
    <div
      class="relative"
      x-data="{ open: true }">
      <Button
        aria-expanded="false"
        @click="open = !open"
        variant="text"
        size="sm"
        gap="sm">
        <span>Help Center</span>
        <ChevronDown
          size="sm"
          slot="right-icon"
        />
      </Button>
      <div
        x-show="open"
        @click.away="open = false"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 translate-y-1"
        x-transition:enter-end="opacity-100 translate-y-0"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 translate-y-0"
        x-transition:leave-end="opacity-0 translate-y-1"
        class="absolute z-10 flex w-screen px-4 mt-5 -translate-x-1/2 left-1/2 max-w-max"
        style="display: none;">
        <div
          class="flex-auto w-screen max-w-md overflow-hidden bg-white shadow-lg rounded-3xl ring-1 ring-base-900/5 lg:max-w-3xl">
          <div class="grid grid-cols-1 p-8 gap-x-0 gap-y-1 lg:grid-cols-2">
            <div>
              <Text
                tag="h3"
                variant="textBase"
                class="text-base-900 font-medium">
                Benefits
              </Text>
              <div class="mt-2">
                <FlyoutLinkBox
                  href="#_"
                  icon={Refresh}
                  title="Sync across devices"
                  description="Enable syncing across devices"
                />
                <FlyoutLinkBox
                  href="#_"
                  icon={FileDots}
                  title="Create custom documents"
                  description="Stlye your documents with ease"
                />
              </div>
            </div>
            <div>
              <Text
                tag="h3"
                variant="textBase"
                class="text-base-900 font-medium">
                Enhance Productivity
              </Text>
              <div class="mt-2">
                <FlyoutLinkBox
                  href="#_"
                  badge="New"
                  icon={LoaderTwo}
                  title="  Optimize Processes"
                  description="   Simplify tasks and save time"
                />
                <FlyoutLinkBox
                  href="#_"
                  icon={Automation}
                  title="Automate Efforts"
                  description=" Automate repetitive tasks"
                />
              </div>
            </div>
          </div>
          <dl class="relative grid grid-cols-1 gap-4 p-8 pt-0 sm:grid-cols-2">

            <div
              class="bg-accent-700 rounded-3xl flex flex-col h-full justify-between gap-12 shadow-xl relative group">
              <a
                class="absolute inset-0"
                href="#_">
              </a>
              <dt
                class="tracking-tight text-lg font-medium text-white p-8 flex items-center justify-between w-full">
                <Text
                  variant="textBase"
                  tag="h3"
                  class="text-white font-medium">
                  Send us an email
                </Text>
                <ArrowNarrowRight
                  class="group-hover:-rotate-45 duration-300"
                  size="base"
                />
              </dt>
              <dd class="p-8 text-base text-base-200 border-t border-white/20">
                <Text
                  tag="p"
                  variant="textBase"
                  class="text-white font-medium">
                  Please contact us by sending an email or the contact below.
                </Text>
              </dd>
            </div>
            <div
              class="bg-accent-950 rounded-3xl flex flex-col h-full justify-between gap-12 shadow-xl relative group">
              <a
                class="absolute inset-0"
                href="#_">
              </a>
              <dt
                class="tracking-tight text-lg font-medium text-white p-8 flex items-center justify-between w-full">
                <Text
                  variant="textBase"
                  tag="h3"
                  class="text-white font-medium">
                  Join our community
                </Text>
                <ArrowNarrowRight
                  class="group-hover:-rotate-45 duration-300"
                  size="base"
                />
              </dt>
              <dd class="p-8 text-base text-base-200 border-t border-white/20">
                <Text
                  tag="p"
                  variant="textBase"
                  class="text-white font-medium">
                  Be a part of our welcoming and supportive community on Circle.
                </Text>
              </dd>
            </div>

          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
