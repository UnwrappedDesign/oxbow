---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import ChevronDown from "@/components/fundations/icons/ChevronDown.astro";
import Badge from "@/components/fundations/badges/Badge.astro";
import ArrowNarrowRight from "@/components/fundations/icons/ArrowNarrowRight.astro";
---

<div class="h-[60rem]">
  <div class="flex items-center justify-center w-full py-12 mx-auto">
    <!--- When in use set x-data="{ open: false }" -->
    <div
      class="relative"
      x-data="{ open: true }">
      <Button
        aria-expanded="false"
        @click="open = !open"
        variant="text"
        size="sm"
        gap="sm">
        <span>Help Center</span>
        <ChevronDown
          size="sm"
          slot="right-icon"
        />
      </Button>
      <div
        x-show="open"
        @click.away="open = false"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 translate-y-1"
        x-transition:enter-end="opacity-100 translate-y-0"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 translate-y-0"
        x-transition:leave-end="opacity-0 translate-y-1"
        class="absolute z-10 flex w-screen px-4 mt-5 -translate-x-1/2 left-1/2 max-w-max"
        style="display: none;">
        <div
          class="flex-auto w-screen max-w-md overflow-hidden bg-white shadow-lg rounded-3xl ring-1 ring-base-900/5 lg:max-w-3xl">
          <div class="grid grid-cols-1 p-8 gap-x-0 gap-y-1 lg:grid-cols-2">
            <div>
              <Heading
                level={3}
                variant="footerHeading">
                Benefits
              </Heading>
              <div class="mt-2">
                <div
                  class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                  <div
                    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler size-5 icons-tabler-outline icon-tabler-refresh group-hover:text-accent-500">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      ></path>
                      <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4"></path>
                      <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4"></path>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <a
                      href="#_"
                      class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                      Sync across devices
                      <span
                        ><svg
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          ></path>
                          <path d="M5 12l14 0"></path>
                          <path d="M15 16l4 -4"></path>
                          <path d="M15 8l4 4"></path></svg
                        ></span
                      >
                    </a>
                    <p class="mt-1 text-sm text-base-500">
                      Enable syncing across devices
                    </p>
                  </div>
                </div>
                <div
                  class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                  <div
                    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="size-5 icon icon-tabler icons-tabler-outline icon-tabler-file-dots text-base-600 group-hover:text-accent-500"
                      ><path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      ></path><path d="M14 3v4a1 1 0 0 0 1 1h4"></path><path
                        d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"
                      ></path><path d="M9 14v.01"></path><path d="M12 14v.01"
                      ></path><path d="M15 14v.01"></path></svg
                    >
                  </div>
                  <div class="flex-1">
                    <a
                      href="#_"
                      class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                      Create custom documents
                      <span
                        ><svg
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          ></path>
                          <path d="M5 12l14 0"></path>
                          <path d="M15 16l4 -4"></path>
                          <path d="M15 8l4 4"></path></svg
                        ></span
                      >
                    </a>
                    <p class="mt-1 text-sm text-base-500">
                      Stlye your documents with ease
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <div>
              <Heading
                level={3}
                variant="footerHeading">
              Enhance Productivity
              </Heading>
              <div class="mt-2">
                <div
                  class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                  <div
                    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler icons-tabler-outline icon-tabler-loader-2 group-hover:text-accent-500 size-5"
                      ><path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      ></path><path d="M12 3a9 9 0 1 0 9 9"></path></svg
                    >
                  </div>
                  <div class="flex-1">
                    <a
                      href="#_"
                      class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                      <div class="flex items-center gap-2">
                        Optimize Processes
                        <Badge
                          variant="info"
                          size="xs">
                          New
                        </Badge>
                      </div>
                      <span
                        ><svg
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          ></path>
                          <path d="M5 12l14 0"></path>
                          <path d="M15 16l4 -4"></path>
                          <path d="M15 8l4 4"></path></svg
                        ></span
                      >
                    </a>
                    <p class="mt-1 text-sm text-base-500">
                      Simplify tasks and save time
                    </p>
                  </div>
                </div>
                <div
                  class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                  <div
                    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler icons-tabler-outline icon-tabler-automation group-hover:text-accent-500 size-5"
                      ><path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      ></path><path
                        d="M13 20.693c-.905 .628 -2.36 .292 -2.675 -1.01a1.724 1.724 0 0 0 -2.573 -1.066c-1.543 .94 -3.31 -.826 -2.37 -2.37a1.724 1.724 0 0 0 -1.065 -2.572c-1.756 -.426 -1.756 -2.924 0 -3.35a1.724 1.724 0 0 0 1.066 -2.573c-.94 -1.543 .826 -3.31 2.37 -2.37c1 .608 2.296 .07 2.572 -1.065c.426 -1.756 2.924 -1.756 3.35 0a1.724 1.724 0 0 0 2.573 1.066c1.543 -.94 3.31 .826 2.37 2.37a1.724 1.724 0 0 0 1.065 2.572c1.492 .362 1.716 2.219 .674 3.03"
                      ></path><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"
                      ></path><path d="M17 22l5 -3l-5 -3z"></path></svg
                    >
                  </div>
                  <div class="flex-1">
                    <a
                      href="#_"
                      class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                      Automate Efforts
                      <span
                        ><svg
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          ></path>
                          <path d="M5 12l14 0"></path>
                          <path d="M15 16l4 -4"></path>
                          <path d="M15 8l4 4"></path></svg
                        ></span
                      >
                    </a>
                    <p class="mt-1 text-sm text-base-500">
                      Automate repetitive tasks
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <dl class="relative grid grid-cols-1 gap-4 p-8 pt-0 sm:grid-cols-2">
            <h3 class="px-4 text-sm font-medium text-base-900 col-span-full">
              Contact us
            </h3>
            <div
              class="bg-accent-700 rounded-3xl flex flex-col h-full justify-between gap-12 relative group">
              <a
                class="absolute inset-0"
                href="#_">
              </a>
              <dt class="p-8 flex items-center justify-between w-full">
                <Heading
                  level={3}
                  darkMode={true}
                  variant="footerHeading">
                  Send us an email
                </Heading>
                <ArrowNarrowRight
                  class="text-white group-hover:-rotate-45 duration-300"
                  size="base"
                  slot="icon"
                />
              </dt>
              <dd class="p-8 border-t border-white/20">
                <Text
                  tag="p"
                  darkMode={true}
                  variant="small">
                  Please contact us by sending an email or the contact below.
                </Text>
              </dd>
            </div>

            <div
              class="bg-base-800 rounded-3xl flex flex-col h-full justify-between gap-12 relative group">
              <a
                class="absolute inset-0"
                href="#_">
              </a>
              <dt class="p-8 flex items-center justify-between w-full">
                <Heading
                  level={3}
                  darkMode={true}
                  variant="footerHeading">
                  Join us
                </Heading>
                <ArrowNarrowRight
                  class="text-white group-hover:-rotate-45 duration-300"
                  size="base"
                  slot="icon"
                />
              </dt>
              <dd class="p-8 border-t border-white/20">
                <Text
                  tag="p"
                  darkMode={true}
                  variant="small">
                  Be a part of our welcoming and supportive community on Circle.
                </Text>
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
