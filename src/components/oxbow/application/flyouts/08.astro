---
const links = [
  {
    category: "Browse by category",
    features: [
      { name: "Explore Our New Arrivals", link: "#" },
      { name: "Discover Best Sellers of the Season", link: "#" },
      { name: "Shop Our Seasonal Favorites Collection", link: "#" },
      { name: "Check Out Exclusive Collections", link: "#" },
    ],
  },
  {
    category: "Shop by feature",
    features: [
      { name: "Enjoy Free Shipping on All Orders", link: "#" },
      { name: "Sustainable Materials for Eco-Friendly Choices", link: "#" },
    ],
  },
];

const blogPosts = [
  {
    title: "Boost Your Workflow",
    subtitle:
      "Tips for optimizing productivity and efficiency in your daily tasks.",
    imageUrl:
      "https://images.unsplash.com/photo-1567679554719-721d7f6360c8?q=80&w=2475&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
  {
    title: "Master Time Management",
    subtitle: "Effective strategies to make the most of your day.",
    imageUrl:
      "https://images.unsplash.com/photo-1509048191080-d2984bad6ae5?q=80&w=2564&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
  {
    title: "Harness Automation",
    subtitle: "Streamline repetitive tasks with automation tools.",
    imageUrl:
      "https://images.unsplash.com/photo-1705147293087-9e183bf149ef?q=80&w=2487&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
];
---

<div class="h-[50rem]">
  <!--- When in use set x-data="{ open: false }" -->
  <div
    class="relative z-50 py-12 isolate"
    x-data="{ open: true }">
    <div
      class="flex items-center justify-center px-8 mx-auto max-w-7xl md:px-12 lg:px-24">
      <button
        type="button"
        @click="open = !open"
        class="inline-flex items-center text-sm font-semibold leading-6 text-base-900 gap-x-1"
        aria-expanded="false">
        <span>Help Center</span>
        <svg
          class="w-5 h-5"
          viewBox="0 0 20 20"
          fill="currentColor"
          aria-hidden="true">
          <path
            fill-rule="evenodd"
            d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
            clip-rule="evenodd"
          ></path>
        </svg>
      </button>
    </div>
    <!-- Flyout menu -->
    <div
      x-show="open"
      @click.outside="open = false"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 -translate-y-1"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-1"
      class="absolute inset-x-0 top-0 px-8 py-12 pt-16 -z-10 md:px-12 lg:px-24">
      <div
        class="p-8 mx-auto mt-12 bg-white shadow-lg max-w-7xl ring-1 ring-base-900/5 rounded-3xl lg:p-12">
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
          <div>
            <h3 class="px-4 text-sm font-medium text-base-900">Benefits</h3>
            <div class="mt-2">
              <div
                class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                <div
                  class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="icon icon-tabler size-5 icons-tabler-outline icon-tabler-refresh group-hover:text-accent-500">
                    <path
                      stroke="none"
                      d="M0 0h24v24H0z"
                      fill="none"
                    ></path>
                    <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4"></path>
                    <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <a
                    href="#_"
                    class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                    Sync across devices
                    <span
                      ><svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        ></path>
                        <path d="M5 12l14 0"></path>
                        <path d="M15 16l4 -4"></path>
                        <path d="M15 8l4 4"></path></svg
                      ></span
                    >
                  </a>
                  <p class="mt-1 text-sm text-base-500">
                    Enable syncing across devices
                  </p>
                </div>
              </div>
              <div
                class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                <div
                  class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="size-5 icon icon-tabler icons-tabler-outline icon-tabler-file-dots text-base-600 group-hover:text-accent-500"
                    ><path
                      stroke="none"
                      d="M0 0h24v24H0z"
                      fill="none"
                    ></path><path d="M14 3v4a1 1 0 0 0 1 1h4"></path><path
                      d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"
                    ></path><path d="M9 14v.01"></path><path d="M12 14v.01"
                    ></path><path d="M15 14v.01"></path></svg
                  >
                </div>
                <div class="flex-1">
                  <a
                    href="#_"
                    class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                    Create custom documents
                    <span
                      ><svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        ></path>
                        <path d="M5 12l14 0"></path>
                        <path d="M15 16l4 -4"></path>
                        <path d="M15 8l4 4"></path></svg
                      ></span
                    >
                  </a>
                  <p class="mt-1 text-sm text-base-500">
                    Stlye your documents with ease
                  </p>
                </div>
              </div>
              <div
                class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                <div
                  class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-edit sgroup-hover:text-accent-500 size-5"
                    ><path
                      stroke="none"
                      d="M0 0h24v24H0z"
                      fill="none"
                    ></path><path
                      d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"
                    ></path><path
                      d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"
                    ></path><path d="M16 5l3 3"></path></svg
                  >
                </div>
                <div class="flex-1">
                  <a
                    href="#_"
                    class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                    Edit your files
                    <span>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        ></path>
                        <path d="M5 12l14 0"></path>
                        <path d="M15 16l4 -4"></path>
                        <path d="M15 8l4 4"></path>
                      </svg>
                    </span>
                  </a>
                  <p class="mt-1 text-sm text-base-500">
                    Endless possibilities
                  </p>
                </div>
              </div>
              <div
                class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                <div
                  class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-brain sgroup-hover:text-accent-500 size-5"
                    ><path
                      stroke="none"
                      d="M0 0h24v24H0z"
                      fill="none"
                    ></path><path
                      d="M15.5 13a3.5 3.5 0 0 0 -3.5 3.5v1a3.5 3.5 0 0 0 7 0v-1.8"
                    ></path><path
                      d="M8.5 13a3.5 3.5 0 0 1 3.5 3.5v1a3.5 3.5 0 0 1 -7 0v-1.8"
                    ></path><path d="M17.5 16a3.5 3.5 0 0 0 0 -7h-.5"
                    ></path><path d="M19 9.3v-2.8a3.5 3.5 0 0 0 -7 0"
                    ></path><path d="M6.5 16a3.5 3.5 0 0 1 0 -7h.5"></path><path
                      d="M5 9.3v-2.8a3.5 3.5 0 0 1 7 0v10"></path></svg
                  >
                </div>
                <div class="flex-1">
                  <a
                    href="#_"
                    class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                    Organize files
                    <span>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        ></path>
                        <path d="M5 12l14 0"></path>
                        <path d="M15 16l4 -4"></path>
                        <path d="M15 8l4 4"></path>
                      </svg>
                    </span>
                  </a>
                  <p class="mt-1 text-sm text-base-500">
                    Keep them all in one place
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="flex flex-col justify-between h-full">
            <div class="flex flex-col gap-y-8">
              {
                links.map((categoryItem, index) => (
                  <div>
                    <h3 class="text-sm font-medium text-base-900">
                      {categoryItem.category}
                    </h3>
                    <div
                      class="mt-2 space-y-2"
                      role="none">
                      {categoryItem.features.map((feature, featureIndex) => (
                        <a
                          href={feature.link}
                          class="block text-sm duration-300 text-base-500 hover:text-accent-500">
                          {feature.name}
                        </a>
                      ))}
                    </div>
                  </div>
                ))
              }
            </div>
            <a
              href="#_"
              class="flex items-center justify-between text-sm text-accent-500 duration-300 hover:text-base-500">
              See our documentation <span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right">
                  <path
                    stroke="none"
                    d="M0 0h24v24H0z"
                    fill="none"
                  ></path>
                  <path d="M5 12l14 0"></path>
                  <path d="M15 16l4 -4"></path>
                  <path d="M15 8l4 4"></path>
                </svg>
              </span></a
            >
          </div>
          <div class="flex flex-col gap-y-8">
            {
              blogPosts.map((post, index) => (
                <div class="relative flex items-center gap-4 group">
                  <img
                    alt="#_"
                    class="object-cover object-center aspect-square size-20 rounded-xl"
                    src={post.imageUrl}
                  />
                  <div>
                    <p class="text-sm font-medium text-base-900 hover:text-accent-500">
                      <a href="#_">
                        <span class="absolute inset-0 sm:rounded-2xl" />
                        {post.title}
                      </a>
                    </p>
                    <p class="mt-1 text-sm text-base-500">{post.subtitle}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
