---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import ChevronDown from "@/components/fundations/icons/ChevronDown.astro";
import FlyoutLinkBox from "@/components/fundations/wrappers/FlyoutLinkBox.astro";
import Refresh from "@/components/fundations/icons/Refresh.astro";
import FileDots from "@/components/fundations/icons/FileDots.astro";
import Edit from "@/components/fundations/icons/Edit.astro";
import Brain from "@/components/fundations/icons/Brain.astro";
import LoaderTwo from "@/components/fundations/icons/LoaderTwo.astro";
import Automation from "@/components/fundations/icons/Automation.astro";
import UsersGroup from "@/components/fundations/icons/UsersGroup.astro";
import Clock from "@/components/fundations/icons/Clock.astro";
import TemplateLayout from "@/components/fundations/icons/TemplateLayout.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import LockSquare from "@/components/fundations/icons/LockSquare.astro";
import SignRight from "@/components/fundations/icons/SignRight.astro";
---
<div class="h-[50rem]">
  <!--- When in use set x-data="{ open: false }" -->
  <div
    class="relative z-50 py-12 isolate"
    x-data="{ open: true }">
    <div
      class="flex items-center justify-center px-8 mx-auto max-w-7xl md:px-12 lg:px-24">
      <Button
        aria-expanded="false"
        @click="open = !open"
        variant="text"
        size="sm"
        gap="sm">
        <span>Help Center</span>
        <ChevronDown
          size="sm"
          slot="right-icon"
        />
      </Button>
    </div>
    <!-- Flyout menu -->
    <div
      x-show="open"
      @click.outside="open = false"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 -translate-y-1"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-1"
      class="absolute inset-x-0 top-0 px-8 py-12 pt-16 -z-10 md:px-12 lg:px-24">
      <div
        class="p-8 mx-auto mt-12 bg-white shadow-lg max-w-7xl ring-1 ring-base-900/5 rounded-3xl lg:p-12">
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
          <div>
            <Heading
              level={3}
              variant="footerHeading">
              Benefits
            </Heading>
            <div class="mt-2">
              <FlyoutLinkBox
                href="#_"
                icon={Refresh}
                title="Sync across devices"
                description="Enable syncing across devices"
              />
              <FlyoutLinkBox
                href="#_"
                icon={FileDots}
                title="Create custom documents"
                description="Stlye your documents with ease"
              />
              <FlyoutLinkBox
                href="#_"
                icon={Edit}
                title=" Edit your files"
                description="Endless possibilities"
              />
              <FlyoutLinkBox
                href="#_"
                icon={Brain}
                title="Organize files"
                description="Keep them all in one place"
              />
            </div>
          </div>
          <div>
            <Heading
              level={3}
              variant="footerHeading">
              Enhance Productivity
            </Heading>
            <div class="mt-2">
              <FlyoutLinkBox
                href="#_"
                badge="New"
                icon={LoaderTwo}
                title="  Optimize Processes"
                description="   Simplify tasks and save time"
              />
              <FlyoutLinkBox
                href="#_"
                icon={Automation}
                title="Automate Efforts"
                description=" Automate repetitive tasks"
              />
              <FlyoutLinkBox
                href="#_"
                icon={UsersGroup}
                title="  Seamless Collaboration"
                description=" Share and work together effortlessly"
              />
              <FlyoutLinkBox
                href="#_"
                icon={Clock}
                title=" Track Time"
                description="Monitor and manage time"
              />
            </div>
          </div>
          <div>
            <Heading
              level={3}
              variant="footerHeading">
              Advance Features
            </Heading>
            <div class="mt-2">
              <FlyoutLinkBox
                href="#_"
                icon={TemplateLayout}
                title="Tailor Templates"
                description="Create and modify for any need"
              />
              <FlyoutLinkBox
                href="#_"
                icon={LockSquare}
                title="Robust Security"
                description="Protect data with encryption"
              />
              <FlyoutLinkBox
                href="#_"
                icon={ArrowIteration}
                title="Tool Integration"
                description="Connect with other apps easily"
              />
              <FlyoutLinkBox
                href="#_"
                icon={SignRight}
                title="Detailed Insights"
                description="Analyze data and track performance"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
