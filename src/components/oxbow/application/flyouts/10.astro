---
const links = [
  {
    category: "Browse by category",
    features: [
      { name: "New Arrivals", link: "#" },
      { name: "Best Sellers", link: "#" },
      { name: "Seasonal Favorites", link: "#" },
      { name: "Exclusive Collections", link: "#" },
      { name: "Trending Styles", link: "#" },
      { name: "Sale Items", link: "#" },
      { name: "Limited Edition", link: "#" },
    ],
  },
  {
    category: "Shop by feature",
    features: [
      { name: "Free Shipping", link: "#" },
      { name: "Sustainable Materials", link: "#" },
      { name: "Custom Sizing", link: "#" },
      { name: "Gift Cards", link: "#" },
      { name: "Style Guides", link: "#" },
      { name: "Personal Stylist", link: "#" },
      { name: "Loyalty Program", link: "#" },
    ],
  },
  {
    category: "Men's Collection",
    features: [
      { name: "Casual Wear", link: "#" },
      { name: "Formal Wear", link: "#" },
      { name: "Sportswear", link: "#" },
      { name: "Footwear", link: "#" },
      { name: "Accessories", link: "#" },
      { name: "Outerwear", link: "#" },
      { name: "Activewear", link: "#" },
    ],
  },
  {
    category: "Women's Collection",
    features: [
      { name: "Dresses", link: "#" },
      { name: "Tops & Blouses", link: "#" },
      { name: "Bottoms", link: "#" },
      { name: "Shoes", link: "#" },
      { name: "Jewelry & Accessories", link: "#" },
      { name: "Outerwear", link: "#" },
      { name: "Activewear", link: "#" },
    ],
  },
];
---

<div class="h-[50rem]">
  <!--- When in use set x-data="{ open: false }" -->
  <div
    class="relative z-50 py-12 isolate"
    x-data="{ open: true }">
    <div
      class="flex items-center justify-center px-8 mx-auto max-w-7xl md:px-12 lg:px-24">
      <button
        type="button"
        @click="open = !open"
        class="inline-flex items-center text-sm font-semibold leading-6 text-gray-900 gap-x-1"
        aria-expanded="false">
        <span>Help Center</span>
        <svg
          class="w-5 h-5"
          viewBox="0 0 20 20"
          fill="currentColor"
          aria-hidden="true">
          <path
            fill-rule="evenodd"
            d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
            clip-rule="evenodd"
          ></path>
        </svg>
      </button>
    </div>

    <!-- Flyout menu -->
    <div
      x-show="open"
      @click.outside="open = false"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 -translate-y-1"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-1"
      class="absolute inset-x-0 top-0 pt-16 bg-white shadow-lg -z-10 ring-1 ring-gray-900/5">
      <div class="px-8 py-12 mx-auto max-w-7xl md:px-12 lg:px-24">
        <div
          class="grid grid-cols-2 md:grid-col-3 lg:grid-cols-4 gap-x-8 gap-y-12">
          {
            links.map((categoryItem, index) => (
              <div>
                <h3 class="text-sm font-medium text-gray-900">
                  {categoryItem.category}
                </h3>
                <div
                  class="mt-2 space-y-2"
                  role="none">
                  {categoryItem.features.map((feature, featureIndex) => (
                    <a
                      href={feature.link}
                      class="block text-sm duration-300 text-gray-500 hover:text-blue-500">
                      {feature.name}
                    </a>
                  ))}
                </div>
              </div>
            ))
          }
        </div>
        <div
          class="grid items-end grid-cols-1 gap-4 p-8 mt-12 sm:grid-cols-2 bg-gray-50 rounded-2xl">
          <div>
            <p class="text-xl font-semibold tracking-tight text-gray-900">
              Discover your perfect style
            </p>
            <p class="mt-4 text-sm text-gray-500 lg:text-base text-balance">
              Explore the latest trends and effortlessly shop exclusive
              collections, all while enjoying a personalized shopping experience
              tailored just for you
            </p>
          </div>
          <div class="flex flex-col items-center gap-2 lg:flex-row sm:ml-auto">
            <button
              class="flex items-center justify-center w-full h-10 px-4 py-2 text-sm font-medium text-white transition-all duration-200 rounded-lg shadow lg:w-auto bg-gradient-to-b from-blue-500 to-indigo-600 hover:to-indigo-800 focus:ring-2 focus:ring-blue-950 focus:ring-offset-2 ring-offset-gray-200 hover:shadow-none"
              aria-label="Action">
              Get started
            </button>
            <button
              class="flex items-center justify-center w-full h-10 gap-2 px-4 py-2 text-sm font-medium transition-all duration-300 border rounded-lg shadow lg:w-auto text-gray-500 bg-gray-50 border-gray-300 hover:text-gray-700 focus:ring-2 shadow-gray-500/5 focus:ring-gray-900 focus:ring-offset-2 ring-offset-gray-200 hover:border-gray-200 hover:shadow-none"
              aria-label="Action">
              Learn more
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"
                ><path
                  stroke="none"
                  d="M0 0h24v24H0z"
                  fill="none"
                ></path><path d="M9 6l6 6l-6 6"></path></svg
              >
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
