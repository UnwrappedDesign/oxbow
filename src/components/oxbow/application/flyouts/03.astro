---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import ChevronDown from "@/components/fundations/icons/ChevronDown.astro";
const links = [
  { name: "Formatted text and markdown", link: "#" },
  { name: "Themes for your documentation", link: "#" },
  { name: "Convert and export to PDF", link: "#" },
  { name: "Samsung pen support", link: "#" },
  { name: "Flowcharts and diagrams", link: "#" },
  { name: "Quick translations", link: "#" },
  { name: "HQ editing tools", link: "#" },
  { name: "Real-time collaboration", link: "#" },
  { name: "Customizable templates", link: "#" },
  { name: "Version control", link: "#" },
];
---
<div class="h-[60rem]">
  <div class="flex items-center justify-center w-full py-12 mx-auto">
    <!--- When in use set x-data="{ open: false }" -->
    <div
      class="relative"
      x-data="{ open: true }">
      <Button
        aria-expanded="false"
        @click="open = !open"
        variant="text"
        size="sm"
        gap="sm">
        <span>Help Center</span>
        <ChevronDown
          size="sm"
          slot="right-icon"
        />
      </Button>
      <div
        x-show="open"
        @click.away="open = false"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 translate-y-1"
        x-transition:enter-end="opacity-100 translate-y-0"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 translate-y-0"
        x-transition:leave-end="opacity-0 translate-y-1"
        class="absolute z-10 flex w-screen px-4 mt-5 -translate-x-1/2 left-1/2 max-w-max"
        style="display: none;">
        <div
          class="flex-auto w-screen max-w-md overflow-hidden bg-white shadow-lg rounded-3xl ring-1 ring-base-900/5 lg:max-w-3xl">
          <div class="grid grid-cols-1 p-8 gap-x-0 gap-y-1 lg:grid-cols-2">
            <div
              class="p-4"
              role="none">
              <Heading
                level={3}
                variant="footerHeading">
                Benefits
              </Heading>
              <div class="mt-2">
                <div
                  class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                  <div
                    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler size-5 icons-tabler-outline icon-tabler-refresh group-hover:text-accent-500">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      ></path>
                      <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4"></path>
                      <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4"></path>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <a
                      href="#_"
                      class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                      Sync across devices
                      <span
                        ><svg
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          ></path>
                          <path d="M5 12l14 0"></path>
                          <path d="M15 16l4 -4"></path>
                          <path d="M15 8l4 4"></path></svg
                        ></span
                      >
                    </a>
                    <p class="mt-1 text-sm text-base-500">
                      Enable syncing across devices
                    </p>
                  </div>
                </div>
                <div
                  class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                  <div
                    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="size-5 icon icon-tabler icons-tabler-outline icon-tabler-file-dots text-base-600 group-hover:text-accent-500"
                      ><path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      ></path><path d="M14 3v4a1 1 0 0 0 1 1h4"></path><path
                        d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"
                      ></path><path d="M9 14v.01"></path><path d="M12 14v.01"
                      ></path><path d="M15 14v.01"></path></svg
                    >
                  </div>
                  <div class="flex-1">
                    <a
                      href="#_"
                      class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                      Create custom documents
                      <span
                        ><svg
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          ></path>
                          <path d="M5 12l14 0"></path>
                          <path d="M15 16l4 -4"></path>
                          <path d="M15 8l4 4"></path></svg
                        ></span
                      >
                    </a>
                    <p class="mt-1 text-sm text-base-500">
                      Stlye your documents with ease
                    </p>
                  </div>
                </div>
                <div
                  class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                  <div
                    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler icons-tabler-outline icon-tabler-edit size-6 text-base-600 group-hover:text-accent-500"
                      ><path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      ></path><path
                        d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"
                      ></path><path
                        d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"
                      ></path><path d="M16 5l3 3"></path></svg
                    >
                  </div>
                  <div class="flex-1">
                    <a
                      href="#_"
                      class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                      Edit your files
                      <span>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          ></path>
                          <path d="M5 12l14 0"></path>
                          <path d="M15 16l4 -4"></path>
                          <path d="M15 8l4 4"></path>
                        </svg>
                      </span>
                    </a>
                    <p class="mt-1 text-sm text-base-500">
                      Endless possibilities
                    </p>
                  </div>
                </div>
                <div
                  class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                  <div
                    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler icons-tabler-outline icon-tabler-brain size-6 text-base-600 group-hover:text-accent-500"
                      ><path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      ></path><path
                        d="M15.5 13a3.5 3.5 0 0 0 -3.5 3.5v1a3.5 3.5 0 0 0 7 0v-1.8"
                      ></path><path
                        d="M8.5 13a3.5 3.5 0 0 1 3.5 3.5v1a3.5 3.5 0 0 1 -7 0v-1.8"
                      ></path><path d="M17.5 16a3.5 3.5 0 0 0 0 -7h-.5"
                      ></path><path d="M19 9.3v-2.8a3.5 3.5 0 0 0 -7 0"
                      ></path><path d="M6.5 16a3.5 3.5 0 0 1 0 -7h.5"
                      ></path><path d="M5 9.3v-2.8a3.5 3.5 0 0 1 7 0v10"
                      ></path></svg
                    >
                  </div>
                  <div class="flex-1">
                    <a
                      href="#_"
                      class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                      Organize files
                      <span>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          ></path>
                          <path d="M5 12l14 0"></path>
                          <path d="M15 16l4 -4"></path>
                          <path d="M15 8l4 4"></path>
                        </svg>
                      </span>
                    </a>
                    <p class="mt-1 text-sm text-base-500">
                      Keep them all in one place
                    </p>
                  </div>
                </div>
                <div
                  class="relative flex w-full p-4 rounded-xl group gap-x-6 hover:bg-base-50">
                  <div
                    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler icons-tabler-outline icon-tabler-subtask size-6 text-base-600 group-hover:text-accent-500"
                      ><path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      ></path><path d="M6 9l6 0"></path><path d="M4 5l4 0"
                      ></path><path d="M6 5v11a1 1 0 0 0 1 1h5"></path><path
                        d="M12 7m0 1a1 1 0 0 1 1 -1h6a1 1 0 0 1 1 1v2a1 1 0 0 1 -1 1h-6a1 1 0 0 1 -1 -1z"
                      ></path><path
                        d="M12 15m0 1a1 1 0 0 1 1 -1h6a1 1 0 0 1 1 1v2a1 1 0 0 1 -1 1h-6a1 1 0 0 1 -1 -1z"
                      ></path></svg
                    >
                  </div>
                  <div class="flex-1">
                    <a
                      href="#_"
                      class="flex items-center justify-between w-full text-sm font-medium text-base-900 group-hover:text-accent-500">
                      Manage tasks and projects
                      <span>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="hidden duration-300 icon icon-tabler size-4 icons-tabler-outline icon-tabler-arrow-narrow-right group-hover:inline-block">
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          ></path>
                          <path d="M5 12l14 0"></path>
                          <path d="M15 16l4 -4"></path>
                          <path d="M15 8l4 4"></path>
                        </svg>
                      </span>
                    </a>
                    <p class="mt-1 text-sm text-base-500">
                      Make simple tasks a breeze
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <div class="p-4">
              <Heading
                level={3}
                variant="footerHeading">
                Browse by feature
              </Heading>
              <div
                class="mt-4 pt-4 border-t border-gray-200 space-y-2"
                role="none">
                {
                  links.map((feature) => (
                    <Text
                      href="#_"
                      tag="a"
                      class="block "
                      variant="navigationLink">
                      {feature.name}
                    </Text>
                  ))
                }
              </div>
            </div>
          </div>
          <div class="p-8 pt-0">
            <div
              class="grid items-end grid-cols-1 p-8 md:grid-cols-3 bg-base-50 rounded-2xl">
              <div class="md:col-span-2">
                <Heading
                  level={3}
                  variant="featureTitle">
                  Ready to get started?
                </Heading>
                <Text
                  class="mt-4 lg:text-balance"
                  tag="p"
                  variant="body">
                  Take your markup to the next level with Oxbow
                </Text>
              </div>
              <div class="mt-4 lg:justify-self-end">
                <Button
                  variant="accent"
                  size="sm">
                  Get started
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
