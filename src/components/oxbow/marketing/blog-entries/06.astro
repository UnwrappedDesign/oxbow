---
import Button from "@/components/fundations/buttons/Button.astro";
const articles = [
  {
    image:
      "https://images.unsplash.com/photo-1575318634028-6a0cfcb60c59?q=80&w=2786&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "Responsive web design best practices",
    description:
      "Learn the best practices for creating responsive web designs that provide a seamless user experience across all devices.",
    author: "John Doe",
    authorImage: "/avatars/1.avif",
    date: "Mon Mar 25",
    link: "#_",
  },
  {
    image:
      "https://images.unsplash.com/photo-1623177579213-7efd042e73c0?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "Javascript frameworks: a comparison",
    description:
      "An in-depth comparison of the most popular JavaScript frameworks, including React, Vue, and Angular, to help you choose the right one for your project.",
    author: "Michael Johnson",
    authorImage: "/avatars/2.avif",
    date: "Wed Apr 10",
    link: "#_",
  },
  {
    image:
      "https://images.unsplash.com/photo-1587301669187-732ea66e7617?q=80&w=2787&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "The future of CSS: new features to watch",
    description:
      "Explore the latest features and updates in CSS that are shaping the future of web design and development.",
    author: "Johannes Svensson",
    authorImage: "/avatars/3.avif",
    date: "Fri May 05",
    link: "#_",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
      <div class="lg:order-last">
        <span
          class="text-accent-600 uppercase font-mono font-medium tracking-tight text-xs">
          Tagline
        </span>
        <h1
          class="text-4xl mt-8 tracking-tighter lg:text-7xl lg:text-balance font-semibold text-base-900">
          From our blog
        </h1>
        <p class="mt-6 text-base font-medium text-base-500">
          Dive into our latest articles and stay updated with fresh perspectives
          and expert advice.
        </p>
        <div class="flex flex-wrap items-center gap-2 mx-auto mt-8">
          <Button
            variant="accent"
            size="sm">
            Get started
          </Button>
          <Button
            variant="alternative"
            size="sm">
            Learn more
          </Button>
        </div>
      </div>
      <div class="lg:col-span-2">
        <div class="relative h-full">
          <img
            class="shadow rounded-2xl aspect-[4/3] object-cover object-center w-full"
            src="https://images.unsplash.com/photo-1575318634028-6a0cfcb60c59?q=80&w=2786&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="#_"
          />
        </div>
      </div>
    </div>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 mt-24">
      {
        articles.map((article) => (
          <article class="relative isolate flex flex-col gap-8 ">
            <div class="flex flex-col justify-between ">
              <div>
                <h3 class="tracking-tight text-xl font-medium  text-base-900 pt-8 lg:pt-0">
                  <a href={article.link}>
                    <span class="absolute inset-0" />
                    {article.title}
                  </a>
                </h3>
                <div class="mt-2 mb-4 text-base text-base-500 line-clamp-3">
                  <p>{article.description}</p>
                </div>
              </div>
              <div class="mt-6 flex ">
                <div class="relative flex items-center gap-x-4">
                  <img
                    src={article.authorImage}
                    alt="#_"
                    class="size-12 rounded-full bg-base-50 object-cover"
                  />
                  <div class="text-sm leading-6">
                    <p class="font-semibold text-base-900">
                      <a href="#_">
                        <span class="absolute inset-0" />
                        {article.author}
                      </a>
                    </p>
                    <dl>
                      <dt class="sr-only">{article.date}</dt>
                      <dd class="text-xs text-base-500">
                        <time datetime={article.date}>{article.date}</time>
                      </dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
