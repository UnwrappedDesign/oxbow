---
import Text from "@/components/fundations/typography/Text.astro";
const articles = [
  {
    image:
      "https://images.unsplash.com/photo-1575318634028-6a0cfcb60c59?q=80&w=2786&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "Responsive web design best practices",
    description:
      "Learn the best practices for creating responsive web designs that provide a seamless user experience across all devices.",
    author: "John Doe",
    authorImage: "/avatars/1.jpg",
    date: "Mon Mar 25",
    link: "#_",
  },
  {
    image:
      "https://images.unsplash.com/photo-1623177579213-7efd042e73c0?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "Javascript frameworks: a comparison",
    description:
      "An in-depth comparison of the most popular JavaScript frameworks, including React, Vue, and Angular, to help you choose the right one for your project.",
    author: "Michael Johnson",
    authorImage: "/avatars/2.jpg",
    date: "Wed Apr 10",
    link: "#_",
  },
  {
    image:
      "https://images.unsplash.com/photo-1587301669187-732ea66e7617?q=80&w=2787&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "The future of CSS: new features to watch",
    description:
      "Explore the latest features and updates in CSS that are shaping the future of web design and development.",
    author: "Johannes Svensson",
    authorImage: "/avatars/3.jpg",
    date: "Fri May 05",
    link: "#_",
  },
];
---

<section>
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="relative grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        articles.map((article) => (
          <article class="relative flex flex-col h-full p-8 j gap-8 bg-base-50 rounded-3xl group">
            <div>
              <img
                class="drop-shadow -mt-16 aspect-[4/3] object-cover object-center w-full rounded-2xl"
                src={article.image}
                alt="#_"
              />
            </div>
            <div>
              <Text tag="a" href="#_" variant="link">
                <Text
                  tag="h3"
                  variant="textLG"
                  class="font-medium  text-base-900 group-hover:text-accent-600 duration-200"
                >
                  <span class="absolute inset-0" />
                  {article.title}
                </Text>
              </Text>
              <Text
                tag="p"
                variant="textBase"
                class="mt-4 font-medium text-base-500 line-clamp-3"
              >
                {article.description}
              </Text>
            </div>
            <div class="relative flex items-center mt-4 gap-x-4">
              <img
                src={article.authorImage}
                alt="#_"
                class="object-cover rounded-full size-12 bg-base-50"
              />
              <div>
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-medium  text-base-900"
                >
                  {article.author}
                </Text>
                <div>
                  <span class="sr-only">{article.date}</span>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="font-medium uppercase text-base-500"
                  >
                    <time datetime={article.date}>{article.date}</time>
                  </Text>
                </div>
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
