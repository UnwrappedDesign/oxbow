---
export const freeComponent = true;
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";
const menuItems = [
  { label: "All blog entries", href: "#_" },
  { label: "Tech deep dives", href: "#_" },
  { label: "Team stories", href: "#_" },
  { label: "Product updates", href: "#_" },
  { label: "Events & talks", href: "#_" },
  { label: "Contact editors", href: "#_" },
];
const articles = [
  {
    title: "How we built a design system in 30 days",
    description:
      "A behind-the-scenes look at the process, pitfalls, and lessons learned from building a scalable design system from scratch.",
    date: "Mon Jan 08",
    link: "#_",
  },
  {
    title: "Why remote teams win (and struggle)",
    description:
      "Insights from our distributed team: what works, what doesn't, and how we keep collaboration human.",
    date: "Thu Feb 15",
    link: "#_",
  },
  {
    title: "Shipping fast without breaking things",
    description:
      "How we balance speed and stability in a world that demands both. Real stories from our engineering squad.",
    date: "Wed Mar 20",
    link: "#_",
  },
  {
    title: "Designing for accessibility: our journey",
    description:
      "From color contrast to keyboard nav, here’s how we made our platform more inclusive for everyone.",
    date: "Fri Apr 12",
    link: "#_",
  },
  {
    title: "The art of saying no to features",
    description:
      "Why we sometimes turn down feature requests—and how it helps us build a better product for all.",
    date: "Tue May 28",
    link: "#_",
  },
  {
    title: "What we learned from our first hackathon",
    description:
      "A candid recap of our team’s first hackathon: the wins, the fails, and the pizza-fueled breakthroughs.",
    date: "Mon Jun 17",
    link: "#_",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-32">
    <div class="items-end grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="max-w-2xl lg:col-span-2 lg:text-balance">
        <Text
          tag="h1"
          variant="displayLG"
          class="font-semibold tracking-tight text-zinc-900 dark:text-white"
        >
          Stories, lessons, and experiments
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
        >
          Fresh takes from our team on building, designing, and growing in tech.
          No fluff—just honest stories and practical insights.
        </Text>
      </div>
      <div class="lg:ml-auto">
        <form
          class="flex flex-col items-end w-full mt-8 sm:flex-row sm:max-w-md gap-2"
        >
          <TextInput
            id="email-address"
            type="email"
            name="email-address"
            label="Email address"
            type="text"
            variant="default"
            size="sm"
            placeholder="Email address"
          />
          <Button
            class="w-full sm:w-auto"
            type="submit"
            variant="default"
            size="sm"
          >
            Subscribe
          </Button>
        </form>
        <Text
          tag="p"
          variant="textXS"
          class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
        >
          By subscribing, you agree to our
          <a
            href="#_"
            href="#_"
            class="font-medium text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300"
          >
            community guidelines
          </a>
          and
          <a
            href="#_"
            class="font-medium text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300"
          >
            privacy promise
          </a>
        </Text>
      </div>
    </div>
    <div
      class="relative pt-12 mt-12 border-t border-zinc-200 dark:border-zinc-800 grid grid-cols-1 lg:grid-cols-3 gap-12"
    >
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          articles.map((article) => (
            <article class="relative group lg:max-w-md">
              <a href="#_" class="absolute inset-0 z-10">
                <span class="sr-only">, {article.title}</span>
              </a>
              <div class="relative">
                <Kicker>
                  <time datetime={article.date}>{article.date}</time>
                </Kicker>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="mt-4 font-semibold group-hover:underline text-zinc-900 dark:text-white  duration-200"
                >
                  {article.title}
                </Text>
                <Text
                  tag="p"
                  variant="textSM"
                  class="font-medium  text-zinc-500 dark:text-zinc-400"
                >
                  {article.description}
                </Text>
              </div>
            </article>
          ))
        }
      </div>
      <div>
        <Kicker> Explore more </Kicker>
        <ul class="pt-4 mt-4 border-t border-zinc-200 dark:border-zinc-800">
          {
            menuItems.map((item) => (
              <li>
                <a
                  href="#_"
                  class="text-sm font-medium text-zinc-900 dark:text-white  hover:text-blue-600 dark:hover:text-blue-300"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
