---
import Text from "@/components/fundations/typography/Text.astro";
const articles = [
  {
    image:
      "https://images.unsplash.com/photo-1575318634028-6a0cfcb60c59?q=80&w=2786&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "Responsive web design best practices",
    description:
      "Learn the best practices for creating responsive web designs that provide a seamless user experience across all devices.",
    author: "John Doe",
    authorImage: "/avatars/1.jpg",
    date: "Mon Mar 25",
    link: "#_",
  },
];
---

<section class="bg-white dark:bg-black">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="relative flex flex-col gap-12">
      {
        articles.map((article) => (
          <>
            <article class="relative flex flex-col justify-end px-8 pb-8 overflow-hidden shadow isolate rounded-2xl  pt-80 sm:pt-48 lg:pt-80 bg-white dark:bg-black">
              <img
                src={article.image}
                alt="#_"
                class="absolute inset-0 object-cover -z-10 size-full bg-zinc-50 dark:bg-zinc-800"
              />
              <div class="absolute inset-0 -z-10 bg-gradient-to-t from-zinc-100 via-zinc-200/70 dark:from-zinc-900 dark:via-zinc-800/70" />
              <div class="flex flex-col overflow-hidden  gap-y-12">
                <div>
                  <Text tag="a" href="#_" variant="link">
                    <Text
                      tag="h3"
                      variant="displayXL"
                      class="font-semibold text-zinc-900 dark:text-zinc-100 text-balance"
                    >
                      <span class="absolute inset-0" />
                      {article.title}
                    </Text>
                  </Text>
                  <div class="relative flex items-center mt-12 gap-x-4">
                    <img
                      src={article.authorImage}
                      alt="#_"
                      class="object-cover rounded-full size-16 bg-zinc-50 dark:bg-zinc-800"
                    />
                    <div>
                      <Text
                        tag="h3"
                        variant="textLG"
                        class="font-medium  text-zinc-900 dark:text-zinc-100"
                      >
                        {article.author}
                      </Text>
                      <div>
                        <span class="sr-only">{article.date}</span>
                        <Text
                          tag="p"
                          variant="textBase"
                          class="font-medium uppercase text-zinc-500 dark:text-zinc-400"
                        >
                          <time datetime={article.date}>{article.date}</time>
                        </Text>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </article>
          </>
        ))
      }
    </div>
  </div>
</section>
