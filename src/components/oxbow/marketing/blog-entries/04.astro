---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";
import b1 from "@/images/placeholders/b1.png";
import b2 from "@/images/placeholders/b2.png";
import b3 from "@/images/placeholders/b3.png";
import b4 from "@/images/placeholders/b4.png";
import { Image } from "astro:assets";
const articles = [
  {
    image: b1,
    title: "How we run design reviews",
    description:
      "Our approach to design reviews: what works, what doesn’t, and how we keep feedback constructive.",
    author: "Maya Patel",
    authorImage: "/avatars/12.jpg",
    date: "Wed Jan 31",
    link: "#_",
  },
  {
    image: b2,
    title: "Lessons from our first product launch",
    description:
      "A candid look at what went right, what went wrong, and what we’ll do differently next time.",
    author: "Lucas Moreau",
    authorImage: "/avatars/11.jpg",
    date: "Mon Feb 19",
    link: "#_",
  },
  {
    image: b3,
    title: "Why we value asynchronous work",
    description:
      "How async communication helps our team stay focused, flexible, and productive across time zones.",
    author: "Olivia Chen",
    authorImage: "/avatars/9.jpg",
    date: "Fri Mar 15",
    link: "#_",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div class="items-center grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:order-last h-full flex flex-col justify-center">
        <div>
          <Text
            tag="h1"
            variant="displayMD"
            class="font-semibold tracking-tight text-zinc-900 dark:text-white"
          >
            How we work, ship, and grow
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
          >
            Honest reflections and practical tips from our journey building
            Oxbow as a distributed team.
          </Text>
          <Button variant="muted" size="sm" class="flex mt-8 w-fit">
            Read article
          </Button>
        </div>
      </div>

      <Image
        width={570}
        height={480}
        src={b4}
        alt="#_"
        class="rounded-xl aspect-5/3 object-cover object-center w-full lg:col-span-2"
      />
    </div>
    <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {
        articles.map((article) => (
          <article class="relative group">
            <div class="flex flex-col h-full">
              <a href="#_" class="absolute inset-0 z-10">
                <span class="sr-only">, {article.title}</span>
              </a>
              <Image
                width={570}
                height={480}
                class=" rounded-xl aspect-5/3 object-cover object-center w-full bg-zinc-50 dark:bg-zinc-800"
                src={article.image}
                alt="#_"
              />
              <div class="flex flex-col justify-between mt-2 h-full">
                <div>
                  <Text
                    tag="h3"
                    variant="textBase"
                    class=" group-hover:underline font-semibold text-zinc-900 dark:text-white  duration-200"
                  >
                    {article.title}
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class=" font-medium text-zinc-500 dark:text-zinc-400"
                  >
                    {article.description}
                  </Text>
                </div>
                <div class="gap-x-4 relative flex items-center mt-4">
                  <img
                    src={article.authorImage}
                    alt="#_"
                    class="size-8 bg-zinc-50 dark:bg-zinc-800 object-cover rounded-full"
                  />
                  <div>
                    <Text
                      tag="h3"
                      variant="textSM"
                      class="text-zinc-900 dark:text-zinc-100 font-medium"
                    >
                      {article.author}
                    </Text>
                    <Kicker>
                      <time datetime={article.date}>{article.date}</time>
                    </Kicker>
                  </div>
                </div>
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
