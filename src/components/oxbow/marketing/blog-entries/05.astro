---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
const articles = [
  {
    image:
      "https://images.unsplash.com/photo-1575318634028-6a0cfcb60c59?q=80&w=2786&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "Responsive web design best practices",
    description:
      "Learn the best practices for creating responsive web designs that provide a seamless user experience across all devices.",
    author: "John Doe",
    authorImage: "/avatars/1.jpg",
    date: "Mon Mar 25",
    link: "#_",
  },
  {
    image:
      "https://images.unsplash.com/photo-1623177579213-7efd042e73c0?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "Javascript frameworks: a comparison",
    description:
      "An in-depth comparison of the most popular JavaScript frameworks, including React, Vue, and Angular, to help you choose the right one for your project.",
    author: "Michael Johnson",
    authorImage: "/avatars/2.jpg",
    date: "Wed Apr 10",
    link: "#_",
  },
  {
    image:
      "https://images.unsplash.com/photo-1587301669187-732ea66e7617?q=80&w=2787&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "The future of CSS: new features",
    description:
      "Explore the latest features and updates in CSS that are shaping the future of web design and development.",
    author: "Johannes Svensson",
    authorImage: "/avatars/3.jpg",
    date: "Fri May 05",
    link: "#_",
  },
];
---

<div class="p-8">
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto">
    <div class="items-end grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="max-w-2xl lg:col-span-2">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 lg:text-balance"
        >
          Insights and perspectives
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-zinc-500">
          Exploring topics, tips, and trends in the world of communication and
          privacy
        </Text>
      </div>
      <div class="lg:ml-auto">
        <form class="flex flex-col w-full mt-8 sm:flex-row sm:max-w-md gap-2">
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            type="email"
            name="email-address"
            autocomplete="email"
            placeholder="Enter your email"
            aria-placeholder="Enter your email"
            required=""
            class="block w-full h-10 px-4 py-2 text-sm bg-white border border-transparent rounded-lg appearance-none text-blue-700 duration-300 ring-1 ring-zinc-200 placeholder-zinc-400 focus:border-zinc-300 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
          />
          <Button
            class="w-full sm:w-auto"
            type="submit"
            variant="accent"
            size="base"
          >
            Subscribe
          </Button>
        </form>
        <Text tag="p" variant="textSM" class="mt-4 font-medium text-zinc-500">
          When you sign up, you accept our
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="font-medium text-blue-500 gap-2 hover:text-zinc-900"
          >
            Terms of service
          </Text>
          and
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="font-medium text-blue-500 gap-2 hover:text-zinc-900"
          >
            Privacy Policy
          </Text>
        </Text>
      </div>
    </div>
    <div
      class="relative pt-12 mt-12 border-t grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 border-zinc-200"
    >
      {
        articles.map((article) => (
          <article class="relative flex flex-col justify-between h-full isolate gap-8 group">
            <div class="flex flex-col justify-between h-full">
              <div>
                <Text tag="a" href="#_" variant="link">
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="font-medium  text-zinc-900 group-hover:text-blue-600 duration-200"
                  >
                    <span class="absolute inset-0" />
                    {article.title}
                  </Text>
                </Text>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 font-medium text-zinc-500 line-clamp-3"
                >
                  {article.description}
                </Text>
              </div>
              <div class="relative flex items-center mt-4 gap-x-4">
                <img
                  src={article.authorImage}
                  alt="#_"
                  class="object-cover rounded-full size-12 bg-zinc-50"
                />
                <div>
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="font-medium  text-zinc-900"
                  >
                    {article.author}
                  </Text>
                  <div>
                    <span class="sr-only">{article.date}</span>
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-medium uppercase text-zinc-500"
                    >
                      <time datetime={article.date}>{article.date}</time>
                    </Text>
                  </div>
                </div>
              </div>
            </div>
            <div class="relative aspect-square shrink-0 ">
              <img
                src={article.image}
                alt="#_"
                class="absolute inset-0 object-cover shadow size-full  rounded-2xl bg-zinc-50"
              />
            </div>
          </article>
        ))
      }
    </div>
  </div>
  <!-- copy:end -->
</div>
