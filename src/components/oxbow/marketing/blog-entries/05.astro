---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
const articles = [
  {
    image:
      "https://images.unsplash.com/photo-1575318634028-6a0cfcb60c59?q=80&w=2786&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "Responsive web design best practices",
    description:
      "Learn the best practices for creating responsive web designs that provide a seamless user experience across all devices.",
    author: "John Doe",
    authorImage: "/avatars/1.jpg",
    date: "Mon Mar 25",
    link: "#_",
  },
  {
    image:
      "https://images.unsplash.com/photo-1623177579213-7efd042e73c0?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "Javascript frameworks: a comparison",
    description:
      "An in-depth comparison of the most popular JavaScript frameworks, including React, Vue, and Angular, to help you choose the right one for your project.",
    author: "Michael Johnson",
    authorImage: "/avatars/2.jpg",
    date: "Wed Apr 10",
    link: "#_",
  },
  {
    image:
      "https://images.unsplash.com/photo-1587301669187-732ea66e7617?q=80&w=2787&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "The future of CSS: new features",
    description:
      "Explore the latest features and updates in CSS that are shaping the future of web design and development.",
    author: "Johannes Svensson",
    authorImage: "/avatars/3.jpg",
    date: "Fri May 05",
    link: "#_",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 lg:grid-cols-3 items-end gap-12">
      <div class="lg:col-span-2 max-w-2xl">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600">
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 lg:text-balance">
          Insights and perspectives
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
          Exploring topics, tips, and trends in the world of communication and
          privacy
        </Text>
      </div>
      <div class="lg:ml-auto">
        <form class="w-full mt-8 flex flex-col sm:flex-row sm:max-w-md gap-2">
          <label
            for="email-address"
            class="sr-only"
            >Email address</label
          >
          <input
            id="email-address"
            type="email"
            name="email-address"
            autocomplete="email"
            placeholder="Enter your email"
            aria-placeholder="Enter your email"
            required=""
            class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white border border-transparent rounded-lg appearance-none ring-1 ring-base-200 placeholder-base-400 focus:border-base-300 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
          />
          <Button
            class="w-full sm:w-auto"
            type="submit"
            variant="accent"
            size="base">
            Subscribe
          </Button>
        </form>
        <Text
          tag="p"
          variant="textSM"
          class="mt-4 text-base-500 font-medium">
          When you sign up, you accept our
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="text-accent-500 font-medium gap-2 hover:text-base-900">
            Terms of service
          </Text>
          and
          <Text
            tag="a"
            href="#_"
            variant="textSM"
            class="text-accent-500 font-medium gap-2 hover:text-base-900">
            Privacy Policy
          </Text>
        </Text>
      </div>
    </div>
    <div
      class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 mt-12 pt-12 border-t relative">
      {
        articles.map((article) => (
          <article class="relative isolate flex flex-col h-full justify-between gap-8 group">
            <div class="flex flex-col justify-between h-full">
              <div>
                <Text
                  tag="a"
                  href="#_"
                  variant="link">
                  <Text
                    tag="h3"
                    variant="textLG"
                    class=" text-base-900 font-medium group-hover:text-accent-600 duration-200">
                    <span class="absolute inset-0" />
                    {article.title}
                  </Text>
                </Text>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 text-base-500 font-medium line-clamp-3">
                  {article.description}
                </Text>
              </div>
              <div class="relative flex items-center gap-x-4 mt-4">
                <img
                  src={article.authorImage}
                  alt="#_"
                  class="size-12 rounded-full bg-base-50 object-cover"
                />
                <div>
                  <Text
                    tag="h3"
                    variant="textMD"
                    class=" text-base-900 font-medium">
                    {article.author}
                  </Text>
                  <div>
                    <span class="sr-only">{article.date}</span>
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-medium uppercase text-base-500">
                      <time datetime={article.date}>{article.date}</time>
                    </Text>
                  </div>
                </div>
              </div>
            </div>
            <div class="relative aspect-square shrink-0 ">
              <img
                src={article.image}
                alt="#_"
                class="absolute inset-0 size-full  shadow rounded-2xl bg-base-50 object-cover"
              />
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
