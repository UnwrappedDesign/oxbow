---
import Text from "@/components/fundations/typography/Text.astro";
const steps = [
  {
    title: "Choose your account type",
    description:
      "Decide whether you need a checking account, savings account, or both. Each type has its own benefits and features.",
  },
  {
    title: "Gather required documents",
    description:
      "Collect necessary documents such as ID, proof of address, and Social Security number. This ensures a smooth application process.",
  },
  {
    title: "Complete the application",
    description:
      "Fill out the application form online or at your local branch. Provide accurate information to avoid delays.",
  },
  {
    title: "Deposit initial funds",
    description:
      "        Make your initial deposit to activate your account. This can usually be done through a transfer, check, or cash deposit.",
  },
];
---

<div>
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="items-start grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-24">
      <div>
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displaySM"
          class="mt-4 font-semibold text-zinc-900 lg:text-balance"
        >
          Simple steps to apply for a bank account
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-zinc-500">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
      </div>
      <dl class="grid grid-cols-1 lg:grid-cols-2 lg:col-span-2 gap-x-4 gap-y-8">
        <!-- Loop through each step in the array -->
        {
          steps.map((step, index) => (
            <div class="flex flex-col ">
              <dt class="flex items-baseline gap-2">
                <Text
                  tag="span"
                  variant="displayLG"
                  class="font-medium  text-blue-600"
                >
                  {index + 1}.
                </Text>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="font-medium  text-zinc-900"
                >
                  {step.title}
                </Text>
              </dt>
              <dd class="mt-2">
                <Text
                  tag="p"
                  variant="textBase"
                  class="font-medium text-zinc-500"
                >
                  {step.description}
                </Text>
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
  <!-- copy:end -->
</div>
