---
import Text from "@/components/fundations/typography/Text.astro";
const steps = [
  {
    title: "Choose your account type",
    description:
      "Decide whether you need a checking account, savings account, or both. Each type has its own benefits and features.",
  },
  {
    title: "Gather required documents",
    description:
      "Collect necessary documents such as ID, proof of address, and Social Security number. This ensures a smooth application process.",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="items-center grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24">
      <div class="h-full lg:text-balance">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600 dark:text-blue-400"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100 lg:text-balance"
        >
          Simple steps to apply for a bank account
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
        >
          The fastest method for working together on staging and temporary
          environments.
        </Text>
        <ul class="mt-8 list-none space-y-8" role="list">
          {
            steps.map((step, index) => (
              <div class="flex flex-col ">
                <div class="flex items-start text-blue-500 gap-3">
                  <span class="flex items-center justify-center text-white rounded-full size-8 shrink-0 bg-blue-700 ">
                    {index + 1}
                  </span>
                  <div>
                    <dt>
                      <Text
                        tag="h3"
                        variant="textLG"
                        class="font-medium  text-zinc-900 dark:text-zinc-100"
                      >
                        {step.title}
                      </Text>
                    </dt>
                    <dd class="mt-2">
                      <Text
                        tag="p"
                        variant="textBase"
                        class="font-medium  text-zinc-500 dark:text-zinc-400"
                      >
                        {step.description}
                      </Text>
                    </dd>
                  </div>
                </div>
              </div>
            ))
          }
        </ul>
      </div>
      <img
        class="object-cover object-center h-full rounded-2xl"
        src="/pose/1.jpg"
        alt="#_"
      />
    </div>
  </div>
</section>
