---
import Text from "@/components/fundations/typography/Text.astro";
const steps = [
  {
    title: "Choose your account type",
    description:
      "Decide whether you need a checking account, savings account, or both. Each type has its own benefits and features.",
  },
  {
    title: "Gather required documents",
    description:
      "Collect necessary documents such as ID, proof of address, and Social Security number. This ensures a smooth application process.",
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-center">
      <div class="lg:text-balance h-full">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 lg:text-balance"
        >
          Simple steps to apply for a bank account
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500 font-medium">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
        <ul class="space-y-8 mt-8 list-none" role="list">
          {
            steps.map((step, index) => (
              <div class="flex flex-col ">
                <div class="text-accent-500 flex gap-3 items-start">
                  <span class="size-8 shrink-0 rounded-full flex items-center justify-center bg-accent-700  text-white">
                    {index + 1}
                  </span>
                  <div>
                    <dt>
                      <Text
                        tag="h3"
                        variant="textLG"
                        class=" text-base-900 font-medium"
                      >
                        {step.title}
                      </Text>
                    </dt>
                    <dd class="mt-2">
                      <Text
                        tag="p"
                        variant="textBase"
                        class=" text-base-500 font-medium"
                      >
                        {step.description}
                      </Text>
                    </dd>
                  </div>
                </div>
              </div>
            ))
          }
        </ul>
      </div>
      <img
        class="object-cover h-full object-center rounded-2xl"
        src="/pose/1.jpg"
        alt="#_"
      />
    </div>
  </div>
</section>
