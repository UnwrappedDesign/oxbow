---
export const freeComponent = true;
import Text from "@/components/fundations/typography/Text.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
// Timeline events data
const events = [
  {
    date: "01.08.2025",
    title: "The dawn of version 3.0.0",
    description:
      "This monumental update unveils a revamped interface, AI-powered tools, and seamless app integrations.",
  },
  {
    date: "01.09.2025",
    title: "Version 3.1.0: The Cosmic Leap",
    description:
      "Experience faster processing, enhanced customization, and stellar-themed visual enhancements.",
  },
  {
    date: "02.15.2025",
    title: "Launch of Version 4.0",
    description:
      "Introducing Version 4.0 with AI-driven insights and real-time analytics for smarter decision-making.",
  },
  {
    date: "06.30.2025",
    title: "Release of Version 4.1: Ubiquitous AI",
    description:
      "Experience AI at every touchpoint with new integrations, performance boosts, and expanded features.",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
    <div class="max-w-xl mx-auto text-center lg:text-balance">
      <Kicker> Tagline </Kicker>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold tracking-tight text-zinc-900 dark:text-white"
      >
        Product milestones & launches
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-300"
      >
        Trace our journey from the inaugural release through every major feature
        update.
      </Text>
    </div>
    <div class="flex flex-col mx-auto mt-12 grid-cols-9 md:grid">
      {
        events.map((item, idx) =>
          idx % 2 === 0 ? (
            <div class="flex flex-row-reverse md:contents">
              <div class="my-4 ml-auto col-start-1 col-end-5">
                <div class="relative p-4 shadow size-full  bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl">
                  <Kicker>
                    <time datetime={item.date}>{item.date}</time>
                  </Kicker>
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="mt-4 font-semibold tracking-tight  text-zinc-900 dark:text-white"
                  >
                    {item.title}
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="mt-2 text-zinc-500 dark:text-zinc-400 lg:text-balance"
                  >
                    {item.description}
                  </Text>
                </div>
              </div>
              <div class="relative mr-10 col-start-5 col-end-6 md:mx-auto">
                <div class="flex items-center justify-center w-3 h-full">
                  <div class="h-full w-[0.05rem] bg-zinc-200 dark:bg-zinc-800 pointer-events-none" />
                </div>
                <div class="absolute -mt-3 rounded-full size-3  outline-2 outline-zinc-100 dark:outline-zinc-800 dark:bg-zinc-800 bg-zinc-100 top-1/2" />
              </div>
            </div>
          ) : (
            <div class="flex md:contents">
              <div class="relative mr-10 col-start-5 col-end-6 md:mx-auto">
                <div class="flex items-center justify-center w-3 h-full">
                  <div class="h-full w-[0.05rem] bg-zinc-200 dark:bg-zinc-800 pointer-events-none" />
                </div>
                <div class="absolute -mt-3 rounded-full size-3  outline-2 outline-zinc-100 dark:outline-zinc-800 dark:bg-zinc-800 bg-zinc-100 top-1/2" />
              </div>
              <div class="my-4 mr-auto col-start-6 col-end-10">
                <div class="relative p-4 shadow size-full  bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl">
                  <Kicker>
                    <time datetime={item.date}>{item.date}</time>
                  </Kicker>
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="mt-4 font-semibold tracking-tight  text-zinc-900 dark:text-white"
                  >
                    {item.title}
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="mt-2 text-zinc-500 dark:text-zinc-400 lg:text-balance"
                  >
                    {item.description}
                  </Text>
                </div>
              </div>
            </div>
          )
        )
      }
    </div>
  </div>
</section>
