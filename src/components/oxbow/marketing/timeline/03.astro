---
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl lg:text-balance">
      <Text
        tag="span"
        variant="eyebrow">
        Tagline
      </Text>
      <Heading
        class="mt-4"
        level={1}
        variant="default">
        Key updates & releases
      </Heading>
      <Text
        class="mt-4"
        tag="p"
        variant="body">
        Explore the evolution of our product, from the initial launch to the
        latest enhancements.
      </Text>
    </div>
    <ol
      class="border-l mt-12 md:grid lg:grid-cols-3 h-full md:gap-6 md:border-l-0 md:border-t">
      <!--First item-->
      <li>
        <div class="flex-start flex items-center pt-2 md:block md:pt-0">
          <div
            class="-ml-[5px] mr-3 h-[9px] w-[9px] rounded-full bg-white border-2 border-accent-500 md:-mt-[5px] md:ml-0 md:mr-0">
          </div>
        </div>
        <div class="ml-4 mt-4 md:ml-0 lg:mr-4">
          <div>
            <Text
              tag="span"
              variant="eyebrow">
              <time datetime="01.08.2024">01.08.2024</time>
            </Text>
            <Heading
              level={3}
              class="mt-8"
              variant="featureTitle">
              The dawn of version 3.0.0
            </Heading>
            <Text
              class="mt-4"
              tag="p"
              variant="body">
              Welcome to the future with Version 3.0.0! This monumental update
              unveils a completely revamped interface.
            </Text>

          </div>
        </div>
      </li>
      <!--Second item-->
      <li>
        <div class="flex-start flex items-center pt-2 md:block md:pt-0">
          <div
            class="-ml-[5px] mr-3 h-[9px] w-[9px] rounded-full bg-white border-2 border-accent-500 md:-mt-[5px] md:ml-0 md:mr-0">
          </div>
        </div>
        <div class="ml-4 mt-4 md:ml-0 lg:mr-4">
          <div>
            <Text
              tag="span"
              variant="eyebrow">
              <time datetime="01.08.2024">01.08.2024</time>
            </Text>
            <Heading
              level={3}
              class="mt-8"
              variant="featureTitle">
              Version 3.1.0: the cosmic leap
            </Heading>
            <Text
              class="mt-4"
              tag="p"
              variant="body">
              Version 3.1.0 propels you into the cosmos with faster processing
              speeds, enhanced customization options, and new cosmic-themed
              visual elements.
            </Text>
          </div>
        </div>
      </li>
      <!--Third item-->
      <li>
        <div class="flex-start flex items-center pt-2 md:block md:pt-0">
          <div
            class="-ml-[5px] mr-3 h-[9px] w-[9px] rounded-full bg-white border-2 border-accent-500 md:-mt-[5px] md:ml-0 md:mr-0">
          </div>
        </div>
        <div class="ml-4 mt-4 md:ml-0 lg:mr-4">
          <div>
            <Text
              tag="span"
              variant="eyebrow">
              <time datetime="01.08.2024">01.08.2024</time>
            </Text>
            <Heading
              level={3}
              class="mt-8"
              variant="featureTitle">
              The dawn of version 3.0.0
            </Heading>
            <Text
              class="mt-4"
              tag="p"
              variant="body">
              Welcome to the future with Version 3.0.0! This monumental update
              unveils a completely revamped interface, groundbreaking.
            </Text>

          </div>
        </div>
      </li>
    </ol>
  </div>
</section>
