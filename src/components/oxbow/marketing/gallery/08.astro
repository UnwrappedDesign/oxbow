---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import { Image } from "astro:assets";
import g1 from "@/images/gallery/1.png";
import g2 from "@/images/gallery/2.png";
import g3 from "@/images/gallery/3.png";
import g4 from "@/images/gallery/4.png";
import g5 from "@/images/gallery/5.png";
import g6 from "@/images/gallery/6.png";
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-20">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:grid-cols-4">
      <Image
        width={500}
        height={500}
        src={g1}
        alt="#_"
        class="object-cover object-top size-full aspect-square lg:col-start-2"
      />
      <Image
        width={500}
        height={500}
        src={g2}
        alt="#_"
        class="object-cover size-full aspect-square lg:col-start-4"
      />
      <div class="order-first py-12 lg:col-span-2 lg:order-none">
        <Text
          variant="displayLG"
          tag="h2"
          class="font-semibold tracking-tight text-zinc-900 dark:text-white sm:text-balance"
        >
          Explore our visual showcase
        </Text>
        <Text
          variant="textSM"
          tag="p"
          class="mt-2 font-medium text-zinc-500 dark:text-zinc-400 sm:text-balance"
        >
          A curated collection of images capturing the essence of our brand and
          the stories we tell.
        </Text>
      </div>
      <Image
        width={500}
        height={500}
        src={g3}
        alt="#_"
        class="object-cover object-top size-full aspect-square"
      />

      <Image
        width={500}
        height={500}
        src={g4}
        alt="#_"
        class="object-cover object-top size-full aspect-square"
      />
      <Image
        width={500}
        height={500}
        src={g5}
        alt="#_"
        class="object-cover object-top size-full aspect-square lg:col-start-2"
      />

      <Image
        width={500}
        height={500}
        src={g6}
        alt="#_"
        class="object-cover object-top size-full aspect-square lg:col-start-1"
      />
      <div class="py-12 lg:col-span-2 lg:col-start-3">
        <Text
          tag="p"
          variant="textSM"
          class="font-medium text-zinc-500 dark:text-zinc-400 sm:text-balance"
        >
          Our smart contract automation feature simplifies complex business
          processes by encoding contract terms and conditions into
          self-executing code.
        </Text>

        <Button variant="muted" size="sm" class="mt-8"> See all images </Button>
      </div>
    </div>
  </div>
</section>
