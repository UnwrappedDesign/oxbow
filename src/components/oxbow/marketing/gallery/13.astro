---
import Button from "@/components/fundations/buttons/Button.astro";
const gallery = [
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div
      class="items-start text-left grid grid-cols-1 gap-y-6 gap-x-12 lg:grid-cols-6"
    >
      <div class="lg:col-span-2 lg:row-span-3">
        <div>
          <span
            class="font-mono text-xs font-medium tracking-tight uppercase text-blue-600 dark:text-blue-400"
            >Tagline</span
          >
          <h1
            class="mt-4 text-4xl font-semibold tracking-tight text-zinc-900 dark:text-zinc-100 sm:text-balance"
          >
            Explore our visual showcase
          </h1>
          <p
            class="mt-6 text-base font-medium text-zinc-500 dark:text-zinc-400 sm:text-balance"
          >
            A curated collection of images capturing the essence of our brand
            and the stories we tell.
          </p>
        </div>
        <div class="flex mt-8">
          <Button variant="outline" size="sm"> See gallery </Button>
        </div>
      </div>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:grid-cols-4 lg:col-span-4"
      >
        {
          gallery.map(({ src, alt }) => (
            <img
              src={src}
              alt={alt}
              class="object-cover size-full aspect-square"
            />
          ))
        }
      </div>
      <div
        class="lg:col-span-5 lg:col-start-3 grid grid-cols-1 gap-4 lg:grid-cols-2"
      >
        <p
          class="text-base font-medium text-zinc-500 dark:text-zinc-400 sm:text-balance"
        >
          Our smart contract automation feature simplifies complex business
          processes by encoding contract terms and conditions into
          self-executing code.
        </p>

        <p class="text-base font-medium text-zinc-500 sm:text-balance">
          Enjoy the benefits of our smart contract automation feature. Simplify
          complex business processes by encoding contract terms and conditions
          into self-executing code.
        </p>
      </div>
    </div>
  </div>
</section>
