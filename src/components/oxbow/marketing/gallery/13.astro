---
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
const gallery = [
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div
      class="grid grid-cols-1 gap-y-6 gap-x-12 lg:grid-cols-6 items-start text-left"
    >
      <div class="lg:col-span-2 lg:row-span-3">
        <div>
          <Text
            tag="p"
            variant="textSM"
            class="font-bold uppercase text-accent-600"
          >
            Tagline
          </Text>
          <Text
            tag="h2"
            variant="displayBase"
            class="mt-4 font-semibold text-base-900 lg:text-balance"
          >
            Explore our visual showcase
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 text-base-500 font-medium"
          >
            A curated collection of images capturing the essence of our brand
            and the stories we tell.
          </Text>
        </div>
        <div class="flex mt-8">
          <Button gap="xs" size="base" variant="muted">
            See all products
          </Button>
        </div>
      </div>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:grid-cols-4 lg:col-span-4"
      >
        {
          gallery.map(({ src, alt }) => (
            <img
              src={src}
              alt={alt}
              class="size-full object-cover aspect-square"
            />
          ))
        }
      </div>
      <div
        class="lg:col-span-5 lg:col-start-3 grid grid-cols-1 gap-4 lg:grid-cols-2"
      >
        <p class="text-base font-medium text-base-500 sm:text-balance">
          Our smart contract automation feature simplifies complex business
          processes by encoding contract terms and conditions into
          self-executing code.
        </p>

        <p class="text-base font-medium text-base-500 sm:text-balance">
          Enjoy the benefits of our smart contract automation feature. Simplify
          complex business processes by encoding contract terms and conditions
          into self-executing code.
        </p>
      </div>
    </div>
  </div>
</section>
