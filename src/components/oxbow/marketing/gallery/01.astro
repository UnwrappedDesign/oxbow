---
export const freeComponent = true;
import { Image } from "astro:assets";
import g1 from "@/images/gallery/1.png";
import g2 from "@/images/gallery/2.png";
import g3 from "@/images/gallery/3.png";
import g4 from "@/images/gallery/4.png";
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
      <Image
        width={600}
        height={700}
        src={g1}
        alt="#_"
        class="object-cover aspect-square lg:aspect-auto lg:h-full size-full"
      />
      <div class="flex flex-col gap-4">
        <Image
          width={600}
          height={700}
          src={g2}
          alt="#_"
          class="object-cover aspect-square size-full"
        />
        <Image
          width={600}
          height={700}
          src={g3}
          alt="#_"
          class="object-cover aspect-square size-full"
        />
      </div>
      <Image
        width={600}
        height={700}
        src={g4}
        alt="#_"
        class="object-cover aspect-square lg:aspect-auto lg:h-full size-full"
      />
    </div>
  </div>
</section>
