---
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 lg:grid-cols-6">
      <div class="md:col-span-2 md:row-span-2">
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
      </div>
      <div class="md:row-span-2">
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
      </div>
      <div class="md:row-span-3 lg:row-span-2">
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
      </div>
      <div class="md:col-span-2 md:row-span-2">
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
      </div>
      <div class="md:row-span-2 lg:col-span-2">
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
      </div>
      <div class="lg:col-span-2 text-center p-12 order-first lg:order-none">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="textXL"
          class="mt-4 font-semibold text-base-900 lg:text-balance"
        >
          Explore our visual showcase
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500 font-medium">
          A curated collection of images capturing the essence of our brand and
          the stories we tell.
        </Text>
        <div class="flex mt-8 justify-center">
          <Button gap="xs" size="base" variant="muted">
            See all products
          </Button>
        </div>
      </div>
      <div class="md:col-span-2">
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
      </div>
      <div class="md:col-span-4">
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
      </div>
    </div>
  </div>
</section>
