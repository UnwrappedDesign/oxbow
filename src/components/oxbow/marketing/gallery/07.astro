---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import { Image } from "astro:assets";
import g1 from "@/images/gallery/1.png";
import g2 from "@/images/gallery/2.png";
import g3 from "@/images/gallery/3.png";
import g4 from "@/images/gallery/4.png";
import g5 from "@/images/gallery/5.png";
import g6 from "@/images/gallery/6.png";
import g7 from "@/images/gallery/7.png";

---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-32">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 lg:grid-cols-6">
      <div class="md:col-span-2 md:row-span-2">
        <Image
          width={500}
          height={500}
          src={g1}
          alt="#_"
          class="object-cover object-top size-full lg:h-60"
        />
      </div>
      <div class="md:row-span-2">
        <Image
          width={500}
          height={500}
          src={g2}
          alt="#_"
          class="object-cover object-top size-full lg:h-60"
        />
      </div>
      <div class="md:row-span-3 lg:row-span-2">
        <Image
          width={500}
          height={500}
          src={g3}
          alt="#_"
          class="object-cover object-top size-full lg:h-60"
        />
      </div>
      <div class="md:col-span-2 md:row-span-2">
        <Image
          width={500}
          height={500}
          src={g4}
          alt="#_"
          class="object-cover object-top size-full lg:h-60"
        />
      </div>
      <div class="md:row-span-2 lg:col-span-2">
        <Image
          width={500}
          height={500}
          src={g5}
          alt="#_"
          class="object-cover object-top size-full"
        />
      </div>
      <div class="order-first p-12 text-center lg:col-span-2 lg:order-none">
        <Text
          variant="textXL"
          tag="h2"
          class="font-semibold tracking-tight text-zinc-900 dark:text-white sm:text-balance"
        >
          Lightbox
        </Text>
        <Text
          variant="textSM"
          tag="p"
          class="mt-2 font-medium text-zinc-500 dark:text-zinc-400 sm:text-balance"
        >
          Browse selected screens and components showing Oxbow UI in action â€”
          design examples, component usage, and real layouts to inspire your
          next project.
        </Text>

        <Button variant="default" size="sm" class="mx-auto mt-8 w-fit">
          See gallery
        </Button>
      </div>
      <div class="md:col-span-2">
        <Image
          width={500}
          height={500}
          src={g6}
          alt="#_"
          class="object-cover object-top size-full lg:h-80"
        />
      </div>
      <div class="md:col-span-4">
        <Image
          width={500}
          height={500}
          src={g7}
          alt="#_"
          class="object-cover object-top size-full lg:h-80"
        />
      </div>
    </div>
  </div>
</section>
