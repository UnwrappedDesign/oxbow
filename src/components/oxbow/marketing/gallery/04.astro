---
import Button from "@/components/fundations/buttons/Button.astro";
---

<div class="relative">
  <div class="lg:absolute lg:inset-0 lg:right-1/2">
    <div class="h-full grid grid-cols-1 lg:grid-cols-3 gap-4">
      <img
        class="h-64 w-full bg-base-50 object-cover sm:h-80 lg:h-full lg:col-span-2"
        src="/images/p1.svg"
        alt="#_"
      />
      <div class="flex flex-col gap-4">
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover hidden lg:block"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover hidden lg:block"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover hidden lg:block"
        />
      </div>
    </div>
  </div>
  <div
    class="pb-24 py-16 sm:py-24 lg:mx-auto lg:grid lg:max-w-7xl lg:grid-cols-2 lg:py-96"
  >
    <div class="px-8 lg:col-start-2 lg:pl-24">
      <div class="mx-auto max-w-xl lg:mx-0 lg:max-w-lg">
        <span
          class="font-mono text-xs font-medium tracking-tight text-accent-600 uppercase"
          >Tagline</span
        >
        <h1
          class="text-4xl mt-4 font-semibold tracking-tight text-base-900 sm:text-balance"
        >
          Explore our visual showcase
        </h1>
        <p class="mt-6 text-base font-medium text-base-500 sm:text-balance">
          A curated collection of images capturing the essence of our brand and
          the stories we tell.
        </p>
        <div class="flex mt-8">
          <Button variant="alternative" size="sm"> See gallery </Button>
        </div>
      </div>
    </div>
  </div>
</div>
