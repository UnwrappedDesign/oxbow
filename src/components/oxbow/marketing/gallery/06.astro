---
import Text from "@/components/fundations/typography/Text.astro";
import { Image } from "astro:assets";
import g1 from "@/images/gallery/1.png";
import g2 from "@/images/gallery/2.png";
import g3 from "@/images/gallery/3.png";
import g4 from "@/images/gallery/4.png";
import g5 from "@/images/gallery/5.png";
import g6 from "@/images/gallery/6.png";

const gallery = [
  { src: g1, alt: "Oxbow UI" },
  { src: g2, alt: "Oxbow UI" },
  { src: g3, alt: "Oxbow UI" },
  { src: g4, alt: "Oxbow UI" },
  { src: g5, alt: "Oxbow UI" },
  { src: g6, alt: "Oxbow UI" },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-32">
    <div class="items-center grid grid-cols-1 gap-12 lg:grid-cols-6">
      <div class="lg:col-span-2 lg:order-last">
        <Text
          variant="displayMD"
          tag="h2"
          class="font-semibold tracking-tight text-zinc-900 dark:text-white sm:text-balance"
        >
          Explore our visual showcase
        </Text>
        <Text
          variant="textSM"
          tag="p"
          class="mt-2 font-medium text-zinc-500 dark:text-zinc-400 sm:text-balance"
        >
          A curated collection of images capturing the essence of our brand and
          the stories we tell.
        </Text>
        <Text
          variant="textSM"
          tag="p"
          class="mt-4 text-zinc-600 dark:text-zinc-400"
        >
          What youâ€™ll find:
        </Text>

        <ul
          class="mt-2 ml-4 text-sm font-medium list-disc text-zinc-600 dark:text-zinc-400 space-y-1"
        >
          <li>Responsive layout examples across breakpoints</li>
          <li>Color and typography pairings in real screens</li>
          <li>Component states and interaction previews</li>
        </ul>
      </div>
      <div
        class="lg:col-span-4 grid grid-cols-1 sm:grid-cols-2 gap-4 lg:grid-cols-3"
      >
        {
          gallery.map(({ src, alt }) => (
            <Image
              width={500}
              height={500}
              src={src}
              alt={alt}
              class="object-cover size-full aspect-square"
            />
          ))
        }
      </div>
    </div>
  </div>
</section>
