---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import { Image } from "astro:assets";
import g1 from "@/images/gallery/1.png";
import g2 from "@/images/gallery/2.png";
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-20">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:col-span-4">
      <div class="flex flex-col justify-center p-12 text-center">
        <Text
          variant="displayLG"
          tag="h2"
          class="font-semibold tracking-tight text-zinc-900 dark:text-white sm:text-balance"
        >
          Explore our visual showcase
        </Text>
        <Text
          variant="textSM"
          tag="p"
          class="mt-2 font-medium text-zinc-500 dark:text-zinc-400 sm:text-balance"
        >
          A curated collection of images capturing the essence of our brand and
          the stories we tell.
        </Text>
      </div>
      <Image
        width={500}
        height={500}
        src={g1}
        alt="#_"
        class="object-cover size-full aspect-square"
      />
      <Image
        width={500}
        height={500}
        src={g2}
        alt="#_"
        class="object-cover size-full aspect-square"
      />
      <div class="flex flex-col justify-center p-12 text-center">
        <Text
          variant="textSM"
          tag="p"
          class="font-medium text-zinc-500 dark:text-zinc-400 sm:text-balance"
        >
          Our smart contract automation feature simplifies complex business
          processes by encoding contract terms and conditions into
          self-executing code.
        </Text>
        <Button variant="default" size="sm" class="mx-auto mt-8 w-fit">
          See all images
        </Button>
      </div>
    </div>
  </div>
</section>
