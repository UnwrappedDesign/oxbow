---
import Button from "@/components/fundations/buttons/Button.astro";
const gallery = [
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
  { src: "/images/p1.svg", alt: "Oxbow UI" },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="max-w-xl mx-auto text-center lg:text-balance">
      <span
        class="font-mono text-xs font-medium tracking-tight uppercase text-blue-600"
        >Tagline</span
      >
      <h1
        class="mt-4 text-4xl font-semibold tracking-tight text-gray-900 sm:text-balance"
      >
        Explore our visual showcase
      </h1>
      <p class="mt-6 text-base font-medium text-gray-500 sm:text-balance">
        A curated collection of images capturing the essence of our brand and
        the stories we tell.
      </p>
    </div>
    <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 gap-4 lg:grid-cols-4">
      {
        gallery.map(({ src, alt }) => (
          <img
            src={src}
            alt={alt}
            class="object-cover size-full aspect-square"
          />
        ))
      }
    </div>
    <div class="flex justify-center mt-8">
      <Button variant="alternative" size="sm"> See gallery </Button>
    </div>
  </div>
</section>
