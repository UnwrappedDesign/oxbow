---
import Button from "@/components/fundations/buttons/Button.astro";
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="flex flex-col gap-4">
        <img
          src="/images/p1.svg"
          alt="#_"
          class="object-cover size-full max-h-64"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="object-cover size-full aspect-square"
        />
      </div>
      <div class="flex flex-col gap-4">
        <img
          src="/images/p1.svg"
          alt="#_"
          class="object-cover size-full aspect-square"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="object-cover size-full max-h-64"
        />
      </div>
    </div>
    <div class="items-end mt-12 grid grid-cols-1 gap-12 lg:grid-cols-3">
      <div class="lg:col-span-2">
       
        <h1
          class=" text-4xl font-semibold tracking-tight text-zinc-900 dark:text-white sm:text-balance"
        >
          Explore our visual showcase
        </h1>
        <p
          class="mt-2 text-base font-medium text-zinc-500 dark:text-zinc-400 sm:text-balance"
        >
          A curated collection of images capturing the essence of our brand and
          the stories we tell.
        </p>
      </div>
      <div class="flex justify-center">
        <Button variant="outline" size="sm"> See gallery </Button>
      </div>
    </div>
  </div>
</section>
