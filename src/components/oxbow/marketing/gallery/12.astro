---
import Button from "@/components/fundations/buttons/Button.astro";
---

<div>
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="flex flex-col gap-4">
        <img
          src="/images/p1.svg"
          alt="#_"
          class="object-cover size-full max-h-64"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="object-cover size-full aspect-square"
        />
      </div>
      <div class="flex flex-col gap-4">
        <img
          src="/images/p1.svg"
          alt="#_"
          class="object-cover size-full aspect-square"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="object-cover size-full max-h-64"
        />
      </div>
    </div>
    <div class="items-end mt-12 grid grid-cols-1 gap-12 lg:grid-cols-3">
      <div class="lg:col-span-2">
        <span
          class="font-mono text-xs font-medium tracking-tight uppercase text-blue-600"
          >Tagline</span
        >
        <h1
          class="mt-4 text-4xl font-semibold tracking-tight text-zinc-900 sm:text-balance"
        >
          Explore our visual showcase
        </h1>
        <p class="mt-6 text-base font-medium text-zinc-500 sm:text-balance">
          A curated collection of images capturing the essence of our brand and
          the stories we tell.
        </p>
      </div>
      <div class="flex justify-center">
        <Button variant="alternative" size="sm"> See gallery </Button>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
