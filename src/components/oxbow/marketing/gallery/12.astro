---
import Button from "@/components/fundations/buttons/Button.astro"
---
<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="flex flex-col gap-4">
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover max-h-64"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover aspect-square"
        />
      </div>
      <div class="flex flex-col gap-4">
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover aspect-square"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover max-h-64"
        />
      </div>
    </div>
    <div class="grid grid-cols-1 mt-12 gap-12 lg:grid-cols-3 items-end">
      <div class="lg:col-span-2">
        <span
          class="font-mono text-xs font-medium tracking-tight text-accent-600 uppercase"
          >Tagline</span
        >
        <h1
          class="text-4xl mt-4 font-semibold tracking-tight text-base-900 sm:text-balance">
          Explore our visual showcase
        </h1>
        <p class="mt-6 text-base font-medium text-base-500 sm:text-balance">
          A curated collection of images capturing the essence of our brand and
          the stories we tell.
        </p>
      </div>
      <div class="flex justify-center">
        <Button variant="alternative" size="sm"> See gallery </Button>
      </div>
    </div>
  </div>
</section>
