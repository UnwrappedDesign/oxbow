---
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:grid-cols-3 lg:col-span-4"
    >
      <div class="flex flex-col gap-4 sm:col-span-2 lg:col-span-1">
        <div class="py-12">
          <Text
            tag="p"
            variant="textSM"
            class="font-bold uppercase text-accent-600"
          >
            Tagline
          </Text>
          <Text
            tag="h2"
            variant="displayBase"
            class="mt-4 font-semibold text-base-900 lg:text-balance"
          >
            Explore our visual showcase
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 text-base-500 font-medium"
          >
            A curated collection of images capturing the essence of our brand
            and the stories we tell.
          </Text>
        </div>
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
      </div>
      <div class="flex flex-col gap-4 sm:col-span-2 lg:col-span-1">
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
        <img src="/images/p1.svg" alt="#_" class="size-full object-cover" />
      </div>
      <div class="flex flex-col gap-4 sm:col-span-2 lg:col-span-1">
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover aspect-square"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover aspect-square"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover aspect-square"
        />
      </div>
    </div>
  </div>
</section>
