---
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div
      class="border-b border-base-200 pb-5 sm:flex sm:items-center sm:justify-between"
    >
      <div class="sm:w-0 sm:flex-1">
        <Text tag="h1" variant="textLG" class="text-base-900 font-medium">
          Oxbow UI
        </Text>
        <Text tag="p" variant="textSM" class="mt-1 text-base-500 font-medium">
          30 images
        </Text>
      </div>
      <div class="mt-3 sm:ml-4 sm:mt-0">
        <Button gap="xs" size="base" variant="muted"> See all products </Button>
      </div>
    </div>

    <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 gap-4">
      <img
        src="/images/p1.svg"
        alt="#_"
        class="size-full object-cover aspect-square"
      />
      <div class="grid grid-cols-1 gap-4 lg:grid-cols-2">
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover aspect-square"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover aspect-square"
        />
        <img
          src="/images/p1.svg"
          alt="#_"
          class="size-full object-cover lg:col-span-2"
        />
      </div>
    </div>
  </div>
</section>
