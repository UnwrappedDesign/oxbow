---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-20">
    <div class="max-w-xl mx-auto text-center lg:text-balance">
      <Kicker>Get in Touch</Kicker>
      <Text
        tag="h1"
        variant="displayMD"
        class="mt-12 font-semibold tracking-tight text-zinc-900 dark:text-white lg:text-balance"
      >
        Reach out to our team today
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 lg:text-balance text-zinc-500 dark:text-zinc-400"
      >
        We’re here to answer your questions, discuss your ideas, or help you get
        started. Let’s connect and make something great happen together.
      </Text>
    </div>
    <dl
      class="relative max-w-2xl mx-auto mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2"
    >
      <div
        class="relative flex flex-col justify-between h-full shadow bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl group"
      >
        <a class="absolute inset-0" href="#_"> </a>
        <dt
          class="flex items-center justify-between w-full p-8 text-lg font-medium tracking-tight text-zinc-900 dark:text-white"
        >
          Send us an email
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="icon icon-tabler icons-tabler-filled icon-tabler-circle-arrow-right group-hover:-rotate-45 duration-300"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M12 2l.324 .005a10 10 0 1 1 -.648 0l.324 -.005zm.613 5.21a1 1 0 0 0 -1.32 1.497l2.291 2.293h-5.584l-.117 .007a1 1 0 0 0 .117 1.993h5.584l-2.291 2.293l-.083 .094a1 1 0 0 0 1.497 1.32l4 -4l.073 -.082l.064 -.089l.062 -.113l.044 -.11l.03 -.112l.017 -.126l.003 -.075l-.007 -.118l-.029 -.148l-.035 -.105l-.054 -.113l-.071 -.111a1.008 1.008 0 0 0 -.097 -.112l-4 -4z"
            ></path></svg
          >
        </dt>
        <dd
          class="p-8 text-sm border-t text-balance text-zinc-600 dark:text-zinc-100 border-zinc-200 dark:border-white/10"
        >
          Please contact us by sending an email or the contact below.
        </dd>
      </div>
      <div
        class="relative flex flex-col justify-between h-full shadow bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl group"
      >
        <a class="absolute inset-0" href="#_"> </a>
        <dt
          class="flex items-center justify-between w-full p-8 text-lg font-medium tracking-tight text-zinc-900 dark:text-white"
        >
          Join us
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="icon icon-tabler icons-tabler-filled icon-tabler-circle-arrow-right group-hover:-rotate-45 duration-300"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M12 2l.324 .005a10 10 0 1 1 -.648 0l.324 -.005zm.613 5.21a1 1 0 0 0 -1.32 1.497l2.291 2.293h-5.584l-.117 .007a1 1 0 0 0 .117 1.993h5.584l-2.291 2.293l-.083 .094a1 1 0 0 0 1.497 1.32l4 -4l.073 -.082l.064 -.089l.062 -.113l.044 -.11l.03 -.112l.017 -.126l.003 -.075l-.007 -.118l-.029 -.148l-.035 -.105l-.054 -.113l-.071 -.111a1.008 1.008 0 0 0 -.097 -.112l-4 -4z"
            ></path></svg
          >
        </dt>
        <dd
          class="p-8 text-sm border-t text-balance text-zinc-600 dark:text-zinc-100 border-zinc-200 dark:border-white/10"
        >
          Be a part of our welcoming and supportive community on Circle.
        </dd>
      </div>
    </dl>
    <form action="#" method="POST" class="max-w-xl mx-auto mt-12">
      <div class="mt-12 grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
        <div>
          <label
            for="first-name"
            class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
          >
            First name
          </label>
          <div class="mt-1">
            <input
              type="text"
              name="first-name"
              id="first-name"
              autocomplete="given-name"
              required
              aria-required="true"
              aria-describedby="first-name-error"
              placeholder="Your first name"
              class="block w-full h-10 px-4 py-2 text-sm text-blue-700 bg-white border border-transparent rounded-lg appearance-none dark:bg-zinc-900 dark:text-blue-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
            />
            <span id="first-name-error" class="hidden text-sm text-red-600">
              Please enter your first name.
            </span>
          </div>
        </div>
        <div>
          <label
            for="last-name"
            class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
          >
            Last name
          </label>
          <div class="mt-1">
            <input
              type="text"
              name="last-name"
              id="last-name"
              autocomplete="family-name"
              required
              aria-required="true"
              aria-describedby="last-name-error"
              placeholder="Your last name"
              class="block w-full h-10 px-4 py-2 text-sm text-blue-700 bg-white border border-transparent rounded-lg appearance-none dark:bg-zinc-900 dark:text-blue-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
            />
            <span id="last-name-error" class="hidden text-sm text-red-600">
              Please enter your last name.
            </span>
          </div>
        </div>
        <div class="sm:col-span-2">
          <label
            for="compant"
            class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
          >
            Company name
          </label>
          <div class="mt-1">
            <input
              type="text"
              name="company"
              id="company"
              autocomplete="organization"
              aria-describedby="company-error"
              placeholder="Your company"
              class="block w-full h-10 px-4 py-2 text-sm text-blue-700 bg-white border border-transparent rounded-lg appearance-none dark:bg-zinc-900 dark:text-blue-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
            />
            <span id="company-error" class="hidden text-sm text-red-600">
              Please enter your company name.
            </span>
          </div>
        </div>
        <div class="sm:col-span-2">
          <label
            for="phone-number"
            class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
          >
            Phone number
          </label>
          <div class="relative mt-2.5">
            <div class="absolute inset-y-0 left-0 flex items-center">
              <label for="country" class="sr-only">Country</label>
              <select
                id="country"
                name="country"
                aria-label="Country code"
                class="h-full py-0 pl-4 bg-transparent border-0 rounded-md pr-9 text-zinc-400 dark:text-zinc-500 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm"
              >
                <option value="IT">Italy</option>
                <option value="ES">Spain</option>
                <option value="JP">Japan</option>
              </select>
            </div>
            <input
              type="tel"
              name="phone-number"
              id="phone-number"
              autocomplete="tel"
              aria-describedby="phone-number-description"
              placeholder="123-456-7890"
              class="block w-full h-10 px-4 py-2 pl-24 text-sm text-blue-700 bg-white border border-transparent rounded-lg appearance-none dark:bg-zinc-900 dark:text-blue-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
            />
            <p id="phone-number-description" class="sr-only">
              Enter your phone number including the country code.
            </p>
          </div>
        </div>
        <div class="sm:col-span-2">
          <label
            for="email"
            class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
          >
            Email
          </label>
          <div class="mt-1">
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              required
              aria-required="true"
              aria-describedby="email-error"
              placeholder="Your email"
              class="block w-full h-10 px-4 py-2 text-sm text-blue-700 bg-white border border-transparent rounded-lg appearance-none dark:bg-zinc-900 dark:text-blue-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
            />
            <span id="email-error" class="hidden text-sm text-red-600">
              Please enter a valid email address.
            </span>
          </div>
        </div>
        <div class="sm:col-span-2">
          <label
            for="message"
            class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
          >
            Message
          </label>
          <div class="mt-1">
            <textarea
              name="message"
              id="message"
              rows="5"
              aria-describedby="message-error"
              placeholder="Your message"
              class="block w-full px-4 py-2 text-sm text-blue-700 bg-white border border-transparent rounded-lg appearance-none dark:bg-zinc-900 dark:text-blue-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
            ></textarea>
            <span id="message-error" class="hidden text-sm text-red-600">
              Please enter your message.
            </span>
          </div>
        </div>
      </div>
      <Button class="w-full mt-8" variant="default" size="base">
        Submit
      </Button>
      <div class="flex items-center mt-4 gap-3">
        <input
          id="agreement"
          name="agreement"
          type="checkbox"
          class="text-blue-600 rounded shadow size-4 border-zinc-300 focus:ring-blue-600"
        />
        <label
          for="agreement"
          class="block ml-3 text-sm text-zinc-500 dark:text-zinc-400"
        >
          You agree to our
          <a
            href="#_"
            class="ont-medium text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300"
          >
            Terms of service
          </a>
          and
          <a
            href="#_"
            class="ont-medium text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300"
          >
            Privacy Policy
          </a>
        </label>
      </div>
    </form>
  </div>
</section>
