---
const contactInfo = [
  {
    title: "Collaborate",
    email: {
      address: "example@oxbowui.com",
      mailto: "mailto:example@oxbowui.com",
    },
    phone: "+44 20 7946 1234", // Updated UK phone number
  },
  {
    title: "Press",
    email: {
      address: "example@oxbowui.com",
      mailto: "mailto:example@oxbowui.com",
    },
    phone: "+33 1 42 68 90 12", // Updated France phone number
  },
  {
    title: "Join our team",
    email: {
      address: "example@oxbowui.com",
      mailto: "mailto:example@oxbowui.com",
    },
    phone: "+49 30 98765432", // Updated Germany phone number
  },
  {
    title: "Say hello",
    email: {
      address: "example@oxbowui.com",
      mailto: "mailto:example@oxbowui.com",
    },
    phone: "+34 91 654 3210", // Updated Spain phone number
  },
];
const locations = [
  {
    title: "Amsterdam",
    addressLines: ["78 Canal Street", "1012 AB Amsterdam", "Netherlands"],
  },
  {
    title: "Vienna",
    addressLines: ["56 Schönbrunner Straße", "1120 Vienna", "Austria"],
  },
  {
    title: "Stockholm",
    addressLines: ["23 Gamla Stan", "111 29 Stockholm", "Sweden"],
  },
  {
    title: "Zurich",
    addressLines: ["12 Bahnhofstrasse", "8001 Zurich", "Switzerland"],
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1 lg:grid-cols-3">
      <div>
        <span
          class="font-mono text-xs font-medium tracking-tight text-accent-600 uppercase"
          >Contact</span
        >
        <h1
          class="text-4xl mt-4 font-semibold tracking-tight text-base-900 sm:text-balance">
          Get in touch with our friendly team
        </h1>
        <p class="mt-6 text-base font-medium text-base-500 sm:text-balance">
          Let us know how we can help.
        </p>
      </div>
      <div class="space-y-12 lg:col-span-2">
        <div>
          <p class="tracking-tight text-lg font-medium text-base-900">
            Contact us
          </p>
          <div class="flex divide-y mt-4 border-y flex-col">
            {
              contactInfo.map((contact) => (
                <div class="grid grid-cols-1 sm:grid-cols-2  lg:grid-cols-3 gap-2 py-4">
                  <h3 class="tracking-tight text-base  text-base-500">
                    {contact.title}
                  </h3>
                  <dl class=" gap-2 text-sm text-base-500 lg:col-span-2 grid grid-cols-1 lg:grid-cols-2">
                    <div>
                      <dt class="sr-only">Email</dt>
                      <dd>
                        <a
                          class="text-accent-500 hover:text-base-900 duration-300 flex items-center gap-2"
                          href={contact.email.mailto}>
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon icon-tabler icons-tabler-outline size-4 icon-tabler-mail">
                            <>
                              <path
                                stroke="none"
                                d="M0 0h24v24H0z"
                                fill="none"
                              />
                              <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                              <path d="M3 7l9 6l9 -6" />
                            </>
                          </svg>{" "}
                          {contact.email.address}
                        </a>
                      </dd>
                    </div>
                    <div>
                      <dt class="sr-only">Phone number</dt>
                      <dd>
                        <a
                          href={`tel:${contact.phone}`}
                          class="text-accent-500 hover:text-base-900 duration-300 flex items-center gap-2">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon icon-tabler icons-tabler-outline size-4 icon-tabler-phone">
                            <>
                              <path
                                stroke="none"
                                d="M0 0h24v24H0z"
                                fill="none"
                              />
                              <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" />
                            </>
                          </svg>{" "}
                          {contact.phone}
                        </a>
                      </dd>
                    </div>
                  </dl>
                </div>
              ))
            }
          </div>
        </div>
        <div>
          <p class="tracking-tight text-lg font-medium text-base-900">
            Our offices
          </p>
          <div class="border-y divide-y mt-4">
            {
              locations.map((location) => (
                <div class="grid grid-cols-1 sm:grid-cols-2  lg:grid-cols-3 gap-2 py-4">
                  <h3 class="tracking-tight text-base  text-base-500">
                    {location.title}
                  </h3>
                  <address class="mt-2 not-italic gap-2 text-sm lg:col-span-2 text-base-500 flex  sm:text-balance">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler icons-tabler-outline icon-tabler-map-pin size-4">
                      <>
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        />
                        <path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" />
                        <path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z" />
                      </>
                    </svg>
                    <div class="flex flex-col lg:flex-row gap-2">
                      {location.addressLines.map((line, idx) => (
                        <p>
                          {line}
                          {idx < location.addressLines.length - 1 ? ", " : ""}
                        </p>
                      ))}
                    </div>
                  </address>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
