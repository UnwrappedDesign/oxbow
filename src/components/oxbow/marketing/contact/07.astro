---
import Text from "@/components/fundations/typography/Text.astro";
import MapPin from "@/components/fundations/icons/MapPin.astro";
import Phone from "@/components/fundations/icons/Phone.astro";
import Mail from "@/components/fundations/icons/Mail.astro";
const contactInfo = [
  {
    title: "Collaborate",
    email: {
      address: "example@oxbowui.com",
      mailto: "mailto:example@oxbowui.com",
    },
    phone: "+44 20 7946 1234",
  },
  {
    title: "Press",
    email: {
      address: "example@oxbowui.com",
      mailto: "mailto:example@oxbowui.com",
    },
    phone: "+33 1 42 68 90 12",
  },
  {
    title: "Join our team",
    email: {
      address: "example@oxbowui.com",
      mailto: "mailto:example@oxbowui.com",
    },
    phone: "+49 30 98765432",
  },
  {
    title: "Say hello",
    email: {
      address: "example@oxbowui.com",
      mailto: "mailto:example@oxbowui.com",
    },
    phone: "+34 91 654 3210",
  },
];
const locations = [
  {
    title: "Amsterdam",
    addressLines: ["78 Canal Street", "1012 AB Amsterdam", "Netherlands"],
  },
  {
    title: "Vienna",
    addressLines: ["56 Schönbrunner Straße", "1120 Vienna", "Austria"],
  },
  {
    title: "Stockholm",
    addressLines: ["23 Gamla Stan", "111 29 Stockholm", "Sweden"],
  },
  {
    title: "Zurich",
    addressLines: ["12 Bahnhofstrasse", "8001 Zurich", "Switzerland"],
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1 lg:grid-cols-3">
      <div>
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600">
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 lg:text-balance">
          We would love to hear from you!
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
          Uniting talent with vision. Get to know the dedicated professionals
          who blend their skills and passion to lead us to new heights.
        </Text>
      </div>
      <div class="space-y-12 lg:col-span-2">
        <div>
          <Text
            tag="h3"
            variant="textLG"
            class="text-base-900 font-medium">
            Contact us
          </Text>
          <div class="flex divide-y mt-4 border-y flex-col">
            {
              contactInfo.map((contact) => (
                <div class="grid grid-cols-1 sm:grid-cols-2  lg:grid-cols-3 gap-2 py-4">
                  <Text
                    tag="h2"
                    variant="textMD"
                    class="font-semibold text-base-900 lg:text-balance">
                    {contact.title}
                  </Text>
                  <dl class=" gap-2 text-sm text-base-500 lg:col-span-2 grid grid-cols-1 lg:grid-cols-2">
                    <div>
                      <dt class="sr-only">Email</dt>
                      <dd>
                        <Text
                          tag="a"
                          href="#_"
                          variant="textMD"
                          class="text-accent-500 font-medium flex items-center gap-2 hover:text-base-900">
                          <Mail size="sm" />
                          {contact.email.address}
                        </Text>
                      </dd>
                    </div>
                    <div>
                      <dt class="sr-only">Phone number</dt>
                      <dd>
                        <Text
                          tag="a"
                          href="#_"
                          variant="textMD"
                          class="text-accent-500 font-medium flex items-center gap-2 hover:text-base-900">
                          <Phone size="sm" />
                          {contact.phone}
                        </Text>
                      </dd>
                    </div>
                  </dl>
                </div>
              ))
            }
          </div>
        </div>
        <div>
          <Text
            tag="h3"
            variant="textLG"
            class="text-base-900 font-medium">
            Our offices
          </Text>
          <div class="border-y divide-y mt-4">
            {
              locations.map((location) => (
                <div class="grid grid-cols-1 sm:grid-cols-2  lg:grid-cols-3 gap-2 py-4">
                  <Text
                    tag="h2"
                    variant="textMD"
                    class="font-semibold text-base-900 lg:text-balance">
                    {location.title}
                  </Text>
                  <address class="mt-2 not-italic gap-2 text-sm lg:col-span-2 text-base-500 flex  sm:text-balance">
                    <MapPin
                      class="text-accent-600"
                      size="sm"
                    />
                    <div class="flex flex-col lg:flex-row gap-2">
                      {location.addressLines.map((line, idx) => (
                        <Text
                          tag="p"
                          variant="small">
                          {line}
                          {idx < location.addressLines.length - 1 ? ", " : ""}
                        </Text>
                      ))}
                    </div>
                  </address>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
