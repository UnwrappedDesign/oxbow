---
import Text from "@/components/fundations/typography/Text.astro";

import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import CreditCard from "@/components/fundations/icons/CreditCard.astro";
import News from "@/components/fundations/icons/News.astro";
import Lifebuoy from "@/components/fundations/icons/Lifebuoy.astro";
import UserPlus from "@/components/fundations/icons/UserPlus.astro";
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl lg:text-balance mx-auto text-center">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600">
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-base-900 lg:text-balance">
        We would love to hear from you!
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 text-base-500 font-medium">
        Uniting talent with vision. Get to know the dedicated professionals who
        blend their skills and passion to lead us to new heights.
      </Text>
    </div>
    <dl
      class="grid text-center mt-12 sm:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-x-8 lg:gap-y-16">
      <div class="flex h-full flex-col text-sm justify-between">
        <div>
          <dt class="flex flex-col gap-2">
            <CreditCard
              class="mx-auto text-accent-500"
              size="base"
            />
            <Text
              tag="h3"
              variant="textLG"
              class="text-base-900 font-medium">
              Sales
            </Text>
          </dt>
          <dd>
            <Text
              tag="p"
              variant="textBase"
              class="mt-2 text-base-500 font-medium">
              Find out how Oxbow UI can help your business.
            </Text>
          </dd>
        </div>
        <Text
          tag="a"
          href="#_"
          variant="textMD"
          class="text-accent-500 font-medium flex items-center gap-2 hover:text-base-900 mt-4 mx-auto">
          Talk to sales
          <ChevronRight size="sm" />
        </Text>
      </div>
      <div class="flex h-full flex-col text-sm justify-between">
        <dt>
          <div class="flex flex-col gap-2 tracking-tighter text-xs">
            <Lifebuoy
              class="mx-auto text-accent-500"
              size="base"
            />
            <Text
              tag="h3"
              variant="textLG"
              class="text-base-900 font-medium">
              Support
            </Text>
          </div>
        </dt>
        <dd>
          <Text
            tag="p"
            variant="textBase"
            class="text-base-500 font-medium">
            Find out how Oxbow UI can help your business. Have a support
            question? We’ve got answers.
          </Text>
        </dd>
        <Text
          tag="a"
          href="#_"
          variant="textMD"
          class="text-accent-500 font-medium flex items-center gap-2 hover:text-base-900 mt-4 mx-auto">
          Talk to support
          <ChevronRight size="sm" />
        </Text>
      </div>
      <div class="flex h-full flex-col text-sm justify-between">
        <div>
          <dt class="flex flex-col gap-2 tracking-tighter text-xs">
            <News
              class="mx-auto text-accent-500"
              size="base"
            />
            <Text
              tag="h3"
              variant="textLG"
              class="text-base-900 font-medium">
              Press
            </Text>
          </dt>
          <dd>
            <Text
              tag="p"
              variant="textBase"
              class="mt-2 text-base-500 font-medium">
              Any media questions or publication ideas you have, we’re happy to
              connect.
            </Text>
          </dd>
        </div>
        <Text
          tag="a"
          href="#_"
          variant="textMD"
          class="text-accent-500 font-medium flex items-center gap-2 hover:text-base-900 mt-4 mx-auto">
          Talk to press
          <ChevronRight size="sm" />
        </Text>
      </div>
      <div class="flex h-full flex-col text-sm justify-between">
        <div>
          <dt class="flex flex-col gap-2 tracking-tighter text-xs">
            <UserPlus
              class="mx-auto text-accent-500"
              size="base"
            />
            <Text
              tag="h3"
              variant="textLG"
              class="text-base-900 font-medium">
              Partners
            </Text>
          </dt>
          <dd>
            <Text
              tag="p"
              variant="textBase"
              class="mt-2 text-base-500 font-medium">
              We love partnering with other businesses. Let us know what you’re
              thinking.
            </Text>
          </dd>
        </div>
        <Text
          tag="a"
          href="#_"
          variant="textMD"
          class="text-accent-500 font-medium flex items-center gap-2 hover:text-base-900 mt-4 mx-auto">
          Meet our partners
          <ChevronRight size="sm" />
        </Text>
      </div>
    </dl>
  </div>
</section>
