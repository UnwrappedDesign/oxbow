---
export const freeComponent = true;
import Text from "@/components/fundations/typography/Text.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import CreditCard from "@/components/fundations/icons/CreditCard.astro";
import News from "@/components/fundations/icons/News.astro";
import Lifebuoy from "@/components/fundations/icons/Lifebuoy.astro";
import UserPlus from "@/components/fundations/icons/UserPlus.astro";
---
<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div class="max-w-xl mx-auto text-center lg:text-balance">
      <Kicker>Let’s Connect</Kicker>
      <Text
        tag="h1"
        variant="displayMD"
        class="mt-12 font-semibold tracking-tight text-zinc-900 dark:text-white lg:text-balance"
      >
        Reach out—your ideas matter to us
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 lg:text-balance text-zinc-500 dark:text-zinc-400"
      >
        Whether you have a question, a partnership in mind, or just want to say
        hello, we’re here and ready to listen. Let’s build something great
        together.
      </Text>
    </div>
    <div
      class="mt-12 text-center grid sm:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-x-8 lg:gap-y-16"
    >
      <div>
        <div class="flex flex-col gap-2">
          <CreditCard
            class="mx-auto text-blue-500 dark:text-blue-400"
            size="base"
          />
          <Text
            tag="h3"
            variant="textBase"
            class="font-medium text-zinc-900 dark:text-white mt-8"
          >
            Sales
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class=" font-medium text-zinc-500 dark:text-zinc-400"
          >
            Curious about how Oxbow UI can elevate your business? Let’s talk
            solutions tailored for you.
          </Text>
        </div>
        <Text
          href="#_"
          class="font-medium justify-center flex items-center gap-2 mt-4 text-sm text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300 text-sm"
        >
          Talk to sales
          <ChevronRight size="sm" />
        </Text>
      </div>
      <div>
        <div>
          <Lifebuoy
            class="mx-auto text-blue-500 dark:text-blue-400"
            size="base"
          />
          <Text
            tag="h3"
            variant="textBase"
            class="font-medium text-zinc-900 dark:text-white mt-8"
          >
            Support
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="font-medium text-zinc-500 dark:text-zinc-400"
          >
            Need help or have a question? Our support team is here to make your
            experience smooth and stress-free.
          </Text>
        </div>
        <Text
          href="#_"
          class="font-medium justify-center flex items-center gap-2 mt-4 text-sm text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300 text-sm"
        >
          Talk to support
          <ChevronRight size="sm" />
        </Text>
      </div>
      <div>
        <div>
          <News class="mx-auto text-blue-500 dark:text-blue-400" size="base" />
          <Text
            tag="h3"
            variant="textBase"
            class="font-medium text-zinc-900 dark:text-white mt-8"
          >
            Press
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class=" font-medium text-zinc-500 dark:text-zinc-400"
          >
            For media inquiries, interviews, or creative collaborations, we’re
            always open to new stories and ideas.
          </Text>
        </div>
        <Text
          href="#_"
          class="font-medium justify-center flex items-center gap-2 mt-4 text-sm text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300 text-sm"
        >
          Talk to press
          <ChevronRight size="sm" />
        </Text>
      </div>
      <div>
        <div>
          <UserPlus
            class="mx-auto text-blue-500 dark:text-blue-400"
            size="base"
          />
          <Text
            tag="h3"
            variant="textBase"
            class="font-medium text-zinc-900 dark:text-white mt-8"
          >
            Partners
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class=" font-medium text-zinc-500 dark:text-zinc-400"
          >
            Interested in teaming up? Share your vision and let’s explore how we
            can create something impactful together.
          </Text>
        </div>
        <Text
          href="#_"
          class="font-medium justify-center flex items-center gap-2 mt-4 text-sm text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300 text-sm"
        >
          Meet our partners
          <ChevronRight size="sm" />
        </Text>
      </div>
    </div>
  </div>
</section>
