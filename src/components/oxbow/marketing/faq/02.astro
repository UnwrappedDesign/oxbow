---
import Text from "@/components/fundations/typography/Text.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
const faqsSet1 = [
  {
    question: "How does encryption work?",
    answer:
      "End-to-end encryption ensures that only the sender and recipient can access the content of a message.    ",
  },
  {
    question: "What if I forget my encryption key?",
    answer:
      "No, forgetting or losing your encryption key means that your encrypted data cannot be accessed.       ",
  },
  {
    question: "Any limits to messages?",
    answer:
      "Self-destructing messages are designed to automatically delete themselves after a specific period or upon being read by the recipient.          ",
  },
  {
    question: "What if I lose my device with 2FA?",
    answer:
      "Losing your device doesn't automatically compromise your account's security.              ",
  },
];
const faqsSet2 = [
  {
    question: "How do I reset my password?",
    answer:
      "You can reset your password by clicking 'Forgot Password' on the login page and following the instructions sent to your email.",
  },
  {
    question: "Can I change my username?",
    answer:
      "Yes, you can change your username in the account settings under 'Profile'.",
  },
  {
    question: "What if I experience a login issue?",
    answer:
      "If you face login issues, try resetting your password or contact support for help.",
  },
  {
    question: "How do I update my profile picture?",
    answer:
      "To update your profile picture, go to 'Profile' in settings and upload a new image.",
  },
];
const faqsSet3 = [
  {
    question: "How do I delete my account?",
    answer:
      "To delete your account, navigate to 'Account Settings' and select 'Delete Account'.",
  },
  {
    question: "Can I recover deleted messages?",
    answer: "No, once messages are deleted, they cannot be recovered.",
  },
  {
    question: "How do I manage notifications?",
    answer:
      "You can manage notifications in 'Settings' under the 'Notifications' section.",
  },
  {
    question: "Is there a dark mode option?",
    answer: "Yes, you can enable dark mode in the 'Appearance' settings.",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div>
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600">
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-base-900 lg:text-balance">
        Frequently Asked Questions
      </Text>
       <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
        Everything you need to know about our platform.
      </Text>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 mt-12">
      <div>
        <Text
          tag="h2"
          variant="textLG"
          class="font-semibold text-base-900 lg:text-balance">
          General questions
        </Text>
        <div class="divide-y border-y mt-8">
          {
            faqsSet1.map((faq) => (
              <details class="group cursor-pointer">
                <Text
                  tag="summary"
                  variant="textBase"
                  class="text-base-500 font-medium flex  items-center justify-between w-full py-4  text-left select-none hover:text-accent-500 focus:text-accent-500">
                  {faq.question}
                  <Plus
                    class="duration-300 ease-out  transform group-open:-rotate-45"
                    size="sm"
                  />
                </Text>
                <div class="py-4 pt-2 text-sm text-base-500">
                  <Text
                    tag="p"
                    variant="textBase"
                    class="text-base-500 font-medium">
                    {faq.answer}
                  </Text>
                </div>
              </details>
            ))
          }
        </div>
      </div>
      <div>
        <Text
          tag="h2"
          variant="textLG"
          class="font-semibold text-base-900 lg:text-balance">
          Support team
        </Text>
        <div class="divide-y border-y mt-8">
          {
            faqsSet2.map((faq) => (
              <details class="group cursor-pointer">
                        <Text
                  tag="summary"
                  variant="textBase"
                  class="text-base-500 font-medium flex  items-center justify-between w-full py-4  text-left select-none hover:text-accent-500 focus:text-accent-500">
                  {faq.question}
                  <Plus
                    class="duration-300 ease-out  transform group-open:-rotate-45"
                    size="sm"
                  />
                </Text>
                <div class="py-4 pt-2 text-sm text-base-500">
                  <Text
                    tag="p"
                    variant="textBase"
                    class="text-base-500 font-medium">
                    {faq.answer}
                  </Text>
                </div>
              </details>
            ))
          }
        </div>
      </div>
      <div>
        <Text
          tag="h2"
          variant="textLG"
          class="font-semibold text-base-900 lg:text-balance">
          License
        </Text>
        <div class="divide-y border-y mt-8">
          {
            faqsSet3.map((faq) => (
              <details class="group cursor-pointer">
                <Text
                  tag="summary"
                  variant="textBase"
                  class="text-base-500 font-medium flex  items-center justify-between w-full py-4  text-left select-none hover:text-accent-500 focus:text-accent-500">
                  {faq.question}
                  <Plus
                    class="duration-300 ease-out  transform group-open:-rotate-45"
                    size="sm"
                  />
                </Text>
                <div class="py-4 pt-2 text-sm text-base-500">
                  <Text
                    tag="p"
                    variant="textBase"
                    class="text-base-500 font-medium">
                    {faq.answer}
                  </Text>
                </div>
              </details>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
