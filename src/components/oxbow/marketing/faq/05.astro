---
import Text from "@/components/fundations/typography/Text.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
const faqs = [
  {
    question: "How does end-to-end encryption work?",
    answer:
      "End-to-end encryption ensures that only the sender and recipient can access the content of a message.    ",
  },
  {
    question: "Can I access my encrypted data if I forget my encryption key?",
    answer:
      "No, forgetting or losing your encryption key means that your encrypted data cannot be accessed.       ",
  },
  {
    question:
      "Are there any limitations to the self-destructing messages feature?",
    answer:
      "Self-destructing messages are designed to automatically delete themselves after a specific period or upon being read by the recipient.          ",
  },
  {
    question:
      "What happens if I enable two-factor authentication and lose my device?",
    answer:
      "Losing your device doesn't automatically compromise your account's security.              ",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="text-center">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-blue-600 dark:text-blue-400"
      >
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100 lg:text-balance"
      >
        Frequently Asked Questions
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Everything you need to know about our platform.
      </Text>
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-12">
        <div class="mx-auto divide-y divide-zinc-200 dark:divide-zinc-100/10">
          {
            faqs.map((faq) => (
              <details class="cursor-pointer group">
                <Text
                  tag="summary"
                  variant="textBase"
                  class="flex items-center justify-between w-full py-4 font-medium text-left select-none text-zinc-500 dark:text-zinc-400 hover:text-blue-500 dark:hover:text-blue-400 focus:text-blue-500 dark:focus:text-blue-400"
                >
                  {faq.question}
                  <Plus
                    class="duration-300 ease-out  transform group-open:-rotate-45 dark:text-blue-400"
                    size="sm"
                  />
                </Text>
                <div class="py-4 pt-2 text-sm text-zinc-500 dark:text-zinc-400">
                  <Text
                    tag="p"
                    variant="textBase"
                    class="font-medium text-zinc-500 dark:text-zinc-400"
                  >
                    {faq.answer}
                  </Text>
                </div>
              </details>
            ))
          }
        </div>
        <div
          class="flex flex-col justify-center h-full p-8 text-center bg-zinc-50 dark:bg-zinc-900 rounded-3xl"
        >
          <div>
            <img
              class="h-12 mx-auto"
              src="/images/oxbow/blueLineLogo.png"
              alt="#_"
            />
            <Text
              tag="h2"
              variant="textLG"
              class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100 lg:text-balance"
            >
              Got questions?
            </Text>
            <Text
              tag="p"
              variant="textBase"
              class="mt-4 font-medium text-zinc-500 dark:text-zinc-400 lg:text-balance"
            >
              Everything you need to know about our platform. We're here to help
              you with any questions you might have.
            </Text>
            <div class="flex justify-center mt-8">
              <Text
                tag="a"
                href="#_"
                variant="textBase"
                class="flex items-center font-medium text-blue-500 gap-2 hover:text-zinc-900 dark:hover:text-zinc-100"
              >
                Contact support
                <ChevronRight size="sm" />
              </Text>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
