---
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
const faqs = [
  {
    question: "What is encryption?",
    answer:
      "End-to-end encryption is a method that ensures only the sender and the recipient of a message can access its content. ",
  },
  {
    question: "Forgot my key?",
    answer:
      "If you forget your encryption key, your encrypted data becomes inaccessible. ",
  },
  {
    question: "Message limits?",
    answer:
      "Self-destructing messages are a feature designed to automatically delete themselves after a set period or once they've been read. ",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
      {
        faqs.map((faq, index) => (
          <div class="flex justify-between rounded-3xl bg-base-50 flex-col lg:gap-12">
            <span class="text-5xl font-normal font-mono text-accent-600 p-8 order-last border-t w-full">
              {index + 1}
            </span>
            <div class="sm:shrink lg:flex-none p-8">
              <Heading
                level={3}
                variant="featureTitle">
                {faq.question}
              </Heading>
              <Text
                class="mt-4"
                tag="p"
                variant="body">
                {faq.answer}
              </Text>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
