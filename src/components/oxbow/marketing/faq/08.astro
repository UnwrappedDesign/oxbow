---
import Text from "@/components/fundations/typography/Text.astro";
const faqs = [
  {
    question: "What is encryption?",
    answer:
      "End-to-end encryption is a method that ensures only the sender and the recipient of a message can access its content. ",
  },
  {
    question: "Forgot my key?",
    answer:
      "If you forget your encryption key, your encrypted data becomes inaccessible. ",
  },
  {
    question: "Message limits?",
    answer:
      "Self-destructing messages are a feature designed to automatically delete themselves after a set period or once they've been read. ",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="text-center">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600">
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-base-900 lg:text-balance">
        Frequently Asked Questions
      </Text>
       <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
        Everything you need to know about our platform.
      </Text>
    </div>
    <div
      class="flex flex-col divide-y max-w-3xl mx-auto mt-12 divide-base-200 border-y border-base-200">
      {
        faqs.map((faq) => (
          <div class="grid grid-cols-1 gap-4 lg:grid-cols-2 py-8 ">
            <Text
              variant="textLG"
              tag="h3"
              class="text-base-900 font-medium">
              {faq.question}
            </Text>
            <Text
              tag="p"
              variant="textBase"
              class=" text-base-500 font-medium">
              {faq.answer}
            </Text>
          </div>
        ))
      }
    </div>
  </div>
</section>
