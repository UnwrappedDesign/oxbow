---
import Text from "@/components/fundations/typography/Text.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";
// Consolidated FAQ sections
const faqSections = [
  {
    title: "General questions",
    faqs: [
      {
        question: "How does end-to-end encryption work?",
        answer:
          "End-to-end encryption ensures only you and your recipient can read messages.",
      },
      {
        question: "Can I access encrypted data if I lose my key?",
        answer:
          "Without your encryption key, your data cannot be decrypted, keeping it secure.",
      },
      {
        question: "Are there limits to self-destructing messages?",
        answer:
          "Messages auto-delete after a set time or once viewed, as configured.",
      },
    ],
  },
  {
    title: "Usage & Storage",
    faqs: [
      {
        question: "Can I use this platform across devices?",
        answer:
          "Yes—your encrypted data syncs across all your devices in real-time.",
      },
      {
        question: "Any storage limitations?",
        answer:
          "We offer tiered plans: higher tiers unlock more storage space.",
      },
      {
        question: "Can I export my data?",
        answer:
          "You can export messages, files, and documents for backup or migration.",
      },
    ],
  },
  {
    title: "Support & Policies",
    faqs: [
      {
        question: "Is my information shared with third parties?",
        answer:
          "Never—we adhere to strict privacy protocols; your data stays yours.",
      },
      {
        question: "How do I contact support?",
        answer:
          "Email us at support@example.com or use the in-app chat for help.",
      },
    ],
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-20">
    <div class="text-center">
      <Kicker> Curious? </Kicker>
      <Text
        tag="h1"
        variant="displayMD"
        class="mt-4 font-semibold tracking-tight text-zinc-900 dark:text-white"
      >
        We’ve got answers
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Find clear solutions to common questions about Oxbow in seconds.
      </Text>
    </div>
    <div
      class="mt-12 overflow-hidden border border-zinc-200 dark:border-zinc-100/10 rounded-2xl"
    >
      {
        faqSections.map((section) => (
          <div class="divide-y divide-zinc-200 dark:divide-zinc-100/10">
            <div class="px-8 py-4 bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800  from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900">
              <Text
                tag="h3"
                variant="textLG"
                class="font-medium text-zinc-900 dark:text-white"
              >
                {section.title}
              </Text>
            </div>
            {section.faqs.map((faq) => (
              <details class="cursor-pointer group">
                <summary class="items-start justify-between w-full px-8 py-4 text-base font-medium text-left select-none grid grid-cols-4 gap-8  text-zinc-900 dark:text-white hover:text-zinc-500 dark:hover:text-zinc-400 focus:text-zinc-500 dark:focus:text-zinc-400">
                  <span class="col-span-3">{faq.question}</span>
                  <Plus
                    class="ml-auto duration-300 ease-out transform group-open:-rotate-45 group-open:text-blue-600 dark:text-zinc-400"
                    size="sm"
                  />
                </summary>
                <div class="px-8 py-4 pt-2 text-sm text-zinc-500 dark:text-zinc-400">
                  <Text
                    tag="p"
                    variant="textBase"
                    class="font-medium text-zinc-500 dark:text-zinc-400"
                  >
                    {faq.answer}
                  </Text>
                </div>
              </details>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</section>
