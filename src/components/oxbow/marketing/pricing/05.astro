---
export const excludeFromObfuscation = [
  "w-1/2",
  "translate-x-0",
  "translate-x-full",
  "text-zinc-600",
  "focus:text-zinc-900",
  "hover:text-zinc-900",
];

export const description = "Pricing section with three tiers";
// Components
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";
// Icons
import Plus from "@/components/fundations/icons/Plus.astro";
import Lock from "@/components/fundations/icons/Lock.astro";
import Bulb from "@/components/fundations/icons/Bulb.astro";
import ApiApp from "@/components/fundations/icons/ApiApp.astro";
import UserPlus from "@/components/fundations/icons/UserPlus.astro";
import UsersGroup from "@/components/fundations/icons/UsersGroup.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
import SettingsExclamation from "@/components/fundations/icons/SettingsExclamation.astro";
import Command from "@/components/fundations/icons/Command.astro";
import Start from "@/components/fundations/icons/Start.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
// Pricing array with direct icon components
const pricingOptions = [
  {
    logo: Command,
    id: "core",
    title: "Core",
    monthly: "$29.00",
    annual: "$19.00",
    description:
      "For indie devs and AI-curious builders who want to tinker without torching their budget.",
    button: {
      text: "Start Prompting",
      variant: "alternative",
    },
    features: [
      { icon: UsersGroup, text: "1 AI workspace" },
      { icon: SettingsExclamation, text: "50 prompt executions" },
      { icon: UserPlus, text: "Unlimited collaborators" },
      { icon: ApiApp, text: "API + CLI access" },
    ],
  },
  {
    logo: Start,
    id: "momentum",
    title: "Momentum",
    monthly: "$49.00",
    annual: "$39.00",
    description:
      "For teams building AI products that actually ship. More runs, more models, fewer blockers.",
    button: {
      text: "Start Scaling",
      variant: "accent",
    },
    features: [
      { icon: Plus, text: "All Core features included" },
      { icon: Bulb, text: "Custom prompt analytics" },
      { icon: UserPlus, text: "Unlimited projects & teams" },
      { icon: Lock, text: "Role-based access & private endpoints" },
    ],
  },
  {
    logo: WaveSquare,
    id: "velocity",
    title: "Velocity",
    monthly: "$99.00",
    annual: "$79.00",
    description:
      "For teams pushing tokens like there's no tomorrow. More power, fewer limits.",
    button: {
      text: "Go Faster",
      variant: "alternative",
    },
    features: [
      { icon: Plus, text: "All Momentum features included" },
      { icon: UserPlus, text: "Unlimited orgs and users" },
      { icon: Lock, text: "SSO & enterprise-grade auth" },
      { icon: ApiApp, text: "Priority inference + model tuning" },
      { icon: Bulb, text: "Advanced usage insights" },
      { icon: SettingsExclamation, text: "Unlimited executions" },
    ],
  },
];
---

<section x-data="{ duration: 'monthly' }" class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-20">
    <div class="max-w-md mx-auto text-center">
      <Text
        tag="h1"
        variant="displayMD"
        class="font-semibold tracking-tight text-zinc-900 text-balance dark:text-zinc-100"
      >
        Give your team tools that don't suck
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-2 font-medium text-zinc-600 text-balance dark:text-zinc-400"
      >
        Start with what you need, skip what you don't. Scale up when
        spreadsheets stop cutting it.
      </Text>
      <!-- Pricing Toggle -->
      <div
        aria-labelledby="pricing-toggle"
        class="relative z-0 inline-flex justify-center w-full p-1 mx-auto mt-8 overflow-hidden bg-white shadow dark:bg-zinc-900 ring-1 ring-zinc-200 dark:ring-zinc-700 ring-offset-2 gap-4 lg:mx-0 rounded-md max-w-52 dark:ring-offset-black"
      >
        <div
          class="absolute inset-0 bg-zinc-50 dark:bg-zinc-800 rounded-md transition-transform duration-200 ease-in-out"
          :class="duration === 'monthly' ? 'w-1/2 translate-x-0' : 'w-1/2 translate-x-full'"
        >
        </div>
        <button
          class="relative z-10 flex items-center justify-center w-full h-6 px-2 text-xs font-medium focus:outline-none transition-colors duration-300"
          :class="duration === 'monthly' ? 'text-zinc-600 dark:text-zinc-300' : 'focus:text-zinc-900 hover:text-zinc-900 dark:focus:text-zinc-100 dark:hover:text-zinc-100 dark:text-zinc-300'"
          @click="duration = 'monthly'"
          type="button"
          :aria-pressed="duration === 'monthly'"
        >
          Monthly
        </button>
        <button
          class="relative z-10 flex items-center justify-center w-full h-6 px-2 text-xs font-medium focus:outline-none transition-colors duration-300"
          :class="duration === 'annual' ? 'text-zinc-600 dark:text-zinc-300' : 'focus:text-zinc-900 hover:text-zinc-900 dark:focus:text-zinc-100 dark:hover:text-zinc-100 dark:text-zinc-300'"
          @click="duration = 'annual'"
          type="button"
          :aria-pressed="duration === 'annual'"
        >
          Annual
        </button>
      </div>
    </div>
    <!-- Pricing Cards -->
    <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-3">
      {
        pricingOptions.map((tier) => (
          <div class="flex flex-col justify-between h-full rounded-xl">
            <div class="flex flex-col">
              <div class="flex items-center gap-2">
                <div class="p-2 text-blue-500 rounded-lg bg-zinc-50 dark:bg-zinc-800">
                  {tier.logo && (
                    <tier.logo
                      class="text-blue-600 dark:text-blue-400"
                      size="sm"
                    />
                  )}
                </div>
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-semibold text-zinc-500 dark:text-zinc-400"
                >
                  {tier.title}
                </Text>
              </div>
              <Text
                variant="displaySM"
                class="flex items-baseline mt-4 font-medium tracking-tighter text-zinc-900 dark:text-white"
              >
                <span
                  data-monthly={tier.monthly}
                  data-annual={tier.annual}
                  x-text="$el.dataset[duration]"
                />
                <span class="text-sm font-normal tracking-normal text-zinc-500 dark:text-zinc-400">
                  <span x-show="duration === 'monthly'">/month</span>
                  <span x-show="duration === 'annual'" style="display: none;">
                    /annually
                  </span>
                </span>
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 text-zinc-500 dark:text-zinc-400"
              >
                {tier.description}
              </Text>
              <div class="pt-8 mt-8 border-t border-zinc-200 dark:border-zinc-700">
                <Text
                  tag="p"
                  variant="textXS"
                  class="font-medium uppercase text-zinc-500 dark:text-zinc-400"
                >
                  {tier.title === "Momentum"
                    ? "Everything in Core plus:"
                    : "Core plan includes:"}
                </Text>
                <ul
                  class="flex flex-col mt-4 text-sm text-zinc-600 dark:text-zinc-300 gap-y-3"
                  role="list"
                >
                  {tier.features.map((feature, index) => (
                    <li class="flex items-center gap-2">
                      <feature.icon size="sm" class="dark:text-zinc-400" />
                      <span>{feature.text}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
            <div class="w-full mt-12">
              <Button class="w-full" variant={tier.button.variant} size="sm">
                {tier.button.text}
              </Button>
              <div class="flex items-center mt-4 gap-2 ">
                <CircleCheck
                  size="sm"
                  class="text-zinc-500 dark:text-zinc-300"
                />
                <Text
                  tag="p"
                  variant="textSM"
                  class="font-medium text-zinc-500 dark:text-zinc-400"
                >
                  No credit card required
                </Text>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
