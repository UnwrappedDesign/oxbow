---
export const description =
  "Header & subtext, billing-toggle switch, two plan cards with CTAs, and stacked Usage & Features comparison tables for the data-obsessed.";

// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Check from "@/components/fundations/icons/Check.astro";
import Badge from "@/components/fundations/badges/Badge.astro";
// Components
import PricingToggle from "@/components/fundations/buttonGroups/PricingToggle.astro";
---

<section x-data="{duration: 'monthly'}" class="bg-base-50">
  <Wrapper variant="blockStandard" class="py-24">
    <p class="text-center text-base-500 lg:hidden">
      Pricing table for desktop use
    </p>
    <!---- Use only from xl: -->
    <div class="hidden lg:block">
      <div
        class="text-center md:text-left grid grid-cols-1 gap-12 md:grid-cols-2 md:items-end"
      >
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-base-900 text-balance"
        >
          Equip your business with world class software
        </Text>
        <div class="md:ml-auto">
          <div
            aria-labelledby="pricing-toggle"
            class="relative z-0 inline-flex justify-center w-full p-1 mx-auto mt-8 overflow-hidden bg-white shadow ring-1 ring-base-200 ring-offset-2 gap-4 lg:mx-0 rounded-md max-w-52"
          >
            <!-- Monthly Pricing Button: Sets 'duration' to 'monthly' when clicked -->
            <PricingToggle />
          </div>
        </div>
      </div>
      <table class="w-full mx-auto mt-8 text-center bg-transparent">
        <thead>
          <tr class="align-top">
            <th class="w-1/3"> </th>
            <th class="relative w-1/3 p-1 pr-0 font-normal text-left">
              <div
                aria-hidden="true"
                class="absolute inset-y-0 right-0 hidden w-full bg-white rounded-tl-xl sm:block outline outline-base-200"
              >
              </div>
              <div class="relative p-6 sm:p-4 sm:pb-5 lg:p-6">
                <div class="flex items-start justify-between w-full">
                  <div>
                    <Text
                      tag="h3"
                      variant="textBase"
                      class="font-medium text-base-900"
                    >
                      Core
                    </Text>
                    <Text tag="p" variant="textSM" class="mt-1 text-base-500">
                      This subscription tier caters to individuals and hobbyists
                      seeking features.
                    </Text>
                  </div>
                </div>
                <div class="mt-8">
                  <p
                    class="text-4xl font-medium sm:text-xl md:text-4xl text-base-900"
                  >
                  </p>
                  <div class="flex items-center gap-x-4">
                    <p
                      class="text-4xl font-medium sm:text-xl md:text-4xl text-base-900"
                    >
                      <span
                        data-monthly="$29"
                        data-annual="$19"
                        x-text="$el.dataset[duration]"></span>
                    </p>
                    <div class="text-xs font-semibold capitalize text-base-900">
                      <span x-show="duration === 'monthly'">
                        <span x-show="duration === 'monthly'">
                          month</span
                        ></span
                      >
                      <span
                        x-show="duration === 'annual'"
                        style="display: none;"
                      >
                        annually</span
                      >
                      <Text tag="p" variant="textXS" class="text-base-500"
                        >USD + Local taxes</Text
                      >
                    </div>
                  </div>
                  <div class="mt-8">
                    <Button class="w-full" variant="alternative" size="sm">
                      Get Started
                    </Button>
                  </div>
                </div>
              </div>
            </th>
            <th class="relative w-1/3 p-1 px-0 font-normal text-left">
              <div
                aria-hidden="true"
                class="absolute inset-y-0 right-0 hidden w-full rounded-tr-xl bg-base-900 sm:block"
              >
              </div>
              <div class="relative p-6 sm:p-4 sm:pb-5 lg:p-6">
                <div class="flex items-start justify-between w-full">
                  <div>
                    <Text
                      tag="h3"
                      variant="textBase"
                      class="font-medium text-white"
                    >
                      Momentum
                    </Text>
                    <Text tag="p" variant="textSM" class="mt-1 text-base-300">
                      Designed with medium-sized businesses in mind.
                    </Text>
                  </div>
                  <Badge variant="default" size="xs"> Popular </Badge>
                </div>
                <div class="mt-8">
                  <div class="flex items-center gap-x-4">
                    <p
                      class="text-4xl font-medium text-white sm:text-xl md:text-4xl"
                    >
                      <span
                        data-monthly="$49"
                        data-annual="$39"
                        x-text="$el.dataset[duration]"></span>
                    </p>
                    <div class="text-xs font-semibold capitalize text-base-200">
                      <span x-show="duration === 'monthly'">
                        <span x-show="duration === 'monthly'">
                          month</span
                        ></span
                      >
                      <span
                        x-show="duration === 'annual'"
                        style="display: none;"
                      >
                        annually</span
                      >
                      <Text tag="p" variant="textXS" class="text-base-300"
                        >USD + Local taxes</Text
                      >
                    </div>
                  </div>
                  <div class="mt-8">
                    <Button class="w-full" variant="alternative" size="sm">
                      Get Started
                    </Button>
                  </div>
                </div>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr class="overflow-hidden">
            <th
              scope="colgroup"
              colspan="4"
              class="p-4 text-sm font-medium text-left leading-6 text-base-900 border-y border-base-200"
            >
              Usage
            </th>
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b bg-base-50 text-base-900 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />Accounts
              </div>
            </th>
            <td class="px-2 text-xs font-medium bg-white text-base-900">5</td>
            <td class="px-2 text-xs font-medium text-white bg-base-900">10</td>
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b text-base-900 bg-base-50 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />
                Analytics
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium bg-white border-t text-base-900 border-base-200"
              >3</td
            >
            <td
              class="px-2 text-xs font-medium text-white border-t bg-base-900 border-base-800"
              >10</td
            >
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b bg-base-50 text-base-900 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />Integrations
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium bg-white border-t text-base-900 border-base-200"
              >2</td
            >
            <td
              class="px-2 text-xs font-medium text-white border-t bg-base-900 border-base-800"
            >
              YES
            </td>
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b text-base-900 bg-base-50 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />Programs
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium bg-white border-t text-base-900 border-base-200"
            >
              NO
            </td>
            <td
              class="px-2 text-xs font-medium text-white border-t bg-base-900 border-base-800"
              >1</td
            >
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b bg-base-50 text-base-900 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />Deployments
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium bg-white border-t text-base-900 border-base-200"
            >
              NO
            </td>
            <td
              class="px-2 text-xs font-medium text-white border-t bg-base-900 border-base-800"
            >
              YES
            </td>
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b text-base-900 bg-base-50 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />Advanced Checkpoints
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium bg-white border-t text-base-900 border-base-200"
            >
              NO
            </td>
            <td
              class="px-2 text-xs font-medium text-white border-t bg-base-900 border-base-800"
            >
              YES
            </td>
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b bg-base-50 text-base-900 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />Reporting tools
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium bg-white border-t text-base-900 border-base-200"
            >
              NO
            </td>
            <td
              class="px-2 text-xs font-medium text-white border-t bg-base-900 border-base-800"
            >
              YES
            </td>
          </tr>
          <tr class="overflow-hidden">
            <th
              scope="colgroup"
              colspan="4"
              class="p-4 text-sm font-medium text-left leading-6 text-base-900 border-y border-base-200"
            >
              Features
            </th>
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b bg-base-50 text-base-900 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />
                Service agreement
              </div>
            </th>
            <td class="px-2 text-xs font-medium bg-white text-base-900">No</td>
            <td class="px-2 text-xs font-medium text-white bg-base-900">No</td>
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b text-base-900 bg-base-50 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />Dedicted Manager
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium bg-white border-t text-base-900 border-base-200"
              >No</td
            >
            <td
              class="px-2 text-xs font-medium text-white border-t bg-base-900 border-base-800"
              >Yes</td
            >
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b bg-base-50 text-base-900 border-base-200"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />Onboarding sessions
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium bg-white border-t text-base-900 border-base-200"
              >No</td
            >
            <td
              class="px-2 text-xs font-medium text-white border-t bg-base-900 border-base-800"
            >
              No
            </td>
          </tr>
          <tr>
            <th
              class="p-3 text-sm font-medium text-left border-b text-base-900 border-base-200 bg-base-50"
            >
              <div class="flex items-center gap-2">
                <Check size="sm" />Dedicated support channel
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium bg-white border-t text-base-900 border-base-200"
            >
              No
            </td>
            <td
              class="px-2 text-xs font-medium text-white border-t bg-base-900 border-base-800"
              >No</td
            >
          </tr>
          <tr class="align-top">
            <th></th>
            <th class="w-1/4 px-2 py-6 border-t border-base-200"> </th>
            <th class="w-1/4 px-2 py-6"> </th>
          </tr>
        </tbody>
      </table>
    </div>
  </Wrapper>
</section>
