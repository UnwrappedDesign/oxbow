          <tr class="align-top">
            <th class="border-t border-zinc-200"></th>
            <th class="w-1/4 px-2 py-4 border-t border-zinc-200">
              <Button class="w-full" variant="alternative" size="sm">
                Start free trial
              </Button>
            </th>
            <th class="w-1/4 px-2 py-4 border-t border-zinc-800">
              <Button class="w-full" variant="accent" size="sm">
                Start free trial
              </Button>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>
