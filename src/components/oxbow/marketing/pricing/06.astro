---
import PricingToggle from "@/components/fundations/buttonGroups/PricingToggle.astro";
import Text from "@/components/fundations/typography/Text.astro";
import PricingCardsSingle from "@/components/fundations/pricing/PricingCardsSingle.astro";
---

<section x-data="{duration: 'monthly'}">
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-screen-xl relative">
    <div
      class="grid grid-cols-1 lg:max-w-none gap-y-12 lg:gap-x-20 lg:grid-cols-3 lg:items-start w-full">
      <div class="flex flex-col gap-8 h-full cols-span-full lg:col-span-1">
        <div>
          <Text
            tag="p"
            variant="textSM"
            class="font-bold uppercase text-accent-600">
            Tagline
          </Text>
          <Text
            tag="h2"
            variant="displaySM"
            class="mt-4 font-semibold text-base-900 lg:text-balance">
            Equip your business with world class software
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 text-base-500 font-medium lg:text-balance">
            Choose a plan that works the best for you and your team. Start
            small, upgrade when you need to.
          </Text>
        </div>
        <div
          aria-labelledby="pricing-toggle"
          class="w-full relative ring-1 ring-base-200 ring-offset-2 bg-white overflow-hidden gap-4 mx-auto lg:mx-0 inline-flex p-1 rounded-md shadow z-0 justify-end">
          <!-- Monthly Pricing Button: Sets 'duration' to 'monthly' when clicked -->
          <PricingToggle />
        </div>
      </div>
      <div
        class="grid grid-cols-1 gap-4 lg:grid-cols-2 sm:col-span-2 cols-span-full">
        <!-- Tier one -->
        <PricingCardsSingle tierName="Core" />
        <!-- Tier two -->
        <PricingCardsSingle
          tierName="Momentum"
          colorMode="dark"
        />
      </div>
    </div>
  </div>
</section>
