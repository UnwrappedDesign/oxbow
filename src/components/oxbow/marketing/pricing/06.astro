---
export const excludeFromObfuscation = [
  "w-1/2",
  "translate-x-0",
  "translate-x-full",
  "text-zinc-600",
  "focus:text-zinc-900",
  "hover:text-zinc-900",
];

export const description = "Pricing section with three tiers and table";
// Components
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Select from "@/components/fundations/inputs/Select.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons (import all used ones)
import Edit from "@/components/fundations/icons/Edit.astro";
import Bulb from "@/components/fundations/icons/Bulb.astro";
import ApiApp from "@/components/fundations/icons/ApiApp.astro";
import Refresh from "@/components/fundations/icons/Refresh.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
import Analytics from "@/components/fundations/icons/Analytics.astro";
import Program from "@/components/fundations/icons/Program.astro";
import Plug from "@/components/fundations/icons/Plug.astro";
import Brain from "@/components/fundations/icons/Brain.astro";
import Code from "@/components/fundations/icons/Code.astro";
import Tools from "@/components/fundations/icons/Tools.astro";
import Lifebuoy from "@/components/fundations/icons/Lifebuoy.astro";
import UsersGroup from "@/components/fundations/icons/UsersGroup.astro";
---

<section x-data="{ duration: 'monthly' }" class="bg-zinc-50">
  <div class="p-8">
    <div class="max-w-xl mx-auto text-center">
      <Text
        tag="h1"
        variant="displayMD"
        class="font-medium tracking-tight text-zinc-900 text-balance"
      >
        Tools your team will actually use
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-2 font-medium text-zinc-600 text-balance"
      >
        Skip the bloat, skip the learning curve. When the docs are shorter than
        your to-do list, you know it's good.
      </Text>
      <div
        aria-labelledby="pricing-toggle"
        class="relative z-0 inline-flex justify-center w-full p-1 mx-auto mt-8 overflow-hidden bg-white shadow ring-1 ring-zinc-200 ring-offset-2 gap-4 lg:mx-0 rounded-md max-w-52"
      >
        <div
          class="absolute inset-0 bg-zinc-50 rounded-md transition-transform duration-200 ease-in-out"
          :class="duration === 'monthly' ? 'w-1/2 translate-x-0' : 'w-1/2 translate-x-full'"
        >
        </div>
        <button
          class="relative z-10 flex items-center justify-center w-full h-6 px-2 text-xs font-medium focus:outline-none transition-colors duration-300"
          :class="duration === 'monthly' ? 'text-zinc-600' : 'focus:text-zinc-900 hover:text-zinc-900'"
          @click="duration = 'monthly'"
          type="button"
          :aria-pressed="duration === 'monthly'"
        >
          Monthly
        </button>
        <button
          class="relative z-10 flex items-center justify-center w-full h-6 px-2 text-xs font-medium focus:outline-none transition-colors duration-300"
          :class="duration === 'annual' ? 'text-zinc-600' : 'focus:text-zinc-900 hover:text-zinc-900'"
          @click="duration = 'annual'"
          type="button"
          :aria-pressed="duration === 'annual'"
        >
          Annual
        </button>
      </div>
    </div>
    <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-4">
      <div
        class="p-4 bg-white rounded-lg shadow outline outline-zinc-200 lg:p-12"
      >
        <div>
          <div class="flex items-center justify-between gap-2">
            <Text tag="h3" variant="displaySM" class="font-medium text-zinc-900"
              >Core</Text
            >
            <div class="flex items-center gap-2">
              <Text
                tag="p"
                variant="displaySM"
                class="font-medium text-zinc-900"
              >
                <span
                  data-monthly="$29"
                  data-annual="$19"
                  x-text="$el.dataset[duration]"></span>
              </Text>
              <div class="text-xs font-medium text-zinc-500">
                <div class="font-medium">
                  <span class="capitalize" x-show="duration==='monthly'"
                    >month</span
                  >
                  <span
                    class="capitalize"
                    x-show="duration==='annual'"
                    style="display: none">annually</span
                  >
                </div>
                <p>USD + Local taxes</p>
              </div>
            </div>
          </div>
          <Text tag="p" variant="textBase" class="mt-2 text-zinc-500">
            Essential AI copywriting tools to boost your content creation.
          </Text>
        </div>
        <div class="mt-4">
          <Button size="base" variant="alternative" class="w-full">
            Start free trial
          </Button>
        </div>
        <div class="flex flex-col py-8 mt-8 border-t border-zinc-200 gap-4">
          <div class="flex flex-col items-start sm:flex-row gap-4">
            <div
              class="p-2 rounded-lg bg-zinc-50 outline outline-zinc-100 text-stone-500"
            >
              <Refresh size="sm" />
            </div>
            <Text tag="h3" variant="textBase" class="font-medium text-zinc-900">
              Content Generation
              <span aria-hidden="true">—</span>
              <span class="font-normal text-zinc-500">
                Generate blog posts, social media content, and basic marketing
                copy.
              </span>
            </Text>
          </div>
          <div class="flex flex-col items-start sm:flex-row gap-4">
            <div
              class="p-2 rounded-lg bg-zinc-50 outline outline-zinc-100 text-stone-500"
            >
              <Edit size="sm" />
            </div>
            <Text tag="h3" variant="textBase" class="font-medium text-zinc-900">
              AI Writing Assistant
              <span aria-hidden="true">—</span>
              <span class="font-normal text-zinc-500">
                Basic grammar checking and style suggestions for your content.
              </span>
            </Text>
          </div>
        </div>
        <div class="pt-4 border-t border-zinc-200">
          <Text tag="h3" variant="textBase" class="font-medium text-zinc-900"
            >Word Credits</Text
          >
          <div class="mt-4 space-y-4">
            <Select
              id="core-credits"
              name="core-credits"
              label="Core Credits per project"
              value="10"
              variant="default"
              size="base"
              class="text-zinc-900"
              options={[
                { label: "10/project", value: "10" },
                { label: "20/project", value: "20" },
                { label: "50/project", value: "50" },
              ]}
            />
            <Select
              id="core-projects"
              name="core-projects"
              label="Projects"
              value="10"
              variant="default"
              size="base"
              class="text-zinc-900"
              options={[
                { label: "10/project", value: "10" },
                { label: "20/project", value: "20" },
                { label: "50/project", value: "50" },
              ]}
            />
            <div class="flex items-center justify-between">
              <Text tag="p" variant="textSM" class="text-zinc-500"
                >Max Templates</Text
              >
              <Text tag="p" variant="textSM">
                <span class="font-medium text-zinc-900">5</span>
                <span class="text-zinc-500">(10,000 words each)</span>
              </Text>
            </div>
            <div class="flex items-center justify-between">
              <Text tag="p" variant="textSM" class="text-zinc-500"
                >Price per 1,000 words</Text
              >
              <Text tag="p" variant="textSM">
                <span class="font-medium text-zinc-900">$2</span>
                <span class="text-zinc-500">(after credits)</span>
              </Text>
            </div>
          </div>
          <Text
            tag="p"
            variant="textBase"
            class="pt-8 mt-8 text-sm border-t border-zinc-200 text-zinc-500"
          >
            All plans include our basic AI model trained on general copywriting
            principles. Upgrade for access to industry-specific models.
          </Text>
        </div>
        <div class="flex items-center pt-4 mt-4 border-t gap-2 border-zinc-200">
          <CircleCheck size="sm" class="text-stone-500" />
          <Text tag="p" variant="textSM" class="font-medium text-zinc-500">
            Refunds are available for all paid plans.
          </Text>
        </div>
      </div>
      <div class="p-8 rounded-lg bg-zinc-900 outline outline-zinc-800 lg:p-12">
        <div>
          <div class="flex items-center justify-between gap-2">
            <Text
              tag="h3"
              variant="displaySM"
              class="font-medium text-zinc-100"
            >
              Pro
            </Text>
            <div class="flex items-center gap-2">
              <Text
                tag="p"
                variant="displaySM"
                class="font-medium text-zinc-100"
              >
                <span
                  data-monthly="$59"
                  data-annual="$45"
                  x-text="$el.dataset[duration]"></span>
              </Text>
              <div class="text-xs font-medium text-zinc-300">
                <div class="font-medium">
                  <span class="capitalize" x-show="duration==='monthly'"
                    >month</span
                  >
                  <span
                    class="capitalize"
                    x-show="duration==='annual'"
                    style="display: none">annually</span
                  >
                </div>
                <p>USD + Local taxes</p>
              </div>
            </div>
          </div>
          <Text tag="p" variant="textBase" class="mt-2 text-zinc-300">
            Advanced AI tools for professional writers &amp; content teams.
          </Text>
        </div>
        <div class="mt-4">
          <Button size="base" variant="accent" class="w-full"
            >Start free trial</Button
          >
        </div>
        <div class="flex flex-col py-8 mt-8 border-t border-zinc-800 gap-4">
          <div class="flex flex-col items-start sm:flex-row gap-4">
            <div
              class="p-2 rounded-lg bg-zinc-800 outline outline-zinc-700 text-white"
            >
              <Refresh size="sm" />
            </div>
            <Text tag="h3" variant="textBase" class="font-medium text-zinc-100">
              Unlimited Generation
              <span aria-hidden="true">—</span>
              <span class="font-normal text-zinc-300">
                Create long-form content without token limits.
              </span>
            </Text>
          </div>
          <div class="flex flex-col items-start sm:flex-row gap-4">
            <div
              class="p-2 rounded-lg bg-zinc-800 outline outline-zinc-700 text-white"
            >
              <Edit size="sm" />
            </div>
            <Text tag="h3" variant="textBase" class="font-medium text-zinc-100">
              AI Editor+
              <span aria-hidden="true">—</span>
              <span class="font-normal text-zinc-300">
                Access tone shifting, rephrasing, and advanced style
                suggestions.
              </span>
            </Text>
          </div>
          <div class="flex flex-col items-start sm:flex-row gap-4">
            <div
              class="p-2 rounded-lg bg-zinc-800 outline outline-zinc-700 text-white"
            >
              <Bulb size="sm" />
            </div>
            <Text tag="h3" variant="textBase" class="font-medium text-zinc-100">
              Smart Templates
              <span aria-hidden="true">—</span>
              <span class="font-normal text-zinc-300">
                Industry-specific prompts for ads, landing pages, and more.
              </span>
            </Text>
          </div>
          <div class="flex flex-col items-start sm:flex-row gap-4">
            <div
              class="p-2 rounded-lg bg-zinc-800 outline outline-zinc-700 text-white"
            >
              <ApiApp size="sm" />
            </div>
            <Text tag="h3" variant="textBase" class="font-medium text-zinc-100">
              API Access
              <span aria-hidden="true">—</span>
              <span class="font-normal text-zinc-300">
                Integrate your AI flows directly with your app or CMS.
              </span>
            </Text>
          </div>
        </div>
        <div class="pt-4 border-t border-zinc-800">
          <Text tag="h3" variant="textBase" class="font-medium text-zinc-100">
            Word Credits
          </Text>
          <div class="mt-4 space-y-4">
            <Select
              id="pro-credits"
              name="pro-credits"
              label="Pro Credits per project"
              value="50"
              variant="dark"
              size="base"
              options={[
                { label: "50/project", value: "50" },
                { label: "100/project", value: "100" },
                { label: "200/project", value: "200" },
              ]}
            />
            <Select
              id="pro-projects"
              name="pro-projects"
              label="Projects"
              value="20"
              variant="dark"
              size="base"
              options={[
                { label: "10", value: "10" },
                { label: "20", value: "20" },
                { label: "50", value: "50" },
              ]}
            />
            <div class="flex items-center justify-between">
              <Text tag="p" variant="textSM" class="text-zinc-300"
                >Max Templates</Text
              >
              <Text tag="p" variant="textSM">
                <span class="font-medium text-zinc-100">25</span>
                <span class="text-zinc-300">(25,000 words each)</span>
              </Text>
            </div>
            <div class="flex items-center justify-between">
              <Text tag="p" variant="textSM" class="text-zinc-300"
                >Price per 1,000 words</Text
              >
              <Text tag="p" variant="textSM">
                <span class="font-medium text-zinc-100">$1</span>
                <span class="text-zinc-300">(after credits)</span>
              </Text>
            </div>
          </div>
          <Text
            tag="p"
            variant="textBase"
            class="pt-8 mt-8 text-sm border-t border-zinc-800 text-zinc-300"
          >
            Pro plans include access to our advanced AI models, fine-tuned for
            marketing, legal, tech, and more.
          </Text>
        </div>
        <div class="flex items-center pt-4 mt-4 border-t gap-2 border-zinc-800">
          <CircleCheck size="sm" class="text-stone-500" />
          <Text tag="p" variant="textSM" class="font-medium text-zinc-300">
            Refunds are available for all paid plans.
          </Text>
        </div>
      </div>
    </div>
    <div class="mt-8 overflow-hidden overflow-x-auto">
      <table class="min-w-[640px] w-full table-auto border-collapse text-sm">
        <thead>
          <tr>
            <th class="sr-only">Feature</th>
            <th class="py-3 text-base font-semibold text-center text-zinc-900">
              Core
            </th>
            <th class="py-3 font-semibold text-center text-Base text-zinc-900">
              Pro
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th
              class="py-4 pl-4 text-sm font-medium text-left border-t text-zinc-900 border-zinc-200"
            >
              <div class="flex items-center gap-2">
                <Analytics size="sm" />
                Analytics
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-center bg-white border-t text-zinc-900 border-zinc-200"
              >3</td
            >
            <td
              class="px-2 text-xs font-medium text-center text-white border-t bg-zinc-900 border-zinc-800"
              >10</td
            >
          </tr>
          <tr>
            <th
              class="py-4 pl-4 text-sm font-medium text-left border-t text-zinc-900 border-zinc-200"
            >
              <div class="flex items-center gap-2">
                <UsersGroup size="sm" />
                Accounts
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-center bg-white border-t text-zinc-900 border-zinc-200"
              >5</td
            >
            <td
              class="px-2 text-xs font-medium text-center text-white border-t bg-zinc-900 border-zinc-800"
              >10</td
            >
          </tr>
          <tr>
            <th
              class="py-4 pl-4 text-sm font-medium text-left border-t text-zinc-900 border-zinc-200"
            >
              <div class="flex items-center gap-2">
                <Plug size="sm" />
                Integrations
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-center bg-white border-t text-zinc-900 border-zinc-200"
              >2</td
            >
            <td
              class="px-2 text-xs font-medium text-center text-white border-t bg-zinc-900 border-zinc-800"
              >YES</td
            >
          </tr>
          <tr>
            <th
              class="py-4 pl-4 text-sm font-medium text-left border-t text-zinc-900 border-zinc-200"
            >
              <div class="flex items-center gap-2">
                <Program size="sm" />
                Programs
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-center bg-white border-t text-zinc-900 border-zinc-200"
              >NO</td
            >
            <td
              class="px-2 text-xs font-medium text-center text-white border-t bg-zinc-900 border-zinc-800"
              >1</td
            >
          </tr>
          <tr>
            <th
              class="py-4 pl-4 text-sm font-medium text-left border-t text-zinc-900 border-zinc-200"
            >
              <div class="flex items-center gap-2">
                <Brain size="sm" />
                Deployments
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-center bg-white border-t text-zinc-900 border-zinc-200"
              >NO</td
            >
            <td
              class="px-2 text-xs font-medium text-center text-white border-t bg-zinc-900 border-zinc-800"
              >YES</td
            >
          </tr>
          <tr>
            <th
              class="py-4 pl-4 text-sm font-medium text-left border-t text-zinc-900 border-zinc-200"
            >
              <div class="flex items-center gap-2">
                <Code size="sm" />
                Advanced Checkpoints
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-center bg-white border-t text-zinc-900 border-zinc-200"
              >NO</td
            >
            <td
              class="px-2 text-xs font-medium text-center text-white border-t bg-zinc-900 border-zinc-800"
              >YES</td
            >
          </tr>
          <tr>
            <th
              class="py-4 pl-4 text-sm font-medium text-left border-t text-zinc-900 border-zinc-200"
            >
              <div class="flex items-center gap-2">
                <Tools size="sm" />
                Reporting tools
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-center bg-white border-t text-zinc-900 border-zinc-200"
              >NO</td
            >
            <td
              class="px-2 text-xs font-medium text-center text-white border-t bg-zinc-900 border-zinc-800"
              >YES</td
            >
          </tr>
          <tr>
            <th
              class="py-4 pl-4 text-sm font-medium text-left border-t text-zinc-900 border-zinc-200"
            >
              <div class="flex items-center gap-2">
                <Lifebuoy size="sm" />
                Support
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-center bg-white border-t text-zinc-900 border-zinc-200"
              >Discord community</td
            >
            <td
              class="px-2 text-xs font-medium text-center text-white border-t bg-zinc-900 border-zinc-800"
