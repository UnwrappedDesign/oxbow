---
import PricingToggle from "@/components/fundations/buttonGroups/PricingToggle.astro";
import Text from "@/components/fundations/typography/Text.astro";
import PricingCardsSingle from "@/components/fundations/pricing/PricingCardsSingle.astro";
---

<section x-data="{duration: 'monthly'}">
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-screen-xl">
    <div class="max-w-xl mx-auto text-center">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600"
      >
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-base-900 lg:text-balance"
      >
        Equip your business with world class software
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 font-medium text-base-500 lg:text-balance"
      >
        Choose a plan that works the best for you and your team. Start small,
        upgrade when you need to.
      </Text>
      <div
        aria-labelledby="pricing-toggle"
        class="relative z-0 inline-flex justify-center w-full p-1 mx-auto mt-8 overflow-hidden bg-white shadow ring-1 ring-base-200 ring-offset-2 gap-4 lg:mx-0 rounded-md max-w-52"
      >
        <!-- Monthly Pricing Button: Sets 'duration' to 'monthly' when clicked -->
        <PricingToggle />
      </div>
    </div>
    <div
      class="mx-auto mt-12 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3"
    >
      <!-- Tier one -->
      <PricingCardsSingle tierName="Core" showFeatures={false} />
      <!-- Tier two -->
      <PricingCardsSingle
        tierName="Momentum"
        isPopular={true}
        colorMode="accent"
        showFeatures={false}
      />
      <!-- Tier three -->
      <PricingCardsSingle
        tierName="Growth"
        colorMode="light"
        showFeatures={false}
      />
    </div>
  </div>
</section>
