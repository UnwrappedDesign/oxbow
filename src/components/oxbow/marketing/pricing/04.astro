---
export const description = "Pricing section with two cards and CTA";
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Plus from "@/components/fundations/icons/Plus.astro";
import Clock from "@/components/fundations/icons/Clock.astro";
import Refresh from "@/components/fundations/icons/Refresh.astro";
import Database from "@/components/fundations/icons/Database.astro";
import Lifebuoy from "@/components/fundations/icons/Lifebuoy.astro";
import Brain from "@/components/fundations/icons/Brain.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Lock from "@/components/fundations/icons/Lock.astro";
const pricingTiers = [
  { amount: "5,000", monthly: "$29", annual: "$19" },
  { amount: "7,500", monthly: "$39", annual: "$27" },
  { amount: "10,000", monthly: "$49", annual: "$35" },
  { amount: "12,500", monthly: "$59", annual: "$42" },
];
---

<section x-data="{duration: 'monthly'}" class="bg-base-50">
  <Wrapper variant="blockStandard" class="py-24">
    <div class="items-end grid grid-cols-1 lg:grid-cols-2">
      <div>
        <Text
          tag="h1"
          variant="displaySM"
          class="font-medium tracking-tight text-base-900 lg:text-balance"
        >
          Equip your business with world class software
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-2 font-medium text-base-600 lg:text-balance"
        >
          Choose a plan that works the best for you and your team. Start small,
          upgrade when you need to.
        </Text>
      </div>
      <div
        aria-labelledby="pricing-toggle"
        class="relative z-0 inline-flex w-full p-1 mt-8 overflow-hidden bg-white shadow ring-1 ring-base-200 ring-offset-2 gap-4 rounded-md max-w-52 lg:ml-auto"
      >
        <div
          class="absolute inset-0 bg-base-50 rounded-md transition-transform duration-200 ease-in-out"
          :class="duration === 'monthly' ? 'w-1/2 translate-x-0' : 'w-1/2 translate-x-full'"
        >
        </div>
        <button
          class="relative z-10 flex items-center justify-center w-full h-6 px-2 text-xs font-medium focus:outline-none transition-colors duration-300"
          :class="duration === 'monthly' ? 'text-base-600' : 'focus:text-base-900 hover:text-base-900'"
          @click="duration = 'monthly'"
          type="button"
          :aria-pressed="duration === 'monthly'"
        >
          Monthly
        </button>
        <button
          class="relative z-10 flex items-center justify-center w-full h-6 px-2 text-xs font-medium focus:outline-none transition-colors duration-300"
          :class="duration === 'annual' ? 'text-base-600' : 'focus:text-base-900 hover:text-base-900'"
          @click="duration = 'annual'"
          type="button"
          :aria-pressed="duration === 'annual'"
        >
          Annual
        </button>
      </div>
    </div>
    <div class="flex flex-col mt-8 gap-2">
      <div
        class="p-1 overflow-hidden bg-white shadow rounded-xl outline outline-base-200"
      >
        <div class="grid md:grid-cols-12">
          <div class="p-4 md:col-span-7 sm:p-8">
            <div class="flex items-center gap-2">
              <Text tag="h2" variant="textLG" class="font-medium text-base-900">
                AI Add-Ons —
                <span class="font-normal text-base-500">
                  Oxbow UI gives your AI tools the upgrade they didn’t know they
                  needed.
                </span>
              </Text>
            </div>
            <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 gap-y-6 gap-x-4">
              <div class="flex items-center text-sm gap-2">
                <div class="text-base-500">
                  <Clock size="sm" />
                </div>
                <span class="text-base-600">
                  <span class="font-medium text-base-900">30 day</span> model retention
                </span>
              </div>

              <div class="flex items-center text-sm gap-2">
                <div class="text-base-500">
                  <Refresh size="base" />
                </div>
                <span class="text-base-600">
                  <span class="font-medium text-base-900">5,000</span> AI calls/month
                </span>
              </div>

              <div class="flex items-center text-sm gap-2">
                <div class="text-base-500">
                  <Database size="base" />
                </div>
                <span class="text-base-600">Custom model rebuilding</span>
              </div>

              <div class="flex items-center text-sm gap-2">
                <div class="text-base-500">
                  <Lifebuoy size="base" />
                </div>
                <span class="text-base-600">Training validation included</span>
              </div>

              <div class="flex items-center text-sm gap-2">
                <div class="text-base-500">
                  <Brain size="base" />
                </div>
                <span class="text-base-600">Real-time inference feedback</span>
              </div>

              <div class="flex items-center text-sm gap-2">
                <div class="text-base-500">
                  <Lock size="base" />
                </div>
                <span class="text-base-600">One-click prompt tuning</span>
              </div>
            </div>

            <div class="flex mt-12 gap-2">
              <Button variant="default" size="sm"> Start Using AI </Button>
              <Button variant="alternative" size="sm"> Get a Demo </Button>
            </div>
          </div>
          <div class="md:col-span-5 bg-base-50 rounded-xl">
            <div class="p-4 grid grid-cols-2">
              <Text tag="h3" variant="textSM" class="font-medium text-base-900"
                >Monthly requests</Text
              >
              <Text tag="p" variant="textSM" class="text-right text-base-500"
                >Pricing</Text
              >
            </div>
            <div class="divide-y divide-base-200">
              {
                pricingTiers.map((tier) => (
                  <div class="p-4 grid grid-cols-2">
                    <div class="font-medium text-base-600">{tier.amount}</div>
                    <div class="font-medium text-right text-base-900">
                      <Text
                        tag="p"
                        variant="textBase"
                        class="font-medium text-base-900"
                      >
                        <span
                          data-monthly={tier.monthly}
                          data-annual={tier.annual}
                          x-text="$el.dataset[duration]"
                        />
                        <span x-show="duration==='monthly'">/m</span>
                        <span
                          x-show="duration==='annual'"
                          style="display: none"
                        >
                          /m
                        </span>
                      </Text>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
      <div class="p-4 bg-white shadow rounded-xl outline outline-base-200">
        <div
          class="flex flex-col lg:flex-row gap-4 lg:justify-between lg:items-center"
        >
          <div class="flex flex-col items-start sm:flex-row gap-2">
            <div
              class="p-3 rounded-lg bg-base-50 outline outline-base-100 text-accent-500"
            >
              <Plus size="base" />
            </div>
            <div>
              <Text tag="h2" variant="textLG" class="font-medium text-base-900"
                >Enterprise</Text
              >
              <Text tag="p" variant="textSM" class="text-base-500">
                Built for teams that move fast, break stuff, and need more
                firepower than your average startup plan allows.
              </Text>
            </div>
          </div>

          <Button variant="accent" size="sm"> Contact Us </Button>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
