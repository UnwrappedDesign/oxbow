import AdjustmentsHorizontal from "@/components/fundations/icons/AdjustmentsHorizontal.astro";
const pricingOptions = [
  {
    id: "core",
    cardClass:
      "bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 shadow from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl p-8",
