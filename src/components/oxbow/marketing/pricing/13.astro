---
import PricingToggleDark from "@/components/fundations/buttonGroups/PricingToggleDark.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import PricingCardsSingle from "@/components/fundations/pricing/PricingCardsSingle.astro";
---

<section
  x-data="{duration: 'monthly'}"
  class="bg-base-950">
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-screen-xl relative">
    <div
      class="grid grid-cols-1 max-w-lg mx-auto lg:max-w-none gap-y-12 lg:gap-0 lg:grid-cols-3 lg:items-start w-full">
      <div class="flex flex-col gap-8 h-full cols-span-full lg:col-span-1">
        <div>
          <Text
            tag="span"
            darkMode={true}
            variant="eyebrow">
            Tagline
          </Text>
          <Heading
            class="mt-4"
            level={1}
            darkMode={true}
            variant="default">
            Equip your business with world class software
          </Heading>
        </div>
        <div
          aria-labelledby="pricing-toggle"
          class="w-full relative mt-8 ring-1 ring-base-800 ring-offset-2 ring-offset-base-950 bg-900 overflow-hidden gap-4 inline-flex p-1 rounded-md max-w-52 shadow z-0">
          <PricingToggleDark />
        </div>
      </div>
      <PricingCardsSingle
        tierName="Core"
        roundedDesktop="left"
        colorMode="baseDark"
        isLeft={true}
      />
      <!-- Tier two -->
      <PricingCardsSingle
        tierName="Momentum"
        isPopular={true}
        roundedDesktop="none"
        colorMode="accent"
        roundedDesktop="right"
        isRight={true}
      />
    </div>
  </div>
</section>
