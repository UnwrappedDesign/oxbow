---
export const description =
  "Dark-mode header & subtext, billing toggle, and four tiered plan cards with feature bullets and ‘Get Started’ CTAs—Growth highlighted.";

// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import PricingToggleDark from "@/components/fundations/buttonGroups/PricingToggleDark.astro";
import PricingCardsSingle from "@/components/fundations/pricing/PricingCardsSingle.astro";
---

<section x-data="{duration: 'monthly'}" class="bg-base-950">
  <Wrapper variant="blockStandard" class="py-24">
    <div class="max-w-xl mx-auto text-center">
      <Text
        tag="h1"
        variant="displayMD"
        class="font-medium tracking-tight text-white text-balance"
      >
        Equip your business with world class software
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-2 font-medium text-base-300 text-balance"
      >
        Choose a plan that works the best for you and your team. Start small,
        upgrade when you need to.
      </Text>
      <div
        aria-labelledby="pricing-toggle"
        class="relative z-0 inline-flex w-full p-1 mt-8 overflow-hidden shadow ring-1 ring-base-800 ring-offset-2 ring-offset-base-950 bg-900 gap-4 rounded-md max-w-52"
      >
        <PricingToggleDark />
      </div>
    </div>
    <div
      class="mt-12 lg:-mx-20 grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-4"
    >
      <!-- Tier one -->
      <PricingCardsSingle
        colorMode="baseDark"
        tierName="Core"
        buttonVariant="mutedDark"
        noShadow={true}
      />
      <!-- Tier two -->
      <PricingCardsSingle
        tierName="Momentum"
        colorMode="baseDark"
        buttonVariant="mutedDark"
        noShadow={true}
      />
      <!-- Tier three -->
      <PricingCardsSingle
        tierName="Growth"
        isPopular={true}
        colorMode="accent"
        buttonVariant="alternative"
        noShadow={true}
      />
      <!-- Tier four-->
      <PricingCardsSingle
        colorMode="baseDark"
        tierName="Apex"
        buttonVariant="mutedDark"
        noShadow={true}
      />
    </div>
  </Wrapper>
</section>
