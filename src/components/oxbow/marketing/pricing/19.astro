---
import Button from "@/components/fundations/buttons/Button.astro";
import Badge from "@/components/fundations/badges/Badge.astro";
import Check from "@/components/fundations/icons/Check.astro";
import PricingToggle from "@/components/fundations/buttonGroups/PricingToggle.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section x-data="{duration: 'monthly'}">
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-screen-xl relative">
    <p class="text-base-500 lg:hidden text-center">
      Pricing table for desktop use
    </p>
    <!---- Use only from xl: -->
    <div class="hidden lg:block">
      <div
        class="text-center md:text-left grid grid-cols-1 gap-12 md:grid-cols-2 md:items-end">
        <div>
          <Text
            tag="span"
            variant="eyebrow">
            Tagline
          </Text>
          <Heading
            class="mt-4"
            level={1}
            variant="default">
            Equip your business with world class software
          </Heading>
        </div>
        <div class="md:ml-auto">
          <div
            aria-labelledby="pricing-toggle"
            class="w-full relative mt-8 ring-1 ring-base-200 ring-offset-2 bg-white overflow-hidden justify-center gap-4 mx-auto lg:mx-0 inline-flex p-1 rounded-md max-w-52 shadow z-0">
            <!-- Monthly Pricing Button: Sets 'duration' to 'monthly' when clicked -->
            <PricingToggle />
          </div>
        </div>
      </div>
      <table class="w-full mt-8 mx-auto text-center bg-transparent">
        <thead>
          <tr class="align-top">
            <th class="w-1/3"> </th>
            <th class="w-1/3 p-1 pr-0 font-normal text-left relative">
              <div
                aria-hidden="true"
                class="absolute inset-y-0 right-0 hidden w-full rounded-tl-3xl rounded-bl-3xl bg-base-50 sm:block">
              </div>
              <div class="relative">
                <div
                  class="p-8 flex flex-col gap-4 bg-white shadow rounded-[1.3rem] rounded-r-none">
                  <div class="flex items-start justify-between w-full">
                    <div>
                      <Heading
                        level={3}
                        variant="featureTitleLarge">
                        Core
                      </Heading>
                      <Text
                        tag="p"
                        variant="small">
                        For individuals
                      </Text>
                    </div>
                  </div>
                  <Text
                    tag="p"
                    variant="body">
                    This subscription tier caters to individuals and hobbyists
                    seeking fundamental features.
                  </Text>
                </div>
                <div class="p-8 pt-0 mt-8">
                  <p
                    class="font-semibold lg:text-3xl flex items-baseline text-2xl tracking-tighter text-base-900">
                    <span
                      data-monthly="$29.00"
                      data-annual="$19.00"
                      x-text="$el.dataset[duration]"
                    ></span>
                    <span
                      class="text-sm font-normal tracking-normal font-sans text-base-500">
                      <span x-show="duration === 'monthly'">
                        <span x-show="duration === 'monthly'">
                          /month</span
                        ></span
                      >
                      <span
                        x-show="duration === 'annual'"
                        style="display: none;">
                        /annually</span
                      >
                    </span>
                  </p>
                  <div class="mt-4">
                    <Button
                      class="w-full"
                      variant="alternative"
                      size="sm">
                      Get Started
                    </Button>
                  </div>
                </div>
              </div>
            </th>
            <th class="w-1/3 font-normal text-left relative p-1 px-0">
              <div
                aria-hidden="true"
                class="absolute inset-y-0 right-0 hidden w-full rounded-tr-3xl bg-base-900 sm:block rounded-br-3xl">
              </div>
              <div class="relative">
                <div
                  class="p-8 flex flex-col gap-4 bg-white/5 shadow rounded-[1.3rem] rounded-l-none">
                  <div class="flex items-start justify-between w-full">
                    <div>
                      <Heading
                        level={3}
                        darkMode={true}
                        variant="featureTitleLarge">
                        Momentum
                      </Heading>
                      <Text
                        tag="p"
                        darkMode={true}
                        variant="small">
                        For startups
                      </Text>
                    </div>
                    <Badge
                      variant="default"
                      size="xs">
                      Popular
                    </Badge>
                  </div>
                  <Text
                    tag="p"
                    darkMode={true}
                    variant="body">
                    Designed with medium-sized businesses in mind, this
                    subscription tier provides advanced tools.
                  </Text>
                </div>
                <div class="p-8 pt-0 mt-8">
                  <p
                    class="font-semibold lg:text-3xl flex items-baseline text-2xl tracking-tighter text-white">
                    <span
                      data-monthly="$49.00"
                      data-annual="$39.00"
                      x-text="$el.dataset[duration]"
                    ></span>
                    <span
                      class="text-sm font-normal font-sans tracking-normal text-base-200">
                      <span x-show="duration === 'monthly'">
                        <span x-show="duration === 'monthly'">
                          /month</span
                        ></span
                      >
                      <span
                        x-show="duration === 'annual'"
                        style="display: none;">
                        /annually</span
                      >
                    </span>
                  </p>
                  <div class="mt-4">
                    <Button
                      class="w-full"
                      variant="alternative"
                      size="sm">
                      Get Started
                    </Button>
                  </div>
                </div>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr class="overflow-hidden">
            <th
              scope="colgroup"
              colspan="4"
              class="p-4">
            </th>
          </tr>
          <tr class="overflow-hidden">
            <th
              scope="colgroup"
              colspan="4"
              class="p-4 bg-base-50 text-sm font-medium leading-6 text-left text-base-900 rounded-xl">
              Usage
            </th>
          </tr>
          <tr class="overflow-hidden">
            <th
              scope="colgroup"
              colspan="4"
              class="p-4">
            </th>
          </tr>
          <tr>
            <th class="py-3 text-sm text-base-900 font-medium text-left">
              <div class="flex items-center gap-2">
                <Check size="sm" />
                Analytics
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-base-900 bg-base-50 rounded-tl-3xl"
              >3</td
            >
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 rounded-tr-3xl"
              >10</td
            >
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200">
              <div class="flex items-center gap-2">
                <Check size="sm" />Accounts
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-base-900 bg-base-50 border-t border-base-200"
              >5</td
            >
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800"
              >10</td
            >
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200">
              <div class="flex items-center gap-2">
                <Check size="sm" />Integrations
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-base-900 bg-base-50 border-t border-base-200"
              >2</td
            >
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800">
              YES
            </td>
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200">
              <div class="flex items-center gap-2">
                <Check size="sm" />Programs
              </div>
            </th>
            <td
              class="px-2 text-base-900 bg-base-50 border-t border-base-200 text-xs font-medium">
              NO
            </td>
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800"
              >1</td
            >
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200">
              <div class="flex items-center gap-2">
                <Check size="sm" />Deployments
              </div>
            </th>
            <td
              class="px-2 text-base-900 bg-base-50 border-t border-base-200 text-xs font-medium">
              NO
            </td>
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800">
              YES
            </td>
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200">
              <div class="flex items-center gap-2">
                <Check size="sm" />Advanced Checkpoints
              </div>
            </th>
            <td
              class="px-2 text-base-900 bg-base-50 border-t border-base-200 text-xs font-medium">
              NO
            </td>
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800">
              YES
            </td>
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200">
              <div class="flex items-center gap-2">
                <Check size="sm" />Reporting tools
              </div>
            </th>
            <td
              class="px-2 text-base-900 bg-base-50 border-t border-base-200 text-xs font-medium">
              NO
            </td>
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800">
              YES
            </td>
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200"
              ><div class="flex items-center gap-2">
                <Check size="sm" />Support
              </div></th
            >
            <td
              class="px-2 text-xs font-medium text-base-900 bg-base-50 border-t border-base-200 rounded-bl-3xl"
              >Discord community</td
            >
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800 rounded-br-3xl"
              >Live chat</td
            >
          </tr>
          <tr class="overflow-hidden">
            <th
              scope="colgroup"
              colspan="4"
              class="p-4">
            </th>
          </tr>
          <tr class="overflow-hidden">
            <th
              scope="colgroup"
              colspan="4"
              class="p-4 bg-base-50 text-sm font-medium leading-6 text-left text-base-900 rounded-xl">
              Features
            </th>
          </tr>
          <tr class="overflow-hidden">
            <th
              scope="colgroup"
              colspan="4"
              class="p-4">
            </th>
          </tr>
          <tr>
            <th class="py-3 text-sm text-base-900 font-medium text-left">
              <div class="flex items-center gap-2">
                <Check size="sm" />
                Service agreement
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-base-900 bg-base-50 rounded-tl-3xl"
              >No</td
            >
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 rounded-tr-3xl"
              >No</td
            >
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200">
              <div class="flex items-center gap-2">
                <Check size="sm" />Dedicted Manager
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-base-900 bg-base-50 border-t border-base-200"
              >No</td
            >
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800"
              >Yes</td
            >
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200">
              <div class="flex items-center gap-2">
                <Check size="sm" />Onboarding sessions
              </div>
            </th>
            <td
              class="px-2 text-xs font-medium text-base-900 bg-base-50 border-t border-base-200"
              >No</td
            >
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800">
              No
            </td>
          </tr>
          <tr>
            <th
              class="py-3 text-sm text-base-900 font-medium text-left border-t border-base-200">
              <div class="flex items-center gap-2">
                <Check size="sm" />Dedicated support channel
              </div>
            </th>
            <td
              class="px-2 text-base-900 bg-base-50 border-t border-base-200 text-xs font-medium rounded-bl-3xl">
              No
            </td>
            <td
              class="px-2 text-xs font-medium text-white bg-base-900 border-t border-base-800 rounded-br-3xl"
              >No</td
            >
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>
