---
export const description =
  "Headline & subtext left, toggle top-right, and four tiered plan cards (Core → Apex) with feature lists and ‘Get Started’ CTAs.";

// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import PricingToggle from "@/components/fundations/buttonGroups/PricingToggle.astro";
import PricingCardsSingle from "@/components/fundations/pricing/PricingCardsSingle.astro";
---

<section x-data="{duration: 'monthly'}" class="bg-base-50">
  <Wrapper variant="blockStandard" class="py-24">
    <div
      class="text-center md:text-left grid grid-cols-1 gap-12 md:grid-cols-2 md:items-end"
    >
      <Text
        tag="h1"
        variant="displayMD"
        class="font-medium tracking-tight text-base-900 text-balance"
      >
        Equip your business with world class software
      </Text>
      <div class="md:ml-auto">
        <div
          aria-labelledby="pricing-toggle"
          class="relative z-0 inline-flex justify-center w-full p-1 mx-auto mt-8 overflow-hidden bg-white shadow ring-1 ring-base-200 ring-offset-2 gap-4 lg:mx-0 rounded-md max-w-52"
        >
          <!-- Monthly Pricing Button: Sets 'duration' to 'monthly' when clicked -->
          <PricingToggle />
        </div>
      </div>
    </div>
    <div
      class="mt-12 grid lg:-mx-20 grid-cols-1 gap-4 md:gap-0 sm:grid-cols-2 lg:grid-cols-4 lg:shadow lg:outline lg:outline-base-200 lg:rounded-xl"
    >
      <PricingCardsSingle
        tierName="Core"
        roundedDesktop="left"
        colorMode="white"
        isLeft={true}
        noShadow={true}
      />
      <!-- Tier two -->
      <PricingCardsSingle
        tierName="Momentum"
        roundedDesktop="none"
        isCentered={true}
        noShadow={true}
      />
      <!-- Tier three -->
      <PricingCardsSingle
        tierName="Growth"
        isPopular={true}
        roundedDesktop="none"
        colorMode="dark"
        isCentered={true}
        noShadow={true}
      />
      <!-- Tier four-->
      <PricingCardsSingle
        tierName="Apex"
        colorMode="accent"
        roundedDesktop="right"
        isRight={true}
        noShadow={true}
      />
    </div>
  </Wrapper>
</section>
