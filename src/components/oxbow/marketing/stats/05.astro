---
import Text from "@/components/fundations/typography/Text.astro";
const stats = [
  {
    label: "Working Individuals",
    description: "We reached over 30 million users and are growing fast.",
    value: "30%",
  },
  {
    label: "Super low fee",
    description:
      "Enjoy significant savings with our extremely low fee structure.",
    value: "40%",
  },
  {
    label: "Great Commitment",
    description: " Weâ€™re dedicated to delivering outstanding service and valu.",
    value: "50%",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-2xl">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600"
      >
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayBase"
        class="mt-4 font-semibold text-base-900 lg:text-balance"
      >
        Empower your finances with our unmatched value
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 text-base-500 font-medium">
        Experience low fees, unwavering commitment, and massive earnings with a
        service trusted by over 60 million users.
      </Text>
    </div>
    <div
      class="grid grid-cols-1 gap-x-2 gap-y-6 mt-12 sm:grid-cols-2 lg:divide-x lg:border-x md:grid-cols-3"
    >
      {
        stats.map((stat) => (
          <div class="flex flex-col pl-8 pr-4">
            <div class="flex gap-4 items-baseline">
              <Text
                tag="p"
                variant="textLG"
                class=" text-accent-700 font-medium"
              >
                {stat.value}
              </Text>
              <Text tag="h3" variant="textLG" class="text-base-900 font-medium">
                {stat.label}
              </Text>
            </div>
            <Text
              tag="p"
              variant="textBase"
              class="mt-4 text-base-500 font-medium"
            >
              {stat.description}
            </Text>
          </div>
        ))
      }
    </div>
  </div>
</section>
