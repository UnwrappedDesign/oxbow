---
import Text from "@/components/fundations/typography/Text.astro";
const stats = [
  {
    label: "Working Individuals",
    description: "We reached over 30 million users and are growing fast.",
    value: "30%",
  },
  {
    label: "Super low fee",
    description:
      "Enjoy significant savings with our extremely low fee structure.",
    value: "40%",
  },
  {
    label: "Great Commitment",
    description: " Weâ€™re dedicated to delivering outstanding service and valu.",
    value: "50%",
  },
];
---

<div class="p-8">
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto">
    <div class="max-w-2xl">
      <Text tag="p" variant="textSM" class="font-bold uppercase text-blue-600">
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-zinc-900 lg:text-balance"
      >
        Empower your finances with our unmatched value
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 font-medium text-zinc-500">
        Experience low fees, unwavering commitment, and massive earnings with a
        service trusted by over 60 million users.
      </Text>
    </div>
    <div
      class="mt-12 grid grid-cols-1 gap-x-2 gap-y-6 sm:grid-cols-2 lg:divide-x lg:border-x border-zinc-200 divide-zinc-200 md:grid-cols-3"
    >
      {
        stats.map((stat) => (
          <div class="flex flex-col pl-8 pr-4">
            <div class="flex items-baseline gap-4">
              <Text tag="p" variant="textLG" class="font-medium  text-blue-700">
                {stat.value}
              </Text>
              <Text tag="h3" variant="textLG" class="font-medium text-zinc-900">
                {stat.label}
              </Text>
            </div>
            <Text
              tag="p"
              variant="textBase"
              class="mt-4 font-medium text-zinc-500"
            >
              {stat.description}
            </Text>
          </div>
        ))
      }
    </div>
  </div>
  <!-- copy:end -->
</div>
