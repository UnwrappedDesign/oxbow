---
import Button from "@/components/fundations/buttons/Button.astro";
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 gap-y-12 lg:grid-cols-3 lg:items-center">
      <div class="flex flex-col h-full justify-between gap-8">
        <div class="text-center lg:text-left">
          <span
            class="font-mono text-xs font-medium tracking-tight text-accent-600 uppercase"
            >Tagline</span
          >
          <h1
            class="text-4xl mt-4 font-semibold tracking-tight text-base-900 lg:text-balance">
            Empower your finances with our unmatched value
          </h1>
          <p class="text-base font-medium mt-4 text-base-500 lg:text-balance">
            Experience low fees, unwavering commitment, and massive earnings
            with a service trusted by over 60 million users.
          </p>
        </div>
        <div
          class="flex flex-wrap items-center justify-center lg:justify-start gap-2">
          <Button
            variant="accent"
            size="sm">
            Get started
          </Button>
          <Button
            variant="alternative"
            size="sm">
            Learn more
          </Button>
        </div>
      </div>
      <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:col-span-2">
        <div class="flex flex-col bg-base-50 p-8 rounded-3xl">
          <dt class="mt-4">
            <p class="tracking-tight text-lg font-medium text-base-900">
              Working Individuals
            </p>
            <p class="text-sm text-base-500 text-pretty mt-2">
