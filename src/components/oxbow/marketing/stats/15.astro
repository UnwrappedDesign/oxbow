---
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
const stats = [
  {
    label: "Working Individuals",
    description: "We reached over 30 million users and are growing fast.",
    value: "30%",
  },
  {
    label: "Super low fee",
    description:
      "Enjoy significant savings with our extremely low fee structure.",
    value: "40%",
  },
  {
    label: "Great Commitment",
    description: " We’re dedicated to delivering outstanding service and valu.",
    value: "50%",
  },
  {
    label: "Massive Earnings",
    description: "Reap the benefits with substantial returns ",
    value: "100%",
  },
  {
    label: " Satisfaction",
    description:
      "Our customers consistently rate us with a 98% satisfaction rate.",
    value: "98%",
  },
  {
    label: "Global Reach",
    description: "We’ve expanded our services to over 120 countries worldwide.",
    value: "120+",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div>
      <Text
        tag="span"
        variant="eyebrow">
        Tagline
      </Text>
      <Heading
        class="mt-4"
        level={1}
        variant="default">
        Empower your finances with our unmatched value
      </Heading>
      <Text
        class="mt-4"
        tag="p"
        variant="body">
        Experience low fees, unwavering commitment, and massive earnings with a
        service trusted by over 60 million users.
      </Text>
    </div>
    <div
      class="grid items-center grid-cols-1 gap-6 lg:grid-cols-2 lg:gap-24 mt-12">
      <div class="grid gap-x-6 gap-y-12 sm:grid-cols-2 order-last">
        {
          stats.map((stat) => (
            <div>
              <div class="flex gap-4 items-baseline">
                <Text
                  tag="span"
                  variant="smallNumber">
                  {stat.value}
                </Text>
                <Heading
                  level={3}
                  variant="featureTitle">
                  {stat.label}
                </Heading>
              </div>
              <Text
                class="mt-2"
                tag="p"
                variant="body">
                {stat.description}
              </Text>
            </div>
          ))
        }
      </div>
      <div class="order-first block w-full">
        <img
          alt="#_"
          class="drop-shadow size-full aspect-square rounded-2xl"
          src="/people/1w.jpg"
        />
      </div>
    </div>
  </div>
</section>
