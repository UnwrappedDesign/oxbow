---
import Text from "@/components/fundations/typography/Text.astro";
const stats = [
  {
    label: "Working Individuals",
    description: "We reached over 30 million users and are growing fast.",
    value: "30%",
  },
  {
    label: "Super low fee",
    description:
      "Enjoy significant savings with our extremely low fee structure.",
    value: "40%",
  },
  {
    label: "Great Commitment",
    description: " Weâ€™re dedicated to delivering outstanding service and valu.",
    value: "50%",
  },
  {
    label: "Massive Earnings",
    description: "Reap the benefits with substantial returns ",
    value: "100%",
  }
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">

    <div
      class="grid items-center grid-cols-1 gap-6 lg:grid-cols-2 lg:gap-24">
      <div class="grid gap-x-6 gap-y-12 sm:grid-cols-2 order-last">
        {
          stats.map((stat) => (
            <div>
              <div class="flex gap-4 items-baseline flex-col">
                <Text
                  tag="h3"
                  variant="displayXL"
                  class="text-accent-700">
                  {stat.value}
                </Text>
                <Text
                  tag="h3"
                  variant="textLG"
                  class=" text-base-900 font-medium">
                  {stat.label}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textBase"
                class="mt-2 text-base-500 font-medium">
                {stat.description}
              </Text>
            </div>
          ))
        }
      </div>
      <div class="order-first block w-full">
        <img
          alt="#_"
          class="drop-shadow size-full aspect-square rounded-2xl"
          src="/pose/1.jpg"
        />
      </div>
    </div>
  </div>
</section>
