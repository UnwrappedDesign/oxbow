---
import Text from "@/components/fundations/typography/Text.astro";
const stats = [
  {
    label: "Working Individuals",
    value: "30%",
  },
  {
    label: "Super low fee",
    value: "40%",
  },
  {
    label: "Great Commitment",
    value: "50%",
  },
  {
    label: "Massive Earnings",
    value: "60M",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div
      class="text-center grid grid-cols-1 gap-x-4 gap-y-12 sm:grid-cols-2 md:grid-cols-4"
    >
      {
        stats.map((stat) => (
          <div class="flex flex-col">
            <Text
              tag="h3"
              variant="displayXL"
              class="text-blue-600 dark:text-blue-400 font-mono"
            >
              {stat.value}
            </Text>

            <Text
              tag="h3"
              variant="textBase"
              class="font-semibold text-zinc-900 dark:text-white"
            >
              {stat.label}
            </Text>
          </div>
        ))
      }
    </div>
  </div>
</section>
