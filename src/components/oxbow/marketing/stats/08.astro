---
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="items-end grid grid-cols-1 md:grid-cols-3 gap-6">
      <div
        class="flex flex-col-reverse justify-between gap-x-16 gap-y-8 sm:w-3/4 sm:max-w-md sm:flex-row-reverse sm:items-end lg:w-72 lg:max-w-none lg:flex-none lg:flex-col lg:items-start"
      >
        <div>
          <Text
            tag="p"
            variant="textSM"
            class="font-bold uppercase text-blue-600"
          >
            Tagline
          </Text>
          <Text
            tag="h2"
            variant="displayMD"
            class="mt-4 font-semibold text-gray-900 lg:text-balance"
          >
            Empower your finances with our unmatched value
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 font-medium text-gray-500"
          >
            Experience low fees, unwavering commitment, and massive earnings
            with a service trusted by over 60 million users.
          </Text>
        </div>
      </div>
      <div
        class="flex flex-col justify-between rounded-3xl bg-blue-600 lg:gap-28"
      >
        <div class="order-last w-full p-8 border-t border-white/20">
          <Text tag="p" variant="display2XL" class="font-medium text-white">
            90%
          </Text>
        </div>
        <div class="p-8 sm:shrink lg:flex-none">
          <Text tag="h3" variant="textLG" class="font-medium text-white">
            Massive Earnings
          </Text>
          <Text tag="p" variant="textBase" class="mt-2 font-medium text-white">
            Reap the benefits with substantial returns.
          </Text>
        </div>
      </div>
      <div
        class="flex flex-col justify-between rounded-3xl bg-blue-950 lg:gap-44"
      >
        <div class="order-last w-full p-8 border-t border-white/20">
          <Text tag="p" variant="display2XL" class="font-medium text-white">
            8%
          </Text>
        </div>
        <div class="p-8 sm:shrink lg:flex-none">
          <Text tag="h3" variant="textLG" class="font-medium text-white">
            Super low fee
          </Text>
          <Text tag="p" variant="textBase" class="mt-2 font-medium text-white">
            Enjoy significant savings with our extremely low fee structure.
          </Text>
        </div>
      </div>
    </div>
  </div>
</section>
