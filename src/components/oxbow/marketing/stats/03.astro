---
import Text from "@/components/fundations/typography/Text.astro";
const stats = [
  {
    label: "Working Individuals",
    value: "30%",
  },
  {
    label: "Super low fee",
    value: "40%",
  },
  {
    label: "Great Commitment",
    value: "50%",
  },
  {
    label: "Massive Earnings",
    value: "60M",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="grid grid-cols-1 gap-px bg-base-200 rounded-2xl shadow overflow-hidden sm:grid-cols-2 md:grid-cols-4 text-center">
      {
        stats.map((stat) => (
          <div class="flex flex-col p-8 bg-base-50">
            <Text
              tag="h3"
              variant="displayXL"
              class="text-accent-700">
              {stat.value}
            </Text>
            <Text
              tag="h3"
              variant="textLG"
              class=" text-base-900 font-medium">
              {stat.label}
            </Text>
          </div>
        ))
      }
    </div>
  </div>
</section>
