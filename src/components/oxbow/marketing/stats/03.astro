---
import Text from "@/components/fundations/typography/Text.astro";
const stats = [
  {
    label: "Working Individuals",
    value: "30%",
  },
  {
    label: "Super low fee",
    value: "40%",
  },
  {
    label: "Great Commitment",
    value: "50%",
  },
  {
    label: "Massive Earnings",
    value: "60M",
  },
];
---

<div>
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div
      class="overflow-hidden text-center border grid grid-cols-1 gap-px bg-zinc-200 rounded-2xl border-zinc-200 sm:grid-cols-2 md:grid-cols-4"
    >
      {
        stats.map((stat) => (
          <div class="flex flex-col p-8 bg-zinc-50">
            <Text tag="h3" variant="displayXL" class="text-stone-700">
              {stat.value}
            </Text>
            <Text tag="h3" variant="textLG" class="font-medium  text-zinc-900">
              {stat.label}
            </Text>
          </div>
        ))
      }
    </div>
  </div>
  <!-- copy:end -->
</div>
