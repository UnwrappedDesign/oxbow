---
export const freeComponent = true;
import Text from "@/components/fundations/typography/Text.astro";
const stats = [
  {
    label: "Working Individuals",
    value: "30%",
  },
  {
    label: "Super low fee",
    value: "40%",
  },
  {
    label: "Great Commitment",
    value: "50%",
  },
  {
    label: "Massive Earnings",
    value: "60M",
  },
];
---

<section>
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div
      class="text-center grid grid-cols-1 gap-x-6 gap-y-12 sm:grid-cols-2 md:grid-cols-4"
    >
      {
        stats.map((stat) => (
          <div class="flex items-baseline gap-4 ">
            <Text tag="p" variant="textLG" class="font-medium  text-blue-700">
              {stat.value}
            </Text>
            <Text tag="h3" variant="textLG" class="font-medium  text-zinc-900">
              {stat.label}
            </Text>
          </div>
        ))
      }
    </div>
  </div>
</section>
