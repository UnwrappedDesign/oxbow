---
import Button from "@/components/fundations/buttons/Button.astro";

import Text from "@/components/fundations/typography/Text.astro";

import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
const teamMembers = [
  {
    name: "Fernando Monte",
    title: "Creator of Oxbow UI.com",
    imgSrc: "/avatars/1.jpg",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.jpg",
  },
  {
    name: "Hanako Yamada",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.jpg",
  },
  {
    name: "Heidi Herrera",
    title: "COO at Pff Inc",
    imgSrc: "/avatars/4.jpg",
  },
  {
    name: "Sara Johnson",
    title: "Lead Developer",
    imgSrc: "/avatars/5.jpg",
  },
  {
    name: "Sandra Kimmel",
    title: "Marketing Director",
    imgSrc: "/avatars/6.jpg",
  },
];
---

<section>
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3 lg:items-end">
      <div class="lg:col-span-2">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 lg:text-balance"
        >
          Introducing our team
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-zinc-500">
          Uniting talent with vision. Get to know the dedicated professionals
          who blend their skills and passion to lead us to new heights.
        </Text>
      </div>
      <div class="flex lg:ml-auto">
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="flex items-center font-medium text-blue-500 gap-2 hover:text-zinc-900"
        >
          Meet all our team
          <ChevronRight size="sm" />
        </Text>
      </div>
    </div>
    <ul
      role="list"
      class="mt-12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-x-12 gap-y-24 lg:mt-24"
    >
      {
        teamMembers.map((member) => (
          <li class="p-8 bg-zinc-50 rounded-3xl">
            <div class="flex flex-col  gap-4">
              <img
                class="object-cover rounded-xl shadow aspect-[4/3] drop-shadow -mt-16"
                src={member.imgSrc}
                alt="#_"
              />
              <div>
                <div class="flex items-center justify-between">
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="font-medium  text-zinc-900"
                  >
                    {member.name}
                  </Text>
                  <div class="flex items-center  gap-2">
                    <Text
                      tag="a"
                      href="#_"
                      variant="textBase"
                      class="font-medium hover:text-blue-500 text-zinc-500"
                    >
                      <XBrand size="sm" />
                    </Text>
                    <Text
                      tag="a"
                      href="#_"
                      variant="textBase"
                      class="font-medium hover:text-blue-500 text-zinc-500"
                    >
                      <LinkedinBrand size="sm" />
                    </Text>
                  </div>
                </div>
                <Text
                  tag="p"
                  variant="textBase"
                  class="font-medium text-zinc-500"
                >
                  {member.title}
                </Text>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
