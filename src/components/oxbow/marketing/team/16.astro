---
import Button from "@/components/fundations/buttons/Button.astro";
const teamMembers = [
  {
    name: "Mike Vega",
    title: "Founder of Oxbow UI",
    imgSrc: "/avatars/1.avif",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.avif",
  },
  {
    name: "Elona Muska",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.avif",
  },
  {
    name: "Messina Lionel",
    title: "COO at Pff Inc",
    imgSrc:
      "https://images.unsplash.com/photo-1548142813-c348350df52b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80",
  },
  {
    name: "Sara Johnson",
    title: "Lead Developer",
    imgSrc:
      "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3 lg:items-end">
      <div class="lg:col-span-2">
        <span
          class="font-mono text-xs font-medium tracking-tight text-accent-600 uppercase">
          tagline</span
        >
        <h1 class="text-4xl mt-4 font-semibold tracking-tight text-base-900">
          Introducing our team
        </h1>
        <p class="mt-6 text-base font-medium text-base-500">
          Uniting talent with vision. Get to know the dedicated professionals
          who blend their skills and passion to lead us to new heights.
        </p>
      </div>
      <div class="flex  lg:ml-auto">
        <Button
          variant="alternative"
          size="sm">
          Meet all our team
        </Button>
      </div>
    </div>
    <ul
      role="list"
      class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:bg-base-50 lg:rounded-3xl lg:p-8 md:grid-cols-5 gap-6 lg:mt-24">
      {
        teamMembers.map((member) => (
          <>
            <li class="flex flex-auto flex-col justify-between relative rounded-2xl overflow-hidden hover:-translate-y-24 hover:shadow duration-300">
              <img
                src={member.imgSrc}
                alt="#_"
                class="h-full object-cover  relative rounded-2xl"
              />
              <div class=" absolute inset-0 opacity-0 hover:opacity-100 transition-opacity  duration-300 hover:bg-accent-700  hover:ring-1 hover:ring-base-200 rounded-2xl">
                <div class="flex flex-col h-full justify-end ">
                  <div class="p-4">
                    <h3 class="tracking-tight text-lg font-medium  text-white">
                      {member.name}
                    </h3>

                    <p class="mt-2 text-sm text-base-200 text-balance">
                      {member.title}
                    </p>
                  </div>
                  <div class=" flex items-center gap-2 p-4 border-t border-white/20">
                    <a href="#_">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler text-white hover:text-base-200 icons-tabler-outline icon-tabler-brand-x">
                        <>
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          />
                          <path d="M4 4l11.733 16h4.267l-11.733 -16z" />
                          <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" />
                        </>
                      </svg>
                    </a>
                    <a href="#_">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler text-white hover:text-base-200 icons-tabler-outline icon-tabler-brand-linkedin">
                        <>
                          <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                          />
                          <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" />
                          <path d="M8 11l0 5" />
                          <path d="M8 8l0 .01" />
                          <path d="M12 16l0 -5" />
                          <path d="M16 16v-3a2 2 0 0 0 -4 0" />
                        </>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </li>
          </>
        ))
      }
    </ul>
  </div>
</section>
