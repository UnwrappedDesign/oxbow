---
const teamMembers = [
  {
    name: "Mike Vega",
    title: "Creator of Oxbow UI.com",
    imgSrc: "/avatars/1.avif",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.avif",
  },
  {
    name: "Elona Muska",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.avif",
  },
  {
    name: "Messina Lionel",
    title: "COO at Pff Inc",
    imgSrc:
      "https://images.unsplash.com/photo-1548142813-c348350df52b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80",
  },
  {
    name: "Sara Johnson",
    title: "Lead Developer",
    imgSrc:
      "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80",
  },
  {
    name: "David Kim",
    title: "Marketing Director",
    imgSrc:
      "https://images.unsplash.com/photo-1456327102063-fb5054efe647?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTh8fGhlYWQlMjBwZXJzb258ZW58MHwwfDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl lg:text-balance text-center sm:text-left">
      <span
        class="font-mono text-xs font-medium tracking-tight text-accent-600 uppercase">
        tagline</span
      >
      <h1 class="text-4xl mt-4 font-semibold tracking-tight text-base-900">
        Introducing our team
      </h1>
      <p class="mt-6 text-base font-medium text-base-500">
        Uniting talent with vision. Get to know the dedicated professionals who
        blend their skills and passion to lead us to new heights.
      </p>
      <div
        class="flex mt-8 text-center items-center gap-2 text-base-500 text-sm justify-center lg:justify-start">
        We are not hiring:
        <a
          href="#_"
          aria-label="Action"
          class="text-accent-500 hover:text-base-900 text-sm font-medium duration-300 flex items-center gap-2">
          See all our open roles
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right">
            <path
              stroke="none"
              d="M0 0h24v24H0z"
              fill="none"
            ></path>
            <path d="M9 6l6 6l-6 6"></path>
          </svg>
        </a>
      </div>
    </div>
    <ul
      role="list"
      class="mt-12 grid grid-cols-1 text-center md:text-left sm:grid-cols-2 md:grid-cols-3 gap-12 lg:mt-24">
      {
        teamMembers.map((member) => (
          <li>
            <div class="flex flex-col md:flex-row items-center gap-4 ">
              <img
                class="object-cover rounded-full size-16 "
                src={member.imgSrc}
                alt="#_"
              />
              <div>
                <h3 class="tracking-tight text-lg font-medium  text-base-900">
                  {member.name}
                </h3>
                <p class="mt-2 text-sm text-base-500 text-balance">
                  {member.title}
                </p>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
