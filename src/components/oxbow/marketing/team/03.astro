---
const teamMembers = [
  {
    name: "Mike Vega",
    title: "Creator of Oxbow UI.com",
    imgSrc: "/avatars/1.avif",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.avif",
  },
  {
    name: "Elona Muska",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.avif",
  },
  {
    name: "Messina Lionel",
    title: "COO at Pff Inc",
    imgSrc:
      "https://images.unsplash.com/photo-1548142813-c348350df52b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl mx-auto text-center lg:text-balance">
      <span
        class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase">
        tagline</span
      >
      <h1 class="text-4xl mt-4 font-semibold tracking-tight text-zinc-900">
        Introducing our team
      </h1>
      <p class="mt-6 text-base font-medium text-zinc-500">
        Uniting talent with vision. Get to know the dedicated professionals who
        blend their skills and passion to lead us to new heights.
      </p>
    </div>
    <ul
      role="list"
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 text-center gap-24 gap-x-4 mt-24">
      {
        teamMembers.map((member) => (
          <li class="bg-zinc-50 rounded-3xl">
            <img
              class="object-cover rounded-full -mt-12  size-24 mx-auto "
              src={member.imgSrc}
              alt="#_"
            />
            <div class="flex flex-col   ">
              <div class="p-8">
                <h3 class="tracking-tight text-lg font-medium  text-zinc-900">
                  {member.name}
                </h3>
                <p class="mt-2 text-sm text-zinc-500 text-balance">
                  {member.title}
                </p>
              </div>
                <div class=" flex items-center gap-2 px-8 py-4 border-t justify-center">
                  <a href="#_">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler text-blue-600 hover:text-zinc-900 icons-tabler-outline icon-tabler-brand-x">
                      <>
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        />
                        <path d="M4 4l11.733 16h4.267l-11.733 -16z" />
                        <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" />
                      </>
                    </svg>
                  </a>
                  <a href="#_">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler text-blue-600 hover:text-zinc-900 icons-tabler-outline icon-tabler-brand-linkedin">
                      <>
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        />
                        <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" />
                        <path d="M8 11l0 5" />
                        <path d="M8 8l0 .01" />
                        <path d="M12 16l0 -5" />
                        <path d="M16 16v-3a2 2 0 0 0 -4 0" />
                      </>
                    </svg>
                  </a>
                </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
