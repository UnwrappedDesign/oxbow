---
import Text from "@/components/fundations/typography/Text.astro";

import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
const teamMembers = [
  {
    name: "Fernando Monte",
    title: "Creator of Oxbow UI.com",
    imgSrc: "/avatars/1.jpg",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.jpg",
  },
  {
    name: "Hanako Yamada",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.jpg",
  },
  {
    name: "Heidi Herrera",
    title: "COO at Pff Inc",
    imgSrc: "/avatars/4.jpg",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl mx-auto text-center lg:text-balance">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600"
      >
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayBase"
        class="mt-4 font-semibold text-base-900 lg:text-balance"
      >
        Introducing our team
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 text-base-500 font-medium">
        Uniting talent with vision. Get to know the dedicated professionals who
        blend their skills and passion to lead us to new heights.
      </Text>
    </div>
    <ul
      role="list"
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 text-center gap-24 gap-x-4 mt-24"
    >
      {
        teamMembers.map((member) => (
          <li class="bg-base-50 rounded-3xl">
            <img
              class="object-cover rounded-full -mt-12  size-24 mx-auto "
              src={member.imgSrc}
              alt="#_"
            />
            <div class="flex flex-col   ">
              <div class="p-8">
                <Text
                  tag="h3"
                  variant="textLG"
                  class=" text-base-900 font-medium"
                >
                  {member.name}
                </Text>
                <Text
                  tag="p"
                  variant="textBase"
                  class="text-base-500 font-medium"
                >
                  {member.title}
                </Text>
              </div>
              <div class=" flex items-center gap-2 px-8 py-4 border-t border-base-200 justify-center">
                <Text tag="a" href="#_" variant="link">
                  <XBrand size="sm" />
                </Text>

                <Text tag="a" href="#_" variant="link">
                  <LinkedinBrand size="sm" />
                </Text>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
