---
import Text from "@/components/fundations/typography/Text.astro";

import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
const teamMembers = [
  {
    name: "Fernando Monte",
    title: "Creator of Oxbow UI.com",
    imgSrc: "/avatars/1.jpg",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.jpg",
  },
  {
    name: "Hanako Yamada",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.jpg",
  },
  {
    name: "Heidi Herrera",
    title: "COO at Pff Inc",
    imgSrc: "/avatars/4.jpg",
  },
];
---

<section>
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="max-w-xl mx-auto text-center lg:text-balance">
      <Text tag="p" variant="textSM" class="font-bold uppercase text-blue-600">
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-gray-900 lg:text-balance"
      >
        Introducing our team
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 font-medium text-gray-500">
        Uniting talent with vision. Get to know the dedicated professionals who
        blend their skills and passion to lead us to new heights.
      </Text>
    </div>
    <ul
      role="list"
      class="mt-24 text-center grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-24 gap-x-4"
    >
      {
        teamMembers.map((member) => (
          <li class="bg-gray-50 rounded-3xl">
            <img
              class="object-cover mx-auto -mt-12 rounded-full  size-24"
              src={member.imgSrc}
              alt="#_"
            />
            <div class="flex flex-col ">
              <div class="p-8">
                <Text
                  tag="h3"
                  variant="textLG"
                  class="font-medium  text-gray-900"
                >
                  {member.name}
                </Text>
                <Text
                  tag="p"
                  variant="textBase"
                  class="font-medium text-gray-500"
                >
                  {member.title}
                </Text>
              </div>
              <div class="flex items-center justify-center px-8 py-4 border-t  gap-2 border-gray-200">
                <Text tag="a" href="#_" variant="link">
                  <XBrand size="sm" />
                </Text>

                <Text tag="a" href="#_" variant="link">
                  <LinkedinBrand size="sm" />
                </Text>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
