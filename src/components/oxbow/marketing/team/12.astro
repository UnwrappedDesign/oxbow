<section class="bg-white dark:bg-black">
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <ul
      role="list"
      class="grid grid-cols-3 sm:grid-cols-4 lg:grid-cols-6 gap-12 lg:gap-y-32"
    >
      <li class="lg:mt-24">
        <div class="flex flex-col gap-4">
          <img
            class="object-cover mx-auto rounded-full size-16 lg:size-20"
            src="/avatars/1.jpg"
            alt="#_"
          />
        </div>
      </li>
      <li>
        <div class="flex flex-col gap-4">
          <img
            class="object-cover mx-auto rounded-full size-16 lg:size-20"
            src="/avatars/2.jpg"
            alt="#_"
          />
        </div>
      </li>
      <li class="lg:mt-24">
        <div class="flex flex-col gap-4">
          <img
            class="object-cover mx-auto rounded-full size-16 lg:size-20"
            src="/avatars/3.jpg"
