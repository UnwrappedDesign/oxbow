---
import Text from "@/components/fundations/typography/Text.astro";

import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
const teamMembers = [
  {
    name: "Fernando Monte",
    title: "Creator of Oxbow UI.com",
    imgSrc: "/avatars/1.jpg",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.jpg",
  },
  {
    name: "Hanako Yamada",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.jpg",
  },
  {
    name: "Heidi Herrera",
    title: "COO at Pff Inc",
    imgSrc: "/avatars/4.jpg",
  },
  {
    name: "Sara Johnson",
    title: "Lead Developer",
    imgSrc: "/avatars/5.jpg",
  },
  {
    name: "Sandra Kimmel",
    title: "Marketing Director",
    imgSrc: "/avatars/6.jpg",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="relative px-8 mx-auto md:px-12 lg:px-32 max-w-7xl py-24">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3 lg:items-end">
      <div class="lg:col-span-2">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600 dark:text-blue-400"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 dark:text-white lg:text-balance"
        >
          Introducing our team
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
        >
          Uniting talent with vision. Get to know the dedicated professionals
          who blend their skills and passion to lead us to new heights.
        </Text>
      </div>
      <div class="flex lg:ml-auto">
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="flex items-center font-medium text-blue-500 dark:text-blue-400 gap-2 hover:text-zinc-900 dark:hover:text-white"
        >
          Meet all our team
          <ChevronRight size="sm" />
        </Text>
      </div>
    </div>
    <div
      class="mt-12 border-y divide-y border-zinc-200 dark:border-zinc-800 dark:divide-zinc-800 divide-zinc-200 lg:mt-24"
    >
      {
        teamMembers.map((member) => (
          <div class="flex flex-col justify-between py-6 md:flex-row lg:items-center gap-4">
            <div class="flex items-center gap-4">
              <img
                class="object-cover rounded-full size-12 transition-all duration-300"
                src={member.imgSrc}
                alt={`${member.name}'s profile picture`}
              />
              <div>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="font-medium text-zinc-900 dark:text-white"
                >
                  {member.name}
                </Text>
                <Text
                  tag="p"
                  variant="textBase"
                  class="font-medium text-zinc-500 dark:text-zinc-400"
                >
                  {member.title}
                </Text>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <Text tag="a" href="#_" variant="link">
                <XBrand size="sm" />
              </Text>
              <Text tag="a" href="#_" variant="link">
                <LinkedinBrand size="sm" />
              </Text>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
