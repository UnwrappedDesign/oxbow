---
import Text from "@/components/fundations/typography/Text.astro";

import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
const teamMembers = [
  {
    name: "Fernando Monte",
    title: "Creator of Oxbow UI.com",
    imgSrc: "/avatars/1.jpg",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.jpg",
  },
  {
    name: "Hanako Yamada",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.jpg",
  },
  {
    name: "Heidi Herrera",
    title: "COO at Pff Inc",
    imgSrc: "/avatars/4.jpg",
  },
  {
    name: "Sara Johnson",
    title: "Lead Developer",
    imgSrc: "/avatars/5.jpg",
  },
  {
    name: "Sandra Kimmel",
    title: "Marketing Director",
    imgSrc: "/avatars/6.jpg",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3 lg:items-end">
      <div class="lg:col-span-2">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayBase"
          class="mt-4 font-semibold text-base-900 lg:text-balance"
        >
          Introducing our team
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500 font-medium">
          Uniting talent with vision. Get to know the dedicated professionals
          who blend their skills and passion to lead us to new heights.
        </Text>
      </div>
      <div class="flex lg:ml-auto">
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="text-accent-500 font-medium flex items-center gap-2 hover:text-base-900"
        >
          Meet all our team
          <ChevronRight size="sm" />
        </Text>
      </div>
    </div>
    <div class="border-y divide-y border-base-200 divide-base-200 mt-12">
      {
        teamMembers.map((member) => (
          <div class="flex flex-col md:flex-row justify-between lg:items-center py-6 gap-4">
            <div class="flex items-center gap-4">
              <img
                class="object-cover rounded-full size-12   transition-all duration-300  "
                src={member.imgSrc}
                alt={`${member.name}'s profile picture`}
              />
              <div>
                <Text
                  tag="h3"
                  variant="textLG"
                  class=" text-base-900 font-medium"
                >
                  {member.name}
                </Text>
                <Text
                  tag="p"
                  variant="textBase"
                  class="text-base-500 font-medium"
                >
                  {member.title}
                </Text>
              </div>
            </div>
            <div class=" flex items-center gap-2 ">
              <Text tag="a" href="#_" variant="link">
                <XBrand size="sm" />
              </Text>
              <Text tag="a" href="#_" variant="link">
                <LinkedinBrand size="sm" />
              </Text>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
