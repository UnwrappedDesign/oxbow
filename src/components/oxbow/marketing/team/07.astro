  {
    name: "Fernando Monte",
    title: "Founder of Oxbow UI",
    imgSrc: "/avatars/1.jpg",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.jpg",
  },
  {
    name: "Hanako Yamada",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.jpg",
  },
  {
    name: "Heidi Herrera",
    title: "COO at Pff Inc",
    imgSrc: "/avatars/4.jpg",
  },
  {
    name: "Sara Johnson",
    title: "Lead Developer",
    imgSrc: "/avatars/5.jpg",
  },
  {
    name: "Sandra Kimmel",
    title: "Marketing Director",
    imgSrc: "/avatars/6.jpg",
  },
  {
    name: "Emma Watson",
    title: "Chief Design Officer",
    imgSrc: "/avatars/7.jpg",
  },
  {
    name: "James Anderson",
    title: "Senior Product Manager",
    imgSrc: "/avatars/8.jpg",
  },
  {
    name: "Olivia Brown",
    title: "Head of Customer Success",
    imgSrc: "/avatars/9.jpg",
  },
  {
    name: "Liam Martinez",
    title: "UX Researcher",
    imgSrc: "/avatars/10.jpg",
  },
  {
    name: "Hector Lee",
    title: "Data Scientist",
    imgSrc: "/avatars/11.jpg",
  },
  {
    name: "Noah Wilson",
    title: "Sales Manager",
    imgSrc: "/avatars/12.jpg",
  },
];
---

<section class="bg-white dark:bg-black">
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <div>
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600 dark:text-blue-400"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 dark:text-white lg:text-balance"
        >
          Introducing our team
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
        >
          Uniting talent with vision. Get to know the dedicated professionals
          who blend their skills and passion to lead us to new heights.
        </Text>
        <div class="flex items-center mt-12 text-center gap-2">
          <Text
            tag="p"
            variant="textBase"
            class="font-medium text-zinc-500 dark:text-zinc-400"
          >
            We are hiring
          </Text>
          <Text
            tag="a"
            href="#_"
            variant="textBase"
            class="flex items-center font-medium text-blue-500 dark:text-blue-400 gap-2 hover:text-zinc-900 dark:hover:text-white"
          >
            See all our open roles
            <ChevronRight size="sm" />
          </Text>
        </div>
      </div>
      <ul
        role="list"
        class="grid grid-cols-1 sm:grid-cols-2 gap-12 lg:col-span-2"
      >
        {
          teamMembers.map((member) => (
            <li>
              <div class="flex items-center gap-4">
                <img
                  class="object-cover rounded-full size-12 lg:size-16 "
                  src={member.imgSrc}
                  alt="#_"
                />
                <div>
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="font-medium text-zinc-900 dark:text-white"
                  >
                    {member.name}
                  </Text>
                  <Text
                    tag="p"
                    variant="textBase"
                    class="font-medium text-zinc-500 dark:text-zinc-400"
                  >
                    {member.title}
                  </Text>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
