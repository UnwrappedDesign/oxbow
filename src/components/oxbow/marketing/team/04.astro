---
import Text from "@/components/fundations/typography/Text.astro";
const teamMembers = [
  {
    name: "Fernando Monte",
    title: "Founder of Oxbow UI",
    imgSrc: "/avatars/1.jpg",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.jpg",
  },
  {
    name: "Hanako Yamada",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.jpg",
  },
  {
    name: "Heidi Herrera",
    title: "COO at Pff Inc",
    imgSrc:
      "/avatars/4.jpg",
  },
  {
    name: "Sara Johnson",
    title: "Lead Developer",
    imgSrc:
      "/avatars/5.jpg",
  },
  {
    name: "Sandra Kimmel",
    title: "Marketing Director",
    imgSrc:
      "/avatars/6.jpg",
  },
  {
    name: "Emma Watson",
    title: "Chief Design Officer",
    imgSrc:
      "/avatars/7.jpg",
  },
  {
    name: "James Anderson",
    title: "Senior Product Manager",
    imgSrc:
      "/avatars/8.jpg",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <ul
      role="list"
      class="grid grid-cols-1 sm:grid-cols-3 gap-px lg:grid-cols-4 rounded-3xl overflow-hidden border bg-base-200 border-base-200">
      {
        teamMembers.map((member) => (
          <li class="bg-white p-8 lg:p-12 flex flex-col gap-4 text-center hover:bg-transparent duration-300">
            <img
              class="object-cover rounded-full mx-auto size-12 lg:size-16 "
              src={member.imgSrc}
              alt="#_"
            />
            <div>
              <Text
                variant="textLG"
                tag="h3"
                class="text-base-900 font-medium">
                {member.name}
              </Text>
              <Text
                tag="p"
                variant="textBase"
                class="text-base-500 font-medium">
                {member.title}
              </Text>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
