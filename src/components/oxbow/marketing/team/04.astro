---

<section class="bg-white dark:bg-zinc-900">
  <div class="relative px-8 mx-auto md:px-12 lg:px-32 max-w-7xl py-24">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
      <div>
        <Text
          tag="h2"
          variant="displaySM"
          class="font-semibold tracking-tight text-zinc-900 dark:text-white text-balance"
        >
          Our oxbow UI team
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
        >
          Passionate innovators designing experiences that elevate brands and
          delight users across every interaction.
        </Text>
        <div class="flex items-center mt-6 text-center gap-2">
          <Text
            tag="p"
            variant="textSM"
            class="font-medium text-zinc-500 dark:text-zinc-400 flex items-center gap-2 mt-8"
          >
            Weâ€™re hiring!
            <a
              href="#_"
              class="font-medium text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300 flex items-center gap-1"
            >
              Explore Careers
              <ChevronRight size="sm" />
            </a>
          </Text>
        </div>
      </div>
      <ul
        role="list"
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12 lg:col-span-2"
      >
        {
          teamMembers.map((member) => (
            <li>
              <div class="flex items-center gap-4">
                <img
                  class="object-cover rounded-full size-12 "
                  src={member.imgSrc}
                  alt="#_"
                />
                <div>
                  <Text
                    variant="textBase"
                    tag="h3"
                    class="font-semibold text-zinc-900 dark:text-white"
                  >
                    {member.name}
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="font-medium text-zinc-500 dark:text-zinc-400"
                  >
                    {member.title}
                  </Text>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
