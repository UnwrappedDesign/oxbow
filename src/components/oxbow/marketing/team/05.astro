---
import Text from "@/components/fundations/typography/Text.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
const teamMembers = [
  {
    name: "Mike Vega",
    title: "Founder of Oxbow UI",
    imgSrc: "/avatars/1.avif",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.avif",
  },
  {
    name: "Elona Muska",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.avif",
  },
  {
    name: "Messina Lionel",
    title: "COO at Pff Inc",
    imgSrc:
      "https://images.unsplash.com/photo-1548142813-c348350df52b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80",
  },
  {
    name: "Sara Johnson",
    title: "Lead Developer",
    imgSrc:
      "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80",
  },
  {
    name: "David Kim",
    title: "Marketing Director",
    imgSrc:
      "https://images.unsplash.com/photo-1456327102063-fb5054efe647?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTh8fGhlYWQlMjBwZXJzb258ZW58MHwwfDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60",
  },
  {
    name: "Emma Watson",
    title: "Chief Design Officer",
    imgSrc:
      "https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=60",
  },
  {
    name: "James Anderson",
    title: "Senior Product Manager",
    imgSrc:
      "https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=60",
  },
];
---
<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl lg:text-balance text-center mx-auto">
       <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600">
          Tagline
        </Text>
       <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-base-900 lg:text-balance">
        Introducing our team
      </Text>
      <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
        Uniting talent with vision. Get to know the dedicated professionals who
        blend their skills and passion to lead us to new heights.
      </Text>
    </div>
    <ul
      role="list"
      class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 gap-y-16 lg:mt-24">
      {
        teamMembers.map((member) => (
          <li>
            <div class="flex items-center justify-between ">
              <div class="flex items-center gap-4">
                <img
                  class="object-cover rounded-full size-12"
                  src={member.imgSrc}
                  alt="#_"
                />
                <div>
                 <Text
                  tag="h3"
                  variant="textLG"
                  class=" text-base-900 font-medium">
                    {member.name}
                  </Text>
                  <Text
                tag="p"
                variant="textBase"
                class="text-base-500 font-medium">
                    {member.title}
                  </Text>
                </div>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
    <div class="flex text-center items-center gap-2 justify-center mt-12">
     <Text
        tag="p"
        variant="textBase"
        class=" text-base-500 font-medium">
        We are hiring
      </Text>
      <Text
        tag="a"
        href="#_"
        variant="textMD"
        class="text-accent-500 font-medium flex items-center gap-2 hover:text-base-900">
        See all our open roles
        <ChevronRight size="sm" />
      </Text>
    </div>
  </div>
</section>
