---
import Text from "@/components/fundations/typography/Text.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
const teamMembers = [
  {
    name: "Mike Vega",
    title: "Creator of Oxbow UI.com",
    imgSrc: "/avatars/1.avif",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.avif",
  },
  {
    name: "Elona Muska",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.avif",
  },
  {
    name: "Messina Lionel",
    title: "COO at Pff Inc",
    imgSrc:
      "https://images.unsplash.com/photo-1548142813-c348350df52b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80",
  },
];
---
<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl mx-auto text-center lg:text-balance">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600">
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-base-900 lg:text-balance">
        Introducing our team
      </Text>
       <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
        Uniting talent with vision. Get to know the dedicated professionals who
        blend their skills and passion to lead us to new heights.
      </Text>
    </div>
    <ul
      role="list"
      class="mt-12 grid sm:grid-cols-2 md:grid-cols-3 text-center lg:divide-x lg:grid-cols-4 lg:border-x lg:mt-24">
      {
        teamMembers.map((member) => (
          <li class="p-8">
            <div class="flex flex-col gap-4">
              <img
                class="object-cover rounded-full size-16 lg:size-20 mx-auto"
                src={member.imgSrc}
                alt="#_"
              />
              <div>
                <Text
                  tag="h3"
                  variant="textLG"
                  class=" text-base-900 font-medium">
                  {member.name}
                </Text>
                <Text
                  tag="p"
                  variant="textBase"
                  class="text-base-500 font-medium">
                  {member.title}
                </Text>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
    <div class="flex text-center items-center gap-2 mt-8 justify-center">
     <Text
        tag="p"
        variant="textBase"
        class=" text-base-500 font-medium">
        We are hiring
      </Text>
      <Text
        tag="a"
        href="#_"
        variant="textMD"
        class="text-accent-500 font-medium flex items-center gap-2 hover:text-base-900">
        See all our open roles
        <ChevronRight size="sm" />
      </Text>
    </div>
  </div>
</section>
