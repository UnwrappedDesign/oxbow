---
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
const member = [
  {
    testimonial:
      "Being in the financial industry, we were always looking for ways to enhance our transactions' security and efficiency",
    name: "Ana Betancourt",
    title: "Creator of Something",
    imgSrc: "/avatars/5.avif",
  },
  {
    testimonial:
      "Implementing Semplice's blockchain technology has been a game-changer for our supply chain management.",
    name: "Juanjo Garcia",
    title: "Founder of his kids",
    imgSrc: "/avatars/2.avif",
  },
  {
    testimonial:
      "We were initially hesitant about integrating blockchain technology into our existing systems.",
    name: "Joana Svenblad",
    title: "Founder of nothing",
    imgSrc: "/avatars/3.avif",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl text-center mx-auto">
      <Text
        tag="span"
        variant="eyebrow">
        Tagline
      </Text>
      <Heading
        class="mt-4"
        level={1}
        variant="default">
        Hear from our customers about their experiences
      </Heading>
      <Text
        class="mt-4"
        tag="p"
        variant="body">
        Find out how our users are using Oxbow UI to create a customized landing
        page for their business.
      </Text>
    </div>
    <ul
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full mt-12 rounded-2xl">
      {
        member.map((member) => (
          <li>
            <figure class="flex flex-col gap-12 h-full justify-between">
              <div class="flex flex-col h-full justify-between">
                <blockquote class="mt-4">
                  <Text
                    tag="p"
                    variant="body">
                    {member.testimonial}
                  </Text>
                </blockquote>
                <div class="mt-6">
                  <Heading
                    level={3}
                    variant="featureTitle">
                    {member.name}
                  </Heading>
                  <Text
                    tag="small"
                    variant="small">
                    {member.title}
                  </Text>
                </div>
              </div>
              <figcaption class="justify-between w-full">
                <img
                  alt={member.name}
                  src={member.imgSrc}
                  class="object-cover size-full rounded-2xl aspect-[4/3]"
                />
              </figcaption>
            </figure>
          </li>
        ))
      }
    </ul>
  </div>
</section>
