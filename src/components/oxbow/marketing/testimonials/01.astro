---
import Text from "@/components/fundations/typography/Text.astro";
import Start from "@/components/fundations/icons/Start.astro";
const data = [
  {
    name: "Mike Vega",
    title: "Creator of Oxbow UI.com",
    testimonial:
      "Being in the financial industry, we were always looking for ways to enhance our transactions.",
    imgSrc: "/avatars/1.avif",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    testimonial:
      "Oxbow UI is a platform that allows you to create a customized landing page. ",
    imgSrc: "/avatars/2.avif",
  },
  {
    name: "Elona Muska",
    title: "Founder of Fesla",
    testimonial:
      "With Oxbow UI, we can create a customized landing page for our business that showcases our products.",
    imgSrc: "/avatars/3.avif",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <ul
      role="list"
      class="grid sm:grid-cols-2 text-center md:grid-cols-3 gap-12">
      {
        data.map((member) => (
          <>
            <li>
              <figure class="flex flex-col  ">
                <span class="flex items-center  gap-2 justify-center text-amber-500  rounded-full">
                  <Start size="sm" />
                  <Start size="sm" />
                  <Start size="sm" />
                  <Start size="sm" />
                </span>
                <Text
                  tag="blockquote"
                  variant="textXL"
                  class=" text-base-500 italic font-medium mt-14">
                  {member.testimonial}
                </Text>
              </figure>
            </li>
          </>
        ))
      }
    </ul>
  </div>
</section>
