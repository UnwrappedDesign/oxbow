---
import Text from "@/components/fundations/typography/Text.astro";
const member = [
  {
    testimonial:
      "Being in the financial industry, we were always looking for ways to enhance our transactions' security and efficiency",
    name: "Ana Betancourt",
    title: "Creator of Something",
    imgSrc: "/avatars/5.jpg",
  },
  {
    testimonial:
      "Implementing Semplice's blockchain technology has been a game-changer for our supply chain management.",
    name: "Juanjo Garcia",
    title: "Founder of his kids",
    imgSrc: "/avatars/2.jpg",
  },
];
---

<section class="bg-white dark:bg-black relative bg-blue-700">
 
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <ul
      class="w-full mt-12 text-center grid grid-cols-1 md:grid-cols-2 gap-6 rounded-2xl"
    >
      {
        member.map((member) => (
          <li>
            <div class="flex flex-col justify-between h-full">
              <div>
                <Text
                  tag="blockquote"
                  variant="textXL"
                  class="italic font-medium text-white"
                >
                    "{member.testimonial}"
                  </Text>
                </Text>
              </div>
              <div class="mt-6">
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-medium text-white"
                >
                    {member.name}
                  </Text>
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class="font-medium text-zinc-300"
                >
                    {member.title}
                  </Text>
                </Text>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
