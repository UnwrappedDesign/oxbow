---

<section class="bg-white dark:bg-zinc-900">
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
   
    <ul
      role="list"
      class=" grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-2"
    >
      <li>
        <ul role="list" class="flex flex-col gap-2">
          {
            data1.map((member) => (
              <>
                <li class="flex flex-col h-full p-8 shadow bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl ">
                  <figure class="flex flex-col h-full  gap-4">
                    <div>
                      <figcaption class="flex items-center justify-between ">
                        <div class="flex items-center gap-4">
                          <img
                            class="object-cover rounded-full size-12"
                            src={member.imgSrc}
                            alt="#_"
                          />
                          <div>
                            <Text
                              tag="h3"
                              variant="textBase"
                              class="font-semibold text-zinc-900 dark:text-white"
                            >
                              {member.name}
                            </Text>
                            <Text
                              tag="p"
                              variant="textSM"
                              class="font-medium text-zinc-600 dark:text-zinc-400"
                            >
                              {member.title}
                            </Text>
                          </div>
                        </div>
                      </figcaption>
                      <div>
                        <Text
                          tag="blockquote"
                          variant="textSM"
                          class="mt-4 font-medium text-zinc-900 dark:text-white"
                        >
                          "{member.testimonial}"
                        </Text>
                      </div>
                    </div>
                  </figure>
                </li>
              </>
            ))
          }
        </ul>
      </li>
      <li>
        <ul role="list" class="flex-col hidden sm:flex gap-2">
          {
            data2.map((member) => (
              <>
                <li class="flex flex-col h-full p-8 shadow bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl ">
                  <figure class="flex flex-col h-full  gap-4">
                    <div>
                      <figcaption class="flex items-center justify-between ">
                        <div class="flex items-center gap-4">
                          <img
                            class="object-cover rounded-full size-12"
                            src={member.imgSrc}
                            alt="#_"
                          />
                          <div>
                            <Text
                              tag="h3"
                              variant="textBase"
                              class="font-medium text-zinc-900 dark:text-white"
                            >
                              {member.name}
                            </Text>
                            <Text
                              tag="p"
                              variant="textXS"
                              class="font-medium text-zinc-400 dark:text-zinc-300"
                            >
                              {member.title}
                            </Text>
                          </div>
                        </div>
                      </figcaption>
                      <div>
                        <Text
                          tag="blockquote"
                          variant="textBase"
                          class="mt-4 italic font-medium text-zinc-900 dark:text-white"
                        >
                          "{member.testimonial}"
                        </Text>
                      </div>
                    </div>
                  </figure>
                </li>
              </>
            ))
          }
        </ul>
      </li>
      <li>
        <ul role="list" class="flex-col hidden xl:flex gap-2">
          {
            data3.map((member) => (
              <>
                <li class="flex flex-col h-full p-8 shadow bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl ">
                  <figure class="flex flex-col h-full  gap-4">
                    <div>
                      <figcaption class="flex items-center justify-between ">
                        <div class="flex items-center gap-4">
                          <img
                            class="object-cover rounded-full size-12"
                            src={member.imgSrc}
                            alt="#_"
                          />
                          <div>
                            <Text
                              tag="h3"
                              variant="textBase"
                              class="font-medium text-zinc-900 dark:text-white"
                            >
                              {member.name}
                            </Text>
                            <Text
                              tag="p"
                              variant="textXS"
                              class="font-medium text-zinc-400 dark:text-zinc-300"
                            >
                              {member.title}
                            </Text>
                          </div>
                        </div>
                      </figcaption>
                      <div>
                        <Text
                          tag="blockquote"
                          variant="textBase"
                          class="mt-4 italic font-medium text-zinc-900 dark:text-white"
                        >
                          "{member.testimonial}"
                        </Text>
                      </div>
                    </div>
                  </figure>
                </li>
              </>
            ))
          }
        </ul>
      </li>
    </ul>
