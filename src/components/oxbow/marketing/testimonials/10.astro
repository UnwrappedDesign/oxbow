---
import Text from "@/components/fundations/typography/Text.astro";
const data = [
  {
    name: "Fernando Monte",
    title: "Creator of Oxbow UI.com",
    testimonial:
      "Being in the financial industry, we were always looking for ways to enhance our transactions' security and efficiency.",
    imgSrc: "/avatars/1.jpg",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    testimonial:
      "Oxbow UI is a platform that allows you to create a customized landing page for your business. It's a great way to showcase your products and services to potential customers.",
    imgSrc: "/avatars/2.jpg",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-2 items-center">
      <div class="lg:pr-8 lg:pb-8">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600">
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 lg:text-balance">
          Hear from our customers about their experiences
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
          Find out how our users are using Oxbow UI to create a customized
          landing page for their business.
        </Text>
      </div>
      {
        data.map((member) => (
          <>
            <li class="bg-base-50 p-6 rounded-2xl  flex flex-col h-full shadow">
              <figure class="flex flex-col  h-full justify-between">
                <div>
                  <Text
                    tag="blockquote"
                    variant="textMD"
                    class="text-base-900 italic font-medium">
                    "{member.testimonial}"
                  </Text>
                </div>
                <figcaption class="flex items-center justify-between mt-12">
                  <div class="flex items-center gap-4">
                    <img
                      class="object-cover rounded-full size-10"
                      src={member.imgSrc}
                      alt="#_"
                    />
                    <div>
                      <Text
                        tag="h3"
                        variant="textMD"
                        class="text-base-900 font-medium">
                        {member.name}
                      </Text>

                      <Text
                        tag="p"
                        variant="textXS"
                        class="text-base-400 font-medium">
                        {member.title}
                      </Text>
                    </div>
                  </div>
                </figcaption>
              </figure>
            </li>
          </>
        ))
      }
    </div>
  </div>
</section>
