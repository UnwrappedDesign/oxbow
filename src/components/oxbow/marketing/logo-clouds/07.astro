    <div class="text-center">
      <Kicker> Tagline </Kicker>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100 lg:text-balance"
      >
        Our customers
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Let's build something great together â€” we're ready to help.
      </Text>
    </div>
    <div
      class="items-center w-full max-w-xl mx-auto mt-10 grid grid-cols-3 sm:grid-cols-6 gap-6 lg:max-w-3xl col-span-full"
    >
      {
        logos.map((logo) => (
          <img
            class="inline-flex items-center justify-center object-contain object-left p-2 mx-auto border dark:border-zinc-800 border-zinc-200 rounded-full size-12 "
            src={logo.src}
            alt="#_"
          />
        ))
      }
    </div>
  </div>
</section>
