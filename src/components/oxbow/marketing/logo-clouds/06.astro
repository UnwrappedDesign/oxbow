      class="items-center w-full max-w-xl mx-auto grid grid-cols-3 sm:grid-cols-5 gap-12 lg:max-w-none lg:pl-8 col-span-full"
    >
      {
        logos.map((logo) => (
          <img
            class="object-contain object-left w-full mx-auto max-h-8 dark:invert"
            src={logo.src}
            alt="#_"
            width="105"
            height="48"
          />
        ))
      }
    </div>
    <div class="pt-10 mt-10 text-center">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-blue-600 dark:text-blue-400"
      >
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100"
      >
        Our customers
      </Text>
      <Text
        tag="p"
        variant="textBase"
