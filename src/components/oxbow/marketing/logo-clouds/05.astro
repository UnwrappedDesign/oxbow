---
import Text from "@/components/fundations/typography/Text.astro";
const logos = [
  {
    src: "/brands/1.svg",
  },
  {
    src: "/brands/2.svg",
  },
  {
    src: "/brands/9.svg",
  },
];
---
<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="grid grid-cols-1 py-12 items-center lg:grid-cols-4 border-y md:grid-cols-2 border-onyx-800 lg:gap-24">
      <div class="col-span-full lg:col-span-1 lg:max-w-none lg:mr-auto ">
        <Text
          tag="small"
          variant="small">
          Some of the mazing companies
        </Text>
      </div>
      <div class="mt-12 lg:mt-0 md:col-span-3 items-center">
        <div class="flex flex-wrap justify-between gap-6">
          {
            logos.map((logo) => (
              <img
                class="max-h-12 mx-auto"
                src={logo.src}
                alt="#_"
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
