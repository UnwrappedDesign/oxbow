---
import Text from "@/components/fundations/typography/Text.astro";
const logos = [
  {
    src: "/brands/1.svg",
  },
  {
    src: "/brands/2.svg",
  },
  {
    src: "/brands/9.svg",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div
      class="items-center py-12 grid grid-cols-1 lg:grid-cols-4 border-y md:grid-cols-2 border-zinc-200 dark:border-zinc-700 lg:gap-24 bg-white dark:bg-zinc-900"
    >
      <div class="col-span-full lg:col-span-1 lg:max-w-none lg:mr-auto">
        <Text
          tag="h2"
          variant="textBase"
          class="mt-4 font-semibold text-zinc-500 dark:text-zinc-400"
        >
          Some of the mazing companies
        </Text>
      </div>
      <div class="items-center mt-12 lg:mt-0 md:col-span-3">
        <div class="flex flex-wrap justify-between gap-6">
          {
            logos.map((logo) => (
              <img
                class="mx-auto max-h-12 dark:invert"
                src={logo.src}
                alt="#_"
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
