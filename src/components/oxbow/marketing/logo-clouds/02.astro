---
import Text from "@/components/fundations/typography/Text.astro";
const logosSmall = [
  {
    src: "/brands/1.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 lg:col-span-1",
  },
  {
    src: "/brands/2.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 lg:col-span-1",
  },
  {
    src: "/brands/3.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 lg:col-span-1",
  },
  {
    src: "/brands/4.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 sm:col-start-2 lg:col-span-1",
  },
  {
    src: "/brands/5.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 col-start-2 sm:col-start-auto lg:col-span-1",
  },
];
const logosBig = [
  {
    src: "/brands/6.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 lg:col-span-1",
  },
  {
    src: "/brands/7.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 lg:col-span-1",
  },
  {
    src: "/brands/9.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 lg:col-span-1",
  },
  {
    src: "/brands/8.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 sm:col-start-2 lg:col-span-1",
  },
  {
    src: "/brands/10.svg",
    width: 158,
    height: 48,
    colSpan: "col-span-2 col-start-2 sm:col-start-auto lg:col-span-1",
  },
];
---

<div>
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <Text
      tag="h2"
      variant="textBase"
      class="font-semibold text-center uppercase text-stone-600 lg:text-balance"
    >
      Meet our investors
    </Text>
    <div
      class="items-center max-w-lg mx-auto mt-10 grid grid-cols-4 gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-auto lg:max-w-3xl lg:grid-cols-5"
    >
      {
        logosBig.map((logo) => (
          <img
            class={`${logo.colSpan} max-h-12 w-full object-contain `}
            src={logo.src}
            alt="#_"
            width={logo.width}
            height={logo.height}
          />
        ))
      }
    </div>
    <div
      class="items-center max-w-lg mx-auto mt-8 grid grid-cols-4 gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-auto lg:max-w-2xl lg:grid-cols-5"
    >
      {
        logosSmall.map((logo) => (
          <img
            class={`${logo.colSpan} max-h-12 w-full object-contain relative`}
            src={logo.src}
            alt="#_"
            width={logo.width}
            height={logo.height}
          />
        ))
      }
    </div>
  </div>
  <!-- copy:end -->
</div>
