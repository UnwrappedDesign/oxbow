---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="grid w-full grid-cols-2 items-center justify-center border gap-px md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 bg-zinc-200 rounded-3xl overflow-hidden">
      {
        logos.map((logo) => (
          <div class="p-8 hover:bg-gradient-to-b bg-gradient-to-b hover:from-blue-500 group hover:to-indigo-600 from-zinc-50 to-zinc-100">
            <img
              class="aspect-[2/1] overflow-hidden mx-auto rounded-lg object-contain object-center group-hover:invert"
              src={logo.src}
              alt="#_"
              width="120"
              height="60"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
