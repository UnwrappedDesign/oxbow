---
export const description =
  "Left aligned with full size background image and large text";

import Text from "@/components/fundations/typography/Text.astro";
---

<div class="relative overflow-hidden bg-white dark:bg-black">
  <div class="absolute inset-0 z-10 bg-white/70 dark:bg-black/70"></div>
  <div class="relative mx-auto max-w-screen grid lg:px-8">
    <div
      class="px-8 pt-[35rem] pb-12 z-50 lg:px-0 lg:pt-[35rem] flex flex-col justify-end text-black text-white"
    >
      <Text
        tag="p"
        variant="textLG"
        class="max-w-xl mt-4 font-semibold text-balance"
      >
        The fastest method for working together on staging and temporary
        environments.
      </Text>
      <Text
        tag="h2"
        variant="display4XL"
        class="mt-4 font-black md:text-balance"
      >
        The fastest
        <br />
        Transforming
      </Text>
    </div>
  </div>
  <img
    class="absolute inset-0 object-cover object-center w-full h-full aspect-auto"
    src="/pose/3.png"
    alt="Dashboard preview"
  />
</div>
