---
export const description =
  "Center aligned with split full hieght image and overlayed text ";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="relative">
  <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-24 lg:px-8">
    <div
      class="z-50 flex flex-col justify-end px-8 pt-12 pb-24 text-center sm:pb-32 lg:col-span-7 lg:col-start-3 lg:px-0 lg:py-96"
    >
      <Text
        tag="h2"
        variant="display2XL"
        class="font-semibold text-gray-900 md:text-balance"
      >
        Transforming the bank experience for a digital future
      </Text>
    </div>
    <div
      class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0"
    >
      <img
        class="aspect-[3/2] w-full bg-gray-50 object-left object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full"
        src="/pose/3.png"
        alt="Dashboard preview"
      />
    </div>
  </div>
</div>
