---
export const description =
  "Centered aligned with full size background image and large text";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="relative overflow-hidden bg-white dark:bg-zinc-900">
  <div class="absolute inset-0 z-10 bg-white/70 dark:bg-black/70"></div>
  <div class="mx-auto max-w-screen grid">
    <div
      class="z-50 flex flex-col justify-end px-8 text-center py-96 lg:px-0 lg:py-96"
    >
      <Text
        tag="h2"
        variant="display5XL"
        class="font-black text-black text-white md:text-balance mix-blend-difference"
      >
        Transforming
      </Text>
    </div>
  </div>
  <img
    class="absolute inset-0 object-cover object-center w-full h-full aspect-auto"
    src="/pose/3.png"
    alt="Dashboard preview"
  />
</div>
