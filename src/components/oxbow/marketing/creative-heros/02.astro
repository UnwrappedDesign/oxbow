---
export const description = "Left aligned with full height image and large text";

import Text from "@/components/fundations/typography/Text.astro";
---

<div class="relative bg-white dark:bg-zinc-900">
  <div class="mx-auto max-w-screen lg:grid lg:grid-cols-12 lg:px-8">
    <div
      class="px-8 py-12 lg:col-span-full z-50 lg:px-0 lg:pt-[35rem] flex flex-col justify-end"
    >
      <Text
        tag="h2"
        variant="display5XL"
        class="font-black tracking-tight text-zinc-900 md:text-balance dark:text-zinc-100"
      >
        The fastest
        <br />
        transforming
      </Text>
    </div>
    <div
      class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0 lg:border-l lg:border-zinc-200"
    >
      <img
        class="aspect-[3/2] w-full bg-zinc-50 object-center object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full"
        src="/pose/5.png"
        alt="#_"
      />
    </div>
  </div>
</div>
