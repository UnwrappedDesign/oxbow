---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
// Updated feature sections
const data = [
  {
    category: "Intuitive UI",
    text: "Navigate a clean, modern interface that streamlines every interaction.",
    items: ["User-focused design", "Accessible navigation"],
  },
  {
    category: "Robust Features",
    text: "Leverage powerful tools designed for peak performance and scalability.",
    items: ["Efficient processes", "Advanced analytics"],
  },
  {
    category: "Seamless Integration",
    text: "Connect effortlessly with your existing workflows and systems.",
    items: ["API connectivity", "Modular architecture"],
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div class="items-center grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:order-last">
        <Text
          tag="h2"
          variant="displayMD"
          class="font-semibold tracking-tight text-zinc-900 dark:text-white text-balance"
        >
          Transform your workflow
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
        >
          Empower your team with intuitive, high-performance tools.
        </Text>
        <div class="flex flex-wrap items-center mx-auto mt-8 gap-2">
          <Button variant="default" size="sm">Get started now</Button>
          <Button variant="muted" size="sm">Discover more</Button>
        </div>
      </div>
      <div class="lg:col-span-2">
        <div class="relative h-full">
          <img
            class="object-cover h-full shadow rounded-2xl"
            src="/images/dashboardLight.svg"
            alt="#_"
          />
        </div>
      </div>
    </div>
    <div
      class="mt-12 gap-x-2 gap-y-14 lg:gap-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        data.map((section) => (
          <div>
            <div>
              <Text
                variant="textBase"
                tag="h3"
                class="font-semibold  text-zinc-900 dark:text-white"
              >
                {section.category}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                {section.text}
              </Text>
            </div>
            <ul
              role="list"
              class="mt-6 text-base font-medium space-y-1 text-zinc-900 dark:text-white"
            >
              {section.items.map((item) => (
                <li>
                  <div class="flex items-center  gap-4">
                    <CircleCheck
                      class="text-blue-600 dark:text-blue-400"
                      size="sm"
                      slot="icon"
                    />
                    <Text tag="span" variant="textSM">
                      {item}
                    </Text>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
