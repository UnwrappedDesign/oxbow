---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
const data = [
  {
    category: "Innovative Design",

    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience. ",
    items: ["Revolutionizing communication", "Enhancing productivity"],
  },
  {
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows. ",
    items: ["Unlocking innovative solutions", "Enabling interoperability"],
  },
  {
    category: "Easy Integration",
    text: "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach. ",
    items: ["Streamlining operations", "Simplifying implementation"],
  },
];
---

<section class="bg-white dark:bg-black">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="items-center grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:order-last">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600 dark:text-blue-400"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100"
        >
          Transforming the banking experience for a digital future
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
        >
          The fastest method for working together on staging and temporary
          environments.
        </Text>
        <div class="flex flex-wrap items-center mx-auto mt-12 gap-2">
          <Button variant="accent" size="sm"> Get started </Button>
          <Button variant="alternative" size="sm"> Learn more </Button>
        </div>
      </div>
      <div class="lg:col-span-2">
        <div class="relative h-full">
          <img
            class="object-cover h-full shadow rounded-2xl"
            src="/images/dashboardLight.svg"
            alt="#_"
          />
        </div>
      </div>
    </div>
    <div
      class="mt-12 gap-x-2 gap-y-14 lg:gap-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        data.map((section) => (
          <div>
            <div>
              <Text
                variant="textLG"
                tag="h3"
                class="font-medium  text-zinc-900 dark:text-zinc-100"
              >
                {section.category}
              </Text>
              <Text
                tag="p"
                variant="textBase"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                {section.text}
              </Text>
            </div>
            <ul
              role="list"
              class="mt-6 text-base font-medium space-y-1 text-zinc-900 dark:text-zinc-100"
            >
              {section.items.map((item) => (
                <li>
                  <div class="flex items-center  gap-4">
                    <CircleCheck
                      class="text-blue-600 dark:text-blue-400"
                      size="base"
                      slot="icon"
                    />
                    <Text tag="span" variant="textBase">
                      {item}
                    </Text>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
