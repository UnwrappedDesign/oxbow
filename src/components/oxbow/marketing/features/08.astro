---
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
const listItems = [
  "Great communication",
  "Enhancing productivity",
  "Advanced security ",
  "Seamless integration",
  "Effortless management",
  "Enabling interoperability",
];
const data = [
  {
    icon: "Filters",
    category: "Innovative Design",
    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience.",
  },
  {
    icon: "WaveSquare",
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows.",
  },
  {
    icon: "ArrowIteration",
    category: "Easy Integration",
    text: "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach.",
  },
];
---

<section>
  <div
    class="relative px-8 py-32 mx-auto space-y-24 md:px-12 lg:px-24 max-w-7xl">
    <div class="flex flex-col gap-12">
      <div class="grid items-end grid-cols-1 gap-12 lg:grid-cols-2">
        <div>
          <Text
            tag="p"
            variant="eyebrow">
            Tagline
          </Text>

          <Heading
            class="mt-4"
            level={1}
            variant="default">
            Embrace security from today onwards
          </Heading>
        </div>
        <ul
          class="grid grid-cols-1 gap-2 text-base font-medium text-base-900 sm:grid-cols-2 lg:grid-cols-2">
          {
            listItems.map((item, index) => (
              <li>
                <div class="flex flex-row items-center gap-4">
                  <CircleCheck
                    class="text-accent-600"
                    size="base"
                    slot="icon"
                  />
                  <Text
                    tag="span"
                    variant="featureListItem">
                    {item}
                  </Text>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="grid grid-cols-1 gap-12 mt-6 sm:grid-cols-2">
        <img
          src="/images/blueCard.svg"
          alt="#_"
        />
        <img
          src="/images/darkCard.svg"
          alt="#_"
        />
      </div>
      <dl
        class="grid grid-cols-1 mt-12 sm:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16">
        {
          data.map((section) => (
            <div>
              <div class="text-accent-500 flex gap-3 items-center">
                {section.icon === "Filters" && (
                  <Filters
                    class="text-accent-600"
                    size="base"
                  />
                )}
                {section.icon === "WaveSquare" && (
                  <WaveSquare
                    class="text-accent-600"
                    size="base"
                  />
                )}
                {section.icon === "ArrowIteration" && (
                  <ArrowIteration
                    class="text-accent-600"
                    size="base"
                  />
                )}

                <dt>
                  <Heading
                    level={3}
                    variant="featureTitle">
                    {section.category}
                  </Heading>
                </dt>
              </div>
              <dd>
                <Text
                  class="mt-2"
                  tag="p"
                  variant="body">
                  {section.text}
                </Text>
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</section>
