---
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
const listItems = [
  "Great communication",
  "Enhancing productivity",
  "Advanced security ",
  "Seamless integration",
  "Effortless management",
  "Enabling interoperability",
];
const data = [
  {
    icon: "Filters",
    category: "Innovative Design",
    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience.",
  },
  {
    icon: "WaveSquare",
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows.",
  },
  {
    icon: "ArrowIteration",
    category: "Easy Integration",
    text: "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach.",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div class="flex flex-col gap-12">
      <div class="items-end grid grid-cols-1 gap-12 lg:grid-cols-2">
        <div>
          <Text
            tag="p"
            variant="textSM"
            class="font-bold uppercase text-blue-600 dark:text-blue-400"
          >
            Tagline
          </Text>
          <Text
            tag="h2"
            variant="displayMD"
            class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100 text-balance"
          >
            Transforming the banking experience for a digital future
          </Text>
        </div>
        <ul
          class="text-base font-medium grid grid-cols-1 gap-2 text-zinc-900 dark:text-zinc-100 sm:grid-cols-2 lg:grid-cols-2"
        >
          {
            listItems.map((item, index) => (
              <li>
                <div class="flex flex-row items-center gap-4">
                  <CircleCheck
                    class="text-blue-600 dark:text-blue-400"
                    size="base"
                  />
                  <Text tag="span" variant="textBase">
                    {item}
                  </Text>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="mt-6 grid grid-cols-1 gap-12 sm:grid-cols-2">
        <div
          class="h-full p-8 pb-0 overflow-hidden bg-zinc-50 dark:bg-zinc-900/40 rounded-2xl"
        >
          <img
            class="object-center w-full -mb-12 shadow rounded-t-2xl"
            src="/widgets/sliders.svg"
            alt="#_"
          />
        </div>
        <div
          class="h-full p-8 pb-0 overflow-hidden bg-zinc-50 dark:bg-zinc-900/40 rounded-2xl"
        >
          <img
            class="object-center w-full -mb-12 shadow rounded-t-2xl"
            src="/widgets/progressCircles.svg"
            alt="#_"
          />
        </div>
      </div>
      <dl
        class="mt-12 grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16"
      >
        {
          data.map((section) => (
            <div>
              <div class="flex items-center text-blue-500 gap-3">
                {section.icon === "Filters" && (
                  <Filters
                    class="text-blue-600 dark:text-blue-400"
                    size="base"
                  />
                )}
                {section.icon === "WaveSquare" && (
                  <WaveSquare
                    class="text-blue-600 dark:text-blue-400"
                    size="base"
                  />
                )}
                {section.icon === "ArrowIteration" && (
                  <ArrowIteration
                    class="text-blue-600 dark:text-blue-400"
                    size="base"
                  />
                )}

                <dt>
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="font-medium text-zinc-900 dark:text-zinc-100"
                  >
                    {section.category}
                  </Text>
                </dt>
              </div>
              <dd>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
                >
                  {section.text}
                </Text>
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</section>
