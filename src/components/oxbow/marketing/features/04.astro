---
import Text from "@/components/fundations/typography/Text.astro";
const features = [
  {
    title: "Decentralized consensus mechanism",
    description:
      "Our platform employs a decentralized consensus mechanism that revolutionizes how transactions are confirmed.",
  },
  {
    title: "Streamlining processes",
    description:
      "Our smart contract automation feature simplifies complex business processes by encoding contract terms and conditions into self-executing code.",
  },
  {
    title: "Immutable ledger technology",
    description:
      "Embracing immutable ledger technology, our blockchain maintains an unchangeable record of all transactions.",
  },
  {
    title: "Easy management of digital assets",
    description:
      "Our user-friendly wallet simplifies the management of digital assets, providing an intuitive interface for storing, sending, and receiving cryptocurrencies.",
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 lg:grid-cols-2 items-start gap-12">
      <div class="lg:pl-24 md:pl-12">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600">
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displaySM"
          class="mt-4 font-semibold text-base-900 lg:text-balance">
          Transforming the banking experience for a digital future
        </Text>
        <dl class="gap-8 grid sm:grid-cols-2 lg:grid-cols-1 mt-12">
          {
            features.map((feature, index) => (
              <div>
                <dt>
                  <Text
                    tag="h3"
                    variant="textLG"
                    class=" text-base-900 font-medium"
                    class=" text-base-900 font-medium">
                    {feature.title}
                  </Text>
                </dt>
                <dd class="mt-2 ">
                  <Text
                    tag="p"
                    variant="textBase"
                    class=" text-base-500 font-medium">
                    {feature.description}
                  </Text>
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
      <img
        alt="#_"
        class="shadow rounded-3xl w-full lg:order-first block "
        src="/widgets/report.svg"
      />

    </div>
  </div>
</section>
