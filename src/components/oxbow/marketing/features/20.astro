---
import Badge from "@/components/fundations/badges/Badge.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
const data = [
  {
    icon: "Filters",
    category: "Live editing",
    text: "Instantly see the result of every change you make.",
  },
  {
    icon: "WaveSquare",
    category: "Autocompletion",
    text: "Spotless will suggest the right classes for you as you type.",
  },
  {
    icon: "ArrowIteration",
    category: "Hide/show classes",
    text: "Hide or show classes to see how your design changes.",
  },
  {
    icon: "Plus",
    category: "Color preview",
    text: "See the color of every class in the autocompletion view.",
  },
];
const features = [
  "Secure Transactions",
  "Proxy Voting Capabilities",
  "Swift and Effortless Account Setup",
  "Merging Identical Entries",
  "Customized Domain Options",
  "Allow Guest Financial Insights",
  "Advanced Textual Analysis Tools",
  "Tailored Brand Color Schemes",
  "Define Financial Profile Images",
  "Choose Between Dark and Light Finance Views",
  "Priority Account Alerts",
  "Internal Financial Discussions",
];
---

<div>
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="max-w-2xl mx-auto text-center lg:text-balance">
      <Text tag="p" variant="textSM" class="font-bold uppercase text-blue-600">
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-zinc-900 lg:text-balance"
      >
        Transforming the banking experience for a digital future
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 font-medium text-zinc-500">
        The fastest method for working together on staging and temporary
        environments.
      </Text>
    </div>
    <div>
      <div
        class="relative py-12 mx-auto overflow-hidden overflow-x-hidden 2xl:max-w-screen-xl"
      >
        <div class="justify-between w-full grid">
          <div
            class="absolute inset-0 left-0 z-10 from-white via-transparent w-44 bg-gradient-to-r"
          >
          </div>
          <div
            class="absolute inset-0 left-0 z-10 ml-auto from-white via-transparent w-44 bg-gradient-to-l"
          >
          </div>
        </div>
        <div class="relative flex items-center gap-2 whitespace-nowrap t">
          {
            features.map((feature) => (
              <Badge variant="muted" size="sm">
                {feature}
              </Badge>
            ))
          }
        </div>
      </div>
    </div>
    <dl
      class="mt-12 text-center grid grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-y-16"
    >
      {
        data.map((section) => (
          <div>
            <div class="flex flex-col  gap-3 text-blue-600">
              {section.icon === "Filters" && (
                <Filters class="mx-auto" size="base" />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare class="mx-auto" size="base" />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration class="mx-auto" size="base" />
              )}
              {section.icon === "Plus" && <Plus class="mx-auto" size="base" />}
              <dt>
                <Text
                  variant="textLG"
                  tag="h3"
                  class="font-medium text-zinc-900"
                >
                  {section.category}
                </Text>
              </dt>
            </div>
            <dd>
              <Text
                tag="p"
                variant="textBase"
                class="mt-2 font-medium text-zinc-500"
              >
                {section.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
  <!-- copy:end -->
</div>
