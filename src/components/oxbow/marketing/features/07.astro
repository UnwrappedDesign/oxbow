---
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
const features = [
  {
    title: "Decentralized consensus mechanism",
    description:
      "Our platform employs a decentralized consensus mechanism that revolutionizes how transactions are confirmed.",
  },
  {
    title: "Streamlining processes",
    description:
      "Our smart contract automation feature simplifies complex business processes by encoding contract terms and conditions into self-executing code.",
  },
  {
    title: "Immutable ledger technology",
    description:
      "Embracing immutable ledger technology, our blockchain maintains an unchangeable record of all transactions.",
  },
  {
    title: "Easy management of digital assets",
    description:
      "Our user-friendly wallet simplifies the management of digital assets, providing an intuitive interface for storing, sending, and receiving cryptocurrencies.",
  },
];
const listItems = [
  "Revolutionizing communication",
  "Enhancing productivity",
  "Advanced security measures",
  "Seamless integration",
  "Empowering users with solutions",
  "Effortless management",
  "Unlocking innovative solutions",
  "Enabling interoperability",
  "Enhancing scalability",
  "Streamlining engagement",
  "Optimizing performance",
  "Reducing operational costs",
  "Improving user experience",
  "Fostering collaboration",
  "Automating workflows",
  "Leveraging data insights",
  "Boosting customer satisfaction",
  "Accelerating time-to-market",
  "Supporting digital transformation",
  "Maximizing resource utilization",
];
---
<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="text-center max-w-xl mx-auto lg:text-balance">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600">
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-base-900 lg:text-balance">
        Transforming the banking experience for a digital future
      </Text>
       <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
        The fastest method for working together on staging and temporary
        environments.
      </Text>
    </div>
    <ol
      role="list"
      class="grid items-start grid-cols-1 gap-6 mt-24 list-none sm:grid-cols-2 lg:gap-12 lg:grid-cols-3">
      <li>
        <dl class="gap-8 grid grid-cols-1">
          {
            features.map((feature, index) => (
              <div>
                <dt>
                 <Text
                  tag="h3"
                  variant="textLG"
                  class=" text-base-900 font-medium"
                    class=" text-base-900 font-medium">
                    {feature.title}
                  </Text>
                </dt>
                <dd class="mt-2 ">
                  <Text
                    tag="p"
                    variant="textBase"
                    class=" text-base-500 font-medium">
                    {feature.description}
                  </Text>
                </dd>
              </div>
            ))
          }
        </dl>
      </li>
      <li class="order-last lg:order-none col-span-full lg:col-span-1">
        <img
          src="/images/phone1.png"
          alt="#_"
        />
      </li>
      <li>
        <ul
          class="space-y-1 text-base font-medium text-base-900 list-none"
          role="list">
          {
            listItems.map((item, index) => (
              <li>
                <div class="relative flex flex-row items-start gap-4">
                  <CircleCheck
                    class="text-accent-600"
                    size="base"
                  />
                  <Text
                    tag="span"
                    variant="textBase">
                    {item}
                  </Text>
                </div>
              </li>
            ))
          }
        </ul>
      </li>
    </ol>
  </div>
</section>
