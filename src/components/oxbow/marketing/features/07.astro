---
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";

const listItems = [
  "Real-time collaboration",
  "Automated workflows",
  "Enhanced security",
  "Seamless integrations",
  "Centralized control",
  "Intuitive monitoring",
  "Data-driven insights",
  "Scalable architecture",
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-20">
    <ol
      role="list"
      class="list-none grid lg:items-center grid-cols-1 gap-6 sm:grid-cols-2 lg:gap-12 lg:grid-cols-3"
    >
      <li>
        <div class="max-w-xl lg:text-balance">
          <Text
            tag="h2"
            variant="displaySM"
            class="font-semibold tracking-tight text-zinc-900 dark:text-white text-balance"
          >
            Easy collaboration for finance workflows
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
          >
            Accelerate project delivery with unified staging and testing
            environments.<br /><br />Our platform provides powerful tools to
            automate tasks, enforce security, and simplify complex workflows.
          </Text>
        </div>
      </li>
      <li class="order-last lg:order-none col-span-full lg:col-span-1">
        <img
          class="shadow rounded-2xl size-full"
          src="/widgets/activity.svg"
          alt="#_"
        />
      </li>
      <li>
        <ul
          class="text-base font-medium list-none space-y-1 text-zinc-900 dark:text-white"
          role="list"
        >
          {
            listItems.map((item, index) => (
              <li>
                <div class="relative flex flex-row items-start gap-2">
                  <CircleCheck
                    class="text-zinc-600 dark:text-zinc-400"
                    size="sm"
                  />
                  <Text tag="span" variant="textSM">
                    {item}
                  </Text>
                </div>
              </li>
            ))
          }
        </ul>
      </li>
    </ol>
  </div>
</section>
