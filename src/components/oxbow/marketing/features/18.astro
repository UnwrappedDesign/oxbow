---
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import Cursor from "@/components/fundations/icons/Cursor.astro";
import Persist from "@/components/fundations/icons/Persist.astro";
import Camera from "@/components/fundations/icons/Camera.astro";
import Stacked from "@/components/fundations/icons/Stacked.astro";
const data = [
  {
    icon: "Filters",
    category: "Instant Preview",
    text: "See every code change render live for immediate feedback.",
  },
  {
    icon: "WaveSquare",
    category: "Smart Suggestions",
    text: "Receive contextual class recommendations as you type.",
  },
  {
    icon: "ArrowIteration",
    category: "Toggle Visibility",
    text: "Show or hide styling classes on the fly to test variations.",
  },
  {
    icon: "Plus",
    category: "Inline Color Swatches",
    text: "Preview and pick colors directly within your editor.",
  },
  {
    icon: "Cursor",
    category: "Element Explorer",
    text: "Hover over elements to reveal their Tailwind class details.",
  },
  {
    icon: "Persist",
    category: "State Persistence",
    text: "Keep all edits saved across sessions without losing progress.",
  },
  {
    icon: "Camera",
    category: "Quick Screenshots",
    text: "Capture and share screenshots of any screen section instantly.",
  },
  {
    icon: "Stacked",
    category: "Breakpoint Indicator",
    text: "Always know which Tailwind breakpoint is active in real-time.",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div class="max-w-xl lg:text-balance">
      <Text
        tag="h2"
        variant="displayMD"
        class="font-semibold tracking-tight text-zinc-900 dark:text-white text-balance"
      >
        Empower your UI development with something
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Streamline your workflow with instant previews, smart suggestions, and
        seamless editing features.
      </Text>
    </div>
    <dl
      class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-y-16"
    >
      {
        data.map((section) => (
          <div>
            <div class="flex flex-col  gap-3 text-blue-600 dark:text-blue-400">
              {section.icon === "Filters" && (
                <Filters class="dark:text-blue-400" size="sm" />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare class="dark:text-blue-400" size="sm" />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration class="dark:text-blue-400" size="sm" />
              )}
              {section.icon === "Plus" && (
                <Plus class="dark:text-blue-400" size="sm" />
              )}
              {section.icon === "Cursor" && (
                <Cursor class="dark:text-blue-400" size="sm" />
              )}
              {section.icon === "Persist" && (
                <Persist class="dark:text-blue-400" size="sm" />
              )}
              {section.icon === "Camera" && (
                <Camera class="dark:text-blue-400" size="sm" />
              )}
              {section.icon === "Stacked" && (
                <Stacked class="dark:text-blue-400" size="sm" />
              )}
              <dt>
                <Text
                  variant="textBase"
                  tag="h3"
                  class="font-semibold text-zinc-900 dark:text-white"
                >
                  {section.category}
                </Text>
              </dt>
            </div>
            <dd>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                {section.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</section>
