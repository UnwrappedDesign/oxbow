---
import Text from "@/components/fundations/typography/Text.astro";
const featureTop = [
  {
    title: "Easy navigation",
    description:
      "Hover over any element to see its Tailwind classes. Press Space to easily pin and edit your settings.",
    imgSrc: "/widgets/hits.svg",
    altText: "Navigation Image",
  },
  {
    title: "Persistence",
    description:
      "Spotless will remember all your changes to every element so you can copy all changes at once!",
    imgSrc: "/widgets/traffic.svg",
    altText: "Persistence Image",
  },
  ,
  {
    title: "Easy Integration",
    description:
      "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach.",
    imgSrc: "/widgets/activity.svg",
    altText: "Persistence Image",
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <dl
      class="grid grid-cols-1 gap-4  sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        featureTop.map((feature) => (
          <div class="h-full gap-8    flex flex-col justify-between">
            <div class=" lg:text-balance">
              <dt>
                <Text
                  tag="h3"
                  variant="textLG"
                  class=" text-base-900 font-medium"
                  class=" text-base-900 font-medium"
                >
                  {feature.title}
                </Text>
              </dt>
              <dd class="mt-2">
                <Text
                  tag="p"
                  variant="textBase"
                  class=" text-base-500 font-medium"
                >
                  {feature.description}
                </Text>
              </dd>
            </div>
            <img
              class="rounded-2xl shadow"
              src={feature.imgSrc}
              alt={feature.altText}
            />
          </div>
        ))
      }
    </dl>
  </div>
</section>
