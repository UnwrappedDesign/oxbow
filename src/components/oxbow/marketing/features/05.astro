---
import Text from "@/components/fundations/typography/Text.astro";
const featureTop = [
  {
    title: "Easy navigation",
    description:
      "Hover over any element to see its Tailwind classes. Press Space to easily pin and edit your settings.",
    imgSrc: "/widgets/hits.svg",
    altText: "Navigation Image",
  },
  {
    title: "Persistence",
    description:
      "Spotless will remember all your changes to every element so you can copy all changes at once!",
    imgSrc: "/widgets/traffic.svg",
    altText: "Persistence Image",
  },
  {
    title: "Easy Integration",
    description:
      "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach.",
    imgSrc: "/widgets/activity.svg",
    altText: "Persistence Image",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {
        featureTop.map((feature) => (
          <div class="flex flex-col justify-between h-full gap-8">
            <div class="lg:text-balance bg-white dark:bg-zinc-900/40 rounded-2xl">
              <dt>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="font-medium text-zinc-900 dark:text-zinc-100"
                >
                  {feature.title}
                </Text>
              </dt>
              <dd class="mt-2">
                <Text
                  tag="p"
                  variant="textBase"
                  class="font-medium text-zinc-500 dark:text-zinc-400"
                >
                  {feature.description}
                </Text>
              </dd>
            </div>
            <img
              class="shadow rounded-2xl"
              src={feature.imgSrc}
              alt={feature.altText}
            />
          </div>
        ))
      }
    </dl>
  </div>
</section>
