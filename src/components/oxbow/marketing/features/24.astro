---
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Cursor from "@/components/fundations/icons/Cursor.astro";
---

<section>
  <div
    class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl relative overflow-hidden">
    <!-- Show Tab 1 as default  -->
    <div
      x-data="{ tab: 'tab1' }"
      class="grid items-center grid-cols-1 gap-6 lg:grid-cols-2">
      <ul class="grid sm:grid-cols-2 lg:grid-cols-1 gap-4 list-none">
        <!-- Tab 1 -->
        <li class="bg-base-50 rounded-3xl p-1">
          <button
            @click.prevent="tab = 'tab1'"
            class="items-start p-4 lg:p-8 rounded-[1.3rem] transition text-left h-full"
            :class="{ 'bg-white shadow' : tab === 'tab1' }">
            <div>
              <div class="flex items-center gap-4">
                <Filters
                  class="text-accent-600"
                  size="base"
                />
                <dt>
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="text-base-900 font-medium">
                    Innovative Design
                  </Text>
                </dt>
              </div>
              <dd>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 text-base-500 font-medium">
                  Our cutting-edge design offers a fresh, modern look that
                  transforms your project into a standout experience.
                </Text>
              </dd>
            </div>
          </button>
        </li>
        <!-- Tab 2 -->
        <li class="bg-base-50 rounded-3xl p-1">
          <button
            @click.prevent="tab = 'tab2'"
            class="items-start p-4 lg:p-8 rounded-[1.3rem] transition text-left h-full"
            :class="{ 'bg-white shadow ' : tab === 'tab2' }">
            <div>
              <div class="flex items-center gap-4">
                <WaveSquare
                  class="text-accent-600"
                  size="base"
                />
                <dt>
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="text-base-900 font-medium">
                    Powerful Functionality
                  </Text>
                </dt>
              </div>
              <dd>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 text-base-500 font-medium">
                  Equipped with advanced features and tools, our solution
                  effortlessly manages complex tasks and workflows.
                </Text>
              </dd>
            </div>
          </button>
        </li>
        <!-- Tab 3 -->
        <li class="bg-base-50 rounded-3xl p-1">
          <button
            @click.prevent="tab = 'tab3'"
            class="items-start p-4 lg:p-8 rounded-[1.3rem] transition text-left h-full"
            :class="{ 'bg-white shadow ' : tab === 'tab3' }">
            <div>
              <div class="flex items-center gap-4">
                <ArrowIteration
                  class="text-accent-600"
                  size="base"
                />
                <dt>
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="text-base-900 font-medium">
                    Revolutionizing communication
                  </Text>
                </dt>
              </div>
              <dd>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 text-base-500 font-medium">
                  Unlocking innovative solutions that enhance connectivity and
                  streamline interactions.
                </Text>
              </dd>
            </div>
          </button>
        </li>
        <!-- Tab 4 -->
        <li class="bg-base-50 rounded-3xl p-1">
          <button
            @click.prevent="tab = 'tab4'"
            class="items-start p-4 lg:p-8 rounded-[1.3rem] transition text-left h-full"
            :class="{ 'bg-white shadow ' : tab === 'tab4' }">
            <div>
              <div class="flex items-center gap-4">
                <WaveSquare
                  class="text-accent-600"
                  size="base"
                />
                <dt>
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="text-base-900 font-medium">
                    Easy Integration
                  </Text>
                </dt>
              </div>
              <dd>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 text-base-500 font-medium">
                  Integrating with existing systems is smooth and hassle-free,
                  thanks to our incredible flexible approach.
                </Text>
              </dd>
            </div>
          </button>
        </li>
        <!-- Tab 5 -->
        <li class="bg-base-50 rounded-3xl p-1">
          <button
            @click.prevent="tab = 'tab5'"
            class="items-start p-4 lg:p-8 rounded-[1.3rem] transition text-left h-full"
            :class="{ 'bg-white shadow ' : tab === 'tab5' }">
            <div>
              <div class="flex items-center gap-4">
                <Cursor
                  class="text-accent-600"
                  size="base"
                />
                <dt>
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="text-base-900 font-medium">
                    Advanced Analytics
                  </Text>
                </dt>
              </div>
              <dd>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 text-base-500 font-medium">
                  Gain deep insights into your data with our comprehensive
                  analytics tools, helping you make informed decisions.
                </Text>
              </dd>
            </div>
          </button>
        </li>
      </ul>
      <div class="p-8 text-left content">
        <!-- Tab 1 content -->
        <div x-show="tab==='tab1'">
          <div class="block w-full mt-12">
            <img
              alt="#_"
              class="relative w-full rounded-2xl drop-shadow-2xl h-full object-cover"
              src="/images/phone1.png"
            />
          </div>
        </div>
        <!-- Tab 2 content. You can add a transition on this div to make it smoother -->
        <div
          x-show="tab==='tab2'"
          style="display: none;">
          <div class="block w-full mt-12">
            <img
              alt="#_"
              class="relative w-full rounded-2xl drop-shadow-2xl h-full object-cover"
              src="/images/phone2.png"
            />
          </div>
        </div>
        <!-- Tab 3 content. You can add a transition on this div to make it smoother -->
        <div
          x-show="tab==='tab3'"
          style="display: none;">
          <div class="block w-full mt-12">
            <img
              alt="#_"
              class="relative w-full rounded-2xl drop-shadow-2xl h-full object-cover"
              src="/images/phone3.png"
            />
          </div>
        </div>
        <!-- Tab 4 content. You can add a transition on this div to make it smoother -->
        <div
          x-show="tab==='tab4'"
          style="display: none;">
          <div class="block w-full mt-12">
            <img
              alt="#_"
              class="relative w-full rounded-2xl drop-shadow-2xl h-full object-cover"
              src="/images/phone4.png"
            />
          </div>
        </div>
        <!-- Tab 5 content. You can add a transition on this div to make it smoother -->
        <div
          x-show="tab==='tab5'"
          style="display: none;">
          <div class="block w-full mt-12">
            <img
              alt="#_"
              class="relative w-full rounded-2xl drop-shadow-2xl h-full object-cover"
              src="/images/phone5.png"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
