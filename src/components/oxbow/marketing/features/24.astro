---
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
const data = [
  {
    icon: "Filters",
    category: "Live editing",
    text: "Instantly see the result of every change you make.",
  },
  {
    icon: "WaveSquare",
    category: "Autocompletion",
    text: "Spotless will suggest the right classes for you as you type.",
  },
  {
    icon: "ArrowIteration",
    category: "Hide/show classes",
    text: "Hide or show classes to see how your design changes.",
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <dl
      class="grid grid-cols-1 gap-x-4 gap-y-12 lg:grid-cols-3 lg:divide-x lg:border-x divide-base-200 border-base-200">
      {
        data.map((section) => (
          <div class="lg:px-8">
            <div class=" flex gap-3 items-center text-accent-600">
              {section.icon === "Filters" && <Filters size="base" />}
              {section.icon === "WaveSquare" && <WaveSquare size="base" />}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration size="base" />
              )}
              <dt>
                <Text
                  variant="textLG"
                  tag="h3"
                  class="text-base-900 font-medium">
                  {section.category}
                </Text>
              </dt>
            </div>
            <dd>
              <Text
                tag="p"
                variant="textBase"
                class="mt-2 text-base-500 font-medium">
                {section.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
    <div class="grid grid-cols-1 gap-12 mt-12 md:grid-cols-3 md:items-end">
      <div class="lg:col-span-2">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600">
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 lg:text-balance">
          Transforming the banking experience for a digital future
        </Text>
      </div>
       <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
        The fastest method for working together on staging and temporary
        environments.
      </Text>
    </div>
  </div>
</section>
