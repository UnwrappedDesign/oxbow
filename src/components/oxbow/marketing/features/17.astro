---
import Button from "@/components/fundations/buttons/Button.astro";

import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
const data = [
  {
    image: "/widgets/progressCircles.svg",
    icon: "Filters",
    category: "Live editing",
    text: "Instantly see the result of every change you make.",
  },
  {
    image: "/widgets/figmaComp2.svg",
    icon: "WaveSquare",
    category: "Autocompletion",
    text: "Spotless will suggest the right classes for you as you type.",
  },
  {
    image: "/widgets/figmaComp.svg",
    icon: "ArrowIteration",
    category: "Hide/show classes",
    text: "Hide or show classes to see how your design changes.",
  },
];
---

<section>
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3 lg:items-end">
      <div class="lg:col-span-2">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 lg:text-balance"
        >
          Transforming the banking experience for a digital future
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-zinc-500">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
      </div>
      <div class="flex flex-wrap items-center gap-2 lg:ml-auto">
        <Button variant="default" size="sm"> Get started </Button>
      </div>
    </div>
    <dl
      class="mt-24 grid grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-3 lg:gap-y-16"
    >
      {
        data.map((section) => (
          <div class="flex flex-col justify-between h-full p-8 gap-4 bg-zinc-50 rounded-3xl">
            <div>
              <img
                class="-mt-16 shadow rounded-2xl"
                src={section.image}
                alt="#_"
              />
            </div>
            <div>
              <div class="flex items-center text-blue-500 gap-3">
                {section.icon === "Filters" && (
                  <Filters class="text-blue-600" size="base" />
                )}
                {section.icon === "WaveSquare" && (
                  <WaveSquare class="text-blue-600" size="base" />
                )}
                {section.icon === "ArrowIteration" && (
                  <ArrowIteration class="text-blue-600" size="base" />
                )}

                <dt>
                  <Text
                    tag="h3"
                    variant="textLG"
                    class="font-medium  text-zinc-900"
                  >
                    {section.category}
                  </Text>
                </dt>
              </div>
              <dd>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 font-medium text-zinc-500"
                >
                  {section.text}
                </Text>
              </dd>
            </div>
          </div>
        ))
      }
    </dl>
  </div>
</section>
