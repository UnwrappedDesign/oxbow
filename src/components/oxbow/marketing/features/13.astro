---
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";

export const excludeFromObfuscation = ["bg-white", "shadow"];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-20">
    <div
      x-data="{ tab: 'tab1' }"
      class="relative items-center grid grid-cols-1 gap-4 lg:grid-cols-3"
    >
      <ul class="list-none grid md:grid-cols-2 gap-4 lg:col-span-2">
        <!-- Tab 1 -->
        <li class="p-1 bg-zinc-50 dark:bg-zinc-800 rounded-xl">
          <button
            @click.prevent="tab = 'tab1'"
            class="items-start h-full p-4 text-left bg-white rounded-lg shadow lg:p-8 transition dark:bg-zinc-800 dark:shadow-zinc-900/80"
            :class="{ 'bg-white dark:bg-zinc-900 shadow ' : tab === 'tab1' }"
          >
            <div>
              <div class="flex items-center gap-2">
                <CircleCheck
                  class="text-zinc-600 dark:text-zinc-400"
                  size="sm"
                  slot="icon"
                />
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-semibold text-zinc-900 dark:text-white"
                >
                  Innovative Design
                </Text>
              </div>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                Our cutting-edge design offers a fresh, modern look that
                transforms your project into a standout experience.
              </Text>
            </div>
          </button>
        </li>
        <!-- Tab 2 -->
        <li class="p-1 bg-zinc-50 dark:bg-zinc-800 rounded-xl">
          <button
            @click.prevent="tab = 'tab2'"
            class="items-start h-full p-4 text-left bg-white rounded-lg shadow lg:p-8 transition dark:bg-zinc-800 dark:shadow-zinc-900/80"
            :class="{ 'bg-white dark:bg-zinc-900 shadow ' : tab === 'tab2' }"
          >
            <div>
              <div class="flex items-center gap-2">
                <CircleCheck
                  class="text-zinc-600 dark:text-zinc-400"
                  size="sm"
                  slot="icon"
                />
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-semibold text-zinc-900 dark:text-white"
                >
                  Powerful Functionality
                </Text>
              </div>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                Equipped with advanced features and tools, our solution
                effortlessly manages complex tasks and workflows.
              </Text>
            </div>
          </button>
        </li>
        <!-- Tab 3 -->
        <li class="p-1 bg-zinc-50 dark:bg-zinc-800 rounded-xl">
          <button
            @click.prevent="tab = 'tab3'"
            class="items-start h-full p-4 text-left bg-white rounded-lg shadow lg:p-8 transition dark:bg-zinc-800 dark:shadow-zinc-900/80"
            :class="{ 'bg-white dark:bg-zinc-900 shadow ' : tab === 'tab3' }"
          >
            <div>
              <div class="flex items-center gap-2">
                <CircleCheck
                  class="text-zinc-600 dark:text-zinc-400"
                  size="sm"
                  slot="icon"
                />
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-semibold text-zinc-900 dark:text-white"
                >
                  Po Easy Integration
                </Text>
              </div>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                Integrating with existing systems is smooth and hassle-free,
                thanks to our incredible flexible approach.
              </Text>
            </div>
          </button>
        </li>
        <!-- Tab 4 -->
        <li class="p-1 bg-zinc-50 dark:bg-zinc-800 rounded-xl">
          <button
            @click.prevent="tab = 'tab4'"
            class="items-start h-full p-4 text-left bg-white rounded-lg shadow lg:p-8 transition dark:bg-zinc-800 dark:shadow-zinc-900/80"
            :class="{ 'bg-white dark:bg-zinc-900 shadow' : tab === 'tab4' }"
          >
            <div>
              <div class="flex items-center gap-2">
                <CircleCheck
                  class="text-zinc-600 dark:text-zinc-400"
                  size="sm"
                  slot="icon"
                />
                <Text
                  tag="h3"
                  variant="textBase"
                  class="font-semibold text-zinc-900 dark:text-white"
                >
                  Great Communication
                </Text>
              </div>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                Integrating with existing systems is smooth and hassle-free,
                thanks to our incredible flexible approach.
              </Text>
            </div>
          </button>
        </li>
      </ul>
      <div class="text-left content size-full">
        <!-- Tab 1 content -->
        <div class="size-full" x-show="tab==='tab1'">
          <div
            class="block w-full h-full p-8 pb-0 aspect-square lg:mt-0 bg-zinc-50 dark:bg-zinc-900 rounded-3xl"
          >
            <img
              alt="#_"
              class="object-cover object-top size-full"
              src="/images/phone4.png"
            />
          </div>
        </div>
        <!-- Tab 2 content -->
        <div class="size-full" x-show="tab==='tab2'" style="display: none;">
          <div
            class="block w-full h-full p-8 pb-0 aspect-square lg:mt-0 bg-zinc-50 dark:bg-zinc-900 rounded-3xl"
          >
            <img
              alt="#_"
              class="object-cover object-top size-full"
              src="/images/phone2.png"
            />
          </div>
        </div>
        <!-- Tab 3 content -->
        <div class="size-full" x-show="tab==='tab3'" style="display: none;">
          <div
            class="block w-full h-full p-8 pb-0 aspect-square lg:mt-0 bg-zinc-50 dark:bg-zinc-900 rounded-3xl"
          >
            <img
              alt="#_"
              class="object-cover object-top size-full"
              src="/images/phone3.png"
            />
          </div>
        </div>
        <!-- Tab 4 content -->
        <div class="size-full" x-show="tab==='tab4'" style="display: none;">
          <div
            class="block w-full h-full p-8 pb-0 aspect-square lg:mt-0 bg-zinc-50 dark:bg-zinc-900 rounded-3xl"
          >
            <img
              alt="#_"
              class="object-cover object-top size-full"
              src="/images/phone5.png"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
