---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
const data = [
  {
    icon: "Filters",
    category: "Live editing",
    text: "Instantly see the result of every change you make.",
  },
  {
    icon: "WaveSquare",
    category: "Autocompletion",
    text: "Spotless will suggest the right classes for you as you type.",
  },
  {
    icon: "ArrowIteration",
    category: "Hide/show classes",
    text: "Hide or show classes to see how your design changes.",
  },
  {
    icon: "Plus",
    category: "Color preview",
    text: "See the color of every class in the autocompletion view.",
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="text-center">
      <Text
        tag="span"
        variant="eyebrow">
        Tagline
      </Text>
      <Heading
        class="mt-4"
        level={1}
        variant="default">
        Safeguard your workspace with essential applications for end-to-end
        encryption.
      </Heading>
      <Text
        class="mt-4"
        tag="p"
        variant="body">
        The fastest method for working together on staging and temporary
        environments.
      </Text>
    </div>
    <dl
      class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-y-16 mt-12">
      {
        data.map((section) => (
          <div>
            <div class="text-accent-500 flex gap-3 items-center">
              {section.icon === "Filters" && (
                <Filters
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "Plus" && (
                <Plus
                  class="text-accent-600"
                  size="base"
                />
              )}

              <dt>
                <Heading
                  level={3}
                  variant="featureTitle">
                  {section.category}
                </Heading>
              </dt>
            </div>
            <dd>
              <Text
                class="mt-2"
                tag="p"
                variant="body">
                {section.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
    <dl
      class="grid md:grid-cols-2 gap-x-6 gap-y-12 lg:gap-x-8 lg:gap-y-16 mt-12 lg:mt-24">
      <div class="lg:bg-base-50 lg:p-8 lg:rounded-3xl">
        <div class="flex flex-col h-full justify-between">
          <div>
            <Text
              tag="span"
              variant="eyebrow">
              Tagline
            </Text>
            <Heading
              class="mt-4"
              level={3}
              variant="default">
              Let's get it done together, whenerever, forever.
            </Heading>
          </div>

          <div class="flex flex-wrap gap-4 mt-12">
            <Button
              variant="accent"
              size="sm">
              Get started
            </Button>
            <div class="text-sm text-base-500">
              <span class="block">This is some support text</span>
              <span class="block">and this is also.</span>
            </div>
          </div>
        </div>
      </div>

      <div class="block w-full mt-12 lg:mt-0 relative">
        <img
          alt="#_"
          class="relative drop-shadow h-full object-cover w-full"
          src="/images/darkCard.svg"
        />
      </div>
    </dl>
  </div>
</section>
