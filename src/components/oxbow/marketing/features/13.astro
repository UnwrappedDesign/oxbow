---
import Button from "@/components/fundations/buttons/Button.astro";

import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
const data = [
  {
    icon: "Filters",
    category: "Live editing",
    text: "Instantly see the result of every change you make.",
  },
  {
    icon: "WaveSquare",
    category: "Autocompletion",
    text: "Spotless will suggest the right classes for you as you type.",
  },
  {
    icon: "ArrowIteration",
    category: "Hide/show classes",
    text: "Hide or show classes to see how your design changes.",
  },
  {
    icon: "Plus",
    category: "Color preview",
    text: "See the color of every class in the autocompletion view.",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="max-w-xl">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-blue-600 dark:text-blue-400"
      >
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100 text-balance"
      >
        Transforming the banking experience for a digital future
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        The fastest method for working together on staging and temporary
        environments.
      </Text>
    </div>
    <dl
      class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-y-16"
    >
      {
        data.map((section) => (
          <div>
            <div class="flex items-center text-blue-500 gap-3">
              {section.icon === "Filters" && (
                <Filters class="text-blue-600 dark:text-blue-400" size="base" />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare
                  class="text-blue-600 dark:text-blue-400"
                  size="base"
                />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration
                  class="text-blue-600 dark:text-blue-400"
                  size="base"
                />
              )}
              {section.icon === "Plus" && (
                <Plus class="text-blue-600 dark:text-blue-400" size="base" />
              )}

              <dt>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="font-medium  text-zinc-900 dark:text-zinc-100"
                >
                  {section.category}
                </Text>
              </dt>
            </div>
            <dd>
              <Text
                tag="p"
                variant="textBase"
                class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
              >
                {section.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
    <dl
      class="mt-12 grid md:grid-cols-2 gap-x-6 gap-y-12 lg:gap-x-8 lg:gap-y-16 lg:mt-24"
    >
      <div
        class="relative flex flex-col items-center justify-center h-full p-8 overflow-hidden text-center bg-zinc-50 dark:bg-zinc-900/40 rounded-2xl lg:p-12"
      >
        <div class="relative items-center text-balance">
          <Text
            tag="p"
            variant="textBase"
            class="font-medium text-zinc-600 dark:text-zinc-400"
          >
            The fastest method for working together on staging and temporary
            environments.
          </Text>
          <div
            class="flex flex-wrap items-center justify-center mx-auto mt-8 gap-2"
          >
            <Button variant="accent" size="sm"> Get started </Button>
            <Button variant="outline" size="sm"> Learn more </Button>
          </div>
        </div>
      </div>

      <img
        alt="#_"
        class="relative object-cover w-full h-full shadow rounded-2xl bg-white dark:bg-zinc-900/40"
        src="/widgets/progressCircles.svg"
      />
    </dl>
  </div>
</section>
