---
import Text from "@/components/fundations/typography/Text.astro";
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24 space-y-24">
    <div class="items-center grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div>
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600 dark:text-blue-400"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100 lg:text-balance"
        >
          Embrace security from today onwards
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
        >
          The fastest method for working together on staging and temporary
          environments.
        </Text>
      </div>
      <div class="lg:col-span-2">
        <img
          class="object-cover h-full shadow rounded-2xl bg-white dark:bg-zinc-900/40"
          src="/images/dashboardLight.svg"
          alt="#_"
        />
      </div>
    </div>
    <div class="items-center grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="md:order-last">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 lg:text-balance"
        >
          Explore our expensive useless solutions
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-zinc-500">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
      </div>
      <div class="lg:col-span-2">
        <div>
          <img
            class="object-cover h-full shadow rounded-2xl"
            src="/images/dashboardLight.svg"
            alt="#_"
          />
        </div>
      </div>
    </div>
    <div class="items-center grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div>
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-blue-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-zinc-900 lg:text-balance"
        >
          Stay in the know with real time notifications.
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-zinc-500">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
      </div>
      <div class="lg:col-span-2">
        <div>
          <img
            class="object-cover h-full shadow rounded-2xl"
            src="/images/dashboardLight.svg"
            alt="#_"
          />
        </div>
      </div>
    </div>
  </div>
</section>
