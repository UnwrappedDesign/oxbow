---
import Text from "@/components/fundations/typography/Text.astro";
const features = [
  {
    title: "Innovative Design",
    description:
      "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience.",
    imageSrc: "/widgets/sliders.svg",
    imageAlt: "Innovative design image",
  },
  {
    title: "Powerful Functionality",
    description:
      "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows.",
    imageSrc: "/widgets/progressCircles.svg",
    imageAlt: "Powerful functionality image",
  },
  {
    title: "Easy Integration",
    description:
      "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach.",
    imageSrc: "/widgets/figmaComp.svg",
    imageAlt: "Easy integration image",
  },
  {
    title: "Revolutionizing communication",
    description:
      "Unlocking innovative solutions that enhance connectivity and streamline interactions.",
    imageSrc: "/widgets/figmaComp2.svg",
    imageAlt: "Revolutionizing communication image",
  },
];
---

<section class="bg-white dark:bg-black">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="max-w-xl">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-blue-500 dark:text-blue-400"
      >
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="mt-4 font-semibold text-zinc-900 dark:text-zinc-100 lg:text-balance"
      >
        Transforming the banking experience for a digital future
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        The fastest method for working together on staging and temporary
        environments.
      </Text>
    </div>
    <dl
      class="mt-12 grid sm:grid-cols-2 gap-x-6 gap-y-12 lg:gap-x-8 lg:gap-y-16"
    >
      {
        features.map((feature) => (
          <div class="flex flex-col justify-between h-full gap-8">
            <div>
              <dt>
                <Text
                  tag="h3"
                  variant="textXL"
                  class="font-medium  text-zinc-900 dark:text-zinc-100"
                >
                  {feature.title}
                </Text>
              </dt>
              <dd class="mt-2 ">
                <Text
                  tag="p"
                  variant="textLG"
                  class="font-medium  text-zinc-500 dark:text-zinc-400"
                >
                  {feature.description}
                </Text>
              </dd>
            </div>
            <div class="h-full p-8 pb-0 overflow-hidden bg-zinc-50 dark:bg-zinc-900/40 rounded-2xl">
              <img
                class="object-center w-full -mb-12 shadow  rounded-t-2xl"
                src={feature.imageSrc}
                alt={feature.imageAlt}
              />
            </div>
          </div>
        ))
      }
    </dl>
  </div>
</section>
