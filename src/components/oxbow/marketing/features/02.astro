---
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
const data = [
  {
    icon: "Filters",
    category: "Real-time Preview",
    text: "Track your edits liveâ€”watch updates happen instantly as you code.",
  },
  {
    icon: "WaveSquare",
    category: "Smart Suggestions",
    text: "Receive context-aware class recommendations while you type.",
  },
  {
    icon: "ArrowIteration",
    category: "Toggle Visibility",
    text: "Show or hide styling options to test different layouts seamlessly.",
  },
  {
    icon: "Plus",
    category: "Color Swatches",
    text: "Preview color values directly within the autocomplete dropdown.",
  },
];
const dataROW = [
  {
    category: "Intuitive Interface",
    text: "Navigate a clean, user-focused layout designed for maximum efficiency.",
    items: ["Streamlined workflows", "Enhanced accessibility"],
  },
  {
    category: "Robust Performance",
    text: "Power through large projects with lightning-fast compilation and minimal overhead.",
    items: ["Optimized rendering", "Scalable architecture"],
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-32">
    <div class="max-w-3xl">
      <Text
        tag="h2"
        variant="displayMD"
        class="font-semibold tracking-tight text-zinc-900 dark:text-white text-balance"
      >
        Powering finance for the digital age
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Collaborate seamlessly across staging and testing environments.
      </Text>
    </div>
    <dl
      class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-y-16"
    >
      {
        data.map((section) => (
          <div>
            <div class="flex items-center text-zinc-500 dark:text-zinc-400 gap-2">
              {section.icon === "Filters" && (
                <Filters class="text-zinc-600 dark:text-zinc-400" size="base" />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare
                  class="text-zinc-600 dark:text-zinc-400"
                  size="base"
                />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration
                  class="text-zinc-600 dark:text-zinc-400"
                  size="base"
                />
              )}
              {section.icon === "Plus" && (
                <Plus class="text-zinc-600 dark:text-zinc-400" size="base" />
              )}

              <dt>
                <Text
                  variant="textBase"
                  tag="h3"
                  class="font-semibold text-zinc-900 dark:text-white"
                >
                  {section.category}
                </Text>
              </dt>
            </div>
            <dd>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                {section.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
    <div class="items-start mt-12 grid grid-cols-1 md:grid-cols-2">
      <ul
        class="text-base font-medium list-none gap-y-12 gap-1 grid sm:grid-cols-2 lg:grid-cols-1 text-zinc-900 dark:text-white lg:pr-24 md:pr-12"
        role="list"
      >
        {
          dataROW.map((section) => (
            <div>
              <div>
                <Text
                  variant="textBase"
                  tag="h3"
                  class="font-semibold text-zinc-900 dark:text-white"
                >
                  {section.category}
                </Text>
                <Text
                  tag="p"
                  variant="textSM"
                  class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
                >
                  {section.text}
                </Text>
              </div>
              <ul
                role="list"
                class="mt-6 text-base font-medium list-none space-y-1 text-zinc-900 dark:text-white"
              >
                {section.items.map((item) => (
                  <li>
                    <div class="flex items-center  gap-2">
                      <CircleCheck
                        class="text-zinc-600 dark:text-zinc-400"
                        size="sm"
                        slot="icon"
                      />
                      <Text tag="span" variant="textBase">
                        {item}
                      </Text>
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </ul>
      <div class="h-full mt-12 lg:mt-0">
        <img
          src="/widgets/calendar.svg"
          alt="#_"
          class="w-full shadow rounded-2xl outline outline-zinc-100 dark:outline-zinc-800"
        />
      </div>
    </div>
  </div>
</section>
