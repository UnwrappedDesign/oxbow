---
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
const data = [
  {
    category: "Innovative Design",

    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience. ",
    items: ["Revolutionizing communication", "Enhancing productivity"],
  },
  {
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows. ",
    items: ["Unlocking innovative solutions", "Enabling interoperability"],
  },
  {
    category: "Easy Integration",
    text: "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach. ",
    items: ["Streamlining operations", "Simplifying implementation"],
  },
];
const dataS = [
  {
    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience. ",
    items: ["Revolutionizing communication", "Enhancing productivity"],
  },
  {
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows. ",
    items: ["Unlocking innovative solutions", "Enabling interoperability"],
  },
  {
    text: "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach. ",
    items: ["Streamlining operations", "Simplifying implementation"],
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="gap-x-2 gap-y-14 mt-12 lg:gap-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      {
        data.map((section) => (
          <div>
            <ul
              role="list"
              class="space-y-1 text-base font-medium text-base-900">
              {section.items.map((item, idx) => (
                <li>
                  <div class="flex  items-center gap-4">
                    <CircleCheck
                      class="text-accent-600"
                      size="base"
                      slot="icon"
                    />
                    <Text
                      tag="span"
                      variant="featureListItem">
                      {item}
                    </Text>
                  </div>
                </li>
              ))}
            </ul>
            <div class="mt-8">
              <Heading

                level={3}
                variant="featureTitle">
                {section.category}
              </Heading>
              <Text
                class="mt-4"
                tag="p"
                variant="body">
                {section.text}
              </Text>
            </div>
          </div>
        ))
      }
    </div>

  </div>
</section>
