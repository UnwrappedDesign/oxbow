---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
const data = [
  {
    category: "Innovative Design",
    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience.",
    items: ["Great communication", "Enhancing productivity"],
  },
  {
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows.",
    items: ["Unlocking  solutions", "Enabling interoperability"],
  },
  {
    category: "Seamless Collaboration",
    text: "Our platform fosters teamwork and collaboration by providing the tools and features needed to work effectively.",
    items: ["Real-time editing", "Shared workspaces"],
  },
  {
    category: "Advanced Analytics",
    text: "Gain deep insights into your data with our comprehensive analytics tools, helping you make informed decisions.",
    items: ["Customizable dashboards", "Predictive analytics"],
  },
];
---

<section>
  <div class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div
      class="relative items-center p-8 list-none grid grid-cols-1 bg-base-50 lg:grid-cols-2 gap-4 lg:gap-24 rounded-3xl lg:p-10 overflow-clip"
    >
      <div class="pt-8 text-center lg:text-left">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 lg:text-balance"
        >
          Transforming the banking experience for a digital future
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-base-500">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
        <div class="flex flex-wrap items-center mx-auto mt-8 gap-2">
          <Button variant="accent" size="sm"> Get started </Button>
          <Button variant="alternative" size="sm"> Learn more </Button>
        </div>
      </div>
      <div class="items-center h-full mt-12 lg:mt-0">
        <img
          alt="#"
          class="absolute w-full border shadow rounded-2xl border-base-200"
          src="/images/dashboardLight.svg"
        />
      </div>
    </div>
    <div class="mt-6 grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="gap-6 grid grid-cols-1 sm:grid-cols-2 gap-y-12 lg:col-span-2">
        {
          data.map((section) => (
            <div>
              <div>
                <Text
                  variant="textLG"
                  tag="h3"
                  class="font-medium text-base-900"
                >
                  {section.category}
                </Text>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 font-medium text-base-500"
                >
                  {section.text}
                </Text>
              </div>
              <ul
                role="list"
                class="mt-6 text-base font-medium list-none space-y-1 text-base-900"
              >
                {section.items.map((item) => (
                  <li>
                    <div class="flex items-center  gap-4">
                      <CircleCheck
                        class="text-accent-600"
                        size="base"
                        slot="icon"
                      />
                      <Text tag="span" variant="textBase">
                        {item}
                      </Text>
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
      <div class="block w-full lg:row-span-2">
        <div
          x-data="{ activeSlide: 0, slides: ['/widgets/activity.svg', '/widgets/hits.svg', '/widgets/traffic.svg'] }"
          class="relative h-full"
          role="region"
          aria-label="Image Slider"
        >
          <!-- Template for each slide image -->
          <template x-for="(slide, index) in slides" :key="index">
            <div
              x-show="activeSlide === index"
              x-transition:enter="transition ease-out duration-500"
              x-transition:enter-start="opacity-0 transform scale-95"
              x-transition:enter-end="opacity-100 transform scale-100"
              x-transition:leave="transition ease-in duration-500"
              x-transition:leave-start="opacity-100 transform scale-100"
              x-transition:leave-end="opacity-0 transform scale-95"
              class="absolute inset-0 size-full"
              :aria-hidden="activeSlide !== index"
            >
              <!-- Slide image -->
              <img
                :src="slide"
                alt="#"
                class="object-contain shadow size-full rounded-2xl"
              />
            </div>
          </template>
          <!-- Previous slide button -->
          <button
            @click="activeSlide = activeSlide === 0 ? slides.length - 1 : activeSlide - 1"
            class="absolute flex items-center justify-center bg-white border rounded-full left-4 top-1/2 transform -translate-y-1/2 text-base-900 size-10 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-500"
            aria-label="Previous Slide"
          >
            &larr;
          </button>
          <!-- Next slide button -->
          <button
            @click="activeSlide = activeSlide === slides.length - 1 ? 0 : activeSlide + 1"
            class="absolute flex items-center justify-center bg-white border rounded-full right-4 top-1/2 transform -translate-y-1/2 text-base-900 size-10 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-500"
            aria-label="Next Slide"
          >
            &rarr;
          </button>
          <!-- Pagination indicators -->
          <div
            class="absolute flex bottom-4 left-1/2 transform -translate-x-1/2 space-x-2"
          >
            <template x-for="(slide, index) in slides" :key="index">
              <button
                @click="activeSlide = index"
                :class="{'bg-base-800': activeSlide === index, 'bg-base-400': activeSlide !== index}"
                class="w-3 h-3 rounded-full focus:outline-none"
                :aria-label="'Slide ' + (index + 1)"
                :aria-current="activeSlide === index ? 'true' : 'false'"
              ></button>
            </template>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
