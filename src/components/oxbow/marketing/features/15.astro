---
import Text from "@/components/fundations/typography/Text.astro";
const items = [
  {
    imgSrc: "/widgets/progressCircles.svg",
    imgAlt: "#_",
    title: "Easy navigation",
    description:
      "Hover over any element to see its Tailwind classes. Press Space to easily pin and edit your settings.",
  },
  {
    imgSrc: "/widgets/calendar.svg",
    imgAlt: "#_",
    title: "Persistence",
    description:
      "Spotless will remember all your changes to every element so you can copy all changes at once!",
  },
  {
    imgSrc: "/widgets/figmaComp2.svg",
    imgAlt: "#_",
    title: "Screenshot tool",
    description:
      "Make screenshots of a particular part of the screen to share quickly and easily.",
  },
];
---

<section class="bg-white dark:bg-black">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <dl
      class="items-baseline text-center grid sm:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16"
    >
      {
        items.map((item) => (
          <div class="flex flex-col justify-between h-full">
            <div>
              <div class="p-6 pb-0 overflow-hidden  bg-zinc-50 dark:bg-zinc-900/40 rounded-2xl">
                <img
                  class="shadow  rounded-t-2xl size-full"
                  src={item.imgSrc}
                  alt={item.imgAlt}
                />
              </div>
              <dt class="mt-4">
                <Text
                  tag="h3"
                  variant="textLG"
                  class="font-medium  text-zinc-900 dark:text-zinc-100"
                >
                  {item.title}
                </Text>
              </dt>
              <dd>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
                >
                  {item.description}
                </Text>
              </dd>
            </div>
          </div>
        ))
      }
    </dl>
  </div>
</section>
