---
import Text from "@/components/fundations/typography/Text.astro";
const items = [
  {
    imgSrc: "/widgets/progressCircles.svg",
    imgAlt: "#_",
    title: "Easy navigation",
    description:
      "Hover over any element to see its Tailwind classes. Press Space to easily pin and edit your settings.",
  },
  {
    imgSrc: "/widgets/calendar.svg",
    imgAlt: "#_",
    title: "Persistence",
    description:
      "Spotless will remember all your changes to every element so you can copy all changes at once!",
  },
  {
    imgSrc: "/widgets/figmaComp2.svg",
    imgAlt: "#_",
    title: "Screenshot tool",
    description:
      "Make screenshots of a particular part of the screen to share quickly and easily.",
  },
];
---
<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">

    <dl
      class="grid sm:grid-cols-2  text-center gap-x-6 items-baseline gap-y-12 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16">
      {
        items.map((item) => (
          <div class="flex flex-col h-full justify-between">
            <div>
              <div class="p-6 pb-0  bg-base-50 rounded-2xl overflow-hidden">
                <img
                  class=" shadow rounded-t-2xl size-full"
                  src={item.imgSrc}
                  alt={item.imgAlt}
                />
              </div>
              <dt class="mt-4">
                <Text
                  tag="h3"
                  variant="textLG"
                  class=" text-base-900 font-medium">
                  {item.title}
                </Text>
              </dt>
              <dd>
                <Text
                  tag="p"
                  variant="textBase"
                  class="mt-4 text-base-500 font-medium">
                  {item.description}
                </Text>
              </dd>
            </div>
          </div>
        ))
      }
    </dl>
  </div>
</section>
