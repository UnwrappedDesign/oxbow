---
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
const listItems = [
  "Great communication",
  "Enhancing productivity",
  "Advanced  measures",
  "Seamless integration",
];
---

<div class="p-8">
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col gap-24">
      <div class="items-center grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-24">
        <div>
          <Text
            tag="p"
            variant="textSM"
            class="font-bold uppercase text-blue-600"
          >
            Tagline
          </Text>
          <Text
            tag="h2"
            variant="displayMD"
            class="mt-4 font-semibold text-zinc-900 lg:text-balance"
          >
            Transforming the banking experience for a digital future
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 font-medium text-zinc-500"
          >
            The fastest method for working together on staging and temporary
            environments.
          </Text>
          <ul
            class="mt-12 text-base font-medium text-zinc-900 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-2"
          >
            {
              listItems.map((item, index) => (
                <li>
                  <div class="relative flex flex-row items-center gap-4">
                    <CircleCheck
                      class="text-blue-600"
                      size="base"
                      slot="icon"
                    />
                    <Text tag="span" variant="textBase">
                      {item}
                    </Text>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
        <div
          class="p-6 pb-0 overflow-hidden md:order-first bg-zinc-50 rounded-2xl"
        >
          <img
            alt="#_"
            class="shadow rounded-t-2xl size-full"
            src="/widgets/analytics.svg"
          />
        </div>
      </div><div
        class="items-center grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-24 md:flex-row-reverse"
      >
        <div>
          <Text
            tag="p"
            variant="textSM"
            class="font-bold uppercase text-blue-600"
          >
            Tagline
          </Text>
          <Text
            tag="h2"
            variant="displayMD"
            class="mt-4 font-semibold text-zinc-900 lg:text-balance"
          >
            Transforming the banking experience for a digital future
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 font-medium text-zinc-500"
          >
            The fastest method for working together on staging and temporary
            environments.
          </Text>
          <ul
            class="mt-12 text-base font-medium text-zinc-900 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-2"
          >
            {
              listItems.map((item) => (
                <li>
                  <div class="relative flex flex-row items-center gap-4">
                    <CircleCheck
                      class="text-blue-600"
                      size="base"
                      slot="icon"
                    />
                    <Text tag="span" variant="textBase">
                      {item}
                    </Text>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
        <div class="p-6 pb-0 overflow-hidden bg-zinc-50 rounded-2xl">
          <img
            alt="#_"
            class="shadow rounded-t-2xl size-full"
            src="/widgets/progressCircles.svg"
          />
        </div>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
