---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";

const data = [
  {
    name: "Mike Vega",
    title: "Creator of Oxbowui.com",
    testimonial:
      "Being in the financial industry, we were always looking for ways to enhance our transactions' security and efficiency.",
    imgSrc: "/avatars/2.avif",
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="grid grid-cols-1 max-w-md lg:max-w-none mx-auto items-start md:grid-cols-2 lg:bg-base-50 lg:p-20 lg:rounded-3xl">
      <div class="lg:pr-24 md:pr-12">
        <img
          class="size-16"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        />
        <Heading
          level={3}
          variant="defaultSmall">
          Get started today and start collaborating with your team
        </Heading>
        <Text
          class="mt-4 lg:text-balance"
          tag="p"
          variant="body">
          Streamline your workflow and collaborate seamlessly on staging and
          temporary environments
        </Text>
        <div class="flex flex-wrap items-center gap-2 mt-8">
          <Button
            variant="accent"
            size="sm">
            Get started
          </Button>
          <Button
            variant="alternative"
            size="sm">
            Learn more
          </Button>
        </div>
        <ul
          role="list"
          class="mt-6 pt-6 border-t">
          {
            data.map((member) => (
              <>
                <li>
                  <figure class="flex flex-col  h-full ">
                    <Text
                      tag="blockquote"
                      variant="blockquote">
                      {member.testimonial}
                    </Text>

                    <figcaption>
                      <div class="flex items-center gap-2 mt-8">
                        <img
                          class="nline-block size-9 rounded-full"
                          src={member.imgSrc}
                          alt="#_"
                        />
                        <div>
                          <h3 class="text-sm font-medium text-base-700 group-hover:text-accent-500">
                            {member.name}
                          </h3>
                          <p class="text-xs font-medium text-base-400 ">
                            {member.title}
                          </p>
                        </div>
                      </div>
                    </figcaption>
                  </figure>
                </li>
              </>
            ))
          }
        </ul>
      </div>
      <div class="mt-12 lg:-mt-32 h-full">
        <img
          src="/images/whiteCardStand.svg"
          alt="#_"
          class="drop-shadow w-full"
        />
      </div>
    </div>
  </div>
</section>
