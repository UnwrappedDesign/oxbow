---
export const description = "Centered CTA with logo and text";
// Assets
import Logo from "@/components/assets/Logo.astro";

// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section class="overflow-hidden bg-base-50">
  <Wrapper variant="blockStandard" class="py-24">
    <div class="bg-base-900 p-8 lg:p-16 rounded-xl relative">
      <div class="max-w-xl mx-auto text-center lg:text-balance">
        <div class="absolute inset-x-0 -top-10 flex justify-center z-10">
          <div class="rounded-2xl bg-accent-600 p-4 inline-block shadow-lg">
            <Logo class="h-12 text-white" />
          </div>
        </div>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-12 font-semibold tracking-tight text-white lg:text-balance"
        >
          Get started with Oxbow
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="mt-4 text-base-400 lg:text-balance"
        >
          Analytics without the bloat, fluff, or enterprise sales calls. Just
          numbers you care about, and none you don’t.
        </Text>
        <div
          class="text-white flex flex-wrap items-center justify-center mt-8 gap-y-2 gap-x-8"
        >
          <Text tag="p" variant="textSM">Used by 4K makers</Text>

          <Text tag="p" variant="textSM">$0 Raised on Purpose</Text>

          <Text tag="p" variant="textSM">Still not acquired (yet)</Text>
        </div>
        <div class="flex justify-center mt-12">
          <Button variant="accent" size="base" gap="xs"
            >Join now <span aria-hidden="true">—</span>Regret nothing</Button
          >
        </div>
      </div>
    </div>
  </Wrapper>
</section>
