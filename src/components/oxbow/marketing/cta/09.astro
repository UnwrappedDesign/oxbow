---
import Button from "@/components/fundations/buttons/Button.astro";
const listItems = [
  "Communication",
  "Enhancing productivity",
  "Security measures",
  "Seamless integration",
  "Empowering  solutions",
  "Effortless management",
];
---

<section>
  <div class="relative bg-white">
    <div
      class="relative h-80 overflow-hidden bg-iwhite md:absolute md:left-0 md:h-full md:w-1/3 lg:w-1/2">
      <img
        class="size-full object-cover lg:border-r"
        src="/images/dashboardLight.svg"
        alt=""
      />
    </div>
    <div class="relative mx-auto max-w-7xl py-24 sm:py-32 lg:px-8 lg:py-40">
      <div
        class="pl-6 pr-6 md:ml-auto md:w-2/3 md:pl-16 lg:w-1/2 lg:pl-24 lg:pr-0 xl:pl-32">
        <img
          class="size-32"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        />
        <p
          class="text-xl mt-8 lg:text-4xl lg:text-balance font-semibold tracking-tight text-base-900">
          Get started today and start collaborating with your team
        </p>
        <p class="mt-4 text-sm text-base-500 lg:text-base lg:text-balance">
          Streamline your workflow and collaborate seamlessly on staging and
          temporary environments
        </p>

        <div class="flex flex-wrap items-center gap-2 mx-auto mt-12">
          <Button
            variant="accent"
            size="sm">
            Get started
          </Button>
          <Button
            variant="alternative"
            size="sm">
            Learn more
          </Button>
        </div>
        <ul
          class="gap-1 grid grid-cols-1 sm:grid-cols-2 mt-12 justify-center space-y-1 text-sm font-medium text-base-900 list-none"
          role="list">
          {
            listItems.map((item, index) => (
              <li>
                <div class="relative flex flex-row items-start gap-4">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-circle-check-filled text-accent-500"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    strokeWidth="2"
                    stroke="currentColor"
                    fill="none"
                    strokeLinecap="round"
                    strokeLinejoin="round">
                    <path
                      stroke="none"
                      d="M0 0h24v24H0z"
                      fill="none"
                    />
                    <path
                      d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z"
                      strokeWidth="0"
                      fill="currentColor"
                    />
                  </svg>
                  <p>{item}</p>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
