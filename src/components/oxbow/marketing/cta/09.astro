---
import Button from "@/components/fundations/buttons/Button.astro";

import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
const listItems = [
  "Communication",
  "Enhancing productivity",
  "Security measures",
  "Seamless integration",
  "Empowering  solutions",
  "Effortless management",
];
---

<section>
  <div class="relative bg-white">
    <div
      class="relative h-80 overflow-hidden bg-iwhite md:absolute md:left-0 md:h-full md:w-1/3 lg:w-1/2">
      <img
        class="size-full object-cover lg:border-r"
        src="/images/dashboardLight.svg"
        alt=""
      />
    </div>
    <div class="relative mx-auto max-w-7xl py-24 sm:py-32 lg:px-8 lg:py-40">
      <div
        class="pl-6 pr-6 md:ml-auto md:w-2/3 md:pl-16 lg:w-1/2 lg:pl-24 lg:pr-0 xl:pl-32">
        <img
          class="size-32"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        />
        <Text
          tag="h2"
          variant="displayMD"
          class="font-semibold text-base-900">
          Get started with our app today
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 font-medium">
          Streamline your workflow and collaborate seamlessly on staging and
          temporary environments
        </Text>

        <div class="flex flex-wrap items-center gap-2 mx-auto mt-12">
          <Button
            variant="accent"
            size="sm">
            Get started
          </Button>
          <Button
            variant="alternative"
            size="sm">
            Learn more
          </Button>
        </div>
        <ul
          class="gap-1 grid grid-cols-1 sm:grid-cols-2 mt-12 justify-center space-y-1 text-sm font-medium text-base-900 list-none"
          role="list">
          {
            listItems.map((item, index) => (
              <li>
                <div class="relative flex flex-row items-center gap-4">
                  <CircleCheck
                    class="text-accent-600"
                    size="base"
                  />
                  <Text
                    tag="span"
                    variant="textBase">
                    {item}
                  </Text>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
