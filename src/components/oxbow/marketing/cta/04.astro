---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
---
<section class="bg-base-50">
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="text-center justify-center max-w-xl mx-auto">
      <img
        class="size-24 mx-auto lg:size-40"
        src="/images/oxbow/blueLineLogo.png"
        alt="#_"
      />
      <Heading
        level={3}
        class="mt-8"
        variant="default">
        Get started today and start collaborating with your team
      </Heading>
      <Text
        class="mt-4 lg:text-balance"
        tag="p"
        variant="body">
        Streamline your workflow and collaborate seamlessly on staging and
        temporary environments
      </Text>

    </div>
    <div class="flex flex-wrap items-center gap-2 justify-center mx-auto mt-12">
      <Button
        variant="accent"
        size="sm">
        Get started
      </Button>
      <Button
        variant="alternative"
        size="sm">
        Learn more
      </Button>
    </div>
  </div>
</section>
