---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl">
    <div
      class="relative px-6 pt-16 overflow-hidden bg-base-50 isolate sm:rounded-3xl sm:px-16 md:pt-24 lg:flex lg:gap-x-20 lg:px-24 lg:pt-0">
      <div class="max-w-xl lg:flex-auto lg:py-28">
        <img
          class="size-16"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        />
        <Heading
          level={3}
          class="mt-8"
          variant="default">
          Get started today and start collaborating with your team
        </Heading>
        <Text
          class="mt-4 lg:text-balance"
          tag="p"
          variant="body">
          Streamline your workflow and collaborate seamlessly on staging and
          temporary environments
        </Text>
        <div class="flex flex-wrap items-center gap-2 mx-auto mt-12">
          <Button
            variant="accent"
            size="sm">
            Get started
          </Button>
          <Button
            variant="alternative"
            size="sm">
            Learn more
          </Button>
        </div>
      </div>
      <div class="relative mt-16 h-80 lg:mt-8">
        <img
          class="absolute left-0 top-0 w-[57rem] max-w-none drop-shadow"
          src="/images/whiteCard.svg"
          alt="#_"
          width="1824"
          height="1080"
        />
      </div>
    </div>
  </div>
</section>
