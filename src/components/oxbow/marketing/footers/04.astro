---
import Text from "@/components/fundations/typography/Text.astro";

import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
import YoutubeBrand from "@/components/fundations/icons/YoutubeBrand.astro";
import GithubBrand from "@/components/fundations/icons/GithubBrand.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Mission" },
      { href: "#", text: "Leadership Team" },
      { href: "#", text: "History" },
    ],
  },
  {
    heading: " Services",
    links: [
      { href: "#", text: "Marketing" },
      { href: "#", text: "Analytics" },
      { href: "#", text: "Commerce" },
      { href: "#", text: "Insights" },
    ],
  },
  {
    heading: "Resources",
    links: [
      { href: "#", text: "Documentation" },
      { href: "#", text: "Guides" },
      { href: "#", text: "Webinars" },
      { href: "#", text: "White Papers" },
    ],
  },
];
---

<div>
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div
      class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-x-8 gap-y-24"
    >
      <div class="col-span-full md:col-span-2 lg:col-start-5 lg:order-last">
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="flex items-center font-medium hover:text-stone-500 gap-2 text-zinc-900"
        >
          <img
            class="h-7 2xl:h-12"
            src="/images/oxbow/blueLineLogo.png"
            alt="#_"
          /> Oxbow UI
        </Text>
        <div class="relative flex items-center mt-8 group divide-x">
          <img
            alt="#_"
            class="pr-2 size-20"
            src="/assets/qr-lexingtonthemes.svg"
          />
          <div class="h-full pl-2 lg:w-64">
            <Text
              tag="a"
              href=""
              variant="textBase"
              class="font-semibold text-zinc-900 group-hover:text-stone-500"
            >
              <span class="absolute inset-0 sm:rounded-2xl"></span>Download the
              app
            </Text>

            <Text
              tag="p"
              variant="textBase"
              class="mt-2 font-medium text-zinc-500"
            >
              Scan the QR code to download the app from your app store.
            </Text>
          </div>
        </div>
      </div>
      {
        footerLinks.map((section, index) => (
          <div class="space-y-4">
            <nav aria-labelledby={`footer-heading-${index}`}>
              <Text
                tag="h2"
                variant="textBase"
                id={`footer-heading-${index}`}
                class="font-semibold text-zinc-900"
              >
                {section.heading}
              </Text>
              <ul class="mt-4 space-y-4">
                {section.links.map((link, linkIndex) => (
                  <li>
                    <Text
                      tag="a"
                      href="#_"
                      variant="textBase"
                      class="font-medium hover:text-stone-500 text-zinc-500"
                    >
                      {link.text}
                    </Text>
                  </li>
                ))}
              </ul>
            </nav>
          </div>
        ))
      }
    </div>
    <div
      class="flex flex-col justify-between pt-12 mt-12 border-t gap-8 sm:flex-row sm:items-center border-zinc-200"
    >
      <Text tag="h2" variant="textSM" class="font-medium text-zinc-400">
        Copyright Â© 2024 Oxbow UI. All rights reserved.
      </Text>
      <nav
        aria-labelledby="social-icons-heading"
        role="navigation"
        class="flex items-center gap-4 text-zinc-500"
      >
        <Text id="social-icons-heading" class="sr-only">
          Follow us on social media
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <XBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <LinkedinBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <GithubBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <YoutubeBrand size="sm" />
        </Text>
      </nav>
    </div>
  </div>
  <!-- copy:end -->
</div>
