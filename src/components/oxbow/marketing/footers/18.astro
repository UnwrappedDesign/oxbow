---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
import YoutubeBrand from "@/components/fundations/icons/YoutubeBrand.astro";
import GithubBrand from "@/components/fundations/icons/GithubBrand.astro";
import GooglePlay from "@/components/fundations/icons/GooglePlay.astro";
import Apple from "@/components/fundations/icons/Apple.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Mission" },
      { href: "#", text: "Leadership Team" },
      { href: "#", text: "History" },
    ],
  },
  {
    heading: " Services",
    links: [
      { href: "#", text: "Marketing" },
      { href: "#", text: "Analytics" },
      { href: "#", text: "Commerce" },
      { href: "#", text: "Insights" },
    ],
  },
  {
    heading: "Resources",
    links: [
      { href: "#", text: "Documentation" },
      { href: "#", text: "Guides" },
      { href: "#", text: "Webinars" },
      { href: "#", text: "White Papers" },
    ],
  },
  {
    heading: "Support & Legal",
    links: [
      { href: "#", text: "Pricing" },
      { href: "#", text: "API Status" },
      { href: "#", text: "Live Chat" },
      { href: "#", text: "Email Support" },
    ],
  },
  {
    heading: "Social Media",
    links: [
      { href: "#", text: "Twitter" },
      { href: "#", text: "Facebook" },
      { href: "#", text: "LinkedIn" },
      { href: "#", text: "Instagram" },
    ],
  },
  {
    heading: "Company Info",
    links: [
      { href: "#", text: "Careers" },
      { href: "#", text: "Press" },
      { href: "#", text: "Partners" },
      { href: "#", text: "Blog" },
    ],
  },
  {
    heading: "Legal",
    links: [
      { href: "#", text: "Privacy Policy" },
      { href: "#", text: "Terms of Service" },
      { href: "#", text: "Cookie Policy" },
      { href: "#", text: "GDPR Compliance" },
    ],
  },
  {
    heading: "Community",
    links: [
      { href: "#", text: "Forums" },
      { href: "#", text: "Events" },
      { href: "#", text: "User Groups" },
      { href: "#", text: "Ambassadors" },
    ],
  },
];
---

<div>
  <!-- copy:start -->
  <div class="bg-zinc-950 p-8 mx-auto max-w-7xl p-8">
    <div class="items-end grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <Text tag="h2" variant="textLG" class="font-semibold text-white">
          Get started with our app today
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 font-medium text-zinc-300 lg:text-balance"
        >
          Streamline your workflow and collaborate seamlessly on staging and
          temporary environments
        </Text>
      </div>
      <div class="flex flex-col items-center lg:flex-row gap-2 sm:ml-auto">
        <Button
          class="w-full md:w-auto"
          variant="alternative"
          gap="xs"
          size="sm"
        >
          <Apple size="sm" slot="left-icon" />
          <span>Download on App Store</span>
        </Button>
        <Button
          class="w-full md:w-auto"
          variant="alternative"
          gap="xs"
          size="sm"
        >
          <GooglePlay size="sm" slot="left-icon" />
          <span>Download on Google Play</span>
        </Button>
      </div>
    </div>
    <div
      class="pt-6 mt-6 border-t grid border-white/20 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-x-8 gap-y-24"
    >
      {
        footerLinks.map((section, index) => (
          <nav aria-labelledby={`footer-heading-${index}`}>
            <Text
              tag="h2"
              variant="textBase"
              id={`footer-heading-${index}`}
              class="font-semibold text-white"
            >
              {section.heading}
            </Text>
            <ul class="mt-4 space-y-4">
              {section.links.map((link, linkIndex) => (
                <li>
                  <Text
                    tag="a"
                    href="#_"
                    variant="textBase"
                    class="font-medium hover:text-stone-500 text-zinc-300"
                  >
                    {link.text}
                  </Text>
                </li>
              ))}
            </ul>
          </nav>
        ))
      }
    </div>
    <div
      class="flex flex-col items-center justify-between w-full pt-12 mt-12 text-center border-t border-white/20 gap-8 md:text-left md:flex-row"
    >
      <Text tag="h2" variant="textSM" class="w-full font-medium text-zinc-300">
        Copyright Â© 2024 Oxbow UI. All rights reserved.
      </Text>
      <nav
        aria-labelledby="legal-links"
        role="navigation"
        class="flex items-center justify-center w-full text-sm gap-4 text-zinc-200"
      >
        <Text id="legal-links" class="sr-only" tag="h3" variant="footerHeading">
          Legal and terms
        </Text>
        <Text
          href="#_"
          tag="a"
          variant="textBase"
          class="font-medium text-white hover:text-stone-500"
        >
          Terms of Service
        </Text>
        <Text
          href="#_"
          tag="a"
          variant="textBase"
          class="font-medium text-white hover:text-stone-500"
        >
          Privacy Policy
        </Text>
      </nav>
      <nav
        aria-labelledby="social-icons-heading"
        role="navigation"
        class="flex items-center justify-center w-full gap-4 text-zinc-200 lg:justify-end"
      >
        <Text id="social-icons-heading" class="sr-only">
          Follow us on social media
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium text-white hover:text-stone-500"
        >
          <XBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium text-white hover:text-stone-500"
        >
          <LinkedinBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium text-white hover:text-stone-500"
        >
          <GithubBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium text-white hover:text-stone-500"
        >
          <YoutubeBrand size="sm" />
        </Text>
      </nav>
    </div>
  </div>
  <!-- copy:end -->
</div>
