---
import Text from "@/components/fundations/typography/Text.astro";

import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
import YoutubeBrand from "@/components/fundations/icons/YoutubeBrand.astro";
import GithubBrand from "@/components/fundations/icons/GithubBrand.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Overview" },
      { href: "#", text: "Pricing" },
      { href: "#", text: "Blog" },
      { href: "#", text: "Shop" },
    ],
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-32 py-24">
    <div class="max-w-xl mx-auto text-center">
      <Text
        class="flex flex-col items-center justify-center w-full sm:w-auto gap-3 font-medium hover:text-blue-500 hover:dark:text-blue-400 text-zinc-900 dark:text-zinc-100"
        href="#_"
        tag="a"
        variant="textBase"
      >
        <img
          class="h-7 2xl:h-12"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        /> Oxbow UI
      </Text>
      <Text
        tag="p"
        variant="textSM"
        class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Designed in europe.
      </Text>
    </div>
    {
      footerLinks.map((section, index) => (
        <nav class="w-full mt-8" aria-labelledby={`footer-heading-${index}`}>
          <ul class="flex flex-wrap justify-center gap-x-4">
            {section.links.map((link, linkIndex) => (
              <li>
                <Text
                  tag="a"
                  href="#_"
                  variant="textBase"
                  class="font-medium hover:text-blue-500 hover:dark:text-blue-400 text-zinc-500 dark:text-zinc-400"
                >
                  {link.text}
                </Text>
              </li>
            ))}
          </ul>
        </nav>
      ))
    }
    <div
      class="flex flex-col items-center justify-between w-full pt-12 mt-12 text-center border-t border-zinc-200 dark:border-zinc-800 gap-8 md:text-left md:flex-row"
    >
      <Text
        tag="h2"
        variant="textSM"
        class="w-full font-medium text-zinc-400 dark:text-zinc-500"
      >
        Copyright Â© 2024 Oxbow UI. All rights reserved.
      </Text>

      <nav
        aria-labelledby="legal-links"
        role="navigation"
        class="flex items-center justify-center w-full text-sm gap-4 text-zinc-500 dark:text-zinc-400"
      >
        <Text id="legal-links" class="sr-only" tag="h3" variant="footerHeading">
          Legal and terms
        </Text>
        <Text
          href="#_"
          tag="a"
          variant="textBase"
          class="font-medium hover:text-blue-500 hover:dark:text-blue-400 text-zinc-500 dark:text-zinc-400"
        >
          Terms of Service
        </Text>
        <Text
          href="#_"
          tag="a"
          variant="textBase"
          class="font-medium hover:text-blue-500 hover:dark:text-blue-400 text-zinc-500 dark:text-zinc-400"
        >
          Privacy Policy
        </Text>
      </nav>
      <nav
        aria-labelledby="social-icons-heading"
        role="navigation"
        class="flex items-center justify-center w-full gap-4 text-zinc-500 dark:text-zinc-400 lg:justify-end"
      >
        <Text id="social-icons-heading" class="sr-only">
          Follow us on social media
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-blue-500 hover:dark:text-blue-400 text-zinc-500 dark:text-zinc-400"
        >
          <XBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-blue-500 hover:dark:text-blue-400 text-zinc-500 dark:text-zinc-400"
        >
          <LinkedinBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-blue-500 hover:dark:text-blue-400 text-zinc-500 dark:text-zinc-400"
        >
          <GithubBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-blue-500 hover:dark:text-blue-400 text-zinc-500 dark:text-zinc-400"
        >
          <YoutubeBrand size="sm" />
        </Text>
      </nav>
    </div>
  </div>
</section>
