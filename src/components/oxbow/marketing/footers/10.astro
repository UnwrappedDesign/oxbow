---
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
import YoutubeBrand from "@/components/fundations/icons/YoutubeBrand.astro";
import GithubBrand from "@/components/fundations/icons/GithubBrand.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Overview" },
      { href: "#", text: "Pricing" },
      { href: "#", text: "Blog" },
      { href: "#", text: "Shop" },
    ],
  },
];
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl mx-auto text-center">
      <Text
        class="w-full sm:w-auto flex gap-3 items-center justify-center flex-col"
        href="#_"
        tag="a"
        variant="footerLink">
        <img
          class="h-7 2xl:h-12"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        /> Oxbow UI
      </Text>
     <Text
          tag="p"
          variant="small">
          Designed in europe.
        </Text>
    </div>
    {
      footerLinks.map((section, index) => (
        <nav
          class="w-full mt-8"
          aria-labelledby={`footer-heading-${index}`}>
          <ul class=" gap-x-4 flex flex-wrap justify-center">
            {section.links.map((link, linkIndex) => (
              <li>
                <Text
                  href={link.href}
                  tag="a"
                  variant="footerLink">
                  {link.text}
                </Text>
              </li>
            ))}
          </ul>
        </nav>
      ))
    }
    <div
      class="pt-12 mt-12 border-t flex flex-col gap-8 text-center md:text-left md:flex-row items-center justify-between w-full">
      <Text
        class="w-full"
        tag="p"
        variant="small">
        Copyright Â© 2024 Oxbow UI. All rights reserved.
      </Text>

      <nav
        aria-labelledby="legal-links"
        role="navigation"
        class="flex items-center gap-4 text-base-500 text-sm w-full justify-center">
        <Heading
          id="legal-links"
          class="sr-only"
          level={3}
          variant="footerHeading">
          Legal and terms
        </Heading>
        <Text
          href="#_"
          tag="a"
          variant="footerLink">
          Terms of Service
        </Text>
        <Text
          href="#_"
          tag="a"
          variant="footerLink">
          Privacy Policy
        </Text>
      </nav>
      <nav
        aria-labelledby="social-icons-heading"
        role="navigation"
        class="flex items-center gap-4 text-base-500 w-full justify-center lg:justify-end">
        <Heading
          id="social-icons-heading"
          class="sr-only"
          level={3}
          variant="footerHeading">
          Follow us on social media
        </Heading>
        <Text
          tag="a"
          href="#_"
          variant="link">
          <XBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="link">
          <LinkedinBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="link">
          <GithubBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="link">
          <YoutubeBrand size="sm" />
        </Text>
      </nav>
    </div>
  </div>
</section>
