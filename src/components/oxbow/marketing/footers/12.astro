---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="bg-zinc-50 rounded-2xl divide-y overflow-hidden shadow">
      <div class="grid items-end grid-cols-1 sm:grid-cols-2 gap-4 p-8 lg:p-12">
        <div>
          <p class="text-xl font-semibold tracking-tight text-zinc-900">
            Let's get started with our app today
          </p>
          <p class="mt-4 text-sm text-zinc-500 lg:text-base">
            Streamline your workflow and collaborate seamlessly on staging and
            temporary environments
          </p>
        </div>
        <div class="flex flex-col lg:flex-row items-center gap-2 sm:ml-auto">
          <button
            class="flex items-center justify-center w-full lg:w-auto h-10 px-4 py-2 text-sm font-medium text-white transition-all duration-200 rounded-lg bg-gradient-to-b from-blue-500 to-indigo-600 hover:to-indigo-800 shadow focus:ring-2 focus:ring-blue-950 focus:ring-offset-2 ring-offset-zinc-200 hover:shadow-none"
            aria-label="Action">
            Get started
          </button>
          <button
            class="flex items-center justify-center gap-2 w-full lg:w-auto h-10 px-4 py-2 text-sm font-medium text-zinc-500 transition-all bg-zinc-50 border border-zinc-300 rounded-lg hover:text-zinc-700 focus:ring-2 shadow shadow-zinc-500/5 focus:ring-zinc-900 focus:ring-offset-2 ring-offset-zinc-200 duration-300 hover:border-zinc-200 hover:shadow-none"
            aria-label="Action">
            Learn more
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"
              ><path
                stroke="none"
                d="M0 0h24v24H0z"
                fill="none"
              ></path><path d="M9 6l6 6l-6 6"></path></svg
            >
          </button>
        </div>
      </div>
      <div class="grid p-8 lg:p-12 grid-cols-2 md:grid-cols-4 gap-x-8 gap-y-24">
        {
          footerLinks.map((section, index) => (
            <div class="space-y-4">
              <nav aria-labelledby={`footer-heading-${index}`}>
                <h3
                  id={`footer-heading-${index}`}
                  class="text-sm font-medium  text-zinc-900">
                  {section.heading}
                </h3>
                <ul class="mt-4 space-y-4">
                  {section.links.map((link, linkIndex) => (
                    <li>
                      <a
                        href={link.href}
                        class="text-zinc-600 text-sm md:text-base hover:text-blue-500 duration-300">
                        {link.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          ))
        }
      </div>
      <div
        class="p-8 lg:p-12 flex flex-col md:flex-row items-center justify-between">
        <a
          href="#_"
          class="font-medium w-full sm:w-auto group flex gap-3 items-center group-hover:text-blue-600 duration-300 group-hover:animate-pulse"
          ><img
            class="h-7 2xl:h-12"
            src="/images/oxbow/blueLineLogo.png"
            alt="#_"
          /> Oxbow UI</a
        >
        <p
          class="border-zinc-700 text-zinc-400 text-sm"
                             >
          Copyright Â© 2024 Oxbow UI. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</section>
