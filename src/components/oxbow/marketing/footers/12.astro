---
import Button from "@/components/fundations/buttons/Button.astro";

import Text from "@/components/fundations/typography/Text.astro";

const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Mission" },
      { href: "#", text: "Leadership Team" },
      { href: "#", text: "History" },
    ],
  },
  {
    heading: " Services",
    links: [
      { href: "#", text: "Marketing" },
      { href: "#", text: "Analytics" },
      { href: "#", text: "Commerce" },
      { href: "#", text: "Insights" },
    ],
  },
  {
    heading: "Resources",
    links: [
      { href: "#", text: "Documentation" },
      { href: "#", text: "Guides" },
      { href: "#", text: "Webinars" },
      { href: "#", text: "White Papers" },
    ],
  },
  {
    heading: "Support & Legal",
    links: [
      { href: "#", text: "Pricing" },
      { href: "#", text: "API Status" },
      { href: "#", text: "Live Chat" },
      { href: "#", text: "Email Support" },
    ],
  },
];
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="bg-base-50 rounded-2xl divide-y overflow-hidden">
      <div class="grid items-end grid-cols-1 sm:grid-cols-2 gap-4 p-8 lg:p-12">
        <div>
          <Text tag="h2" variant="textLG" class="font-semibold text-base-900">
            Get started with our app today
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 text-base-500 font-medium lg:text-balance"
          >
            Streamline your workflow and collaborate seamlessly on staging and
            temporary environments
          </Text>
        </div>
        <div class="flex flex-col lg:flex-row items-center gap-2 sm:ml-auto">
          <Button variant="accent" size="sm"> Get started </Button>
          <Button variant="alternative" size="sm"> Learn more </Button>
        </div>
      </div>
      <div class="grid p-8 lg:p-12 grid-cols-2 md:grid-cols-4 gap-x-8 gap-y-24">
        {
          footerLinks.map((section, index) => (
            <div class="space-y-4">
              <nav aria-labelledby={`footer-heading-${index}`}>
                <Text
                  tag="h2"
                  variant="textBase"
                  id={`footer-heading-${index}`}
                  class="font-semibold text-base-900"
                >
                  {section.heading}
                </Text>
                <ul class="mt-4 space-y-4">
                  {section.links.map((link, linkIndex) => (
                    <li>
                      <Text
                        tag="a"
                        href="#_"
                        variant="textBase"
                        class="hover:text-accent-500 font-medium text-base-500"
                      >
                        {link.text}
                      </Text>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          ))
        }
      </div>
      <div
        class="p-8 lg:p-12 flex flex-col md:flex-row items-center justify-between"
      >
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="hover:text-accent-500 font-medium flex items-center gap-2 text-base-900"
        >
          <img
            class="h-7 2xl:h-12"
            src="/images/oxbow/blueLineLogo.png"
            alt="#_"
          /> Oxbow UI
        </Text>
        <Text tag="h2" variant="textSM" class="font-medium text-base-400">
          Copyright Â© 2024 Oxbow UI. All rights reserved.
        </Text>
      </div>
    </div>
  </div>
</section>
