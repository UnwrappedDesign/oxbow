---
import Button from "@/components/fundations/buttons/Button.astro";

import Text from "@/components/fundations/typography/Text.astro";

const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Mission" },
      { href: "#", text: "Leadership Team" },
      { href: "#", text: "History" },
    ],
  },
  {
    heading: " Services",
    links: [
      { href: "#", text: "Marketing" },
      { href: "#", text: "Analytics" },
      { href: "#", text: "Commerce" },
      { href: "#", text: "Insights" },
    ],
  },
  {
    heading: "Resources",
    links: [
      { href: "#", text: "Documentation" },
      { href: "#", text: "Guides" },
      { href: "#", text: "Webinars" },
      { href: "#", text: "White Papers" },
    ],
  },
  {
    heading: "Support & Legal",
    links: [
      { href: "#", text: "Pricing" },
      { href: "#", text: "API Status" },
      { href: "#", text: "Live Chat" },
      { href: "#", text: "Email Support" },
    ],
  },
];
---

<div>
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div
      class="overflow-hidden bg-zinc-50 rounded-2xl divide-y divide-zinc-200"
    >
      <div class="items-end p-8 grid grid-cols-1 sm:grid-cols-2 gap-4 lg:p-12">
        <div>
          <Text tag="h2" variant="textLG" class="font-semibold text-zinc-900">
            Get started with our app today
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 font-medium text-zinc-500 lg:text-balance"
          >
            Streamline your workflow and collaborate seamlessly on staging and
            temporary environments
          </Text>
        </div>
        <div class="flex flex-col items-center lg:flex-row gap-2 sm:ml-auto">
          <Button variant="accent" size="sm"> Get started </Button>
          <Button variant="alternative" size="sm"> Learn more </Button>
        </div>
      </div>
      <div class="p-8 grid lg:p-12 grid-cols-2 md:grid-cols-4 gap-x-8 gap-y-24">
        {
          footerLinks.map((section, index) => (
            <div class="space-y-4">
              <nav aria-labelledby={`footer-heading-${index}`}>
                <Text
                  tag="h2"
                  variant="textBase"
                  id={`footer-heading-${index}`}
                  class="font-semibold text-zinc-900"
                >
                  {section.heading}
                </Text>
                <ul class="mt-4 space-y-4">
                  {section.links.map((link, linkIndex) => (
                    <li>
                      <Text
                        tag="a"
                        href="#_"
                        variant="textBase"
                        class="font-medium hover:text-blue-500 text-zinc-500"
                      >
                        {link.text}
                      </Text>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          ))
        }
      </div>
      <div
        class="flex flex-col items-center justify-between p-8 lg:p-12 md:flex-row"
      >
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="flex items-center font-medium hover:text-blue-500 gap-2 text-zinc-900"
        >
          <img
            class="h-7 2xl:h-12"
            src="/images/oxbow/blueLineLogo.png"
            alt="#_"
          /> Oxbow UI
        </Text>
        <Text tag="h2" variant="textSM" class="font-medium text-zinc-400">
          Copyright Â© 2024 Oxbow UI. All rights reserved.
        </Text>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
