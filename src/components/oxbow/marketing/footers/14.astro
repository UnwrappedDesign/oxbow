---
import Text from "@/components/fundations/typography/Text.astro";

import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
import YoutubeBrand from "@/components/fundations/icons/YoutubeBrand.astro";
import GithubBrand from "@/components/fundations/icons/GithubBrand.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Overview" },
      { href: "#", text: "Pricing" },
      { href: "#", text: "Blog" },
    ],
  },
];
---

<div>
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div
      class="flex flex-col items-center justify-between w-full text-center gap-8 md:text-left md:flex-row"
    >
      <div class="justify-center w-full md:justify-start">
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="flex items-center font-medium hover:text-stone-500 gap-2 text-zinc-900"
        >
          <img
            class="h-7 2xl:h-12"
            src="/images/oxbow/blueLineLogo.png"
            alt="#_"
          /> Oxbow UI
        </Text>
      </div>
      {
        footerLinks.map((section, index) => (
          <nav
            class="flex items-center justify-center w-full text-sm gap-4 text-zinc-500"
            aria-labelledby={`footer-heading-${index}`}
          >
            <ul class="flex flex-wrap justify-center  gap-x-4 gap-y-8">
              {section.links.map((link) => (
                <li>
                  <Text
                    tag="a"
                    href="#_"
                    variant="textBase"
                    class="font-medium hover:text-stone-500 text-zinc-500"
                  >
                    {link.text}
                  </Text>
                </li>
              ))}
            </ul>
          </nav>
        ))
      }
      <nav
        aria-labelledby="social-icons-heading"
        role="navigation"
        class="flex items-center justify-center w-full gap-4 text-zinc-500 lg:justify-end"
      >
        <Text id="social-icons-heading" class="sr-only">
          Follow us on social media
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <XBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <LinkedinBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <GithubBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          <YoutubeBrand size="sm" />
        </Text>
      </nav>
    </div>
  </div>
  <!-- copy:end -->
</div>
