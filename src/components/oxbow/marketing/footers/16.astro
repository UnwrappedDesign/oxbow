---
import Text from "@/components/fundations/typography/Text.astro";

import XBrand from "@/components/fundations/icons/XBrand.astro";
import LinkedinBrand from "@/components/fundations/icons/LinkedinBrand.astro";
import YoutubeBrand from "@/components/fundations/icons/YoutubeBrand.astro";
import GithubBrand from "@/components/fundations/icons/GithubBrand.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Overview" },
      { href: "#", text: "Pricing" },
      { href: "#", text: "Blog" },
    ],
  },
];
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="p-8 bg-accent-700 rounded-2xl flex flex-col gap-8 text-center md:text-left md:flex-row items-center justify-between w-full"
    >
      <div class="w-full justify-center md:justify-start">
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="hover:text-accent-400 font-medium flex items-center gap-2 text-white"
        >
          <img
            class="h-7 2xl:h-12"
            src="/images/oxbow/whiteLineLogo.png"
            alt="#_"
          /> Oxbow UI
        </Text>
      </div>
      {
        footerLinks.map((section, index) => (
          <nav
            class="flex items-center gap-4 text-base-500 text-sm w-full justify-center"
            aria-labelledby={`footer-heading-${index}`}
          >
            <ul class=" gap-x-4 gap-y-8 flex flex-wrap justify-center">
              {section.links.map((link, linkIndex) => (
                <li>
                  <Text
                    tag="a"
                    href="#_"
                    variant="textBase"
                    class="hover:text-accent-500 font-medium text-base-300"
                  >
                    {link.text}
                  </Text>
                </li>
              ))}
            </ul>
          </nav>
        ))
      }
      <nav
        aria-labelledby="social-icons-heading"
        role="navigation"
        class="flex items-center gap-4 text-base-200 w-full justify-center lg:justify-end"
      >
        <Text id="social-icons-heading" class="sr-only">
          Follow us on social media
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="hover:text-accent-500 font-medium text-white"
        >
          <XBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="hover:text-accent-500 font-medium text-white"
        >
          <LinkedinBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="hover:text-accent-500 font-medium text-white"
        >
          <GithubBrand size="sm" />
        </Text>
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="hover:text-accent-500 font-medium text-white"
        >
          <YoutubeBrand size="sm" />
        </Text>
      </nav>
    </div>
  </div>
</section>
