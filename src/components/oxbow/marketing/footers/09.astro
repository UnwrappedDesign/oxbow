---
import Text from "@/components/fundations/typography/Text.astro";

import Button from "@/components/fundations/buttons/Button.astro";
import Apple from "@/components/fundations/icons/Apple.astro";
import GooglePlay from "@/components/fundations/icons/GooglePlay.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Overview" },
      { href: "#", text: "Pricing" },
      { href: "#", text: "Blog" },
      { href: "#", text: "Shop" },
    ],
  },
];
---

<div>
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div
      class="flex flex-col justify-between gap-12 sm:flex-row sm:items-start"
    >
      <div>
        <div>
          <Text
            class="flex items-center w-full sm:w-auto gap-3"
            href="#_"
            tag="a"
            variant="textBase"
            class="font-medium hover:text-stone-500 text-zinc-500"
          >
            <img
              class="h-7 2xl:h-12"
              src="/images/oxbow/blueLineLogo.png"
              alt="#_"
            /> Oxbow UI
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 font-medium text-zinc-500">
            Designed in europe.
          </Text>
        </div>
        {
          footerLinks.map((section, index) => (
            <nav class="mt-8" aria-labelledby={`footer-heading-${index}`}>
              <ul class="flex flex-wrap  gap-x-4">
                {section.links.map((link, linkIndex) => (
                  <li>
                    <Text
                      tag="a"
                      href="#_"
                      variant="textBase"
                      class="font-medium hover:text-stone-500 text-zinc-500"
                    >
                      {link.text}
                    </Text>
                  </li>
                ))}
              </ul>
            </nav>
          ))
        }
      </div>
      <div class="flex flex-col items-center gap-2">
        <Button class="w-full" variant="alternative" gap="xs" size="sm">
          <Apple size="sm" slot="left-icon" />
          <span>Download on App Store</span>
        </Button>
        <Button class="w-full" variant="alternative" gap="xs" size="sm">
          <GooglePlay size="sm" slot="left-icon" />
          <span>Download on Google Play</span>
        </Button>
      </div>
    </div>
    <div
      class="flex flex-col justify-between pt-12 mt-12 border-t gap-8 sm:flex-row sm:items-center border-zinc-200"
    >
      <Text tag="h2" variant="textSM" class="font-medium text-zinc-400">
        Copyright Â© 2024 Oxbow UI. All rights reserved.
      </Text>
      <nav
        aria-labelledby="legal-links"
        role="navigation"
        class="flex items-center text-sm gap-4 text-zinc-500"
      >
        <Text id="legal-links" class="sr-only" tag="h3" variant="footerHeading">
          Legal and terms
        </Text>
        <Text
          href="#_"
          tag="a"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          Terms of Service
        </Text>
        <Text
          href="#_"
          tag="a"
          variant="textBase"
          class="font-medium hover:text-stone-500 text-zinc-500"
        >
          Privacy Policy
        </Text>
      </nav>
    </div>
  </div>
  <!-- copy:end -->
</div>
