---
import Button from "@/components/fundations/buttons/Button.astro";
import Apple from "@/components/fundations/icons/Apple.astro";
import GooglePlay from "@/components/fundations/icons/GooglePlay.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Overview" },
      { href: "#", text: "Pricing" },
      { href: "#", text: "Blog" },
      { href: "#", text: "Shop" },
    ],
  },
];
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="flex flex-col gap-12 sm:flex-row justify-between sm:items-start">
      <div>
        <div>
          <a
            href="#_"
            class="font-medium w-full sm:w-auto group flex gap-3 items-center group-hover:text-accent-600 duration-300 group-hover:animate-pulse"
            ><img
              class="h-7 2xl:h-12"
              src="/images/oxbow/blueLineLogo.png"
              alt="#_"
            /> Oxbow UI</a
          >
          <p class="text-sm text-base-500 mt-4">Designed in europe.</p>
        </div>
        {
          footerLinks.map((section, index) => (
            <nav
              class="mt-8"
              aria-labelledby={`footer-heading-${index}`}>
              <ul class=" gap-x-4 flex flex-wrap">
                {section.links.map((link, linkIndex) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-base-600 text-sm md:text-base hover:text-accent-500 duration-300">
                      {link.text}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          ))
        }
      </div>
      <div>
        <p class="text-sm font-medium tracking-tight text-base-900">
          Get started with our app today
        </p>
        <div class="flex flex-col items-center mt-4 gap-2">
          <Button
          class="w-full"
            variant="alternative"
            gap="xs"
            size="sm">
            <Apple
              size="sm"
              slot="left-icon"
            />
            <span>Download on App Store</span>
          </Button>
          <Button
          class="w-full"
            variant="alternative"
            gap="xs"
            size="sm">
            <GooglePlay
              size="sm"
              slot="left-icon"
            />
            <span>Download on Google Play</span>
          </Button>
        </div>
      </div>
    </div>
    <div
      class="pt-12 mt-12 border-t flex flex-col gap-8 sm:flex-row sm:items-center justify-between">
      <p class="border-base-700 text-base-400 text-sm">
        Copyright Â© 2024 Oxbow UI. All rights reserved.
      </p>
      <nav
        aria-labelledby="legal-links"
        role="navigation"
        class="flex items-center gap-4 text-base-500 text-sm">
        <h2
          id="legal-links"
          class="sr-only">
          Legal and terms
        </h2>
        <a
          href="#_"
          class="hover:text-accent-500 duration-300">
          Terms of Service
        </a>
        <a
          href="#_"
          class="hover:text-accent-500 duration-300">
          Privacy Policy
        </a>
      </nav>
    </div>
  </div>
</section>
