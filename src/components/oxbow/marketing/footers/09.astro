---
import Text from "@/components/fundations/typography/Text.astro";

import Button from "@/components/fundations/buttons/Button.astro";
import Apple from "@/components/fundations/icons/Apple.astro";
import GooglePlay from "@/components/fundations/icons/GooglePlay.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Overview" },
      { href: "#", text: "Pricing" },
      { href: "#", text: "Blog" },
      { href: "#", text: "Shop" },
    ],
  },
];
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="flex flex-col gap-12 sm:flex-row justify-between sm:items-start"
    >
      <div>
        <div>
          <Text
            class="w-full sm:w-auto flex gap-3 items-center"
            href="#_"
            tag="a"
            variant="textBase"
            class="hover:text-accent-500 font-medium text-base-500"
          >
            <img
              class="h-7 2xl:h-12"
              src="/images/oxbow/blueLineLogo.png"
              alt="#_"
            /> Oxbow UI
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-500 font-medium">
            Designed in europe.
          </Text>
        </div>
        {
          footerLinks.map((section, index) => (
            <nav class="mt-8" aria-labelledby={`footer-heading-${index}`}>
              <ul class=" gap-x-4 flex flex-wrap">
                {section.links.map((link, linkIndex) => (
                  <li>
                    <Text
                      tag="a"
                      href="#_"
                      variant="textBase"
                      class="hover:text-accent-500 font-medium text-base-500"
                    >
                      {link.text}
                    </Text>
                  </li>
                ))}
              </ul>
            </nav>
          ))
        }
      </div>
      <div class="flex flex-col items-center gap-2">
        <Button class="w-full" variant="alternative" gap="xs" size="sm">
          <Apple size="sm" slot="left-icon" />
          <span>Download on App Store</span>
        </Button>
        <Button class="w-full" variant="alternative" gap="xs" size="sm">
          <GooglePlay size="sm" slot="left-icon" />
          <span>Download on Google Play</span>
        </Button>
      </div>
    </div>
    <div
      class="pt-12 mt-12 border-t flex flex-col gap-8 sm:flex-row sm:items-center justify-between"
    >
      <Text tag="h2" variant="textSM" class="font-medium text-base-400">
        Copyright Â© 2024 Oxbow UI. All rights reserved.
      </Text>
      <nav
        aria-labelledby="legal-links"
        role="navigation"
        class="flex items-center gap-4 text-base-500 text-sm"
      >
        <Text id="legal-links" class="sr-only" tag="h3" variant="footerHeading">
          Legal and terms
        </Text>
        <Text
          href="#_"
          tag="a"
          variant="textBase"
          class="hover:text-accent-500 font-medium text-base-500"
        >
          Terms of Service
        </Text>
        <Text
          href="#_"
          tag="a"
          variant="textBase"
          class="hover:text-accent-500 font-medium text-base-500"
        >
          Privacy Policy
        </Text>
      </nav>
    </div>
  </div>
</section>
