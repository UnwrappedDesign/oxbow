---
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Overview" },
      { href: "#", text: "Pricing" },
      { href: "#", text: "Blog" },
      { href: "#", text: "Marketing" },
      { href: "#", text: "Analytics" },
      { href: "#", text: "Commerce" },
    ],
  },
];
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="flex flex-col gap-8 text-center md:text-left md:flex-row items-center md:items-end justify-between w-full">
      <div class="w-full justify-center md:justify-start">
        <a
          href="#_"
          class="font-medium w-full justify-center md:justify-start sm:w-auto group flex gap-3 items-center group-hover:text-accent-600 duration-300 group-hover:animate-pulse"
          ><img
            class="h-7 2xl:h-12"
            src="/images/oxbow/blueLineLogo.png"
            alt="#_"
          /> Oxbow UI</a
        >
        <p
          class="border-base-700 text-base-400 text-sm mt-2"
                             >
          Copyright Â© 2024 Oxbow UI. All rights reserved.
        </p>
      </div>

      {
        footerLinks.map((section, index) => (
          <nav
            class="flex items-center gap-4 text-base-500 text-sm w-full justify-center md:justify-end"
            aria-labelledby={`footer-heading-${index}`}>
            <h2
              id={`footer-heading-${index}`}
              class="sr-only">
              Legal and terms
            </h2>
            <ul class=" gap-x-4 gap-y-8 flex flex-wrap justify-center">
              {section.links.map((link, linkIndex) => (
                <li>
                  <a
                    href={link.href}
                    class="text-base-600 text-sm md:text-base hover:text-accent-500 duration-300">
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        ))
      }
    </div>
  </div>
</section>
