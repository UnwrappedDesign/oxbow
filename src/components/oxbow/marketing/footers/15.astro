---
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Link from "@/components/fundations/typography/Link.astro";
const footerLinks = [
  {
    heading: "Company ",
    links: [
      { href: "#", text: "About" },
      { href: "#", text: "Overview" },
      { href: "#", text: "Pricing" },
      { href: "#", text: "Blog" },
      { href: "#", text: "Marketing" },
      { href: "#", text: "Analytics" },
    ],
  },
];
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="flex flex-col gap-8 text-center md:text-left md:flex-row items-center md:items-end justify-between w-full">
      <div class="w-full justify-center md:justify-start">
       <Link
        class="w-full sm:w-auto flex gap-3 items-center"
        href="#_"
        tag="a"
        variant="navigationLink">
        <img
          class="h-7 2xl:h-12"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        /> Oxbow UI
    </Link>
      </div>

      {
        footerLinks.map((section, index) => (
          <nav
            class="flex items-center gap-4 text-base-500 text-sm w-full justify-center md:justify-end"
            aria-labelledby={`footer-heading-${index}`}>
            <Heading
              class="sr-only"
              id={`footer-heading-${index}`}
              level={3}
              variant="footerHeading">
              {section.heading}
            </Heading>
            <ul class=" gap-x-4 gap-y-8 flex flex-wrap justify-center">
              {section.links.map((link) => (
                <li>
                  <Link
                      href={link.href}
                      tag="a"
                      variant="navigationLink">
                      {link.text}
                    </Link>
                </li>
              ))}
            </ul>
          </nav>
        ))
      }
    </div>
  </div>
</section>
