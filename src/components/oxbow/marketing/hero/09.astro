---
export const description = "Simple with center text, image and features";

import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
const data = [
  {
    icon: "Filters",
    category: "Live editing",
    text: "Instantly see the result of every change you make.",
  },
  {
    icon: "WaveSquare",
    category: "Autocompletion",
    text: "Spotless will suggest the right classes for you as you type.",
  },
  {
    icon: "ArrowIteration",
    category: "Hide/show classes",
    text: "Hide or show classes to see how your design changes.",
  },
  {
    icon: "Plus",
    category: "Color preview",
    text: "See the color of every class in the autocompletion view.",
  },
];
---

<section>
  <div class="relative px-8 pt-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="overflow-hidden">
      <div class="max-w-xl mx-auto text-center lg:text-balance">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900"
        >
          Stay in the know with our real time notifications that provide instant
          updates.
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 font-medium text-base-500">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
        <div
          class="flex flex-wrap items-center justify-center mx-auto mt-8 gap-2"
        >
          <Button variant="accent" size="sm"> Get started </Button>
          <Button variant="alternative" size="sm"> Learn more </Button>
        </div>
      </div>
      <div class="mx-auto mt-12 lg:mt-24 lg:-mb-48">
        <img class="mx-auto" src="/images/phoneGroup.png" alt="#_" />
      </div>
    </div>
  </div>
</section>
<section class="border-t border-base-200">
  <div class="relative px-8 pb-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <dl
      class="mt-12 text-center grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-y-16"
    >
      {
        data.map((section) => (
          <div>
            <div class="flex flex-col items-center text-accent-500 gap-3">
              {section.icon === "Filters" && (
                <Filters class="text-accent-600" size="base" />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare class="text-accent-600" size="base" />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration class="text-accent-600" size="base" />
              )}
              {section.icon === "Plus" && (
                <Plus class="text-accent-600" size="base" />
              )}
              <dt>
                <Text
                  variant="textLG"
                  tag="h3"
                  class="mt-4 font-medium text-base-900"
                >
                  {section.category}
                </Text>
              </dt>
            </div>
            <dd>
              <Text
                tag="p"
                variant="textBase"
                class="mt-2 font-medium text-base-500"
              >
                {section.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</section>
