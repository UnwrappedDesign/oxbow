---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";

const data = [
  {
    icon: "Filters",
    category: "Innovative Design",
    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience.",
  },
  {
    icon: "WaveSquare",
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows.",
  },
  {
    icon: "ArrowIteration",
    category: "Easy Integration",
    text: "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach.",
  },
];
---

<section class="overflow-hidden">
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 lg:grid-cols-3 items-end gap-12">
      <div class="lg:col-span-2 max-w-2xl">
        <Text
          tag="p"
          variant="eyebrow">
          Tagline
        </Text>
        <Heading
          class="mt-4"
          level={1}
          variant="default">
          Get started today and experience seamless banking on-the-go
        </Heading>
        <Text
          class="mt-4"
          tag="p"
          variant="body">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
      </div>
      <div class="flex flex-wrap items-center gap-2 lg:ml-auto">
        <Button
          variant="accent"
          size="sm">
          Get started
        </Button>
        <Button
          variant="alternative"
          size="sm">
          Learn more
        </Button>
      </div>
    </div>
    <div class="mt-12">
      <img
        class="object-cover h-full rounded-2xl max-h-96 w-full object-top"
        src="/images/dashboardLight.svg"
        alt="#_"
      />
    </div>
    <dl
      class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16 mt-12">
      {
        data.map((section) => (
          <div>
            <div class="text-accent-500 flex gap-3 items-center">
              {section.icon === "Filters" && (
                <Filters
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration
                  class="text-accent-600"
                  size="base"
                />
              )}

              <dt>
                <Heading
                  level={3}
                  variant="featureTitle">
                  {section.category}
                </Heading>
              </dt>
            </div>
            <dd>
              <Text
                class="mt-2"
                tag="p"
                variant="body">
                {section.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</section>
