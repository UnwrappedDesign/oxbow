---
export const description = "Left alinged with features and image";

import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";

const data = [
  {
    icon: "Filters",
    category: "Innovative Design",
    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience.",
  },
  {
    icon: "WaveSquare",
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows.",
  },
  {
    icon: "ArrowIteration",
    category: "Easy Integration",
    text: "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach.",
  },
];
---

<section class="overflow-hidden">
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="grid grid-cols-1 lg:grid-cols-3 items-end gap-12">
      <div class="lg:col-span-2 max-w-2xl">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayBase"
          class="mt-4 font-semibold text-base-900 lg:text-balance"
        >
          Transforming the banking experience for a digital future
        </Text>
        <Text class="mt-4 text-base-500 font-medium" tag="p" variant="textBase">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
      </div>
      <div class="flex flex-wrap items-center gap-2 lg:ml-auto">
        <Button variant="accent" size="sm"> Get started </Button>
        <Button variant="alternative" size="sm"> Learn more </Button>
      </div>
    </div>
    <dl
      class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16 mt-12"
    >
      {
        data.map((section) => (
          <div>
            <div class=" flex gap-3 items-center">
              {section.icon === "Filters" && (
                <Filters class="text-accent-600" size="base" />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare class="text-accent-600" size="base" />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration class="text-accent-600" size="base" />
              )}

              <dt>
                <Text
                  variant="textLG"
                  tag="h3"
                  class="text-base-900 font-medium"
                >
                  {section.category}
                </Text>
              </dt>
            </div>
            <dd>
              <Text
                tag="p"
                variant="textBase"
                class="mt-2 text-base-500 font-medium"
              >
                {section.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
    <div class="mt-12">
      <img
        class="object-cover h-full shadow rounded-xl max-h-96 w-full object-top"
        src="/images/dashboardLight.svg"
        alt="#_"
      />
    </div>
  </div>
</section>
