---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
const logos = [
  {
    src: "/brands/1.svg",
    width: 158,
    height: 48,
  },
  {
    src: "/brands/2.svg",
    width: 158,
    height: 48,
  },
  {
    src: "/brands/3.svg",
    width: 158,
    height: 48,
  },
];
---

<div class="relative">
  <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-24 lg:px-8">
    <div
      class="px-8 pb-24 pt-10 sm:pb-32 lg:col-span-7 lg:px-0 lg:pb-56 lg:pt-48 xl:col-span-6">
      <div class="mx-auto max-w-2xl lg:mx-0 lg:px-12">
        <img
          class="h-20"
          src="/images/oxbow/blueLineLogo.png"
          alt="#_"
        />

        <Heading
          class="mt-12"
          level={1}
          variant="display">
          Make every visitor count
        </Heading>
        <Text
          class="mt-4"
          tag="p"
          variant="body">
          Integrating with existing systems is smooth and hassle-free, thanks to
          our incredible flexible approach. Equipped with advanced features and
          tools, our solution effortlessly manages complex tasks and workflows.
        </Text>


        <div class="flex flex-wrap gap-4 mt-12">
          <Button
            variant="accent"
            size="sm">
            Get started
          </Button>
          <div class="text-sm text-base-500">
            <span class="block">This is some support text</span>
            <span class="block">and this is also.</span>
          </div>
        </div>
        <div
          class="mx-auto grid mt-10 grid-cols-4 items-center gap-x-8 gap-y-10 sm:grid-cols-4 sm:gap-x-10">
          {
            logos.map((logo) => (
              <img
                class={`${logo.colSpan} max-h-12 w-full object-contain `}
                src={logo.src}
                alt="#_"
                width={logo.width}
                height={logo.height}
              />
            ))
          }
        </div>
      </div>
    </div>
    <div
      class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0 lg:border-l">
      <img
        class="aspect-[3/2] w-full bg-base-50 object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full"
        src="/images/dashboardLight.svg"
        alt="#_"
      />
    </div>
  </div>
</div>
