---
export const description = "Split with full height image";
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="relative">
  <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-24 lg:px-8">
    <div
      class="flex flex-col justify-center px-8 py-20 lg:py-62 lg:col-span-7 lg:px-0 xl:col-span-6"
    >
      <div class="z-50 max-w-3xl mx-auto lg:mx-0 lg:px-12">
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 md:text-balance"
        >
          Transforming the bank experience for a digital future
        </Text>
        <div class="flex flex-wrap mt-12 md:items-center gap-4">
          <Button variant="accent" size="sm"> Get started </Button>
          <div class="text-sm font-medium text-base-500 lg:items-center">
            <span class="block"> This is some support text </span>
            <span class="block"> and this is also. </span>
          </div>
        </div>
      </div>
    </div>
    <div
      class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/3 xl:mr-0 lg:border-l border-base-200"
    >
      <img
        class="aspect-[3/2] w-full bg-base-50 object-left object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full"
        src="/images/dashboardLight.svg"
        alt="Dashboard preview"
      />
    </div>
  </div>
</div>
