---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";

---

<div class="relative">
  <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-24 lg:px-8">
    <div
      class="px-8 pb-24 pt-10 sm:pb-32 lg:col-span-7 lg:px-0 lg:pt-96 xl:col-span-6 flex flex-col justify-end">
      <div class="mx-auto max-w-3xl lg:mx-0 lg:px-12 lg:mt-48 z-50">
        <Text
          tag="h2"
          variant="displayXL"
          class="mt-4 font-semibold text-base-900 md:text-balance">
          Transforming the bank experience for a digital future
        </Text>
        <div class="flex flex-wrap lg:items-center gap-4 mt-12">
          <Button
            variant="accent"
            size="sm">
            Get started
          </Button>
          <div class="text-sm text-base-500 font-medium lg:items-center">
            <Text
              tag="span"
              class="block"
              variant="textMD">
              This is some support text
            </Text>
            <Text
              tag="span"
              class="block"
              variant="textMD">
              and this is also.
            </Text>
          </div>
        </div>
      </div>
    </div>
    <div
      class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/3 xl:mr-0 lg:border-l">
      <img
        class="aspect-[3/2] w-full bg-base-50 object-left object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full"
        src="/images/dashboardLight.svg"
        alt="Dashboard preview"
      />
    </div>
  </div>
</div>
