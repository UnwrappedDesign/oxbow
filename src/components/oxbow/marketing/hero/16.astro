---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
const data = [
  {
    icon: "Filters",
    category: "Live editing",
    text: "Instantly see the result of every change you make.",
  },
  {
    icon: "WaveSquare",
    category: "Autocompletion",
    text: "Spotless will suggest the right classes for you as you type.",
  },
  {
    icon: "ArrowIteration",
    category: "Hide/show classes",
    text: "Hide or show classes to see how your design changes.",
  },
  {
    icon: "Plus",
    category: "Color preview",
    text: "See the color of every class in the autocompletion view.",
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl text-center mx-auto lg:text-balance">
      <Text
        tag="span"
        variant="eyebrow">
        Tagline
      </Text>
      <Heading
        class="mt-12"
        level={1}
        variant="default">
        Stay in the know with our real time notifications that provide instant
        updates.
      </Heading>
      <Text
        class="mt-4"
        tag="p"
        variant="body">
        Integrating with existing systems is smooth and hassle-free, thanks to
        our incredible flexible approach.
      </Text>
      <div
        class="flex flex-wrap items-center gap-2 justify-center mx-auto mt-12">
        <Button
          variant="accent"
          size="sm">
          Get started
        </Button>
        <Button
          variant="alternative"
          size="sm">
          Learn more
        </Button>
      </div>
    </div>
    <div class="mx-auto mt-12 lg:mt-24">
      <img
        class="mx-auto"
        src="/images/phoneReal1.png"
        alt="#_"
      />
    </div>
    <dl
      class="grid grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-y-16 mt-12 text-center">
      {
        data.map((section) => (
          <div>
            <div class="text-accent-500 flex flex-col gap-3 items-center">
              {section.icon === "Filters" && (
                <Filters
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "Plus" && (
                <Plus
                  class="text-accent-600"
                  size="base"
                />
              )}

              <dt class="">
                <Heading
                  level={3}
                  variant="featureTitle">
                  {section.category}
                </Heading>
              </dt>
            </div>
            <Text
              class="mt-2"
              tag="dd"
              variant="body">
              {section.text}
            </Text>
          </div>
        ))
      }
    </dl>
  </div>
</section>
