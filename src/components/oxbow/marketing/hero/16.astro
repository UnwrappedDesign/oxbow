---
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="relative">
  <div class="mx-auto max-w-screen lg:grid lg:grid-cols-12 lg:px-8">
    <div
      class="px-8 py-12 lg:col-span-full z-50 lg:px-0 lg:pt-[35rem] flex flex-col justify-end"
    >
      <Text
        tag="h2"
        variant="display5XL"
        class="font-black text-base-900 md:text-balance"
      >
        The fastest
      </Text>
      <Text
        tag="h2"
        variant="display5XL"
        class="font-semibold text-base-900 md:text-balance mix-blend-difference"
      >
        Transforming
      </Text>
    </div>
    <div
      class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0"
    >
      <img
        class="aspect-[3/2] w-full bg-base-50 object-left object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full"
        src="/pose/5.png"
        alt="Dashboard preview"
      />
    </div>
  </div>
</div>
