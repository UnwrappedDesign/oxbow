---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div class="px-8 pt-12 pb-48 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div class="md:col-span-2">
        <Text
          tag="h2"
          variant="displayXL"
          class="mt-4 font-semibold text-base-900 lg:text-balance">
          Transforming the banking experience for a digital future
        </Text>
      </div>
      <div>
        <Text
          class="mt-4 text-base-500 font-medium"
          tag="p"
          variant="textBase">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
        <div class="flex flex-wrap items-center gap-2 mx-auto mt-8">
          <Button
            variant="accent"
            size="sm">
            Get started
          </Button>
          <Button
            variant="alternative"
            size="sm">
            Learn more
          </Button>
        </div>
      </div>
    </div>
  </div>
  <div class="mx-auto mt-12 max-w-screen w-full">
    <img
      class="mx-auto object-cover size-full max-h-[40rem] border-t object-top"
      src="/images/dashboardLight.svg"
      alt="#_"
    />
  </div>
</section>
