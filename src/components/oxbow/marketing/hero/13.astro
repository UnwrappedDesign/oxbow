---
export const description = "Centered aligned with overflowing images";
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section class="overflow-hidden">
  <div class="px-8 pt-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl text-center mx-auto lg:text-balance">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600"
      >
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayBase"
        class="mt-4 font-semibold text-base-900"
      >
        Transforming the banking experience for a digital future
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 text-base-500 font-medium">
        The fastest method for working together on staging and temporary
        environments.
      </Text>
      <div
        class="flex flex-wrap items-center gap-2 justify-center mx-auto mt-8"
      >
        <Button variant="accent" size="sm"> Get started </Button>
        <Button variant="alternative" size="sm"> Learn more </Button>
      </div>
    </div>
  </div>
  <div class="mt-16 sm:mt-20">
    <div class="-my-4 flex justify-center gap-5 overflow-hidden py-4 sm:gap-8">
      <div
        class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-t-xl sm:w-96 sm:rounded-t-2xl h-auto"
      >
        <img
          class="absolute inset-0 h-full w-full object-cover"
          src="/avatars/2.jpg"
        />
      </div>
      <div
        class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-t-xl sm:w-96 sm:rounded-t-2xl h-auto"
      >
        <img
          class="absolute inset-0 h-full w-full object-cover"
          src="/avatars/3.jpg"
        />
      </div>
      <div
        class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-t-xl sm:w-96 sm:rounded-t-2xl h-auto"
      >
        <img
          class="absolute inset-0 h-full w-full object-cover"
          src="/avatars/4.jpg"
        />
      </div>
      <div
        class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-t-xl sm:w-96 sm:rounded-t-2xl h-auto"
      >
        <img
          class="absolute inset-0 h-full w-full object-cover"
          src="/avatars/5.jpg"
        />
      </div>
      <div
        class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-t-xl sm:w-96 sm:rounded-t-2xl h-auto"
      >
        <img
          class="absolute inset-0 h-full w-full object-cover"
          src="/avatars/6.jpg"
        />
      </div>
    </div>
  </div>
</section>
