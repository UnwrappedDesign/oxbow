---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
const data = [
  {
    icon: "Filters",
    category: "Live editing",
    text: "Instantly see the result of every change you make.",
  },
  {
    icon: "WaveSquare",
    category: "Autocompletion",
    text: "Spotless will suggest the right classes for you as you type.",
  },
  {
    icon: "ArrowIteration",
    category: "Hide/show classes",
    text: "Hide or show classes to see how your design changes.",
  },
  {
    icon: "Plus",
    category: "Color preview",
    text: "See the color of every class in the autocompletion view.",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-xl">
      <Text
        tag="span"
        variant="eyebrow">
        Tagline
      </Text>
      <Heading
        class="mt-4"
        level={1}
        variant="default">
        Transforming the banking experience for a digital future
      </Heading>
      <div class="flex flex-wrap gap-4 mt-8">
        <Button
          variant="accent"
          size="sm">
          Get started
        </Button>
        <div class="text-sm text-base-500">
          <span class="block">This is some support text</span>
          <span class="block">and this is also.</span>
        </div>
      </div>
    </div>
    <dl
      class="grid grid-cols-2 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-y-16 mt-12">
      {
        data.map((section) => (
          <div>
            <div class="text-accent-500 flex gap-3 items-center">
              {section.icon === "Filters" && (
                <Filters
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "WaveSquare" && (
                <WaveSquare
                  class="text-accent-600"
                  size="base"
                />
              )}
              {section.icon === "ArrowIteration" && (
                <ArrowIteration
                  class="text-accent-600"
                  size="base"
                />
              )}
               {section.icon === "Plus" && (
                <Plus
                  class="text-accent-600"
                  size="base"
                />
              )}

              <dt class="">
                <Heading
                  level={3}
                  variant="featureTitle">
                  {section.category}
                </Heading>
              </dt>
            </div>
            <Text
              class="mt-2"
              tag="dd"
              variant="body">
              {section.text}
            </Text>
          </div>
        ))
      }
    </dl>

  </div>
</section>
