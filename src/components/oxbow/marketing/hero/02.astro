---
import Button from "@/components/fundations/buttons/Button.astro";
import Heading from "@/components/fundations/typography/Heading.astro";
const data = [
  {
    category: "Innovative Design",
    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience. ",
    items: ["Revolutionizing communication", "Enhancing productivity"],
  },
  {
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows. ",
    items: ["Unlocking innovative solutions", "Enabling interoperability"],
  },
  {
    category: "Easy Integration",
    text: "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach. ",
    items: ["Streamlining operations", "Simplifying implementation"],
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="max-w-3xl">
      <span
        class="text-accent-600 uppercase font-mono font-medium tracking-tight text-xs">
        Tagline
      </span>
      <Heading
        class="mt-8"
        level={1}>
        Make every visitor count</Heading
      >

      <div class="flex flex-wrap gap-4 mt-8">
        <Button
          variant="accent"
          size="sm">
          Get started
        </Button>
        <div class="text-sm text-base-500">
          <span class="block">This is some support text</span>
          <span class="block">and this is also.</span>
        </div>
      </div>
    </div>
    <div class="mx-auto mt-12">
      <img
        class="mx-auto object-cover h-full border shadow rounded-2xl"
        src="/images/dashboardLight.svg"
        alt="#_"
      />
    </div>
    <div
      class="gap-x-2 gap-y-14 mt-12 lg:gap-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      {
        data.map((section) => (
          <div>
            <div>
              <p class="tracking-tight text-lg font-medium  text-base-900">
                {section.category}
              </p>
              <p class="mt-2 text-sm text-base-500 text-pretty">
                {section.text}
              </p>
            </div>
            <ul
              role="list"
              class="space-y-1 mt-6 text-base font-medium text-base-900 list-none">
              {section.items.map((item, idx) => (
                <li class="list-none">
                  <div class=" flex  items-center gap-4 ">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="icon icon-tabler icon-tabler-circle-check-filled text-accent-600"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      />
                      <path
                        d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z"
                        stroke-width="0"
                        fill="currentColor"
                      />
                    </svg>
                    <span class="text-base-700 text-base">{item}</span>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
