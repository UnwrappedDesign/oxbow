---
export const description = "Left aligned with imaged";
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
const data = [
  {
    category: "Innovative Design",
    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience. ",
    items: ["Revolutionizing communication", "Enhancing productivity"],
  },
  {
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows. ",
    items: ["Unlocking innovative solutions", "Enabling interoperability"],
  },
  {
    category: "Easy Integration",
    text: "Integrating with existing systems is smooth and hassle-free, thanks to our incredible flexible approach. ",
    items: ["Streamlining operations", "Simplifying implementation"],
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="items-end grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2">
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-4 font-semibold text-base-900 lg:text-balance"
        >
          Transforming the banking experience for a digital future
        </Text>
        <Text class="mt-4 font-medium text-base-500" tag="p" variant="textBase">
          The fastest method for working together on staging and temporary
          environments.
        </Text>
      </div>
      <div class="flex flex-wrap mt-8 sm:items-center gap-4">
        <Button variant="accent" size="sm"> Get started </Button>
        <div class="text-sm font-medium text-base-500 lg:items-center">
          <span class="block"> This is some support text </span>
          <span class="block"> and this is also. </span>
        </div>
      </div>
    </div>
    <div class="mx-auto mt-12">
      <img
        class="object-cover h-full mx-auto shadow rounded-2xl"
        src="/images/dashboardLight.svg"
        alt="#_"
      />
    </div>
    <div
      class="mt-12 gap-x-2 gap-y-14 lg:gap-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        data.map((section) => (
          <div>
            <div>
              <Text
                variant="textLG"
                tag="h3"
                class="font-medium  text-base-900"
              >
                {section.category}
              </Text>
              <Text
                tag="p"
                variant="textBase"
                class="mt-4 font-medium text-base-500"
              >
                {section.text}
              </Text>
            </div>
            <ul
              role="list"
              class="mt-6 text-base font-medium space-y-1 text-base-900"
            >
              {section.items.map((item, idx) => (
                <li>
                  <div class="flex items-center  gap-4">
                    <CircleCheck
                      class="text-accent-600"
                      size="base"
                      slot="icon"
                    />
                    <Text tag="span" variant="textBase">
                      {item}
                    </Text>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
