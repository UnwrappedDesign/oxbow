---
export const freeComponent = true;
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<div class="p-8">
  <!-- copy:start -->
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 gap-2 lg:items-center lg:grid-cols-2">
      <div
        class="relative flex flex-col items-center justify-center h-full p-8 overflow-hidden text-center bg-zinc-50 rounded-2xl lg:p-12"
      >
        <div class="relative items-center text-balance">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-blue-600"
          >
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="displayMD"
            class="mt-4 font-semibold text-zinc-900"
          >
            Transforming the banking experience for a digital future
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-2 font-medium text-zinc-600"
          >
            The fastest method for working together on staging and temporary
            environments.
          </Text>
          <div
            class="flex flex-wrap items-center justify-center mx-auto mt-8 gap-2"
          >
            <Button variant="accent" size="sm"> Get started </Button>
            <Button variant="alternative" size="sm"> Learn more </Button>
          </div>
        </div>
      </div>
      <div class="h-full grid grid-cols-1 gap-2 lg:grid-cols-2">
        <div
          class="relative flex flex-col justify-between h-full overflow-hidden bg-zinc-50 rounded-2xl"
        >
          <div class="relative p-8">
            <Text
              tag="p"
              variant="textXS"
              class="font-bold uppercase text-blue-600"
            >
              Tagline
            </Text>
            <Text
              tag="h3"
              variant="textLG"
              class="mt-4 font-medium text-zinc-900"
            >
              Schedule
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="mt-2 font-medium text-zinc-500"
            >
              Schedule your integrations effortlessly and automate tasks for
              seamless workflows.
            </Text>
          </div>
          <div class="ml-8 -mb-4 lg:absolute -bottom-4 -right-8">
            <img
              class="h-full shadow rounded-l-xl"
              src="/widgets/calendar.svg"
              alt=""
            />
          </div>
        </div>
        <div
          class="h-full grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-1"
        >
          <div
            class="relative flex items-center justify-center h-full p-8 overflow-hidden text-center bg-zinc-50 rounded-2xl"
          >
            <div>
              <img
                class="h-12 mx-auto"
                src="/images/oxbow/oxbowLogo.png"
                alt="#_"
              />
              <Text
                tag="h3"
                variant="textLG"
                class="mt-4 font-medium text-zinc-900"
              >
                Connect your app
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500"
              >
                Connection secure, fast and easy. You can disconnect at any
                time.
              </Text>
              <div class="flex justify-center mt-8">
                <Button size="sm" variant="alternative" class="">
                  See our integrations
                </Button>
              </div>
            </div>
          </div>

          <div class="p-8 bg-zinc-50 rounded-2xl">
            <Text
              tag="p"
              variant="textXS"
              class="font-bold uppercase text-blue-600"
            >
              Tagline
            </Text>
            <Text
              tag="h3"
              variant="textLG"
              class="mt-4 font-medium text-zinc-900"
            >
              Easy Integration
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="mt-2 font-medium text-zinc-500"
            >
              Integrating with existing systems is smooth and hassle-free,
              thanks to our incredible flexible approach.
            </Text>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- copy:end -->
</div>
