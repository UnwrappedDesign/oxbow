---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";

const data = [
  { src: "/integrations/1.svg", alt: "integration 1" },
  { src: "/integrations/2.svg", alt: "integration 2" },
  { src: "/integrations/3.svg", alt: "integration 3" },
  { src: "/integrations/4.svg", alt: "integration 4" },
  { src: "/integrations/5.svg", alt: "integration 5" },
  { src: "/integrations/6.svg", alt: "integration 6" },
  { src: "/integrations/7.svg", alt: "integration 7" },
  { src: "/integrations/8.svg", alt: "integration 8" },
  { src: "/integrations/9.svg", alt: "integration 9" },
  { src: "/integrations/10.svg", alt: "integration 10" },
  { src: "/integrations/11.svg", alt: "integration 11" },
  { src: "/integrations/12.svg", alt: "integration 12" },
  { src: "/integrations/13.svg", alt: "integration 13" },
  { src: "/integrations/14.svg", alt: "integration 14" },
  { src: "/integrations/15.svg", alt: "integration 15" },
  { src: "/integrations/16.svg", alt: "integration 16" },
  { src: "/integrations/17.svg", alt: "integration 17" },
  { src: "/integrations/18.svg", alt: "integration 18" },
  { src: "/integrations/19.svg", alt: "integration 19" },
  { src: "/integrations/20.svg", alt: "integration 20" },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-20">
    <div class="h-full grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-4">
      <div
        class="relative flex flex-col items-center justify-center p-8 overflow-hidden text-center shadow lg:py-20 bg-linear-180 outline outline-blue-100 dark:outline-blue-800 from-blue-50 to-blue-100 dark:from-blue-800 dark:to-blue-900 rounded-xl md:col-span-2"
      >
        <div class="relative items-center text-balance">
          <Text
            tag="h3"
            variant="displayMD"
            class="font-semibold text-zinc-900 dark:text-white"
          >
            Build, launch, and grow together
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-2 font-medium text-zinc-600 dark:text-zinc-400"
          >
            Collaborate in real time, streamline your workflow, and accelerate
            your team's success with our unified platform.
          </Text>
          <div
            class="flex flex-wrap items-center justify-center mx-auto mt-8 gap-2"
          >
            <Button variant="accent" size="sm"> Get started </Button>
            <Button variant="muted" size="sm"> Learn more </Button>
          </div>
        </div>
      </div>
      <div
        class="flex flex-col justify-between h-full shadow lg:col-span-1 bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl"
      >
        <div class="w-full p-8">
          <Text
            tag="span"
            variant="textBase"
            class="font-medium text-zinc-900 dark:text-white"
          >
            Analytics
          </Text>
        </div>
        <div class="p-8 border-t border-zinc-200 dark:border-white/10">
          <Text
            tag="h3"
            variant="textBase"
            class="font-medium text-zinc-900 dark:text-white"
          >
            Insights at a glance
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
          >
            Visualize your data instantly and make informed decisions with
            clear, actionable reports.
          </Text>
        </div>
      </div>
      <div
        class="relative flex flex-col justify-between h-full overflow-hidden shadow bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl"
      >
        <div class="relative p-8">
          <Kicker> Scheduling </Kicker>
          <Text
            tag="h3"
            variant="textBase"
            class="mt-4 font-medium text-zinc-900 dark:text-white"
          >
            Smart scheduling
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 font-medium text-zinc-500">
            Automate your calendar and let our platform handle reminders, so you
            can focus on what matters most.
          </Text>
        </div>
        <div class="ml-8 -bottom-2 -right-8">
          <img
            class="w-full h-full shadow rounded-tl-xl"
            src="/widgets/performance.svg"
            alt=""
          />
        </div>
      </div>
      <div
        class="relative flex flex-col justify-between h-full overflow-hidden shadow bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl"
      >
        <div class="relative p-8">
          <Kicker> Workflows </Kicker>
          <Text
            tag="h3"
            variant="textBase"
            class="mt-4 font-medium text-zinc-900 dark:text-white"
          >
            Custom workflows
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 font-medium text-zinc-500">
            Design processes that fit your needs and adapt as your business
            grows, all in one place.
          </Text>
        </div>
        <div class="ml-8 -bottom-2 -right-8">
          <img
            class="w-full h-full shadow rounded-tl-xl"
            src="/widgets/hits.svg"
            alt=""
          />
        </div>
      </div>
      <div
        class="relative flex flex-col justify-between h-full overflow-hidden shadow bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl"
      >
        <div class="relative p-8">
          <Kicker> Automation </Kicker>
          <Text
            tag="h3"
            variant="textBase"
            class="mt-4 font-medium text-zinc-900 dark:text-white"
          >
            Seamless automation
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 font-medium text-zinc-500">
            Let repetitive tasks run in the background while you focus on
            creative and strategic work.
          </Text>
        </div>
        <div class="ml-8 -bottom-2 -right-8">
          <img
            class="w-full h-full shadow rounded-tl-xl"
            src="/widgets/traffic.svg"
            alt=""
          />
        </div>
      </div>
      <div
        class="flex flex-col items-center justify-center p-8 overflow-hidden text-center shadow bg-linear-180 outline outline-blue-100 dark:outline-blue-800 from-blue-50 to-blue-100 dark:from-blue-800 dark:to-blue-900 rounded-xl md:col-span-2 lg:p-12"
      >
        <div class="flex flex-col w-full max-w-6xl gap-8">
          {/* max-w-6xl to control the maximum width */}
          {/* First row */}
          <div class="flex items-center justify-center gap-12">
            {/* Changed justify-between to justify-center and added gap */}
            {
              data
                .slice(0, 6)
                .map((item) => (
                  <img
                    class="w-auto h-12 bg-white shadow lg:h-32 rounded-2xl"
                    alt={item.alt}
                    src={item.src}
                  />
                ))
            }
          </div>
          {/* Second row */}
          <div class="flex items-center justify-center gap-12">
            {/* Added gap */}
            {
              data
                .slice(6, 12)
                .map((item) => (
                  <img
                    class="w-auto h-12 bg-white shadow lg:h-32 rounded-2xl"
                    alt={item.alt}
                    src={item.src}
                  />
                ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
