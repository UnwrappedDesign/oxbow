---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
const data = [
  { src: "/integrations/1.svg", alt: "integration 1" },
  { src: "/integrations/2.svg", alt: "integration 2" },
  { src: "/integrations/3.svg", alt: "integration 3" },
  { src: "/integrations/4.svg", alt: "integration 4" },
  { src: "/integrations/5.svg", alt: "integration 5" },
  { src: "/integrations/6.svg", alt: "integration 6" },
  { src: "/integrations/7.svg", alt: "integration 7" },
  { src: "/integrations/8.svg", alt: "integration 8" },
  { src: "/integrations/9.svg", alt: "integration 9" },
  { src: "/integrations/10.svg", alt: "integration 10" },
  { src: "/integrations/11.svg", alt: "integration 11" },
  { src: "/integrations/12.svg", alt: "integration 12" },
  { src: "/integrations/13.svg", alt: "integration 13" },
  { src: "/integrations/14.svg", alt: "integration 14" },
  { src: "/integrations/15.svg", alt: "integration 15" },
  { src: "/integrations/16.svg", alt: "integration 16" },
  { src: "/integrations/17.svg", alt: "integration 17" },
  { src: "/integrations/18.svg", alt: "integration 18" },
  { src: "/integrations/19.svg", alt: "integration 19" },
  { src: "/integrations/20.svg", alt: "integration 20" },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-4 h-full">
      <div
        class="bg-base-50 relative p-8 rounded-2xl md:col-span-2 text-center flex flex-col justify-center items-center lg:p-12 overflow-hidden"
      >
        <div class="relative items-center text-balance">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600"
          >
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="displayBase"
            class="mt-4 text-base-900 font-semibold"
          >
            Transforming the banking experience for a digital future
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-2 text-base-600 font-medium"
          >
            The fastest method for working together on staging and temporary
            environments.
          </Text>
          <div
            class="flex flex-wrap justify-center items-center gap-2 mx-auto mt-8"
          >
            <Button variant="accent" size="sm"> Get started </Button>
            <Button variant="alternative" size="sm"> Learn more </Button>
          </div>
        </div>
      </div>
      <div
        class="bg-base-50 rounded-2xl flex flex-col h-full justify-between relative overflow-hidden"
      >
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600"
          >
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium"
          >
            Easy Integration
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-500 font-medium">
            Integrating with existing systems is smooth and hassle-free, thanks
            to our incredible flexible approach.
          </Text>
        </div>
        <div class="-bottom-2 -right-8 ml-8">
          <img
            class="rounded-tl-xl shadow h-full w-full"
            src="/widgets/device.svg"
            alt=""
          />
        </div>
      </div>
      <div
        class="bg-base-50 rounded-2xl flex flex-col h-full justify-between relative overflow-hidden"
      >
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600"
          >
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium"
          >
            Schedule
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-500 font-medium">
            Schedule your integrations effortlessly and automate tasks for
            seamless workflows.
          </Text>
        </div>
        <div class="-bottom-2 -right-8 ml-8">
          <img
            class="rounded-tl-xl shadow h-full w-full"
            src="/widgets/performance.svg"
            alt=""
          />
        </div>
      </div>
      <div
        class="bg-base-50 rounded-2xl flex flex-col h-full justify-between relative overflow-hidden"
      >
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600"
          >
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium"
          >
            Functionality
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-500 font-medium">
            Equipped with advanced features and tools, our solution effortlessly
            manages complex tasks and workflows.
          </Text>
        </div>
        <div class="-bottom-2 -right-8 ml-8">
          <img
            class="rounded-tl-xl shadow h-full w-full"
            src="/widgets/hits.svg"
            alt=""
          />
        </div>
      </div>
      <div
        class="bg-base-50 rounded-2xl flex flex-col h-full justify-between relative overflow-hidden"
      >
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600"
          >
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium"
          >
            Functionality
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-500 font-medium">
            Equipped with advanced features and tools, our solution effortlessly
            manages complex tasks and workflows.
          </Text>
        </div>
        <div class="-bottom-2 -right-8 ml-8">
          <img
            class="rounded-tl-xl shadow h-full w-full"
            src="/widgets/traffic.svg"
            alt=""
          />
        </div>
      </div>
      <div
        class="bg-base-50 rounded-2xl overflow-hidden md:col-span-2 text-center flex flex-col justify-center items-center p-8 lg:p-12"
      >
        <div class="flex flex-col gap-8 w-full max-w-6xl">
          {/* max-w-6xl to control the maximum width */}
          {/* First row */}
          <div class="flex justify-center items-center gap-12">
            {/* Changed justify-between to justify-center and added gap */}
            {
              data
                .slice(0, 6)
                .map((item) => (
                  <img
                    class="w-auto lg:h-32 h-12 rounded-2xl shadow bg-white"
                    alt={item.alt}
                    src={item.src}
                  />
                ))
            }
          </div>
          {/* Second row */}
          <div class="flex justify-center items-center gap-12">
            {/* Added gap */}
            {
              data
                .slice(6, 12)
                .map((item) => (
                  <img
                    class="w-auto lg:h-32 h-12 rounded-2xl shadow bg-white"
                    alt={item.alt}
                    src={item.src}
                  />
                ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
