---
import Text from "@/components/fundations/typography/Text.astro";
---

<section class="bg-white dark:bg-black">

  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="grid grid-cols-1 gap-2 lg:grid-cols-2">
      <div class="h-full grid grid-cols-1 gap-2">
        <img
          src="/widgets/figmaComp.svg"
          alt="#_"
          class="shadow size-full rounded-2xl"
        />
        <div class="h-full grid grid-cols-1 gap-2 sm:grid-cols-2">
          <div class="flex flex-col gap-2">
            <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
              <img
                src="/widgets/spiral.svg"
                alt="#_"
                class="shadow size-full rounded-2xl"
              />
              <img
                src="/widgets/miniprogress.svg"
                alt="#_"
                class="shadow size-full rounded-2xl"
              />
            </div>
            <div
              class="relative flex items-center justify-center h-full p-8 overflow-hidden bg-zinc-50 dark:bg-zinc-900 rounded-2xl"
            >
              <div>
                <Text
                  tag="p"
                  variant="textXS"
                  class="font-bold uppercase text-blue-600 dark:text-blue-400"
                >
                  Tagline
                </Text>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="mt-4 font-medium text-zinc-900 dark:text-white"
                >
                  Easy Integration
                </Text>
                <Text
                  tag="p"
                  variant="textSM"
                  class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
                >
                  Integrating with existing systems is smooth and hassle-free,
                  thanks to our incredible flexible approach.
                </Text>
              </div>
            </div>
          </div>
          <div
            class="flex flex-col justify-between h-full lg:col-span-1 bg-zinc-50 dark:bg-zinc-900 rounded-3xl"
          >
            <div class="p-8 border-t">
              <Text
                tag="h3"
                variant="textLG"
                class="font-medium text-zinc-900 dark:text-white"
              >
                Dedication
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                Weâ€™re dedicated to delivering outstanding service and value.
              </Text>
            </div>
            <div class="order-first w-full p-8">
              <Text tag="p" variant="textLG" class="font-medium text-blue-700">
                100
              </Text>
            </div>
          </div>
        </div>
      </div>
      <div class="flex flex-col gap-2">
        <div class="h-full grid grid-cols-1 gap-2 lg:grid-cols-2">
          <div
            class="relative flex flex-col justify-between h-full overflow-hidden bg-zinc-50 dark:bg-zinc-900 rounded-2xl"
          >
            <div class="relative p-8 mt-auto">
              <Text
                tag="p"
                variant="textXS"
                class="font-bold uppercase text-blue-600 dark:text-blue-400"
              >
                Tagline
              </Text>
              <Text
                tag="h3"
                variant="textLG"
                class="mt-4 font-medium text-zinc-900 dark:text-white"
              >
                Functionality
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
              >
                Equipped with advanced features and tools, our solution
                effortlessly manages complex tasks and workflows.
              </Text>
            </div>
            <div class="ml-8 -mb-4 lg:absolute -top-2 -right-8">
              <img
                class="w-full h-full shadow rounded-l-xl"
                src="/widgets/progressCircles.svg"
                alt=""
              />
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <div
              class="relative flex items-center justify-center h-full p-8 overflow-hidden bg-zinc-50 dark:bg-zinc-900 rounded-2xl"
            >
              <div>
                <Text
                  tag="p"
                  variant="textXS"
                  class="font-bold uppercase text-blue-600 dark:text-blue-400"
                >
                  Tagline
                </Text>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="mt-4 font-medium text-zinc-900 dark:text-white"
                >
                  Schedule
                </Text>
                <Text
                  tag="p"
                  variant="textSM"
                  class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
                >
                  Schedule your integrations effortlessly and automate tasks for
                  seamless workflows.
                </Text>
              </div>
            </div>
            <img
              src="/widgets/calendar.svg"
              alt="#_"
              class="shadow size-full rounded-2xl"
            />
          </div>
        </div>
        <img
          src="/widgets/figmaComp2.svg"
          alt="#_"
          class="shadow size-full rounded-2xl"
        />
      </div>
    </div>
  </div>

</section>
