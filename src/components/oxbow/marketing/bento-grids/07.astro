---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";

---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="text-center">
      <Text
        tag="p"
        variant="textSM"
        class="font-bold uppercase text-accent-600">
        Tagline
      </Text>
      <Text
        tag="h2"
        variant="displayXL"
        class="mt-4 font-semibold text-base-900 lg:text-balance">
        Transforming the banking experience for a digital future
      </Text>
      <Text
        class="mt-4 text-base-500 font-medium"
        tag="p"
        variant="textBase">
        The fastest method for working together on staging and temporary
        environments.
      </Text>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-2 lg:grid-cols-6 mt-12">
      <!-- Large box spanning 2x2 -->
      <div
        class="bg-gray-50 overflow-hidden rounded-2xl md:col-span-2 md:row-span-2 flex flex-col h-full justify-between">
        <div class="-top-2  mx-8">
          <img
            class="rounded-b-xl shadow h-full w-full"
            src="/widgets/activity.svg"
            alt=""
          />
        </div>
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600">
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium">
            Easy Integration
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 font-medium">
            Integrating with existing systems is smooth and hassle-free, thanks
            to our incredible flexible approach.
          </Text>
        </div>
      </div>

      <!-- Tall box spanning 3 rows -->
      <img
        class="rounded-2xl shadow size-full"
        src="/widgets/hits.svg"
        alt="#_"
      />

      <!-- Regular box -->
      <img
        class="rounded-2xl md:row-span-1 lg:row-span-1 shadow size-full"
        src="/widgets/device.svg"
        alt="#_"
      />

      <!-- Wide box spanning 2 columns -->
      <div
        class="bg-base-50 p-8 text-center rounded-2xl md:col-span-2 flex flex-col h-full justify-center relative overflow-hidden">
        <div>
          <img
            class="h-12 mx-auto"
            src="/images/oxbow/windLogo.png"
            alt="#_"
          />
          <Text
            tag="h3"
            variant="textXL"
            class="mt-4 text-base-900 font-medium">
            Connect your app
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-2 text-base-500 font-medium">
            Connection secure, fast and easy. You can disconnect at any time.
          </Text>
          <div class="mt-8 justify-center flex">
            <Button
              size="sm"
              variant="alternative"
              class="">
              See our integrations
            </Button>
          </div>
        </div>
      </div>

      <!-- Tall box spanning 2 rows -->
      <div
        class="bg-gray-50 overflow-hidden rounded-2xl md:row-span-2 flex flex-col h-full justify-between lg:col-span-2">
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600">
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium">
            Easy Integration
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 font-medium">
            Integrating with existing systems is smooth and hassle-free, thanks
            to our incredible flexible approach.
          </Text>
        </div>
        <div class="-bottom-2  mx-8">
          <img
            class="rounded-t-xl shadow h-full w-full"
            src="/widgets/activity.svg"
            alt=""
          />
        </div>
      </div>

      <!-- Regular boxes -->
      <div
        class="bg-gray-50 overflow-hidden rounded-2xl md:row-span-2 flex flex-col h-full justify-between lg:col-span-2">
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600">
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium">
            Schedule
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 font-medium">
            Schedule your integrations effortlessly and automate tasks for
            seamless workflows.
          </Text>
        </div>
        <div class="-bottom-2 - mx-8">
          <img
            class="rounded-t-xl shadow h-full w-full"
            src="/widgets/report.svg"
            alt=""
          />
        </div>
      </div>
      <img src="/widgets/progressCircles.svg" alt="#_" class="size-full shadow rounded-2xl lg:col-span-2" />

      <!-- Wide box spanning 3 columns -->
      <div
        class="bg-base-50 rounded-2xl md:col-span-3 flex flex-col h-full justify-center relative overflow-hidden">
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600">
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium">
            Persistence
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-base-500 font-medium">
            Spotless will remember all your changes to every element so you can
            copy all changes at once!
          </Text>
        </div>
      </div>

      <!-- Regular boxes -->
      <div class="bg-gray-50 p-8 rounded-2xl lg:col-span-2">
        <Text
          tag="p"
          variant="textXS"
          class="font-bold uppercase text-accent-600">
          Tagline
        </Text>
        <Text
          tag="h3"
          variant="textLG"
          class="mt-4 text-base-900 font-medium">
          Schedule
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="mt-2 text-base-500 font-medium">
          Schedule your integrations effortlessly and automate tasks for
          seamless workflows.
        </Text>
      </div>
      <img
        src="/widgets/calendar.svg"
        alt="#_"
        class="size-full shadow rounded-2xl col-span-full lg:col-span-1"
      />
    </div>
  </div>
</section>
