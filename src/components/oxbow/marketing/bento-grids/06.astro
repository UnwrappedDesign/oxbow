---
import Button from "@/components/fundations/buttons/Button.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";
import Text from "@/components/fundations/typography/Text.astro";
const listItems = ["Revolutionizing communication", "Enhancing productivity"];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-24">
    <div class="grid grid-cols-1 gap-2 lg:grid-cols-3 lg:grid-rows-3">
      <div
        class="relative flex items-center justify-center h-full p-8 overflow-hidden text-center bg-zinc-50 dark:bg-zinc-900 rounded-2xl"
      >
        <div>
          <img
            class="h-12 mx-auto"
            src="/images/oxbow/oxbowLogo.png"
            alt="#_"
          />
          <Text
            tag="h3"
            variant="textXL"
            class="mt-4 font-medium text-zinc-900 dark:text-white"
          >
            Connect your app
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
          >
            Connection secure, fast and easy. You can disconnect at any time.
          </Text>
          <div class="flex justify-center mt-8">
            <Button size="sm" variant="alternative" class="">
              See our integrations
            </Button>
          </div>
        </div>
      </div>
      <div class="flex flex-col gap-2">
        <img
          src="/widgets/sliders.svg"
          alt="#_"
          class="shadow size-full rounded-2xl"
        />
        <div
          class="relative flex items-center justify-center h-full p-8 overflow-hidden bg-zinc-50 dark:bg-zinc-900 rounded-2xl"
        >
          <ul
            class="text-base font-medium list-none space-y-1 text-zinc-900 dark:text-white"
            role="list"
          >
            {
              listItems.map((item, index) => (
                <li>
                  <div class="relative flex flex-row items-start gap-4">
                    <CircleCheck class="text-blue-600" size="base" />
                    <Text tag="span" variant="textBase">
                      {item}
                    </Text>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div
        class="relative flex flex-col justify-between h-full overflow-hidden bg-zinc-50 dark:bg-zinc-900 lg:row-span-2 rounded-2xl"
      >
        <div class="relative p-8">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-blue-600 dark:text-blue-400"
          >
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 font-medium text-zinc-900 dark:text-white"
          >
            Easy Integration
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 font-medium text-zinc-500 dark:text-zinc-400"
          >
            Integrating with existing systems is smooth and hassle-free, thanks
            to our incredible flexible approach.
          </Text>
        </div>
        <div class="ml-8 -bottom-2 -right-8">
          <img
            class="w-full h-full shadow rounded-tl-xl"
            src="/widgets/device.svg"
            alt=""
          />
        </div>
      </div>

      <div
        class="relative flex flex-col justify-between h-full overflow-hidden bg-zinc-50 rounded-2xl lg:row-span-2"
      >
        <div class="relative p-8">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-blue-600"
          >
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 font-medium text-zinc-900"
          >
            Schedule
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 font-medium text-zinc-500">
            Schedule your integrations effortlessly and automate tasks for
            seamless workflows.
          </Text>
        </div>
        <div class="ml-8 -bottom-2 -right-8">
          <img
            class="w-full h-full shadow rounded-tl-xl"
            src="/widgets/activity.svg"
            alt=""
          />
        </div>
      </div>
      <img
        src="/widgets/calendar.svg"
        class="shadow rounded-2xl size-full"
        alt=""
      />

      <div
        class="relative flex flex-col items-center justify-center p-8 overflow-hidden text-center bg-zinc-50 rounded-2xl md:col-span-2 lg:p-12"
      >
        <div class="relative items-center text-balance">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-blue-600"
          >
            Tagline
          </Text>
          <Text
            tag="h3"
            variant="displayMD"
            class="mt-4 font-semibold text-zinc-900"
          >
            Transforming the banking experience for a digital future
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-2 font-medium text-zinc-600"
          >
            The fastest method for working together on staging and temporary
            environments.
          </Text>
          <div
            class="flex flex-wrap items-center justify-center mx-auto mt-8 gap-2"
          >
            <Button variant="accent" size="sm"> Get started </Button>
            <Button variant="alternative" size="sm"> Learn more </Button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
