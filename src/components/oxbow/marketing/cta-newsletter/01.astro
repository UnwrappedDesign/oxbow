---
export const freeComponent = true;
export const description = "Newsletter CTA with benefits";
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";
import TextInput from "@/components/fundations/inputs/TextInput.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Brain from "@/components/fundations/icons/Brain.astro";
import Tools from "@/components/fundations/icons/Tools.astro";
import Analytics from "@/components/fundations/icons/Analytics.astro";

const features = [
  {
    icon: Brain,
    title: "Content That Counts",
    text: "Insights you’ll actually use—no clickbait, ever.",
  },
  {
    icon: Tools,
    title: "Practical Guidance",
    text: "Field-tested tips and resources to boost your productivity.",
  },
  {
    icon: Analytics,
    title: "Balanced Cadence",
    text: "Weekly dispatches—packed with insights, never spam.",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-32">
    <div class="max-w-xl mx-auto lg:text-balance lg:text-center">
      <Text
        tag="h1"
        variant="displayMD"
        class="font-semibold tracking-tight text-zinc-900 dark:text-white lg:text-balance"
      >
        Elevate your inbox with Oxbow insights.
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 text-zinc-500 dark:text-zinc-400"
      >
        Sign up for concise, actionable updates—no fillers, just value in every
        message.
      </Text>
      <form
        class="flex flex-col w-full max-w-xs mx-auto mt-8 md:flex-row lg:items-center gap-2"
      >
        <TextInput
          id="email"
          name="email"
          type="email"
          placeholder="you@probablyimportant.com"
          variant="default"
          label="Email address"
          size="sm"
          isGrouped
        />
        <Button type="submit" size="sm" variant="accent" class="shrink-0">
          Join us!
        </Button>
      </form>
    </div>

    <dl
      class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-4 lg:text-center lg:text-balance"
    >
      {
        features.map((feature) => (
          <div>
            <dt class="flex flex-col text-orange-600 dark:text-orange-400 lg:items-center gap-2">
              {feature.icon && (
                <feature.icon
                  class="text-blue-600 dark:text-blue-400"
                  size="base"
                />
              )}
              <Text
                tag="h3"
                variant=""
                class="font-semibold text-zinc-900 dark:text-white"
              >
                {feature.title}
              </Text>
            </dt>
            <dd>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 text-zinc-500 dark:text-zinc-400"
              >
                {feature.text}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</section>
