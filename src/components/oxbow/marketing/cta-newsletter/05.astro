---
import Button from "@/components/fundations/buttons/Button.astro";
---

<section class="bg-accent-700">
  <div class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="justify-center max-w-xl mx-auto text-center">
      <p
        class="text-xl font-semibold tracking-tight text-white lg:text-4xl lg:text-balance">
        Join our newsletter
      </p>
      <p class="mt-4 text-sm text-base-200 lg:text-base lg:text-balance">
        Stay up to date with our latest news and updates.
      </p>
    </div>
    <form class="w-full mx-auto mt-8 sm:flex sm:max-w-md">
      <label
        for="email-address"
        class="sr-only"
        >Email address</label
      >
      <input
        id="email-address"
        type="email"
        name="email-address"
        autocomplete="email"
        placeholder="Enter your email"
        aria-placeholder="Enter your email"
        required=""
        class="block w-full h-10 px-4 py-2 text-sm text-white placeholder-base-200 duration-300 border border-transparent rounded-lg shadow appearance-none ring-1 ring-white/20 bg-base-950/20 focus:border-white/20 ring-offset-accent-950 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
      />
      <div class="mt-2 sm:ml-2 sm:mt-0 sm:flex-shrink-0">
        <Button
          class="w-full sm:w-auto"
          type="submit"
          variant="alternative"
          size="base">
          Subscribe
        </Button>
      </div>
    </form>
    <p class="text-xs text-center mt-3 text-base-200">
      When you sign up, you accept our <a
        class="text-white hover:text-base-200"
        href="#_"
        >Terms of Service</a
      > and <a
        class="text-white hover:text-base-200"
        href="#_"
        >Privacy Policy</a
      >.
    </p>
  </div>
</section>
