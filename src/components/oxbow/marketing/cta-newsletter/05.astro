---
import Button from "@/components/fundations/buttons/Button.astro";
import Text from "@/components/fundations/typography/Text.astro";
---

<section class="bg-accent-700">
  <div class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="justify-center max-w-xl mx-auto text-center">
      <Text tag="h2" variant="displayMD" class="font-semibold text-white">
        Join our newsletter
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 font-medium text-base-300">
        Stay up to date with our latest news and updates.
      </Text>
    </div>
    <form class="w-full mx-auto mt-8 sm:flex sm:max-w-md">
      <Text for="email-address" class="sr-only" tag="label">
        Email address
      </Text>
      <input
        id="email-address"
        type="email"
        name="email-address"
        autocomplete="email"
        placeholder="Enter your email"
        aria-placeholder="Enter your email"
        required=""
        class="block w-full h-10 px-4 py-2 text-sm text-white border border-transparent rounded-lg shadow appearance-none placeholder-base-200 duration-300 ring-1 ring-white/20 bg-base-950/20 focus:border-white/20 ring-offset-base-950 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
      />
      <div class="mt-2 sm:ml-2 sm:mt-0 sm:flex-shrink-0">
        <Button
          class="w-full sm:w-auto"
          type="submit"
          variant="alternative"
          size="base"
        >
          Subscribe
        </Button>
      </div>
    </form>
    <Text
      tag="p"
      variant="textSM"
      class="mt-4 font-medium text-center text-white"
    >
      When you sign up, you accept our
      <Text
        tag="a"
        href="#_"
        variant="textBase"
        class="font-medium text-base-300 hover:text-base-500"
      >
        Terms of service
      </Text>
      and
      <Text
        tag="a"
        href="#_"
        variant="textBase"
        class="font-medium text-base-300 hover:text-base-500"
      >
        Privacy Policy
      </Text>
    </Text>
  </div>
</section>
