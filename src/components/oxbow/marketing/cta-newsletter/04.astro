---
import Button from "@/components/fundations/buttons/Button.astro";

import Text from "@/components/fundations/typography/Text.astro";
---

<section>
  <div class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="p-8 bg-accent-950 lg:p-20 rounded-2xl">
      <div class="justify-center max-w-xl mx-auto text-center">
        <Text tag="h2" variant="displayBase" class="font-semibold text-white">
          Join our newsletter
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-300 font-medium">
          Stay up to date with our latest news and updates.
        </Text>
      </div>
      <form class="w-full mx-auto mt-8 sm:flex sm:max-w-md">
        <Text for="email-address" class="sr-only" tag="label">
          Email address
        </Text>
        <input
          id="email-address"
          type="email"
          name="email-address"
          autocomplete="email"
          placeholder="Enter your email"
          aria-placeholder="Enter your email"
          required=""
          class="block w-full h-10 px-4 py-2 text-sm text-white placeholder-base-200 duration-300 border border-transparent rounded-lg shadow appearance-none ring-1 ring-white/20 bg-accent-950 focus:border-white/20 ring-offset-accent-950 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 sm:text-sm focus:ring-offset"
        />
        <div class="mt-2 sm:ml-2 sm:mt-0 sm:flex-shrink-0">
          <Button
            class="w-full sm:w-auto"
            type="submit"
            variant="accent"
            size="base"
          >
            Subscribe
          </Button>
        </div>
      </form>
      <Text
        tag="p"
        variant="textSM"
        class="mt-4 text-white font-medium text-center"
      >
        When you sign up, you accept our
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="text-accent-500 font-medium hover:text-base-500"
        >
          Terms of service
        </Text>
        and
        <Text
          tag="a"
          href="#_"
          variant="textBase"
          class="text-accent-500 font-medium hover:text-base-500"
        >
          Privacy Policy
        </Text>
      </Text>
    </div>
  </div>
</section>
