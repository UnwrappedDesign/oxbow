---

<section>
  <div class="relative px-8 mx-auto md:px-12 lg:px-32 max-w-7xl py-24">
    <div
      class="relative grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-12"
    >
      {
        products.map((article) => (
          <div class="flex flex-col bg-white ">
            <div class="relative aspect-[4/3] w-full h-auto">
              <img
                src={article.image}
                alt={article.title}
                class="absolute inset-0 object-cover size-full  bg-zinc-50 rounded-2xl"
              />
            </div>
            <div class="flex flex-col justify-between h-full mt-2 gap-2">
              <div>
                <div class="flex items-center justify-between w-full ">
                  <Text
                    tag="h3"
                    variant="textSM"
                    class="relative font-medium text-zinc-900"
                  >
                    {article.title}
                    <a href="#_">
                      <span class="absolute inset-0" />
                    </a>
                  </Text>
                  <button class="text-zinc-500">
                    <Cart size="sm" />
                  </button>
                </div>
                <Text tag="p" variant="textSM" class="mt-1 text-zinc-500 ">
                  {article.description}
                </Text>
                <Text tag="p" variant="textSM" class="text-zinc-500">
                  {article.price}
                </Text>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
