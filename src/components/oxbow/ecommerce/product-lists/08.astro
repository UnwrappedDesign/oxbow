    price: "$140.00",
    link: "#_",
    colors: ["bg-black", "bg-white"],
  },
  {
    image: "/store/shoes/airforcewhite/2.png",
    title: "Nike Air Force 1 LE",
    description: "40 Different Colors",
    price: "$280.00",
    link: "#_",
    colors: ["bg-white", "bg-red-500", "bg-cyan-500"],
  },
  {
    image: "/store/shoes/airmax/3.png",
    title: "Nike Air Max 90",
    description: "10 Different Colors",
    price: "120.00",
    colors: ["bg-black", "bg-slate-600", "bg-yellow-400"],
  },
  {
    image: "/store/shoes/gazelle/1.png",
    title: "Gazelle",
    description: "10 Different Colors",
    price: "120.00",
    colors: ["bg-orange-500", "bg-blue-400"],
  },
  {
    image: "/store/shoes/campus/1.png",
    title: "Campus",
    description: "13 Different Colors",
    price: "80.00",
    colors: ["bg-[#2e4b40]", "bg-blue-400"],
  },
  {
