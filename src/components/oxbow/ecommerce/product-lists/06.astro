---

<section class="bg-white dark:bg-zinc-900">
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
    <div
      class="relative grid grid-cols-1 gap-x-6 gap-y-12 sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        products.map((article) => (
          <div class="relative flex flex-row gap-4">
            <div class="relative aspect-[4/3] w-32 h-auto">
              <img
                src={article.image}
                alt={article.title}
                class="absolute inset-0 object-cover size-full rounded-2xl bg-zinc-50"
              />
            </div>
            <div class="flex flex-col justify-between h-full gap-2">
              <div>
                <Text
                  tag="h3"
                  variant="textSM"
                  class="font-medium text-zinc-900 dark:text-white"
                >
                  {article.title}
                  <a href="#_">
                    <span class="absolute inset-0" />
                  </a>
                </Text>
                <Text
                  tag="p"
                  variant="textSM"
                  class="mt-1 text-zinc-500 dark:text-zinc-300 "
                >
                  {article.description}
                </Text>
              </div>
              <div class="flex justify-between  gap-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="text-zinc-500 dark:text-zinc-300"
                >
                  {article.price}
                </Text>
                <ul role="list" class="flex items-center gap-x-1">
                  {article.colors.map((color, index) => (
                    <li
                      class={`size-3 rounded-full border border-black/10 ${color}`}
                    >
                      <span class="sr-only">{color}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
