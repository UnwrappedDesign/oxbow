---
export const description =
  "Simple cards with overlayed add to cart and like cta";
import Text from "@/components/fundations/typography/Text.astro";
import Heart from "@/components/fundations/icons/Heart.astro";
import Cart from "@/components/fundations/icons/Cart.astro";
const products = [
  {
    image: "/store/jackets/1.png",
    title: "Contrast Hooded Puch Pocket",
    price: "$140.00",
    discountedPrice: "$99.00",
    description: "23 Different Colors",
    link: "#_",
  },
  {
    image: "/store/jackets/2.png",
    title: "Relaxed Shirt jacket",
    price: "$280.00",
    discountedPrice: "$149.00",
    description: "40 Different Colors",
    link: "#_",
  },
  {
    image: "/store/jackets/3.png",
    title: "Padded Soft Bomber",
    price: "$120.00",
    discountedPrice: "$80.00",
    description: "10 Different Colors",
    link: "#_",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
    <div class="relative grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        products.map((article) => (
          <div class="relative">
            <div class="relative aspect-[8/10] w-full overflow-hidden rounded-lg">
              <img
                src={article.image}
                alt="#_"
                class="object-cover size-full"
              />
            </div>
            <div class="relative mt-2">
              <div class="flex items-center justify-between w-full">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="font-medium text-zinc-900 dark:text-white"
                >
                  {article.title}
                </Text>
                <Text
                  tag="p"
                  variant="textSM"
                  class="relative flex items-center text-zinc-500 dark:text-zinc-300  gap-x-1"
                >
                  {article.price}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textSM"
                class=" text-zinc-500 dark:text-zinc-300"
              >
                {article.description}
                <a href="#_">
                  <span class="absolute inset-0" />
                </a>
              </Text>
            </div>
            <div class="absolute inset-x-0 top-0 flex items-end justify-end p-4 overflow-hidden rounded-lg ">
              <div class="flex items-center gap-x-1">
                <button class="text-zinc-500 dark:text-zinc-300">
                  <Heart size="sm" />
                </button>
                <button class="text-zinc-500 dark:text-zinc-300">
                  <Cart size="sm" />
                </button>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
