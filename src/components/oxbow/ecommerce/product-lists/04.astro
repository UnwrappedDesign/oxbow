---
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
const products = [
  {
    image: "/store/shoes/airforceblack/3.jpg",
    title: "Nike Air Force 1Â´07 Fresh",
    price: "$140.00",
    discountedPrice: "$99.00",
    description: "23 Different Colors",
    link: "#_",
  },
  {
    image: "/store/shoes/airforcewhite/2.png",
    title: "Nike Air Force 1 LE",
    price: "$280.00",
    discountedPrice: "$149.00",
    description: "40 Different Colors",
    link: "#_",
  },
  {
    image: "/store/shoes/airmax/3.png",
    title: "Nike Air Max 90",
    price: "$120.00",
    discountedPrice: "$80.00",
    description: "10 Different Colors",
    link: "#_",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="text-center md:text-left grid grid-cols-1 gap-12 md:grid-cols-2 md:items-end"
    >
      <div>
        <Text
          tag="p"
          variant="textSM"
          class="font-bold uppercase text-accent-600"
        >
          Tagline
        </Text>
        <Text
          tag="h2"
          variant="displayBase"
          class="mt-4 font-semibold text-base-900 lg:text-balance"
        >
          Our products
        </Text>
      </div>
      <div>
        <Button variant="muted" size="sm" class="ml-auto">
          See all our products
        </Button>
      </div>
    </div>
    <div
      class="grid grid-cols-1 gap-6 mt-12 sm:grid-cols-2 lg:grid-cols-3 relative"
    >
      {
        products.map((article) => (
          <div class="flex flex-col gap-4 ">
            <div class="relative aspect-[4/4] ">
              <img
                src={article.image}
                alt="#_"
                class="absolute inset-0 size-full   rounded-2xl bg-base-50 object-cover"
              />
            </div>
            <div>
              <div class="flex items-center w-full justify-between ">
                <Text
                  tag="h3"
                  variant="textBase"
                  class="text-base-900 font-medium"
                >
                  {article.title}
                </Text>
              </div>
              <Text
                tag="h3"
                variant="textBase"
                class="text-base-500 font-medium flex items-center gap-x-1"
              >
                <del class="opacity-70">{article.discountedPrice}</del>
                <span class="text-base-900"> {article.price}</span>
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="mt-2 text-base-500 font-medium"
              >
                {article.description}
              </Text>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
