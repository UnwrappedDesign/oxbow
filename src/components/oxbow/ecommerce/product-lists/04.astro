---
export const description =
  "Simple cards with  price and discouned  price below image and cta";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
const products = [
  {
    image: "/store/shoes/airforceblack/3.jpg",
    title: "Nike Air Force 1Â´07 Fresh",
    price: "$140.00",
    discountedPrice: "$99.00",
    description: "23 Different Colors",
    link: "#_",
  },
  {
    image: "/store/shoes/airforcewhite/2.png",
    title: "Nike Air Force 1 LE",
    price: "$280.00",
    discountedPrice: "$149.00",
    description: "40 Different Colors",
    link: "#_",
  },
  {
    image: "/store/shoes/airmax/3.png",
    title: "Nike Air Max 90",
    price: "$120.00",
    discountedPrice: "$80.00",
    description: "10 Different Colors",
    link: "#_",
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="relative px-8 mx-auto md:px-12 lg:px-32 max-w-7xl py-24">
    <div
      class="text-center md:text-left grid grid-cols-1 gap-12 md:grid-cols-2 md:items-end"
    >
      <div>
        <Text
          tag="h2"
          variant="displaySM"
          class="font-semibold tracking-tight text-zinc-900 dark:text-white lg:text-balance"
        >
          Our products
        </Text>
      </div>

      <Button variant="muted" size="sm" class="ml-auto">
        See all our products
      </Button>
    </div>
    <div
      class="relative mt-4 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        products.map((article) => (
          <div class="relative flex flex-col gap-2">
            <div class="relative aspect-[4/4] ">
              <img
                src={article.image}
                alt="#_"
                class="absolute inset-0 object-cover size-full  rounded-2xl bg-zinc-50"
              />
            </div>
            <div>
              <div class="flex items-center justify-between w-full ">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="font-medium text-zinc-900"
                >
                  {article.title}
                </Text>
              </div>
              <Text
                tag="h3"
                variant="textSM"
                class="flex items-center text-zinc-500  gap-x-1"
              >
                <del class="opacity-70">{article.discountedPrice}</del>
                <span class="text-zinc-900"> {article.price}</span>
                <a href="#_">
                  <span class="absolute inset-0" />
                </a>
              </Text>
              <Text tag="p" variant="textSM" class="mt-8 text-zinc-500 ">
                {article.description}
              </Text>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
