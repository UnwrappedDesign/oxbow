---
export const description =
  "Simple cards with description and price below image";
import Text from "@/components/fundations/typography/Text.astro";
const products = [
  {
    image: "/store/shoes/airforceblack/3.jpg",
    title: "Nike Air Force 1Â´07 Fresh",
    price: "$280.00",
    link: "#_",
  },
  {
    image: "/store/shoes/airforcewhite/2.png",
    title: "Nike Air Force 1 LE",
    price: "$140.00",
    link: "#_",
  },
  {
    image: "/store/shoes/airmax/3.png",
    title: "Nike Air Max 90",
    price: "120.00",
  },
];
---

<section>
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="relative grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        products.map((article) => (
          <div class="relative flex flex-col justify-between gap-2">
            <div class="relative aspect-[4/3] ">
              <img
                src={article.image}
                alt="#_"
                class="absolute inset-0 object-cover size-full  rounded-2xl bg-base-50"
              />
            </div>
            <div>
              <div class="flex items-center justify-between w-full ">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="font-medium text-base-900"
                >
                  {article.title}
                  <a href="#_">
                    <span class="absolute inset-0" />
                  </a>
                </Text>
                <Text tag="h3" variant="textSM" class="text-base-500 ">
                  {article.price}
                </Text>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
