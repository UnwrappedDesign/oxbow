---
export const description =
  "Simple cards with description and link below image and auto height";

import Text from "@/components/fundations/typography/Text.astro";
const products = [
  {
    image: "/store/shoes/airmax/1.png",
    title: "Trainers",
  },
  {
    image: "/store/jackets/1.png",
    title: "Hoodies",
    link: "#_",
  },
  {
    image: "/store/backpacks/1.jpeg",
    title: "Backpacks",
  },
  {
    image: "/store/backpacks/2.jpeg",
    title: "Backpacks",
  },
];
---

<section class="bg-white dark:bg-black">
  <div class="relative px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="relative grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {
        products.map((article) => (
          <div>
            <div class="relative">
              <div class="relative w-full overflow-hidden rounded-lg ">
                <img
                  src={article.image}
                  alt="#_"
                  class="object-cover size-full"
                />
              </div>
              <div class="relative mt-2">
                <div class="flex items-center justify-between w-full">
                  <Text
                    tag="h3"
                    variant="textSM"
                    class="font-medium text-zinc-900 dark:text-zinc-100"
                  >
                    {article.title}
                  </Text>
                </div>
                <div
                  class="flex items-center gap-1 
 "
                >
                  <Text
                    tag="a"
                    variant="textSM"
                    class=" text-zinc-500 dark:text-zinc-300"
                  >
                    Shop now
                  </Text>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
