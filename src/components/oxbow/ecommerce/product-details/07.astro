---
export const excludeFromObfuscation = [
  "bg-zinc-800",
  "bg-zinc-400",
  "ring-2",
  "ring-offset-2",
  "ring-zinc-900",
  "ring-zinc-700",
  "bg-zinc-400",
  "ring-zinc-300",
  "bg-zinc-200",
  "ring-purple-300",
  "bg-purple-200",
  "ring-pink-300",
  "bg-pink-200",
  "ring-red-300",
  "bg-red-200",
  "ring-orange-300",
  "bg-orange-200",
  "ring-yellow-300",
  "bg-yellow-200",
  "ring-blue-300",
  "bg-blue-200",
  "ring-cyan-300",
  "bg-cyan-200",
  "ring-green-300",
  "bg-green-200",
  "ring-teal-300",
  "bg-teal-200",
  "text-blue-500",
  "bg-white",
  "border-b-2",
  "border-blue-500",
];

export const description =
  "Details with image slider with arrow and step navigation, color, size selector and info tabs with reviews";
import Text from "@/components/fundations/typography/Text.astro";
import Button from "@/components/fundations/buttons/Button.astro";
---

<section class="bg-white dark:bg-zinc-900">
  <div class="relative px-8 mx-auto md:px-12 lg:px-32 max-w-7xl py-24">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
      <div
        x-data="{ activeSlide: 0, slides: ['/store/shoes/airmax/1.png', '/store/shoes/airmax/2.png', '/store/shoes/airmax/3.png', '/store/shoes/airmax/4.png'] }"
        role="region"
        aria-label="Image Slider"
        class="relative flex flex-col gap-4"
      >
        <!-- Slider container -->
        <div class="relative w-full aspect-square">
          <!-- Template for each slide image -->
          <template x-for="(slide, index) in slides" :key="index">
            <div
              x-show="activeSlide === index"
              x-transition:enter="transition ease-out duration-500"
              x-transition:enter-start="opacity-0 transform scale-95"
              x-transition:enter-end="opacity-100 transform scale-100"
              x-transition:leave="transition ease-in duration-500"
              x-transition:leave-start="opacity-100 transform scale-100"
              x-transition:leave-end="opacity-0 transform scale-95"
              class="absolute inset-0 aspect-square"
              :aria-hidden="activeSlide !== index"
            >
              <!-- Slide image -->
              <img
                :src="slide"
                alt="#"
                class="object-cover size-full rounded-2xl"
              />
            </div>
          </template>
        </div>

        <!-- Buttons and Pagination -->
        <div class="flex items-center justify-between gap-4">
          <div class="flex items-center gap-4">
            <!-- Previous slide button -->
            <button
              @click="activeSlide = activeSlide === 0 ? slides.length - 1 : activeSlide - 1"
              class="flex items-center justify-center bg-white dark:bg-zinc-900 border rounded-full transform border-zinc-200 dark:border-zinc-700 text-zinc-900 dark:text-zinc-100 size-10 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-blue-400"
              aria-label="Previous Slide"
            >
              &larr;
            </button>
            <!-- Next slide button -->
            <button
              @click="activeSlide = activeSlide === slides.length - 1 ? 0 : activeSlide + 1"
              class="flex items-center justify-center bg-white dark:bg-zinc-900 border rounded-full transform border-zinc-200 dark:border-zinc-700 text-zinc-900 dark:text-zinc-100 size-10 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-blue-400"
              aria-label="Next Slide"
            >
              &rarr;
            </button>
          </div>
          <!-- Pagination indicators -->
          <div class="flex transform space-x-2">
            <template x-for="(slide, index) in slides" :key="index">
              <button
                @click="activeSlide = index"
                :class="{'bg-zinc-800': activeSlide === index, 'bg-zinc-400': activeSlide !== index}"
                class="rounded-full size-3 focus:outline-none"
                :aria-label="'Slide ' + (index + 1)"
                :aria-current="activeSlide === index ? 'true' : 'false'"
              ></button>
            </template>
          </div>
        </div>
      </div>

      <div class="flex flex-col">
        <Text tag="h1" variant="textXL" class="font-medium dark:text-white"
          >Nike Air Force 1Â´07 Fresh</Text
        >
        <Text tag="p" variant="textLG" class="mt-1 dark:text-white"
          >$152 <del class="opacity-70">$190</del>
          <span class="text-green-400">20% Off</span></Text
        >
        <Text tag="p" variant="textSM" class="mt-2 text-zinc-500">
          Men's shoes
        </Text>
        <Text tag="p" variant="textSM" class="mt-8 text-zinc-500">
          Hitting the field in the late '60s, adidas airforcewhiteS quickly
          became soccer's "it" shoe.
        </Text>
        <div class="mt-4 grid cols-1 md:grid-cols-2 gap-4">
          <!-- Color Selector -->
          <div x-data="{ activeColor: null }">
            <Text tag="p" variant="textXS" class="uppercase text-zinc-500">
              Color
            </Text>
            <fieldset
              aria-label="Choose a color"
              class="mt-2"
              x-data="{ 
              colors: [
                { name: ' Black', ring: 'ring-zinc-700', bg: 'bg-zinc-400' },
                { name: ' Gray', ring: 'ring-zinc-300', bg: 'bg-zinc-200' },
                { name: ' Purple', ring: 'ring-purple-300', bg: 'bg-purple-200' },
                { name: ' Pink', ring: 'ring-pink-300', bg: 'bg-pink-200' },
                { name: ' Red', ring: 'ring-red-300', bg: 'bg-red-200' },
                { name: ' Orange', ring: 'ring-orange-300', bg: 'bg-orange-200' },
                { name: ' Yellow', ring: 'ring-yellow-300', bg: 'bg-yellow-200' },
                { name: ' Blue', ring: 'ring-blue-300', bg: 'bg-blue-200' },
                { name: ' Cyan', ring: 'ring-cyan-300', bg: 'bg-cyan-200' },
                { name: ' Green', ring: 'ring-green-300', bg: 'bg-green-200' },
                { name: ' Teal', ring: 'ring-teal-300', bg: 'bg-teal-200' },
              ],
              activeColor: ' Black' 
            }"
            >
              <div class="flex flex-wrap items-center gap-3">
                <template x-for="color in colors" :key="color.name">
                  <label
                    :aria-label="color.name"
                    class="relative -m-0.5 duration-300 flex cursor-pointer items-center justify-center rounded-full p-0.5 focus:outline-none"
                    :class="{ 'ring-2 ring-offset-2 ring-zinc-900': activeColor === color.name }"
                  >
                    <input
                      type="radio"
                      name="color-choice"
                      :value="color.name"
                      class="sr-only"
                      @click="activeColor = color.name"
                    />
                    <span
                      aria-hidden="true"
                      class="rounded-full size-6 ring-1"
                      :class="`${color.ring} ${color.bg}`"></span>
                  </label>
                </template>
              </div>
            </fieldset>
          </div>
          <!-- Sizing -->
          <div
            x-data="{
              sizeSystem: 'US',
              activeSize: null,
              sizes: {
                  US: ['6', '7', '8', '9', '10', '11', '12', '13'],
                  EU: ['39', '40', '41', '42', '43', '44', '45', '46']
              }
          }"
          >
            <div class="flex items-center justify-between">
              <Text tag="p" variant="textXS" class="uppercase text-zinc-500">
                Shoe size
              </Text>
              <div>
                <label for="size-system" class="sr-only">Size System</label>
                <select
                  id="size-system"
                  x-model="sizeSystem"
                  @change="activeSize = null"
                  class="block w-auto h-8 pl-2.5 pr-8 py-2 text-xs text-zinc-900 dark:text-zinc-100 duration-300 bg-white dark:bg-zinc-900 border border-transparent rounded-lg appearance-none ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-400 focus:border-zinc-300 dark:focus:border-zinc-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 dark:focus:ring-blue-400 focus:ring-offset-2 focus:ring-2"
                >
                  <option value="US">US</option>
                  <option value="EU">EU</option>
                </select>
              </div>
            </div>
            <div
              class="mt-2 grid grid-cols-4 gap-2 divide-x divide-zinc-200 dark:divide-zinc-700"
            >
              <template x-for="size in sizes[sizeSystem]" :key="size">
                <div>
                  <input
                    type="radio"
                    :id="'size-' + size"
                    :value="size"
                    name="size-choice"
                    x-model="activeSize"
                    class="sr-only peer"
                  />
                  <label
                    :for="'size-' + size"
                    x-text="size"
                    class="flex items-center justify-center px-3 py-2 text-sm font-medium bg-white dark:bg-zinc-900 cursor-pointer ring-1 ring-zinc-200 dark:ring-zinc-700 rounded-md duration-300 peer-checked:ring-2 peer-checked:ring-zinc-900 peer-checked:text-blue-500 text-zinc-500 dark:text-zinc-200 peer-checked:ring-offset-2"
                  ></label>
                </div>
              </template>
            </div>
          </div>
        </div>
        <!-- Action Buttons -->
        <div class="flex flex-row mt-8 gap-2">
          <Button size="sm" variant="default" class="w-full">Add to Cart</Button
          >
          <Button size="sm" variant="muted" class="w-full">Buy Now</Button>
        </div>
        <!-- Free shipping notice -->
        <Text tag="p" variant="textSM" class="mt-1 text-zinc-500"
          >Shop now. Pay in 30 days with Klarna. <a
            href="#_"
            class="text-black underline">Learn more</a
          ></Text
        >
        <!-- Tab section -->
        <div
          x-data="{ tab: 'tab1' }"
          class="mt-8 divide-y divide-zinc-200 dark:divide-zinc-700 borderb border-zinc-200 dark:border-zinc-700"
        >
          <ul class="flex text-sm border-b gap-4 text-zinc-500 border-zinc-200">
            <li class="-mb-px">
              <a
                @click.prevent="tab = 'tab1'"
                href="#_"
                class="inline-block py-2 font-medium border-b-2 text-blue-500 border-blue-500"
                :class="{ ' text-blue-500 border-b-2 border-blue-500' : tab === 'tab1' }"
              >
                Details</a
              >
            </li>
            <li class="-mb-px">
              <a
                @click.prevent="tab = 'tab2'"
                href="#_"
                class="inline-block py-2 font-medium"
                :class="{ ' text-blue-500 border-b-2 border-blue-500' : tab === 'tab2' }"
              >
                Shipping</a
              >
            </li>
            <li class="-mb-px">
              <a
                @click.prevent="tab = 'tab3'"
                href="#_"
                class="inline-block py-2 font-medium"
                :class="{ ' text-blue-500 border-b-2 border-blue-500' : tab === 'tab3' }"
              >
                Returns</a
              >
            </li>
            <li class="-mb-px">
              <a
                @click.prevent="tab = 'tab4'"
                href="#_"
                class="inline-block py-2 font-medium"
                :class="{ ' text-blue-500 border-b-2 border-blue-500' : tab === 'tab4' }"
              >
                Reviews</a
              >
            </li>
          </ul>
          <div class="py-4 pt-4 text-left text-zinc-500 content">
            <div x-show="tab==='tab1'">
              <section class="py-4">
                <Text tag="p" variant="sm">
                  This product is crafted from high-quality materials designed
                  for durability and comfort. It features modern design elements
                  and is perfect for everyday use.
                </Text>
                <ul
                  role="list"
                  class="pl-5 mt-4 text-sm list-disc space-y-1 text-zinc-600 marker:text-blue-500"
                >
                  <li>Versatile lace configurations</li>
                  <li>Breathable and spacious interior fit</li>
                  <li>Durable leather overlays</li>
                  <li>Cushioned insole for added comfort</li>
                  <li>Reinforced eyelets for secure lacing</li>
                  <li>Stitching built for durability</li>
                  <li>Water-resistant materials</li>
                </ul>
              </section>
            </div>
            <div x-show="tab==='tab2'" style="display: none;">
              <section class="py-4">
                <Text tag="p" variant="sm">
                  We offer free standard shipping on all orders above $50.
                  Express shipping options are available at checkout for an
                  additional fee.
                </Text>
              </section>
            </div>
            <div x-show="tab==='tab3'" style="display: none;">
              <section class="py-4">
                <Text tag="p" variant="sm">
                  We accept returns within 30 days of purchase. Items must be in
                  their original condition and packaging. Please visit our
                  returns page for more details.
                </Text>
              </section>
            </div>
            <div x-show="tab==='tab4'" style="display: none;">
              <section class="py-4">
                <div
                  class="flex flex-col"
                  x-data="{ 
                testimonials: [
                  {
                    name: 'Fernando Monte',
                    date: '2025-12-01',
                    datetime: '2025-12-01',
                    img: '/avatars/1.jpg',
                    text: 'The Nike Air Max 90 Black exceeded my expectations! Super comfortable and perfect for both running and casual wear.',
                  },
                  {
                    name: 'Juan  Echanove',
                    date: '2025-11-15',
                    datetime: '2025-11-15',
                    img: '/avatars/2.jpg',
                    text: 'Stylish and lightweight. I wear them everywhere, but the fit was slightly snug at first. Broke in nicely after a few days.',
                  },
                ] 
              }"
                >
                  <template
                    x-for="testimonial in testimonials"
                    :key="testimonial.datetime"
                  >
                    <div class="flex py-4 gap-x-4">
                      <div class="flex-none">
                        <img
                          :src="testimonial.img"
                          :alt="testimonial.name"
                          class="rounded-full size-10 bg-zinc-100"
                        />
                      </div>
                      <div>
                        <Text
                          tag="h3"
                          variant="textBase"
                          class="font-medium text-zinc-900"
                          x-text="testimonial.name"
                        />
                        <Text variant="textXS" class="text-zinc-500">
                          <time
                            :datetime="testimonial.datetime"
                            x-text="testimonial.date"></time>
                        </Text>
                        <Text
                          tag="p"
                          variant="textSM"
                          class="mt-1 text-zinc-500"
                          x-text="testimonial.text"
                        />
                      </div>
                    </div>
                  </template>
                </div>
              </section>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
