<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl relative">
    <div class="text-center">
      <span
        class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
        >Your tagline</span
      >
      <h1
        class="text-4xl mt-4 font-semibold tracking-tight text-gray-900 lg:text-5xl lg:text-balance"
      >
        Meet Our Team

        <span class="text-gray-600 block">Diverse. Skilled. United. </span>
      </h1>
      <p class="mt-6 text-base font-medium text-gray-500 lg:text-balance">
        A group of passionate individuals working together to innovate and excel
        in our industry.
      </p>
    </div>
    <ul
      role="list"
      class="mt-12 grid grid-cols-3  sm:grid-cols-4 lg:grid-cols-6 gap-12 lg:mt-24"
    >
      {
        teamMembers.map((member) => (
          <li>
            <div class="flex flex-col gap-4">
              <img
                class="object-cover rounded-full size-16 lg:size-20 mx-auto"
                src={member.imgSrc}
                alt="#_"
              />
            </div>
          </li>
        ))
      }
    </ul>
    <div
      class="flex text-center items-center gap-2 text-gray-500 text-sm mt-12 justify-center"
    >
      We are hiring:
      <a
        href="#_"
        aria-label="Action"
        class="text-blue-500 hover:text-gray-900 text-sm font-medium duration-300 flex items-center gap-2"
      >
        See all our open roles
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M9 6l6 6l-6 6"></path></svg
        >
      </a>
    </div>
  </div>
</section>
