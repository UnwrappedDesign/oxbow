---
const teamMembers = [
  {
    name: "Michael Andreuzza",
    title: "Founder of Windstatic",
    imgSrc: "/avatars/1.avif",
  },
  {
    name: "Juan Echanove",
    title: "Founder of Pay Oneeer",
    imgSrc: "/avatars/2.avif",
  },
  {
    name: "Elona Muska",
    title: "Founder of Fesla",
    imgSrc: "/avatars/3.avif",
  },
  {
    name: "Messina Lionel",
    title: "COO at Pff Inc",
    imgSrc:
      "https://images.unsplash.com/photo-1548142813-c348350df52b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80",
  },
  // More team members can be added here
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div class="text-center">
      <span
        class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
        >Your tagline</span
      >
      <h1
        class="text-4xl mt-4 font-semibold tracking-tight text-gray-900 lg:text-balance"
      >
        Meet Our Team

        <span class="text-gray-600 block">Diverse. Skilled. United. </span>
      </h1>
      <p class="mt-6 text-base font-medium text-gray-500 lg:text-balance">
        A group of passionate individuals working together to innovate and excel
        in our industry.
      </p>
    </div>
    <ul
      role="list"
      class="mt-12 grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-12 lg:mt-24"
    >
      {
        teamMembers.map((member) => (
          <li>
            <div class="flex flex-col gap-4">
              <img
                class="object-cover rounded-full size-16 lg:size-20 mx-auto"
                src={member.imgSrc}
                alt="#_"
              />
              <div class="space-y-1 text-center">
                <h3 class="font-mono uppercase tracking-tighter text-sm font-medium text-gray-900">
                  {member.name}
                </h3>
                <p class="mt-2 text-sm text-gray-500 text-balance">
                  {member.title}
                </p>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
