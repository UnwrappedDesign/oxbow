---
const logos = [
  "/brands/1.svg",
  "/brands/2.svg",
  "/brands/3.svg",
  "/brands/4.svg",
];
---

<div class="relative">
  <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-24 lg:px-8">
    <div
      class="px-6 pb-24 pt-10  lg:col-span-7 lg:px-0 lg:pb-56 lg:pt-48 xl:col-span-6">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <span
          class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
          >Your tagline</span
        >
        <h1
          class="text-4xl mt-4 font-semibold tracking-tight text-gray-900 sm:text-5xl">
          Transform your visitors into users with an engaging headline
        </h1>
        <p class="mt-6 text-base font-medium text-gray-500">
          The fastest and most efficient method for working together on staging
          and temporary environments.
        </p>
        <div class="flex flex-wrap items-center gap-2 mx-auto mt-12">
          <button
            class="flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold text-white transition-all duration-200 rounded-lg bg-gradient-to-b from-blue-500 to-blue-600 hover:to-blue-800 shadow focus:ring-2 focus:ring-blue-950 focus:ring-offset-2 ring-offset-gray-200 hover:shadow-none"
            aria-label="Action">
            Get started
          </button>
          <button
            class="flex items-center justify-center gap-2 h-10 px-4 py-2 text-sm font-semibold text-gray-500 transition-all duration-200 bg-gray-50 border border-gray-300 rounded-lg hover:text-blue-700 focus:ring-2 shadow shadow-gray-500/5 focus:ring-blue-950 focus:ring-offset-2 ring-offset-gray-200 hover:shadow-none"
            aria-label="Action">
            Lerarn more
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"
              ><path
                stroke="none"
                d="M0 0h24v24H0z"
                fill="none"
              ></path><path d="M9 6l6 6l-6 6"></path></svg
            >
          </button>
        </div>
        <div class="grid grid-cols-2 sm:grid-cols-4 mt-12 items-center">
          {
            logos.map((logo, index) => (
              <img
                class="max-h-6"
                src={logo}
                alt="#_"
              />
            ))
          }
        </div>
      </div>
    </div>
    <div class="relative lg:col-span-5 m-8 xl:absolute xl:inset-0 xl:left-1/2">
      <div
        x-data="{ open: false }"
        class="aspect-[3/2] w-full object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full">
        <div class="h-full overflow-hidden rounded-2xl shadow border">
          <img
            alt="#_"
            class="relative w-full h-full object-cover"
            src="/thumbs/l4.png"
          />
          <div class="absolute bg-sky-200/50 inset-0 rounded-2xl"></div>
          <button
            class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 flex items-center justify-center size-12 text-sm font-semibold text-white transition-all duration-200 rounded-full bg-gradient-to-b from-blue-500 to-blue-600 hover:to-blue-800 shadow focus:ring-2 focus:ring-blue-950 focus:ring-offset-2 ring-offset-gray-200 hover:shadow-none"
            @click="open = true">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-player-play"
              ><path
                stroke="none"
                d="M0 0h24v24H0z"
                fill="none"
              ></path><path d="M7 4v16l13 -8z"></path></svg
            >
          </button>

          <!-- Modal -->
          <div
            class="fixed inset-0 flex items-center justify-center bg-gray-200/70"
            x-show="open"
            @keydown.escape.window="open = false"
            aria-labelledby="modal-title"
            role="dialog"
            aria-modal="true"
            x-cloak>
            <div
              class="bg-white rounded-2xl overflow-hidden shadow transform transition-all max-w-3xl w-full"
              @click.away="open = false">
              <div
                class="border-b bg-gray-50 px-4 py-3 sm:px-6 flex justify-between items-center">
                <h2
                  class="font-medium text-gray-900"
                  id="modal-title">
                  Watch Video
                </h2>
                <button
                  @click="open = false"
                  class="text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                  aria-label="Close modal">
                  <span class="sr-only">Close</span>
                  <svg
                    class="size-4"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M6 18L18 6M6 6l12 12"
                    ></path>
                  </svg>
                </button>
              </div>
              <div class="p-2">
                <iframe
                  class="w-full rounded-xl shadow-2xl h-96"
                  width="100%"
                  height="100%"
                  src="https://www.youtube.com/embed/VIDEO_ID"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
