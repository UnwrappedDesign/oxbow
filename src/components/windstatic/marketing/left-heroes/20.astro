<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl relative">
    <div>
      <span
        class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
        >Your tagline</span
      >
      <h1
        class="text-4xl mt-4 font-semibold tracking-tight text-gray-900 lg:text-5xl lg:text-balance">
        Transform your visitors into users with an engaging headline
      </h1>
      <p class="mt-6 text-base font-medium text-gray-500 lg:text-balance">
        The fastest and most efficient method for working together on staging
        and temporary environments.
      </p>
    </div>
    <div
      class="relative h-full mt-12"
      x-data="{ open: false }">
      <img
        class="object-cover h-full border shadow rounded-2xl w-full object-center"
        src="/images/dashboardLight.svg"
        alt="3_"
      />
      <div class="absolute bg-blue-200/50 rounded-2xl inset-0"></div>
      <button
        class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold text-white transition-all duration-200 rounded-lg bg-gradient-to-b from-blue-500 to-indigo-600 hover:to-indigo-800 shadow focus:ring-2 focus:ring-blue-950 focus:ring-offset-2 ring-offset-gray-200 hover:shadow-none"
        @click="open = true">
        Watch Video
      </button>

      <!-- Modal -->
      <div
        class="fixed inset-0 flex items-center justify-center bg-gray-200/70"
        x-show="open"
        @keydown.escape.window="open = false"
        aria-labelledby="modal-title"
        role="dialog"
        aria-modal="true"
        x-cloak>
        <div
          class="bg-white rounded-2xl overflow-hidden shadow transform transition-all max-w-3xl w-full"
          @click.away="open = false">
          <div
            class="border-b bg-gray-50 px-4 py-3 sm:px-6 flex justify-between items-center">
            <h2
              class="font-medium text-gray-900"
              id="modal-title">
              Watch Video
            </h2>
            <button
              @click="open = false"
              class="text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
              aria-label="Close modal">
              <span class="sr-only">Close</span>
              <svg
                class="size-4"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"
                ></path>
              </svg>
            </button>
          </div>
          <div class="p-2">
            <iframe
              class="w-full rounded-xl shadow-2xl"
              width="100%"
              height="100%"
              src="https://www.youtube.com/embed/VIDEO_ID"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
