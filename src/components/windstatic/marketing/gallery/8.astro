<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
    <div class="order-first block w-full mt-12 aspect-[4/2] lg:mt-0">
      <div
        x-data="{ activeSlide: 0, slides: ['https://images.unsplash.com/photo-1532274402911-5a369e4c4bb5?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D', 'https://images.unsplash.com/photo-1506102383123-c8ef1e872756?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D', 'https://images.unsplash.com/photo-1506102383123-c8ef1e872756?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'] }"
        class="h-full relative"
        role="region"
        aria-label="Image Slider"
      >
        <!-- Template for each slide image -->
        <template x-for="(slide, index) in slides" :key="index">
          <div
            x-show="activeSlide === index"
            x-transition:enter="transition ease-out duration-500"
            x-transition:enter-start="opacity-0 transform scale-95"
            x-transition:enter-end="opacity-100 transform scale-100"
            x-transition:leave="transition ease-in duration-500"
            x-transition:leave-start="opacity-100 transform scale-100"
            x-transition:leave-end="opacity-0 transform scale-95"
            class="h-full w-full absolute inset-0"
            :aria-hidden="activeSlide !== index"
          >
            <!-- Slide image -->
            <img
              :src="slide"
              alt="#"
              class="w-full h-full object-cover rounded-2xl drop-shadow"
            />
          </div>
        </template>
        <!-- Previous slide button -->
        <button
          @click="activeSlide = activeSlide === 0 ? slides.length - 1 : activeSlide - 1"
          class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white border text-blue-950 rounded-full size-10 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          aria-label="Previous Slide"
        >
          &larr;
        </button>
        <!-- Next slide button -->
        <button
          @click="activeSlide = activeSlide === slides.length - 1 ? 0 : activeSlide + 1"
          class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white border text-blue-950 rounded-full size-10 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          aria-label="Next Slide"
        >
          &rarr;
        </button>
        <!-- Pagination indicators -->
        <div
          class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2"
        >
          <template x-for="(slide, index) in slides" :key="index">
            <button
              @click="activeSlide = index"
              :class="{'bg-gray-800': activeSlide === index, 'bg-gray-400': activeSlide !== index}"
              class="h-3 w-3 rounded-full focus:outline-none"
              :aria-label="'Slide ' + (index + 1)"
              :aria-current="activeSlide === index ? 'true' : 'false'"></button>
          </template>
        </div>
      </div>
    </div>
  </div>
</section>
