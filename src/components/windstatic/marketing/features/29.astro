---
const data = [
  {
    category: "Innovative Design",
    text: "Our cutting-edge design offers a fresh, modern look that transforms your project into a standout experience.",
    items: ["Great communication", "Enhancing productivity"],
  },
  {
    category: "Powerful Functionality",
    text: "Equipped with advanced features and tools, our solution effortlessly manages complex tasks and workflows.",
    items: ["Unlocking  solutions", "Enabling interoperability"],
  },
  {
    category: "Seamless Collaboration",
    text: "Our platform fosters teamwork and collaboration by providing the tools and features needed to work effectively.",
    items: ["Real-time editing", "Shared workspaces"],
  },
  {
    category: "Advanced Analytics",
    text: "Gain deep insights into your data with our comprehensive analytics tools, helping you make informed decisions.",
    items: ["Customizable dashboards", "Predictive analytics"],
  },
];
---

<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="list-none grid grid-cols-1 bg-gray-50 items-center lg:grid-cols-2 gap-4 lg:gap-24 rounded-2xl lg:rounded-3xl p-8 lg:p-10 relative overflow-clip">
      <div class="pt-8 text-center lg:text-left">
        <span
          class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
          >Tagline</span
        >
        <p
          class="text-3xl mt-4 font-semibold tracking-tight text-gray-900 sm:text-balance">
          Transform your visitors into users with an engaging headline
        </p>
        <p class="mt-6 text-base font-medium text-gray-500 sm:text-balance">
          The fastest and most efficient method for working together on staging
          and temporary environments.
        </p>
        <div class="mt-12 flex">
          <a
            href="#_"
            aria-label="Action"
            class="text-blue-500 hover:text-gray-900 text-sm font-medium duration-300 flex items-center gap-2"
            >Get started
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"
              ><path
                stroke="none"
                d="M0 0h24v24H0z"
                fill="none"
              ></path><path d="M9 6l6 6l-6 6"></path></svg
            >
          </a>
        </div>
      </div>
      <div class="items-center h-full mt-12 lg:mt-0">
        <img
          alt="#"
          class="absolute w-full rounded-2xl border shadow"
          src="/images/dashboardLight.svg"
        />
      </div>
    </div>

    <div class="mt-6 grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="gap-6 grid grid-cols-1 sm:grid-cols-2 lg:col-span-2">
        {
          data.map((section) => (
            <div class="bg-gray-50 rounded-3xl p-8 lg:p-10 ">
              <div>
                <p class="tracking-tight text-lg font-medium  text-gray-900">
                  {section.category}
                </p>
                <p class="mt-2 text-sm text-gray-500 text-pretty">
                  {section.text}
                </p>
              </div>
              <ul
                role="list"
                class="space-y-1 mt-6 text-base font-medium text-gray-900 list-none">
                {section.items.map((item, idx) => (
                  <li class="list-none">
                    <div class=" flex  items-center gap-4 ">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-circle-check-filled text-blue-600"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round">
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        />
                        <path
                          d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z"
                          stroke-width="0"
                          fill="currentColor"
                        />
                      </svg>
                      <span class="text-gray-700 text-base">{item}</span>
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
      <div class="block w-full lg:row-span-2">
        <div
          x-data="{ activeSlide: 0, slides: ['/images/phone4.png', '/images/phone2.png', '/images/phone3.png'] }"
          class="h-full relative"
          role="region"
          aria-label="Image Slider">
          <!-- Template for each slide image -->
          <template
            x-for="(slide, index) in slides"
            :key="index">
            <div
              x-show="activeSlide === index"
              x-transition:enter="transition ease-out duration-500"
              x-transition:enter-start="opacity-0 transform scale-95"
              x-transition:enter-end="opacity-100 transform scale-100"
              x-transition:leave="transition ease-in duration-500"
              x-transition:leave-start="opacity-100 transform scale-100"
              x-transition:leave-end="opacity-0 transform scale-95"
              class="h-full w-full absolute inset-0"
              :aria-hidden="activeSlide !== index">
              <!-- Slide image -->
              <img
                :src="slide"
                alt="#"
                class="w-full h-full object-contain"
              />
            </div>
          </template>
          <!-- Previous slide button -->
          <button
            @click="activeSlide = activeSlide === 0 ? slides.length - 1 : activeSlide - 1"
            class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white border text-gray-900 rounded-full size-10 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            aria-label="Previous Slide">
            &larr;
          </button>
          <!-- Next slide button -->
          <button
            @click="activeSlide = activeSlide === slides.length - 1 ? 0 : activeSlide + 1"
            class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white border text-gray-900 rounded-full size-10 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            aria-label="Next Slide">
            &rarr;
          </button>
          <!-- Pagination indicators -->
          <div
            class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
            <template
              x-for="(slide, index) in slides"
              :key="index">
              <button
                @click="activeSlide = index"
                :class="{'bg-gray-800': activeSlide === index, 'bg-gray-400': activeSlide !== index}"
                class="h-3 w-3 rounded-full focus:outline-none"
                :aria-label="'Slide ' + (index + 1)"
                :aria-current="activeSlide === index ? 'true' : 'false'"
              ></button>
            </template>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
