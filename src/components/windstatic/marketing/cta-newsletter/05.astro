<section class="bg-gradient-to-b from-blue-500 to-indigo-600">
  <div class="relative px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="justify-center max-w-xl mx-auto text-center">
      <p
        class="text-xl font-semibold tracking-tight text-white lg:text-4xl lg:text-balance">
        Join our newsletter
      </p>
      <p class="mt-4 text-sm text-gray-200 lg:text-base lg:text-balance">
        Stay up to date with our latest news and updates.
      </p>
    </div>
    <form class="w-full mx-auto mt-8 sm:flex sm:max-w-md">
      <label
        for="email-address"
        class="sr-only"
        >Email address</label
      >
      <input
        id="email-address"
        type="email"
        name="email-address"
        autocomplete="email"
        placeholder="Enter your email"
        aria-placeholder="Enter your email"
        required=""
        class="block w-full h-10 px-4 py-2 text-sm text-white placeholder-gray-200 duration-300 border border-transparent rounded-lg shadow appearance-none ring-1 ring-white/20 bg-blue-950/20 focus:border-white/20 ring-offset-blue-950 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
      />
      <div class="mt-2 sm:ml-2 sm:mt-0 sm:flex-shrink-0">
        <button
          type="submit"
          class="flex items-center justify-center w-full h-10 gap-2 px-4 py-2 text-sm font-semibold text-gray-500 transition-all duration-300 bg-white border border-gray-300 rounded-lg shadow hover:text-gray-700 focus:ring-2 shadow-gray-500/5 focus:ring-gray-900 focus:ring-offset-2 ring-offset-gray-200 hover:border-gray-200 hover:shadow-none lg:w-auto">
          Subscribe
        </button>
      </div>
    </form>
    <p class="mt-4 text-sm text-center text-gray-200">
      We pretend to care about your data. Don't read our <a
        href="#"
        class="font-semibold text-white hover:text-gray-200"
        >privacy&nbsp;policy</a
      >.
    </p>
  </div>
</section>
