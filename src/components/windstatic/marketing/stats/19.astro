<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
    <div
      class="relative isolate overflow-hidden border shadow rounded-3xl px-6 pt-16 sm:px-16 md:pt-24 flex flex-col lg:gap-x-20 lg:px-24 lg:pt-0">
      <div
        class="mx-auto text-center lg:mx-0 lg:flex-auto lg:pt-24 lg:text-left">
        <div class="max-w-2xl lg:flex-auto">
          <span
            class="tracking-tight text-lg font-medium  text-gray-900"
            >Your tagline</span
          >
          <h1
            class="text-4xl mt-4 font-semibold tracking-tight text-gray-900 lg:text-balance">
            Empower your finances with our unmatched value
          </h1>
          <p class="text-base font-medium mt-4 text-gray-500">
            Experience low fees, unwavering commitment, and massive earnings
            with a service trusted by over 60 million users.
          </p>
        </div>
        <dl
          class="grid grid-cols-1 gap-x-6 gap-y-12 sm:grid-cols-2 md:grid-cols-4 mt-12">
          <div
            x-data="{ count: 0, target: 30, counter() { let interval = setInterval(() => { if (this.count < this.target) { this.count += 1; } else { clearInterval(interval); } }, 50); } }"
            x-intersect.once="counter()"
            class="flex flex-col">
            <dt class="mt-4 tracking-tight text-lg font-medium  text-gray-900">
              Working Individuals
            </dt>
            <dd
              x-text="`${count}%`"
              class="order-first text-5xl font-normal font-mono text-blue-600">
            </dd>
          </div>
          <div
            x-data="{ count: 0, target: 40, counter() { let interval = setInterval(() => { if (this.count < this.target) { this.count += 1; } else { clearInterval(interval); } }, 50); } }"
            x-intersect.once="counter()"
            class="flex flex-col">
            <dt class="mt-4 tracking-tight text-lg font-medium  text-gray-900">
              Super low fee
            </dt>
            <dd
              x-text="`${count}%`"
              class="order-first text-5xl font-normal font-mono text-blue-600">
            </dd>
          </div>
          <div
            x-data="{ count: 0, target: 50, counter() { let interval = setInterval(() => { if (this.count < this.target) { this.count += 1; } else { clearInterval(interval); } }, 50); } }"
            x-intersect.once="counter()"
            class="flex flex-col">
            <dt class="mt-4 tracking-tight text-lg font-medium  text-gray-900">
              Great Commitment
            </dt>
            <dd
              x-text="`${count}%`"
              class="order-first text-5xl font-normal font-mono text-blue-600">
            </dd>
          </div>
          <div
            x-data="{ count: 0, target: 60000000, counter() { let interval = setInterval(() => { if (this.count < this.target) { this.count += 1000000; } else { clearInterval(interval); this.count = this.target; } }, 50); } }"
            x-intersect.once="counter()"
            class="flex flex-col">
            <dt class="mt-4 tracking-tight text-lg font-medium  text-gray-900">
              Massive Earnings
            </dt>
            <dd
              x-text="`${(count / 1000000) % 1 === 0 ? (count / 1000000) : (count / 1000000).toFixed(1)}M`"
              class="order-first text-5xl font-normal font-mono text-blue-600">
            </dd>
          </div>
        </dl>
      </div>
      <div class="relative mt-16 h-80 lg:mt-8">
        <img
          class="top-0 w-[70rem] max-w-none rounded-2xl border shadow"
          src="/images/dashboardLight.svg"
          alt="img"
        />
      </div>
    </div>
  </div>
</section>
