---
import { Image } from "astro:assets";
import Text from "../fundations/typography/Text.astro";
import Wrapper from "../fundations/containers/Wrapper.astro";
---

<section>
  <Wrapper variant="standard" class="relative py-12">
    <ul
      class="grid grid-cols-1 col-span-3 gap-x-6 gap-y-6 sm:grid-cols-2 sm:gap-y-10 md:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-4 xl:gap-x-8"
    >
      <li class="relative">
        <div class="relative rounded-lg group">
          <img
            src="/_image?href=%2F%40fs%2FUsers%2Fmichelandreuzza%2FDesktop%2FProjects%2Foxbow%2Fsrc%2Fimages%2Fheros.png%3ForigWidth%3D768%26origHeight%3D400%26origFormat%3Dpng&f=webp"
            data-image-component="true"
            class="object-cover object-bottom"
            alt="Hero Sections"
            width="768"
            height="400"
            loading="lazy"
            decoding="async"
          />
          <div class="flex items-center justify-between mt-2">
            <p
              class="text-sm font-medium 2xl:text-base text-base-900 group-hover:text-accent-600"
            >
              <a
                class="flex items-center justify-between gap-2"
                title="#_"
                href="/playground/marketing/hero"
              >
                <span class="absolute -inset-2.5 z-10"></span>
                <span class="relative">Tailwind CSS Color Picker</span>
                
              </a>
            </p>
            
          </div>
        </div>
      </li>
    </ul>
  </Wrapper>
</section>
