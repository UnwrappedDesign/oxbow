---
import AnimatedGradient from "../assets/AnimatedGradient.astro";
import Text from "../fundations/typography/Text.astro";
import Wrapper from "../fundations/containers/Wrapper.astro";
---

<style>
  .container2 {
    -webkit-transform: scaleY(-1);
    transform: scaleY(-1);
  }
  .blob2 {
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
  }
  .blob {
    width: 112px;
    height: 112px;
    display: grid;
    filter: blur(6px) contrast(20);
    padding: 11.2px;
    mix-blend-mode: darken;
  }

  .blob:before,
  .blob:after {
    content: "";
    grid-area: 1/1;
    width: 44.8px;
    height: 44.8px;
    background: #004cff;
    animation: blob-rhf26m 2s infinite;
  }

  .blob:after {
    animation-delay: -1s;
  }

  @keyframes blob-rhf26m {
    0% {
      transform: translate(0, 0);
    }

    25% {
      transform: translate(100%, 0);
    }

    50% {
      transform: translate(100%, 100%);
    }

    75% {
      transform: translate(0, 100%);
    }

    100% {
      transform: translate(0, 0);
    }
  }
</style>
<section class="relative">
  <Wrapper variant="standard" class="py-24">
    <div class="flex flex-col">
      <div class="rotate-45">
        <div class="flex items-center w-32 mx-auto container2">
          <div class="mx-auto blob blob2"></div>
          <div class="relative mx-auto blob"></div>
        </div>
        <div class="flex items-center w-32 mx-auto">
          <div class="mx-auto blob blob2"></div>
          <div class="relative mx-auto blob"></div>
        </div>
      </div>

      <Text
        tag="h1"
        variant="displayMD"
        class="pt-24 tracking-tight text-center text-base-900Ã¥ dark:text-white lg:text-balance"
        >Hold on, we are building the blocks...</Text
      >
    </div>
  </Wrapper>
</section>
