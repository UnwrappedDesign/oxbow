---
import Button from "@/components/fundations/buttons/Button.astro";
import Burger from "@/components/fundations/icons/Burger.astro";
---

<div
  class="flex items-center justify-between p-4 bg-white dark:bg-zinc-950 border-b border-zinc-200 dark:border-zinc-800 lg:hidden"
>
  <h1 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50">
    Documentation
  </h1>
  <Button
    variant="muted"
    size="sm"
    iconOnly
    type="button"
    class="inline-flex items-center gap-2 rounded-lg border border-zinc-200 bg-white px-3 py-1.5 text-sm font-medium text-zinc-700 shadow-sm transition hover:border-accent-300 hover:text-accent-600 dark:border-zinc-700 dark:bg-zinc-900 dark:text-zinc-200 dark:hover:border-accent-300 dark:hover:text-accent-200"
    data-docs-toggle
  >
    <Burger size="sm" slot="right-icon" />
    <span class="sr-only">Open navigation</span>
  </Button>
</div>
