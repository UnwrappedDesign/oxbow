---
const user = Astro.locals.user;
---

<div
  class="w-full max-w-xl px-8 bg-white mx-auto flex flex-col lg:flex-row lg:items-center lg:justify-between py-4"
>
  <div
    x-data="navigation()"
    class="flex items-center justify-between text-black w-full text-sm"
  >
    <a href="/" class="font-medium">❖ Windstatic</a>
    <div class="flex gap-3 text-gray-500">
      {
        !user && (
          <>
            <a href="/login">Log in</a>
            <a class="lg:border-l lg:pl-4" href="/pricing">
              Get all access for $149
            </a>
          </>
        )
      }
      {user && <div x-popover class="relative">
        <button x-popover:button type="button" class="flex items-center gap-2">
          Account

          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="size-4 icon icon-tabler icons-tabler-outline icon-tabler-chevron-down"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M6 9l6 6l6 -6"></path></svg
          >
        </button>
        <div
          x-cloak
          x-popover:panel
          x-transition.origin.top.left
          class="absolute right-0 top-full -mr-0.5 mt-3 w-48 origin-top-right divide-y divide-gray-100 rounded-lg bg-white text-sm font-normal text-gray-600 shadow ring-1 ring-gray-900/5 focus:outline-none sm:-mr-3.5 transform opacity-100 scale-100"
        >
          <p class="truncate px-3.5 py-3" role="none">
            <span class="block text-xs text-gray-500" role="none"
              >Signed in as</span
            >
            <!-- This span has to be the email address of the user, when logged in -->
            <span class="mt-0.5 font-semibold" role="none">
              { user.email }
            </span>
          </p>
          <div class="py-1.5" role="none">
            <a
              class="py-1.5 px-3.5 hover:bg-gray-50 hover:text-blue-500 items-center gap-2 flex"
              role="menuitem"
              tabindex="-1"
              href="/support"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-lifebuoy size-4"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path><path
                  d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path><path
                  d="M15 15l3.35 3.35"></path><path d="M9 15l-3.35 3.35"
                ></path><path d="M5.65 5.65l3.35 3.35"></path><path
                  d="M18.35 5.65l-3.35 3.35"></path></svg
              >Support</a
            >
            <a
              class="py-1.5 px-3.5 hover:bg-gray-50 hover:text-blue-500 items-center gap-2 flex"
              role="menuitem"
              tabindex="-1"
              href="/license"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-license size-4"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M15 21h-9a3 3 0 0 1 -3 -3v-1h10v2a2 2 0 0 0 4 0v-14a2 2 0 1 1 2 2h-2m2 -4h-11a3 3 0 0 0 -3 3v11"
                ></path><path d="M9 7l4 0"></path><path d="M9 11l4 0"
                ></path></svg
              >License</a
            >
          </div>
          <div class="py-1.5" role="none">
            <!-- When the user clicks on tis link, this takes to Lemon Squeezy's customers billing page -->
            <a
              class="py-1.5 px-3.5 hover:bg-gray-50 hover:text-blue-500 items-center gap-2 flex"
              role="menuitem"
              tabindex="-1"
              href="https://windstatic.lemonsqueezy.com/billing"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-settings size-4"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M10.325 4.317c.426 -1.756 2.924 -1.756 3.35 0a1.724 1.724 0 0 0 2.573 1.066c1.543 -.94 3.31 .826 2.37 2.37a1.724 1.724 0 0 0 1.065 2.572c1.756 .426 1.756 2.924 0 3.35a1.724 1.724 0 0 0 -1.066 2.573c.94 1.543 -.826 3.31 -2.37 2.37a1.724 1.724 0 0 0 -2.572 1.065c-.426 1.756 -2.924 1.756 -3.35 0a1.724 1.724 0 0 0 -2.573 -1.066c-1.543 .94 -3.31 -.826 -2.37 -2.37a1.724 1.724 0 0 0 -1.065 -2.572c-1.756 -.426 -1.756 -2.924 0 -3.35a1.724 1.724 0 0 0 1.066 -2.573c-.94 -1.543 .826 -3.31 2.37 -2.37c1 .608 2.296 .07 2.572 -1.065z"
                ></path><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"
                ></path></svg
              >Account portal ↗</a
            >
            <!-- When the user clicks on the button, this has to redirect to login page -->
            <button
              type="button"
              class="py-1.5 px-3.5 hover:bg-gray-50 hover:text-blue-500 items-center gap-2 flex w-full"
              role="menuitem"
              tabindex="-1"
              @click="signOut()"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-logout-2 size-4"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M10 8v-2a2 2 0 0 1 2 -2h7a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-7a2 2 0 0 1 -2 -2v-2"
                ></path><path d="M15 12h-12l3 -3"></path><path d="M6 15l-3 -3"
                ></path></svg
              >Sign out</button
            >
          </div>
        </div>
      </div>}
    </div>
  </div>
</div>
<script>
  import { getAuth } from "firebase/auth";

  import { app } from "@/firebase/client";

  const auth = getAuth(app);
  document.addEventListener("alpine:init", () => {
    Alpine.data("navigation", () => ({
      async signOut() {
        await auth.signOut();
        fetch("/api/auth/signout");
      },
    }));
  });
</script>
