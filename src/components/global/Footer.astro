---
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
const navLinks = [
  {
    title: "Navigation",
    links: [
      { label: "Home", href: "/" },
      { label: "Log in", href: "/login" },
      { label: "Pricing", href: "/pricing" },
      { label: "Support", href: "/support" },
      { label: "Affiliates", href: "/affiliates" },
      { label: "Customers", href: "/customers" },
      { label: "Changelog", href: "/changelog" },
    ],
  },
  {
    title: "Legal",
    links: [
      { label: "Faq", href: "/faq" },
      { label: "Terms", href: "/terms" },
      { label: "Privacy", href: "/privacy" },
      { label: "License", href: "/license" },
      { label: "Refund", href: "/refund" },
    ],
  },
  {
    title: "Legal",
    links: [
      { label: "X", href: "https://x.com/OxbowUI" },
      { label: "BlueSky", href: "https://bsky.app/profile/oxbowui.com" },
    ],
  },
  {
    title: "Tools",
    links: [
      {
        label: "All Tailwind CSS tools",
        href: "/free-tools",
      },
      {
        label: "Tailwind CSS Grid ",
        href: "/free-tools/tailwind-css-grid-generator",
      },
      {
        label: "Tailwind CSS Gradient",
        href: "/free-tools/tailwind-css-gradient-generator",
      },
    ],
  },
];
---

<footer>
  <Wrapper variant="standard" class="py-24">
    <a aria-label="hom" href="/">
      <Logo class="h-12 text-accent-600 dark:text-white" />
    </a>
    <div class="flex flex-wrap mt-2 gap-2">
      {
        navLinks.map((section) => (
          <ul
            role="list"
            class="flex flex-wrap text-sm text-base-500 dark:text-base-400 gap-4 "
          >
            {section.links.map((link) => (
              <li>
                <a
                  class="transition hover:text-black dark:hover:text-white duration-300"
                  href={link.href}
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        ))
      }
    </div>
    <p class="mt-8 text-xs text-base-400">
      Â© <span>2025</span> Oxbow UI
    </p>
  </Wrapper>
</footer>
