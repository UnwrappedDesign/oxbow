---

<footer>
  <div class="max-w-xl px-8 mx-auto">
    <div class="flex flex-col gap-12">
      <a
        href="/"
        class="font-medium col-span-4 "
        >❖ Windstatic</a
      >
      <div
        class="prose-styles flex flex-col gap-8 lg:grid-cols-3 col-span-2 lg:-mt-8">
        {
          links.map((category) => (
            <div>
              <h2>{category.category}</h2>
              <ul
                class="not-prose space-y-2 w-full"
                role="list">
                {category.items.map((item) => (
                  <li>
                    <a
                      class="hover:text-blue-500   w-full flex items-center justify-between"
                      href={item.href}>
                      {item.title}
                      <span>&rarr;</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
      <div class="col-span-full  prose-styles mt-12">
        <p>
          <small>
            All rights reserved. Windstatic is not affiliated with Tailwind Labs
            team, nor is it endorsed by or sponsored by this one. A side project
            by <a href="https://michaelandreuzza.com">Michael Andreuzza</a> This
            website was built with Astro JS & Tailwind CSS. Crafted in Åland Islands,
            Finland.
          </small>
        </p>
      </div>
    </div>
    <div class="prose-styles flex justify-between">
      <p class="text-sm">
        <span
          class="flex gap-2 font-medium"
          x-data="{ year: new Date().getFullYear() }">
          <span>© Windstatic</span>
          <span x-text="year"></span>
        </span>
      </p>
      <p>
        <span
          id="clock"
          class="text-sm">
        </span>
      </p>
    </div>
  </div>
</footer>
<script type="module">
  function updateClock() {
    const now = new Date(); // Get the current date and time
    const hours = now.getHours(); // 0-23
    const minutes = now.getMinutes(); // 0-59
    const seconds = now.getSeconds(); // 0-59
    // Format time as HH:MM:SS
    // Use .toString().padStart(2, '0') to add leading zeros if needed
    const timeString = [
      hours.toString().padStart(2, "0"),
      minutes.toString().padStart(2, "0"),
      seconds.toString().padStart(2, "0"),
    ].join(":");
    // Update the clock element with the time
    document.getElementById("clock").textContent = timeString;
  }
  // Update the clock every second
  setInterval(updateClock, 1000);
  // Initialize the clock
  updateClock();
</script>
