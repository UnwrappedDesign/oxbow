---
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const siteLinks = [
  {
    category: "Navigation",
    items: [
      { title: "Home", href: "/" },
      { title: "Log in", href: "/login" },
      { title: "Pricing", href: "/pricing" },
      { title: "Support", href: "/support" },
      { title: "Affiliates", href: "/affiliates" },
      { title: "Customers", href: "/customers" },
    ],
  },
  {
    category: "Legal",
    items: [
      { title: "Faq", href: "/faq" },
      { title: "Terms", href: "/terms" },
      { title: "Privacy", href: "/privacy" },

      { title: "License", href: "/license" },
      { title: "Refund", href: "/refund" },
    ],
  },
  {
    category: "Tools",
    items: [
      {
        title: "Tailwind Grid ",
        href: "/free-tools/tailwind-grid-generator",
      },
      {
        title: "Tailwind Gradient",
        href: "/free-tools/tailwind-gradient-generator",
      },
    ],
  },
];
---

<footer class="border-t border-base-200">
  <Wrapper class="relative pt-24">
    <div class="flex flex-col gap-12">
      <div class="border-b pb-5 sm:flex items-start sm:justify-between">
        <Text
          tag="a"
          variant="textBase"
          href="/"
          class="flex items-center w-full gap-3 font-medium sm:w-auto group"
          ><span
            class="duration-300 group-hover:text-accent-600 group-hover:animate-pulse"
            ><img
              class="h-7 2xl:h-9"
              src="/images/oxbow/windLogo.png"
              alt="#_"
            /></span
          > oxbow ui</Text
        >
        <Text
          tag="p"
          variant="textBase"
          class="text-base-600 font-medium max-w-xl"
        >
          Premium components, elements and layouts For freelancers, developers,
          businesses, and personal use. Beautifully crafted with Tailwind CSS —
          Simple & easy to customise.
        </Text>
      </div>

      <div class="grid grid-cols-1 md:flex gap-12">
        {
          siteLinks.map((category) => (
            <div>
              <Text tag="h3" variant="textLG" class="font-semibold text-black">
                {category.category}
              </Text>
              <ul class="w-full space-y-1 mt-4" role="list">
                {category.items.map((item) => (
                  <li>
                    <Text
                      tag="a"
                      variant="textBase"
                      class="flex items-center text-base-600  justify-between w-full font-normal focus:outline-none hover:text-accent-600"
                      href={item.href}
                    >
                      {item.title}
                    </Text>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>

      <svg
        class="-mb-[3.6rem] lg:-mb-[4rem] text-black
         mt-24"
        viewBox="0 0 2531 452"
        fill="none"
