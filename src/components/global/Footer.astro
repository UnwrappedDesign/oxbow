---
const links = [
  {
    category: "Navigation",
    items: [
      { title: "Home", href: "/" },
      { title: "Pricing", href: "/pricing" },
      { title: "Support", href: "/support" },
      { title: "Affiliates", href: "/affiliates" },
    ],
  },
  {
    category: "Legal",
    items: [
      { title: "Pricing", href: "/pricing" },
      { title: "Faq", href: "/faq" },
      { title: "Terms", href: "/terms" },
      { title: "Privacy", href: "/privacy" },
      { title: "License", href: "/license" },
      { title: "Refund", href: "/refund" },
    ],
  },
];
---

<footer>
  <div class="max-w-7xl px-8 mx-auto">
    <div
      class="prose-styles grid grid-cols-1 md:grid-cols-2 gap-8 lg:grid-cols-3">
      {
        links.map((category) => (
          <div>
            <h2>{category.category}</h2>
            <ul
              class="not-prose space-y-2"
              role="list">
              {category.items.map((item) => (
                <li>
                  <a
                    class="hover:text-blue-500 hover:underline"
                    href={item.href}>
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <div class="col-span-full">
        <p>
          <small>
            All rights reserved. Windstatic is not affiliated with Tailwind Labs
            team, nor is it endorsed by or sponsored by this one. A side project
            by <a href="https://michaelandreuzza.com">Michael Andreuzza</a> This website
            was built with Astro JS & Tailwind CSS. Crafted in Åland Islands, Finland.
          </small>
        </p>
      </div>
    </div>
    <div class="prose-styles flex justify-between">
      <p class="text-sm">
        <span
          class="flex gap-2 font-medium"
          x-data="{ year: new Date().getFullYear() }">
          <span>© Windstatic</span>
          <span x-text="year"></span>
        </span>
      </p>
      <p>
        <span
          id="clock"
          class="text-sm">
        </span>
      </p>
    </div>
  </div>
</footer>
<script type="module">
  function updateClock() {
    const now = new Date(); // Get the current date and time
    const hours = now.getHours(); // 0-23
    const minutes = now.getMinutes(); // 0-59
    const seconds = now.getSeconds(); // 0-59
    // Format time as HH:MM:SS
    // Use .toString().padStart(2, '0') to add leading zeros if needed
    const timeString = [
      hours.toString().padStart(2, "0"),
      minutes.toString().padStart(2, "0"),
      seconds.toString().padStart(2, "0"),
    ].join(":");
    // Update the clock element with the time
    document.getElementById("clock").textContent = timeString;
  }
  // Update the clock every second
  setInterval(updateClock, 1000);
  // Initialize the clock
  updateClock();
</script>
