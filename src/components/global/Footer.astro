---
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
const navLinks = [
  {
    title: "Navigation",
    links: [
      { label: "Home", href: "/" },
      { label: "Log in", href: "/login" },
      { label: "Pricing", href: "/pricing" },
      { label: "Support", href: "/support" },
      { label: "Affiliates", href: "/affiliates" },
      { label: "Customers", href: "/customers" },
      { label: "Changelog", href: "/changelog" },
    ],
  },
  {
    title: "Legal",
    links: [
      { label: "Faq", href: "/faq" },
      { label: "Terms", href: "/terms" },
      { label: "Privacy", href: "/privacy" },
      { label: "License", href: "/license" },
      { label: "Refund", href: "/refund" },
    ],
  },
  {
    title: "Legal",
    links: [
     
      { label: "BlueSky", href: "https://bsky.app/profile/oxbowui.com" },
    ],
  },
  {
    title: "Tools",
    links: [
      {
        label: "All Tailwind CSS tools",
        href: "/free-tools",
      },
      {
        label: "Tailwind CSS Grid ",
        href: "/free-tools/tailwind-css-grid-generator",
      },
      {
        label: "Tailwind CSS Gradient",
        href: "/free-tools/tailwind-css-gradient-generator",
      },
    ],
  },
];
---

<footer>
  <Wrapper variant="standard" class="py-24">
    <div class="grid grid-cols-1 md:grid-cols-4">
      <a aria-label="hom" href="/">
        <Logo class="h-12 text-accent-600" />
      </a>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-2 lg:col-span-3">
        {
          navLinks.map((section) => (
            <div>
              <Text
                tag="h3"
                variant="textBase"
                class="font-medium text-base-900"
              >
                {section.title}
              </Text>
              <ul
                role="list"
                class="flex flex-col mt-2 text-xs font-medium text-base-500  gap-1"
              >
                {section.links.map((link) => (
                  <li>
                    <a
                      class="transition hover:text-black  duration-300"
                      href={link.href}
                    >
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
    <Text
      tag="p"
      variant="textXS"
      class="pt-8 mt-8 text-xs border-t text-base-500 border-base-200"
    >
      Â© <span>2025</span> Oxbow UI
    </Text>
  </Wrapper>
</footer>
