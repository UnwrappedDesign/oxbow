---
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Button from "@/components/fundations/buttons/Button.astro";

// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
const navLinks = [
  {
    title: "Navigation",
    links: [
      { label: "Home", href: "/" },
      { label: "Log in", href: "/login" },
      { label: "Pricing", href: "/pricing" },
      { label: "Support", href: "/support" },
      { label: "Affiliates", href: "https://oxbowui.affonso.io" },
      {
        label: "Polar customer portal",
        href: "https://polar.sh/oxbow-ui/portal/request",
      },
      { label: "Customers", href: "/customers" },
      { label: "Changelog", href: "/changelog" },
    ],
  },
  {
    title: "Legal",
    links: [
      { label: "Faq", href: "/faq" },
      { label: "Terms", href: "/terms" },
      { label: "Privacy", href: "/privacy" },
      { label: "License", href: "/license" },
      { label: "Refund", href: "/refund" },
    ],
  },
  {
    title: "Legal",
    links: [{ label: "BlueSky", href: "https://bsky.app/profile/oxbowui.com" }],
  },
  {
    title: "Tools",
    links: [
      {
        label: "All Tailwind CSS tools",
        href: "/free-tools",
      },
      {
        label: "Tailwind CSS Grid ",
        href: "/free-tools/tailwind-css-grid-generator",
      },
      {
        label: "Tailwind CSS Gradient",
        href: "/free-tools/tailwind-css-gradient-generator",
      },
    ],
  },
];
---

<footer class="border-t border-base-200">
  <Wrapper variant="wide" class="py-8">
    <div class="bg-white p-4 lg:p-20 py-12 rounded-xl shadow-oxbow">
      <div class="text-center">
        <Logo class="h-12 mx-auto text-accent-500" />
        <Text
          tag="h2"
          variant="displayMD"
          class="font-semibold text-base-900 text-balance mt-8"
        >
          Lifetime access
        </Text>
        <Text
          tag="p"
          variant="textLG"
          class="font-medium text-base-500 text-balance mt-2 max-w-2xl mx-auto"
        >
          Get everything for $129. One-time payment. Lifetime access, updates,
          and support included.
        </Text>

        <Button
          size="base"
          variant="accent"
          href="/pricing"
          id="full-access-cta-bottom"
          data-umami-event="full-access-cta-bottom"
          title="Get the full-access"
          class="mt-8 w-fit mx-auto"
        >
          Full access for $129
        </Button>
      </div>

      <div
        class="grid grid-cols-2 gap-4 md:grid-cols-4 mt-12 pt-12 border-t border-base-100"
      >
        {
          navLinks.map((section, i) => (
            <nav aria-label={section.title}>
              <Text tag="h3" variant="textSM" class="font-medium text-base-900">
                {section.title}
              </Text>
              <ul role="list" class="flex flex-col mt-2 gap12">
                {section.links.map((link, j) => (
                  <li>
                    <a
                      class="font-medium text-base-600 hover:text-black focus:outline focus:outline-2 text-xs focus:outline-offset-2 focus:outline-accent-600"
                      href={link.href}
                      title={link.label}
                    >
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          ))
        }
      </div>
    </div>
  </Wrapper>
</footer>
