---
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Button from "@/components/fundations/buttons/Button.astro";
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations

const navLinks = [
  {
    title: "Navigation",
    links: [
      { label: "Home", href: "/" },
      { label: "Changelog", href: "/changelog" },
      { label: "Code of Conduct", href: "/code-of-conduct" },
    ],
  },

  {
    title: "Social",
    links: [
      { label: "Gabriel ", href: "https://x.com/g_perales" },
      { label: "Michael", href: "https://x.com/Mike_Andreuzza" },
      { label: "Oxbow UI", href: "https://x.com/oxbowui" },
    ],
  },
  {
    title: "Tools",
    links: [
      {
        label: "Grid generator",
        href: "/tools/tailwind-css-grid-generator",
      },
      {
        label: "Gradient generator",
        href: "/tools/tailwind-css-gradient-generator",
      },
      {
        label: "Color picker",
        href: "/tools/tailwind-css-color-palette",
      },
    ],
  },
];
---

<footer class="overflow-hidden">
  <Wrapper variant="narrow" class="pb-8 mt-24">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3">
      <a href="/">
        <span class="sr-only">Go to homepage</span>
        <Logo class="h-8 text-zinc-900 dark:text-white" />
      </a>
      <div class="grid grid-cols-2 lg:grid-cols-3 lg:col-span-2">
        {
          navLinks.map((section, i) => (
            <nav aria-label={section.title}>
              <Text
                tag="h3"
                variant="textXS"
                class="font-medium  text-zinc-900"
              >
                {section.title}
              </Text>
              <ul
                role="list"
                class="flex flex-col text-xs  space-y-1 text-zinc-600 "
              >
                {section.links.map((link, j) => (
                  <li>
                    <a
                      class="hover:text-accent-600"
                      href={link.href}
                      title={link.label}
                      target={
                        link.href.startsWith("http") ? "_blank" : undefined
                      }
                      rel={
                        link.href.startsWith("http")
                          ? "noopener noreferrer"
                          : undefined
                      }
                    >
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          ))
        }
      </div>
    </div>
    <div
      class="flex items-center justify-between pt-8 mt-8 border-t border-base-200 dark:border-base-800"
    >
      <Text tag="p" variant="textXS" class="text-base-600 dark:text-base-400">
        Â© {new Date().getFullYear()} Oxbow. All rights reserved.
      </Text>
      <a
        href="https://www.netlify.com"
        target="_blank"
        rel="noopener noreferrer"
        title="Deploys by Netlify"
      >
        <img
          src="https://www.netlify.com/v3/img/components/netlify-light.svg"
          alt="Deploys by Netlify"
          class="h-8 dark:hidden"
        />
        <img
          src="https://www.netlify.com/v3/img/components/netlify-dark.svg"
          alt="Deploys by Netlify"
          class="hidden h-8 dark:block"
        />
      </a>
    </div>
  </Wrapper>
</footer>
