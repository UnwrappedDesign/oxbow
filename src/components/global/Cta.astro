---
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// Check if the current page is the index page
const isIndexPage = Astro.url.pathname === "/";
---

<section class="border-t border-base-200">
  <!-- Conditionally render this section based on the page -->
  {
    !isIndexPage && (
      <Wrapper variant="standard" class="py-12 space-y-12">
        <div class="relative p-10 lg:p-10 bg-accent-600 overflow-hidden ring-4 ring-base-100 rounded-xl border border-base-200">
          <img
            class="invert absolute opacity-10 lg:-right-64 -top-12"
            src="/images/oxbow/windLogoDark.png"
            alt="#_"
          />
          <div>
            <Text
              tag="p"
              variant="displayBase"
              class="text-white font-medium text-pretty"
            >
              Get lifetime access to every component, elements and layouts
              available today for <del class="opacity-45">$149</del> $67 and own
              it forever. Plus, new additions, lifetime updates, use on
              unlimited projects and enjoy lifetime support.
              <br />
              <br />
              <Text tag="span" class="text-white/80 italic lg:block">
                No subscription required!
              </Text>
            </Text>
            <div class="flex mt-8">
              <Text
                tag="a"
                href="/pricing"
                aria-label="Pricing"
                title="Get full access"
                id="access-footer-cta"
                data-umami-event="access-footer-cta"
                class="rounded-full flex items-center transition-all duration-200 focus:ring-2 focus:ring-offset-2 focus:outline-none text-base-700 bg-white ring-offset-2 ring-offset-accent-500 hover:text-accent-600 focus:ring-base-200 h-9 px-4 py-2 text-sm font-medium justify-center"
              >
                Get access for <del class="opacity-45">$149</del> $67
              </Text>
            </div>
          </div>
        </div>
      </Wrapper>
    )
  }

  <!-- Lexington Section (Always shown) -->
  <Wrapper variant="standard" class="py-12 space-y-12">
    <div
      class="relative px-6 pt-16 overflow-hidden isolate bg-white rounded-xl ring-4 ring-base-50 border border-base-200 sm:px-16 md:pt-24 lg:flex lg:gap-x-12 lg:px-12 lg:pt-0 lg:col-span-3"
    >
      <div
        class="max-w-xs mx-auto text-center lg:mx-0 lg:flex-auto lg:py-12 lg:text-left"
      >
        <div class="flex flex-wrap justify-center lg:justify-start">
          <div class="flex items-center text-sm font-medium text-black">
            <svg
              class="flex-none stroke-current size-4"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              viewBox="0 0 100 100"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M63.3694 5.33018C64.129 6.27325 64.5164 7.54562 65.291 10.0906L82.215 65.6862C75.8581 62.3873 69.0351 60.0773 61.9815 58.836L50.9623 21.5986C50.8744 21.3015 50.6928 21.0408 50.4445 20.8556C50.1962 20.6704 49.8945 20.5705 49.5848 20.571C49.275 20.5715 48.9737 20.6723 48.7259 20.8583C48.4782 21.0443 48.2974 21.3055 48.2105 21.6029L37.3247 58.8172C30.2392 60.0528 23.3848 62.3665 17 65.6778L34.0071 10.0776C34.7842 7.53708 35.1728 6.26679 35.9324 5.32559C36.603 4.49465 37.4753 3.84929 38.466 3.45101C39.5884 3 40.9167 3 43.5734 3H55.7208C58.381 3 59.7111 3 60.8344 3.45205C61.8261 3.85109 62.6988 4.49772 63.3694 5.33018Z"
                fill="black"></path>
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M65.3945 68.3321C62.6045 70.7178 57.0359 72.3448 50.6215 72.3448C42.7487 72.3448 36.15 69.8938 34.399 66.5975C33.773 68.4867 33.6327 70.6488 33.6327 72.03C33.6327 72.03 33.2203 78.812 37.9374 83.5291C37.9374 81.0797 39.9229 79.0942 42.3722 79.0942C46.5704 79.0942 46.5657 82.7568 46.5619 85.7284L46.5616 85.9936C46.5616 90.5039 49.3182 94.3703 53.2386 96C52.6531 94.7957 52.3246 93.4433 52.3246 92.0141C52.3246 87.7124 54.85 86.1107 57.7851 84.2492C60.1204 82.7681 62.7151 81.1226 64.5033 77.8215C65.4364 76.0991 65.9662 74.1264 65.9662 72.03C65.9662 70.7407 65.7658 69.4982 65.3945 68.3321V68.3321Z"
                fill="#d94dd1"
                stroke="#d94dd1"></path>
            </svg>
            <span class="ml-2.5">Astro</span>
          </div>
          <div class="flex items-center ml-6 text-sm font-medium text-black">
            <svg
              viewBox="0 0 256 154"
              aria-label="Tailwind CSS"
              class="flex-none stroke-current size-4"
              width="64"
              height="64"
              astro-icon="logos:tailwindcss-icon"
            >
              <path
                fill="#38bdf9"
                d="M128 0C93.867 0 72.533 17.067 64 51.2 76.8 34.133 91.733 27.733 108.8 32c9.737 2.434 16.697 9.499 24.401 17.318C145.751 62.057 160.275 76.8 192 76.8c34.133 0 55.467-17.067 64-51.2-12.8 17.067-27.733 23.467-44.8 19.2-9.737-2.434-16.697-9.499-24.401-17.318C174.249 14.743 159.725 0 128 0zM64 76.8C29.867 76.8 8.533 93.867 0 128c12.8-17.067 27.733-23.467 44.8-19.2 9.737 2.434 16.697 9.499 24.401 17.318C81.751 138.857 96.275 153.6 128 153.6c34.133 0 55.467-17.067 64-51.2-12.8 17.067-27.733 23.467-44.8 19.2-9.737-2.434-16.697-9.499-24.401-17.318C110.249 91.543 95.725 76.8 64 76.8z"
              ></path>
            </svg>
            <span class="ml-2.5">Tailwind CSS</span>
          </div>
        </div>
        <Text
          tag="p"
          variant="textXL"
          class="mt-4 font-medium tracking-tight text-black"
        >
          Lexington Themes
        </Text>
        <Text tag="p" variant="textBase" class="max-w-2xl mt-4 text-base-500">
          Premium multipage themes &amp; UI Kits Beautifully crafted with Astro
          JS and Tailwind CSS.
        </Text>
        <div class="mt-8 flex">
          <Text
            tag="a"
            href="https://lexingtonthemes.com"
            class="flex items-center justify-center w-full border border-accent-950 ring-4 ring-base-50 sm:w-auto h-12 px-6 py-2 font-medium text-white transition-all duration-200 rounded-full gap-x-2 focus:ring-2 focus:ring-offset-2 focus:outline-none bg-accent-950 hover:bg-accent-900 focus:ring-accent-900"
            >Visit Lexington
          </Text>
        </div>
      </div>
      <div class="relative mt-8 h-80">
        <img
          class="absolute left-0 top-0 object-cover w-[57rem] max-w-none bg-white"
          src="https://www.colorsandfonts.com/images/lexington.png"
          alt="Lexington Themes"
          width="1824"
          height="1080"
        />
      </div>
    </div>
  </Wrapper>
</section>
