        <!-- Conditionally render this section based on the page -->
        <Wrapper variant="standard" class="py-12 space-y-12">
        <div class="relative p-10 lg:p-10 bg-accent-600 overflow-hidden ring-4 ring-base-100 rounded-xl border border-base-200">
          <img
            class="invert absolute opacity-10 lg:-right-64 -top-12"
            src="/images/oxbow/windLogoDark.png"
            alt="#_"
          />
          <div class="relative">
            <Text
              tag="p"
              variant="textXS"
              class="font-bold mt-4 uppercase text-white"
            >
              Get acces
            </Text>
            <Text
              tag="h3"
              variant="displayLG"
              class="mt-4 text-white font-semibold text-balance"
            >
              Get lifetime access to all components, elements, and layouts for
              only <del class="opacity-45">$149</del> $67
            </Text>
            <Text
              tag="p"
              variant="textXL"
              class="mt-2 text-base-200 font-medium text-balance max-w-xl"
            >
