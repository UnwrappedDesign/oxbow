---
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import OxbowLink from "@/components/fundations/buttons/OxbowLink.astro";
---

<section>
  <!-- Conditionally render this section based on the page -->
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 items-center py-8 border border-base-200 bg-white justify-center w-full gap-x-4 gap-y-2"
    >
      <div
        class="px-4 relative before:absolute after:absolute before:bg-base-800 before:top-0 before:left-0 before:h-6 before:w-0.5 after:top-8 after:bottom-0 after:left-0 after:w-0.5"
      >
        <Text
          tag="h3"
          variant="textBase"
          class="text-base-600 font-medium text-balance"
        >
          Get over 400+ well crafter components & UI blocks ready to
          copy-and-paste on your next project.
        </Text>
      </div>
      <div class="flex lg:ml-auto">
        <OxbowLink
          href="/pricing"
          size="base"
          variant="accent"
          id="tools-cta"
          data-umami-event="tools-cta"
          class="w-auto"
        >
          Get all access!
        </OxbowLink>
      </div>
    </div>
  </Wrapper>
</section>
