---
// Fundations
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import OxbowLink from "@/components/fundations/buttons/OxbowLink.astro";
---

<section>
  <!-- Conditionally render this section based on the page -->
  <Wrapper variant="standard" class="border-t border-base-900">
    <div class="flex items-center justify-between gap-2 outline rounded-xl outline-base-900 shadow-2xl shadow-black bg-black p-8 ">
      <Text
        tag="h3"
        variant="textBase"
        class="text-white  text-balance"
      >
        Get over 400+ well crafter components & UI blocks ready to
        copy-and-paste on your next project.
      </Text>
      <div class="flex">
        <OxbowLink
          size="xxs"
          variant="accent"
          href="/pricing"
          id="tools-cta"
          data-umami-event="tools-cta"
          class="w-auto"
        >
          Get all access!
        </OxbowLink>
      </div>
    </div>
  </Wrapper>
</section>
