const started = [
  {
    icon: "Settings",
    title: "Simple customization ",
    description:
      "The bundle license is a one-time purchase. Oxbow UI will never charge you again after the initial payment.",
  },
  {
    icon: "Accessibility",
    title: "Keyboard accessibility",
    description:
      "All elements are keyboard accessible, ensuring a smooth experience for screen reader users.",
  },
  {
    icon: "Brain",
    title: "Production ready",
    description:
      "The components are rigorously tested on the latest browsers, ensuring reliability and handling edge cases effectively.",
  },
];
---

<section class="scroll-mt-24 border-t border-base-200" id="features">
  <Wrapper variant="standard" class="py-6">
    <Text
      tag="h3"
      variant="displaySM"
      class="text-black font-medium tracking-tighter"
    >
      What's included
    </Text>
  </Wrapper>
  <Wrapper variant="standard" class="py-12 space-y-24 border-t">
    <ul class="grid grid-cols-1sm:grid-cols-2 md:grid-cols-3 gap-4">
      <div
        class="bg-white ring-4 ring-base-50 border border-base-200 rounded-xl flex flex-col h-full justify-between relative overflow-hidden"
      >
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600"
          >
            Marketing
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium"
          >
            Landing pages?
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-500 font-medium">
            Hero sections, feature displays, footers, pricing pages, ready to
            grab landing pages and more to help you create standout marketing
            websites that impress and grow your audience.
          </Text>
        </div>
        <div class="-right-8 ml-8 -mb-4">
          <Image
            class="rounded-l-xl ring-4 ring-base-50 border border-base-200 shadow h-full"
            src={marketingImage}
            alt="hero images"
          />
        </div>
      </div>
      <div
        class="bg-white ring-4 ring-base-50 border border-base-200 rounded-xl flex flex-col h-full justify-between relative overflow-hidden"
      >
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600"
          >
            Application
          </Text>
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium"
          >
            Building a webapp?
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-500 font-medium">
            Find navigation, buttons, forms, command palettes, typography,
            application layouts, dialogs, and more to make your applicationâ€™s
            user interface pretty.
          </Text>
        </div>
        <div class="-right-8 ml-8 -mb-4">
          <Image
            class="rounded-l-xl ring-4 ring-base-50 border border-base-200 shadow h-full"
            src={applicationImage}
            alt="hero images"
          />
        </div>
      </div>
      <div
        class="bg-white ring-4 ring-base-50 border border-base-200 rounded-xl flex flex-col h-full justify-between relative overflow-hidden"
      >
        <div class="p-8 relative">
          <Text
            tag="p"
            variant="textXS"
            class="font-bold uppercase text-accent-600">eCommerce</Text
          >
          <Text
            tag="h3"
            variant="textLG"
            class="mt-4 text-base-900 font-medium"
          >
            Got a store?
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-500 font-medium">
            Checkout forms, shopping carts, promo sections, store fronts,
            product overviews and all the basics to build your store.
          </Text>
        </div>
        <div class="-right-8 ml-8 -mb-4">
          <Image
            class="rounded-l-xl ring-4 ring-base-50 border border-base-200 shadow h-full"
            src={ecommerceImage}
            alt="hero images"
          />
        </div>
      </div>
      {
        features.map((feature) => (
          <li class="pt-8 pr-8">
            <div class=" flex gap-3 items-center">
              {feature.icon === "Component" && (
                <Component class="text-accent-600" size="base" />
              )}

              {feature.icon === "Code" && (
                <Code class="text-accent-600" size="base" />
              )}
              {feature.icon === "Devices" && (
                <Devices class="text-accent-600" size="base" />
              )}
              {feature.icon === "Mail" && (
                <Mail class="text-accent-600" size="base" />
              )}

              {feature.icon === "Tools" && (
                <Tools class="text-accent-600" size="base" />
              )}
              {feature.icon === "LockOpen" && (
                <LockOpen class="text-accent-600" size="base" />
              )}
              {feature.icon === "LoaderTwo" && (
                <LoaderTwo class="text-accent-600" size="base" />
              )}
              {feature.icon === "Lifebuoy" && (
                <Lifebuoy class="text-accent-600" size="base" />
              )}
              {feature.icon === "Home" && (
                <Home class="text-accent-600" size="base" />
              )}
              <dt>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="text-base-900 font-medium"
                >
                  {feature.title}
                </Text>
              </dt>
            </div>
            <dd>
              <Text
                tag="p"
                variant="textBase"
                class="mt-2 text-base-500 font-medium"
              >
                {feature.description}
              </Text>
            </dd>
          </li>
        ))
      }
    </ul>
  </Wrapper>
  <Wrapper variant="standard" class="py-12 border-t">
    <Text
      tag="h3"
      variant="textXL"
      class="text-black font-medium tracking-tighter"
    >
      Get started without configuring anything
    </Text>
    <ul
      class="grid grid-cols-1 gap-6 lg:gap-12 md:grid-cols-2 lg:grid-cols-3 mt-8"
    >
      {
        started.map((started) => (
          <li>
            <div class=" flex gap-3 items-center">
              {started.icon === "Settings" && (
                <Settings class="text-accent-600" size="base" />
              )}

              {started.icon === "Accessibility" && (
                <Accessibility class="text-accent-600" size="base" />
              )}
              {started.icon === "Brain" && (
                <Brain class="text-accent-600" size="base" />
              )}

              <dt>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="text-base-900 font-medium"
                >
                  {started.title}
                </Text>
              </dt>
            </div>
            <dd>
              <Text
                tag="p"
                variant="textBase"
                class="mt-2 text-base-500 font-medium"
              >
                {started.description}
              </Text>
            </dd>
          </li>
        ))
      }
    </ul>
    <ul class="gap-4 py-12 grid grid-cols-5 lg:grid-cols-10 lg:gap-6 lg:-mx-8">
      {
        logos.map((item) => (
          <li>
            <Text
              tag="a"
              href={item.href}
              class="duration-200 hover:opacity-100"
            >
              <img
                src={`/images/oxbow/frameworks/${item.image}`}
                class="size-8 mx-auto"
                alt={item.image}
              />
            </Text>
          </li>
        ))
      }
    </ul>
  </Wrapper>
</section>
