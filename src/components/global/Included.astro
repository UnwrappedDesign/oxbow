<section
  class="scroll-mt-24"
  id="features">
  <div class="max-w-5xl 2xl:max-w-screen-xl px-8 mx-auto py-12 space-y-24">
    <section class="grid grid-cols-1 pt-10 gap-y-6 gap-8">
      <div class="border-b pb-5 sm:flex sm:items-center sm:justify-between">
        <h3 class="text-black font-medium text-3xl tracking-tighter">
          What's included
        </h3>
      </div>
      <ul
        class="grid grid-cols-1 gap-6 lg:gap-12 md:grid-cols-2 lg:grid-cols-3 mt-12">
        {
          features.map((feature) => (
            <li>
              <p class="text-base text-base-500 text-pretty">
                <strong class="font-semibold text-black">
