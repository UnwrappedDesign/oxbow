          inside.map((inside) => (
            <li>
              <img
                src={inside.img}
                class="object-bottom object-cover shadow border rounded-lg ring-4 ring-base-50 group-hover:ring-base-200 duration-300"
                alt="Left Heroes"
                width="768"
                height="400"
                loading="lazy"
                decoding="async"
              />
