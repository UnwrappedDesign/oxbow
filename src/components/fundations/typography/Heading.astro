---
export interface HeadingStyle {
  classes: string; // Change property name to 'classes'
}
export interface HeadingStyles {
  [key: string]: HeadingStyle;
}
export interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6;
  variant?: string;
  class?: string;
}
const headingStyles: HeadingStyles = {
  // Display style for very large, eye-catching text (e.g., marketing headlines)
  display: {
    classes: "font-bold text-primary-900 text-4xl md:text-5xl lg:text-6xl ",
  },
  // Default heading style, often used for main headings
  default: {
    classes:
      "text-4xl font-semibold tracking-tight text-base-900 lg:text-balance ",
  },
  // Subtitle style, commonly used under main headings
  subtitle: {
    classes: "font-semibold text-gray-600 text-xl md:text-2xl lg:text-3xl",
  },
  // Section titles, used for section headers or subsections
  section: {
    classes: "font-bold text-primary-600 text-lg md:text-xl lg:text-2xl",
  },
  // Add more variants as needed
};
const { level, variant = "default", class: className = "" } = Astro.props;
const Tag = `h${level}`;
const style = headingStyles[variant] || headingStyles.default;
const combinedClasses = `${style.classes} ${className}`;
---
<Tag class:list={combinedClasses}>
  <slot />
</Tag>
