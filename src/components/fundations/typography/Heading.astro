---
export interface HeadingStyle {
  base: string;
  responsive?: string;
}

export interface HeadingStyles {
  [key: string]: HeadingStyle;
}

export interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6;
  variant?: string;
  class?: string;
}

const headingStyles: HeadingStyles = {
  default: {
    base: "font-semibold",
    responsive: "text-2xl md:text-3xl lg:text-4xl tracking-tighter",
  },
  subtitle: {
    base: "font-semibold text-gray-600",
    responsive: "text-xl md:text-2xl lg:text-3xl",
  },
  section: {
    base: "font-bold text-primary-600",
    responsive: "text-lg md:text-xl lg:text-2xl",
  },
  // Add more variants as needed
};

const { level, variant = "default", class: className = "" } = Astro.props;

const Tag = `h${level}`;

const style = headingStyles[variant] || headingStyles.default;
const combinedClasses = `${style.base} ${style.responsive || ""} ${className}`;
---

<Tag class:list={combinedClasses}>
  <slot />
</Tag>
