---
import Text from "@/components/fundations/typography/Text.astro";

const {
  class: className,
  showLink = false,
  href = "#_",
  linkText = "Download",
} = Astro.props;
---

<Text
  tag="p"
  variant="textXS"
  class={`relative font-semibold uppercase tracking-wide text-zinc-500 dark:text-zinc-400 ${className ?? ""}`}
>
  <slot />
  {
    showLink && (
      <>
        <a href={href} class="relative text-blue-500  dark:text-blue-400">
          <span class="absolute inset-0" aria-hidden="true" />
          {linkText}
        </a>
      </>
    )
  }
</Text>
