---
// Props to make the component more flexible
const {
  text = "Search projects...",
  hasKbd = false,
  kbdKey = "S",
  iconSlot, // Slot for custom icons
  additionalClasses = "",
} = Astro.props;
---

<button
  class={`flex p-2 items-center w-full text-xs text-zinc-500 duration-200 cursor-pointer select-none hover:text-stone-500 group rounded-md hover:bg-zinc-50 ${additionalClasses}`}
>
  <div class="flex items-center gap-2">
    {iconSlot ? <slot name="icon" /> : null}
    <span class="flex-auto truncate">{text}</span>
  </div>
  {
    hasKbd && (
      <span class="flex-none ml-auto text-xs font-semibold text-zinc-400">
        <kbd class="flex items-center justify-center font-semibold bg-white border rounded size-4 text-zinc-500 border-zinc-200">
          {kbdKey}
        </kbd>
      </span>
    )
  }
</button>
