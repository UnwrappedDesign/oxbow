---
const {
  variant,
  size,
  onlyIconSize,
  gap,
  class: className,
  ...rest
} = Astro.props;
// Default button
const defaultClass = [
  "text-white",
  "bg-base-900",
  "hover:bg-base-800",
  "focus:outline-base-800",
];
// Accent button
const accentClass = [
  "text-white",
  "bg-accent-600",
  "hover:bg-accent-700",
  "focus:outline-accent-600",
];
// Alternative button
const alternativeClass = [
  "text-base-500",
  "bg-white",
  "hover:text-accent-500",
  "outline-2",
  "outline-base-200",
  "focus:outline-accent-500",
];
// Muted button
const mutedClass = [
  "text-base-700",
  "bg-base-50",
  "hover:bg-white",
  "focus:outline-base-200",
];
// Text button
const textClass = [
  "text-base-500",
  "bg-white",
  "hover:text-accent-600",
  "hover:bg-base-50",
  "focus:outline-accent-500",
];
// Link button
const linkClass = [
  "text-accent-500",
  "hover:text-accent-700",
  "focus:outline-accent-500",
];
// Success button
const infoClass = [
  "text-accent-700",
  "bg-accent-600/10",
  "hover:bg-accent-600/5",
  "focus:outline-accent-600/20",
];
// Success button
const successClass = [
  "text-emerald-600",
  "bg-emerald-600/10",
  "hover:bg-emerald-600/5",
  "focus:outline-emerald-600/20",
];
// Warning button
const warningClass = [
  "text-amber-600",
  "bg-amber-600/10",
  "hover:bg-amber-600/5",
  "focus:outline-amber-600/10",
];
// Danger button
const dangerClass = [
  "text-rose-600",
  "bg-rose-600/10",
  "hover:bg-rose-600/5",
  "focus:outline-rose-600",
];
// Meeta brand button
const metaBrandClass = [
  "text-white",
  "bg-accent-500",
  "hover:bg-accent-600",
  "focus:outline-base-500/50",
];
// Meeta brand button
const appleBrandClass = [
  "text-white",
  "bg-black",
  "hover:bg-base-700",
  "focus:outline-base-500/50",
];
const chromeBrandClass = [
  "text-white",
  "bg-base-50",
  "hover:bg-base-100",
  "focus:outline-base-500/50",
];

// Size
const xs = ["h-8", "px-4", "py-2", "text-xs", "rounded-md"];
const sm = ["h-9", "px-4", "py-2", "text-sm", "rounded-md"];
const base = ["h-10", "px-6", "py-3", "text-base", "rounded-lg"];
const md = ["h-11", "px-6", "py-3", "text-base", "rounded-lg"];
const lg = ["h-12", "px-6", "py-3", "text-base", "rounded-lg"];
const xl = ["h-14", "px-6", "py-3", "text-lg", "rounded-lg"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<button
  class:list={[
    "flex",
    "transition",
    "text-center",
    "justify-center",
    "font-medium",
    "items-center",
    "duration-500",
    "ease-in-out",
    "transition-colors",
    "focus:outline-2",
    "focus:outline-offset-2",
    variant === "info" && infoClass,
    variant === "muted" && mutedClass,
    variant === "accent" && accentClass,
    variant === "default" && defaultClass,
    variant === "alternative" && alternativeClass,
    variant === "text" && textClass,
    variant === "danger" && dangerClass,
    variant === "success" && successClass,
    variant === "warning" && warningClass,
    variant === "link" && linkClass,
    variant === "meta-brand" && metaBrandClass,
    variant === "apple-brand" && appleBrandClass,
    variant === "chrome-brand" && chromeBrandClass,
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "md" && md,
    size === "lg" && lg,
    size === "xl" && xl,
    gap === "xs" && gapXS,
    gap === "sm" && gapSM,
    gap === "base" && gapBase,
    gap === "md" && gapMD,
    gap === "lg" && gapLG,
    ...additionalClasses,
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</button>
