---
const { variant, size, class: className, ...rest } = Astro.props;
// Default button
const defaultClass = [
  "text-white",
  "bg-base-900",
  "hover:bg-base-800",
  "focus:outline-base-800",
];
// Accent button
const accentClass = [
  "text-white",
  "bg-accent-600",
  "hover:bg-accent-700",
  "focus:outline-accent-600",
];
// Alternative button
const alternativeClass = [
  "text-base-500",
  "bg-white",
  "hover:text-accent-500",
  "outline-2",
  "outline-base-200",
  "focus:outline-accent-500",
];
// Muted button
const mutedClass = [
  "text-base-700",
  "bg-base-50",
  "hover:bg-white",
  "focus:outline-base-200",
];
// Text button
const textClass = [
  "text-base-500",
  "bg-white",
  "hover:text-accent-600",
  "hover:bg-base-50",
  "focus:outline-accent-500",
];
// Link button
const linkClass = [
  "text-accent-500",
  "hover:text-accent-700",
  "focus:outline-accent-500",
];
// Success button
const infoClass = [
  "text-accent-700",
  "bg-accent-600/10",
  "hover:bg-accent-600/5",
  "focus:outline-accent-600/20",
];
// Success button
const successClass = [
  "text-emerald-600",
  "bg-emerald-600/10",
  "hover:bg-emerald-600/5",
  "focus:outline-emerald-600/20",
];
// Warning button
const warningClass = [
  "text-amber-600",
  "bg-amber-600/10",
  "hover:bg-amber-600/5",
  "focus:outline-amber-600/10",
];
// Danger button
const dangerClass = [
  "text-rose-600",
  "bg-rose-600/10",
  "hover:bg-rose-600/5",
  "focus:outline-rose-600",
];
// Meeta brand button
const metaBrandClass = [
  "text-white",
  "bg-accent-500",
  "hover:bg-accent-600",
  "focus:outline-base-500/50",
];
// Meeta brand button
const appleBrandClass = [
  "text-white",
  "bg-black",
  "hover:bg-base-700",
  "focus:outline-base-500/50",
];
const chromeBrandClass = [
  "text-white",
  "bg-base-50",
  "hover:bg-base-100",
  "focus:outline-base-500/50",
];

// Updated size classes to match Button component
const xs = ["size-8", "p-0.5", "text-xs", "rounded-md"];
const sm = ["size-9", "p-2", "text-sm", "rounded-md"];
const base = ["size-10", "p-2", "text-base", "rounded-md"];
const md = ["size-11", "p-2.5", "text-base", "rounded-md"];
const lg = ["size-12", "p-3", "text-base", "rounded-lg"];
const xl = ["size-14", "p-3.5", "text-lg", "rounded-lg"];
---

<button
  class:list={[
    "flex",
    "transition",
    "text-center",
    "justify-center",
    "font-medium",
    "items-center",
    "duration-500",
    "ease-in-out",
    "transition-colors",
    "focus:outline-2",
    "focus:outline-offset-2",
    variant === "accent" && accentClass,
    variant === "default" && defaultClass,
    variant === "alternative" && alternativeClass,
    variant === "muted" && mutedClass,
    variant === "info" && infoClass,
    variant === "success" && successClass,
    variant === "warning" && warningClass,
    variant === "danger" && dangerClass,
    variant === "text" && textClass,
    variant === "link" && linkClass,
    variant === "meta-brand" && metaBrandClass,
    variant === "apple-brand" && appleBrandClass,
    variant === "chrome-brand" && chromeBrandClass,
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "md" && md,
    size === "lg" && lg,
    size === "xl" && xl,
    className,
  ]}
  {...rest}
>
  <slot />
  <slot name="icon" />
</button>
