---
const {
  gap,
  size,
  href,
  variant,
  onlyIconSize,
  class: className,
  ...rest
} = Astro.props;
// Default button
const defaultClass = [
  "text-white",
  "bg-linear-to-t",
  "from-base-900",
  "to-base-700",
  "hover:from-base-700",
  "hover:to-base-900",
  "focus:outline-base-700",
];
// Accent button
const accentClass = [
  "text-white",
  "bg-linear-to-t",
  "from-accent-700",
  "to-accent-500",
  "hover:from-accent-500",
  "hover:to-accent-700",
  "focus:outline-accent-500",
];
// Muted button
const mutedClass = [
  "text-black",
  "bg-linear-to-t",
  "from-base-200",
  "to-base-100",
  "hover:from-base-200",
  "hover:to-base-100",
  "focus:outline-accent-500",
];
// Size (only applies if variant is not "link")
const xs = ["h-8", "px-4", "py-2", "text-xs"];
const sm = ["h-9", "px-4", "py-2", "text-sm"];
const base = ["h-10", "px-6", "py-3", "text-base"];
const md = ["h-10", "px-6", "py-3", "text-base"];
const lg = ["h-12", "px-6", "py-3", "text-lg"];
const xl = ["h-14", "px-6", "py-3", "text-base"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<a
  href={href}
  class:list={[
    ...(variant === "link"
      ? [...additionalClasses]
      : [
          "flex",
          "items-center",
          "justify-center",
          "transition",
          "text-center",
          "rounded-full",
          "font-medium",
          "shadow-dimensional ",
          "items-center",
          "duration-500",
          "ease-in-out",
          "transition-colors",
          "focus:outline-2",
          "outline-offset-4",

          variant === "muted" && mutedClass,
          variant === "accent" && accentClass,
          variant === "default" && defaultClass,
          size === "xs" && xs,
          size === "sm" && sm,
          size === "base" && base,
          size === "md" && md,
          size === "lg" && lg,
          size === "xl" && xl,
          gap === "xs" && gapXS,
          gap === "sm" && gapSM,
          gap === "base" && gapBase,
          gap === "md" && gapMD,
          gap === "lg" && gapLG,
          ...additionalClasses,
        ]),
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</a>
