---
const {
  gap,
  size,
  href,
  variant,
  onlyIconSize,
  class: className,
  ...rest
} = Astro.props;
// Default button
const defaultClass = [
  "text-black",
  "bg-linear-10 from-base-100 to-base-200 ",
  "hover:bg-base-400",
  "focus:outline-base-200",
  "ring-base-200",
];
// Accent button
const accentClass = [
  "text-white",
  "bg-linear-to-r/oklch from-blue-700 to-blue-600 ",
  "focus:outline-blue-600",
  "ring-blue-600",
];
// Muted button
const mutedClass = [
  "text-white",
  "bg-linear-to-r/oklch from-base-900 to-base-950 ",
  "hover:bg-base-400",
  "focus:outline-base-900",
  "ring-base-900",
];
// Size (only applies if variant is not "link")
const xxs = ["h-7", "px-4", "py-1.5", "text-xs rounded-sm"];
const xs = ["h-8", "px-6", "py-2", "text-xs rounded-md"];
const sm = ["h-9", "px-6", "py-2", "text-sm rounded-md"];
const base = ["h-10", "px-8", "py-3", "text-base rounded-lg"];
const md = ["h-11", "px-8", "py-3", "text-md rounded-lg"];
const lg = ["h-12", "px-8", "py-3", "text-lg rounded-lg"];
const xl = ["h-14", "px-12", "py-3", "text-base rounded-xl"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<a
  href={href}
  class:list={[
    ...(variant === "link"
      ? [...additionalClasses]
      : [
          "flex",
          "relative",
          "text-center",
          "font-medium",
          "items-center",
          "shadow-button",
          "justify-center",
          "overflow-hidden",
          "border border-transparent",
          "duration-300",
          "ease-in-out",
          "transition-all",
          "outline-offset-4",
          "hover:opacity-90",
          "hover:shadow-none",
          "focus-visible:outline-none  focus:outline-2",
          "inset-shadow-xs inset-shadow-white/10 ring  active:inset-shadow-transparent",
          variant === "muted" && mutedClass,
          variant === "accent" && accentClass,
          variant === "default" && defaultClass,
          size === "xxs" && xxs,
          size === "xs" && xs,
          size === "sm" && sm,
          size === "base" && base,
          size === "md" && md,
          size === "lg" && lg,
          size === "xl" && xl,
          gap === "xs" && gapXS,
          gap === "sm" && gapSM,
          gap === "base" && gapBase,
          gap === "md" && gapMD,
          gap === "lg" && gapLG,
          ...additionalClasses,
        ]),
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</a>
