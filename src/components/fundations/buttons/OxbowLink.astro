---
const {
  gap,
  size,
  href,
  variant,
  onlyIconSize,
  class: className,
  ...rest
} = Astro.props;
// Default button
const defaultClass = [
  "text-white ",
  "bg-black",
  "hover:bg-base-700",
  "ring-black",
  "hover:ring-base-800",
];
// Accent button
const accentClass = [
  "text-white ",
  "bg-accent-600",
  "hover:bg-accent-700",
  "ring-accent-600",
  "hover:ring-accent-800",
];
// Muted button
const mutedClass = [
  "text-base-500 ",
  "bg-base-100",
  "hover:bg-accent-200",
  "ring-base-100",
  "hover:ring-accent-800",
];
// alternative button
const alternativeClass = [
  "text-black ",
  "bg-white",
  "ring-base-200",
  "hover:ring-base-300",
];
// Size (only applies if variant is not "link")
const xs = ["h-8", "px-3.5", "py-2", "text-xs"];
const sm = ["h-9", "px-4", "py-2", "text-sm"];
const base = ["h-10", "px-4", "py-3", "text-base"];
const md = ["h-11", "px-6", "py-3", "text-md"];
const lg = ["h-12", "px-6", "py-3", "text-lg"];
const xl = ["h-14", "px-6", "py-3", "text-lg"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<a
  href={href}
  class:list={[
    ...(variant === "link"
      ? [...additionalClasses] // Apply custom classes for "link" variant
      : [
          "flex",
          "text-center",
          "font-medium",
          "items-center",
          "ring rounded-full",
          "focus:z-1",
          "focus:ring-2",
          "focus:ring-inset",
          "justify-center",
          "duration-300",
          "ease-in-out",
          "transition-all",
          variant === "muted" && mutedClass,
          variant === "accent" && accentClass,
          variant === "default" && defaultClass,
          variant === "alternative" && alternativeClass,
          size === "xs" && xs,
          size === "sm" && sm,
          size === "base" && base,
          size === "md" && md,
          size === "lg" && lg,
          size === "xl" && xl,
          gap === "xs" && gapXS,
          gap === "sm" && gapSM,
          gap === "base" && gapBase,
          gap === "md" && gapMD,
          gap === "lg" && gapLG,
          ...additionalClasses,
        ]),
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</a>
