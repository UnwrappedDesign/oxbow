---
const {
  variant,
  size,
  onlyIconSize,
  gap,
  class: className,
  ...rest
} = Astro.props;
// Default link
const defaultClass = [
  "text-white",
  "bg-base-800",
  "hover:bg-base-900",
  "focus:outline-base-700",
];
// Accent button
const accentClass = [
  "text-white",
  "bg-accent-dark",
  "hover:bg-accent",
  "focus:outline-accent-dark",
];
// Muted button
const mutedClass = [
  "text-black",
  "bg-base-100",
  "hover:bg-base-200",
  "focus:outline-accent-600",
];
const alternativeClass = [
  "text-black",
  "bg-white",
  "hover:bg-base-200",
  "focus:outline-accent-600",
];
// Size (only applies if variant is not "link")
const mini = ["h-7", "px-3", "py-1.5", "text-xs"];
const xs = ["h-8", "px-4", "py-2", "text-xs"];
const sm = ["h-9", "px-6", "py-2", "text-sm"];
const base = ["h-9", "px-4", "py-2", "text-sm"];
const md = ["h-10", "px-6", "py-3", "text-base"];
const lg = ["h-12", "px-6", "py-3", "text-lg"];
const xl = ["h-14", "px-6", "py-3", "text-lg"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<button
  class:list={[
    "flex",
    "items-center",
    "justify-center",
    "rounded-full",
    "text-center",
    "font-medium",
    "duration-500",
    "ease-in-out",
    "transition-colors",
    "focus:outline-2",
    variant === "muted" && mutedClass,
    variant === "accent" && accentClass,
    variant === "default" && defaultClass,
    variant === "alternative" && alternativeClass,
    size === "mini" && mini,
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "neutral" && gapBase,
    size === "md" && md,
    size === "lg" && lg,
    size === "xl" && xl,
    gap === "xs" && gapXS,
    gap === "sm" && gapSM,
    gap === "base" && base,
    gap === "md" && gapMD,
    gap === "lg" && gapLG,
    ...additionalClasses,
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</button>
