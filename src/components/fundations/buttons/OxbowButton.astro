---
const {
  variant,
  size,
  onlyIconSize,
  gap,
  class: className,
  ...rest
} = Astro.props;
// Default link
const defaultClass = [
  "text-white",
  "bg-base-800",
  "hover:bg-base-900",
  "focus:outline-base-700",
  // Dark
  "dark:text-black",
  "dark:bg-white",
  "dark:hover:bg-base-200",
  "dark:focus:outline-base-500",
];
// Accent button
const accentClass = [
  "text-white",
  "bg-accent-600",
  "hover:bg-accent-700",
  "focus:outline-accent-500",
];
// Muted button
const mutedClass = [
  "text-black",
  "bg-white",
  "hover:bg-base-200",
  "focus:outline-base-300",
  // Dark
  "dark:text-white",
  "dark:bg-black",
  "dark:hover:bg-base-900",
  "dark:focus:outline-base-800",
];
const alternativeClass = [
  "text-black",
  "bg-base-50",
  "hover:bg-base-100",
  "focus:outline-base-200",
  // Dark
  "dark:text-white",
  "dark:bg-base-800",
  "dark:hover:bg-base-900",
  "dark:focus:outline-base-900",
];
// Size (only applies if variant is not "link")
const xxs = ["h-6", "px-3", "py-1", "text-[0.69rem]", "rounded-sm"];
const xs = ["h-7.5", "px-6", "py-2", "text-xs rounded-md"];
const sm = ["h-9", "px-4", "py-2", "text-sm", " rounded-md"];
const base = ["h-10", "px-6", "py-3", "text-base", " rounded-lg"];
const md = ["h-10", "px-6", "py-3", "text-base", " rounded-lg"];
const lg = ["h-12", "px-6", "py-3", "text-lg", "rounded-lg"];
const xl = ["h-14", "px-6", "py-3", "text-lg", " rounded-xl"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---
<button
  class:list={[
    "flex",
    "items-center",
    "justify-center",
    "text-center",
    "font-medium",
    "duration-500",
    "ease-in-out",
    "transition",
    "focus:outline-2",
    variant === "muted" && mutedClass,
    variant === "accent" && accentClass,
    variant === "default" && defaultClass,
    variant === "alternative" && alternativeClass,
    variant === "none" && [],
    size === "xxs" && xxs,
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "md" && md,
    size === "lg" && lg,
    size === "xl" && xl,
    gap === "xs" && gapXS,
    gap === "sm" && gapSM,
    gap === "base" && gapBase,
    gap === "md" && gapMD,
    gap === "lg" && gapLG,
    ...additionalClasses,
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</button>
