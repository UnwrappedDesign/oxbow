---
const {
  variant,
  size,
  onlyIconSize,
  gap,
  class: className,
  ...rest
} = Astro.props;
// Default button
const defaultClass = [
  "text-white ",
  "shadow-base-800/30",
  "inset-shadow-white/30",
  "text-shadow-base-700",
  "ring-base-700",
  "bg-linear-to-b from-base-700 to-base-800 to-70%",
  "focus:outline-base-700",
  // Dark
  "dark:text-base-950 ",
  "dark:shadow-base-500/40",
  "dark:inset-shadow-base-700/20",
  "dark:text-shadow-base-200",
  "dark:ring-base-200",
  "dark:bg-linear-to-b dark:from-base-200 dark:to-base-300 to-70%",
  "dark:focus:outline-base-400",
];
// Accent button
const accentClass = [
  "text-white ",
  "shadow-accent-600/50",
  "inset-shadow-white/20",
  "text-shadow-accent-500",
  "ring-accent-600",
  "bg-linear-to-b from-accent-500 to-accent-600 to-70%",
  "focus:outline-accent-600",
];
// Muted button
const mutedClass = [
  "text-base-950 ",
  "shadow-base-500/40",
  "inset-shadow-base-700/20",
  "text-shadow-base-200",
  "ring-base-200",
  "bg-linear-to-b from-base-200 to-base-300 to-70%",
  "focus:outline-base-400",
  // Dark
  "dark:text-white ",
  "dark:shadow-base-800/30",
  "dark:inset-shadow-white/30",
  "dark:text-shadow-base-700",
  "dark:ring-base-700",
  "dark:bg-linear-to-b dark:from-base-700 dark:to-base-800 to-70%",
  "dark:focus:outline-base-700",
];
// Size (only applies if variant is not "link")
const xxs = ["h-7", "px-4", "py-1.5", "text-xs rounded-sm"];
const xs = ["h-8", "px-6", "py-2", "text-xs rounded-md"];
const sm = ["h-9", "px-6", "py-2", "text-sm rounded-md"];
const base = ["h-10", "px-8", "py-3", "text-base rounded-lg"];
const md = ["h-11", "px-8", "py-3", "text-md rounded-lg"];
const lg = ["h-12", "px-8", "py-3", "text-lg rounded-lg"];
const xl = ["h-14", "px-12", "py-3", "text-lg rounded-xl"];

// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<button
  class:list={[
    "flex",
    "relative",
    "text-center",
    "font-medium",
    "items-center",
    "!rounded-full",
    "shadow-button",
    "justify-center",
    "overflow-hidden",
    "border border-transparent",
    "duration-300",
    "ease-in-out",
    "transition-all",
    "outline-offset-4",
    "hover:opacity-90",
    "hover:shadow-none",
    "focus-visible:outline-none  focus:outline-2",
    "inset-shadow-xs inset-shadow-white/10 ring  active:inset-shadow-transparent",
    variant === "default" && defaultClass,
    variant === "accent" && accentClass,
    variant === "muted" && mutedClass,
    variant === "none" && [],
    size === "xxs" && xxs,
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "md" && md,
    size === "lg" && lg,
    size === "xl" && xl,
    gap === "xs" && gapXS,
    gap === "sm" && gapSM,
    gap === "base" && gapBase,
    gap === "md" && gapMD,
    gap === "lg" && gapLG,
    ...additionalClasses,
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</button>
