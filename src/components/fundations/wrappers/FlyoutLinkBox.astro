---
// FlyoutLink.astro
import Heading from "@/components/fundations/typography/Heading.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Link from "@/components/fundations/typography/Link.astro";
import Badge from "../badges/Badge.astro";
const { href, icon: Icon, title, description, badge } = Astro.props;
---

<Link
  href={href}
  tag="a"
  class="group gap-x-6"
  variant="thickFlyoutLink">
  <div
    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
    <Icon
      size="base"
      slot="left-icon"
    />
  </div>
  <div>
    <Heading
      class="flex items-center gap-2"
      level={3}
      variant="featureTitleSmall">
      {title}
      {
        badge && (
          <Badge
            variant="info"
            size="xs">
            {badge}
          </Badge>
        )
      }
    </Heading>
    <Text
      tag="p"
      variant="small">
      {description}
    </Text>
  </div>
</Link>
