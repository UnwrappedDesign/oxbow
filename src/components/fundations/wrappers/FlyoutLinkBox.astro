---
// FlyoutLink.astro

import Text from "@/components/fundations/typography/Text.astro";

import Badge from "../badges/Badge.astro";
const { href, icon: Icon, title, description, badge } = Astro.props;
---

<Text
  href={href}
  tag="a"
  variant="textSM"
  class="flex items-center w-full gap-2 group relative p-4 rounded-xl group hover:bg-base-50">
  <div
    class="flex items-center justify-center flex-none mt-1 duration-300 rounded-full size-11 bg-base-50 group-hover:bg-white">
    <Icon
      size="base"
      slot="left-icon"
      class="group-hover:text-accent-500"
    />
  </div>
  <div>
    <Text
      tag="h3"
      variant="textBase"
      class="text-base-900 font-medium group-hover:text-accent-500 flex items-center w-full gap-2">
      {title}
      {
        badge && (
          <Badge
            variant="info"
            size="xs">
            {badge}
          </Badge>
        )
      }
    </Text>
    <Text
      tag="h3"
      variant="textSM"
      class="text-base-500 font-medium">
      {description}
    </Text>
  </div>
</Text>
